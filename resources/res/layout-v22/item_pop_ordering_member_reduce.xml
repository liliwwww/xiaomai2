<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:background="@drawable/common_corner_9_white_card_bg"
    android:paddingLeft="9dp"
    android:paddingTop="9dp"
    android:paddingRight="9dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="9dp"
    android:layout_marginHorizontal="12dp"
    android:paddingHorizontal="9dp"
    android:paddingVertical="9dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/ordering_pop_member_reduce_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/color_tpp_primary_main_title"
        android:id="@+id/ordering_pop_member_reduce_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/ordering_pop_member_reduce_item_icon"
        app:layout_constraintLeft_toRightOf="@+id/ordering_pop_member_reduce_item_icon"
        app:layout_constraintTop_toTopOf="@+id/ordering_pop_member_reduce_item_icon"/>
    <LinearLayout
        android:textSize="12dp"
        android:orientation="vertical"
        android:id="@+id/ordering_pop_member_reduce_item_des_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ordering_pop_member_reduce_item_check"
        app:layout_constraintTop_toBottomOf="@+id/ordering_pop_member_reduce_item_title"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="21dp"
        android:textColor="@color/color_tpp_primary_gray_c8"
        android:gravity="center"
        android:id="@+id/ordering_pop_member_reduce_item_check"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_font_selected_no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
