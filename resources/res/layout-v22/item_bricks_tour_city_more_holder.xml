<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/city_card_rl"
    android:background="@drawable/bricks_bg_project_search_tour_gray"
    android:paddingLeft="8dp"
    android:paddingTop="@dimen/margin_6dp"
    android:paddingRight="8dp"
    android:paddingBottom="@dimen/margin_6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp"
        android:textColor="@color/color_8896b1"
        android:id="@+id/city_card_city_add_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2dp"
        android:layout_marginRight="@dimen/margin_2dp"
        android:text="@string/iconfont_jiahao24"
        android:layout_marginHorizontal="@dimen/margin_2dp"/>
    <TextView
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#959aa5"
        android:id="@+id/city_card_time_line_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/margin_2dp"
        android:layout_marginHorizontal="@dimen/margin_2dp"/>
</LinearLayout>
