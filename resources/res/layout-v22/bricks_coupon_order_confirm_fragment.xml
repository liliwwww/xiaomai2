<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f6f7f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/irc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/order_render_bottom"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_price_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:text="¥"
            android:textFontWeight="500"/>
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="20dp"
            android:textColor="@color/color_price_font"
            android:id="@+id/bottom_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/bottom_price_detail_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:text="明细"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/bottom_price_down_arrow"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:layout_width="26dp"
            android:layout_height="7dp"
            android:src="@drawable/bricks_up_arrow"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/bottom_submit_order"
            android:background="@drawable/bricks_confirm_pay_bg"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_marginRight="12dp"
            android:text="去付款"/>
    </LinearLayout>
    <com.alibaba.pictures.bricks.orderconfirm.view.OrderConfirmDetailView
        android:id="@+id/order_detail_pop"
        android:background="#7e000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"/>
    <FrameLayout
        android:id="@+id/error_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
