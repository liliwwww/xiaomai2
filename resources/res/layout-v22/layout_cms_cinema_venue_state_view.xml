<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#f0f3f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pioneer_page_common_error"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/state_view_tip"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="页面不见啦"
            android:lineSpacingExtra="4dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#959aa5"
            android:gravity="center"
            android:id="@+id/state_view_sub_tip"
            android:paddingLeft="60dp"
            android:paddingTop="9dp"
            android:paddingRight="60dp"
            android:paddingBottom="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="别着急，试试看刷新页面~"
            android:lineSpacingExtra="4dp"
            android:paddingVertical="9dp"/>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/state_view_refresh_btn"
                android:background="@drawable/pioneer_error_btn_bg"
                android:layout_width="107.5dp"
                android:layout_height="32dp"
                android:layout_marginRight="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_2dp"
                android:text="刷新"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/state_view_report_btn"
                android:background="@drawable/bg_error_page_button"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:layout_marginBottom="@dimen/margin_2dp"
                android:text="报错"
                android:layout_toRightOf="@+id/state_view_refresh_btn"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
