<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/blank_black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_scenic_buy_ticket_pop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="@dimen/resource_size_18"
                android:textColor="@color/bricks_333333"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="@dimen/margin_15dp"
                android:maxLines="2"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="2dp"
                android:layout_marginStart="@dimen/margin_12dp"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/margin_17dp"
                android:textColor="#33000000"
                android:gravity="center"
                android:id="@+id/close"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="@string/iconfont_a_huaban2x"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:background="@color/color_F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="18dp"/>
            <cn.damai.trade.newtradeorder.ui.projectdetail.scenic.component.buy.view.ScenicBuyTicketIndicatorView
                android:id="@+id/indicator"
                android:background="@color/color_F5F5F5"
                android:paddingBottom="@dimen/margin_12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_13dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:background="@color/color_F5F5F5"
                android:paddingLeft="@dimen/margin_12dp"
                android:paddingRight="@dimen/margin_12dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/margin_12dp"/>
            <View
                android:id="@+id/view_bottom_up"
                android:background="#fff5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_reserve"
                android:background="@color/color_FEF5F9"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:paddingStart="@dimen/margin_22dp"
                android:paddingEnd="@dimen/margin_22dp">
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="@dimen/resource_size_12"
                    android:textColor="@color/color_FF4886"
                    android:gravity="center"
                    android:id="@+id/icon_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_shijian"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="@dimen/resource_size_12"
                    android:textColor="@color/color_FF4886"
                    android:id="@+id/tv_reserve_tips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_4dp"
                    android:layout_marginEnd="@dimen/margin_4dp"/>
                <LinearLayout
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:id="@+id/ll_reserve_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="@dimen/resource_size_14"
                        android:textColor="@color/color_FF4886"
                        android:id="@+id/tv_reserve_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4dp"/>
                    <TextView
                        android:textSize="@dimen/resource_size_10"
                        android:textColor="@color/color_FF4886"
                        android:id="@+id/tv_reserve_day_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_2dp"
                        android:layout_marginRight="@dimen/margin_2dp"
                        android:layout_marginHorizontal="@dimen/margin_2dp"/>
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="@dimen/resource_size_14"
                        android:textColor="@color/color_FF4886"
                        android:id="@+id/tv_reserve_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="@dimen/resource_size_14"
                        android:textColor="@color/color_FF4886"
                        android:id="@+id/tv_reserve_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="@dimen/resource_size_14"
                        android:textColor="@color/color_FF4886"
                        android:id="@+id/tv_reserve_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_buy_ticket"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="21dp"
                android:paddingEnd="21dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_18dp"
                    android:layout_alignParentStart="true">
                    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                        android:textSize="@dimen/resource_size_10"
                        android:textColor="@color/color_FF3299"
                        android:id="@+id/tv_price_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"/>
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="@dimen/resource_size_18"
                        android:textColor="@color/color_FF3299"
                        android:id="@+id/tv_price_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"/>
                    <TextView
                        android:textSize="@dimen/resource_size_12"
                        android:textColor="@color/bricks_333333"
                        android:id="@+id/tv_price_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_2dp"/>
                </LinearLayout>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="@dimen/resource_size_16"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_buy_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="59dp"
                    android:paddingEnd="59dp"/>
            </RelativeLayout>
            <View
                android:layout_gravity="bottom"
                android:id="@+id/view_bottom_down"
                android:background="#fff5f5f5"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="54dp"/>
    </LinearLayout>
</LinearLayout>
