<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_9dp"
    android:layout_marginRight="@dimen/margin_9dp"
    android:layout_marginHorizontal="@dimen/margin_9dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:contentPadding="0dp">
    <RelativeLayout
        android:background="?attr/bgDetailMidGrabBg"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/goto_setinfo_desc"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goto_setinfo_imgtitle"
                android:layout_width="73dp"
                android:layout_height="16dp"
                android:src="@drawable/project_mid_grab_title"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_FF2869"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/goto_setinfo_tv1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="请重新设置本次抢票观演人"
                android:lines="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_2E333E"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/goto_setinfo_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="开抢前第一时间提醒你~"
                android:lines="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/goto_setinfo_btn"
            android:background="?attr/bgDetailMidGrabBtn"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="12dp"
                android:textColor="?attr/bgDetailColorWhite171717"
                android:id="@+id/goto_setinfo_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
