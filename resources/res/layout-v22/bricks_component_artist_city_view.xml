<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/artist_future_padding_top"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/want_card_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginHorizontal="@dimen/margin_12dp">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/artist_future_title_tag"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:includeFontPadding="false"
            android:paddingHorizontal="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/artist_future_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/artist_future_title"/>
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/bricks_2e333e"
            android:ellipsize="end"
            android:id="@+id/artist_future_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toStartOf="@+id/artist_future_want_count_tv"
            app:layout_constraintStart_toEndOf="@+id/artist_future_title_tag"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.alibaba.pictures.bricks.view.QuickUpNumTextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#fe942a"
            android:layout_gravity="center_vertical"
            android:id="@+id/artist_future_want_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintBaseline_toBaselineOf="@+id/artist_future_want_count_desc_tv"
            app:layout_constraintEnd_toStartOf="@+id/artist_future_want_count_desc_tv"/>
        <TextView
            android:textSize="12dp"
            android:id="@+id/artist_future_want_count_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/artist_future_title"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/notice_card_container"
        android:background="@drawable/bricks_bg_artist_tag_gray_corner_896b1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginHorizontal="@dimen/margin_12dp">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/artist_future_want_tag"
            android:paddingLeft="4dp"
            android:paddingTop="@dimen/dim_1"
            android:paddingRight="4dp"
            android:paddingBottom="@dimen/dim_1"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginVertical="2dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="@dimen/dim_1"/>
        <com.alibaba.pictures.bricks.view.ArtistRichTextView
            android:id="@+id/artist_future_want_rich_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="12dp"
            android:id="@+id/artist_future_want_count_desc_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_tixing16"
            android:layout_marginEnd="@dimen/margin_12dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/success_container"
        android:visibility="gone"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_marginHorizontal="@dimen/margin_12dp">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:clipChildren="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/success_image_desc"
            app:layout_constraintEnd_toEndOf="@+id/success_image_desc"
            app:layout_constraintStart_toStartOf="@+id/success_image_desc"
            app:layout_constraintTop_toTopOf="@+id/success_image_desc">
            <View
                android:id="@+id/success_container_bg"
                android:background="@drawable/wish_success_city_notice_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/success_image_desc"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/bricks_5f6672"
            android:ellipsize="end"
            android:id="@+id/success_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/margin_4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/artist_future_padding_bottom"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artist_future_city_rl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginEnd="5.5dp"
        app:layoutManager="GridLayoutManager"
        app:spanCount="4"/>
    <View
        android:id="@+id/artist_future_padding_recycle"
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
</LinearLayout>
