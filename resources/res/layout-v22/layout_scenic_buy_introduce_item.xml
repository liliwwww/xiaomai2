<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp">
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="@dimen/resource_size_15"
        android:textColor="@color/bricks_2e333e"
        android:id="@+id/tv_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_9dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:text="产品介绍"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.BricksStrokeLinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_highlight"
            android:paddingTop="@dimen/margin_13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_9dp"
            app:sl_corners_radius="6dp"
            app:sl_stroke_color="?attr/iconNumBgBorder"
            app:sl_stroke_width="1px"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/resource_size_10"
        android:textColor="@color/color_9c9ca5"
        android:id="@+id/tv_service_info"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:layout_marginHorizontal="@dimen/margin_24dp"/>
</LinearLayout>
