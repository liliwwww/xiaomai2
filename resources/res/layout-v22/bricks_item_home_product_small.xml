<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="64dp"
    android:layout_height="66dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/bricks_id_product_price_pic"
        android:layout_width="49dp"
        android:layout_height="66dp"
        app:failureImage="@drawable/bricks_default_image_bg_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:placeholderImage="@drawable/bricks_default_image_bg_gradient"
        app:roundedCornerRadius="3dp"/>
    <TextView
        android:textSize="9dp"
        android:textColor="@color/bricks_white"
        android:ellipsize="end"
        android:id="@+id/bricks_id_product_price_tag"
        android:background="@drawable/bg_card_dark_corner_3"
        android:paddingLeft="1.5dp"
        android:paddingTop="1dp"
        android:paddingRight="1.5dp"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxWidth="43dp"
        android:maxLines="1"
        android:layout_marginEnd="2.5dp"
        android:paddingHorizontal="1.5dp"
        android:paddingVertical="1dp"
        app:layout_constraintEnd_toEndOf="@+id/bricks_id_product_price_pic"
        app:layout_constraintTop_toTopOf="@+id/bricks_id_product_price_pic"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:orientation="horizontal"
        android:id="@+id/bricks_id_product_price_bg"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:scaleType="fitXY"
        app:failureImage="@drawable/bg_price_discount_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:placeholderImage="@drawable/bg_price_discount_bg"/>
    <TextView
        android:textSize="7dp"
        android:textColor="@color/bricks_white"
        android:id="@+id/bricks_id_product_price_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        app:layout_constraintBaseline_toBaselineOf="@+id/bricks_id_product_price"
        app:layout_constraintEnd_toStartOf="@+id/bricks_id_product_price"/>
    <com.alibaba.pictures.bricks.view.DigitTextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/bricks_white"
        android:ellipsize="end"
        android:id="@+id/bricks_id_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="49dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/bricks_id_product_price_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bricks_id_product_price_bg"/>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/bricks_white"
        android:id="@+id/bricks_id_product_price_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起"
        app:layout_constraintBaseline_toBaselineOf="@+id/bricks_id_product_price"
        app:layout_constraintStart_toEndOf="@+id/bricks_id_product_price"/>
</androidx.constraintlayout.widget.ConstraintLayout>
