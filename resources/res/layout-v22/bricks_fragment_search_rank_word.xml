<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/search_v2_history_word_title_bg"
                    android:background="@drawable/bg_pioneer_search_top_gradient_fold"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/search_v2_history_word_ui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:gravity="center_vertical"
                            android:id="@+id/search_v2_history_word_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp">
                            <TextView
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="搜索历史"/>
                            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                                android:textSize="20dp"
                                android:textColor="#4f5a6e"
                                android:gravity="center_vertical"
                                android:id="@+id/search_v2_history_clear"
                                android:paddingLeft="@dimen/margin_15dp"
                                android:paddingRight="@dimen/margin_15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/iconfont_user_delete"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/search_v2_history_layout_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <cn.damai.uikit.copy.view.ExpandFlowLayout
                                android:id="@+id/search_v2_history_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"/>
                            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                                android:textSize="23dp"
                                android:textColor="#4f5a6e"
                                android:gravity="center_vertical"
                                android:id="@+id/pioneer_search_v2_history_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14.5dp"
                                android:text="@string/iconfont_user_delete"
                                android:paddingEnd="21dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/search_v2_iconList"
                        android:background="@drawable/bg_pioneer_search_icon_list_corner"
                        android:paddingTop="8dp"
                        android:paddingBottom="10dp"
                        android:visibility="gone"
                        android:clipChildren="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginHorizontal="12dp"/>
                    <com.alibaba.pictures.bricks.search.v2.view.SearchHotListView
                        android:id="@+id/search_v2_hot_word_ui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
