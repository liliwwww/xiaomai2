<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/community_aiyi_head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/community_aiyi_head_img"
        android:background="@color/community_aiyi_head_bg"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:scaleType="matrix"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/community_aiyi_head_img"
        app:layout_constraintRight_toRightOf="parent">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/tv_action"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"/>
        <TextView
            android:textSize="9dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="top|right"
            android:id="@+id/tv_action_tag"
            android:paddingLeft="4.5dp"
            android:paddingRight="4.5dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:maxLines="1"
            android:paddingHorizontal="4.5dp"/>
    </FrameLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_70_white"
        android:ellipsize="end"
        android:id="@+id/person_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="27dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/community_aiyi_head_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginRight="82dp"/>
    <include
        android:id="@+id/layout_aiyi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/person_num_text"
        app:layout_constraintLeft_toLeftOf="@+id/person_num_text"
        layout="@layout/layout_aiyi_title"/>
    <FrameLayout
        android:id="@+id/layout_card_festival"
        android:paddingBottom="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/community_aiyi_head_img">
        <View
            android:id="@+id/overlay_gradient"
            android:layout_width="match_parent"
            android:layout_height="182dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_top_festival"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="#f2f2f2"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/img_top_card_festival"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <View
                android:id="@+id/overlay_top_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/tv_top_card_festival_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_top_card_open_close_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_top_card_festival_title"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_top_card_festival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@+id/tv_top_card_open_close_time"/>
                <View
                    android:id="@+id/overlay_top_card_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <View
                    android:id="@+id/overlay_top_card_click"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/layout_card_bottom_time"
                    android:paddingBottom="22dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_top_card_remaining_time_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"/>
                    <TextView
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tv_top_card_remaining_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_top_card_remaining_time_suffix"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:alpha="0.8"/>
                    <TextView
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tv_top_card_raiders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"/>
                    <TextView
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_font_arrow_right"
                        app:fontFamily="@font/icon_font"/>
                </LinearLayout>
                <TextView
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_card_buy_tickets"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:text="立即抢票"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
