<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="9dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/film_surrounding_cd"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:cardBackgroundColor="#1a000000"
        app:cardCornerRadius="@dimen/margin_9dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/film_surrounding_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="centerCrop"
            app:failureImage="@drawable/surrounding_image_default"
            app:failureImageScaleType="fitXY"
            app:placeholderImage="@drawable/surrounding_image_default"
            app:placeholderImageScaleType="fitXY"
            app:roundedCornerRadius="@dimen/margin_9dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/film_surrounding_title_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="9dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/film_surrounding_action"
        app:layout_constraintStart_toEndOf="@+id/film_surrounding_cd"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/font_Body_M"
            android:textStyle="bold"
            android:textColor="@color/cg_1"
            android:ellipsize="end"
            android:id="@+id/film_surrounding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_4dp"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/film_surrounding_title_tag"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/bricks_FFA608"
            android:ellipsize="end"
            android:id="@+id/film_surrounding_title_tag"
            android:paddingLeft="@dimen/margin_2dp"
            android:paddingTop="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_2dp"
            android:paddingBottom="@dimen/margin_1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:includeFontPadding="true"
            android:paddingHorizontal="@dimen/margin_2dp"
            android:paddingVertical="@dimen/margin_1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/film_surrounding_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="@dimen/font_Subhead2_M"
        android:textColor="@color/cg_3"
        android:ellipsize="end"
        android:id="@+id/film_surrounding_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_9dp"
        android:layout_marginTop="@dimen/dim_2"
        android:layout_marginRight="@dimen/margin_6dp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/film_surrounding_action"
        app:layout_constraintStart_toEndOf="@+id/film_surrounding_cd"
        app:layout_constraintTop_toBottomOf="@+id/film_surrounding_title_layout"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="@dimen/font_Subhead2_M"
        android:textColor="#181818"
        android:gravity="center_vertical"
        android:id="@+id/film_surrounding_action"
        android:background="@drawable/item_merch_bg_selector"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingRight="@dimen/margin_12dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_28dp"
        android:paddingHorizontal="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</merge>
