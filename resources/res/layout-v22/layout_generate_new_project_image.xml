<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/share_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_generate_new_project_image"
                android:paddingLeft="18dp"
                android:paddingTop="59dp"
                android:paddingRight="18dp"
                android:paddingBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <cn.damai.baseview.RCRelativeLayoutView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:round_corner_top_left="21dp"
                        app:round_corner_top_right="21dp">
                        <ImageView
                            android:id="@+id/share_page_poster"
                            android:background="@color/color_F5F5F5"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:scaleType="centerCrop"/>
                    </cn.damai.baseview.RCRelativeLayoutView>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-46dp">
                        <LinearLayout
                            android:id="@+id/share_card_type_ll"
                            android:background="@drawable/mini_card_info_tag"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:paddingVertical="4dp">
                            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                                android:textSize="14dp"
                                android:textColor="#ffffff"
                                android:id="@+id/share_card_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/share_card_bg"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp">
                            <TextView
                                android:textSize="16dp"
                                android:textColor="@color/color_ffffff"
                                android:ellipsize="end"
                                android:id="@+id/share_card_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"/>
                            <cn.damai.uikit.number.DMDigitTextView
                                android:textSize="16dp"
                                android:textColor="#e6ffffff"
                                android:ellipsize="end"
                                android:id="@+id/share_card_time"
                                android:paddingTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"/>
                            <TextView
                                android:textSize="12dp"
                                android:textColor="#a6ffffff"
                                android:ellipsize="end"
                                android:id="@+id/share_card_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"/>
                        </LinearLayout>
                    </FrameLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <cn.damai.baseview.RCRelativeLayoutView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:round_corner="5dp">
                            <View
                                android:background="@color/color_ffffff"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/share_page_qrcode_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"/>
                        </cn.damai.baseview.RCRelativeLayoutView>
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/share_page_damai_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/generate_dm_icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:textSize="12dp"
                            android:textColor="#ccffffff"
                            android:id="@+id/share_page_qrcode_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="长按扫码，查看详情"
                            android:maxLines="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/share_page_damai_logo"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:id="@+id/share_page_bottom"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>
