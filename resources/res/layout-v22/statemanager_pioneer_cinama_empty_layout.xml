<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:paddingBottom="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statemanager_top_holder"
        android:layout_width="match_parent"
        android:layout_height="105dp"/>
    <ImageView
        android:id="@+id/statemanager_img"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/statemanager_img_pioneer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="21dp"
        android:src="@drawable/cinema_no_data_with_filter"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="14dp"
        android:textColor="@color/bricks_2e333e"
        android:gravity="center"
        android:id="@+id/statemanager_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text=""
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/bricks_959AA5"
        android:id="@+id/statemanager_subhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:text=""
        android:includeFontPadding="false"
        android:layout_marginHorizontal="2dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="107.5dp"
            android:layout_height="32dp"
            android:layout_marginTop="9dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">
            <View
                android:background="@drawable/pioneer_buy_button_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/statemanager_button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""/>
            <Button
                android:textColor="@color/transparent"
                android:layout_gravity="center"
                android:id="@+id/statemanager_button"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/statemanager_right_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            style="?attr/statemanager_button_style"/>
    </LinearLayout>
</LinearLayout>
