<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/pay_result_ll"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/pay_result_score_info"
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/pay_result_score_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-1dp"
            android:scaleType="fitXY"
            app:roundBottomLeft="true"
            app:roundBottomRight="true"
            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundedCornerRadius="9dp"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/pay_result_score_bg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:gravity="center"
                    android:id="@+id/pay_result_score_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:failureImage="@drawable/score_icon"
                    app:placeholderImage="@drawable/score_icon"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#db7044"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/pay_result_score_icon_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:lineSpacingMultiplier="0.9"/>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/margin_15dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:ellipsize="end"
                    android:id="@+id/tv_score_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜你购票获得80积分"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/color_999999"
                    android:ellipsize="end"
                    android:id="@+id/tv_score_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:text="积分可免费兑换代金券哦~"
                    android:singleLine="true"
                    android:layout_below="@+id/tv_score_title"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textStyle="bold"
                android:textColor="#582331"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_score_btn"
                android:background="@drawable/bg_score_btn"
                android:layout_width="66dp"
                android:layout_height="27dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6.5dp"
                android:layout_marginRight="12dp"
                android:text="去看看"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/pay_result_line"
        android:background="@drawable/pay_result_score_and_rights_dashline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginHorizontal="12dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/pay_result_rights_info"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textStyle="bold"
            android:textColor="@color/color_bricks_primary_main_title"
            android:id="@+id/pay_result_rights_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#969aa4"
            android:id="@+id/pay_result_rights_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#969aa4"
            android:id="@+id/pay_result_rights_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部权益"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="12dp"
            android:textColor="#969aa4"
            android:id="@+id/pay_result_rights_all_iconf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/pay_result_rights_list_two_ll"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="12dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pay_result_rights_one"
            android:background="@drawable/pay_result_rights_bg"
            android:paddingLeft="6dp"
            android:paddingTop="9dp"
            android:paddingRight="6dp"
            android:paddingBottom="9dp"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:paddingHorizontal="6dp"
            android:paddingVertical="9dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/pay_result_rights_one_img"
                android:layout_width="66dp"
                android:layout_height="54dp"
                app:actualImageScaleType="centerCrop"
                app:roundBottomLeft="true"
                app:roundBottomRight="true"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundedCornerRadius="4dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp">
                <TextView
                    android:textSize="11dp"
                    android:textColor="#582331"
                    android:ellipsize="end"
                    android:id="@+id/pay_result_rights_one_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:includeFontPadding="false"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="#582331"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/pay_result_rights_one_btn"
                        android:background="@drawable/pay_result_rights_exchange_btn_bg"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:maxWidth="76dp"
                        android:maxLines="1"
                        android:paddingHorizontal="6dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pay_result_rights_two"
            android:background="@drawable/pay_result_rights_bg"
            android:paddingLeft="6dp"
            android:paddingTop="9dp"
            android:paddingRight="6dp"
            android:paddingBottom="9dp"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:paddingHorizontal="6dp"
            android:paddingVertical="9dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/pay_result_rights_two_img"
                android:layout_width="66dp"
                android:layout_height="54dp"
                app:actualImageScaleType="centerCrop"
                app:roundBottomLeft="true"
                app:roundBottomRight="true"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundedCornerRadius="4dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp">
                <TextView
                    android:textSize="11dp"
                    android:textColor="#582331"
                    android:ellipsize="end"
                    android:id="@+id/pay_result_rights_two_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:includeFontPadding="false"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="#582331"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/pay_result_rights_two_btn"
                        android:background="@drawable/pay_result_rights_exchange_btn_bg"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:maxWidth="76dp"
                        android:maxLines="1"
                        android:paddingHorizontal="6dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/pay_result_rights_list_one_ll"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="12dp">
        <com.google.android.flexbox.FlexboxLayout
            android:orientation="horizontal"
            android:id="@+id/pay_result_rights_only_one"
            android:background="@drawable/pay_result_rights_bg"
            android:paddingLeft="6dp"
            android:paddingTop="9dp"
            android:paddingRight="6dp"
            android:paddingBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="9dp"
            app:alignItems="center">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/pay_result_rights_only_one_img"
                android:layout_width="66dp"
                android:layout_height="54dp"
                app:actualImageScaleType="centerCrop"
                app:layout_flexShrink="0"
                app:roundBottomLeft="true"
                app:roundBottomRight="true"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundedCornerRadius="4dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#582331"
                android:ellipsize="end"
                android:id="@+id/pay_result_rights_only_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:maxLines="2"
                android:includeFontPadding="false"
                app:layout_flexGrow="1"/>
            <TextView
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="#582331"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/pay_result_rights_only_one_btn"
                android:background="@drawable/pay_result_rights_exchange_one_btn_bg"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="82dp"
                android:layout_height="27dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="9dp"
                android:maxLines="1"
                android:paddingHorizontal="9dp"
                app:layout_flexShrink="0"/>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
</LinearLayout>
