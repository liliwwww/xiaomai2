<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/channel_card_grab_view_bg"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/dm_project_broadcast_coming_title_block"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:paddingStart="@dimen/margin_12dp"
        android:paddingEnd="@dimen/margin_12dp">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="16dp"
            android:textColor="@color/color_pioneer_primary_black"
            android:layout_gravity="center_vertical"
            android:id="@+id/dm_project_broadcast_coming_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="top"
            android:id="@+id/bricks_hotrecommend_title_flash"
            android:layout_width="19.5dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/pioneer_hotrecommend_title_flash"
            android:layout_marginHorizontal="2dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/dm_project_broadcast_coming_title_right_block"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_171717"
                android:id="@+id/dm_project_broadcast_coming_title_right_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:includeFontPadding="false"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="14dp"
                android:textColor="@color/color_bricks_primary_white"
                android:gravity="center"
                android:background="@drawable/pioneer_right_arrow_bg_r4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/iconfont_changbingjiantou"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dc_root"
        android:paddingTop="3dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dm_project_broadcast_coming_title_block"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_movie_layout"
            android:layout_width="76dp"
            android:layout_height="101dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">
            <com.alibaba.pictures.bricks.view.DMPosterView
                android:id="@+id/dc_project_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="9dp"
                android:textColor="@color/white"
                android:layout_gravity="start|top"
                android:id="@+id/dc_project_poster_tv"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:paddingHorizontal="3dp"
                android:paddingVertical="1dp"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:minHeight="101dp">
            <FrameLayout
                android:id="@+id/lottie_want_see_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:layout_alignParentEnd="true">
                <com.alibaba.pictures.bricks.view.DMWantLottieAnimtionView
                    android:id="@+id/lottie_want_see"
                    android:layout_width="25dp"
                    android:layout_height="22dp"/>
                <ImageView
                    android:id="@+id/broadcast_block_want_see_iv"
                    android:visibility="gone"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/icon_block_want_gray"
                    android:scaleType="centerInside"/>
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dc_project_title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/lottie_want_see_fl">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="15dp"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/dc_project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:background="@drawable/bg_pioneer_transparent_mask"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/dc_project_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dc_project_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/layout_ipvuv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dc_project_title_container">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="14dp"
                    android:textColor="@color/bricks_171717"
                    android:ellipsize="end"
                    android:id="@+id/dc_project_score_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_171717"
                    android:ellipsize="end"
                    android:id="@+id/dc_project_score_num_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:lines="1"
                    android:layout_alignBaseline="@+id/dc_project_score_num"
                    android:layout_toEndOf="@+id/dc_project_score_num"/>
                <View
                    android:id="@+id/dc_project_partition"
                    android:background="#e9ebef"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="@dimen/margin_6dp"
                    android:layout_marginRight="@dimen/margin_6dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/dc_project_score_num_suffix"
                    android:layout_marginHorizontal="@dimen/margin_6dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_171717"
                    android:ellipsize="end"
                    android:id="@+id/dc_project_ipuv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_alignBaseline="@+id/dc_project_score_num"
                    android:layout_toEndOf="@+id/dc_project_partition"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_171717"
                    android:ellipsize="end"
                    android:id="@+id/tv_project_ipuv_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人想看"
                    android:lines="1"
                    android:layout_alignBaseline="@+id/dc_project_score_num"
                    android:layout_toEndOf="@+id/dc_project_ipuv"/>
            </RelativeLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="#4d4d56"
                android:ellipsize="end"
                android:id="@+id/dc_project_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:lines="1"
                android:layout_below="@+id/layout_ipvuv"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#4d4d56"
                android:ellipsize="end"
                android:id="@+id/dc_project_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:lines="1"
                android:layout_below="@+id/dc_project_date"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dc_project_addr"
                android:layout_alignParentBottom="true">
                <com.alibaba.pictures.bricks.view.DMCommonPriceView
                    android:id="@+id/project_with_price_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#ff4886"
                    android:ellipsize="end"
                    android:id="@+id/project_with_price_custom_ui"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-0.5dp"
                    android:maxWidth="80dp"
                    android:text="自定义字段"
                    android:maxLines="1"/>
                <com.alibaba.pictures.bricks.view.FlowLayout
                    android:id="@+id/project_with_price_promotion"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="1.5dp"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/project_state_count_down"
        android:background="@drawable/pioneer_home_rob_ticket_left_icon_v2"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="13dp">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/bricks_171717"
            android:id="@+id/project_state_count_down_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="11dp"
            android:textColor="@color/bricks_171717"
            android:id="@+id/project_state_count_down_day_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="天"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/bricks_171717"
            android:id="@+id/project_state_count_down_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/bricks_171717"
            android:id="@+id/tv_hour_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/bricks_171717"
            android:id="@+id/project_state_count_down_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/bricks_171717"
            android:id="@+id/tv_minute_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/bricks_171717"
            android:gravity="bottom"
            android:id="@+id/project_state_count_down_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="11dp"
            android:textColor="@color/bricks_171717"
            android:gravity="bottom"
            android:id="@+id/tv_time_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后开售"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/project_state_buy"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="@color/bricks_171717"
            android:gravity="center"
            android:background="@drawable/pioneer_home_rob_ticket_left_icon_v2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="火爆热抢中"
            android:paddingStart="13dp"
            android:paddingEnd="4dp"/>
        <ImageView
            android:id="@+id/pioneer_homepage_grab_hot_title_grab_img"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/pioneer_home_rob_ticket_right_icon"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/bricks_9c9ca5"
        android:gravity="center"
        android:id="@+id/project_state_none_ticket"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="很遗憾没票了"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/pioneer_homepage_grab_hot_title_grab_img_degree"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:src="@drawable/pioneer_homepage_grabhot_project_btn_degrad"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
