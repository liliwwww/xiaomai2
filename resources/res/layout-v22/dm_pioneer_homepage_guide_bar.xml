<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/homepage_header_bar"
    android:background="@drawable/bricks_transparent_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/resource_size_45">
    <FrameLayout
        android:id="@+id/id_pioneer_home_header_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@drawable/bg_pioneer_home_guide_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/homepage_header_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/status_bar_space"
        android:paddingEnd="@dimen/resource_size_12">
        <FrameLayout
            android:paddingLeft="@dimen/resource_size_10"
            android:paddingRight="@dimen/resource_size_10"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingHorizontal="@dimen/resource_size_10">
            <ImageView
                android:id="@+id/homepage_header_side_ai_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <View
                android:layout_gravity="end"
                android:id="@+id/homepage_header_red_point"
                android:background="@drawable/bg_pioneer_home_red_point"
                android:visibility="gone"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/homepage_header_search_layout"
            android:padding="1.5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/resource_size_40">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/home_city"
                    android:paddingRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_12dp"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textColor="#171717"
                    android:id="@+id/home_city_arrow"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_xf_sanjiaojiantou_xia"/>
                <View
                    android:background="#33959aa5"
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>
                <com.alibaba.pictures.bricks.view.DMUpMarqueeView
                    android:id="@+id/homepage_header_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="@dimen/margin_4dp"/>
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="@dimen/resource_size_18"
                    android:textColor="#959aa5"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/homepage_header_scan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_a_saomaxin"
                    android:layout_marginEnd="@dimen/resource_size_12"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
