<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.pictures.bricks.view.HWRatioLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/city_card_rl"
    android:background="@drawable/bricks_bg_artist_tag_gray_corner_896b1"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:h_w_layout_ratio="1.05">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/city_card_top_tag"
            android:layout_width="14.5dp"
            android:layout_height="10dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="8dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/vip_first_buy_tag"
            android:background="@drawable/artist_vip_text_bg_pioneer"
            android:paddingLeft="@dimen/margin_2dp"
            android:paddingRight="@dimen/margin_2dp"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:scaleType="fitXY"
            android:text="优先购"
            android:includeFontPadding="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="@dimen/margin_2dp"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="14dp"
            android:textColor="@color/cg_1"
            android:ellipsize="end"
            android:id="@+id/city_card_city_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:layout_marginBottom="@dimen/margin_2dp"
            android:text="--"
            android:maxLines="1"
            android:layout_above="@+id/city_card_city_distance_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/margin_2dp"/>
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="9dp"
            android:textColor="@color/color_pioneer_primary_black"
            android:ellipsize="end"
            android:id="@+id/city_card_city_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:text="--"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/margin_2dp"/>
        <com.alibaba.pictures.bricks.view.BaseIconButton
            android:gravity="center"
            android:id="@+id/city_card_action_btn"
            android:background="@drawable/bricks_bg_artist_city_want_btn_border"
            android:clipChildren="false"
            android:layout_width="56dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_below="@+id/city_card_city_distance_tv"
            android:layout_centerHorizontal="true"/>
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="10dp"
            android:textColor="@color/cg_1"
            android:ellipsize="end"
            android:id="@+id/city_card_time_line_desc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:maxLines="1"
            android:layout_below="@+id/city_card_city_distance_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/margin_2dp"/>
        <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
            android:id="@+id/city_card_lottie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"/>
    </RelativeLayout>
</com.alibaba.pictures.bricks.view.HWRatioLayout>
