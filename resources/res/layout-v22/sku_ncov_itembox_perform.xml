<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="9dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="9dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_perform_item"
        android:background="@drawable/ncov_sku_perform_bg"
        android:paddingLeft="12dp"
        android:paddingTop="7dp"
        android:paddingRight="12dp"
        android:paddingBottom="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.damai.uikit.flowlayout.FlowLayout
                android:gravity="center_vertical"
                android:id="@+id/item_flowlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#659fee"
                    android:gravity="center"
                    android:id="@+id/holiday_tag_text"
                    android:background="@drawable/hoilday_tag_bg"
                    android:visibility="gone"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:text="班"
                    android:layout_marginEnd="@dimen/margin_5dp"/>
                <com.alibaba.pictures.bricks.view.SafeTextView
                    android:textSize="14dp"
                    android:textColor="@color/color_2E333E"
                    android:ellipsize="end"
                    android:id="@+id/item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4dp"
                    android:paddingEnd="6dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/layout_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout_xin"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    android:layout_width="24dp"
                    android:layout_height="19dp">
                    <cn.damai.uikit.view.SeeAnimateView
                        android:id="@+id/image_xin"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        app:lottie_repeatCount="0"/>
                </LinearLayout>
            </cn.damai.uikit.flowlayout.FlowLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/layout_tag_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <cn.damai.commonbusiness.seatbiz.sku.qilin.ui.view.PromotionTagView
        android:layout_gravity="end"
        android:id="@+id/layout_tag_righttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/ll_perform_item"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/bricks_9c9ca5"
        android:id="@+id/perform_des"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingEnd="30dp"
        android:lineHeight="@dimen/margin_18dp"
        app:layout_constraintStart_toStartOf="@+id/ll_perform_item"
        app:layout_constraintTop_toBottomOf="@+id/ll_perform_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>
