<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_bricks_artist_infoview"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_bricks_artist_head_layout_container"
        android:paddingBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_artist_card_head_pic_blur"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.alibaba.pictures.bricks.view.BricksHWRatioLayout
            android:layout_gravity="center"
            android:id="@+id/id_bricks_artist_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bricks_h_w_layout_ratio="0.5"
            app:bricks_h_w_max_height="425dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/id_bricks_artist_head_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/id_bricks_artist_head_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.alibaba.pictures.bricks.view.BricksHWRatioLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_bricks_artist_bottom_layout"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_bricks_artist_head_layout_container">
        <View
            android:background="@drawable/bricks_artist_head_shape_mask"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/id_bricks_artist_info_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:src="@color/white"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="@dimen/margin_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/id_bricks_artist_name_container"/>
        <View
            android:id="@+id/id_bricks_artist_info_divider"
            android:background="#f0f3f7"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_marginBottom="35dp"
            android:layout_marginHorizontal="@dimen/margin_12dp"
            app:layout_constraintBottom_toBottomOf="@+id/id_bricks_artist_info_container"
            app:layout_constraintEnd_toEndOf="@+id/id_bricks_artist_info_container"
            app:layout_constraintStart_toStartOf="@+id/id_bricks_artist_info_container"/>
        <com.alibaba.pictures.bricks.view.RoundRadiusImageView
            android:id="@+id/id_bricks_artist_avatar"
            android:visibility="gone"
            android:layout_width="78.85dp"
            android:layout_height="112dp"
            android:layout_marginLeft="@dimen/resource_size_12"
            android:layout_marginBottom="7dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/id_bricks_artist_info_divider"
            app:layout_constraintStart_toStartOf="@+id/id_bricks_artist_info_container"
            app:r_round_radius="6dp"
            app:r_stroke_color="#1a000000"
            app:r_stroke_width="1px"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/id_bricks_artist_name_container"
            android:paddingTop="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="5dp"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="nowrap"
            app:layout_constraintBottom_toTopOf="@+id/id_bricks_artist_fans_layout_container"
            app:layout_constraintEnd_toStartOf="@+id/id_bricks_artist_follow"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/id_bricks_artist_avatar"
            app:layout_goneMarginLeft="@dimen/margin_12dp">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="@dimen/resource_size_22"
                android:textColor="@color/bricks_2e333e"
                android:ellipsize="end"
                android:id="@+id/id_bricks_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_flexShrink="1"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textColor="@color/bricks_5f6672"
                android:gravity="center"
                android:id="@+id/artist_name_first_icon"
                android:visibility="gone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="@string/iconfont_Gengduo18"
                app:layout_flexShrink="0"/>
            <ImageView
                android:id="@+id/id_bricks_artist_vip_tag"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/bricks_combo_artist_tag_v"
                app:layout_flexShrink="0"/>
        </com.google.android.flexbox.FlexboxLayout>
        <com.alibaba.pictures.bricks.view.FollowView
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/id_bricks_artist_follow"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_marginTop="@dimen/resource_size_12"
            android:layout_marginEnd="@dimen/resource_size_12"
            app:follow_text_color="@color/bricks_9c9ca5"
            app:follow_text_size="@dimen/resource_size_12"
            app:layout_constraintBottom_toTopOf="@+id/id_bricks_artist_fans_layout_container"
            app:layout_constraintEnd_toEndOf="@+id/id_bricks_artist_info_container"
            app:layout_constraintTop_toTopOf="@+id/id_bricks_artist_name_container"
            app:layout_constraintVertical_bias="0"
            app:unfollow_text_color="@color/white"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/id_bricks_artist_fans_layout_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/id_bricks_artist_info_divider"
            app:layout_constraintEnd_toEndOf="@+id/id_bricks_artist_info_container"
            app:layout_constraintStart_toStartOf="@+id/id_bricks_artist_name_container">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/id_bricks_artist_fans_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/id_bricks_artist_divider"
                android:background="#e9ebef"
                android:layout_width="1px"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/id_bricks_artist_sell_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#959aa5"
                android:id="@+id/id_bricks_artist_fans_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/iconfont_timechange_"/>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/id_bricks_artist_descll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/id_bricks_artist_avatar"
            android:layout_marginHorizontal="@dimen/margin_12dp"
            app:layout_constraintBottom_toBottomOf="@+id/id_bricks_artist_info_container"
            app:layout_constraintEnd_toEndOf="@+id/id_bricks_artist_info_container"
            app:layout_constraintStart_toStartOf="@+id/id_bricks_artist_info_container">
            <TextView
                android:textSize="11dp"
                android:textColor="#2e333e"
                android:id="@+id/id_bricks_artist_desctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="9dp"/>
            <View
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/bg_artist_desc_title"
                android:layout_width="15dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/id_bricks_artist_descarrow"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="11dp"
                android:textColor="#181818"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/id_bricks_artist_descarrow"
                android:background="@color/white"
                android:paddingTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/id_bricks_artist_guide_layout"
        android:background="@drawable/bricks_artist_video_bg"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="9dp"
        android:layout_above="@+id/id_bricks_artist_bottom_layout"
        android:layout_marginStart="@dimen/resource_size_12">
        <ImageView
            android:id="@+id/id_bricks_artist_guide_img"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/resource_size_10"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/id_bricks_artist_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/resource_size_5"
            android:layout_marginRight="@dimen/resource_size_5"
            android:maxWidth="120dp"
            android:lines="1"/>
    </LinearLayout>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:id="@+id/artist_icon_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/iconfont_voice_off"
        android:layout_above="@+id/id_bricks_artist_bottom_layout"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
