<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/pioneer_bg_ffffff_corner_18_shape"
    android:paddingLeft="12dp"
    android:paddingTop="9dp"
    android:paddingRight="12dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="9dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="16dp"
            android:textColor="@color/color_171717"
            android:id="@+id/message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息通知"
            android:includeFontPadding="false"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_171717"
            android:id="@+id/message_count_or_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/message_count"
            android:background="@drawable/pioneer_bg_message_count"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:minWidth="13dp"
            android:includeFontPadding="false"
            android:paddingHorizontal="3dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_171717"
            android:gravity="center"
            android:id="@+id/message_count_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_xf_sanjiaojiantou_you"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.moimage.MoImageView
            android:background="@drawable/pioneer_slide_message"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="13dp"
            android:textColor="@color/color_171717"
            android:ellipsize="end"
            android:id="@+id/message_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_weight="1"/>
        <TextView
            android:textSize="11dp"
            android:textColor="#99a1b3"
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>
</LinearLayout>
