<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ip_container_ll"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/image_item3"
                android:background="@drawable/common_rank_step3_bg_v2"
                android:layout_width="76dp"
                android:layout_height="62dp"/>
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/image_item2"
                android:background="@drawable/common_rank_step2_bg_v2"
                android:layout_width="70dp"
                android:layout_height="74dp"/>
            <cn.damai.uikit.view.DMPosterView
                android:id="@+id/ip_poster"
                android:layout_width="64dp"
                android:layout_height="84dp"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="16dp"
                android:textColor="#2e333e"
                android:ellipsize="end"
                android:id="@+id/ip_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#5f6672"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/ip_tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
