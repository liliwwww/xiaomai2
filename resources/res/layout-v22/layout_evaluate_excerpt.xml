<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/resource_size_9"
    android:paddingEnd="@dimen/resource_size_9">
    <View
        android:id="@+id/container_bg"
        android:background="@drawable/bg_evaluate_excerpt_summary_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <cn.damai.uikit.view.round.RoundRelativeLayout
        android:id="@+id/content_bg"
        android:background="@drawable/bg_evaluate_excerpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/resource_size_1"
        app:rRadius="@dimen/resource_size_8">
        <ImageView
            android:id="@+id/summary_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/resource_size_16"
            android:src="@drawable/ic_evaluate_excerpt_summary_ai"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/container"
            android:paddingLeft="@dimen/resource_size_16"
            android:paddingTop="@dimen/resource_size_15"
            android:paddingRight="@dimen/resource_size_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/title_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/resource_size_9">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_evaluate_ai"/>
                <TextView
                    android:textSize="@dimen/resource_size_16"
                    android:textColor="#2e333e"
                    android:gravity="center"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剧情亮点总结"
                    android:layout_marginStart="@dimen/resource_size_4"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="14dp"
                    android:textColor="#9c9ca5"
                    android:id="@+id/tips"
                    android:paddingLeft="@dimen/resource_size_6"
                    android:paddingTop="@dimen/resource_size_5"
                    android:paddingBottom="@dimen/resource_size_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_tixingxian_"
                    android:paddingEnd="@dimen/resource_size_6"/>
            </LinearLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/resource_size_14"
                    android:textColor="#2e333e"
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/image_lay"
                    android:layout_alignParentStart="true"
                    android:lineHeight="@dimen/resource_size_20"/>
                <RelativeLayout
                    android:id="@+id/image_lay"
                    android:visibility="visible"
                    android:layout_width="@dimen/resource_size_88"
                    android:layout_height="@dimen/resource_size_88"
                    android:layout_marginStart="@dimen/resource_size_12"
                    android:layout_alignParentEnd="true">
                    <com.alibaba.pictures.moimage.MoImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        app:roundedCornerRadius="@dimen/resource_size_6"/>
                    <ImageView
                        android:id="@+id/video_icon"
                        android:visibility="gone"
                        android:layout_width="@dimen/resource_size_24"
                        android:layout_height="@dimen/resource_size_24"
                        android:src="@drawable/ic_evaluate_excerpt_video"
                        android:layout_centerInParent="true"/>
                    <RelativeLayout
                        android:id="@+id/image_count_lay"
                        android:background="@drawable/bg_excerpt_img_count"
                        android:visibility="gone"
                        android:layout_width="@dimen/resource_size_17"
                        android:layout_height="@dimen/resource_size_16"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="@dimen/resource_size_10"
                            android:textColor="#ffffff"
                            android:id="@+id/image_count"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/resource_size_48"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="@dimen/resource_size_12">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/resource_size_28"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textSize="@dimen/resource_size_11"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:id="@+id/user_prefix1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:textSize="@dimen/resource_size_11"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:id="@+id/user_prefix2"
                        android:paddingBottom="@dimen/resource_size_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/user_prefix1"/>
                    <TextView
                        android:textSize="@dimen/resource_size_11"
                        android:textColor="#666666"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/user_nickname"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/resource_size_12"
                        android:layout_toStartOf="@+id/like_lay"
                        android:layout_toEndOf="@+id/user_prefix2"/>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/like_lay"
                        android:background="@drawable/bg_evaluate_like_lay"
                        android:paddingTop="@dimen/resource_size_5"
                        android:paddingBottom="@dimen/resource_size_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/resource_size_14"
                        android:paddingEnd="@dimen/resource_size_14"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:id="@+id/like_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_evaluate_help"/>
                        <TextView
                            android:textSize="@dimen/resource_size_12"
                            android:textColor="#5f6672"
                            android:gravity="center"
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有帮助"
                            android:layout_marginStart="@dimen/resource_size_5"/>
                        <View
                            android:id="@+id/dislike_divider"
                            android:background="#959aa5"
                            android:layout_width="0.5dp"
                            android:layout_height="@dimen/resource_size_12"
                            android:layout_marginStart="@dimen/resource_size_9"
                            android:layout_marginEnd="@dimen/resource_size_9"/>
                        <ImageView
                            android:id="@+id/dis_like_icon"
                            android:layout_width="@dimen/resource_size_18"
                            android:layout_height="@dimen/resource_size_18"
                            android:src="@drawable/ic_evaluate_excerpt_dislike"/>
                        <TextView
                            android:textSize="@dimen/resource_size_12"
                            android:textColor="#ff4886"
                            android:gravity="center"
                            android:id="@+id/dislike"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无帮助"
                            android:layout_marginStart="@dimen/resource_size_5"/>
                    </LinearLayout>
                </RelativeLayout>
                <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                    android:id="@+id/like_lottie"
                    android:visibility="gone"
                    android:layout_width="@dimen/resource_size_48"
                    android:layout_height="@dimen/resource_size_48"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/resource_size_85"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </cn.damai.uikit.view.round.RoundRelativeLayout>
</FrameLayout>
