<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bricks_bg_city_select_corner_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/city_base_view"
        android:layout_width="match_parent"
        android:layout_height="550dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="14dp"
                android:textColor="#000000"
                android:id="@+id/dialog_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#5f6672"
                android:id="@+id/dialog_list_close"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:text="@string/iconfont_guanbi24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_15dp"/>
        </RelativeLayout>
        <View
            android:background="#1a000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginHorizontal="12dp"/>
        <cn.damai.uikit.irecycler.IRecyclerView
            android:id="@+id/dialog_list_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loadMoreFooterLayout="@layout/layout_irecyclerview_load_more_footer"
            app:refreshEnabled="false"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/dialog_list_empty_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_error_ticket_empty"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_9c9ca5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快来抢占沙发啦~"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/dialog_list_error_ll"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_error_ticket_limit"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#9c9ca5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络不太顺畅\10请检查网络后重试哦"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/dialog_list_error_refresh"
                android:background="@drawable/dialog_live_comment_refresh_btn"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="17dp"
                android:text="努力刷新"
                android:paddingHorizontal="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:textColorHint="@color/color_9C9CA5"
            android:gravity="center"
            android:id="@+id/dialog_list_reply"
            android:background="@drawable/content_detail_bottom_editbg"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxHeight="80dp"
            android:minHeight="30dp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="说点什么吧…"/>
    </LinearLayout>
</FrameLayout>
