<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="@drawable/bg_black_gradient_live_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="@drawable/bg_black_gradient_live_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:id="@+id/lottie_media_art_product_ip"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_marginBottom="-30dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="53dp"
        app:layout_constraintBottom_toTopOf="@+id/media_art_product_ip_item"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"/>
    <cn.damai.discover.media.ui.view.MediaArtProductIPItem
        android:id="@+id/media_art_product_ip_item"
        android:visibility="gone"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_13dp"
        app:layout_constraintBottom_toTopOf="@+id/content_user_info_layout"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/content_user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="6dp"
        android:layout_marginHorizontal="13dp"
        app:layout_constraintBottom_toTopOf="@+id/content_detail_info_layout">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="14dp"
            android:textColor="@color/color_white"
            android:id="@+id/content_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/content_user_tag"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/content_detail_info_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="80dp"
        android:paddingEnd="66dp"
        android:layout_marginHorizontal="13dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <cn.damai.discover.media.ui.LiveContentShortInfoTextView
            android:textSize="12dp"
            android:textColor="@color/color_white"
            android:id="@+id/content_detail_short_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"/>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:background="@drawable/circle_3c3c3c_bg"
        android:visibility="gone"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:text="@string/iconfont_zhankai32"
        android:layout_marginEnd="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/content_detail_info_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/content_detail_info_layout"/>
    <cn.damai.discover.media.ui.LiveCommentActionView
        android:id="@+id/content_detail_action"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
