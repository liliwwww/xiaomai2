<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="@dimen/resource_size_8"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:layout_marginLeft="@dimen/resource_size_15"
    android:layout_marginRight="@dimen/resource_size_15"
    android:layout_marginHorizontal="@dimen/resource_size_15"
    android:paddingHorizontal="10dp">
    <RelativeLayout
        android:id="@+id/id_trip_check_url_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/id_trip_check_url_pre"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ticket_trip_url_check_icon"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/ticklet_color_0091ff"
            android:gravity="center"
            android:id="@+id/id_trip_check_url_tv"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:lines="1"
            android:layout_alignTop="@+id/id_trip_check_url_pre"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/id_trip_check_url_pre"/>
    </RelativeLayout>
    <View
        android:layout_gravity="bottom"
        android:background="#734499ff"
        android:layout_width="0.5dp"
        android:layout_height="12.5dp"/>
    <RelativeLayout
        android:id="@+id/id_trip_copy_url_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/id_trip_copy_url_pre"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ticket_trip_url_copy_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/resource_size_10"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/ticklet_color_0091ff"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="复制链接"
            android:lines="1"
            android:layout_alignTop="@+id/id_trip_copy_url_pre"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/id_trip_copy_url_pre"/>
    </RelativeLayout>
</LinearLayout>
