<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/benefit_img"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="13dp"
        android:textColor="#181818"
        android:ellipsize="end"
        android:id="@+id/benefit_main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="@dimen/margin_6dp"
        app:layout_constraintEnd_toStartOf="@+id/benefit_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#181818"
        android:ellipsize="end"
        android:id="@+id/benefit_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="@dimen/margin_6dp"
        app:layout_constraintEnd_toStartOf="@+id/benefit_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/benefit_main_title"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="10dp"
        android:textColor="#181818"
        android:gravity="center"
        android:id="@+id/benefit_button_title"
        android:background="@drawable/artist_benefit_button_bg_pioneer"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="@dimen/margin_1dp"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="@dimen/margin_6dp"
        android:paddingHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/benefit_sub_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
