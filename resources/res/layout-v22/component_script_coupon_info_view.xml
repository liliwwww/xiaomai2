<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:background="@drawable/bricks_script_coupon_top_radius_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp">
        <ImageView
            android:textColor="#333333"
            android:id="@+id/script_coupon_store_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bricks_coupon_store"
            app:layout_constraintBottom_toBottomOf="@+id/script_coupon_store_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/script_coupon_store_name"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#333333"
            android:id="@+id/script_coupon_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/script_coupon_store_icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="18dp"
            android:textColor="#333333"
            android:id="@+id/script_coupon_coupon_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.5dp"
            android:maxHeight="78dp"
            android:maxLines="3"
            app:autoSizeMaxTextSize="18dp"
            app:autoSizeMinTextSize="6dp"
            app:autoSizeStepGranularity="2dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/script_coupon_price_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/script_coupon_store_name"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_price_font"
            android:gravity="bottom"
            android:id="@+id/script_coupon_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="2dp"
            android:text="¥"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toStartOf="@+id/script_coupon_price"
            app:layout_constraintStart_toEndOf="@+id/script_coupon_coupon_name"
            app:layout_constraintTop_toTopOf="@+id/script_coupon_price"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/color_price_font"
            android:gravity="top"
            android:id="@+id/script_coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/script_coupon_price_icon"
            app:layout_constraintTop_toTopOf="@+id/script_coupon_coupon_name"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#000000"
            android:id="@+id/script_coupon_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.5dp"
            android:text="服务"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/script_coupon_coupon_name"/>
        <FrameLayout
            android:id="@+id/script_coupon_service_clickll"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintEnd_toStartOf="@+id/script_coupon_service_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/script_coupon_coupon_name"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/script_coupon_service_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/script_coupon_service_more"
            app:layout_constraintStart_toEndOf="@+id/script_coupon_service_title"
            app:layout_constraintTop_toTopOf="@+id/script_coupon_service_title"/>
        <ImageView
            android:id="@+id/script_coupon_service_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bricks_coupon_right_arrow"
            android:layout_marginStart="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/script_coupon_service_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/script_coupon_service_title"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#000000"
            android:id="@+id/script_coupon_limit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.5dp"
            android:text="限购"
            app:layout_constraintEnd_toStartOf="@+id/script_coupon_limit_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/script_coupon_service_title"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#4d4d56"
            android:id="@+id/script_coupon_limit_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/script_coupon_limit_title"
            app:layout_constraintTop_toTopOf="@+id/script_coupon_limit_title"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:id="@+id/script_coupon_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/script_coupon_limit_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="#f6f7f8"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
</LinearLayout>
