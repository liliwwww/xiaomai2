<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bricks_tourism_line_bg"
    android:paddingTop="15dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.RoundImageView
            android:id="@+id/tourism_line_pic"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="12dp"
            app:borderRadius="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:type="radial"/>
        <TextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:id="@+id/tourism_line_type"
            android:background="@drawable/tourism_spots_tag_bg"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginStart="3dp"
            app:layout_constraintLeft_toLeftOf="@+id/tourism_line_pic"
            app:layout_constraintTop_toTopOf="@+id/tourism_line_pic"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:id="@+id/tourism_line_type_pioneer"
            android:background="@drawable/tourism_spots_tag_bg"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginStart="3dp"
            app:layout_constraintLeft_toLeftOf="@+id/tourism_line_pic"
            app:layout_constraintTop_toTopOf="@+id/tourism_line_pic"/>
        <com.alibaba.pictures.bricks.view.HighlightTextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/bricks_2e333e"
            android:ellipsize="end"
            android:id="@+id/tourism_line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="257dp"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_pic"
            app:layout_constraintTop_toTopOf="@+id/tourism_line_pic"/>
        <TextView
            android:textSize="9dp"
            android:textColor="@color/color_6A7A99"
            android:id="@+id/tourism_line_tag"
            android:background="@drawable/bricks_tourism_line_gray_tag_bg"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginStart="3dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_name"
            app:layout_constraintTop_toTopOf="@+id/tourism_line_name"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/tourism_line_show_tag_card"
            android:background="@color/bricks_FFF7E9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/transparent"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_pic"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_name">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="18dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/bricks_tourism_line_rank_icon"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_874953"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tourism_line_show_tag"
                    android:background="@color/bricks_FFF7E9"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:paddingHorizontal="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/tourism_line_distance_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_pic"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_show_tag_card">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_4D4D56"
                android:ellipsize="end"
                android:id="@+id/tourism_line_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintLeft_toRightOf="@+id/tourism_line_pic"
                app:layout_constraintTop_toTopOf="@+id/tourism_line_pic"/>
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/tourism_line_distance_line"
                android:background="@color/bricks_E9EBEF"
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginHorizontal="6dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_4D4D56"
                android:ellipsize="end"
                android:id="@+id/tourism_line_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <View
            android:id="@+id/tourism_line_gap"
            android:background="@color/transparent"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_pic"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_distance_layout"/>
        <TextView
            android:id="@+id/tourism_line_promotion_tag1_divider"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_pic"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_gap"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/bricks_148AFF"
            android:gravity="center_vertical"
            android:id="@+id/tourism_line_promotion_tag1"
            android:background="@drawable/bricks_tourism_line_promotion_tag1_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="3dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_promotion_tag1_divider"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_gap"/>
        <TextView
            android:id="@+id/tourism_line_promotion_tag2_divider"
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_promotion_tag1"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_gap"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/bricks_8896B1"
            android:gravity="center_vertical"
            android:id="@+id/tourism_line_promotion_tag2"
            android:background="@drawable/bricks_tourism_line_promotion_tag2_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="3dp"
            app:layout_constraintLeft_toRightOf="@+id/tourism_line_promotion_tag2_divider"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_gap"/>
        <com.alibaba.pictures.bricks.view.FlowLayout
            android:id="@+id/tourism_line_promotion_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toLeftOf="@+id/tourism_line_price_layout"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_gap"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tourism_line_price_layout"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_gap">
            <TextView
                android:textSize="10dp"
                android:textColor="@color/bricks_959AA5"
                android:id="@+id/tourism_line_price_label_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"/>
            <com.alibaba.pictures.bricks.view.DMCommonPriceView
                android:id="@+id/tourism_line_price_view"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="12dp"/>
            <com.alibaba.pictures.bricks.view.VariableDecimalPriceView
                android:textSize="11dp"
                android:textColor="@color/color_FF4886"
                android:gravity="bottom"
                android:id="@+id/tourism_line_price_default"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格待定"
                android:includeFontPadding="false"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/tourism_line_performance_layout"
        android:background="@drawable/bricks_tourism_line_performance_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="12dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/bricks_2e333e"
            android:id="@+id/tourism_line_performance_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"/>
        <View
            android:background="@color/bricks_E9EBEF"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/bricks_4D4D56"
            android:ellipsize="end"
            android:id="@+id/tourism_line_performance_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"/>
        <com.alibaba.pictures.bricks.view.FlowLayout
            android:id="@+id/tourism_line_performance_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintRight_toLeftOf="@+id/tourism_line_price_layout"
            app:layout_constraintTop_toBottomOf="@+id/tourism_line_gap"/>
        <com.alibaba.pictures.bricks.view.DMCommonPriceView
            android:id="@+id/tourism_line_performance_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="9dp"/>
        <com.alibaba.pictures.bricks.view.VariableDecimalPriceView
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="@color/color_FF4886"
            android:gravity="bottom"
            android:id="@+id/tourism_line_performance_price_default"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="价格待定"
            android:includeFontPadding="false"
            android:layout_marginEnd="9dp"/>
    </LinearLayout>
    <View
        android:id="@+id/ll_search_bottom_div"
        android:background="#b3ededed"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginHorizontal="12dp"/>
</LinearLayout>
