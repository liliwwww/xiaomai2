<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_component_corner_card_12"
    android:padding="@dimen/resource_size_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="123dp">
        <FrameLayout
            android:layout_width="88dp"
            android:layout_height="123dp">
            <com.alibaba.pictures.bricks.view.DMPosterView
                android:id="@+id/id_artist_project_poster"
                android:layout_width="88dp"
                android:layout_height="123dp"/>
            <com.alibaba.pictures.bricks.view.FlowLayout
                android:layout_gravity="start"
                android:id="@+id/id_artist_project_poster_tag_view"
                android:paddingTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"/>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_artist_card_video_pic_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/resource_size_9"
            app:cardCornerRadius="@dimen/resource_size_9"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/id_artist_card_video_pic_blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <com.alibaba.pictures.bricks.view.MaxWidthImageView
                android:layout_gravity="center"
                android:id="@+id/id_artist_card_video_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:max_width="250dp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/id_artist_card_video_play_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_artist_card_video_play"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_9">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/resource_size_15"
                android:textStyle="bold"
                android:textColor="@color/bricks_171717"
                android:ellipsize="end"
                android:id="@+id/id_artist_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/id_artist_project_score_want_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_9">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="@dimen/resource_size_15"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/id_tv_project_score_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_5f6672"
                    android:id="@+id/id_tv_project_score_postfix"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:layout_marginStart="2dp"/>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="@dimen/resource_size_15"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/id_tv_project_want_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_5f6672"
                    android:id="@+id/id_tv_project_want_postfix"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="想看"
                    android:layout_marginStart="2dp"/>
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="#e1e1e4"
                    android:id="@+id/id_tv_project_rank_mark"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:text="|"/>
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/color_bricks_secondary_orange"
                    android:ellipsize="end"
                    android:id="@+id/id_tv_project_rank"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/bricks_5f6672"
                android:id="@+id/id_artist_card_time_or_director_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_6"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/bricks_5f6672"
                android:ellipsize="end"
                android:id="@+id/id_artist_card_address_or_actor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_6"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/id_artist_card_status_tv"
            android:layout_width="54dp"
            android:layout_height="27dp"
            android:layout_marginTop="@dimen/resource_size_21"
            android:layout_marginStart="@dimen/resource_size_9"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/id_artist_card_vip_layout"
        android:background="@drawable/bricks_bg_vip_section"
        android:paddingLeft="@dimen/resource_size_5"
        android:paddingRight="@dimen/resource_size_5"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="@dimen/resource_size_9"
        android:paddingHorizontal="@dimen/resource_size_5">
        <ImageView
            android:id="@+id/id_artist_card_vip_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="#181818"
            android:ellipsize="end"
            android:id="@+id/id_artist_card_vip_desc"
            android:paddingLeft="@dimen/resource_size_6"
            android:paddingRight="@dimen/resource_size_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/resource_size_6"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/id_artist_project_vip_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#e18965"
                android:id="@+id/id_artist_project_vip_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/resource_size_11"
                android:textColor="#e18965"
                android:id="@+id/id_artist_project_vip_btn_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou12"
                android:layout_marginStart="1dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
