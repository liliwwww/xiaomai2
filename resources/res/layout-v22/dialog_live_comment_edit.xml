<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:id="@+id/content_detail_publisher_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:textSize="12dp"
        android:textColor="@color/color_9C9CA5"
        android:layout_gravity="center"
        android:id="@+id/content_detail_publisher_input"
        android:background="@drawable/content_detail_bottom_editbg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:maxHeight="80dp"
        android:minHeight="30dp"
        android:layout_weight="1"
        android:lineSpacingMultiplier="1.3"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="说点什么吧…"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_ffffff"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/content_detail_publisher_btn"
        android:background="@drawable/bg_color_ff2869_ff3299"
        android:layout_width="54dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:text="发布"
        android:layout_marginEnd="21dp"/>
</LinearLayout>
