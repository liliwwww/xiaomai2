<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-5dp">
    <View
        android:id="@+id/id_pioneer_live_location_tip_top"
        android:background="@color/black"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:rotation="45"
        android:layout_marginStart="31dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/id_pioneer_live_location_tip"
        android:background="@drawable/bg_pioneer_home_header_tip"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-7dp">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_13"
            android:textColor="@color/bricks_white"
            android:gravity="center"
            android:id="@+id/tip_text"
            android:paddingLeft="@dimen/resource_size_12"
            android:paddingRight="@dimen/resource_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启定位权限，享受附近精彩玩乐～"
            android:paddingHorizontal="@dimen/resource_size_12"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_13"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:background="@drawable/bg_pionner_green_round"
            android:paddingLeft="@dimen/resource_size_7"
            android:paddingRight="@dimen/resource_size_7"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="5dp"
            android:text="去开启"
            android:paddingHorizontal="@dimen/resource_size_7"/>
    </LinearLayout>
</LinearLayout>
