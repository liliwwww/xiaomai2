<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="14dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/bricks_2e333f"
            android:id="@+id/id_sm_venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/bricks_icon_v_tag_venue"
            android:drawablePadding="5dp"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/bricks_2e333f"
            android:id="@+id/id_sm_venue_fans_show_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lines="1"/>
        <View
            android:background="#1a000000"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="11dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_2e333f"
                    android:ellipsize="end"
                    android:id="@+id/id_sm_venue_loc_address"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingVertical="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/id_sm_venue_loc_ui"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/bricks_icon_location"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_9c9ca5"
                    android:id="@+id/id_sm_venue_loc_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
