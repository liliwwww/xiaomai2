<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/ticket_rl_emergency_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/margin_12dp"
        layout="@layout/ticklet_header_notice"/>
    <cn.damai.ticklet.view.TickletDetailPerformInfo
        android:id="@+id/td_perfrom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ticklet_detail_margin"
        android:layout_marginRight="@dimen/ticklet_detail_margin"
        android:layout_below="@+id/ticket_rl_emergency_notification"/>
    <View
        android:id="@+id/ticket_coupon_line"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/resource_size_2"
        android:layout_alignBottom="@+id/ll_coupon_list_view"
        android:layout_marginStart="@dimen/resource_size_13"
        android:layout_marginEnd="@dimen/resource_size_13"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tickelt_detail_splash_lottie"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/vp_detail_tikets"/>
    <cn.damai.ticklet.view.TickletDetailViewPager
        android:id="@+id/vp_detail_tikets"
        android:background="@drawable/bg_white_corner9_bg"
        android:paddingTop="@dimen/margin_15dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/td_perfrom_info"
        android:paddingStart="@dimen/ticklet_detail_margin"
        android:paddingEnd="@dimen/ticklet_detail_margin"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_coupon_list_view"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_below="@+id/vp_detail_tikets">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/tv_coupon_list_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="券码信息"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_coupon_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/tv_coupon_list_view_showall_line"
            android:background="#d4d4d4"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="8dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ff2d80"
            android:gravity="center"
            android:id="@+id/tv_coupon_list_view_showall"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="展开全部券码"/>
    </LinearLayout>
    <include
        android:id="@+id/perform_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_below="@+id/ll_coupon_list_view"
        android:layout_marginHorizontal="@dimen/margin_12dp"
        layout="@layout/ticklet_perform_ticket_sep_divider"/>
</merge>
