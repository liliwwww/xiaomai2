<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="9dp"
    android:layout_marginHorizontal="15dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/coupon_card_container"
        android:background="@drawable/bg_corner_6_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/coupon_header_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="15dp">
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/discount_total_value_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_ff4886"
                    android:id="@+id/discount_total_value_symbol_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"
                    android:includeFontPadding="false"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_ff4886"
                    android:id="@+id/discount_total_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="12dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/coupon_title_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:id="@+id/coupon_subscript_tv"
                        android:paddingLeft="3dp"
                        android:paddingTop="2dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="3dp"
                        android:paddingVertical="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/coupon_title_tv"/>
                    <TextView
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_2e333e"
                        android:ellipsize="end"
                        android:id="@+id/coupon_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_9c9ca5"
                    android:ellipsize="end"
                    android:id="@+id/coupon_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_11dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/color_ff4886"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/user_use_btn"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <cn.damai.homepage.ui.view.CouponHorizontalDivideView
            android:id="@+id/coupon_content_layout_divide_view"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-2dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            app:divide_color="#e9ebef"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/coupon_content_layout"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="36dp"
        android:textColor="#33ff335c"
        android:id="@+id/discount_icon_tv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-7dp"
        android:layout_alignParentEnd="true"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/film_detail_icon_iv"
        android:visibility="visible"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/coupon_card_container"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
