<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/content_detail_publisher_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
        android:textSize="12dp"
        android:textColor="@color/color_9C9CA5"
        android:textColorHint="@color/color_9C9CA5"
        android:id="@+id/content_detail_publisher_input"
        android:background="@drawable/content_detail_bottom_editbg"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:maxHeight="80dp"
        android:minHeight="30dp"
        android:layout_weight="1"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginStart="12dp"
        android:autofillHints="说点什么吧…"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/content_detail_publisher_praise"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/content_detail_publisher_praise"
        android:clipChildren="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:id="@+id/content_detail_dian_zan_layout"
            android:paddingBottom="5dp"
            android:clipChildren="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="-10dp">
            <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                android:id="@+id/content_detail_dian_zan_icon"
                android:layout_width="55dp"
                android:layout_height="110dp"
                app:lottie_autoPlay="false"
                app:lottie_repeatCount="0"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_666666"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/content_detail_publisher_praise_count_v2"
                android:paddingTop="34dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-44dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:id="@+id/content_detail_bottom_follow_layout"
            android:paddingBottom="5dp"
            android:clipChildren="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="-10dp">
            <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                android:id="@+id/content_detail_wanna_2_see_icon"
                android:layout_width="55dp"
                android:layout_height="110dp"
                android:layout_marginTop="2dp"
                app:lottie_autoPlay="false"
                app:lottie_repeatCount="0"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_666666"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/content_detail_wanna_2_see_text"
                android:paddingTop="34dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-44dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/content_detail_bottom_comment_layout"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/content_detail_comment_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/content_detail_bottom_comment"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_666666"
                android:layout_gravity="center"
                android:id="@+id/content_detail_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
