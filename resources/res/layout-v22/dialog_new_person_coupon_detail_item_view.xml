<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coupon_detail_container"
    android:layout_width="match_parent"
    android:layout_height="61dp">
    <View
        android:id="@+id/coupon_detail_container_bg"
        android:background="@drawable/coupon_detail_bg_basic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/color_ff4886"
            android:id="@+id/discount_value_symbol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥"
            android:includeFontPadding="false"
            android:layout_marginStart="6dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/discount_value_tv"
            app:layout_constraintStart_toStartOf="parent"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/color_ff4886"
            android:ellipsize="end"
            android:id="@+id/discount_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/discount_value_symbol_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <cn.damai.homepage.ui.view.CouponHorizontalDivideView
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        android:layout_above="@+id/discount_desc_tv"
        android:layout_marginHorizontal="10dp"
        app:divide_color="#80ff335c"/>
    <cn.damai.uikit.number.DMDigitTextView
        android:textSize="10dp"
        android:textColor="#80ff4886"
        android:ellipsize="end"
        android:id="@+id/discount_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="7dp"
        android:maxLines="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginHorizontal="5dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="36dp"
        android:textColor="#33ff335c"
        android:id="@+id/discount_icon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-7dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
