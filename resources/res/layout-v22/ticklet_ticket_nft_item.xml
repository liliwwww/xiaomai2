<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_unity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/ticklet_nft_min_height">
    <cn.damai.uikit.view.HoleCardView
        android:id="@+id/hv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ticklet_nft_hole_layout_marginTop"
        android:layout_marginBottom="@dimen/ticklet_nft_hole_layout_marginBottom"
        android:layout_marginStart="@dimen/ticklet_nft_hole_layout_marginStart_end"
        android:layout_marginEnd="@dimen/ticklet_nft_hole_layout_marginStart_end"
        app:holeBackgroundColor="@android:color/transparent"
        app:holeCornerRadius="@dimen/ticklet_nft_hole_corner_radius"
        app:holeScallopRadius="@dimen/ticklet_nft_hole_scallop_radius">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_layout"
            android:background="@drawable/ticket_nft_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_nft_main_icon"
                android:visibility="visible"
                android:layout_width="100dp"
                android:layout_height="61dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/ticket_nft_main_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#613c8e"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_nft_status"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="38dp"
                android:maxLines="2"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:lineHeight="22dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_receive_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#99613c8e"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_nft_status_des"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nft_status"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:id="@+id/tv_receive_btn"
                android:background="@drawable/ticklet_nft_receive_btn_bg"
                android:visibility="visible"
                android:layout_width="165dp"
                android:layout_height="47dp"
                android:layout_marginBottom="12dp"
                android:text="立即领取"
                app:layout_constraintBottom_toTopOf="@+id/seize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:id="@+id/seize"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/iv_cover"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/uikit_default_image_bg_gradient"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/iv_source_type"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/margin_14dp"
                android:src="@drawable/ticket_nft_source_sound"
                android:layout_marginEnd="@dimen/margin_12dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/v_line"
                android:background="@drawable/ticket_nft_line"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="-1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_cover"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#765d2a"
                android:gravity="center"
                android:id="@+id/tv_yc_code"
                android:background="@drawable/ticket_yc_code_background"
                android:paddingBottom="2dp"
                android:visibility="visible"
                android:layout_width="134dp"
                android:layout_height="22dp"
                android:layout_marginTop="-9dp"
                android:maxLines="1"
                android:paddingStart="18dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/v_line"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_title"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_cover"
                app:layout_constraintVertical_bias="0.29"/>
            <ImageView
                android:id="@+id/iv_bottom_icon"
                android:visibility="gone"
                android:layout_width="45dp"
                android:layout_height="27dp"
                android:layout_marginBottom="@dimen/margin_18dp"
                android:src="@drawable/ticket_nft_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </cn.damai.uikit.view.HoleCardView>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center_horizontal"
        android:id="@+id/lav_receiver_lottie"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/hv_container"
        android:layout_alignBottom="@+id/hv_container"
        android:layout_alignStart="@+id/hv_container"
        android:layout_alignEnd="@+id/hv_container"/>
    <ImageView
        android:id="@+id/iv_nft_back_rim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ticket_nft_back_rim"
        android:scaleType="fitXY"/>
</RelativeLayout>
