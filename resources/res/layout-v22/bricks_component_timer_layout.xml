<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/id_bricks_time_layout"
    android:background="@drawable/bg_component_bricks_timer"
    android:paddingLeft="@dimen/resource_size_7"
    android:paddingRight="@dimen/resource_size_7"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:paddingHorizontal="@dimen/resource_size_7">
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="14dp"
        android:textColor="@color/color_FF4886"
        android:id="@+id/id_bricks_time_pre_icon"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_shijian"
        android:layout_marginEnd="4dp"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_FF4886"
        android:id="@+id/id_bricks_time_start_sale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="1"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="12dp"
        android:textColor="@color/color_FF4886"
        android:id="@+id/id_bricks_time_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/id_bricks_time_day_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="å¤©"
        android:layout_marginStart="3dp"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="12dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/id_bricks_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_FF2869"
        android:gravity="center_vertical"
        android:id="@+id/id_bricks_time_hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text=":"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="12dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/id_bricks_time_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/id_bricks_time_min_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text=":"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="12dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/id_bricks_time_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
