<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_bricks_venue_container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_gravity="end"
        android:id="@+id/venue_ui_bg"
        android:layout_width="104dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="21dp"
        android:paddingTop="10dp"
        android:paddingRight="21dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/venue_ui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="14dp"
                android:textColor="#2e333e"
                android:ellipsize="end"
                android:id="@+id/venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/id_bricks_venue_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_69717c"
                    android:ellipsize="end"
                    android:id="@+id/venue_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/extra_ui"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/extra_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/venue_address"
                    app:layout_constraintEnd_toStartOf="@+id/extends_view"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/venue_address"
                    app:layout_constraintTop_toTopOf="parent">
                    <View
                        android:id="@+id/show_count_tv_grap"
                        android:background="@color/color_9C9CA5"
                        android:layout_width="0.5dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:alpha="0.4"
                        android:layout_marginHorizontal="5dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="?attr/bgDetailVenueCountColor"
                        android:id="@+id/show_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <cn.damai.uikit.iconfont.DMIconFontTextView
                        android:textSize="10dp"
                        android:textColor="?attr/bgDetailVenueColor"
                        android:id="@+id/show_count_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.5dp"
                        android:text="@string/iconfont_youjiantou12"/>
                </LinearLayout>
                <View
                    android:id="@+id/extends_view"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/extra_ui"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_min="1dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/with_seat_pic_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="18dp"
                android:textColor="?attr/bgDetailVenueColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_xuanzuo"/>
            <com.alibaba.pictures.bricks.view.DigitTextView
                android:textSize="10dp"
                android:textColor="?attr/bgDetailVenueDescColor"
                android:id="@+id/with_seat_pic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="座位图"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/venue_map_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="18dp"
                android:textColor="?attr/bgDetailVenueColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_dizhi"/>
            <com.alibaba.pictures.bricks.view.DigitTextView
                android:textSize="10dp"
                android:textColor="?attr/bgDetailVenueDescColor"
                android:id="@+id/venue_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="- -"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/id_venue_divider"
        android:background="@color/bricks_959AA5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:alpha="0.15"/>
</FrameLayout>
