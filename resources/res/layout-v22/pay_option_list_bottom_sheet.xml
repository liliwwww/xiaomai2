<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="12dp">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="选择支付方式"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="21dp"
            android:textColor="@color/long_video_price"
            android:layout_gravity="top|right"
            android:id="@+id/icon_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="2dp"
            android:text="@string/icon_font_close"/>
    </FrameLayout>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_bricks_primary_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="实付金额"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp">
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="24dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="￥"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="42dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="bottom"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.taobao.movie.android.app.order.ui.widget.PayOptionListPanel
        android:id="@+id/pay_option_list_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"/>
    <TextView
        android:textSize="15dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_pay"
        android:background="@drawable/common_red_gradient_corner_21"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="34dp"
        android:text="立即付款"/>
</LinearLayout>
