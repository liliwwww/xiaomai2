<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-15dp"
    android:layout_marginBottom="-4dp">
    <View
        android:id="@+id/replace_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="95dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/venue_tag_base_info_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/venue_basic_info_gradient_upline"
            android:layout_width="58dp"
            android:layout_height="8dp"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/venue_basic_info_gradient_upline_bg"
            android:layout_marginStart="@dimen/margin_24dp"/>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:background="@drawable/bg_venue_basic_info_coner_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_9dp"
            android:layout_marginRight="@dimen/margin_9dp"
            android:layout_marginHorizontal="@dimen/margin_9dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/id_bricks_venue_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/resource_size_12"
                android:layout_marginTop="@dimen/resource_size_15"
                android:layout_marginRight="@dimen/resource_size_12"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="@dimen/resource_size_12">
                <TextView
                    android:textSize="@dimen/resource_size_18"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/id_bricks_venue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_marginEnd="@dimen/margin_30dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/id_bricks_venue_follow"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/id_bricks_venue_vip_tag"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:src="@drawable/venue_vip_icon"
                    android:contentDescription="会员标签"
                    android:layout_marginStart="@dimen/margin_3dp"
                    android:layout_marginEnd="@dimen/margin_9dp"
                    app:layout_constraintBottom_toBottomOf="@+id/id_bricks_venue_name"
                    app:layout_constraintStart_toEndOf="@+id/id_bricks_venue_name"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.alibaba.pictures.bricks.view.FollowView
                    android:textSize="@dimen/resource_size_22"
                    android:textColor="@color/cg_7"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/id_bricks_venue_follow"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:text="@string/iconfont_zuojiantou_"
                    app:follow_text_color="@color/bricks_9c9ca5"
                    app:follow_text_size="@dimen/resource_size_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:unfollow_text_color="@color/white"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/id_bricks_venue_count_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/resource_size_12"
                android:layout_marginTop="@dimen/resource_size_7"
                android:layout_marginRight="@dimen/resource_size_12"
                android:layout_below="@+id/id_bricks_venue_name_container"
                android:layout_marginHorizontal="@dimen/resource_size_12">
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/id_bricks_venue_fans_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_marginEnd="@dimen/margin_4dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_bricks_primary_80_white"
                    android:ellipsize="end"
                    android:id="@+id/id_bricks_venue_fans_count_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:lines="1"/>
                <View
                    android:textColor="#626262"
                    android:id="@+id/id_bricks_venue_gap"
                    android:background="#626262"
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="@dimen/margin_12dp"
                    android:layout_marginRight="@dimen/margin_12dp"
                    android:alpha="0.8"
                    android:layout_marginHorizontal="@dimen/margin_12dp"/>
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/id_bricks_venue_items_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_marginEnd="@dimen/margin_4dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_bricks_primary_80_white"
                    android:ellipsize="end"
                    android:id="@+id/id_bricks_venue_items_count_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场在售演出"
                    android:lines="1"/>
            </LinearLayout>
            <com.alibaba.pictures.bricks.component.venue.basicinfo.VenueServiceIconView
                android:orientation="horizontal"
                android:id="@+id/id_bricks_venue_service_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/resource_size_12"
                android:layout_marginTop="@dimen/resource_size_3"
                android:layout_marginRight="@dimen/resource_size_12"
                android:layout_below="@+id/id_bricks_venue_count_container"
                android:layout_marginHorizontal="@dimen/resource_size_12"/>
            <FrameLayout
                android:background="@drawable/venue_distance_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/resource_size_12"
                android:layout_marginTop="@dimen/resource_size_9"
                android:layout_marginRight="@dimen/resource_size_12"
                android:layout_marginBottom="@dimen/resource_size_16"
                android:layout_below="@+id/id_bricks_venue_service_container"
                android:layout_marginHorizontal="@dimen/resource_size_12">
                <com.alibaba.pictures.moimage.MoImageView
                    android:layout_gravity="end"
                    android:id="@+id/id_bricks_venue_distance_image"
                    android:layout_width="183dp"
                    android:layout_height="match_parent"
                    app:roundBottomEnd="true"
                    app:roundBottomStart="false"
                    app:roundTopEnd="true"
                    app:roundTopStart="false"
                    app:roundedCornerRadius="6dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/id_bricks_venue_location_container"
                    android:paddingTop="@dimen/resource_size_12"
                    android:paddingBottom="@dimen/resource_size_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/resource_size_12">
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:id="@+id/id_bricks_venue_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:layout_marginStart="9dp"/>
                    <ImageView
                        android:id="@+id/id_bricks_venue_distance_tag"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="@dimen/resource_size_9"
                        android:layout_marginRight="@dimen/resource_size_9"
                        android:src="@drawable/venue_distance_icon"
                        android:layout_marginHorizontal="@dimen/resource_size_9"/>
                    <com.alibaba.pictures.bricks.view.DMDigitTextView
                        android:textSize="11dp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:id="@+id/id_bricks_venue_location_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/venue_basic_info_gradient_downline"
            android:layout_width="97dp"
            android:layout_height="8dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/venue_basic_info_gradient_downline_bg"
            android:layout_marginEnd="@dimen/resource_size_24"/>
    </LinearLayout>
</LinearLayout>
