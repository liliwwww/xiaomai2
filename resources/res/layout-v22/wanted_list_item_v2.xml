<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_container"
    android:background="@drawable/cinema_base_card_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginHorizontal="12dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/wanted_pic_poster"
        android:background="@color/common_text_color14"
        android:layout_width="63dp"
        android:layout_height="84dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginVertical="12dp"
        app:actualImageScaleType="fitXY"
        app:fadeDuration="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        style="@style/big_round_style"/>
    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/color_tpp_primary_main_title"
        android:ellipsize="end"
        android:id="@+id/wanted_film_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@+id/wanted_film_buy_btn"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/wanted_pic_poster"
        app:layout_constraintTop_toTopOf="@+id/wanted_pic_poster"/>
    <TextView
        android:textSize="13dp"
        android:gravity="center_vertical"
        android:id="@+id/wanted_film_remark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/remark_title"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/margin_3"
        app:layout_constraintStart_toStartOf="@+id/wanted_film_name"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_name"
        style="@style/wanted_list_style"/>
    <TextView
        android:textSize="13dp"
        android:gravity="top"
        android:id="@+id/wanted_film_tv_remark"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        app:font="@font/rubik"
        app:layout_constraintBaseline_toBaselineOf="@+id/wanted_film_remark_title"
        app:layout_constraintEnd_toStartOf="@+id/wanted_film_buy_btn"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/wanted_film_remark_title"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_name"
        style="@style/FilmRemarkNumber"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/wanted_film_rating_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="wanted_film_remark_title , wanted_film_tv_remark"/>
    <TextView
        android:textSize="13dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/wanted_film_want_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/margin_3"
        app:font="@font/rubik"
        app:layout_constraintStart_toStartOf="@+id/wanted_film_name"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_name"
        style="@style/FilmRemarkNumber"/>
    <TextView
        android:textSize="13dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/wanted_film_want_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/want_title"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/wanted_film_btn_line"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/wanted_film_want_count"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_name"
        style="@style/wanted_list_style"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/wanted_film_want_container"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="wanted_film_want_count , wanted_film_want_count_title"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/wanted_film_vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="wanted_film_tv_remark , wanted_film_want_count_title"/>
    <TextView
        android:textSize="13dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/wanted_film_comment_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/wanted_film_btn_line"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/wanted_film_vertical_line"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_name"
        style="@style/wanted_list_style"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/wanted_film_horizontal_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="wanted_film_comment_count_title , wanted_film_want_count_title , wanted_film_remark_title , wanted_film_name"/>
    <TextView
        android:id="@+id/wanted_film_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/wanted_film_btn_line"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/wanted_film_name"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_horizontal_line"
        style="@style/wanted_list_style"/>
    <TextView
        android:id="@+id/wanted_film_play_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/wanted_film_btn_line"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/wanted_film_name"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_director"
        style="@style/wanted_list_style"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_gray_c8"
        android:gravity="top"
        android:id="@+id/wanted_film_tv_tips"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="来源于优酷的预约记录"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/film_comment_content"
        app:layout_constraintEnd_toStartOf="@+id/wanted_film_btn_line"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/wanted_pic_poster"
        app:layout_constraintTop_toBottomOf="@+id/wanted_pic_poster"/>
    <TextView
        android:id="@+id/wanted_film_buy_btn"
        android:padding="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:text="购票"
        android:layout_marginHorizontal="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/buy_button_style_small_7_3"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/wanted_film_btn_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="wanted_film_buy_btn"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/cg_1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/film_comment_content"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="9dp"
        android:text="12134546465"
        android:maxLines="3"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wanted_film_tv_tips"/>
</androidx.constraintlayout.widget.ConstraintLayout>
