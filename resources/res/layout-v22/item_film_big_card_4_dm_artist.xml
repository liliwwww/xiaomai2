<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_component_corner_card_12"
    android:padding="@dimen/resource_size_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="88dp"
            android:layout_height="123dp"
            android:layout_marginEnd="@dimen/resource_size_9">
            <com.taobao.movie.android.commonui.widget.FilmImagePlayNew
                android:id="@+id/id_film_card_poster"
                android:layout_width="88dp"
                android:layout_height="123dp"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/id_film_card_poster_tag_flex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginHorizontal="3dp"
                app:dividerDrawable="@drawable/divider_film_poster_tag"
                app:flexWrap="wrap"
                app:showDivider="middle"/>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_film_card_video_pic_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/resource_size_9"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/id_film_card_video_pic_blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <com.taobao.movie.android.app.ui.artist.TppMaxWidthImageView
                android:layout_gravity="center"
                android:id="@+id/id_film_card_video_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:max_width="250dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_artist_card_video_play_tpp"/>
        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:id="@+id/id_film_card_high_light_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.alient.onearch.adapter.widget.RoundRadiusImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_artist_film_high_light_bg"
                android:scaleType="fitXY"
                app:r_round_radius="9dp"/>
            <View
                android:layout_gravity="end"
                android:background="@drawable/icon_film_high_light_star"
                android:layout_width="45dp"
                android:layout_height="50dp"/>
            <View
                android:background="@drawable/shape_artist_film_high_light_ring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icon_film_high_light_title"
                    android:scaleType="fitXY"/>
                <com.taobao.movie.android.app.artist.AutoLineTextView
                    android:textSize="@dimen/resource_size_11"
                    android:textColor="@color/color_181818"
                    android:ellipsize="end"
                    android:id="@+id/id_film_card_high_light_desc"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/id_film_card_actor_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/resource_size_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.taobao.movie.android.commonui.widget.TitleMarkView
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/id_mixed_film_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/id_mixed_film_score_want_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:textSize="@dimen/text_size_12_dp"
                    android:textColor="@color/bricks_5f6672"
                    android:id="@+id/id_mixed_film_none_score_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/id_mixed_film_score_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.alibaba.pictures.bricks.view.PuHuiTiNumTextView
                        android:textSize="15dp"
                        android:textColor="@color/bricks_171717"
                        android:id="@+id/id_mixed_film_score_ph_tv"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="15dp"
                        android:textColor="@color/bricks_171717"
                        android:id="@+id/id_mixed_film_score_tv"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="@dimen/text_size_12_dp"
                        android:textColor="@color/bricks_5f6672"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="åˆ†"
                        android:layout_marginStart="2dp"/>
                    <View
                        android:id="@+id/id_mixed_film_score_count_divider"
                        android:background="#e9ebef"
                        android:visibility="gone"
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/resource_size_12"
                        android:layout_marginLeft="@dimen/resource_size_6"
                        android:layout_marginRight="@dimen/resource_size_6"
                        android:layout_marginHorizontal="@dimen/resource_size_6"/>
                    <TextView
                        android:textSize="@dimen/text_size_12_dp"
                        android:textColor="@color/bricks_5f6672"
                        android:id="@+id/id_mixed_film_score_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/id_mixed_film_want_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.alibaba.pictures.bricks.view.PuHuiTiNumTextView
                        android:textSize="15dp"
                        android:textColor="@color/bricks_171717"
                        android:id="@+id/id_mixed_film_want_count_ph_tv"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/bricks_171717"
                        android:id="@+id/id_mixed_film_want_count_tv"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="@dimen/text_size_12_dp"
                        android:textColor="@color/bricks_5f6672"
                        android:id="@+id/id_mixed_film_want_count_post_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"/>
                </LinearLayout>
                <View
                    android:id="@+id/id_mixed_film_want_count_divider"
                    android:background="#e9ebef"
                    android:visibility="gone"
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/resource_size_12"
                    android:layout_marginLeft="@dimen/resource_size_6"
                    android:layout_marginRight="@dimen/resource_size_6"
                    android:layout_marginHorizontal="@dimen/resource_size_6"/>
                <TextView
                    android:textSize="@dimen/text_size_12_dp"
                    android:textColor="@color/bricks_5f6672"
                    android:id="@+id/id_mixed_film_time_2_show_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:ellipsize="end"
                android:id="@+id/id_mixed_film_card_director_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_6"
                android:lines="1"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:ellipsize="end"
                android:id="@+id/id_mixed_film_card_actor_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_6"
                android:lines="1"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <TextView
            android:id="@+id/id_mixed_film_card_buy_btn"
            android:padding="0dp"
            android:text="è´­ç¥¨"
            android:layout_marginStart="12dp"
            style="@style/buy_button_style_small_7_3"/>
        <FrameLayout
            android:id="@+id/id_mixed_film_card_favorite_normal_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <TextView
                android:textSize="10dp"
                android:textColor="#ff3d5c"
                android:layout_gravity="end"
                android:id="@+id/id_mixed_favorite_with_gift"
                android:background="@drawable/want_see_with_gift_pop"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:text="æƒ³çœ‹æœ‰ç¤¼"/>
            <com.taobao.movie.android.app.oscar.ui.film.widget.WantButton
                android:layout_gravity="end|bottom"
                android:id="@+id/id_mixed_favorite_btn"
                android:padding="0dp"
                android:text="æƒ³çœ‹"
                android:stateListAnimator="@null"
                style="@style/want_button_style_small"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/id_mixed_film_card_favorite_pioneer_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="40.5dp"
            android:layout_marginTop="7dp">
            <TextView
                android:textSize="9dp"
                android:textColor="#ff7600"
                android:ellipsize="none"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/id_mixed_favorite_with_gift_pioneer"
                android:background="@drawable/nowshowing_dicount_button_bg_pioneer"
                android:paddingTop="13.5dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_marginTop="13.5dp"
                android:text="æƒ³çœ‹æœ‰ç¤¼"
                android:singleLine="true"/>
            <com.taobao.movie.android.app.oscar.ui.film.widget.WantButton
                android:layout_gravity="end|top"
                android:id="@+id/id_mixed_favorite_btn_pioneer"
                android:padding="0dp"
                android:text="æƒ³çœ‹"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/want_button_style_small"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/id_film_card_vip_layout"
        android:background="@drawable/bricks_bg_vip_section_tpp"
        android:paddingLeft="@dimen/resource_size_5"
        android:paddingRight="@dimen/resource_size_5"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="@dimen/resource_size_9"
        android:paddingHorizontal="@dimen/resource_size_5">
        <ImageView
            android:id="@+id/id_film_card_vip_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="#181818"
            android:ellipsize="end"
            android:id="@+id/id_film_card_vip_desc"
            android:paddingLeft="@dimen/resource_size_6"
            android:paddingRight="@dimen/resource_size_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/resource_size_6"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/id_film_project_vip_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#e18965"
                android:id="@+id/id_film_project_vip_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/resource_size_11"
                android:textColor="#e18965"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou12"
                android:layout_marginStart="1dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
