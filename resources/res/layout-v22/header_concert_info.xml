<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/concert_poster_ui"
        android:layout_width="@dimen/project_concert_info_poster_width"
        android:layout_height="@dimen/project_concert_info_poster_height"
        android:layout_marginLeft="21dp">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/project_item_poster_image_iv"
            android:background="@drawable/bg_solid_f5f5f5_corner_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:borderRadius="@dimen/margin_6dp"
            app:type="radial"/>
        <cn.damai.uikit.tag.DMCategroyTagView
            android:id="@+id/project_detail_agency_tag_fv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginRight="@dimen/margin_3dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="@color/color_ffffff"
            android:id="@+id/project_detail_image_num_tv"
            android:background="@drawable/project_detail_total_num_bg"
            android:padding="@dimen/margin_3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_3dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:includeFontPadding="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/project_poster_tv"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:paddingHorizontal="3dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_concert_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:minHeight="@dimen/project_concert_info_poster_height"
        android:layout_toRightOf="@+id/concert_poster_ui">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/concert_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/project_poster_fl"
            app:layout_constraintTop_toTopOf="parent">
            <FrameLayout
                android:id="@+id/concert_title_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/concert_show_tags_fl"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="@dimen/margin_6dp"/>
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="16dp"
                    android:textColor="@color/color_pioneer_primary_black"
                    android:id="@+id/project_title_tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="3dp"/>
            </FrameLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/concert_title_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="16dp"
                    android:textColor="@color/color_pioneer_primary_black"
                    android:ellipsize="end"
                    android:id="@+id/project_title_tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:layout_weight="1"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_5f6672"
                    android:gravity="center"
                    android:id="@+id/project_title_iconfont"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="@string/iconfont_Gengduo18"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/ll_concert_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/project_detail_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.view.ProjectPriceView
                    android:id="@+id/concert_price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"/>
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/iv_project_price_promotion"
                    android:visibility="gone"
                    android:layout_width="86dp"
                    android:layout_height="@dimen/margin_23dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/sfpt_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_9c9ca5"
                    android:id="@+id/sfpt_prefix_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="10dp"
                    android:textColor="@color/color_price_font"
                    android:id="@+id/sfpt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_9c9ca5"
                    android:id="@+id/sfpt_suffix_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:gravity="center_vertical"
                android:id="@+id/project_detail_countdown_layout"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="7dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:layout_gravity="left"
                    android:id="@+id/iv_project_price_promotion_inner"
                    android:layout_width="80dp"
                    android:layout_height="23dp"/>
                <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.view.PromotionCountDownView
                    android:layout_gravity="right"
                    android:id="@+id/project_detail_countdown_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_2dp"
                    android:layout_marginTop="@dimen/margin_5dp"/>
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/concert_discounts_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_9dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/fl_first_discount"
                android:paddingTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/fl_second_discount"
                android:background="@drawable/bg_border_corner_ffebef_3"
                android:paddingLeft="@dimen/margin_1dp"
                android:paddingTop="@dimen/margin_2dp"
                android:paddingRight="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="37dp"
                android:layout_below="@+id/fl_first_discount"
                android:layout_alignParentLeft="true"/>
            <View
                android:background="@drawable/bg_white_trans0_100"
                android:layout_width="@dimen/margin_15dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/fl_first_discount"
                android:layout_alignBottom="@+id/fl_first_discount"
                android:layout_toStartOf="@+id/tradecore_get_coupon"/>
            <View
                android:background="@drawable/bg_white_trans0_100"
                android:layout_width="@dimen/margin_15dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/fl_second_discount"
                android:layout_alignBottom="@+id/fl_second_discount"
                android:layout_toStartOf="@+id/tradecore_get_coupon"/>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/bricks_959AA5"
                android:gravity="center_vertical"
                android:id="@+id/tradecore_get_coupon"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="全部"
                android:layout_toLeftOf="@+id/tradecore_arrow"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/margin_6dp"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="10dp"
                android:textColor="@color/bricks_959AA5"
                android:gravity="center"
                android:id="@+id/tradecore_arrow"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_youjiantou12"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
