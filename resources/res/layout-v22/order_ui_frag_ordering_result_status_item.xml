<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color_tpp_primary_white"
    android:paddingTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:id="@+id/draw_title_pic"
            android:layout_width="23dp"
            android:layout_height="23dp"/>
        <TextView
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="center_horizontal"
            android:id="@+id/draw_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/ordering_result_success_drawn_title"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="24dp">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/film_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_weight="1"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:layout_gravity="center_horizontal"
            android:id="@+id/film_ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/degrade_happy_coin_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:layout_gravity="center"
            android:id="@+id/degrade_happy_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_arrow_right"
            android:fontFamily="@font/icon"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/order_result_tip_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/draw_desc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/product_detail_tk_pay_success_toast"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:layout_gravity="center_horizontal"
            android:id="@+id/order_result_received_happy_coin_tip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:layout_gravity="center_horizontal"
            android:id="@+id/mcard_save_bogo_number"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:layout_gravity="center_horizontal"
            android:id="@+id/mcard_save_number"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/happy_coin_container"
        android:background="@drawable/order_result_happy_coin_background"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_10">
        <ImageView
            android:id="@+id/happy_coin_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/happy_coin_icon"/>
        <TextView
            android:textSize="@dimen/text_size_11_dp"
            android:textColor="#842f00"
            android:gravity="center"
            android:id="@+id/happy_coin_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_3"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/reward_detail_container"
        android:paddingLeft="@dimen/padding_6dp"
        android:paddingRight="@dimen/padding_6dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingHorizontal="@dimen/padding_6dp">
        <TextView
            android:textSize="@dimen/text_size_12_dp"
            android:textColor="@color/tpp_primary_red"
            android:id="@+id/tv_reward_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12dp"
            android:textColor="@color/tpp_primary_red"
            android:id="@+id/reward_detail_icon_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_right_small"/>
    </LinearLayout>
</LinearLayout>
