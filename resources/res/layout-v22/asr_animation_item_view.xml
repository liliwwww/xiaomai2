<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/asr_input_card_layout_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:paddingHorizontal="20dp">
    <TextView
        android:textSize="14dp"
        android:textColor="#444b5b"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="15dp"
        android:text="松手发送 上滑取消"
        android:includeFontPadding="false"
        android:letterSpacing="0"/>
    <FrameLayout
        android:id="@+id/touchLayout"
        android:background="@drawable/asr_input_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp">
        <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
            android:id="@+id/lottie_view"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="false"
            app:lottie_repeatCount="-1"/>
    </FrameLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="#e6e6e6"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:text="内容由 AI 大模型生成，请仔细甄别"
        android:includeFontPadding="false"
        android:letterSpacing="0"/>
</LinearLayout>
