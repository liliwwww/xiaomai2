<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.StrokeLinearLayout
        android:orientation="vertical"
        android:id="@+id/id_trip_voucher_code_style_single"
        android:background="#1abfb5ff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_15"
        android:layout_marginRight="@dimen/resource_size_15"
        android:layout_marginHorizontal="@dimen/resource_size_15"
        app:sl_corners_radius="2dp">
        <View
            android:background="@drawable/ticket_trip_venchar_gradient_bg"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/id_trip_voucher_code_click_area_1"
            android:paddingLeft="@dimen/resource_size_9"
            android:paddingTop="9dp"
            android:paddingRight="@dimen/resource_size_9"
            android:paddingBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/resource_size_9"
            android:paddingVertical="9dp">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ticket_trip_voucher_no_prefix_icon"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_trip_voucher_code"
                android:layout_marginStart="3dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#0091ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_trip_voucher_copy"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/resource_size_14"
            android:textColor="#6c7077"
            android:id="@+id/id_trip_voucher_code_no_tv1"
            android:paddingLeft="@dimen/resource_size_9"
            android:paddingRight="@dimen/resource_size_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/resource_size_9"
            android:lineSpacingExtra="2dp"
            android:paddingHorizontal="@dimen/resource_size_9"/>
    </cn.damai.uikit.view.StrokeLinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/id_trip_voucher_code_style_multi"
        android:background="#1abfb5ff"
        android:paddingLeft="@dimen/resource_size_9"
        android:paddingRight="@dimen/resource_size_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/resource_size_9">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/id_trip_voucher_code_click_area_2"
            android:paddingTop="@dimen/resource_size_6"
            android:paddingBottom="@dimen/resource_size_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/resource_size_6">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ticket_trip_voucher_no_prefix_icon"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_trip_voucher_code"
                android:layout_marginStart="3dp"/>
            <cn.damai.ticklet.view.TicketLineTextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#6c7077"
                android:id="@+id/id_trip_voucher_code_no_tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:lines="1"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#0091ff"
                android:id="@+id/id_trip_voucher_code_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_trip_voucher_copy"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/resource_size_14"
            android:textColor="#6c7077"
            android:id="@+id/id_trip_voucher_code_no_tv3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/resource_size_6"
            android:lineSpacingExtra="2dp"/>
    </LinearLayout>
</LinearLayout>
