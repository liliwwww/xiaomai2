<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/common_text_color18"
                android:endColor="@color/common_text_color18"
                android:angle="cw_0"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/common_text_color18"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/common_text_color18"
                android:endColor="@color/common_text_color18"
                android:angle="cw_0"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
</selector>
