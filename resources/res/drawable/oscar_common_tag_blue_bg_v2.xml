<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient
                android:startColor="#d796ff"
                android:endColor="#76aaff"
                android:angle="cw_0"
                android:type="linear"
                android:centerColor="#a18cff"/>
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient
                android:startColor="#1fd796ff"
                android:endColor="#1f76aaff"
                android:angle="cw_0"
                android:type="linear"
                android:centerColor="#1fa18cff"/>
        </shape>
    </item>
</layer-list>
