<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_bar_space_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_24dp"
                android:textColor="@color/color_000000"
                android:gravity="center"
                android:id="@+id/btn_back"
                android:paddingLeft="@dimen/margin_21dp"
                android:paddingRight="@dimen/margin_21dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_Daohangguanbi18"/>
            <TextView
                android:textSize="@dimen/margin_20dp"
                android:textColor="@color/color_000000"
                android:id="@+id/tv_title_video"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所有视频"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/btn_folder"
                android:background="@drawable/bg_corner_12_1a000000"
                android:paddingLeft="@dimen/margin_9dp"
                android:paddingRight="@dimen/margin_9dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_25dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/color_000000"
                    android:gravity="center"
                    android:id="@+id/tv_folder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/damai_all_image"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/color_000000"
                    android:paddingTop="@dimen/margin_1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_youjiantou24"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_image"
        android:scrollbars="vertical"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom_bar"
        android:layout_below="@+id/rl_top_bar"
        android:overScrollMode="never"/>
    <RelativeLayout
        android:id="@+id/rl_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:id="@+id/btn_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <TextView
                android:textSize="12dp"
                android:textColor="#66666666"
                android:gravity="center"
                android:id="@+id/tv_preview"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="70dp"
                android:text="@string/preview"/>
        </FrameLayout>
        <include
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_25dp"
            android:layout_marginRight="@dimen/margin_21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            layout="@layout/activity_image_select_confirm"/>
    </RelativeLayout>
</RelativeLayout>
