<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.shadowlayout.DMShadowLayout
        android:id="@+id/mine_brand_best_projs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="12dp"
        app:sl_cornerRadius="12dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="#266a7a99"
        app:sl_shadowRadius="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_border_corner_white_radius_12"
            android:paddingLeft="15dp"
            android:paddingTop="18dp"
            android:paddingRight="15dp"
            android:paddingBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌优选"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <include
                android:id="@+id/mine_brand_project_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mine_brand_project_2"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                layout="@layout/mine_brand_project_item"/>
            <include
                android:id="@+id/mine_brand_project_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/mine_brand_project_1"
                app:layout_constraintEnd_toStartOf="@+id/mine_brand_project_3"
                app:layout_constraintStart_toEndOf="@+id/mine_brand_project_1"
                app:layout_constraintTop_toTopOf="@+id/mine_brand_project_1"
                layout="@layout/mine_brand_project_item"/>
            <include
                android:id="@+id/mine_brand_project_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/mine_brand_project_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mine_brand_project_2"
                app:layout_constraintTop_toTopOf="@+id/mine_brand_project_1"
                layout="@layout/mine_brand_project_item"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </cn.damai.uikit.shadowlayout.DMShadowLayout>
</FrameLayout>
