<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_content_wrapper"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/user_feeds_article_img">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_111111"
                android:ellipsize="end"
                android:id="@+id/tv_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_888888"
                android:ellipsize="end"
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:lineSpacingMultiplier="1.4"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/user_feeds_article_img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/uikit_default_image_bg_grey"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="right"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        <include layout="@layout/feeds_interact_layout"/>
    </RelativeLayout>
</LinearLayout>
