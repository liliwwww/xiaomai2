<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/bricks_959AA5"
        android:ellipsize="end"
        android:id="@+id/tv_countdown_prefix"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
        android:textSize="@dimen/margin_10dp"
        android:textColor="@color/color_FF4886"
        android:id="@+id/tv_countdown_day_time"
        android:background="@drawable/bg_border_corner_ffebef_3"
        android:paddingLeft="@dimen/margin_1dp"
        android:paddingRight="@dimen/margin_1dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/bricks_959AA5"
        android:ellipsize="end"
        android:id="@+id/tv_countdown_day_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天"
        android:maxLines="1"/>
    <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
        android:textSize="@dimen/margin_10dp"
        android:textColor="@color/color_FF4886"
        android:id="@+id/tv_countdown_hour_time"
        android:background="@drawable/bg_border_corner_ffebef_3"
        android:paddingLeft="@dimen/margin_1dp"
        android:paddingRight="@dimen/margin_1dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/bricks_959AA5"
        android:ellipsize="end"
        android:id="@+id/tv_countdown_hour_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时"
        android:maxLines="1"/>
    <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
        android:textSize="@dimen/margin_10dp"
        android:textColor="@color/color_FF4886"
        android:id="@+id/tv_countdown_minute_time"
        android:background="@drawable/bg_border_corner_ffebef_3"
        android:paddingLeft="@dimen/margin_1dp"
        android:paddingRight="@dimen/margin_1dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/bricks_959AA5"
        android:ellipsize="end"
        android:id="@+id/tv_countdown_minute_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分"
        android:maxLines="1"/>
    <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
        android:textSize="@dimen/margin_10dp"
        android:textColor="@color/color_FF4886"
        android:id="@+id/tv_countdown_second_time"
        android:background="@drawable/bg_border_corner_ffebef_3"
        android:paddingLeft="@dimen/margin_1dp"
        android:paddingRight="@dimen/margin_1dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/bricks_959AA5"
        android:ellipsize="end"
        android:id="@+id/tv_countdown_second_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="秒"
        android:maxLines="1"/>
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/bricks_959AA5"
        android:ellipsize="end"
        android:id="@+id/tv_countdown_suffix_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
</merge>
