<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ticklet_list_root_layout"
    android:background="@drawable/shape_f6f7f8_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ticklet_list_title"
        android:visibility="visible"
        layout="@layout/ticklet_list_title_layout"/>
    <cn.damai.uikit.irecycler.IRecyclerView
        android:id="@+id/ticklet_irecyclerview"
        android:background="?attr/tickletListPageBg"
        android:visibility="gone"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ticklet_list_title"
        android:overScrollMode="never"
        app:loadMoreEnabled="false"
        app:loadMoreFooterLayout="@layout/ticklet_perfrom_list_irc_footer_layout"
        app:refreshEnabled="false"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/errorPageView"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ticklet_list_title"/>
    <cn.damai.ticklet.view.TickletListTransferItemPioneerView
        android:id="@+id/ticklet_list_transfer_pioneer_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_27dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
