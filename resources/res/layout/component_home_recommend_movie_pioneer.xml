<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_movie_layout"
            android:layout_width="@dimen/home_page_movie_poster_width"
            android:layout_height="@dimen/home_page_movie_poster_height"
            android:layout_centerInParent="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:layout_gravity="center"
                android:id="@+id/iv_movie_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/poster_default_bg"
                app:placeholderImage="@drawable/poster_default_bg"/>
            <com.taobao.movie.android.app.oscar.ui.widget.queueflipper.GifSafeQueueViewFlipper
                android:layout_gravity="center"
                android:id="@+id/iv_movie_trailer_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_gravity="start|bottom"
                android:id="@+id/overlay_home_movie_trailer_item"
                android:background="@drawable/bg_home_movie_card_bottom_shadow"
                android:layout_width="@dimen/home_page_movie_poster_width"
                android:layout_height="@dimen/home_page_movie_poster_mask_height"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/layout_movie_want_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp">
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="@dimen/text_size_12_dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/tv_movie_want_remark_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_1dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="@dimen/text_size_10_dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/tv_movie_want_remark_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/margin_1dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/normal_tag_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/dianying_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="@dimen/home_page_movie_poster_tag_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/color_tpp_primary_white"
                    android:gravity="center"
                    android:id="@+id/tv_homepage_show_mark"
                    android:paddingLeft="@dimen/padding_2dp"
                    android:paddingRight="@dimen/padding_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/home_page_movie_poster_tag_height"
                    android:layout_marginTop="3dp"
                    android:text="IMAX 3D"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="@dimen/home_page_movie_poster_tag_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_reopen_mark"
                    android:background="@drawable/common_gray_round_radius_small_btn"
                    android:paddingLeft="@dimen/padding_2dp"
                    android:paddingRight="@dimen/padding_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/home_page_movie_poster_tag_height"
                    android:layout_marginTop="3dp"
                    android:text="@string/movie_reopen"/>
                <TextView
                    android:textSize="@dimen/home_page_movie_poster_tag_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_preschedule_mark"
                    android:background="@drawable/common_yellow_round_radius_small_btn"
                    android:paddingLeft="@dimen/padding_2dp"
                    android:paddingRight="@dimen/padding_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/home_page_movie_poster_tag_height"
                    android:layout_marginTop="3dp"
                    android:text="点映"/>
            </LinearLayout>
            <ViewFlipper
                android:id="@+id/flipper_tag_zone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/home_page_movie_poster_flipper_height"
                android:layout_marginTop="3dp"
                android:inAnimation="@anim/roll_in"
                android:outAnimation="@anim/roll_out"
                android:flipInterval="5000"/>
        </LinearLayout>
        <com.taobao.movie.android.app.oscar.ui.widget.WantSeeWithGiftView
            android:id="@+id/want_see_with_gift"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>
        <com.alibaba.pictures.bricks.component.home.moviecard.FlashRedPacketView
            android:id="@+id/flash_red_packet"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_size_12_dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:ellipsize="end"
        android:id="@+id/tv_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="3dp"
        android:maxLines="1"/>
    <TextView
        android:textSize="@dimen/text_size_10_dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:id="@+id/tv_show_open_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:maxLines="1"/>
    <TextView
        android:textSize="@dimen/text_size_11_dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/btn_action"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:textSize="9dp"
        android:textColor="@color/tpp_film_detail_based_gift_text_color"
        android:ellipsize="end"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/discount_info_tv"
        android:background="@drawable/home_nowshowing_discount_bg"
        android:paddingLeft="6dp"
        android:paddingTop="7dp"
        android:paddingRight="6dp"
        android:paddingBottom="1dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:maxLines="1"/>
</LinearLayout>
