<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15sp"
    android:layout_width="match_parent"
    android:layout_height="161dp">
    <RelativeLayout
        android:layout_width="98dp"
        android:layout_height="131dp">
        <ImageView
            android:id="@+id/item_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/item_project_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/margin_3dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#8890a0"
            android:ellipsize="end"
            android:id="@+id/item_project_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:layout_below="@+id/item_project_title_tv"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#8890a0"
            android:ellipsize="end"
            android:id="@+id/item_project_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_below="@+id/item_project_time_tv"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_ff2869"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_ff2869"
                android:layout_gravity="bottom"
                android:id="@+id/item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_9c9ca5"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="起"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
