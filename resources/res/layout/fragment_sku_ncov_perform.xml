<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_perform_view"
    android:paddingTop="15dp"
    android:paddingBottom="3dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:id="@+id/tv_perform_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场次"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_perform_tip"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#48b1f1"
            android:gravity="right"
            android:id="@+id/tv_perform_changetip_icon"
            android:paddingTop="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_timechange_"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#48b1f1"
            android:gravity="right"
            android:layout_gravity="right"
            android:id="@+id/tv_perform_changetip"
            android:paddingTop="2dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="演出变更"/>
    </LinearLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="#659fee"
        android:gravity="center_vertical"
        android:id="@+id/holiday_tips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_3dp"
        android:text="*以下日期涉及法定节假日调休，请合理安排时间"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/project_detail_perform_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="13dp"/>
</LinearLayout>
