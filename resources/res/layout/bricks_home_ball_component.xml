<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/resource_size_65">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/bricks_ball_icon"
        android:layout_width="@dimen/resource_size_40"
        android:layout_height="@dimen/resource_size_40"
        android:layout_marginTop="6dp"
        android:src="@drawable/bricks_home_ball_icon"
        android:layout_centerHorizontal="true"
        app:failureImage="@drawable/bricks_home_ball_icon"
        app:placeholderImage="@drawable/bricks_home_ball_icon"/>
    <LinearLayout
        android:id="@+id/bricks_ball_label_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_3"
        android:layout_marginRight="@dimen/resource_size_1"
        android:layout_alignLeft="@+id/bricks_ball_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <View
            android:id="@+id/bricks_icon_holder"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/bricks_ball_rl_label"
            android:background="@drawable/bricks_home_ball_tips_bg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/resource_size_19"
            android:layout_marginTop="@dimen/resource_size_3"
            android:minWidth="28dp">
            <TextView
                android:textSize="@dimen/font_Footnote2_M"
                android:textColor="@color/cg_7"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/bricks_ball_label"
                android:paddingLeft="@dimen/dim_3"
                android:paddingRight="@dimen/dim_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/resource_size_19"
                android:layout_marginBottom="0.3dp"
                android:maxWidth="52dp"
                android:maxLines="1"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/font_Subhead2_R"
        android:textColor="@color/cg_1"
        android:ellipsize="end"
        android:id="@+id/bricks_ball_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/bricks_ball_icon"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
