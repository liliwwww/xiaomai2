<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_15">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/common_black_diamond_gradient_round6_bg"
        android:paddingTop="@dimen/padding_9"
        android:paddingBottom="@dimen/padding_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_9"
        android:paddingEnd="@dimen/padding_9">
        <ImageView
            android:id="@+id/img_black_diamond"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/black_diamond_spot"
            android:background="@drawable/common_black_diamond_spot"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="@dimen/padding_4dp"
            app:layout_constraintLeft_toRightOf="@+id/img_black_diamond"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/text_size_13_dp"
            android:textColor="@color/color_tpp_primary_gray_1c"
            android:ellipsize="end"
            android:id="@+id/tv_equity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="免退票费、改签费"
            android:maxLines="1"
            android:layout_marginStart="@dimen/padding_4dp"
            android:layout_marginEnd="@dimen/margin_6"
            app:layout_constraintLeft_toRightOf="@+id/black_diamond_spot"
            app:layout_constraintRight_toLeftOf="@+id/tv_cost_coin"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/text_size_11_dp"
            android:textColor="@color/color_tpp_primary_gray_1c"
            android:ellipsize="end"
            android:id="@+id/tv_equity_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/margin_6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_total_coin"
            app:layout_constraintTop_toBottomOf="@+id/tv_equity_title"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tv_cost_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_3"
            app:layout_constraintRight_toLeftOf="@+id/endorse_check"
            app:layout_constraintTop_toTopOf="parent">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/tv_cost_coin_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="3.5dp"/>
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="@dimen/text_size_13_dp"
                android:textColor="@color/color_tpp_primary_gray_1c"
                android:id="@+id/tv_cost_coin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28兑换"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_size_11_dp"
            android:textColor="@color/color_tpp_primary_gray_1c"
            android:id="@+id/tv_total_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:alpha="0.9"
            app:layout_constraintRight_toRightOf="@+id/tv_cost_coin"
            app:layout_constraintTop_toBottomOf="@+id/tv_equity_title"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="@dimen/text_size_18_dp"
            android:textColor="@color/color_tpp_primary_gray_c8"
            android:gravity="center"
            android:id="@+id/endorse_check"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_selected_no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view_mask"
        android:background="@color/color_tpp_primary_50_white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
