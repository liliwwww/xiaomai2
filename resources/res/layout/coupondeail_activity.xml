<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/list_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header_bar"
        android:background="@color/white"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_bar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:id="@+id/title_content"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/title_bar_space">
            <ImageView
                android:id="@+id/iv_left_icon"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_base_left_back"
                android:scaleType="center"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="@dimen/textsize_15"
                android:textColor="@color/color_222222"
                android:gravity="center"
                android:id="@+id/btn_header_right"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_coupon_exchange"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_222222"
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/damai_coupondeail_mycoupon"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/title_content"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/damai_list_bg_normal"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="6dp">
            <TextView
                android:textSize="@dimen/textsize_15"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/damai_coupondeail_basic_information"/>
            <View
                android:background="@color/searchRoutebg"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/light_black_444"
                android:id="@+id/tv_youhuiquan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:textColor="@color/light_black_444"
                android:id="@+id/tv_youhuiquan_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textsize_jianju_6"/>
            <TextView
                android:textColor="@color/light_black_444"
                android:id="@+id/tv_youhuiquan_hm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textsize_jianju_6"/>
            <TextView
                android:textColor="@color/light_black_444"
                android:id="@+id/tv_youhuiquan_yxq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textsize_jianju_6"/>
            <TextView
                android:textSize="@dimen/textsize_15"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:text="@string/damai_coupondeail_applicable_scope"/>
            <View
                android:background="@color/searchRoutebg"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/light_black_444"
                android:id="@+id/tv_shiyong_fanwei"
                android:paddingBottom="@dimen/margin_15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/damai_coupondeail_restricted_channel"
                android:lineSpacingExtra="12dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/ll_unbind"
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_ff2d79"
            android:gravity="center"
            android:id="@+id/tv_unbind"
            android:background="@drawable/bg_border_corner_ff_red"
            android:layout_width="190dp"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:text="转成优惠券码"/>
    </LinearLayout>
</LinearLayout>
