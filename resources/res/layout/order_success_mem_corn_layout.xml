<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="9dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/order_success_corn_item_bg"
        android:scaleType="fitXY"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/cornIcon"
        android:layout_width="51dp"
        android:layout_height="53.6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/order_success_corn_icon"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cornIcon"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/black"
            android:id="@+id/cornTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/tpp_gray_3"
            android:gravity="center_vertical"
            android:id="@+id/cornContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/member_main_title"
        android:gravity="center"
        android:id="@+id/cornAction"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:layout_marginRight="12dp"
        android:text="去看看"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
