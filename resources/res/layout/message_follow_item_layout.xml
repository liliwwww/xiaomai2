<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/follow_userinfo_layout"
    android:paddingTop="@dimen/margin_24dp"
    android:paddingBottom="21dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.DMAvatar
        android:id="@+id/follow_header_damai_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"/>
    <RelativeLayout
        android:paddingTop="@dimen/margin_6dp"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_18dp"
        android:layout_toRightOf="@+id/follow_header_damai_avatar"
        android:layout_centerVertical="true">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_111111"
                android:ellipsize="end"
                android:id="@+id/follow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海带妹妹Carrie"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_111111"
                android:ellipsize="end"
                android:id="@+id/follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="开始关注我了"
                android:singleLine="true"
                android:layout_toRightOf="@+id/follow_name"/>
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_aaaaaa"
            android:id="@+id/follow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:01"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
