<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/window_bg"
    android:paddingBottom="90dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ray_detail"
        android:background="#fff9e2"
        android:paddingLeft="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="#f8691d"
            android:gravity="center_vertical"
            android:id="@+id/ray_text"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ray_image_line"
            android:paddingLeft="18dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ray_image"
                android:background="@drawable/order_detail_guanbi"
                android:layout_width="12dp"
                android:layout_height="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/take_photo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_tip"
            android:background="@drawable/transparent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_projectimage"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/ll_tip">
            <ImageView
                android:id="@+id/project_image"
                android:layout_width="77dp"
                android:layout_height="103dp"
                android:src="@drawable/uikit_default_image_bg_gradient"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="103dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/color_333333"
                    android:ellipsize="end"
                    android:id="@+id/projectname_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/color_545454"
                        android:id="@+id/projecttime_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016年10月10日"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/color_545454"
                        android:id="@+id/projectaddress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="2016年10月10日"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/order_detail_price_rlyt"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="26dp"
                android:textColor="@color/color_333333"
                android:gravity="bottom"
                android:id="@+id/num_ticket_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/color_333333"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:text="@string/order_confirm_04"
                android:layout_toRightOf="@+id/num_ticket_text"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="26dp"
                    android:textColor="@color/main_color"
                    android:id="@+id/price_ticket_text"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="6"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/damai_cinemaorder_total_y"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/v_line_1"
            android:background="#dddddd"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"/>
        <cn.damai.trade.oldtradeorder.ui.orderdetail.detail.helper.MainListView
            android:id="@+id/order_new_detail_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/white"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/seat_add_view"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/has_seat_line_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="63dp">
            <ImageView
                android:background="@color/line_color_e5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/show_more_seat_view"
            android:background="@drawable/btn_banner_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1px"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="1px"
            android:layout_marginBottom="1px">
            <TextView
                android:background="@color/line_color_e5"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <ImageView
                android:id="@+id/seat_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dd_more_pic"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/order_detail_delivery_tip"/>
    <include layout="@layout/order_datail_header_new"/>
    <include layout="@layout/order_detail_invoice_tip"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/order_detail_send_llyt"
        android:background="@drawable/damai_list_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_333333"
                android:id="@+id/tv_title"
                android:paddingLeft="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_way"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/text_color_34"
                android:gravity="center_vertical"
                android:id="@+id/deliver_method_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/damai_orderdetailnew_express"
                android:singleLine="true"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_111111"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_order_address_modify"
                android:background="@drawable/bg_border_corner_dd"
                android:layout_width="96dp"
                android:layout_height="28dp"
                android:text="修改配送地址"/>
        </LinearLayout>
        <TextView
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"/>
        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/deliver_info_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_deliverway_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dd_express_icon"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#444444"
                        android:id="@+id/deliver_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"/>
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#444444"
                        android:id="@+id/deliver_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#444444"
                        android:id="@+id/deliver_email_text"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#444444"
                        android:id="@+id/deliver_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="#999999"
                android:id="@+id/deliver_descript_text"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1px"
                android:layout_marginRight="1px"
                android:layout_below="@+id/deliver_info_show"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliver_descript_text">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ypyz_add_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@color/text_ddd"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/color_333333"
                        android:paddingLeft="8dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购票人信息"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ypyz_add_show_view"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:id="@+id/ypyz_show_more_seat_view"
                        android:background="@drawable/btn_banner_bg"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="1px"
                        android:layout_marginTop="-1dp"
                        android:layout_marginRight="1px"
                        android:layout_marginBottom="1px">
                        <TextView
                            android:background="@color/line_color_e5"
                            android:layout_width="match_parent"
                            android:layout_height="1px"/>
                        <ImageView
                            android:id="@+id/ypyz_seat_image_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/dd_more_pic"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <include
        android:id="@+id/ll_paydetail"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/order_num"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_pay_method_tip"
        android:background="@drawable/damai_list_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_333333"
            android:paddingLeft="8dp"
            android:paddingTop="14dp"
            android:paddingBottom="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/include_pay_method_01"
            android:drawablePadding="6dp"/>
        <TextView
            android:background="@color/line_color_e5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_pay_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#444444"
            android:id="@+id/pay_desc_text"
            android:paddingLeft="8dp"
            android:paddingTop="14dp"
            android:paddingBottom="11dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_datail_new_content_04"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_trace"
        android:background="@drawable/damai_list_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/text_color_34"
            android:paddingLeft="8dp"
            android:paddingTop="14dp"
            android:paddingBottom="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_datail_content_08"
            android:drawableLeft="@drawable/h_bar_icon"
            android:drawablePadding="6dp"/>
        <TextView
            android:background="@color/line_color_e5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_trace_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btn_kefu"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/order_detail_kefu"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/kefu_icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/damai_projectdetail_damai_service_02"
                android:drawablePadding="2dp"
                android:layout_centerInParent="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
