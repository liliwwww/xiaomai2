<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_round_rect_gray_stroke_26000000_r12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/card_project_ui"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/project_pic"
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    app:borderRadius="4dp"
                    app:type="radial"/>
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/project_pic_tint"
                    android:background="#99ffffff"
                    android:layout_width="48dp"
                    android:layout_height="64dp"
                    app:borderRadius="4dp"
                    app:type="radial"/>
            </FrameLayout>
            <RelativeLayout
                android:paddingLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/color_333333"
                    android:ellipsize="end"
                    android:id="@+id/project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_toLeftOf="@+id/tv_btn"
                    android:layout_marginEnd="6dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_project_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/tv_btn"
                    android:layout_below="@+id/project_title"
                    android:layout_marginEnd="6dp">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_9C9CA5"
                        android:id="@+id/tv_project_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"/>
                    <cn.damai.uikit.banner.sub.RoundRadiusImageView
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="1dp"
                        android:src="@color/color_cccccc"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:r_round_radius="1dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_9C9CA5"
                        android:id="@+id/tv_project_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"/>
                    <cn.damai.uikit.banner.sub.RoundRadiusImageView
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="1dp"
                        android:src="@color/color_cccccc"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:r_round_radius="1dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_9C9CA5"
                        android:ellipsize="end"
                        android:id="@+id/tv_project_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_below="@+id/ll_project_info">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/status_with_price_ui"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <cn.damai.uikit.number.DMDigitTextView
                            android:textSize="14dp"
                            android:textColor="#4d4d56"
                            android:id="@+id/with_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"/>
                        <TextView
                            android:textSize="12dp"
                            android:textColor="#4d4d56"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元起"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#4d4d56"
                        android:id="@+id/status_price_pending"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格待定"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#4d4d56"
                        android:id="@+id/status_project_un_sale"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已下架"/>
                    <cn.damai.uikit.banner.sub.RoundRadiusImageView
                        android:id="@+id/project_tag_ui_line"
                        android:visibility="gone"
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="1dp"
                        android:src="@color/color_cccccc"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:r_round_radius="1dp"/>
                    <cn.damai.uikit.flowlayout.FlowLayout
                        android:orientation="horizontal"
                        android:id="@+id/project_tag_ui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutDirection="ltr"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/textsize_12"
                    android:textColor="#9999de"
                    android:gravity="center"
                    android:id="@+id/tv_btn"
                    android:background="@drawable/content_detail_artist_btn_bg"
                    android:layout_width="54dp"
                    android:layout_height="24dp"
                    android:text="去看看"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/item_relate_project_city_ui"/>
    </LinearLayout>
</FrameLayout>
