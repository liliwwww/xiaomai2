<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="5.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/project_perform_calendar_left_layout"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/project_perform_calendar_left_img"
            android:layout_width="@dimen/margin_8dp"
            android:layout_height="@dimen/margin_8dp"
            android:src="@drawable/project_calendar_left_enable_mark"/>
    </LinearLayout>
    <TextView
        android:textSize="13sp"
        android:textColor="@color/color_222222"
        android:id="@+id/project_perform_calendar_topbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="2017年5月"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/project_perform_calendar_right_layout"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/project_perform_calendar_right_img"
            android:layout_width="@dimen/margin_8dp"
            android:layout_height="@dimen/margin_8dp"
            android:src="@drawable/project_calendar_right_enable_mark"/>
    </LinearLayout>
</LinearLayout>
