<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_111111"
        android:paddingTop="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:text="初次驾到，多多关注"
        android:maxLines="2"/>
    <RelativeLayout
        android:id="@+id/ll_itemcell"
        android:background="@drawable/feeds_item_bg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="@dimen/margin_18dp">
        <ImageView
            android:id="@+id/feeds_item_playimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"/>
        <cn.damai.uikit.view.DMAvatar
            android:id="@+id/feeds_item_avatar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/feeds_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/goto_chat"
            android:layout_toRightOf="@+id/feeds_item_playimg"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_888888"
                android:ellipsize="end"
                android:gravity="left"
                android:id="@+id/feeds_item_playtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="2"
                android:maxLength="15"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_888888"
                android:ellipsize="end"
                android:gravity="left"
                android:id="@+id/feeds_item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6dp"
                android:text="def"
                android:maxLines="3"
                android:layout_toRightOf="@+id/feeds_item_playimg"
                android:layout_below="@+id/feeds_item_playtitle"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/user_vip_level"
            android:visibility="visible"
            android:layout_width="66dp"
            android:layout_height="17dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/feeds_item_title"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="right"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/feeds_interact_layout"/>
    </RelativeLayout>
</LinearLayout>
