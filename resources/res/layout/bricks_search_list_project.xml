<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_search_item"
    android:background="@drawable/bricks_list_bg"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.DMPosterView
            android:id="@+id/poster"
            android:layout_width="71dp"
            android:layout_height="101dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_project_right"
            android:paddingLeft="@dimen/margin_9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="84dp">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="@dimen/margin_15dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/tv_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/margin_3dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_score_follow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp">
                <TextView
                    android:textSize="11.5dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_project_follow_desc"
                    android:background="@drawable/bricks_bg_border_corner_8f3f"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_16dp"
                    android:layout_marginRight="6dp"
                    android:text="我想看"/>
                <View
                    android:id="@+id/tv_project_follow_desc_divider"
                    android:background="#e1e1e4"
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="6dp"/>
                <TextView
                    android:textSize="11.5dp"
                    android:textColor="@color/color_bricks_secondary_orange"
                    android:id="@+id/layout_score_preifx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="大麦评分"/>
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/color_bricks_secondary_orange"
                    android:id="@+id/layout_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"/>
                <TextView
                    android:textSize="11.5dp"
                    android:textColor="@color/color_pioneer_primary"
                    android:id="@+id/layout_score_postfix"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:contentDescription="只在大麦先锋版展示"
                    android:paddingStart="1dp"/>
                <View
                    android:id="@+id/tv_project_rank_mark"
                    android:background="#e1e1e4"
                    android:visibility="visible"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"/>
                <TextView
                    android:textSize="11.5dp"
                    android:textColor="@color/color_bricks_secondary_orange"
                    android:ellipsize="end"
                    android:id="@+id/tv_project_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
            <TextView
                android:textSize="11.5dp"
                android:textColor="#4d4d56"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/tv_project_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:singleLine="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:id="@+id/tv_project_address_info_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="11.5dp"
                        android:textColor="#4d4d56"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_project_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:singleLine="true"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#4d4d56"
                        android:id="@+id/tv_project_dis"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_project_address_info_block"
                    android:layout_alignParentBottom="true">
                    <com.alibaba.pictures.bricks.view.FlowLayout
                        android:id="@+id/fl_sales2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"/>
                    <FrameLayout
                        android:id="@+id/ll_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.alibaba.pictures.bricks.view.DMCommonPriceView
                            android:id="@+id/tv_project_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-3dp"/>
                        <TextView
                            android:textSize="@dimen/margin_12dp"
                            android:textColor="@color/color_9C9CA5"
                            android:gravity="bottom"
                            android:id="@+id/tv_yixiajia"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已下架"/>
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <com.alibaba.pictures.bricks.component.project.TimerView
        android:id="@+id/ll_timer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="@dimen/margin_4dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <include
            android:id="@+id/ll_search_bottom_div"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            layout="@layout/bricks_item_ededed_line"/>
    </RelativeLayout>
</LinearLayout>
