<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/base_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/mine_base_header_left">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/realname_error_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/realname_error"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_aaaaaa"
            android:gravity="center"
            android:id="@+id/realname_error_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_below="@+id/realname_error_img"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_aaaaaa"
            android:gravity="center"
            android:id="@+id/realname_error_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/realname_error_status"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/realname_error_btn_lly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_below="@+id/realname_error_msg">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_111111"
                android:gravity="center"
                android:id="@+id/realname_error_left_btn"
                android:background="@drawable/realname_error_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:layout_below="@+id/realname_error_status"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:id="@+id/realname_error_right_btn"
                android:background="@drawable/realname_error_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="确定"
                android:layout_below="@+id/realname_error_status"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/realname_error_reason_lly"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/realname_error_btn_lly">
            <View
                android:id="@+id/realname_error_line"
                android:background="@color/color_DDDDDD"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_18dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/margin_18dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_111111"
                android:id="@+id/realname_error_reason_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:text="失败原因："/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_111111"
                android:id="@+id/realname_error_reason_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:text="@string/realname_error_reason"
                android:lineSpacingExtra="@dimen/margin_9dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/main_color"
                android:id="@+id/realname_error_reason_detail_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_marginBottom="45dp"
                android:text="@string/realname_error_reason_detail"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
