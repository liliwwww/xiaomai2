<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.banner.sub.RoundRadiusImageView
        android:id="@+id/fixed_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:r_round_radius="8dp"
        app:r_stroke_color="#1a000000"
        app:r_stroke_width="1px"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:id="@+id/fixed_sub_title"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:maxLines="1"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/fixed_sub2_title"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_below="@+id/fixed_sub_title"/>
    <ImageView
        android:id="@+id/fixed_sub_img"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitEnd"/>
</RelativeLayout>
