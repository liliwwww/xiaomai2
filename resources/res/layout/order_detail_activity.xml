<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/window_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.baseview.abcpullrefresh.actionbarcompat.PullToRefreshLayout
        android:id="@+id/pull_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <FrameLayout xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.damai.trade.fab.ObservableScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <cn.damai.trade.fab.FloatingActionButton
                android:layout_gravity="bottom|right"
                android:id="@+id/iv_lingqian"
                android:visibility="gone"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="100dp"
                android:scaleType="centerInside"/>
        </FrameLayout>
    </cn.damai.baseview.abcpullrefresh.actionbarcompat.PullToRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_ok_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_cancel"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/cancel_order"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_submit"
                    android:background="@color/main_color"
                    android:paddingTop="8.5dp"
                    android:paddingBottom="9.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/order_datail_content_07"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_ok_replenishment"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="#dbdbdb"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="155dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/textsize_14"
                            android:textColor="@color/text_color_33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_datail_replenishment"/>
                        <TextView
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/main_color"
                            android:id="@+id/tv_replenishment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="@dimen/margin_18dp"
                            android:textColor="@color/main_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_datail_money"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/margin_18dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tv_pay_replenishment"
                        android:background="@drawable/bg_submit_button_normal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/order_datail_payment"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
