<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/city_pass_view"
        android:background="@android:color/white"
        android:paddingLeft="6dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="9dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="center"
            android:id="@+id/city_pass_close"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconf_close"/>
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/city_pass_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="5dp"
            app:actualImageScaleType="centerInside"
            app:failureImage="@drawable/citypass_icon"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@drawable/citypass_icon"
            app:placeholderImageScaleType="centerInside"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/common_color_1008"
            android:ellipsize="end"
            android:id="@+id/city_pass_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/common_text_color13"
            android:ellipsize="end"
            android:id="@+id/city_pass_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="9dp"
            android:textColor="@color/common_text_color13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/iconf_right_arrow"/>
    </LinearLayout>
    <View
        android:id="@+id/city_pass_line"
        android:background="@color/common_divider_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <FrameLayout
        android:id="@+id/btn_buy"
        android:background="@drawable/select_seat_bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="3dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            style="@style/select_seat_bottom">
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/buy_ticket_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tickets_confirm"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/buy_ticket_action_title"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
