<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cinema_list_recent_best_schedule_item_bg"
    android:paddingLeft="16dp"
    android:paddingRight="4dp"
    android:paddingBottom="17dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_shedule_item_time"
        android:layout_width="match_parent"
        android:layout_height="17dp"/>
    <RelativeLayout
        android:id="@+id/rl_shedule_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_shedule_item_time">
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_black"
            android:gravity="center"
            android:id="@+id/tv_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="4dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="bottom"
            android:id="@+id/tv_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="······"
            android:layout_toRightOf="@+id/tv_begin_time"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_black"
            android:gravity="center"
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_part"/>
    </RelativeLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fl_shedule_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/rl_shedule_item_time"
        app:alignItems="center"
        app:flexDirection="row"
        app:flexWrap="nowrap"
        app:justifyContent="space_between">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:justifyContent="flex_start">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/tv_film_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="10"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
            <View
                android:layout_width="12dp"
                android:layout_height="0dp"/>
        </com.google.android.flexbox.FlexboxLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/tpp_primary_red"
                android:gravity="center"
                android:id="@+id/tv_ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <TextView
        android:textSize="9dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/best_schedule_item_tag"
        android:background="@drawable/cinema_list_recent_best_schedule_item_tag"
        android:paddingLeft="2dp"
        android:paddingTop="1dp"
        android:paddingRight="2dp"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_alignRight="@+id/fl_shedule_info"/>
</RelativeLayout>
