<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_white_contracts"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_alignParentTop="true">
        <View
            android:id="@+id/title_bar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:background="@color/color_ffffff"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="20dp"
                android:textColor="@color/color_000000"
                android:gravity="center_vertical"
                android:id="@+id/mine_add_address_title_left_icon"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fanhui24"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_000000"
                android:gravity="center"
                android:id="@+id/trade_add_address_title_main_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常用观演人"
                android:layout_centerInParent="true"/>
            <View
                android:background="@color/base_head_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/add_contacts_tip"
        android:background="@drawable/realname_notice_bar_bg"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_9dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_below="@+id/top">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="16dp"
            android:textColor="#eb7609"
            android:id="@+id/ticklet_header_notice_icon"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="@string/iconfont_tishimian_"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_eb7609"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如已包含本次观演人，则无须再添加"
            android:lineSpacingExtra="@dimen/margin_2dp"/>
    </LinearLayout>
    <cn.damai.uikit.irecycler.IRecyclerView
        android:id="@+id/customer_irecyclerview"
        android:background="@drawable/activity_contracts_list_bg"
        android:paddingLeft="12dp"
        android:paddingTop="1dp"
        android:paddingRight="12dp"
        android:paddingBottom="1dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="70dp"
        android:layout_below="@+id/add_contacts_tip"
        android:overScrollMode="never"
        app:loadMoreEnabled="false"
        app:loadMoreFooterLayout="@null"
        app:refreshEnabled="false"/>
    <FrameLayout
        android:id="@+id/bottom"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:id="@+id/add_customer_btn"
            android:background="@drawable/damai_btn_rightbottom_sharp_corner_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:text="添加新观演人"/>
    </FrameLayout>
</RelativeLayout>
