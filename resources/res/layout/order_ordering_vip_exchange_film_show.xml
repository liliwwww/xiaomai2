<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/film_detail_enter"
    android:background="@color/tpp_gray_6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/profile_unit_view_bg"
        android:paddingLeft="@dimen/padding_12"
        android:paddingRight="@dimen/padding_12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="9dp"
        android:layout_marginRight="@dimen/margin_15">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/show_poster"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/padding_15dp"
            android:layout_marginBottom="@dimen/padding_15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:fadeDuration="0"
            app:failureImage="@color/long_video_price"
            app:placeholderImage="@color/long_video_price"
            app:roundedCornerRadius="3dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_center_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/btn_buy"
            android:layout_toEndOf="@+id/show_poster">
            <TextView
                android:textSize="@dimen/text_size_16_dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:id="@+id/film_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/second_line_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/tpp_gray_2"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/remark_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="@dimen/text_size_12_dp"
                    android:textColor="@color/common_text_color3"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="@dimen/text_size_12_dp"
                    android:textColor="@color/common_text_color3"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/wantcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/tpp_gray_2"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/wantcount_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <View
                    android:layout_gravity="center_vertical"
                    android:id="@+id/second_line_view"
                    android:background="@color/tpp_gray_5"
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="4.5dp"
                    android:layout_marginRight="4.5dp"/>
                <TextView
                    android:textSize="@dimen/text_size_12_dp"
                    android:textColor="@color/tpp_gray_2"
                    android:gravity="start"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/film_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/text_size_12_dp"
                android:textColor="@color/tpp_gray_2"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:id="@+id/film_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_buy"
            android:text="去看看"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@style/buy_button_style_small_vip_exchange"/>
    </RelativeLayout>
</FrameLayout>
