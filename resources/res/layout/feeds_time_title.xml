<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="16dp"
        android:textColor="@color/color_888888"
        android:gravity="center"
        android:id="@+id/feeds_item_date_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_shijian16"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_888888"
        android:id="@+id/feeds_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text=""
        android:layout_toRightOf="@+id/feeds_item_date_icon"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_888888"
        android:id="@+id/feeds_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1"
        android:layout_toRightOf="@+id/feeds_item_date"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:layout_gravity="right"
            android:id="@+id/bar_rating_title_desc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超预期"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/feeds_item_date"
            android:layout_centerVertical="true"/>
        <cn.damai.uikit.view.DMRatingBar
            android:layout_gravity="center"
            android:id="@+id/bar_rating_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="13.3dp"
            android:layout_marginLeft="@dimen/margin_6dp"
            ratingbar:isIndicator="true"
            ratingbar:showText="false"
            ratingbar:starCount="5"
            ratingbar:starDistance="1dp"
            ratingbar:starEmpty="@drawable/rating_empty"
            ratingbar:starFill="@drawable/rating_fill"
            ratingbar:starSize="16dp"/>
    </LinearLayout>
</LinearLayout>
