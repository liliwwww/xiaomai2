<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="12dp">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/color_pioneer_primary_black"
            android:id="@+id/channel_film_market_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="7dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/channel_film_market_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="13dp"
                android:textColor="#444b5b"
                android:id="@+id/channel_film_market_sub_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:maxLines="2"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_gravity="end|bottom"
        android:background="@drawable/bg_pioneer_popular_title"
        android:layout_width="24dp"
        android:layout_height="26dp"/>
</androidx.cardview.widget.CardView>
