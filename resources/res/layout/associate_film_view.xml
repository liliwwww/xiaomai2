<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/film_detail_enter"
    android:background="@drawable/video_list_film_enter_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/show_poster"
        android:layout_width="45dp"
        android:layout_height="63dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:fadeDuration="0"
        app:failureImage="@color/long_video_price"
        app:placeholderImage="@color/long_video_price"
        app:roundedCornerRadius="2dp"
        app:roundingBorderWidth="1px"/>
    <ImageView
        android:id="@+id/show_poster_mask"
        android:background="@color/transparent_black_033"
        android:visibility="gone"
        android:layout_width="42dp"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/btn_buy"
        android:layout_toRightOf="@+id/show_poster"
        android:layout_centerVertical="true">
        <com.taobao.movie.android.commonui.widget.HeadEllipsisLinearLayout
            android:gravity="center_vertical"
            android:id="@+id/name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/film_name"
                android:paddingTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/common_color_1008"
                android:layout_gravity="center_vertical"
                android:id="@+id/film_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:includeFontPadding="false"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/film_showing_hot"
                android:background="@drawable/film_showing_hot_bg"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="9dp"
                    android:textColor="#ff4d64"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_video_showing_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="正在热映"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/common_color_1008"
                android:layout_gravity="center_vertical"
                android:id="@+id/film_is_showing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
        </com.taobao.movie.android.commonui.widget.HeadEllipsisLinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/second_line_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/tpp_gray_3"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/remark_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/common_text_color3"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                style="@style/FilmRemark"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/common_text_color3"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/wantcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/FilmRemark"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/tpp_gray_3"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/wantcount_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/second_line_view"
                android:background="@color/tpp_gray_4"
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginRight="4.5dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/tpp_gray_3"
                android:layout_gravity="center_vertical"
                android:id="@+id/film_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_buy"
        android:padding="0dp"
        android:layout_marginRight="16dp"
        android:text="购票"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="@style/buy_button_style_small_7_3"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="54dp"
        android:textColor="@color/color_tpp_primary_gray_c8"
        android:id="@+id/tv_has_watched"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-9dp"
        android:layout_marginRight="-9dp"
        android:text="@string/icon_font_has_saw_film"
        android:layout_alignParentRight="true"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="@string/icon_font_arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
