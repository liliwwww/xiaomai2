<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/ll_score"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_score_star_cate"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp">
        <TextView
            android:textSize="11dp"
            android:textColor="@color/color_ffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/cate_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="0.5dp"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/score_lay"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/score_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cate_text_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/cate_text_div"
                android:background="@color/color_ffffff"
                android:visibility="gone"
                android:layout_width="1px"
                android:layout_height="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageView
                android:id="@+id/score_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/score_text_img"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="#ff8f3f"
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.0"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
