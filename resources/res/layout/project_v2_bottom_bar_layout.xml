<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="24dp"
    android:paddingTop="9dp"
    android:paddingRight="24dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="63dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/project_bottom_customer_follow_container_lv"
        android:background="?attr/bgDetailBottomBarLike"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/trade_project_detail_purchase_status_bar_container_fl"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.bricks.view.SeeAnimateViewDark
            android:id="@+id/project_bottom_want_to_see_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="3dp"
            app:lottie_repeatCount="0"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="15dp"
            android:textColor="@color/color_ffffff"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/project_item_bottom_follow_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/want_to_see"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/project_bottom_customer_block_follow_container_lv"
        android:background="@drawable/project_v2_bottom_block_want_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/trade_project_detail_purchase_status_bar_container_fl"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.bricks.view.SeeAnimateViewDark
            android:id="@+id/project_bottom_block_want_to_see_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="3dp"
            app:lottie_repeatCount="0"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="15dp"
            android:textColor="@color/color_ffffff"
            android:ellipsize="end"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/want_to_see"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/project_bottom_customer_follow_container_lv_concert_type"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/trade_project_detail_purchase_status_bar_container_fl"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/project_item_bottom_customer_service_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_22dp"
                android:textColor="#181818"
                android:layout_gravity="center_horizontal"
                android:id="@+id/project_item_bottom_customer_service_iconf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/iconfont_kefu"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_69717C"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_1dp"
                android:layout_marginBottom="10dp"
                android:text="帮助"/>
        </FrameLayout>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/project_item_bottom_want_to_see_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <cn.damai.uikit.view.SeeAnimateView
                android:layout_gravity="center"
                android:id="@+id/project_bottom_want_to_see_view_concert_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                app:lottie_repeatCount="0"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_69717C"
                android:ellipsize="end"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/project_item_bottom_follow_text_tv_concert_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/want_to_see"
                android:singleLine="true"/>
        </FrameLayout>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/project_item_bottom_block_want_to_see_fl_concert_type"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/project_bottom_block_want_icon"
                android:scaleType="centerInside"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#b1b2b4"
                android:ellipsize="end"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/want_to_see"
                android:singleLine="true"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/trade_project_detail_purchase_status_bar_container_fl"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintLeft_toRightOf="@+id/project_bottom_customer_follow_container_lv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</merge>
