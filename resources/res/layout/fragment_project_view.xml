<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bricks_primary_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/id_new_project_refresh"
        android:background="@color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="63dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_new_project_recycler"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/id_new_project_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/project_detail_title_bar"
            layout="@layout/project_detail_title_bar_layout"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/id_new_project_tabs"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            style="@style/Project_Tabs_Style"/>
        <View
            android:id="@+id/project_detail_title_bar_divider"
            android:background="@color/master_black_10"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
    <include
        android:id="@+id/project_bottom_container"
        layout="@layout/project_v2_bottom_layout"/>
    <cn.damai.rank.view.WantSeeGuideTips
        android:id="@+id/want_see_guide_tips"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="@dimen/margin_9dp"
        android:layout_marginEnd="@dimen/margin_9dp"/>
    <FrameLayout
        android:id="@+id/id_new_project_popup_layer_container"
        android:background="#99000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/id_new_skeleton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/id_new_project_not_exist_stub"
        android:layout="@layout/trade_project_detail_not_exist_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
