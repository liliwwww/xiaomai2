<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bottom_bar_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_18dp"
        android:textColor="@color/white"
        android:id="@+id/yk_player_bf_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_18dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:text="@string/iconfont_bofang22"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/white"
        android:id="@+id/yk_bf_allready_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="4.5dp"
        android:text="00:00"
        android:layout_toRightOf="@+id/yk_player_bf_btn"
        android:layout_centerVertical="true"/>
    <SeekBar
        android:id="@+id/yk_player_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/yk_bf_all_time"
        android:layout_toRightOf="@+id/yk_bf_allready_time"
        android:layout_centerVertical="true"
        android:paddingStart="7.5dp"
        android:paddingEnd="7.5dp"
        style="@style/CustomSeekbarStyle"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/white"
        android:id="@+id/yk_bf_all_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.5dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:text="00:00"
        android:layout_toLeftOf="@+id/yk_player_voice_btn"
        android:layout_centerVertical="true"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_18dp"
        android:textColor="@color/white"
        android:id="@+id/yk_player_voice_btn"
        android:layout_width="@dimen/margin_18dp"
        android:layout_height="@dimen/margin_18dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:text="@string/iconfont_shengyinkai22"
        android:layout_toLeftOf="@+id/yk_player_fullscreen_btn"
        android:layout_centerVertical="true"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_18dp"
        android:textColor="@color/white"
        android:id="@+id/yk_player_fullscreen_btn"
        android:layout_width="@dimen/margin_18dp"
        android:layout_height="@dimen/margin_18dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:text="@string/iconfont_fangda22"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
