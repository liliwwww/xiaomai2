<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ticklet_list_calendar_tip"
        android:background="@drawable/bg_ticklet_list_calendar_tip"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="?attr/tickletListHeadIconColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_tixing18"
            android:layout_marginStart="14dp"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="?attr/tickletListHeadColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="点这里添加日历提醒"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_6dp"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="?attr/tickletListHeadColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去添加"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_11dp"
            android:textColor="?attr/tickletListHeadIconColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:text="@string/iconfont_youjiantou12"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ticklet_list_vip_tip"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="?attr/tickletListHeadColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票根纪念册"
            android:layout_marginEnd="-2dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textColor="?attr/tickletListHeadIconColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou16"/>
    </LinearLayout>
</RelativeLayout>
