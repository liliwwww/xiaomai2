<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingRight="@dimen/margin_11dp"
    android:paddingBottom="@dimen/margin_18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_project_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:maxLines="1"
            android:lineSpacingExtra="3dp"/>
        <RelativeLayout
            android:id="@+id/rl_delay_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_9dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="13dp"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:id="@+id/tv_project_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:maxLines="2"
                android:layout_centerVertical="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_FF2D79"
                android:id="@+id/tv_delay_remind"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/iconfont_shuoming12"
                android:layout_toRightOf="@+id/tv_project_time"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tv_project_city_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            android:text="city_venue"
            android:singleLine="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#ff901c"
            android:id="@+id/empower_order_tips"
            android:background="@drawable/bg_empower_order"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/empower_order_tips"
            android:paddingStart="4dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:id="@+id/tv_sale_item_label"
            android:background="@drawable/bg_border_corner_99"
            android:visibility="gone"
            android:layout_width="52dp"
            android:layout_height="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_2dp"/>
        <include layout="@layout/order_list_item_project_price"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_000000"
            android:layout_gravity="right"
            android:id="@+id/tv_order_status"
            android:paddingTop="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_4dp"
            android:paddingBottom="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"/>
        <FrameLayout
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_11dp"
            android:layout_marginTop="@dimen/margin_1dp">
            <ImageView
                android:background="@drawable/show_bg"
                android:layout_width="68dp"
                android:layout_height="88dp"/>
            <ImageView
                android:background="@drawable/bg_image_line"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_1dp"
                android:layout_marginRight="@dimen/margin_4dp"/>
            <cn.damai.uikit.view.RoundImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_project_image"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_1dp"
                android:layout_marginRight="@dimen/margin_4dp"
                app:borderRadius="3dp"
                app:type="radial"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
