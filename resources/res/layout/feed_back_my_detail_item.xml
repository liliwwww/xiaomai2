<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="18dp"
    android:paddingBottom="22dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="14dp"
        android:paddingBottom="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_111111"
            android:id="@+id/tv_content"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_3dp"/>
        <cn.damai.uikit.flowlayout.FlowLayout
            android:id="@+id/ll_image_container"
            android:paddingLeft="@dimen/margin_12dp"
            android:paddingTop="4dp"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_888888"
            android:id="@+id/tv_time"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_12dp"
            android:paddingRight="@dimen/margin_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/margin_3dp"/>
    </LinearLayout>
</LinearLayout>
