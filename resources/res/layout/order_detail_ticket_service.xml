<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingTop="@dimen/margin_13dp"
    android:paddingRight="@dimen/margin_15dp"
    android:paddingBottom="@dimen/margin_15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_service"
            android:layout_marginEnd="7dp"/>
        <cn.damai.uikit.flowlayout.FlowLayout
            android:orientation="horizontal"
            android:id="@+id/fl_ticket_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layoutDirection="ltr"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#959aa5"
            android:id="@+id/fl_ticket_service_desctv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="购买须知"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/fl_ticket_service_descarrow"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
</LinearLayout>
