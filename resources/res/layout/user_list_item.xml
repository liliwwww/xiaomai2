<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">
    <RelativeLayout
        android:id="@+id/rl_content_wrapper"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享图片"
            android:maxLines="4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:lineSpacingMultiplier="1.4"/>
        <cn.damai.uikit.view.NineGridlayout
            android:id="@+id/ninelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_comment"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ff1268"
            android:gravity="center"
            android:id="@+id/user_feed_fabuquanzi"
            android:background="@drawable/user_feeds_quanzitxt_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:text=""
            android:layout_below="@+id/ninelayout"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="right"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/feeds_interact_layout"/>
    </RelativeLayout>
</LinearLayout>
