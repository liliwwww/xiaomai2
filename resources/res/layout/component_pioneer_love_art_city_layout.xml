<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.pictures.bricks.view.BricksStrokeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_pioneer_home_feed_love_art_city_bg"
    android:paddingTop="@dimen/resource_size_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pioneer_home_feed_love_art_city_title"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/sub_title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_5"
        android:layout_below="@+id/title_icon"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/resource_size_12"
        android:paddingEnd="@dimen/resource_size_12">
        <TextView
            android:textSize="@dimen/resource_size_8"
            android:textColor="@color/white"
            android:gravity="bottom"
            android:id="@+id/sub_title_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/white"
            android:gravity="bottom"
            android:id="@+id/sub_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="true"/>
        <TextView
            android:textSize="@dimen/resource_size_8"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="bottom"
            android:id="@+id/sub_title_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="true"/>
    </LinearLayout>
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:id="@+id/icon_lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_12"
        android:src="@drawable/ic_pioneer_home_feed_love_art_city_place_holder"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <FrameLayout
        android:id="@+id/action"
        android:background="@drawable/bg_feed_love_art_city_btn"
        android:layout_width="@dimen/resource_size_104"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/resource_size_62"
        android:layout_below="@+id/sub_title_lay"
        android:layout_centerHorizontal="true">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_16"
            android:textColor="#6674ff"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去看看"/>
    </FrameLayout>
</com.alibaba.pictures.bricks.view.BricksStrokeRelativeLayout>
