<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bricks_subgroup_banner_bg"
    android:layout_width="152dp"
    android:layout_height="144dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="86dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/image_item"
            android:layout_width="152dp"
            android:layout_height="86dp"
            android:scaleType="centerCrop"
            app:failureImage="@drawable/bricks_uikit_default_image_bg_grey"
            app:placeholderImage="@drawable/bricks_uikit_default_image_bg_grey"
            app:roundedCornerRadius="6dp"
            app:use565="true"/>
        <com.alibaba.pictures.bricks.view.RCRelativeLayoutView
            android:id="@+id/image_item_bg"
            android:visibility="gone"
            android:layout_width="152dp"
            android:layout_height="86dp"
            app:clip_background="true"
            app:round_corner_top_left="6dp"
            app:round_corner_top_right="6dp"/>
        <com.alibaba.pictures.bricks.view.DMPosterView
            android:layout_gravity="center"
            android:id="@+id/poster_rank"
            android:visibility="gone"
            android:layout_width="56dp"
            android:layout_height="74dp"/>
    </FrameLayout>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/tv_desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:singleLine="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tv_desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="6dp"
        android:singleLine="true"/>
</LinearLayout>
