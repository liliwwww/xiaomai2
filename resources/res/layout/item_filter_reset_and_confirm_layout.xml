<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_rect_bottom_cor_12_solid_white"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/item_filter_reset"
        android:background="@drawable/shape_rect_corners_24_stroke_b2b2b2_solid_white"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:text="重置"
        android:layout_weight="1"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/item_filter_confirm"
        android:background="@drawable/shape_rect_corners_24_"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:text="确定"
        android:layout_weight="2"/>
</LinearLayout>
