<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/delete_customer_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textColor="#666666"
            android:gravity="center"
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:text="您是否确认删除该条信息？删除后无法恢复"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/line"
            android:background="@color/color_e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tips"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line">
            <TextView
                android:textSize="13dp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/delete_customer_cancle"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="取消"
                android:layout_weight="1"/>
            <View
                android:background="@color/color_e7e7e7"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="13dp"
                android:textColor="#ff1268"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/delete_customer_confirm"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="确定"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
