<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/coupons_container"
    android:layout_width="match_parent"
    android:layout_height="49dp">
    <TextView
        android:textSize="14dp"
        android:textColor="#333333"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:gravity="center"
        android:id="@+id/tv_ext_btn"
        android:background="@drawable/bricks_coupon_cancel_btn"
        android:layout_width="66dp"
        android:layout_height="25dp"
        android:text="退款"
        android:layout_marginEnd="9dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#ff2869"
        android:gravity="center"
        android:id="@+id/tv_action_btn"
        android:background="@drawable/bricks_coupon_btn"
        android:layout_width="66dp"
        android:layout_height="25dp"
        android:text="到店使用"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:id="@+id/tv_des"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/right_arrow"
        android:visibility="gone"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/bricks_order_detail_right_arrow"
        android:layout_marginStart="3.5dp"/>
</LinearLayout>
