<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/resource_size_9"
    android:paddingBottom="@dimen/resource_size_9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/resource_size_15"
    android:layout_marginRight="@dimen/resource_size_15">
    <View
        android:background="@drawable/ticket_trip_divider_dash_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/bricks_999999"
        android:id="@+id/id_trip_scrip_divider_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_3"
        android:layout_marginRight="@dimen/resource_size_3"/>
    <View
        android:background="@drawable/ticket_trip_divider_dash_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"/>
</LinearLayout>
