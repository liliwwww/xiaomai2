<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_question_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/add_discuss_layout"
        android:layout_width="77dp"
        android:layout_height="82dp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/add_question_layout"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/dialog_send_discuss_btn"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:src="@drawable/send_discuss_btn"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发讨论"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/add_question_layout"
        android:layout_width="77dp"
        android:layout_height="82dp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/add_close_layout"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/dialog_add_question_btn"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:src="@drawable/add_question_icon"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提问题"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/add_close_layout"
        android:background="@drawable/close_icon_bg"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginBottom="53dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#ff3069"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/add_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/iconf_film_close_icon"/>
    </FrameLayout>
</RelativeLayout>
