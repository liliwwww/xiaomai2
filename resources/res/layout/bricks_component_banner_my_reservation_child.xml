<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_bricks_reservation_artist_layout"
        android:background="@drawable/bricks_icon_my_reservation_circle"
        android:layout_width="71dp"
        android:layout_height="71dp">
        <View
            android:background="@drawable/bricks_component_reservation_artist_ring"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerInParent="true"/>
        <com.alibaba.pictures.bricks.view.RoundImageView
            android:id="@+id/id_bricks_reservation_artist_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/id_bricks_reservation_artist_name"
            android:background="@drawable/bricks_component_reservation_artist_name_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:maxWidth="55dp"
            android:minWidth="42dp"
            android:lines="1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id_bricks_reservation_project_post_layout"
        android:background="@drawable/bricks_icon_my_reservation_circle"
        android:visibility="gone"
        android:layout_width="71dp"
        android:layout_height="71dp">
        <com.alibaba.pictures.bricks.view.RoundRadiusImageView
            android:id="@+id/id_bricks_reservation_project_post_view"
            android:layout_width="49dp"
            android:layout_height="66dp"
            android:src="@drawable/bricks_uikit_default_image_bg_gradient"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:r_round_radius="6dp"
            app:r_stroke_color="#1a000000"
            app:r_stroke_width="0.5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/id_bricks_reservation_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/id_bricks_reservation_project_name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:maxLines="2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp">
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="11dp"
                    android:textColor="#2e333e"
                    android:id="@+id/id_bricks_reservation_rmb_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"/>
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="15dp"
                    android:textColor="#2e333e"
                    android:gravity="center_vertical"
                    android:id="@+id/id_bricks_reservation_rmb_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"/>
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="12dp"
                    android:textColor="#2e333e"
                    android:gravity="center_vertical"
                    android:id="@+id/id_bricks_reservation_price_postfix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="0.5dp"/>
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="8dp"
                    android:textColor="#66000000"
                    android:id="@+id/id_bricks_reservation_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/iconfont_guanbi24"/>
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="15dp"
                    android:textColor="#2e333e"
                    android:gravity="center_vertical"
                    android:id="@+id/id_bricks_reservation_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="12dp"
                    android:textColor="#2e333e"
                    android:gravity="center_vertical"
                    android:id="@+id/id_bricks_reservation_count_postfix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="0.5dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/id_bricks_reservation_project_tag"
                android:layout_width="97dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
