<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#777777"
    android:layout_width="375dp"
    android:layout_height="300dp">
    <ImageView
        android:id="@+id/share_page_projectbg"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:scaleType="fitXY"
        android:contentDescription="TODO"/>
    <ImageView
        android:id="@+id/xxx"
        android:visibility="gone"
        android:layout_width="1dp"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:background="#f8f8f8"
        android:layout_width="match_parent"
        android:layout_height="161dp">
        <TextView
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/share_page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:maxLines="2"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/share_page_title"
            android:layout_alignParentBottom="true">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="30dp"
                android:textColor="#ff2869"
                android:id="@+id/share_wx_img_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20dp"
                android:textColor="#999999"
                android:id="@+id/share_wx_img_originalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:textSize="20dp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:gravity="right"
                android:id="@+id/share_wx_img_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
