<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.pictures.bricks.view.AttachFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/item_category_ball_icon_container"
        android:background="@drawable/bg_component_corner_card"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grid_container"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
    </FrameLayout>
</com.alibaba.pictures.bricks.view.AttachFrameLayout>
