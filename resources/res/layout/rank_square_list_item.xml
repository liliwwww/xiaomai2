<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_21dp"
    android:paddingTop="9dp"
    android:paddingRight="@dimen/margin_21dp"
    android:paddingBottom="@dimen/margin_9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_9dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/image_project"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:src="@drawable/uikit_default_image_bg_gradient"
            android:scaleType="fitXY"
            app:borderRadius="6dp"
            app:type="radial"/>
        <ImageView
            android:id="@+id/icon_index"
            android:layout_width="@dimen/margin_16dp"
            android:layout_height="@dimen/margin_16dp"
            android:layout_alignBottom="@+id/image_project"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/tv_rank_name"
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开心麻花"
            android:singleLine="true"
            android:layout_toRightOf="@+id/image_project"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:ellipsize="end"
            android:id="@+id/tv_rank_desc"
            android:paddingLeft="@dimen/margin_12dp"
            android:paddingTop="@dimen/margin_3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:text="最爆笑的解压话剧"
            android:singleLine="true"
            android:layout_toRightOf="@+id/image_project"
            android:layout_below="@+id/tv_rank_name"/>
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_project"
            android:layout_alignBottom="@+id/image_project">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="10dp"
                android:textColor="@color/color_ff2d79"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@+id/tv_money_mark"
                android:paddingLeft="@dimen/margin_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="@color/color_ff2d79"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="690"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#9c9ca5"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/margin_3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起"/>
        </LinearLayout>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="12dp"
            android:textColor="@color/color_ff2d79"
            android:id="@+id/tv_money_mark_unknown"
            android:paddingLeft="@dimen/margin_12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格待定"
            android:layout_toRightOf="@+id/image_project"
            android:layout_alignBottom="@+id/image_project"/>
    </RelativeLayout>
    <View
        android:id="@+id/bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_9dp"/>
</LinearLayout>
