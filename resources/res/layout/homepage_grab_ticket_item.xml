<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="12dp"
        android:textColor="#ff2869"
        android:gravity="center_vertical"
        android:id="@+id/homepage_grab_ticket_item_heightlight_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:id="@+id/homepage_grab_ticket_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:layout_weight="1"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_000000"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/iconfont_youjiantou12"/>
</LinearLayout>
