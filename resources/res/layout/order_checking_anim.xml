<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#7e000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:id="@+id/order_checking_top_lottiebg"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/order_check_top_bglight"/>
    <RelativeLayout
        android:id="@+id/order_checking_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/order_checking_content"
            android:background="@drawable/order_dialog_checking_bg"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="21dp"
                android:textColor="#2e333e"
                android:gravity="center"
                android:id="@+id/order_checking_top_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:layout_marginBottom="24dp"
                android:text="恭喜您下单成功！"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/order_checking_content_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/order_checking_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_below="@+id/order_checking_content">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#2e333e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在跳转支付"/>
                <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                    android:id="@+id/order_checking_bottom_loading"
                    android:visibility="visible"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/order_check_loading"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/order_checking_bottom_progress"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="40"
                android:indeterminate="false"
                style="@style/OrderProgressBar"/>
        </LinearLayout>
        <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
            android:id="@+id/order_checking_top_lottie"
            android:visibility="visible"
            android:layout_width="325dp"
            android:layout_height="174dp"
            android:layout_marginBottom="-76dp"
            android:layout_above="@+id/order_checking_content"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/order_check_top_bg"/>
    </RelativeLayout>
</RelativeLayout>
