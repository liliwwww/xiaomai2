<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="10.5dp"
    android:paddingTop="13dp"
    android:paddingRight="7.5dp"
    android:paddingBottom="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/date_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:includeFontPadding="false"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_gravity="center"
        android:id="@+id/special_schedule_tag_view"
        android:visibility="visible"
        android:layout_width="34dp"
        android:layout_height="11dp"
        android:layout_marginLeft="3dp"
        android:maxWidth="45dp"
        android:text="特殊场"/>
    <com.taobao.movie.android.commonui.widget.RoundedTextView
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/star_tag_view"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="3dp"
        android:text="星"
        app:background_color="@color/tpp_secondary_purple"
        app:padding_horizontal="0"
        app:padding_vertical="0"
        app:round_radius="2"
        app:round_radius_unit="dp"
        app:round_type="fill"/>
    <com.taobao.movie.android.commonui.widget.RoundedTextView
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tag_view"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="3dp"
        android:text="惠"
        app:background_color="@color/tpp_primary_red"
        app:padding_horizontal="0"
        app:padding_vertical="0"
        app:round_radius="2"
        app:round_radius_unit="dp"
        app:round_type="fill"/>
    <com.taobao.movie.android.commonui.widget.RoundedTextView
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/pre_schedule_tag_view"
        android:visibility="gone"
        android:layout_width="26dp"
        android:layout_height="13dp"
        android:layout_marginLeft="3dp"
        android:text="点映"
        app:background_color="@color/common_color_1049"
        app:padding_horizontal="0"
        app:padding_vertical="0"
        app:round_radius="2"
        app:round_radius_unit="dp"
        app:round_type="fill"/>
</LinearLayout>
