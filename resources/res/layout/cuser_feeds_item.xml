<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_comment_luxury"
            android:visibility="gone"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_21dp"
            android:src="@drawable/comment_luxury_icon"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_21dp"
            android:layout_marginTop="@dimen/margin_18dp"
            android:layout_marginRight="@dimen/margin_21dp"
            android:text=""
            android:maxLines="4"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <cn.damai.uikit.view.NineGridlayout
        android:id="@+id/ninelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="21dp"
        android:layout_below="@+id/tv_comment"/>
    <RelativeLayout
        android:id="@+id/ll_itemcell"
        android:background="@drawable/mine_brand_card_border"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/margin_21dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_21dp">
        <cn.damai.uikit.view.RoundImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/feeds_item_playimg"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:borderRadius="6dp"
            app:type="radial"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/mine_user_feed_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/feeds_item_playimg"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="14dp"
                android:textColor="#111111"
                android:ellipsize="end"
                android:id="@+id/feeds_item_playtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#9c9ca5"
                android:ellipsize="end"
                android:id="@+id/feeds_item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:layout_below="@+id/mine_user_feed_mid_text"/>
        </LinearLayout>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/mine_user_feed_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="@string/iconfont_youjiantou24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="right"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/feeds_interact_layout"/>
    </RelativeLayout>
</LinearLayout>
