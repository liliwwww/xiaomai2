<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/status_bar_space"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <FrameLayout
        android:id="@+id/pull_to_refresh_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/pull_to_refresh_anim_view"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/pull_to_refresh_default_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/uikit_pull_to_refresh_logo_0"/>
    </FrameLayout>
</LinearLayout>
