<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simplified_business_root_view"
    android:background="@color/color_tpp_primary_60_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/simplified_business_top_view"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:layout_constraintBottom_toTopOf="@+id/simplified_business_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.commonui.widget.MoCardView
        android:id="@+id/simplified_business_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simplified_business_top_view"
        app:layout_constraintVertical_weight="1"
        app:mocard_background_radius_leftbottom="0dp"
        app:mocard_background_radius_lefttop="20dp"
        app:mocard_background_radius_rightbottom="0dp"
        app:mocard_background_radius_righttop="20dp"
        app:mocard_model="clip"/>
</androidx.constraintlayout.widget.ConstraintLayout>
