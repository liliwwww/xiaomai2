<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_price"
        android:background="@drawable/sku_perform_bg"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/perform_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_666666"
            android:id="@+id/tv_preferential"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:lineSpacingExtra="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="top|left"
        android:orientation="vertical"
        android:id="@+id/layout_quehuo"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp">
        <TextView
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_quehuo"
            android:background="@drawable/sku_common_tag_hui_bg"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缺货登记"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_quehuo_sanjiao"
            android:background="@color/color_eeeeee"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_marginLeft="-9.5dp"
            android:layout_marginTop="-6.5dp"
            android:rotation="155"/>
    </LinearLayout>
</FrameLayout>
