<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="46dp">
    <TextView
        android:textSize="20dp"
        android:textColor="@color/color_000000"
        android:id="@+id/tv_project_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="9dp"
        android:text="演出"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/common_title_morell"
        android:background="@drawable/module_title_more_bg"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/margin_21dp"
        android:layout_marginBottom="9dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/common_title_morell_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:includeFontPadding="false"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou_"/>
    </LinearLayout>
</RelativeLayout>
