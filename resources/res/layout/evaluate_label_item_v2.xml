<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:paddingLeft="@dimen/resource_size_12"
    android:paddingTop="@dimen/margin_4dp"
    android:paddingRight="@dimen/resource_size_12"
    android:paddingBottom="@dimen/margin_4dp"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/resource_size_27"
    android:minWidth="54dp">
    <ImageView
        android:id="@+id/label_icon"
        android:layout_width="@dimen/resource_size_20"
        android:layout_height="@dimen/resource_size_20"
        android:src="@drawable/ic_evaluate_ai"/>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/label_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:singleLine="true"/>
</LinearLayout>
