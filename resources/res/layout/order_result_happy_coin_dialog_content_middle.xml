<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="367dp">
    <View
        android:id="@+id/image_bg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    <com.taobao.movie.android.app.order.ui.widget.HappyCoinDialogContain
        android:id="@+id/happy_coin_dialog_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/close"
        android:background="@drawable/happy_coin_dialog_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/image_bg"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/order_result_item_background"
        android:layout_width="270dp"
        android:layout_height="118dp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <com.taobao.movie.android.app.order.ui.widget.HappyCoinDialogDouble
            android:id="@+id/happy_coin_dialog_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
