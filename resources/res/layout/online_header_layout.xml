<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_15dp">
    <cn.damai.baseview.RCFrameLayoutLayoutView
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="21dp"
        app:round_corner="12dp"
        app:stroke_color="#1a000000"
        app:stroke_width="1dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="188dp">
            <ImageView
                android:id="@+id/image_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <cn.damai.player.DMVideoPlayer
                android:id="@+id/player"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_gravity="bottom"
                android:id="@+id/view_bg"
                android:background="@drawable/live_header_black_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/player_video_btn"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yk_player_bofang_btn"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:id="@+id/layout_star"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <cn.damai.tetris.component.online.mvp.HeadPicListView
                    android:id="@+id/piclist_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/color_white"
                    android:ellipsize="end"
                    android:id="@+id/star_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxEms="9"
                    android:singleLine="true"/>
                <cn.damai.uikit.view.DMLRLabelView
                    android:id="@+id/star_label_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="63dp"
                android:layout_height="36dp"
                android:src="@drawable/online_logo"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="188dp">
            <include layout="@layout/online_timer_layout"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:id="@+id/tv_title"
                    android:paddingTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btn_buy"
                    android:background="@drawable/online_btn_bg"
                    android:visibility="visible"
                    android:layout_width="64dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="-5dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="bottom|right"
            android:id="@+id/liwu_view"
            android:visibility="visible"
            android:layout_width="45dp"
            android:layout_height="118dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:lottie_repeatCount="-1"/>
    </cn.damai.baseview.RCFrameLayoutLayoutView>
</FrameLayout>
