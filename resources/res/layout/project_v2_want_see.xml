<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_border_corner_white_9"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/project_want_see_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="104dp"
            android:layout_height="36dp"
            android:src="?attr/bgDetailLikeTitleV2"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/want_see_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="33dp"
                    android:textColor="?attr/bgDetailLikeTextSelect"
                    android:id="@+id/want_see_number_dtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#2e333e"
                    android:gravity="bottom"
                    android:id="@+id/want_see_number_suffix_dtv"
                    android:paddingLeft="3dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:includeFontPadding="false"
                    android:layout_toRightOf="@+id/want_see_number_dtv"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/wanna_see_btn"
                android:layout_width="64dp"
                android:layout_height="28dp">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="14dp"
                    android:textColor="?attr/bgDetailColorWhite171717"
                    android:id="@+id/wanna_see_tag_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="@string/iconfont_xianxin24"/>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="12dp"
                    android:id="@+id/wanna_see_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
        <ViewFlipper
            android:id="@+id/want_see_view_flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:inAnimation="@anim/bricks_damai_marquee_in"
            android:outAnimation="@anim/bricks_damai_marquee_out"
            android:layout_below="@+id/want_see_ll"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/want_see_rank_list_ll"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.moimage.MoImageView
                android:background="#26959aa5"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/want_see_rank_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/want_see_rank_pic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="?attr/bgDetailScoreBangLogo"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#2e333e"
                        android:id="@+id/want_see_rank_list_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="话剧人气榜"/>
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="12dp"
                        android:textColor="#2e333e"
                        android:id="@+id/want_see_rank_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/want_see_rank_list_text"
                        android:layout_alignBaseline="@+id/want_see_rank_list_text"/>
                </RelativeLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="10dp"
                    android:textColor="#959aa5"
                    android:id="@+id/want_see_rank_list_iconf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_youjiantou12"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
