<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingTop="@dimen/margin_12dp"
    android:paddingRight="@dimen/margin_15dp"
    android:paddingBottom="@dimen/margin_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_pay"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_9dp"
        android:layout_marginRight="9dp"
        android:layout_toLeftOf="@+id/cb_pay_check"
        android:layout_toRightOf="@+id/iv_pay"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/tv_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#ff1268"
            android:ellipsize="end"
            android:id="@+id/text_promotion"
            android:background="@drawable/bg_border_corner_fa_trans"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:paddingRight="6dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_9dp"
            android:text="优惠"
            android:maxLines="1"/>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_18dp"
        android:textColor="@color/color_FF2D79"
        android:id="@+id/cb_pay_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_danxuanweixuanzhong24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
