<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_border_order_notice"
    android:padding="18dp"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/header_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_tixing24"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公告"/>
    </LinearLayout>
    <cn.damai.uikit.view.NoticeEllipsisTextView
        android:textSize="14dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/project_header_notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:layout_below="@+id/header_title_layout"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/white"
        android:id="@+id/project_header_notice_arrow"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_youjiantouxiao12"
        android:includeFontPadding="false"
        android:layout_alignBottom="@+id/project_header_notice_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
