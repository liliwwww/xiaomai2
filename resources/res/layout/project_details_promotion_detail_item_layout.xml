<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="#fff8f8f8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp">
        <TextView
            android:textSize="10sp"
            android:textColor="@color/main_color"
            android:gravity="center"
            android:background="@drawable/project_details_tag_bg_shape"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:text="@string/project_huiyuan"
            android:singleLine="true"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/main_color"
            android:gravity="center"
            android:background="@drawable/project_details_tag_bg_shape"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:text="APP"
            android:maxLines="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/main_color"
                android:gravity="center"
                android:id="@+id/promotion_name"
                android:background="@drawable/project_details_tag_bg_shape"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:minWidth="27dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="13sp"
                android:textColor="#999999"
                android:id="@+id/promotion_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_below="@+id/promotion_name"
                android:lineSpacingExtra="3.5dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
