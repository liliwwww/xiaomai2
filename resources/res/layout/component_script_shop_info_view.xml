<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="18dp"
                android:textColor="@color/bricks_2e333f"
                android:ellipsize="end"
                android:id="@+id/id_sm_shop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/id_sm_shop_auth"
                android:visibility="gone"
                android:layout_width="66dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/bricks_icon_shope_rp"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/id_sm_score_ext_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/id_sm_shop_open_evaluate_btn"
                    android:paddingTop="2dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/id_sm_shop_score_star_ui"
                        android:paddingRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.alibaba.pictures.bricks.view.FiveStarView
                            android:id="@+id/id_sm_shop_star_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            app:one_star_size="12dp"/>
                        <com.alibaba.pictures.bricks.view.DigitTextView
                            android:textSize="13dp"
                            android:textColor="@color/color_score_font"
                            android:id="@+id/id_sm_shop_score_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="11dp"
                        android:textColor="@color/bricks_2e333f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详情"/>
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/bricks_icon_right_black_arrow"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/bricks_2e333f"
                    android:id="@+id/id_sm_shop_price_and_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1502人去玩过 | ￥130/人"/>
            </LinearLayout>
            <TextView
                android:textSize="11dp"
                android:textColor="@color/bricks_2e333f"
                android:ellipsize="end"
                android:id="@+id/id_sm_shop_ext_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lines="1"/>
        </LinearLayout>
        <View
            android:background="#1a000000"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="11dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/id_sm_shop_info_entrance"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_2e333f"
                    android:ellipsize="end"
                    android:id="@+id/id_sm_shop_ext_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:lines="1"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/id_sm_shop_tag_flex2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:flexWrap="wrap"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/id_sm_shop_entrance_arrow"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/bricks_icon_right_black_arrow"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <View
            android:background="#1a000000"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_2e333f"
                android:ellipsize="end"
                android:id="@+id/id_sm_shop_addr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_weight="1"
                android:lineSpacingExtra="2dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/id_sm_shop_call_ui"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/bricks_icon_call"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_9c9ca5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="联系商家"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/id_sm_shop_loc_ui"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/bricks_icon_location"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_9c9ca5"
                    android:id="@+id/id_sm_shop_loc_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/bricks_f6f7f8"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
</LinearLayout>
