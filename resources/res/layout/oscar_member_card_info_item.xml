<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_member_banner_item"
    android:background="@drawable/common_login_item_bg"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <TextView
        android:textSize="@dimen/text_size_12_dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/schedule_member_card_action"
        android:background="@drawable/common_red_small_btn_7_3"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:text="登录"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/tpp_gray_2"
        android:ellipsize="end"
        android:id="@+id/schedule_member_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:text="影城卡购票更优惠！开通即送代金券"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/schedule_member_card_action"
        android:layout_centerVertical="true"/>
</RelativeLayout>
