<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="98dp"
    android:layout_height="194dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/drama_inner_layout"
        android:layout_width="98dp"
        android:layout_height="wrap_content">
        <include layout="@layout/item_tetris_poster_card_with_stack_bg"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_FF993A"
            android:ellipsize="end"
            android:id="@+id/drama_ipuv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:lines="1"/>
        <cn.damai.uikit.view.ScoreStarDigitView
            android:id="@+id/drama_star_score"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/drama_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lines="2"/>
    </LinearLayout>
</LinearLayout>
