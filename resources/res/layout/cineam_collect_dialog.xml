<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#99000000"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/cineam_collect_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="收藏成功"
                android:layout_alignParentTop="true"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="收藏成功后，会在列表优先展示"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:src="@drawable/collect_tip"
                android:layout_centerHorizontal="true"/>
            <View
                android:background="@color/color_tpp_primary_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="21dp"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#349cec"
                android:gravity="center"
                android:id="@+id/btn_iknow"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="知道了"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
