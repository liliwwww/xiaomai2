<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/topic_item_detail_layout"
        android:background="@drawable/discuss_topic_item_bg"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/common_color_1008"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="10dp"
            android:textColor="@color/common_color_1008"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_right_arrow"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/subject_list_content_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/topic_item_detail_layout"
        android:layout_alignParentLeft="true">
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="15dp"
            android:textColor="@color/tpp_secondary_blue"
            android:gravity="center"
            android:id="@+id/topic_icon"
            android:padding="0dp"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="6dp"
            android:text="@string/iconf_discuss_subject"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_main_title"
            android:id="@+id/topic_item_title"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/topic_icon"
            android:layout_alignTop="@+id/topic_icon"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:ellipsize="end"
            android:id="@+id/topic_people_count"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_below="@+id/topic_item_title"
            android:layout_alignLeft="@+id/topic_item_title"/>
    </RelativeLayout>
    <View
        android:background="@color/color_tpp_primary_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
