<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="86dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_18dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/artist_inner_layout"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp">
        <cn.damai.tetris.component.online.viewholder.OnLinePosterView
            android:id="@+id/artist_item_poster"
            android:layout_width="86dp"
            android:layout_height="115dp"
            android:scaleType="fitXY"
            app:borderRadius="6dp"
            app:type="radial"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:id="@+id/artist_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2019摩登兄弟“成长风暴”巡回演唱会"
            android:singleLine="true"
            android:lineSpacingExtra="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/artist_item_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp">
            <TextView
                android:textSize="12dp"
                android:textColor="#ff2869"
                android:id="@+id/artist_item_price_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="#ff2869"
                android:id="@+id/artist_item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#9c9ca5"
                android:id="@+id/artist_item_price_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="-2dp"
                android:text="起"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
