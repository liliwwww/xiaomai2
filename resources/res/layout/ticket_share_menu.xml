<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/button_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/save_local_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_959aa5"
            android:paddingTop="@dimen/padding_20dp"
            android:paddingBottom="@dimen/padding_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存到手机"
            android:drawableTop="@drawable/tk_save"
            android:drawablePadding="6dp"/>
    </LinearLayout>
    <View
        android:layout_gravity="center_vertical"
        android:background="@color/color_e9ebef"
        android:layout_width="0.75dp"
        android:layout_height="25dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/sns_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_959aa5"
            android:paddingTop="@dimen/padding_20dp"
            android:paddingBottom="@dimen/padding_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享给好友"
            android:drawableTop="@drawable/tk_sns"
            android:drawablePadding="6dp"/>
    </LinearLayout>
</LinearLayout>
