<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_show_more_item"
    android:background="#f5f6f8"
    android:layout_width="@dimen/movie_list_poster_width"
    android:layout_height="@dimen/movie_list_poster_height"
    android:elevation="0dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">
    <com.alibaba.pictures.bricks.component.home.moviecard.CombinedImageView
        android:id="@+id/iv_more_images"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/mask_image"
        android:background="#ff000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="12dp"
            android:textColor="#e6ffffff"
            android:id="@+id/tv_homepage_show_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部"/>
        <View
            android:id="@+id/tv_homepage_show_more_divider"
            android:background="@color/white"
            android:layout_width="54dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:alpha="0.6"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#e6ffffff"
            android:id="@+id/tv_homepage_show_more_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
