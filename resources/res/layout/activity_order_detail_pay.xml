<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v_outside"
        android:background="#7e000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/rl_bottom"
        android:background="@drawable/bg_choose_corner_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rl_title"
            android:paddingTop="@dimen/margin_24dp"
            android:paddingBottom="@dimen/margin_24dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_000000"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择支付方式"
                android:layout_centerHorizontal="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_999999"
                android:id="@+id/text_ok"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fucengguanbi16"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:id="@+id/tv_amount"
                android:paddingTop="@dimen/margin_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_below="@+id/rl_title"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc"
            android:paddingTop="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_50dp"
            android:layout_below="@+id/rl_title"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_pay"
            android:background="@drawable/btn_enable_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:text="确定支付"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_error_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_title"/>
        <RelativeLayout
            android:id="@+id/ll_progress"
            android:background="@drawable/shape_loading_bg"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_centerInParent="true">
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                style="@style/animStyle"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="努力加载中"
                android:layout_below="@+id/progressbar"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
