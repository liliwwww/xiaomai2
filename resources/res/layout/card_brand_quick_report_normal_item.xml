<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brand_quickreport_normal_item"
    android:paddingLeft="@dimen/margin_12dp"
    android:paddingRight="@dimen/margin_12dp"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_18dp">
    <cn.damai.uikit.view.DMPosterView
        android:id="@+id/brand_quickreport_normal_img"
        android:layout_width="75dp"
        android:layout_height="56dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:src="@drawable/uikit_default_image_bg_gradient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/brand_quickreport_tv_normal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:maxLines="2"
        android:layout_toRightOf="@+id/brand_quickreport_normal_img"
        android:layout_alignParentTop="true"
        android:lineSpacingExtra="@dimen/margin_3dp"/>
    <TextView
        android:textSize="@dimen/margin_11dp"
        android:textColor="@color/color_999999"
        android:id="@+id/brand_quickreport_tv_normal_ipuv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/brand_quickreport_normal_img"
        android:layout_below="@+id/brand_quickreport_tv_normal_title"/>
</RelativeLayout>
