<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#99000000"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/id_id_notice_top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bricks_shape_rect_corner_top_12_solid_fff"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingBottom="21dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/bricks_black"
                android:id="@+id/id_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <FrameLayout
                android:id="@+id/id_notice_close_btn"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/bricks_x_close"
                    android:scaleType="fitXY"/>
            </FrameLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_notice_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
