<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/tv_quest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_FF2D79"
        android:id="@+id/iconfont"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_dagou12"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/icon"
        android:visibility="gone"
        android:layout_width="@dimen/margin_12dp"
        android:layout_height="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_1dp"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_service_info"
        android:paddingLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_12dp"
        android:singleLine="true"/>
</LinearLayout>
