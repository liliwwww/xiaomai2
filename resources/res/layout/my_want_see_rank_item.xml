<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/container_ll"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/image_item3_v2"
                android:background="@drawable/common_rank_step3_bg_v2"
                android:layout_width="76dp"
                android:layout_height="62dp"/>
            <View
                android:layout_gravity="center_vertical"
                android:id="@+id/image_item2_v2"
                android:background="@drawable/common_rank_step2_bg_v2"
                android:layout_width="70dp"
                android:layout_height="74dp"/>
            <cn.damai.uikit.view.DMPosterView
                android:id="@+id/poster_v2"
                android:layout_width="64dp"
                android:layout_height="84dp"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="16dp"
                android:textColor="#2e333e"
                android:ellipsize="end"
                android:id="@+id/tv_title_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#5f6672"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/tv_subtitle_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:singleLine="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#ffaf1c"
                    android:ellipsize="end"
                    android:id="@+id/tv_see_people_num_v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#5f6672"
                    android:ellipsize="end"
                    android:id="@+id/tv_project_num_v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/tv_see_people_num_v2"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btn_go_v2"
            android:layout_width="54dp"
            android:layout_height="27dp"
            android:text="去看看"/>
    </LinearLayout>
</LinearLayout>
