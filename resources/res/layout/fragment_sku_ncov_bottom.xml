<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_bottom_buy_tip"
        android:background="@drawable/ncov_sku_bottom_buy_tip_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="9dp">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="16dp"
            android:textColor="@color/color_eb7609"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_tixingmian_"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_eb7609"
            android:gravity="center"
            android:id="@+id/tv_bottom_buy_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/trip_desc_float_view"
        android:background="@drawable/bg_radius24_edf8ff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="#0091ff"
            android:id="@+id/trip_desc_float_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="6dp"
            android:text="购买须知"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#2e333e"
            android:ellipsize="none"
            android:id="@+id/trip_desc_float_viewtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00场-观众席-亲子票1大1小亲子票1大1小亲子票1大1小亲子票1大1小"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_toLeftOf="@+id/trip_desc_float_arrow"
            android:layout_toRightOf="@+id/trip_desc_float_title"/>
        <View
            android:background="@drawable/bg_gradient_cover_edf8ff"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/trip_desc_float_arrow"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#0091ff"
            android:id="@+id/trip_desc_float_arrow"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5dp"
            android:layout_marginRight="@dimen/margin_21dp"
            android:text="@string/iconfont_youjiantou24"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/layout_num_top"
        android:background="@drawable/sku_controller_bg_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_15dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_num"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_000000"
                    android:id="@+id/tv_limit_num_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量"/>
                <com.alibaba.pictures.bricks.view.DMDigitTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_000000"
                    android:id="@+id/tv_select_price_detail"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:id="@+id/tv_limit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sku_perform_count_bg_gray"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="21dp">
            <ImageView
                android:id="@+id/img_jian"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/bricks_ic_minus_drawable"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_000000"
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:id="@+id/tv_num_detail"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:id="@+id/img_jia"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/bricks_ic_plus_drawable"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/btn_buy_bottom_div_line"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/btn_buy_bottom_div"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/layout_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="13dp"
                    android:textColor="@color/color_FF2869"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:text="¥"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="20dp"
                    android:textColor="@color/color_FF2869"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:text="0"/>
                <LinearLayout
                    android:id="@+id/layout_price_detail"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="-1dp">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格明细"/>
                    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                        android:textSize="12dp"
                        android:textColor="@color/color_000000"
                        android:id="@+id/view_jiantou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/iconfont_shaixuanshang12"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:id="@+id/tv_price_tip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.alibaba.pictures.bricks.view.DMSafeLabelView
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_buy_view"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"/>
            <RelativeLayout
                android:id="@+id/btn_buy_waiting"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line_waitting_inner"
                    android:background="@color/color_eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="21dp"
                    android:layout_below="@+id/line_waitting_inner">
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/btnbolck_waiting_left"
                        android:background="@drawable/bg_submit_button_waiting_left"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="15dp"
                            android:textColor="#ff3299"
                            android:id="@+id/btn_waiting_left1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="缺货登记"/>
                        <TextView
                            android:textSize="10dp"
                            android:textColor="#ff3494"
                            android:id="@+id/btn_waiting_left2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有票时通知你"
                            android:layout_below="@+id/btn_waiting_left1"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/btnbolck_waiting_right"
                        android:background="@drawable/bg_submit_button_waiting_right"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:id="@+id/btn_waiting_right1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="付款候补"/>
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:id="@+id/btn_waiting_right2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有票时帮你抢"
                            android:layout_below="@+id/btn_waiting_right1"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#6a7a99"
                    android:gravity="center"
                    android:id="@+id/btn_buy_waiting_tip"
                    android:background="@drawable/icon_waiting_finish_tip"
                    android:visibility="gone"
                    android:layout_width="150dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="21dp"
                    android:text="候补人数已满,不可候补"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/view_translucent"
                android:background="#66ffffff"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
