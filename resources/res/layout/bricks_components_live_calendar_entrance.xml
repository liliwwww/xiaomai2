<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="51dp">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="51dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="13dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="16dp"
        android:textColor="@color/bricks_171717"
        android:ellipsize="end"
        android:id="@+id/title_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/bricks_171717"
        android:ellipsize="end"
        android:id="@+id/subTitle_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_9dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_v2"/>
    <ImageView
        android:id="@+id/right_icon_v2"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:src="@drawable/icon_calendar_without_day"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textColor="@color/bricks_171717"
        android:gravity="center"
        android:id="@+id/tv_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="11dp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/right_icon_v2"
        app:layout_constraintLeft_toLeftOf="@+id/right_icon_v2"
        app:layout_constraintRight_toRightOf="@+id/right_icon_v2"
        app:layout_constraintTop_toTopOf="@+id/right_icon_v2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
