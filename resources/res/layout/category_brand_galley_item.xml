<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layout_left"
        android:visibility="gone"
        android:layout_width="16.5dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.DMPosterView
            android:id="@+id/poster"
            android:layout_width="98dp"
            android:layout_height="131dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:maxLines="2"
            android:lineSpacingExtra="5dp"/>
        <LinearLayout
            android:gravity="bottom"
            android:id="@+id/layout_price"
            android:layout_width="102dp"
            android:layout_height="25dp">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="12dp"
                android:textColor="@color/color_ff2d79"
                android:id="@+id/tv_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="@color/color_ff2d79"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_9c9ca5"
                android:id="@+id/tv_qi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="起"/>
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9c9ca5"
            android:ellipsize="end"
            android:id="@+id/tv_see_people_num"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:id="@+id/layout_right"
        android:visibility="gone"
        android:layout_width="16.5dp"
        android:layout_height="match_parent"/>
</LinearLayout>
