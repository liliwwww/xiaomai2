<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/listview_refresh"
        android:background="@color/color_F4F5F6"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_list_title_layout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_list_recycler"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="18dp"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/id_list_title_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <View
            android:id="@+id/top_status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <RelativeLayout
                android:id="@+id/title_bg_layout"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/color_eeeeee"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="24dp"
                    android:textColor="@color/color_3c3f44"
                    android:gravity="center_vertical"
                    android:id="@+id/title_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/iconfont_zuojiantou_"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/item_title_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <com.alibaba.pictures.bricks.view.FakeBoldTextView
                        android:textSize="18dp"
                        android:textColor="@color/color_3c3f44"
                        android:ellipsize="end"
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的抢票预约"
                        android:singleLine="true"
                        android:layout_centerInParent="true"/>
                    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                        android:textSize="18dp"
                        android:textColor="#959aa5"
                        android:padding="4dp"
                        android:paddingTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/iconfont_tixingxian_"
                        android:layout_toRightOf="@+id/title_tv"
                        android:layout_centerVertical="true"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/project_detail_title_bar_divider"
            android:background="#19000000"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_list_empty_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_list_title_layout">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bricks_common_error_empty"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#959aa5"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无抢票预约"
            android:maxLines="1"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#959aa5"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="提前预约想看的演出，让抢票更丝滑～"
            android:maxLines="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="13dp"
            android:textColor="#5f6672"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/item_grab_empty_click"
            android:background="@drawable/bg_grablist_morebtn_gray"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:text="发现更多热抢"
            android:maxLines="1"
            android:includeFontPadding="false"/>
    </LinearLayout>
</RelativeLayout>
