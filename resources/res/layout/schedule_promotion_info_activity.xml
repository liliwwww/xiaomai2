<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="24dp"
            android:textColor="@color/common_text_color9"
            android:id="@+id/schedule_promotion_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_7"
            android:lineSpacingExtra="6dp"/>
        <TextView
            android:textSize="17dp"
            android:textColor="@color/common_text_color11"
            android:id="@+id/schedule_promotion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:lineSpacingExtra="6dp"/>
        <View
            android:background="@color/common_divider_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_line_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="22dp"/>
        <TextView
            android:textSize="17dp"
            android:textColor="@color/common_text_color10"
            android:id="@+id/schedule_promotion_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="9dp"/>
    </LinearLayout>
</ScrollView>
