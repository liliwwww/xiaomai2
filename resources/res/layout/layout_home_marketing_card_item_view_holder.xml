<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.pictures.bricks.view.BricksStrokeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/bricks_uikit_default_pioneer_image_bg_gradient_f5f6f8"
        app:placeholderImage="@drawable/bricks_uikit_default_pioneer_image_bg_gradient_f5f6f8"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="@dimen/resource_size_13"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/action"
        android:background="@drawable/bg_home_feed_marketing_card_action"
        android:paddingBottom="@dimen/resource_size_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/resource_size_32"
        android:layout_marginBottom="@dimen/resource_size_18"
        android:maxLines="1"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/resource_size_5"
        android:paddingEnd="@dimen/resource_size_5"
        android:layout_marginStart="@dimen/resource_size_22"
        android:layout_marginEnd="@dimen/resource_size_22"/>
    <TextView
        android:textSize="@dimen/resource_size_11"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/tag"
        android:background="@drawable/bg_home_feed_marketing_card_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/resource_size_17"
        android:layout_marginTop="@dimen/resource_size_9"
        android:maxLines="1"
        android:paddingStart="@dimen/resource_size_4"
        android:paddingEnd="@dimen/resource_size_4"
        android:layout_marginEnd="@dimen/resource_size_9"
        android:layout_alignParentEnd="true"/>
</com.alibaba.pictures.bricks.view.BricksStrokeRelativeLayout>
