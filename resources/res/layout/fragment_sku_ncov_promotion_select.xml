<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="86dp"
            android:layout_height="89dp">
            <LinearLayout
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="12dp"
                    android:textColor="#582331"
                    android:id="@+id/tv_money_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="24dp"
                    android:textColor="#582331"
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="#a67070"
                android:gravity="center"
                android:id="@+id/tv_money_desc"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1">
            <TextView
                android:textSize="14dp"
                android:textColor="#582331"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_999999"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_integral_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/checkbox"
                android:background="@drawable/radio_unselected_big"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vip_tag"
        android:layout_width="wrap_content"
        android:layout_height="15dp">
        <com.alibaba.pictures.bricks.view.RoundImageView2
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/common_vip_tag_rectangle"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:rTopLeftRadius="3dp"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="#ff6666"
            android:gravity="center"
            android:id="@+id/tv_vip_tag"
            android:background="@drawable/coupon_vip_tag_bg"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="专享"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_coupon_unused_reson"
        android:paddingTop="6dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_container">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="#9c9ca5"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_tishi_"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#9c9ca5"
            android:gravity="left"
            android:id="@+id/tv_coupon_unused_reson_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="#000000"
        android:gravity="left"
        android:id="@+id/tv_coupon_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
