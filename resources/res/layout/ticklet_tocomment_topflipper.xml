<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tocomment_topflipper_container"
    android:background="@drawable/ticklet_viewflipper_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_21dp"
    android:layout_marginRight="@dimen/margin_21dp">
    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/in_bottomtop"
        android:outAnimation="@anim/out_topbottom"
        android:flipInterval="3000"/>
</FrameLayout>
