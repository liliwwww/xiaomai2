<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="158dp">
        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/image_head1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/live_common_round_image_default"/>
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/image_head2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/live_common_round_image_default"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-7dp"
                android:text="..."/>
        </LinearLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="你关注的 屁桃君 等人暂时没有动态哦"/>
    </LinearLayout>
</LinearLayout>
