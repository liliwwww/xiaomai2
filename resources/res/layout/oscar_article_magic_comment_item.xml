<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/article_head"
        android:background="@color/tpp_gray_6"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/article_comment_container"
        android:paddingLeft="15dp"
        android:paddingTop="16dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/article_image"
            android:background="@color/common_text_color14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:actualImageScaleType="centerCrop"
            app:fadeDuration="0"
            app:placeholderImage="@drawable/oscar_default_image"
            app:placeholderImageScaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_magic_comment_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:src="@drawable/magic_comment_cover_water_mark"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="38dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="17dp"
                android:textColor="@android:color/white"
                android:ellipsize="middle"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_magic_comment_show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《蜘蛛蟹》"
                android:singleLine="true"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:id="@+id/tv_magic_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="典型的漫威，非典型的蜘蛛侠。作为一个见证了三代蜘蛛侠更换的影迷，听到那个熟悉的音乐都要老泪横留了。"
                android:maxLines="6"
                android:lineSpacingExtra="9dp"/>
            <View
                android:background="#37ffffff"
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_marginTop="18dp"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:textSize="11dp"
                    android:textColor="#7cffffff"
                    android:gravity="center"
                    android:id="@+id/tv_magic_comment_shut_flag"
                    android:layout_width="57dp"
                    android:layout_height="20dp"
                    android:text="有节选"
                    android:layout_alignParentRight="true"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_magic_comment_shut_flag"
                    app:alignItems="center">
                    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                        android:id="@+id/article_magic_comment_header"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        app:actualImageScaleType="centerCrop"
                        app:fadeDuration="0"
                        app:layout_flexShrink="0"
                        app:placeholderImageScaleType="centerCrop"
                        app:roundedCornerRadius="29dp"
                        app:roundingBorderColor="@color/white"
                        app:roundingBorderWidth="0.75dp"/>
                    <TextView
                        android:textSize="11dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/tv_article_magic_comment_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="小小花骨朵"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        app:layout_flexShrink="0"/>
                    <TextView
                        android:textSize="11dp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 评"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        app:layout_flexShrink="0"/>
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/common_text_color22"
                        android:id="@+id/tv_article_magic_comment_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="8.3"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        app:layout_flexShrink="1"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/common_text_color22"
                        android:id="@+id/tv_article_magic_comment_remark_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        app:layout_flexShrink="1"/>
                </com.google.android.flexbox.FlexboxLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_tag_view_radius_fg_big"
            android:scaleType="fitXY"/>
    </FrameLayout>
    <include
        android:id="@+id/article_share_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        layout="@layout/oscar_article_favor_menu"/>
    <View
        android:id="@+id/item_bottom_line"
        android:background="#e2e2e2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"/>
</LinearLayout>
