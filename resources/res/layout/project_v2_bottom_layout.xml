<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/project_item_bottom_content_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#1a000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"/>
    <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.bottom.ProjectBottomBarView
        android:id="@+id/project_item_bottom_bar_lv"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="9dp"
        android:paddingRight="10dp"
        android:paddingBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"/>
    <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.bottom.ProjectTimerView
        android:id="@+id/project_item_bottom_time_stagory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/project_item_bottom_bar_lv"/>
    <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.bottom.ProjectPreBuyPromptView
        android:id="@+id/rl_member_timer_strategy"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/project_item_bottom_bar_lv"/>
    <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.bottom.ProjectSpecialBuyView
        android:id="@+id/member_special_buy_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/project_item_bottom_bar_lv"/>
    <FrameLayout
        android:id="@+id/project_item_bottom_want_tips_fl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/project_item_bottom_bar_lv"/>
    <cn.damai.rank.view.WantSeeTips
        android:id="@+id/want_see_tips_project_detail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/project_item_bottom_bar_lv"/>
    <cn.damai.rank.view.WantSeePosterTips
        android:id="@+id/want_see_poster_tips"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.bottom.ProjectBlockUnwantedTipsView
        android:id="@+id/block_want_see_guide_tips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="-10dp"
        android:layout_above="@+id/project_item_bottom_bar_lv"
        android:layout_marginStart="@dimen/margin_9dp"
        android:layout_marginEnd="@dimen/margin_9dp"/>
    <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailnew.bottom.ProjectPriceChangeTipsView
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/sku_ticket_num_clear_tips"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:layout_above="@+id/project_item_bottom_bar_lv"
        android:layout_marginEnd="65dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
