<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/block_reduce_select_area"
    android:background="@drawable/list_selector"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    style="@style/CommonListItemContainerWhite2">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:id="@+id/block_unioncard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"/>
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/remote_union_icon"
        android:visibility="visible"
        android:layout_width="15dp"
        android:layout_height="15dp"
        fresco:actualImageScaleType="fitXY"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="15dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/block_unioncard_question"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconf_question_mark"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/tpp_primary_red"
        android:gravity="right"
        android:id="@+id/block_unioncard_select_tips_red"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:gravity="right"
        android:id="@+id/block_unioncard_select_tips"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/block_unioncard_select_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="@string/icon_font_right_small"/>
</LinearLayout>
