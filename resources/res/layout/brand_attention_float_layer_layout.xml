<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brand_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/brand_attention_float_layer_ll_shadow"
        android:paddingTop="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"/>
    <FrameLayout
        android:background="@drawable/brand_attention_float_layer_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"/>
    <ImageView
        android:id="@+id/brand_attention_float_layer_icon_shadow"
        android:padding="@dimen/margin_10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>
    <cn.damai.uikit.view.round.RoundImageView2
        android:id="@+id/brand_attention_float_layer_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:src="@drawable/uikit_default_image_bg_gradient"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        app:rRadius="35dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="#404040"
        android:id="@+id/brand_attention_float_layer_close"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_11dp"
        android:layout_marginBottom="@dimen/margin_17dp"
        android:text="@string/iconfont_guanbi16"
        android:layout_alignBottom="@+id/brand_attention_float_layer_icon"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/brand_attention_float_layer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:maxLines="1"
        android:layout_below="@+id/brand_attention_float_layer_icon"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/brand_attention_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/brand_attention_float_layer_name"
        android:layout_centerHorizontal="true">
        <include
            android:id="@+id/brand_attention_introduce_one"
            layout="@layout/brand_attention_float_layer_item"/>
        <include
            android:id="@+id/brand_attention_introduce_two"
            layout="@layout/brand_attention_float_layer_item"/>
        <include
            android:id="@+id/brand_attention_introduce_three"
            layout="@layout/brand_attention_float_layer_item"/>
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/brand_attention_float_layer_action"
        android:background="@drawable/submit_enable_btn_h44"
        android:layout_width="145dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin_18dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/margin_25dp"
        android:text=""
        android:maxLines="1"
        android:layout_below="@+id/brand_attention_introduce"
        android:layout_centerHorizontal="true"/>
</merge>
