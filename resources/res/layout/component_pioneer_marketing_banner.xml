<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_show_more_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/pioneer_cardview_movie_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1035:480"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/iv_marketing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:failureImage="@drawable/home_default_image_bg_pioneer"
            app:placeholderImage="@drawable/home_default_image_bg_pioneer"
            app:roundedCornerRadius="@dimen/margin_24dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
