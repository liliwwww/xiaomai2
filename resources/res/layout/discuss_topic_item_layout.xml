<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="77dp">
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textColor="#ff349cec"
        android:id="@+id/topic_icon"
        android:layout_width="15dp"
        android:layout_height="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/discuss_topic_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/color_tpp_primary_main_title"
        android:ellipsize="end"
        android:id="@+id/topic_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@+id/topic_icon"
        app:layout_constraintRight_toLeftOf="@+id/topic_detail_layout"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/person_count_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/topic_icon"
        app:layout_constraintRight_toLeftOf="@+id/topic_detail_layout"
        app:layout_constraintTop_toBottomOf="@+id/topic_name_txt"/>
    <FrameLayout
        android:id="@+id/topic_detail_layout"
        android:background="@drawable/discuss_topic_btn_bg"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/common_color_1008"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"/>
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="10dp"
                android:textColor="@color/common_color_1008"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconf_right_arrow"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@color/common_text_color46"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
