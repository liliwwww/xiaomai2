<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="end"
        android:id="@+id/layout_tag_img"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:src="@drawable/sku_promotion_tag_half_price"
        android:scaleType="fitEnd"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ff4886"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:id="@+id/layout_tag_text"
        android:background="@drawable/sku_perform_toptab_bg_pink2"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_tag_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <cn.damai.commonbusiness.seatbiz.sku.qilin.ui.view.ShapedImageView
            android:layout_width="37dp"
            android:layout_height="15dp"
            android:src="@drawable/common_vip_tag_rectangle"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#ff6666"
            android:gravity="center"
            android:id="@+id/layout_tag_vip_des"
            android:background="@drawable/sku_perform_vip_des_bg"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginStart="-0.5dp"/>
    </LinearLayout>
</FrameLayout>
