<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_root"
        android:background="@color/white"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:id="@+id/reduce_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/tpp_primary_red"
            android:id="@+id/reduce_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/reduce_title"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="21dp"
            android:textColor="@color/color_tpp_primary_gray_c8"
            android:gravity="center"
            android:id="@+id/reduce_check"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_selected_no"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/reduce_container"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/reduce_dvd"
        android:background="@color/common_divider_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="16dp"/>
</LinearLayout>
