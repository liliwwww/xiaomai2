<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_corner_6_white"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="9dp"
    android:layout_marginRight="15dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/artist_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="3dp"
        app:failureImage="@drawable/uikit_default_image_bg_grey"
        app:placeholderImage="@drawable/uikit_default_image_bg_grey"
        app:roundedCornerRadius="4dp"/>
    <RelativeLayout
        android:id="@+id/artist_performance_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/color_471c0e"
            android:ellipsize="end"
            android:id="@+id/artist_performance_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="10dp"
            android:textColor="@color/color_ff5d28"
            android:ellipsize="end"
            android:id="@+id/artist_want_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:layout_below="@+id/artist_performance_title"
            android:layout_alignParentStart="true"/>
        <View
            android:id="@+id/artist_want_count_bg"
            android:background="@drawable/bg_color_ff8f3f00_ff8f3fa6"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/artist_performance_title"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/artist_want_action_btn"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"/>
</LinearLayout>
