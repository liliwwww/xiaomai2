<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="#66000000"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/content_zone"
        android:background="@drawable/refund_and_endorse_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_black"
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="18dp"
            android:text=""
            android:layout_weight="1"/>
        <View
            android:background="@color/common_color_1011"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:textSize="@dimen/text_size_17_dp"
            android:textStyle="bold"
            android:textColor="@color/tpp_secondary_blue"
            android:gravity="center"
            android:id="@+id/btn_iknow"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="我知道了"/>
    </LinearLayout>
</FrameLayout>
