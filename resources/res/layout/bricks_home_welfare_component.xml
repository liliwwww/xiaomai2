<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.pictures.bricks.view.RCRelativeLayoutView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:round_corner="6dp">
    <ImageView
        android:id="@+id/bricks_welfare_layout"
        android:background="@drawable/bricks_welfare_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/welfare_desc_parent"
        android:background="@drawable/bricks_shape_white_radius8"
        android:paddingLeft="@dimen/dim_5"
        android:paddingRight="@dimen/dim_5"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/resource_size_11"
        android:layout_marginRight="@dimen/dim_6"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <TextView
            android:textSize="@dimen/font_Footnote2_R"
            android:textColor="#ffae48"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/welfare_desc"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="6dp"
            android:textColor="#ffae48"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/welfare_desc_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/bricks_welfare_title"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="@dimen/dim_7"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/resource_size_9"
        android:layout_alignParentStart="true"
        app:failureImage="@drawable/bricks_welfare_title"
        app:placeholderImage="@drawable/bricks_default_image_bg_gradient"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_container"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_35"
        android:overScrollMode="never"/>
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:layout_gravity="center"
        android:id="@+id/welfare_lottie"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/resource_size_35"
        android:scaleType="fitCenter"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/welfare_img"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/resource_size_35"
        android:scaleType="fitCenter"
        app:failureImage="@drawable/fail_super_week_pic"
        app:placeholderImage="@drawable/bricks_default_image_bg_gradient"/>
</com.alibaba.pictures.bricks.view.RCRelativeLayoutView>
