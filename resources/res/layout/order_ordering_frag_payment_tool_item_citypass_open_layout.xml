<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/item_round_selector"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/OrderCommonMarketItem">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/activity_tag"
        android:layout_width="28dp"
        android:layout_height="23dp"
        android:src="@drawable/citypass_big"
        android:scaleType="fitXY"/>
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:layout_gravity="center_vertical"
        android:id="@+id/remote_activity_tag"
        android:visibility="gone"
        android:layout_width="28dp"
        android:layout_height="23dp"
        app:actualImageScaleType="fitXY"
        app:failureImage="@drawable/citypass_big"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexWrap="nowrap">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:id="@+id/order_citypass_open_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:includeFontPadding="false"
                app:layout_flexShrink="0"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:id="@+id/order_citypass_open_price_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                app:layout_flexShrink="1"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:ellipsize="end"
            android:id="@+id/order_citypass_open_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:singleLine="true"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:layout_gravity="center_vertical"
        android:id="@+id/order_citypass_open_price_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:includeFontPadding="false"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textColor="@color/color_tpp_primary_assist"
        android:layout_gravity="center_vertical"
        android:id="@+id/right_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_font_right_small"/>
    <Button
        android:layout_gravity="center_vertical"
        android:id="@+id/right_button"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="@string/refresh"
        style="@style/mcard_refresh_button_style_small_73"/>
</LinearLayout>
