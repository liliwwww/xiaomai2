<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.DMAvatar
        android:id="@+id/user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/user_icon_right_margin"
        android:layout_width="9dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="140dp"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/user_tag_view"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/user_brand_vtag"/>
        </LinearLayout>
        <View
            android:id="@+id/user_name_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/user_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
