<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/app_title_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/title_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/comment_list_title"
        android:background="@drawable/app_title_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_17dp"
            android:textColor="@color/color_3C3F44"
            android:gravity="center_vertical"
            android:id="@+id/evaluate_list_title_left_icon"
            android:paddingLeft="@dimen/margin_22dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fanhui24"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="@color/color_000000"
            android:gravity="center"
            android:id="@+id/evaluate_list_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全部评价"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
