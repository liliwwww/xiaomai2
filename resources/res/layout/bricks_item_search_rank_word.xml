<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12.5dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/search_v2_rank_word_ui"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="14dp"
            android:textColor="#8896b1"
            android:id="@+id/search_v2_rank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/search_v2_rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxWidth="250dp"
            android:lines="1"/>
        <TextView
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#ff335c"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/search_v2_rank_tag_local"
            android:background="@drawable/bricks_hot_list_tag_benefit_bg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="æƒ "
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</FrameLayout>
