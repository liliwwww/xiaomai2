<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/common_text_color36"
        android:id="@+id/tv_article_more_magic_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="神点评"
        android:layout_weight="1"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="8dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:text="@string/iconf_right_arrow"/>
</LinearLayout>
