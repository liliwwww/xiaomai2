<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/pioneer_super_card_button_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:id="@+id/pioneer_super_card_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:id="@+id/pioneer_super_card_button_tag_layout"
        android:background="@drawable/pioneer_super_card_button_tag_bg"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:paddingStart="15dp"
        android:paddingEnd="8dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/pioneer_super_card_button_tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="@string/iconfont_xf_duigoubig"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/white"
            android:id="@+id/pioneer_super_card_button_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
</FrameLayout>
