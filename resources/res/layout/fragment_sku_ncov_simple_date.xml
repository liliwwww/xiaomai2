<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_simple_day"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="21dp">
        <cn.damai.uikit.view.DefHorScrollView
            android:id="@+id/scroll_simple_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/lin_simple_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </cn.damai.uikit.view.DefHorScrollView>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/btn_open_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="24dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_rili"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="12dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:text="@string/iconfont_shaixuanxia12"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
