<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_main"
    android:paddingTop="@dimen/margin_6dp"
    android:paddingBottom="@dimen/margin_6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_16dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_privilege"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginRight="24dp"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ff6666"
        android:gravity="center"
        android:id="@+id/tv_privilege"
        android:background="@drawable/bg_privilege_audience"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="24dp"
        android:text="特权观演人"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/text_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        app:layout_constraintRight_toLeftOf="@+id/checkbox"
        app:layout_constraintTop_toTopOf="@+id/text_name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:id="@+id/text_num_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:maxEms="20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:id="@+id/text_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="24dp"
        android:maxLines="1"
        android:layout_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_num_type"
        app:layout_constraintRight_toLeftOf="@+id/checkbox"
        app:layout_constraintTop_toTopOf="@+id/text_num_type"/>
    <CheckBox
        android:id="@+id/checkbox"
        android:background="@drawable/dm_purchase_check_select_bg"
        android:padding="6dp"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:button="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/id_tv_reasondiv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_num_type">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="10dp"
            android:textColor="#ff4886"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5dp"
            android:text="@string/iconfont_tanhao"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#ff4886"
            android:id="@+id/id_tv_reasonstr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5dp"
            android:text="证件信息核验未通过，请重新输入，否则将影响购票证件信息核验未通过，请重新输入，否则将影响购票"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
