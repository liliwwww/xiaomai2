<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4f5f6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/rl_praise_holder"
        android:background="@drawable/mine_relation_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <cn.damai.uikit.irecycler.IRecyclerView
        android:id="@+id/irc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loadMoreFooterLayout="@layout/mine_list_irc_footer_layout"
        app:refreshEnabled="true"
        app:refreshHeaderLayout="@layout/refresh_empty_view"/>
    <RelativeLayout
        android:id="@+id/rl_praise_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:src="@drawable/damai_theme_dialog_image_praise"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_below="@+id/iv_praise"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_333333"
                android:id="@+id/tv_prise_left_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布的内容获得了"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="@dimen/margin_18dp"
                android:textColor="#af8cfc"
                android:id="@+id/tv_prise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_333333"
                android:id="@+id/tv_prise_right_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个赞哦"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
