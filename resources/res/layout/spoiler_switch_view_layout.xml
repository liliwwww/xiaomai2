<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="77dp">
    <TextView
        android:textSize="16dp"
        android:textColor="#111111"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/spoiler_title"
        android:layout_marginStart="@dimen/margin_21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/spoiler_des"
        android:layout_marginStart="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <TextView
        android:textSize="15dp"
        android:textColor="#9c9ca5"
        android:id="@+id/tv_switch_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spoiler_btn_des"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spoiler_switch"
        app:layout_constraintTop_toTopOf="parent"/>
    <cn.damai.uikit.switchbutton.SwitchButton
        android:id="@+id/spoiler_switch"
        android:layout_width="41dp"
        android:layout_height="25dp"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_21dp"
        app:kswBackColor="@drawable/bg_spoiler_switch_btn"
        app:kswThumbColor="@color/color_ffffff"
        app:kswThumbHeight="25dp"
        app:kswThumbWidth="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
