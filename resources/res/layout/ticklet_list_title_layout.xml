<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ticklet_list_title_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/title_status_bar_space_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ticklet_list_title_height">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="?attr/tickletListPageTitleColor"
            android:id="@+id/ticklet_list_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票夹"
            android:layout_centerInParent="true"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:src="@drawable/icon_souvenir_ticiket"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"/>
    </RelativeLayout>
</LinearLayout>
