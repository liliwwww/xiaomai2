<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/avatar_out_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/avatar_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/avatar_place_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/avatar_round_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/avatar_inner_border"
            android:background="@drawable/uikit_dm_avatar_inner_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="bottom|right"
        android:id="@+id/avatar_right_bottom_v_tag"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/user_v_tag"/>
    <ImageView
        android:layout_gravity="bottom|right"
        android:id="@+id/avatar_right_bottom_yy_member_tag"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/dm_yy_member_icon"/>
</FrameLayout>
