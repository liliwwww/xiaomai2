<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:id="@+id/price_bg"
    android:background="@drawable/price_bg_drawable"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginRight="@dimen/margin_6">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/left_area"
        android:paddingLeft="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/seat_group"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="center"
            android:id="@+id/seat_name"
            android:paddingRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/price_view"
            android:paddingRight="7dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:textSize="10dp"
                android:textColor="@color/tpp_primary_red"
                android:gravity="center"
                android:id="@+id/seat_price_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/tpp_primary_red"
                android:gravity="center"
                android:id="@+id/seat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <com.taobao.movie.android.commonui.widget.RoundedTextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/activity_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:includeFontPadding="false"
                app:background_color="@color/tpp_primary_red"
                app:padding_horizontal="2"
                app:padding_vertical="1"
                app:round_radius="6"
                app:round_type="fill"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/seat_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="left_area"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="10dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:layout_gravity="center"
        android:id="@+id/close_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text="@string/iconf_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/seat_group"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
