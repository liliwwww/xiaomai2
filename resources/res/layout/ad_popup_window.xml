<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.view.RoundImageView
        android:id="@+id/homepage_popup_window_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_weight="1"
        app:borderRadius="14dp"
        app:type="radial"/>
    <FrameLayout
        android:id="@+id/homepage_popup_window_close_btn"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_pop_ad_close_btn_border"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="@string/iconfont_guanbi24"/>
    </FrameLayout>
</LinearLayout>
