<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">
    <View
        android:background="@color/color_tpp_primary_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/block_total_desc"
        android:visibility="gone"
        android:text="@string/ordering_selector_block_real_tips"
        android:layout_toLeftOf="@+id/rl_block_total_amount"
        android:layout_alignBaseline="@+id/rl_block_total_amount"
        style="@style/CommonListItemText"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_subtitle"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_saving_schedule"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:minEms="13"
        android:layout_toLeftOf="@+id/block_total_title"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/rl_block_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/price_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_primary_red"
                android:text="¥"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"
                style="@style/CommonListItemTitle"/>
            <TextView
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_primary_red"
                android:id="@+id/block_total_amount"
                android:text="100"
                style="@style/CommonListItemTitle"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/common_text_color4"
            android:id="@+id/block_total_mcard_amount"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_3"
            android:layout_marginTop="3dp"
            android:text="影城卡价13元"
            android:layout_below="@+id/price_zone"
            style="@style/CommonListItemText"/>
    </RelativeLayout>
    <TextView
        android:textSize="12dp"
        android:id="@+id/block_total_title"
        android:layout_marginRight="8dp"
        android:text="@string/ordering_selector_block_total_title"
        android:layout_toLeftOf="@+id/rl_block_total_amount"
        android:layout_centerVertical="true"
        style="@style/CommonListItemOrderTitle"/>
</RelativeLayout>
