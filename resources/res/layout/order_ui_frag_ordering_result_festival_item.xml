<?xml version="1.0" encoding="utf-8"?>
<com.taobao.movie.android.commonui.widget.MoCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    app:mocard_background_color="@color/color_tpp_primary_white"
    app:mocard_background_radius="9dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/order_result_festival_item_poster"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:roundBottomLeft="true"
            app:roundBottomRight="false"
            app:roundTopLeft="true"
            app:roundTopRight="false"
            app:roundedCornerRadius="9dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:id="@+id/order_result_festival_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:id="@+id/order_result_festival_item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <com.taobao.movie.android.commonui.widget.MoCardTextView
            android:textSize="12dp"
            android:textColor="#148aff"
            android:gravity="center"
            android:id="@+id/order_result_festival_item_btn"
            android:paddingLeft="12.5dp"
            android:paddingRight="12.5dp"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:mocard_background_color="#1a31a9f5"
            app:mocard_background_radius="16dp"/>
    </LinearLayout>
</com.taobao.movie.android.commonui.widget.MoCardView>
