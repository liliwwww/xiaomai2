<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/category_ball_container_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_container"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/indicatorContainer"
        android:background="@drawable/category_ball_icon_indicator_container_bg"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="3dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_container">
        <View
            android:id="@+id/slideIndicator"
            android:background="@drawable/category_ball_icon_indicator_bg"
            android:layout_width="8dp"
            android:layout_height="3dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
