<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/resource_size_4"
    android:paddingRight="@dimen/resource_size_12"
    android:paddingBottom="@dimen/resource_size_12"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/id_new_project_item_hl_prefix"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="@dimen/resource_size_14"
        android:textColor="@color/bricks_2e333e"
        android:id="@+id/id_new_project_item_hl_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_4"
        android:layout_marginTop="@dimen/resource_size_10"
        android:layout_marginRight="@dimen/resource_size_12"
        android:lineSpacingExtra="6dp"/>
</LinearLayout>
