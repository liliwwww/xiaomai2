<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/theme_circle_bg_image"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:src="@drawable/circle_default_image_bg"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"/>
    <cn.damai.uikit.view.NewSimpleTitleLayout
        android:id="@+id/theme_circle_title_cms_bar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/theme_circle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_9dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/margin_9dp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/iv_circle_head"
        android:layout_below="@+id/theme_circle_title_cms_bar"/>
    <View
        android:id="@+id/circle_avatar_holder"
        android:layout_width="@dimen/margin_12dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theme_circle_name"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_theme_header_round"
        android:paddingBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/theme_circle_title_cms_bar"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/margin_12dp"
        android:paddingEnd="12dp">
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="12dp"
            android:textColor="#8f8fff"
            android:id="@+id/theme_circle_person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="108dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <cn.damai.commonbusiness.view.UserAvatarOverlayListLayout
            android:id="@+id/circle_avatar_list_layout"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/theme_circle_person_info"
            app:layout_constraintTop_toTopOf="@+id/theme_circle_person_info"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/theme_circle_join"
            android:background="@drawable/circle_share_bg"
            android:layout_width="67dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/theme_circle_person_info"
            app:layout_constraintTop_toBottomOf="@+id/theme_circle_person_info"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/white"
            android:id="@+id/theme_circle_join_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/iconfont_jiarujiahao24"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_constraintStart_toStartOf="@+id/theme_circle_join"
            app:layout_constraintTop_toTopOf="@+id/theme_circle_join"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:id="@+id/theme_circle_desc_v2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            app:layout_constraintBottom_toTopOf="@+id/theme_project_ui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_circle_join"/>
        <cn.damai.discover.main.ui.view.DMThemeProjectItemView
            android:id="@+id/theme_project_ui"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_circle_desc_v2"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theme_project_ui">
            <ViewStub
                android:id="@+id/theme_rank_view_stub"
                android:layout="@layout/item_circle_rank_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <cn.damai.baseview.RCRelativeLayoutView
                android:id="@+id/theme_image_ui"
                android:paddingTop="@dimen/margin_9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="1"
                app:round_corner="8dp">
                <ImageView
                    android:id="@+id/theme_banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:scaleType="fitXY"/>
            </cn.damai.baseview.RCRelativeLayoutView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <cn.damai.uikit.banner.sub.RoundRadiusImageView
        android:id="@+id/iv_circle_head"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@+id/circle_avatar_holder"
        android:layout_below="@+id/theme_circle_title_cms_bar"
        app:r_round_radius="12dp"/>
</RelativeLayout>
