<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/category_rank_bg"
        android:paddingLeft="120dp"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_ff2d79"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tv_subtitle"
            android:background="@drawable/category_rank_subtitle_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_white"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tv_see_people_num"
            android:background="@drawable/common_tag_yellow_moon_bg"
            android:paddingLeft="3dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:singleLine="true"/>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_000000"
        android:layout_gravity="center"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="30dp"
        android:text="@string/iconfont_youjiantou12"/>
    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/image_item3"
        android:background="@drawable/category_rank_step3_bg"
        android:layout_width="60dp"
        android:layout_height="96dp"
        android:layout_marginLeft="57dp"/>
    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/image_item2"
        android:background="@drawable/category_rank_step2_bg"
        android:layout_width="72dp"
        android:layout_height="108dp"
        android:layout_marginLeft="39dp"/>
    <cn.damai.uikit.view.RoundImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/image_item1"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/uikit_default_image_bg_gradient"
        android:scaleType="fitXY"
        app:borderRadius="2dp"
        app:type="radial"/>
    <ImageView
        android:id="@+id/image_tag"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:src="@drawable/category_rank_tag"
        android:scaleType="fitXY"/>
</FrameLayout>
