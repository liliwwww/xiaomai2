<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/pioneer_homepage_item_container"
    android:layout_width="@dimen/pioneer_poster_width"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/pioneer_homepage_poster_container"
        android:layout_width="@dimen/pioneer_poster_width"
        android:layout_height="@dimen/pioneer_poster_height">
        <com.alibaba.pictures.bricks.view.RoundImageView
            android:id="@+id/pioneer_homepage_item_image_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_default_image_bg_pioneer"
            android:scaleType="centerCrop"
            app:borderRadius="9dp"
            app:type="radial"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/pioneer_homepage_item_image_normal_cover"
            android:background="@drawable/pioneer_item_cover"
            android:layout_width="match_parent"
            android:layout_height="33dp"/>
        <com.alibaba.pictures.bricks.view.FlowLayout
            android:layout_gravity="start"
            android:id="@+id/pioneer_homepage_item_tag_view"
            android:paddingTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"/>
        <com.alibaba.pictures.bricks.view.CustomHighlightsTextView
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/pioneer_homepage_item_remark_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:alignItems="baseline"
            app:flexDirection="row"
            app:flexWrap="nowrap"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/pioneer_homepage_item_remark"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/pioneer_homepage_item_remark_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:includeFontPadding="false"/>
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="9dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/pioneer_homepage_item_remark_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/margin_1dp"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/pioneer_homepage_project_item_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.5dp">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="@dimen/font_Subhead2_M"
            android:textColor="#171717"
            android:id="@+id/pioneer_homepage_project_item_title"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lineSpacingExtra="2dp"/>
        <View
            android:layout_gravity="end|bottom"
            android:id="@+id/pioneer_homepage_project_item_mask"
            android:background="@drawable/bg_pioneer_popular_title"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:layout_marginBottom="2dp"/>
    </FrameLayout>
    <com.alibaba.pictures.bricks.view.CustomHighlightsTextView
        android:id="@+id/pioneer_homepage_project_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:minHeight="15dp"
        app:alignItems="baseline"
        app:flexDirection="row"
        app:flexWrap="nowrap"/>
</LinearLayout>
