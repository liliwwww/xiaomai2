<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_tpp_primary_bg"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/color_tpp_primary_main_title"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="9dp"
        android:text="优惠券"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/tpp_secondary_orange"
        android:id="@+id/tv_broadcast"
        android:background="@drawable/schedule_broadcast_bg"
        android:paddingLeft="9dp"
        android:paddingTop="6dp"
        android:paddingRight="9dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:text="不同种类券（影片券/通用券/影城券）可叠加使用，每类仅可使用1张"/>
</LinearLayout>
