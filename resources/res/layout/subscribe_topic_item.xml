<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        fresco:fadeDuration="0"
        fresco:placeholderImage="@drawable/oscar_default_image"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundedCornerRadius="5dp"/>
    <TextView
        android:textSize="17dp"
        android:textColor="@color/common_text_color45"
        android:ellipsize="end"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="12345678910abcde"
        android:maxEms="14"
        android:singleLine="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_alignTop="@+id/icon"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/common_color_1008"
        android:ellipsize="end"
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginRight="40dp"
        android:text="主题描"
        android:maxLines="3"
        android:minLines="2"
        android:layout_toLeftOf="@+id/add_btn"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/common_color_1006"
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="x人订阅"
        android:singleLine="true"
        android:layout_below="@+id/desc"
        android:layout_alignLeft="@+id/name"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/add_btn"
        android:layout_width="59dp"
        android:layout_height="28dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="12dp"
            android:textColor="@color/tpp_primary_red"
            android:id="@+id/status_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/iconf_add"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:id="@+id/status_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订阅"/>
    </LinearLayout>
</RelativeLayout>
