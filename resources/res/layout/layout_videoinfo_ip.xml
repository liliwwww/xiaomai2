<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ipinfo_content"
    android:background="@color/color_ip_bg"
    android:paddingLeft="@dimen/default_component_margin_rl"
    android:paddingRight="@dimen/default_component_margin_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ipinfo_showinfo"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_marginTop="@dimen/default_component_div_h"
        android:layout_marginBottom="@dimen/default_component_div_h">
        <RelativeLayout
            android:id="@+id/ipinfo_showinfo_left"
            android:layout_width="98dp"
            android:layout_height="131dp">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/ipinfo_showinfo_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/uikit_default_image_bg_gradient"
                android:scaleType="centerCrop"
                app:borderRadius="6dp"
                app:type="radial"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/brand_ablum_tip"
                android:background="@drawable/ninegrid_coner_tipbg"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/mask_white_80"
                    android:ellipsize="end"
                    android:id="@+id/brand_ablum_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:text="@string/iconfont_tupian12"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/brand_ablum_pcount"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/mask_white_80"
                    android:id="@+id/brand_ablum_pcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="1"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/ipinfo_showinfo_left">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:id="@+id/ipinfo_showinfo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧目IP名称"
                android:maxLines="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/mask_white_80"
                android:id="@+id/ipinfo_showinfo_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="音乐拒"
                android:maxLines="1"
                android:layout_below="@+id/ipinfo_showinfo_title"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/mask_white_80"
                android:id="@+id/ipinfo_showinfo_favnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0人想看"
                android:maxLines="1"
                android:layout_below="@+id/ipinfo_showinfo_type"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="14dp"
                android:textColor="#739c9ca5"
                android:id="@+id/tv_fans_icon_tip"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="@string/iconfont_tixingxian_"
                android:layout_toRightOf="@+id/ipinfo_showinfo_favnum"
                android:layout_below="@+id/ipinfo_showinfo_type"/>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/ipinfo_showinfo_wannasee"
                android:background="@drawable/bg_border_corner_fff_30"
                android:layout_width="95dp"
                android:layout_height="32dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentBottom="true">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/ipinfo_showinfo_wannasee_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/cg_3"
                    android:ellipsize="end"
                    android:id="@+id/ipinfo_showinfo_wannasee_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="想看"
                    android:lines="1"
                    android:layout_toRightOf="@+id/ipinfo_showinfo_wannasee_icon"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:id="@+id/ipinfo_showinfo_add_city"
                android:background="@drawable/bg_border_corner_fff_30"
                android:layout_width="95dp"
                android:layout_height="32dp"
                android:layout_toRightOf="@+id/ipinfo_showinfo_wannasee"
                android:layout_alignParentBottom="true">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="@dimen/margin_14dp"
                    android:textColor="@color/cb_red_app"
                    android:gravity="center"
                    android:id="@+id/ipinfo_showinfo_add_city_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="@string/iconfont_jiahao24"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:id="@+id/ipinfo_showinfo_add_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求加场"
                    android:lines="1"
                    android:layout_toRightOf="@+id/ipinfo_showinfo_add_city_icon"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ViewFlipper
        android:gravity="center_vertical"
        android:id="@+id/ipinfo_descinfo"
        android:background="@drawable/bg_border_corner_5fff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="41.5dp"
        android:layout_marginTop="@dimen/default_component_div_h"
        android:layout_marginBottom="@dimen/default_component_div_h"
        android:inAnimation="@anim/flipper_in"
        android:outAnimation="@anim/flipper_out"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ipinfo_score_rank"
        android:background="@drawable/bg_border_corner_5fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_component_div_h"
        android:layout_marginBottom="@dimen/default_component_div_h">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ipinfo_score"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp">
                <ImageView
                    android:id="@+id/ipinfo_score_titleimg"
                    android:padding="@dimen/margin_3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dm_ip_score_title"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9C9CA5"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/ipinfo_score_title_icon"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_tixingxian_"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/ipinfo_score_value_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp">
                <TextView
                    android:textSize="34dp"
                    android:textColor="@color/color_FF993A"
                    android:id="@+id/ipinfo_score_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.5"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/mask_white_80"
                    android:id="@+id/ipinfo_score_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="8dp"
                    android:text="必看"
                    android:layout_toRightOf="@+id/ipinfo_score_value"/>
                <cn.damai.uikit.view.ScoreStarViewV2
                    android:id="@+id/ipinfo_score_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/ipinfo_score_value"
                    android:layout_below="@+id/ipinfo_score_desc"
                    app:colorType="yellow"/>
                <View
                    android:id="@+id/ipinfo_score_divline"
                    android:background="@color/color_9C9CA5"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_toRightOf="@+id/ipinfo_score_ratingbar"
                    android:layout_centerVertical="true"/>
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/ipinfo_score_userimg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/score_white_star1"
                    android:layout_toRightOf="@+id/ipinfo_score_divline"
                    android:layout_centerVertical="true"
                    app:type="linear"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/mask_white_80"
                    android:ellipsize="end"
                    android:id="@+id/ipinfo_score_usertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="7dp"
                    android:text=""
                    android:maxLines="2"
                    android:layout_toLeftOf="@+id/ipinfo_score_arrow"
                    android:layout_toRightOf="@+id/ipinfo_score_userimg"
                    android:layout_centerVertical="true"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="@dimen/margin_13dp"
                    android:textColor="#9c9ca5"
                    android:id="@+id/ipinfo_score_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="@string/iconfont_youjiantou24"
                    android:includeFontPadding="false"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/ipinfo_ranklist_divline"
            android:background="#26ffffff"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ipinfo_ranklist"
            android:background="@drawable/bg_border_corner_5fff_0_12"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:id="@+id/rank_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/icon_rank_list_icon"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#ff5a2f"
                android:ellipsize="end"
                android:id="@+id/rank_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="话剧人气榜 NO.3"
                android:lines="1"
                android:layout_weight="1"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="#9c9ca5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="@string/iconfont_youjiantou24"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
