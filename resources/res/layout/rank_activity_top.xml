<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="24dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_left"
            android:paddingLeft="15dp"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:text="@string/iconfont_zuojiantou_"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="48dp"
            android:text="巡演榜"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_ff2869"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btn_right"
            android:background="@drawable/rank_share_bg"
            android:layout_width="54dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:text="分享"/>
    </FrameLayout>
    <FrameLayout
        android:paddingLeft="21dp"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <TextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="巡演榜"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="猎奇新鲜好娱乐 | 本周已更新"/>
    </FrameLayout>
</LinearLayout>
