<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_notice"
    android:layout_width="243dp"
    android:layout_height="138dp"
    app:cardBackgroundColor="@color/color_bricks_primary_assist"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/channel_venue_bg_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/bricks_default_image_bg_gradient"
        app:placeholderImage="@drawable/bricks_default_image_bg_gradient"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/channel_venue_card_cover_block"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <View
            android:id="@+id/channel_venue_card_cover_top"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>
        <View
            android:id="@+id/channel_venue_card_cover_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/channel_venue_info_block"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="11dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="16dp"
            android:textColor="@color/color_bricks_primary_white"
            android:ellipsize="end"
            android:id="@+id/channel_venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="8dp"
            android:lines="1"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_above="@+id/channel_venue_detail_info_block"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/channel_venue_detail_info_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="true">
            <com.alibaba.pictures.bricks.view.DigitTextView
                android:textSize="15dp"
                android:textColor="@color/color_bricks_primary_white"
                android:id="@+id/channel_venue_info_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_bricks_primary_80_white"
                android:id="@+id/channel_venue_info_fans_num_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="-1px"
                android:includeFontPadding="false"/>
            <View
                android:id="@+id/channel_venue_info_divider"
                android:background="@color/color_bricks_primary_50_white"
                android:layout_width="1px"
                android:layout_height="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <com.alibaba.pictures.bricks.view.DigitTextView
                android:textSize="15dp"
                android:textColor="@color/color_bricks_primary_white"
                android:id="@+id/channel_venue_info_showing_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_bricks_primary_80_white"
                android:id="@+id/channel_venue_info_showing_num_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="-1px"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/channel_venue_coupon_info_block"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/channel_venue_coupon_price_block"
                android:layout_width="wrap_content"
                android:layout_height="24dp">
                <TextView
                    android:textSize="8dp"
                    android:textColor="@color/color_bricks_primary_white"
                    android:id="@+id/channel_venue_coupon_price_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"/>
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="9dp"
                    android:textColor="@color/color_bricks_primary_white"
                    android:id="@+id/channel_venue_coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>
            <TextView
                android:textSize="7dp"
                android:textColor="@color/color_bricks_primary_white"
                android:gravity="center"
                android:id="@+id/channel_venue_coupon_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="17dp"/>
        </LinearLayout>
        <com.alibaba.pictures.bricks.component.home.moviecard.QueueViewFlipper
            android:layout_gravity="center"
            android:id="@+id/channel_venue_showing_posters"
            android:visibility="gone"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:customLayout="@layout/layout_queue_view_flipper_venue"
            app:first_size="@dimen/home_page_venue_movie_poster_width"
            app:second_size="@dimen/home_page_venue_movie_poster_width_second"
            app:spacing="@dimen/home_page_venue_movie_poster_spacing"
            app:third_size="@dimen/home_page_venue_movie_poster_width_third"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
