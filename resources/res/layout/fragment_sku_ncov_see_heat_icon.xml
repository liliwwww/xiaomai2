<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_heat_icon"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/icon1"
        android:background="@drawable/sku_heat_icon_left"
        android:layout_width="12dp"
        android:layout_height="6dp"/>
    <View
        android:id="@+id/icon2"
        android:background="@drawable/sku_heat_icon_middle"
        android:layout_width="12dp"
        android:layout_height="6dp"
        android:layout_marginLeft="2dp"/>
    <View
        android:id="@+id/icon3"
        android:background="@drawable/sku_heat_icon_middle"
        android:layout_width="12dp"
        android:layout_height="6dp"
        android:layout_marginLeft="2dp"/>
    <View
        android:id="@+id/icon4"
        android:background="@drawable/sku_heat_icon_middle_hui"
        android:layout_width="12dp"
        android:layout_height="6dp"
        android:layout_marginLeft="2dp"/>
    <View
        android:id="@+id/icon5"
        android:background="@drawable/sku_heat_icon_right_hui"
        android:layout_width="12dp"
        android:layout_height="6dp"
        android:layout_marginLeft="2dp"/>
</LinearLayout>
