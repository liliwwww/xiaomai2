<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/oscar_cinemalist_cinema_schedules_container"
    android:paddingLeft="12.5dp"
    android:paddingTop="5dp"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.app.oscar.ui.cinema.widget.FastSelectScheduleView
        android:id="@+id/oscar_cinemalist_cinema_schedules"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/oscar_cinemalist_cinema_schedules_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        style="@style/cinemaList_address_schedules_intro"/>
</LinearLayout>
