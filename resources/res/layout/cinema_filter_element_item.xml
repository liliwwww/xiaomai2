<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/element_root"
    android:background="@drawable/cinema_filter_normal_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:id="@+id/cinema_element_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:id="@+id/sub_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="黑钻|黄金"
        android:maxLines="1"
        android:singleLine="true"/>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
</LinearLayout>
