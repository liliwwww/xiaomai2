<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="invisible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="14dp"
        android:textColor="#148aff"
        android:id="@+id/order_time_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/iconf_valid_period"
        android:includeFontPadding="false"
        android:layout_centerVertical="true"/>
    <com.taobao.movie.android.app.order.ui.widget.OrderTimerTextView
        android:textSize="14dp"
        android:textColor="#148aff"
        android:gravity="right"
        android:id="@+id/order_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:minWidth="40dp"
        android:lines="1"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/order_time_icon"
        android:layout_centerVertical="true"/>
</merge>
