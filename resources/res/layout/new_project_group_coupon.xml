<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_ffe2eb_ffebf0_corner9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_group_coupon_title"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="94dp"
            android:layout_height="15dp"
            android:src="@drawable/group_coupon"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_FF4886"
            android:ellipsize="end"
            android:gravity="end"
            android:id="@+id/tv_coupon_tip_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_group_coupon_container"
        android:background="@drawable/bg_white_c9_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-9dp"
        android:minHeight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_group_coupon_title"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom_container"
        android:background="@drawable/bg_white_c9_bottom"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_group_coupon_container">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/bricks_2e333e"
            android:id="@+id/tv_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="12dp"
            android:gravity="center"
            android:id="@+id/tv_bottom_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:text="@string/iconfont_xiangxiajiantou_"
            android:layout_marginStart="6dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
