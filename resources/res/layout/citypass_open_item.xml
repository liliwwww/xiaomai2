<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="68dp">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/city_pass_cinema_item_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/city_pass_icon"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:layout_marginRight="8dp"
            app:actualImageScaleType="centerInside"
            app:failureImage="@drawable/cinema_citypass_icon"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@drawable/cinema_citypass_icon"
            app:placeholderImageScaleType="centerInside"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:ellipsize="end"
            android:id="@+id/city_pass_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"/>
        <TextView
            android:textSize="9dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/city_pass_activity"
            android:background="@drawable/citypass_activity_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="11dp"
            android:textColor="#c9a39c"
            android:id="@+id/city_pass_desc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
