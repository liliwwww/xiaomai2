<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dim_8"
    android:layout_width="77dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="103dp">
        <com.alibaba.pictures.bricks.view.RoundImageView
            android:id="@+id/favourite_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bricks_uikit_default_image_bg_gradient"
            android:scaleType="centerCrop"
            app:borderRadius="6dp"
            app:type="radial"/>
        <View
            android:background="@drawable/bricks_homepage_project_image_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.alibaba.pictures.bricks.view.DMCategroyTagView
            android:layout_gravity="right"
            android:id="@+id/favourite_tag"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>
        <cn.damai.uikit.view.LiveRoomView
            android:layout_gravity="right"
            android:id="@+id/favourite_live"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>
        <FrameLayout
            android:layout_gravity="bottom|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="bottom|left"
                android:orientation="horizontal"
                android:id="@+id/favourite_score_layout"
                android:background="@drawable/bricks_bg_score_star_radio"
                android:paddingLeft="@dimen/margin_3dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="@dimen/margin_13dp"
                    android:textColor="@color/color_score_font"
                    android:id="@+id/favourite_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.0"/>
                <com.alibaba.pictures.bricks.view.ScoreStarViewV2
                    android:id="@+id/favourite_score_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    app:colorType="yellow"/>
            </LinearLayout>
            <com.alibaba.pictures.bricks.view.DMLabelView
                android:gravity="bottom|left"
                android:id="@+id/favourite_label"
                android:visibility="gone"
                android:layout_width="56dp"
                android:layout_height="24dp"/>
        </FrameLayout>
    </FrameLayout>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="@dimen/font_Subhead2_M"
        android:textColor="@color/cg_1"
        android:ellipsize="end"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:minLines="2"
        android:lineSpacingExtra="2dp"/>
    <TextView
        android:textSize="@dimen/font_Footnote1_R"
        android:textColor="@color/cg_3"
        android:ellipsize="end"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:singleLine="true"/>
</LinearLayout>
