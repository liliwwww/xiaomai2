<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="22dp"
        android:textColor="@color/color_bricks_primary_white"
        android:gravity="center"
        android:id="@+id/btn_back"
        android:background="@drawable/title_back_bg_solid_r9_70_black"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="17dp"
        android:text="@string/iconfont_zuojiantou_"
        android:layout_marginStart="37.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:textSize="11dp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/seek_bar"
            android:paddingLeft="12dp"
            android:paddingTop="20dp"
            android:paddingRight="12dp"
            android:paddingBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:progressDrawable="@drawable/smart_video_seekbar_bg"
            android:minHeight="2dp"
            android:thumb="@drawable/smart_video_jindu"
            android:thumbOffset="5dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
