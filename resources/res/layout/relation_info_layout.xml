<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/mine_relation_ship_title"
        layout="@layout/mine_title_header"/>
    <cn.damai.uikit.snake.EqualLinearView
        android:id="@+id/scroll_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>
    <View
        android:id="@+id/relation_line"
        android:background="@color/base_head_line_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <cn.damai.commonbusiness.view.DmViewPager
        android:id="@+id/relation_pager"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
