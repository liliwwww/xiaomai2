<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:background="#b3000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:background="@drawable/vip_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.app.ui.widget.SelectableRoundedImageView
                android:id="@+id/title_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                app:sriv_left_top_corner_radius="8dp"
                app:sriv_right_top_corner_radius="8dp"/>
            <TextView
                android:textSize="19dp"
                android:textColor="#4c3615"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_select_seat_bogo_dialog_title"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:maxLines="1"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/content_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/title_bg"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/btn_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="23dp"
                android:layout_below="@+id/content_zone">
                <TextView
                    android:textSize="14dp"
                    android:textColor="#c4a056"
                    android:gravity="center"
                    android:id="@+id/btn_left"
                    android:background="@drawable/vip_give_up_btn_bg"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="#4c3615"
                    android:gravity="center"
                    android:id="@+id/btn_right"
                    android:background="@drawable/vip_common_btn_bg"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/iconf_round_close"/>
    </LinearLayout>
</RelativeLayout>
