<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/order_create_line"/>
    <TextView
        android:textSize="@dimen/margin_16dp"
        android:textColor="@color/color_333333"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_17dp"
        android:paddingRight="@dimen/margin_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发票抬头"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_6dp"
        android:paddingTop="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_6dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_invoice_type_personal"
            android:visibility="gone"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginRight="@dimen/margin_6dp">
            <TextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_666666"
                android:gravity="center"
                android:id="@+id/tv_invoice_type_personal"
                android:background="@drawable/bg_border_corner_cc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="个人"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/iv_invoice_type_personal"
                android:visibility="gone"
                android:layout_width="@dimen/margin_12dp"
                android:layout_height="@dimen/margin_12dp"
                android:src="@drawable/trade_order_select"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_invoice_type_company"
            android:visibility="gone"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginRight="@dimen/margin_6dp">
            <TextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_fa1155"
                android:gravity="center"
                android:id="@+id/tv_invoice_type_company"
                android:background="@drawable/bg_border_corner_fa_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="公司"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/iv_invoice_type_company"
                android:visibility="gone"
                android:layout_width="@dimen/margin_12dp"
                android:layout_height="@dimen/margin_12dp"
                android:src="@drawable/trade_order_select"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_invoice_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/order_create_line"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_999999"
                android:paddingTop="@dimen/margin_17dp"
                android:paddingBottom="@dimen/margin_17dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="公司名称"/>
            <EditText
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/ucDivider"
                android:gravity="center_vertical"
                android:id="@+id/edit_invoice_name"
                android:background="@drawable/transparent"
                android:paddingLeft="24dp"
                android:paddingTop="@dimen/margin_17dp"
                android:paddingRight="@dimen/margin_12dp"
                android:paddingBottom="@dimen/margin_17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/order_create_line"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_999999"
                android:paddingTop="@dimen/margin_17dp"
                android:paddingBottom="@dimen/margin_17dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="公司税号"/>
            <EditText
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/ucDivider"
                android:gravity="center_vertical"
                android:id="@+id/edit_invoice_tax_num"
                android:background="@drawable/transparent"
                android:paddingLeft="24dp"
                android:paddingTop="@dimen/margin_17dp"
                android:paddingRight="@dimen/margin_12dp"
                android:paddingBottom="@dimen/margin_17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
