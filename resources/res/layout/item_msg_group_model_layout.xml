<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/iv_icon"
            android:background="@drawable/bg_message_recommend_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/margin_15dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"/>
    </FrameLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="21dp"
        android:layout_toRightOf="@+id/fl_icon">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="12dp"
                android:textColor="#aaaaaa"
                android:id="@+id/tv_latest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#111111"
                android:ellipsize="end"
                android:id="@+id/tv_model_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/tv_latest_time"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="#888888"
            android:ellipsize="end"
            android:id="@+id/tv_latest_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_below="@+id/rl_title"/>
    </RelativeLayout>
</RelativeLayout>
