<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:id="@+id/table_left_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawablePadding="6dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/table_left_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/table_left_text"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/table_left_text"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="14dp"
        android:textColor="#ff666666"
        android:gravity="center_vertical"
        android:id="@+id/table_right_text"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconf_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</merge>
