<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:id="@+id/layout_container"
    android:background="@color/white"
    android:paddingTop="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.DMLabelView
        android:id="@+id/label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="bottom"
        android:id="@+id/image_tag"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/rank_tag_up"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_8890A0"
        android:layout_gravity="bottom"
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <cn.damai.uikit.tag.DMPeopleSeeTagView
        android:id="@+id/view_tag_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pst_tip_postfix="人围观"/>
    <cn.damai.uikit.view.DMRatingBar
        android:layout_gravity="bottom"
        android:id="@+id/rank_bar_rating"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:isIndicator="true"
        app:showText="false"
        app:starCount="5"
        app:starDistance="2dp"
        app:starEmpty="@drawable/rating_empty"
        app:starFill="@drawable/rating_fill"
        app:starSize="12dp"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_gravity="bottom"
        android:id="@+id/rank_item_score"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="-3dp"
        android:text=""
        android:maxLines="1"/>
</LinearLayout>
