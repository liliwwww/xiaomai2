<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="92dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_9dp">
    <FrameLayout
        android:id="@+id/dynamic_service_item_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_mine_dynamic_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            app:failureImage="@drawable/bg_mine_dynmaic_service_default"
            app:placeholderImage="@drawable/bg_mine_dynmaic_service_default"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:layout_gravity="center"
            android:id="@+id/iv_mine_dynamic_icon_pioneer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_gravity="top|right"
            android:id="@+id/iv_mine_dynamic_red_dot"
            android:background="@drawable/icon_badge"
            android:visibility="gone"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="30dp"/>
        <FrameLayout
            android:layout_gravity="end"
            android:id="@+id/tv_mine_dynamic_bubble_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="35dp">
            <TextView
                android:textSize="@dimen/resource_size_9"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_mine_dynamic_bubble"
                android:background="@drawable/mine_service_bubble"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:maxLines="1"
                android:paddingStart="@dimen/margin_4dp"
                android:paddingEnd="@dimen/margin_4dp"
                android:layout_marginEnd="4dp"/>
        </FrameLayout>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/bricks_2e333e"
        android:ellipsize="end"
        android:id="@+id/tv_mine_dynamic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_9dp"
        android:maxLines="1"/>
</LinearLayout>
