<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/ll_center"
        android:background="@drawable/dialog_modify_personal_info_bg"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="260dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/seat_number_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的座位："/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="#ff4e65"
                    android:id="@+id/seat_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_2"/>
            </LinearLayout>
            <FrameLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/head_layout"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                    android:id="@+id/head_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    fresco:placeholderImage="@drawable/header_place_holder_2"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundedCornerRadius="50dp"/>
            </FrameLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="170dp"
                    android:maxLines="1"
                    android:singleLine="true"/>
                <com.taobao.movie.android.commonui.widget.MIconfontTextView
                    android:textSize="13dp"
                    android:textColor="#ff8ab4"
                    android:id="@+id/sex_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="1dp"
                    android:text="@string/iconf_girl"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/sex_desc"
                android:visibility="gone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:text="性别：未填写"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/desc_tv"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginTop="1dp"
                android:layout_marginRight="@dimen/margin_25"
                android:text="暂未填写个人介绍"
                android:maxLines="2"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#ff4e65"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/desc_non"
                android:visibility="gone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/margin_30"
                android:text="不上传头像和填写性别本场次将无法购票哦"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/follow_tv"
                android:background="@drawable/off_single_follow_btn_bg_normal"
                android:layout_width="59dp"
                android:layout_height="28dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:text="关注"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/modify_tv"
                android:background="@drawable/dialog_modify_personal_btn_bg_normal"
                android:visibility="gone"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginTop="18dp"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginBottom="20dp"
                android:text="修改个人信息"/>
        </LinearLayout>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="15dp"
            android:textColor="#82999999"
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@+id/close_arrow"
            android:paddingLeft="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingBottom="@dimen/padding_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_off_single_dialog_close"/>
    </FrameLayout>
</RelativeLayout>
