<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/article_head"
        android:background="@color/tpp_gray_6"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/article_image_container"
            android:background="@color/common_text_color14"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                android:id="@+id/article_image"
                android:background="@color/common_text_color14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="0"
                fresco:placeholderImage="@drawable/oscar_default_image"
                fresco:placeholderImageScaleType="fitXY"/>
            <ImageView
                android:id="@+id/article_video_indicate"
                android:visibility="invisible"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/smart_play"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_tag_view_radius_fg_big"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/tv_article_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/article_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_weight="1">
            <TextView
                android:textSize="17dp"
                android:textColor="@color/common_text_color45"
                android:ellipsize="end"
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小鲜肉演技有多烂？本周片单就告诉你"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/common_text_color40"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/subtitle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:minWidth="60dp"
                android:text="又有一部经典影片被小鲜肉们演砸了，小鲜肉们的演技真的那么烂吗？票票推给你几部片告诉你"
                android:maxLines="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/common_color_1006"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/read_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:text="阅读 836"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/common_color_1006"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/article_share_menu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        layout="@layout/oscar_article_favor_menu"/>
    <View
        android:id="@+id/item_bottom_line"
        android:background="#e2e2e2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"
        android:layout_marginLeft="15dp"/>
</LinearLayout>
