<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cinema_list_item_decoration_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ViewStub
        android:id="@+id/cinema_list_item_buyone_giveone_decorate"
        android:layout="@layout/layout_cinema_list_buyone_giveone_decorate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/oscar_cinemalist_content_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="@dimen/cinema_list_item_radius"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/oscar_cinemalist_child_root_view"
            android:background="@drawable/item_click_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/padding_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <FrameLayout
                android:id="@+id/fl_recomment_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.taobao.movie.android.commonui.widget.MoCardTextView
                    android:textSize="9dp"
                    android:textColor="@color/color_tpp_primary_white"
                    android:gravity="center"
                    android:id="@+id/recommend_spec_tag"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:mocard_background_color="@color/tpp_primary_red"
                    app:mocard_background_radius_leftbottom="0dp"
                    app:mocard_background_radius_lefttop="6dp"
                    app:mocard_background_radius_rightbottom="6dp"
                    app:mocard_background_radius_righttop="0dp"/>
            </FrameLayout>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="8dp"
                android:textColor="#ff8533"
                android:gravity="center"
                android:id="@+id/last_visited_icon"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:layout_marginRight="12dp"
                android:text="@string/icon_font_mark_fill"
                android:layout_alignRight="@+id/padding_View"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                app:layout_constraintEnd_toEndOf="@+id/padding_View"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/layout1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/fl_recomment_tag"
                app:flexWrap="nowrap"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="0dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/color_tpp_primary_main_title"
                    android:ellipsize="end"
                    android:id="@+id/oscar_cinemalist_cinema_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    app:layout_flexShrink="1"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="#1c1c1c"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/recomment_tag"
                    android:background="@drawable/cineamlist_recomment_tag_bg_v2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginRight="4dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:layout_flexShrink="0"/>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexGrow="1"
                    app:layout_flexShrink="0">
                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_gravity="top|right"
                        android:orientation="horizontal"
                        android:id="@+id/layout_cinema_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp">
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/tpp_primary_red"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:layout_gravity="bottom"
                            android:id="@+id/oscar_cinenalist_cinema_newcomer"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:layout_marginStart="3dp"/>
                        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/tpp_primary_red"
                            android:ellipsize="end"
                            android:layout_gravity="bottom"
                            android:id="@+id/oscar_cinenalist_cinema_price_stuff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="-2dp"
                            android:text="￥"
                            android:includeFontPadding="false"/>
                        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/tpp_primary_red"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:layout_gravity="bottom"
                            android:id="@+id/oscar_cinenalist_cinema_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"/>
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/tpp_primary_red"
                            android:layout_gravity="bottom"
                            android:id="@+id/oscar_cinenalist_cinema_price_yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0.5dp"
                            android:text="起"
                            android:includeFontPadding="false"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="8dp"
                        android:textColor="@color/color_tpp_primary_assist"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:layout_gravity="right"
                        android:id="@+id/oscar_cinenalist_cinema_oriprice"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-1dp"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="8dp"
                        android:textColor="#ff335c"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:layout_gravity="right"
                        android:id="@+id/oscar_cinenalist_cinema_vip_price"
                        android:paddingLeft="8dp"
                        android:paddingRight="2dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-1dp"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/color_tpp_primary_assist"
                        android:layout_gravity="bottom|right"
                        android:id="@+id/cinema_offline_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/layout2"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                app:layout_constraintTop_toBottomOf="@+id/layout1">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:gravity="center"
                    android:id="@+id/oscar_cinemas_score_tag_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:gravity="center"
                    android:id="@+id/oscar_cinenalist_cinema_no_score"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="暂无好评度"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    app:layout_flexShrink="0"/>
                <View
                    android:id="@+id/oscar_cinemas_score_tag_divider"
                    android:background="#ced1d6"
                    android:visibility="gone"
                    android:layout_width="1px"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:id="@+id/oscar_cinemalist_cinema_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    android:layout_weight="1"
                    style="@style/CinemaList_Address"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:id="@+id/oscar_cinemalist_cinema_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    style="@style/CinemaList_Distance"/>
            </LinearLayout>
            <ViewStub
                android:id="@+id/cinema_distance_mall_metro_des_container"
                android:layout="@layout/layout_cinema_list_distance_mall_metro_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1px"
                android:layout_marginTop="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout2"/>
            <com.taobao.movie.android.app.seat.ui.weight.ExFlowLayout
                android:id="@+id/cinema_function_tag_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingStart="12.5dp"
                android:paddingEnd="13dp"
                android:layout_marginEnd="45dp"
                app:fold_lines="2"
                app:itemSpacing="4dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_collapsedIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cinema_distance_mall_metro_des_container"
                app:lineSpacing="6dp"
                app:max_lines="3"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:gravity="center"
                android:id="@+id/tv_collapsedIcon"
                android:visibility="invisible"
                android:layout_width="42dp"
                android:layout_height="36dp"
                android:layout_marginRight="-3dp"
                android:text="@string/icon_font_down_small"
                app:fontFamily="@font/icon_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout2"/>
            <ViewStub
                android:id="@+id/oscar_cinemalist_cinema_schedules_container"
                android:layout="@layout/layout_cinema_list_schedules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cinema_function_tag_container"/>
            <TextView
                android:id="@+id/oscar_cinemalist_cinema_status"
                android:paddingLeft="12.5dp"
                android:paddingTop="@dimen/margin_8"
                android:paddingRight="13dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cinema_function_tag_container"
                style="@style/CinemaList_Address"/>
            <ViewStub
                android:id="@+id/roll_tip_item"
                android:layout="@layout/layout_cinema_list_roll_tip"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oscar_cinemalist_cinema_status"
                app:layout_goneMarginTop="12dp"/>
            <View
                android:id="@+id/bottom_padding"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roll_tip_item"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ViewStub
            android:id="@+id/cinema_item_favorite_cover"
            android:layout="@layout/layout_cinema_list_favorite_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>
