<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/icon_left_icon"
            android:background="@drawable/icon_back_black_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="@color/color_000000"
            android:gravity="center"
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <View
        android:background="@color/base_head_line_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <cn.damai.uikit.snake.EqualLinearView
        android:id="@+id/scroll_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <View
        android:background="@color/base_head_line_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <cn.damai.commonbusiness.view.DmViewPager
        android:id="@+id/title_pager"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
