<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.view.MarqueTextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_FF2D79"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:id="@+id/tv_tip"
        android:background="#0dff2d79"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_24dp"
            android:textColor="#ffaa00"
            android:id="@+id/icon_pay_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="#ffaa00"
            android:id="@+id/tv_pay_result"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_000000"
        android:id="@+id/tv_order_money"
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_delivery_tip"
        android:paddingTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/ll_order_btn"
        android:paddingLeft="26dp"
        android:paddingTop="24dp"
        android:paddingRight="26dp"
        android:paddingBottom="28dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="@dimen/margin_10dp"
            android:layout_height="35dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_left"
                android:background="@drawable/bg_pay_success_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="11dp"
                android:textColor="#582331"
                android:ellipsize="end"
                android:layout_gravity="right"
                android:id="@+id/tip_left"
                android:background="@drawable/dm_pay_success_tip_bg"
                android:paddingLeft="7dp"
                android:paddingTop="2.5dp"
                android:paddingRight="7dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="-17dp"
                android:layout_marginRight="9dp"
                android:maxLines="1"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_FF2D79"
                android:gravity="center"
                android:id="@+id/tv_right"
                android:background="@drawable/bg_pay_success_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="11dp"
                android:textColor="#582331"
                android:ellipsize="end"
                android:layout_gravity="right"
                android:id="@+id/tip_right"
                android:background="@drawable/dm_pay_success_tip_bg"
                android:paddingLeft="7dp"
                android:paddingTop="2.5dp"
                android:paddingRight="7dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="-17dp"
                android:layout_marginRight="9dp"
                android:maxLines="1"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
