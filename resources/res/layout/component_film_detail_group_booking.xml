<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bgFilmDetailAll"
    android:paddingLeft="12dp"
    android:paddingTop="15dp"
    android:paddingRight="12dp"
    android:paddingBottom="15dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexDirection="row"
        app:flexWrap="nowrap">
        <TextView
            android:textSize="@dimen/font_Headline2_M"
            android:textColor="@color/color_tpp_primary_main_title"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/film_detail_group_booking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_flexShrink="1"/>
        <RelativeLayout
            android:id="@+id/film_detail_group_booking_timer_block"
            android:background="@drawable/item_round_bg_selected"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            app:layout_flexShrink="0">
            <com.taobao.movie.android.commonui.widget.TimerTextView
                android:textSize="10dp"
                android:textColor="#ff901c"
                android:gravity="center_vertical"
                android:id="@+id/film_detail_group_booking_timer"
                android:background="@drawable/group_booking_time_block_right"
                android:paddingLeft="4dp"
                android:paddingRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/film_detail_group_booking_timer_pre"/>
            <TextView
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_white"
                android:gravity="center_vertical"
                android:id="@+id/film_detail_group_booking_timer_pre"
                android:background="@drawable/group_booking_timer_bg"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="距结束"
                android:includeFontPadding="false"/>
        </RelativeLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="end"
            android:id="@+id/film_detail_group_booking_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="更多"
            android:layout_centerVertical="true"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:id="@+id/film_detail_group_booking_arrow"
            android:layout_centerVertical="true"
            app:layout_flexShrink="0"
            style="@style/film_detail_item_arrow_style"/>
    </com.google.android.flexbox.FlexboxLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:id="@+id/film_detail_group_booking_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:singleLine="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:clipChildren="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/film_detail_group_booking_avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/oscar_default_image"
                android:layout_centerVertical="true"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/oscar_default_image"
                app:roundAsCircle="true"/>
            <TextView
                android:textSize="8dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_white"
                android:gravity="center_vertical"
                android:background="@drawable/group_booking_owner_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginBottom="-3dp"
                android:text="团长"
                android:includeFontPadding="false"
                android:layout_alignBottom="@+id/film_detail_group_booking_avatar"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/group_booking_block_member_container"
                android:focusable="false"
                android:clipChildren="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.alibaba.pictures.moimage.MoImageView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/group_booking_block_Add_btn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/group_booking_right_fill_add"/>
            <View
                android:id="@+id/group_booking_block_member_container_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/group_booking_invite_btn_block"
            android:clipChildren="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_white"
                android:gravity="center"
                android:id="@+id/group_booking_invite_btn"
                android:background="@drawable/common_red_small_btn_r18"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="邀请好友"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/tpp_primary_red"
                android:id="@+id/group_booking_invite_btn_tip"
                android:background="@drawable/btn_top_right_pop_bg_31"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="-12dp"
                android:layout_alignTop="@+id/group_booking_invite_btn"
                android:layout_alignRight="@+id/group_booking_invite_btn"
                android:layout_marginEnd="-1px"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            android:id="@+id/group_booking_status_block"
            android:visibility="gone"
            android:layout_width="94dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_secondary_orange"
                android:id="@+id/group_booking_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:id="@+id/group_booking_status_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
