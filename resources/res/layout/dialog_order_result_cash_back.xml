<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="550dp">
        <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
            android:id="@+id/cash_back_animation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_progress="0"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cash_back_amount_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="205dp">
                <LinearLayout
                    android:gravity="bottom|center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp">
                    <TextView
                        android:textSize="45dp"
                        android:textStyle="bold"
                        android:textColor="@color/order_result_cash_back_amount"
                        android:id="@+id/cash_back_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/order_result_cash_back_amount"
                        android:id="@+id/cash_back_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_result_cash_back_unit"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/order_result_cash_back_summary"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/cash_back_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/goto_detail"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_marginTop="335dp"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/close"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
