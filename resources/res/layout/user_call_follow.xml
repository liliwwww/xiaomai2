<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/user_card_bg_12radius"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="117dp"
    android:layout_marginLeft="21dp"
    android:layout_marginRight="21dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="21dp"
            android:text="关注TA 第一时间获取演出动态"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textColor="@color/black"
            android:id="@+id/user_call_follow_close"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:text="@string/iconfont_guanbi24"/>
    </LinearLayout>
    <View
        android:background="#1a000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <ImageView
            android:id="@+id/user_iv_header"
            android:background="@drawable/user_call_follow_bg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/uikit_user_default_icon_trans_white"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/user_tv_name_warp"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/attent_view_star_pop"
            android:layout_toRightOf="@+id/user_iv_header">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/black"
                android:id="@+id/user_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/tv_header_v"
                android:paddingLeft="3dp"
                android:paddingTop="2dp"
                android:visibility="visible"
                android:layout_width="19dp"
                android:layout_height="18dp"
                android:src="@drawable/user_v_tag"
                android:layout_toRightOf="@+id/user_tv_name"
                android:layout_alignBottom="@+id/user_tv_name"/>
        </LinearLayout>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/user_tv_showcout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text=""
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_iv_header"
            android:layout_below="@+id/user_tv_name_warp"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/user_tv_showdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="场在售演出"
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_tv_showcout"
            android:layout_alignBottom="@+id/user_tv_showcout"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/user_tv_showdesc_div"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:text="|"
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_tv_showdesc"
            android:layout_alignBottom="@+id/user_tv_showcout"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/user_tv_fanscout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=""
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_tv_showdesc_div"
            android:layout_below="@+id/user_tv_name_warp"
            android:layout_alignWithParentIfMissing="true"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/user_tv_fansdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text=""
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_tv_fanscout"
            android:layout_alignBottom="@+id/user_tv_fanscout"/>
        <cn.damai.user.repertoite.view.AttentionView
            android:id="@+id/attent_view_star_pop"
            android:layout_width="57dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"/>
    </RelativeLayout>
</LinearLayout>
