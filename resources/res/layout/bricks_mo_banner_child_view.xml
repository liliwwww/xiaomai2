<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/bricks_mo_banner_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:actualImageScaleType="centerCrop"
        tools:backgroundImage="@color/color_bricks_primary_bg"
        tools:fadeDuration="0"
        tools:failureImage="@drawable/bricks_default_image_bg_gradient"
        tools:failureImageScaleType="fitXY"
        tools:placeholderImage="@drawable/bricks_default_image_bg_gradient"
        tools:placeholderImageScaleType="fitXY"
        tools:retryImage="@drawable/bricks_default_image_bg_gradient"
        tools:retryImageScaleType="fitXY"
        tools:use565="true"/>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="bottom|right"
        android:id="@+id/bricks_mo_banner_tag"
        android:background="#59000000"
        android:layout_width="25dp"
        android:layout_height="17dp"
        android:text="广告"/>
</FrameLayout>
