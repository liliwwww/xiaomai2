<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/ll_2_part_container"
        android:layout_width="wrap_content"
        android:layout_height="12dp">
        <TextView
            android:textSize="8dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_tag_name_prefix"
            android:background="@drawable/bricks_common_promotion_tagview_prefixbg_new"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="åˆ¸"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/iv_tag_name_prefix"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bricks_common_promotion_tagview_vip"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
    </FrameLayout>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_tag_name"
        android:background="@drawable/bricks_common_promotion_tagview_bg"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:maxLines="1"/>
    <ImageView
        android:id="@+id/image_tag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
</LinearLayout>
