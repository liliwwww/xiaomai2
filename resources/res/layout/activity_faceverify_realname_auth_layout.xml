<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/title_bar_space"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/mine_base_header_left"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/title_bar_space">
        <ImageView
            android:id="@+id/realname_auth_back"
            android:background="@drawable/icon_base_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="17sp"
            android:textColor="@color/base_head_text_color"
            android:gravity="center"
            android:id="@+id/mine_base_header_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/faceverify_realname_title"
            android:singleLine="true"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/base_header_right"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/realname_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/realname_center_real_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/mine_base_header_left">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_888888"
            android:id="@+id/realname_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:text="真实姓名"
            android:layout_centerVertical="true"/>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:textColorHint="@color/color_DDDDDD"
            android:gravity="center_vertical"
            android:id="@+id/realname_edit"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:hint="@string/faceverify_realname_auth_name_hint"
            android:layout_toLeftOf="@+id/realname_choose_auther_layout"
            android:layout_toRightOf="@+id/realname_tag"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/comment_publish_line"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/realname_choose_auther_layout"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="18dp"
                android:textColor="@color/color_DDDDDD"
                android:gravity="center"
                android:id="@+id/realname_clear_btn"
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_18dp"
                android:text="@string/iconfont_qingchu24"/>
        </LinearLayout>
        <View
            android:id="@+id/realname_center_real_line"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:layout_marginRight="@dimen/margin_18dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/realname_center_certype_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/realname_center_real_layout">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_888888"
            android:id="@+id/realname_certype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:text="证件类型"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:gravity="center_vertical"
            android:id="@+id/certificate_typename"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:layout_toRightOf="@+id/realname_certype"
            android:layout_centerVertical="true"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/add_contacts_id_type_more_btn"
            android:paddingRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <View
            android:id="@+id/realname_center_certype_line"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:layout_marginRight="@dimen/margin_18dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/realname_center_certnum_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/realname_center_certype_layout">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_888888"
            android:id="@+id/realname_cernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:text="证件号码"
            android:layout_centerVertical="true"/>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:textColorHint="@color/color_DDDDDD"
            android:gravity="center_vertical"
            android:id="@+id/realname_cernum_text"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:hint="@string/faceverify_realname_auth_cardid_hint"
            android:layout_toRightOf="@+id/realname_cernum"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/comment_publish_line"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="18dp"
            android:textColor="@color/color_DDDDDD"
            android:gravity="center"
            android:id="@+id/idcard_clear_btn"
            android:visibility="visible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="18dp"
            android:text="@string/iconfont_qingchu24"
            android:layout_alignRight="@+id/realname_cernum_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <cn.damai.commonbusiness.contacts.view.RealNameTipView
        android:id="@+id/realname_auth_tips"
        android:paddingLeft="@dimen/margin_18dp"
        android:paddingRight="@dimen/margin_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_13dp"
        android:layout_below="@+id/realname_center_certnum_layout"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/realname_auth_btn"
        android:background="@drawable/realname_auth_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:text="进入人脸采集"
        android:layout_below="@+id/realname_auth_tips"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
