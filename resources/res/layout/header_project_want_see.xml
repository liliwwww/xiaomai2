<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#f6f7f8"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="33dp"
                android:src="?attr/bgDetailLikeTitle"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/resource_size_21">
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="36dp"
                    android:textColor="?attr/bgDetailLikeDigColor"
                    android:id="@+id/want_see_number_dtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_2e333e"
                    android:gravity="bottom"
                    android:id="@+id/want_see_number_suffix_dtv"
                    android:paddingLeft="3dp"
                    android:paddingTop="@dimen/margin_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/color_69717C"
                android:ellipsize="end"
                android:id="@+id/want_see_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginStart="@dimen/resource_size_21"
                android:layout_marginEnd="@dimen/resource_size_21"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/wanna_see_btn"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_marginEnd="21dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="14dp"
                android:textColor="@color/C_white"
                android:id="@+id/wanna_see_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_xianxin24"
                android:layout_marginEnd="2dp"/>
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="12dp"
                android:id="@+id/wanna_see_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
