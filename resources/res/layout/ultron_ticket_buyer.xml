<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_main"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_main"
        android:paddingLeft="@dimen/margin_21dp"
        android:paddingRight="@dimen/margin_21dp"
        android:paddingBottom="@dimen/margin_3dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll_expend"
        android:paddingTop="@dimen/margin_9dp"
        android:paddingBottom="@dimen/margin_9dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_expend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部观演人"/>
    </LinearLayout>
    <include layout="@layout/ultron_line_layout"/>
</LinearLayout>
