<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.calendar.DayView
        android:textSize="14dp"
        android:textColor="#111111"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/day_view"
        android:layout_width="@dimen/margin_30dp"
        android:layout_height="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_10dp"/>
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_mark_class"
        android:background="@drawable/icon_calendar_ban"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:text="ä¼‘"/>
    <TextView
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_mark_project"
        android:background="@drawable/red_radius"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_marginTop="36dp"/>
    <TextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="@color/coupon_item_price_red"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_mark_holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"/>
</FrameLayout>
