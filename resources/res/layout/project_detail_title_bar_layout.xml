<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/project_detail_title_bar_status_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/project_detail_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_height">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="22dp"
            android:textColor="@color/color_bricks_primary_white"
            android:gravity="center"
            android:id="@+id/project_detail_title_bar_back_btn"
            android:background="@drawable/bg_solid_r9_black"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:text="@string/iconfont_zuojiantou_"
            android:paddingStart="5dp"
            android:layout_marginStart="12dp"/>
        <com.google.android.flexbox.FlexboxLayout
            android:orientation="horizontal"
            android:id="@+id/project_detail_title_bar_info_block"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:alignItems="center">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/project_detail_title_bar_poster"
                android:layout_width="22dp"
                android:layout_height="29dp"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/bricks_default_image_bg_gradient"
                app:layout_flexShrink="0"
                app:placeholderImage="@drawable/bricks_default_image_bg_gradient"
                app:roundedCornerRadius="@dimen/radius_xs"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="@dimen/font_Subhead1_M"
                    android:textColor="@color/cg_7"
                    android:ellipsize="end"
                    android:id="@+id/project_detail_title_bar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:layout_flexShrink="1"/>
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true">
                    <com.alibaba.pictures.bricks.view.DMRatingBar
                        android:id="@+id/project_detail_title_bar_rating_score"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="1dp"
                        app:isIndicator="true"
                        app:showText="false"
                        app:starCount="5"
                        app:starDistance="@dimen/margin_1dp"
                        app:starEmpty="@drawable/product_detail_dark_star"
                        app:starFill="?attr/bgRatingBarStar24"
                        app:starSize="11dp"/>
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/cb_orange"
                        android:layout_gravity="bottom"
                        android:id="@+id/project_detail_title_bar_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.alibaba.pictures.bricks.view.FakeBoldTextView
                        android:textSize="10dp"
                        android:textColor="@color/color_bricks_primary_invalid"
                        android:id="@+id/project_detail_title_bar_num_suf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/project_detail_my_want_share_block"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:textColor="@color/color_bricks_primary_white"
                android:gravity="center"
                android:id="@+id/project_detail_my_want_icon"
                android:background="@drawable/bg_solid_r9_black"
                android:padding="1dp"
                android:visibility="visible"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="19dp"/>
            <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                android:id="@+id/project_detail_my_want_lottie"
                android:visibility="gone"
                android:layout_width="27dp"
                android:layout_height="27dp"
                app:lottie_autoPlay="false"
                app:lottie_rawRes="@raw/lottie_project_detail_my_want_btn_want"
                app:lottie_repeatCount="0"/>
            <FrameLayout
                android:id="@+id/project_detail_title_bar_share_block"
                android:background="@drawable/bg_solid_r9_black"
                android:layout_width="27dp"
                android:layout_height="27dp">
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_bricks_primary_white"
                    android:gravity="center"
                    android:id="@+id/project_detail_title_bar_share_btn"
                    android:visibility="gone"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="@string/iconfont_fenxiang44"/>
                <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                    android:id="@+id/project_detail_title_bar_share_btn_lottie"
                    android:visibility="visible"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/lottie_project_detail_default_share"
                    app:lottie_repeatCount="1"/>
            </FrameLayout>
        </LinearLayout>
        <cn.damai.uikit.tag.DMCertInfoTagView
            android:id="@+id/project_detail_title_bar_cert_btn"
            android:visibility="gone"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</LinearLayout>
