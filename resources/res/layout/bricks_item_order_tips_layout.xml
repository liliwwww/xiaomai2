<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_top_container"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_tips_container"
        android:background="@drawable/bricks_order_tips_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="6dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <ImageView
            android:id="@+id/iv_tips_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/bricks_tips_icon"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#eb7609"
            android:id="@+id/tv_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/cl_pay_card"
        android:background="#ea416b"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="83.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <TextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/tv_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:id="@+id/tv_pay_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Â¥ "
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/tv_pay_status"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/tv_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/tv_pay_symbol"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:id="@+id/tv_order_state_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@+id/tv_pay_status"
            app:layout_constraintTop_toBottomOf="@+id/tv_pay_status"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
