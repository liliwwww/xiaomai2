<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ticklet_venue_exchange_site_item_layout"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_13dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="@dimen/margin_13dp">
        <TextView
            android:id="@+id/ticklet_venue_exchange_site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            style="@style/ticklet_111111_13dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/ticklet_venue_exchange_site_navi"
            android:background="@drawable/ticklet_tryagain_btn_bg"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:text="导航"
            style="@style/ticklet_ff2d79_13dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/ticklet_venue_exchange_copy"
            android:background="@drawable/ticklet_tryagain_btn_bg"
            android:visibility="gone"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:text="复制"
            style="@style/ticklet_ff2d79_13dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_13dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/margin_13dp"
        android:layout_marginBottom="17dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:gravity="center"
            android:id="@+id/ticklet_venue_address_icon"
            android:paddingTop="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_dingweichangguan_"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/ticklet_dddddd_13dp"/>
        <TextView
            android:id="@+id/ticklet_venue_exchange_site_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_toRightOf="@+id/ticklet_venue_address_icon"
            android:layout_alignParentTop="true"
            style="@style/ticklet_999999_13dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:gravity="center"
            android:id="@+id/ticklet_ticklet_venue_time_icon"
            android:paddingTop="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/iconfont_ticket_time"
            android:layout_below="@+id/ticklet_venue_exchange_site_address"
            android:layout_alignParentLeft="true"
            style="@style/ticklet_dddddd_12dp"/>
        <TextView
            android:id="@+id/ticklet_venue_exchange_hour_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="100dp"
            android:layout_toRightOf="@+id/ticklet_ticklet_venue_time_icon"
            android:layout_below="@+id/ticklet_venue_exchange_site_address"
            style="@style/ticklet_999999_13dp"/>
        <TextView
            android:id="@+id/ticklet_venue_exchange_site_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            style="@style/ticklet_999999_13dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/ticklet_venue_item_bottom_line"
        android:background="@color/color_E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_13dp"/>
</LinearLayout>
