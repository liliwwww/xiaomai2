<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:background="@color/white"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout xmlns:riv="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fl_artist_club_item_video"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="15dp">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/image_artist_club_item_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                riv:borderRadius="12dp"
                riv:type="radial"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/dm_poster_video_icon"/>
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/image_dujia"
                android:layout_width="26dp"
                android:layout_height="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/common_dujia"/>
        </FrameLayout>
        <cn.damai.uikit.view.NineGridlayout
            android:id="@+id/artist_club_item_ninelayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:id="@+id/artist_club_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:maxLines="5"
            android:lineSpacingMultiplier="1.4"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#30aeff"
            android:id="@+id/tv_quanwen"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="全文"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/artist_club_item_date"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:maxLines="1"/>
        <View
            android:id="@+id/artist_club_item_line"
            android:background="#26000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/no_vip_content"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="#f8d2b2"
            android:gravity="center_vertical"
            android:id="@+id/no_vip_goto"
            android:background="@drawable/bg_vip_artist_btn"
            android:paddingLeft="58dp"
            android:paddingTop="@dimen/margin_9dp"
            android:paddingRight="58dp"
            android:paddingBottom="@dimen/margin_9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:text="加入SVIP会员 独家内容抢先看 "/>
    </LinearLayout>
</FrameLayout>
