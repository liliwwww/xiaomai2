<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_22dp"
                android:gravity="center_vertical"
                android:id="@+id/back_btn"
                android:paddingRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_zuojiantou_"/>
            <FrameLayout
                android:id="@+id/back_btn_right_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/back_btn"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:lines="1"
                android:layout_centerInParent="true"/>
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:layout_width="54dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_FF2869"
                    android:gravity="center"
                    android:id="@+id/share_btn"
                    android:background="@drawable/bg_share_pink_1"
                    android:layout_width="54dp"
                    android:layout_height="25dp"
                    android:text="分享"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="22dp"
                    android:textColor="@color/bricks_5f6672"
                    android:gravity="end|center_vertical"
                    android:id="@+id/share_btn_v2"
                    android:visibility="gone"
                    android:layout_width="54dp"
                    android:layout_height="25dp"
                    android:text="@string/iconfont_fenxiang44"/>
            </FrameLayout>
        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:background="#19000000"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</FrameLayout>
