<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/dm_aliuser_root_region"
    android:background="@color/aliuser_default_bg"
    android:paddingLeft="@dimen/aliuser_page_padding"
    android:paddingRight="@dimen/aliuser_page_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/aliuser_region_rl"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aliuser_space_48">
        <TextView
            android:textSize="@dimen/textsize_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aliuser_region"
            style="@style/AliUserFuncTextAppearance"/>
        <TextView
            android:textSize="@dimen/textsize_14"
            android:id="@+id/aliuser_region_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国大陆 +86"
            android:drawableRight="@drawable/aliuser_down_arrow"
            android:drawablePadding="@dimen/aliuser_space_8"
            android:layout_alignParentRight="true"
            style="@style/AliUserFuncTextAppearance"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="@dimen/aliuser_textsize_small"
            android:id="@+id/aliuser_register_mobile_et"
            android:background="@drawable/dm_aliuser_edittext_bg"
            android:nextFocusDown="@+id/aliuser_register_sms_code_et"
            android:layout_height="@dimen/aliuser_space_44"
            android:layout_marginTop="@dimen/margin_24dp"
            android:hint="请输入手机号"
            android:maxLength="20"
            android:inputType="phone"
            style="@style/AliUserEditTextStyle"/>
        <ImageView
            android:id="@+id/aliuser_login_mobile_clear_iv"
            android:paddingLeft="@dimen/aliuser_space_8"
            android:paddingTop="@dimen/aliuser_space_8"
            android:paddingRight="@dimen/aliuser_space_4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dm_aliuser_ic_edit_text_clear_x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/aliuser_space_8"
            android:paddingEnd="@dimen/aliuser_space_4"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        style="@style/AliUserEditParentLayoutStyle">
        <EditText
            android:textSize="@dimen/textsize_14"
            android:gravity="center_vertical"
            android:id="@+id/aliuser_register_sms_code_et"
            android:background="@drawable/dm_aliuser_edittext_bg"
            android:layout_height="@dimen/aliuser_space_44"
            android:layout_marginTop="@dimen/aliuser_space_8"
            android:hint="@string/aliuser_sms_code_hint"
            android:maxLength="6"
            android:digits="1234567890"
            android:inputType="number"
            style="@style/AliUserEditTextStyle"/>
        <com.ali.user.mobile.ui.widget.CountDownButton
            android:enabled="false"
            android:textSize="13sp"
            android:textColor="@color/aliuser_send_sms_text_color"
            android:id="@+id/aliuser_register_send_smscode_btn"
            android:background="@drawable/aliuser_sms_btn_bg"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginBottom="@dimen/aliuser_space_4"
            android:text="@string/aliuser_signup_verification_getCode"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/textsize_12"
        android:textColor="@color/aliuser_func_text_color"
        android:id="@+id/aliuser_send_sms_success_tip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aliuser_space_8"
        android:text="@string/aliuser_sms_code_success_hint"
        android:drawableLeft="@drawable/dm_aliuser_ic_tip"
        android:drawablePadding="@dimen/margin_3dp"/>
    <LinearLayout
        android:id="@+id/aliuser_register_reg_btn_ll"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp">
        <Button
            android:enabled="false"
            android:textSize="@dimen/margin_18dp"
            android:textColor="@drawable/aliuser_main_button_color"
            android:gravity="center"
            android:id="@+id/aliuser_register_reg_btn"
            android:background="@drawable/aliuser_button_bg_damai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aliuser_reg"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/aliuser_space_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/dm_cb_register_pro"
            android:background="@drawable/common_business_check_circle_selector"
            android:layout_width="@dimen/margin_20dp"
            android:layout_height="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:button="@null"/>
        <TextView
            android:textColor="#999999"
            android:id="@+id/aliuser_protocol_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>
</LinearLayout>
