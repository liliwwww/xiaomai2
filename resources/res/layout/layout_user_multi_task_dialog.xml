<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#f4f5f6"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:layout_marginTop="80dp"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/user_task_dialog_top_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/user_task_dialog_count_down_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="10dp"
                android:textColor="#2e333e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="活动还剩"/>
            <cn.damai.trade.view.MTabDigit
                android:id="@+id/user_task_dialog_count_down_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:backgroundColor="#ff0080"
                app:corner_size="3dp"
                app:leftRightPadding="6dp"
                app:textColor="@color/white"
                app:textSize="14dp"
                app:topBottomPadding="10dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#2e333e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="天"/>
            <cn.damai.trade.view.MTabDigit
                android:id="@+id/user_task_dialog_count_down_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundColor="#ff0080"
                app:corner_size="3dp"
                app:leftRightPadding="6dp"
                app:textColor="@color/white"
                app:textSize="14dp"
                app:topBottomPadding="10dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#2e333e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="时"/>
            <cn.damai.trade.view.MTabDigit
                android:id="@+id/user_task_dialog_count_down_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundColor="#ff0080"
                app:corner_size="3dp"
                app:leftRightPadding="6dp"
                app:textColor="@color/white"
                app:textSize="14dp"
                app:topBottomPadding="10dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#2e333e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="分"/>
            <cn.damai.trade.view.MTabDigit
                android:id="@+id/user_task_dialog_count_down_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundColor="#ff0080"
                app:corner_size="3dp"
                app:leftRightPadding="6dp"
                app:textColor="@color/white"
                app:textSize="14dp"
                app:topBottomPadding="10dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#2e333e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="秒"/>
        </LinearLayout>
        <TextView
            android:id="@+id/user_task_dialog_prize_info_bg"
            android:background="@drawable/bg_user_task_dialog_item_corner"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_task_dialog_count_down_layout"/>
        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#ff4886"
            android:id="@+id/user_task_dialog_cost_price_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="¥ "
            android:layout_marginStart="13dp"
            app:layout_constraintLeft_toLeftOf="@+id/user_task_dialog_prize_info_bg"
            app:layout_constraintTop_toTopOf="@+id/user_task_dialog_prize_info_bg"/>
        <TextView
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="#ff4886"
            android:ellipsize="end"
            android:id="@+id/user_task_dialog_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:maxWidth="60dp"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/user_task_dialog_cost_price_symbol"
            app:layout_constraintTop_toTopOf="@+id/user_task_dialog_prize_info_bg"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#959aa5"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/user_task_dialog_start_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxWidth="65dp"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="@+id/user_task_dialog_cost_price_symbol"
            app:layout_constraintTop_toBottomOf="@+id/user_task_dialog_cost_price_symbol"/>
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#2e333e"
            android:ellipsize="end"
            android:id="@+id/user_task_dialog_coupon_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:maxLines="2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintLeft_toRightOf="@+id/user_task_dialog_start_fee"
            app:layout_constraintRight_toRightOf="@+id/user_task_dialog_prize_info_bg"
            app:layout_constraintTop_toTopOf="@+id/user_task_dialog_prize_info_bg"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#959aa5"
            android:ellipsize="end"
            android:id="@+id/user_task_dialog_coupon_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintLeft_toRightOf="@+id/user_task_dialog_start_fee"
            app:layout_constraintRight_toRightOf="@+id/user_task_dialog_prize_info_bg"
            app:layout_constraintTop_toBottomOf="@+id/user_task_dialog_coupon_title"/>
        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#959aa5"
            android:ellipsize="end"
            android:id="@+id/user_task_dialog_prize_not_win"
            android:background="@drawable/bg_user_task_dialog_not_win_corner"
            android:paddingLeft="13dp"
            android:paddingTop="5dp"
            android:paddingRight="13dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="待解锁"
            android:maxLines="1"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_task_dialog_prize_info_bg"
            app:layout_constraintRight_toRightOf="@+id/user_task_dialog_prize_info_bg"
            app:layout_constraintTop_toTopOf="@+id/user_task_dialog_prize_info_bg"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="45dp"
            android:textColor="#ced1d6"
            android:id="@+id/user_task_dialog_prize_win_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_task_dialog_prize_info_bg"
            app:layout_constraintRight_toRightOf="@+id/user_task_dialog_prize_info_bg"
            app:layout_constraintTop_toTopOf="@+id/user_task_dialog_prize_info_bg"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/user_task_dialog_task_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_task_dialog_prize_info_bg">
            <View
                android:background="#40959aa5"
                android:layout_width="35dp"
                android:layout_height="0.5dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#959aa5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="完成以下任务即可领取哦"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
            <View
                android:background="#40959aa5"
                android:layout_width="35dp"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_task_dialog_task_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_task_dialog_task_hint"/>
        <TextView
            android:id="@+id/bottom_submit_bg"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/user_task_dialog_bottom_submit"
            android:background="@drawable/bg_user_multi_task_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:text="确认"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_submit_bg"
            app:layout_constraintLeft_toLeftOf="@+id/bottom_submit_bg"
            app:layout_constraintRight_toRightOf="@+id/bottom_submit_bg"
            app:layout_constraintTop_toTopOf="@+id/bottom_submit_bg"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
