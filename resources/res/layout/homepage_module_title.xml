<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/module_title_layout"
    android:background="@drawable/home_title_bg_gradient"
    android:paddingLeft="12dp"
    android:paddingTop="15dp"
    android:paddingRight="21dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20dp"
        android:textColor="@color/color_000000"
        android:layout_gravity="center_vertical"
        android:id="@+id/homepage_module_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_weight="1"/>
    <cn.damai.tetris.component.home.widget.HomeTabScrollView
        android:id="@+id/hometab_scrollView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/homepage_module_title_more_layout"
        android:background="@drawable/homepage_module_title_more_bg"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/homepage_module_title_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/homepage_module_title_more_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou_"/>
    </LinearLayout>
</LinearLayout>
