<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ll_timer"
    android:background="@drawable/bricks_timer_common_bg"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="34dp">
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_bricks_primary_red"
        android:id="@+id/tv_perform_time_icon"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:text="@string/iconfont_ticket_time"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_000000"
        android:id="@+id/tv_perform_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5月3日10点开抢"
        android:singleLine="true"
        android:layout_weight="1"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="15dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/tv_timer_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"/>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="12dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/tv_timer_day_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="天"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="15dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/tv_timer_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"/>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="10dp"
        android:textColor="@color/color_FF2869"
        android:gravity="center_vertical"
        android:id="@+id/tv_timer_hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text=":"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="15dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/tv_timer_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="10dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/tv_timer_min_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:text=":"/>
    <com.alibaba.pictures.bricks.view.DMDigitTextView
        android:textSize="15dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/tv_timer_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
