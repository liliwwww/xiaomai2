<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/contact_item_head"
        android:background="@color/aliuser_region_bg_color"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="27dp">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/aliuser_color_black"
            android:layout_gravity="center_vertical"
            android:id="@+id/contact_item_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="A"/>
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/aliuser_country_list_item_selector"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/aliuser_color_black"
            android:id="@+id/region_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="A"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/region_select"
            android:background="@drawable/aliuser_selected"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/aliuser_color_light_gray"
            android:id="@+id/region_number"
            android:paddingLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="A"
            android:layout_toRightOf="@+id/region_name"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
