<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/reset_attendees_layout"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <View
        android:id="@+id/member_lottie_strategy_holder"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/member_lottie_strategy"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/member_lottie_strategy"
        android:visibility="gone"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/reset_attendees_layout"
        android:layout_alignParentRight="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <HorizontalScrollView
        android:id="@+id/member_hs_layout"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/member_lottie_strategy_holder">
        <RelativeLayout
            android:paddingLeft="@dimen/margin_5dp"
            android:paddingRight="@dimen/margin_5dp"
            android:paddingBottom="@dimen/margin_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.damai.uikit.shadowlayout.DMShadowLayout
                android:id="@+id/tm_prompt_timer_exchange_layout_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="#0e000000"
                app:sl_shadowRadius="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tm_prompt_timer_exchange_layout"
                    android:background="?attr/bgVipBuyVipSellBg"
                    android:paddingLeft="@dimen/margin_12dp"
                    android:paddingTop="@dimen/margin_9dp"
                    android:paddingRight="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_9dp"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:minWidth="260dp">
                    <com.alibaba.pictures.moimage.MoImageView
                        android:id="@+id/tm_prompt_vip_icon"
                        android:layout_width="62dp"
                        android:layout_height="@dimen/margin_18dp"
                        android:src="?attr/bgVipBuyLogo"
                        android:scaleType="fitXY"
                        app:failureImage="?attr/bgVipBuyLogo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:placeholderImage="?attr/bgVipBuyLogo"/>
                    <TextView
                        android:textSize="@dimen/margin_14dp"
                        android:textColor="?attr/color874953to171717"
                        android:gravity="center"
                        android:id="@+id/tm_prompt_timer_exchange_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_3dp"
                        app:layout_constraintLeft_toRightOf="@+id/tm_prompt_vip_icon"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="@dimen/margin_12dp"
                        android:textColor="@color/color_4D4D56"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/tm_prompt_timer_exchange_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:maxLines="1"
                        app:layout_constraintLeft_toRightOf="@+id/tm_prompt_timer_exchange_desc_icon"
                        app:layout_constraintTop_toBottomOf="@+id/tm_prompt_vip_icon"
                        app:layout_constraintWidth_max="145dp"
                        app:layout_constraintWidth_min="95dp"/>
                    <ImageView
                        android:id="@+id/tm_prompt_timer_exchange_desc_icon"
                        android:paddingRight="@dimen/margin_3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_14dp"
                        android:src="?attr/bgVipBuyLogoLightning"
                        android:scaleType="fitXY"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tm_prompt_vip_icon"/>
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="@dimen/margin_10dp"
                        android:textColor="?attr/colorFF4361to171717"
                        android:gravity="center"
                        android:id="@+id/tm_prompt_timer_exchange_down"
                        android:background="?attr/bgVipBuyTimeBg"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_2dp"
                        android:paddingRight="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6dp"
                        app:layout_constraintLeft_toRightOf="@+id/tm_prompt_timer_exchange_type"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <View
                        android:id="@+id/tv_member_timer_placeholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_10dp"
                        app:layout_constraintLeft_toRightOf="@+id/tm_prompt_timer_exchange_desc"
                        app:layout_constraintRight_toLeftOf="@+id/tv_member_timer_exchange_remind_me"
                        app:layout_constraintTop_toBottomOf="@+id/tm_prompt_timer_exchange_down"/>
                    <TextView
                        android:textSize="@dimen/margin_11dp"
                        android:textColor="?attr/bgVipBuyRemindAddTvColor"
                        android:gravity="center"
                        android:id="@+id/tv_member_timer_exchange_remind_me"
                        android:background="?attr/bgVipBuyRemindAddBg"
                        android:paddingLeft="@dimen/margin_6dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingRight="@dimen/margin_6dp"
                        android:paddingBottom="@dimen/margin_4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7dp"
                        android:layout_marginRight="@dimen/margin_6dp"
                        android:text="添加提醒"
                        app:layout_constraintRight_toLeftOf="@+id/tv_member_timer_exchange_action"
                        app:layout_constraintTop_toBottomOf="@+id/tm_prompt_timer_exchange_down"/>
                    <TextView
                        android:textSize="@dimen/margin_11dp"
                        android:textColor="?attr/bgDetailColorWhite1C1C1C"
                        android:gravity="center"
                        android:id="@+id/tv_member_timer_exchange_action"
                        android:background="?attr/bgVipBuyRightBtnBg"
                        android:paddingLeft="@dimen/margin_6dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingRight="@dimen/margin_6dp"
                        android:paddingBottom="@dimen/margin_4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tm_prompt_timer_exchange_down"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </cn.damai.uikit.shadowlayout.DMShadowLayout>
            <cn.damai.uikit.shadowlayout.DMShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tm_prompt_timer_exchange_layout_shadow"
                android:layout_alignParentTop="true"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="#0e000000"
                app:sl_shadowRadius="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/member_normal_start_sale_layout"
                    android:background="?attr/bgVipBuyNormalSellBg"
                    android:paddingLeft="@dimen/margin_12dp"
                    android:paddingTop="@dimen/margin_9dp"
                    android:paddingRight="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_9dp"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:minWidth="190dp">
                    <TextView
                        android:textSize="@dimen/margin_14dp"
                        android:textColor="?attr/color874953to171717"
                        android:gravity="center"
                        android:id="@+id/normal_start_sale_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="@dimen/margin_10dp"
                        android:textColor="?attr/colorFF4361to171717"
                        android:gravity="center"
                        android:id="@+id/normal_start_sale_down"
                        android:background="?attr/bgVipBuyTimeBg"
                        android:paddingLeft="@dimen/margin_4dp"
                        android:paddingTop="@dimen/margin_2dp"
                        android:paddingRight="@dimen/margin_4dp"
                        android:paddingBottom="@dimen/margin_2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6dp"
                        android:layout_marginTop="1dp"
                        app:layout_constraintLeft_toRightOf="@+id/normal_start_sale_desc"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="@dimen/margin_12dp"
                        android:textColor="@color/color_4D4D56"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/normal_start_sale_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:maxLines="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/normal_start_sale_desc"
                        app:layout_constraintWidth_max="210dp"
                        app:layout_constraintWidth_min="100dp"/>
                    <View
                        android:id="@+id/tv_member_timer_normal_placeholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_10dp"
                        app:layout_constraintLeft_toRightOf="@+id/normal_start_sale_time"
                        app:layout_constraintRight_toLeftOf="@+id/tv_normal_start_sale_remind_me"/>
                    <TextView
                        android:textSize="@dimen/margin_11dp"
                        android:textColor="?attr/bgVipBuyRemindAddTvColor"
                        android:gravity="center"
                        android:id="@+id/tv_normal_start_sale_remind_me"
                        android:background="?attr/bgVipBuyRemindAddBg"
                        android:paddingLeft="@dimen/margin_6dp"
                        android:paddingTop="@dimen/margin_4dp"
                        android:paddingRight="@dimen/margin_6dp"
                        android:paddingBottom="@dimen/margin_4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_14dp"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:text="添加提醒"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/normal_start_sale_desc"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </cn.damai.uikit.shadowlayout.DMShadowLayout>
        </RelativeLayout>
    </HorizontalScrollView>
</RelativeLayout>
