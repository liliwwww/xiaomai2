<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:background="@color/white"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/text_color_black"
            android:ellipsize="end"
            android:id="@+id/content_item_text_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:maxLines="5"
            android:lineSpacingMultiplier="1.4"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#30aeff"
            android:id="@+id/content_item_text_quanwen"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="全文"/>
        <cn.damai.uikit.view.StrokeLinearLayout
            android:orientation="vertical"
            android:id="@+id/sll_content_item_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:sl_corners_radius="12dp"
            app:sl_stroke_color="#26000000"
            app:sl_stroke_width="0px">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fl_content_item_poster_container"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="188dp">
                    <cn.damai.uikit.view.StrokeLinearLayout
                        android:orientation="vertical"
                        android:id="@+id/content_item_poster_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:sl_corners_radius="12dp"
                        app:sl_stroke_color="#26000000"
                        app:sl_stroke_width="1px">
                        <cn.damai.uikit.view.RoundImageView
                            android:id="@+id/image_content_item_poster"
                            android:layout_width="match_parent"
                            android:layout_height="188dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            app:borderRadius="12dp"
                            app:type="radial"/>
                    </cn.damai.uikit.view.StrokeLinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/content_item_poster_video_play_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/dm_poster_video_icon"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:layout_gravity="bottom|right"
                        android:id="@+id/content_item_video_time"
                        android:background="@drawable/dm_content_item_video_time_bg"
                        android:layout_width="31dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="00:00"/>
                </FrameLayout>
                <cn.damai.uikit.view.NineGridlayout
                    android:id="@+id/content_item_ninelayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/text_color_black"
                    android:ellipsize="end"
                    android:id="@+id/content_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_12dp"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginRight="@dimen/margin_12dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:maxLines="2"
                    android:layout_alignBottom="@+id/fl_content_item_poster_container"
                    android:lineSpacingMultiplier="1.4"/>
            </LinearLayout>
        </cn.damai.uikit.view.StrokeLinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:textSize="12dp"
                android:textColor="#9c9ca5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@+id/artist_club_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <LinearLayout
                android:gravity="right"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/content_free_zan_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="14dp"
                    android:textColor="#3c3f44"
                    android:layout_gravity="center"
                    android:id="@+id/content_free_praise_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:text="@string/iconfont_dianzan_"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#9c9ca5"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:id="@+id/tv_content_free_item_praise_num"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:text="0000"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/content_item_divide_line"
            android:background="#26000000"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</FrameLayout>
