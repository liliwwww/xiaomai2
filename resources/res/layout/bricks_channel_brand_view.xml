<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_notice"
    android:background="@drawable/bricks_shape_white_radius12"
    android:layout_width="208dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/bricks_channel_brand_top_block"
        android:background="@drawable/abg_b_purple_default_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/bricks_channel_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                app:layout_flexShrink="1"/>
            <com.alibaba.pictures.moimage.MoImageView
                android:gravity="center"
                android:id="@+id/bricks_channel_brand_tag_img"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="16dp"
                android:layout_marginLeft="3dp"
                app:layout_flexShrink="0"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/bricks_channel_brand_right_arrow"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_youjiantou12"
                app:layout_flexShrink="0"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:id="@+id/bricks_channel_brand_fans_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"/>
    </LinearLayout>
    <include
        android:id="@+id/bricks_channel_brand_project_first"
        layout="@layout/bricks_channel_brand_project_view"/>
    <include
        android:id="@+id/bricks_channel_brand_project_second"
        layout="@layout/bricks_channel_brand_project_view"/>
</LinearLayout>
