<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="18dp"
    android:weightSum="3">
    <com.taobao.movie.android.app.community.filmfavor.FilmFavorItemView
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/film_content_1"
        android:background="@drawable/film_favor_select_bg0"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:paddingRight="9dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="中国"
        android:includeFontPadding="false"
        android:layout_weight="1"/>
    <com.taobao.movie.android.app.community.filmfavor.FilmFavorItemView
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/film_content_2"
        android:background="@drawable/film_favor_select_bg0"
        android:paddingLeft="18dp"
        android:paddingTop="12dp"
        android:paddingRight="18dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="加拿大"
        android:includeFontPadding="false"
        android:layout_weight="1"/>
    <com.taobao.movie.android.app.community.filmfavor.FilmFavorItemView
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/film_content_3"
        android:background="@drawable/film_favor_select_bg0"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:paddingRight="9dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="最多五个字"
        android:includeFontPadding="false"
        android:layout_weight="1"/>
</LinearLayout>
