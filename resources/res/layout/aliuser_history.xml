<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/aliuser_login_history_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.ali.user.mobile.ui.widget.CircleImageView
        android:id="@+id/aliuser_login_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/aliuser_space_12"
        android:layout_marginBottom="@dimen/aliuser_space_12"
        android:contentDescription="头像"/>
    <TextView
        android:id="@+id/aliuser_login_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/aliuser_space_40"/>
</LinearLayout>
