<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_width="45dp"
    android:layout_height="66dp">
    <FrameLayout
        android:layout_gravity="top"
        android:id="@+id/view_long_select"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp">
        <View
            android:id="@+id/view_long_select_inner"
            android:background="@drawable/copy_common_calendar_day_long_select_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="top"
        android:id="@+id/view_bg"
        android:background="@drawable/copy_common_calendar_day_select_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/color_000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="top|center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_666666"
            android:ellipsize="none"
            android:gravity="center"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_day_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="劳动是"
            android:singleLine="true"
            android:maxLength="3"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/tv_day_tag_holiday"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:id="@+id/calendar_day_tip_rl"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="3dp">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="6dp"
            android:textColor="#ff9e6c"
            android:id="@+id/calendar_day_tip_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_shangjiantou"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/calendar_day_tip"
            android:background="@drawable/copy_common_calendar_day_tip_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:maxLines="2"
            android:layout_below="@+id/calendar_day_tip_arrow"/>
    </RelativeLayout>
</FrameLayout>
