<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_invoice_title_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hn_order_invoice_title_type"
                style="@style/style_hn_order_invoice_title"/>
            <TextView
                android:textColor="@color/main_color"
                android:id="@+id/tv_invoice_title_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/style_hn_order_invoice_title_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_invoice_title_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_below="@+id/layout_invoice_title_type">
            <TextView
                android:id="@+id/tv_invoice_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_hn_order_invoice_subtitle"/>
            <EditText
                android:id="@+id/et_invoice_title_1_content"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/tv_invoice_title_1"
                android:layout_alignTop="@+id/tv_invoice_title_1"
                android:layout_marginStart="26dp"
                android:layout_toEndOf="@+id/tv_invoice_title_1"
                style="@style/style_hn_order_invoice_subtitle_content"/>
            <TextView
                android:id="@+id/tv_invoice_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_below="@+id/tv_invoice_title_1"
                style="@style/style_hn_order_invoice_subtitle"/>
            <EditText
                android:id="@+id/et_invoice_title_2_content"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/ic_person"
                android:layout_toRightOf="@+id/tv_invoice_title_2"
                android:layout_alignLeft="@+id/et_invoice_title_1_content"
                android:layout_alignTop="@+id/tv_invoice_title_2"
                android:layout_toStartOf="@+id/ic_person"
                android:layout_toEndOf="@+id/tv_invoice_title_2"
                android:layout_alignStart="@+id/et_invoice_title_1_content"
                style="@style/style_hn_order_invoice_subtitle_content"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="24dp"
                android:textColor="@color/main_color"
                android:id="@+id/ic_person"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:text="@string/iconfont_goupiaoren24"
                android:layout_below="@+id/tv_invoice_title_1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
