<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_content_wrapper"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text=""
            android:maxLines="4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:lineSpacingMultiplier="1.4"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_forward"
            android:background="@color/color_F5F5F5"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comment">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/color_FF1268"
                    android:ellipsize="end"
                    android:id="@+id/tv_comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="9dp"
                    android:text=""
                    android:maxLines="4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
            </LinearLayout>
            <cn.damai.uikit.view.NineGridlayout
                android:id="@+id/ninelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/tv_comment_text"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="right"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        <include layout="@layout/feeds_interact_layout"/>
    </RelativeLayout>
</LinearLayout>
