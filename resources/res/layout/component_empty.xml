<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/resource_size_110"
        android:layout_height="@dimen/resource_size_110"
        android:src="@drawable/common_error_ticket_empty"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/resource_size_14"
        android:textColor="#98a7c2"
        android:gravity="center_horizontal"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/resource_size_33"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
