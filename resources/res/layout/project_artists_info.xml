<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/project_artists_info_block_single"
        android:background="@drawable/bg_border_corner_white_9"
        android:padding="12dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.bricks.view.RoundRadiusImageView
            android:id="@+id/project_artists_info_artists_poster"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:scaleType="centerCrop"
            app:r_round_radius="6dp"
            app:r_stroke_color="#1a000000"
            app:r_stroke_width="1px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/project_artists_info_content_block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="14dp"
                android:textColor="@color/color_bricks_primary_main_title"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/project_artists_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>
            <LinearLayout
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="16dp"
                    android:textColor="#69717c"
                    android:id="@+id/project_artists_info_fans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#69717c"
                    android:id="@+id/project_artists_info_fans_num_suffix1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#69717c"
                    android:id="@+id/project_artists_info_fans_num_suffix2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/project_artists_info_digit_divider"
                    android:background="#e9ebef"
                    android:visibility="visible"
                    android:layout_width="0.5dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="5.5dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/>
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="16dp"
                    android:textColor="#69717c"
                    android:id="@+id/project_artists_info_tour_city_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#69717c"
                    android:id="@+id/project_artists_info_tour_city_num_suffix1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#69717c"
                    android:ellipsize="end"
                    android:id="@+id/project_artists_info_tour_city_num_suffix2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/project_artists_info_btn_block"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/project_artists_info_btn"
                android:background="?attr/bgDetailBrandLikeBtnSelect"
                android:layout_width="64dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true">
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_pioneer_primary_black"
                    android:id="@+id/project_artists_info_btn_des_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="@string/iconfont_jiarujiahao24"/>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_pioneer_primary_black"
                    android:id="@+id/project_artists_info_btn_des"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/project_artists_info_block_multi"
        android:background="@drawable/bg_border_corner_white_9"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="15dp"
            android:textColor="@color/color_bricks_primary_main_title"
            android:gravity="center"
            android:id="@+id/project_artists_info_block_title"
            android:paddingTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="演职人员"
            android:paddingStart="12dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/project_artists_info_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
