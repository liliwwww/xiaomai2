<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="12dp"
    android:layout_width="219dp"
    android:layout_height="118dp">
    <RelativeLayout
        android:layout_width="118dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_centerVertical="true">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/brand_album_item_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            app:borderRadius="6dp"
            app:clipLeftBottomRadius="false"
            app:clipLeftTopRadius="false"
            app:clipRightBottomRadius="true"
            app:clipRightTopRadius="true"
            app:type="radial"/>
        <ImageView
            android:id="@+id/brand_banner_item_play"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/dm_poster_video_icon"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="91dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_alignParentRight="true">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/brand_album_item_pic1"
            android:layout_width="match_parent"
            android:layout_height="58.5dp"
            android:scaleType="center"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            app:borderRadius="6dp"
            app:clipLeftBottomRadius="true"
            app:clipLeftTopRadius="true"
            app:clipRightBottomRadius="true"
            app:clipRightTopRadius="false"
            app:type="radial"/>
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/brand_album_item_pic2"
            android:layout_width="match_parent"
            android:layout_height="58.5dp"
            android:scaleType="center"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            app:borderRadius="6dp"
            app:clipLeftBottomRadius="true"
            app:clipLeftTopRadius="true"
            app:clipRightBottomRadius="false"
            app:clipRightTopRadius="true"
            app:type="radial"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true">
        <include layout="@layout/brand_album_bottom"/>
    </RelativeLayout>
</RelativeLayout>
