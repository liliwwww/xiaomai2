<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingRight="@dimen/margin_20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="16dp"
        android:textColor="@color/color_ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:text="@string/iconfont_shangjiantou"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_user_center_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dis_13dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_kefu"
            android:layout_width="88dp"
            android:layout_height="43dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="18dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_kefu_"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:text="客服"/>
        </LinearLayout>
        <View
            android:layout_gravity="center_horizontal"
            android:background="#e8e8e8"
            android:layout_width="69dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_edit"
            android:layout_width="88dp"
            android:layout_height="43dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="18dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_bianji18"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:text="编辑"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
