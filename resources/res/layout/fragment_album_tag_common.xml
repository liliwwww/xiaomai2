<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_layout_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:layout_marginStart="@dimen/resource_size_9"
        android:layout_marginEnd="@dimen/resource_size_9"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"/>
    <com.alibaba.pictures.bricks.view.irecycler.IRecyclerView
        android:id="@+id/recyclerView_album"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/resource_size_9"
        android:layout_marginEnd="@dimen/resource_size_9"/>
    <FrameLayout
        android:id="@+id/fl_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
