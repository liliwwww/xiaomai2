<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/channel_grab_fl"
    android:background="@drawable/channel_card_grab_view_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="16dp"
            android:textColor="@color/color_pioneer_primary_black"
            android:id="@+id/bricks_hotrecommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢票播报站"/>
        <ImageView
            android:layout_gravity="top"
            android:id="@+id/bricks_hotrecommend_title_flash"
            android:layout_width="19.5dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/pioneer_hotrecommend_title_flash"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.alibaba.pictures.bricks.view.DMUpMarqueeView
                android:textSize="@dimen/font_Subhead2_R"
                android:layout_gravity="center_vertical"
                android:id="@+id/channel_grab_subtitle_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:layout_flexShrink="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/channel_grab_main_info"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="34dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/channel_grab_hot_image"
            android:layout_width="40dp"
            android:layout_height="53dp"
            android:scaleType="centerCrop"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/home_default_image_bg_gradient_pioneer"
            app:placeholderImage="@drawable/home_default_image_bg_gradient_pioneer"
            app:roundedCornerRadius="8dp"/>
        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            android:id="@+id/channel_grab_hot_image_artist"
            android:clipChildren="true"
            android:layout_width="40dp"
            android:layout_height="53dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">
            <View
                android:layout_gravity="start|bottom"
                android:background="@drawable/pioneer_channel_item_cover"
                android:layout_width="40dp"
                android:layout_height="20dp"/>
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="9dp"
                android:textColor="@color/bricks_171717"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/channel_grab_hot_image_name"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:maxLines="1"
                android:includeFontPadding="false"/>
            <com.alibaba.pictures.moimage.MoImageView
                android:layout_gravity="top"
                android:id="@+id/channel_grab_hot_image_artistpic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/home_default_image_bg_gradient_pioneer"
                app:placeholderImage="@drawable/home_default_image_bg_gradient_pioneer"
                app:roundedCornerRadius="8dp"
                app:roundingBorderColor="@color/color_bricks_primary_5_black"
                app:roundingBorderWidth="1px"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="9dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="14dp"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/channel_grab_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:background="@drawable/bg_pioneer_transparent_mask"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/channel_grab_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/channel_grab_name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="14dp"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/channel_grab_want_watch_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="11dp"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/channel_grab_want_watch_num_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/channel_grab_price_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignItems="flex_end">
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    app:layout_flexShrink="0">
                    <com.alibaba.pictures.bricks.view.DMCommonPriceView
                        android:id="@+id/channel_grab_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/bricks_171717"
                        android:id="@+id/channel_grab_price_miss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="价格待定"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/bricks_171717"
                        android:ellipsize="end"
                        android:id="@+id/channel_grab_price_custom"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:maxWidth="100dp"
                        android:maxLines="1"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/channel_item_tag_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="@dimen/dim_2"
                    app:layout_flexShrink="0"/>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </LinearLayout>
    <com.alibaba.pictures.bricks.view.PioneerCountDownFlashView
        android:layout_gravity="end|bottom"
        android:id="@+id/pioneer_homepage_grab_countdown_view"
        android:layout_width="wrap_content"
        android:layout_height="23dp"/>
</FrameLayout>
