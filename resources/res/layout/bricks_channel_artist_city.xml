<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="80dp">
    <com.google.android.flexbox.FlexboxLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/flex_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexDirection="row"
        app:flexWrap="nowrap">
        <TextView
            android:textSize="@dimen/resource_size_15"
            android:textColor="@color/color_bricks_primary_title"
            android:ellipsize="end"
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/margin_12dp"
            app:layout_flexShrink="1"/>
        <TextView
            android:textSize="@dimen/resource_size_10"
            android:textColor="@color/bricks_FF8F3F"
            android:gravity="center"
            android:id="@+id/tv_vip_tag"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/margin_6dp"
            app:layout_flexShrink="0"/>
        <View
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0"/>
        <com.alibaba.pictures.bricks.view.DMWantLottieAnimtionView
            android:id="@+id/lottie_want_see"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            app:layout_alignSelf="flex_end"
            app:layout_flexShrink="0"/>
        <ImageView
            android:id="@+id/block_want_see"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:src="@drawable/icon_block_want_gray"
            android:scaleType="centerInside"
            android:layout_marginEnd="@dimen/margin_12dp"
            app:layout_alignSelf="flex_end"
            app:layout_flexShrink="0"/>
    </com.google.android.flexbox.FlexboxLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_sale"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_12dp">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/cg_7"
            android:id="@+id/tv_sale_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_tixing18"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/margin_4dp"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/color_bricks_primary_red"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_sale_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/img_sale_status"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_below="@+id/flex_city"
        android:layout_marginStart="@dimen/margin_12dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:layout_alignParentEnd="true">
        <com.alibaba.pictures.bricks.view.DMCountDownView
            android:layout_gravity="center_vertical"
            android:id="@+id/count_down_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/color_bricks_primary_red"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_timer_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/color_bricks_primary_red"
        android:id="@+id/tv_ipvuv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:includeFontPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
