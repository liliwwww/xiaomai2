<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/content_container"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_gap"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/video_image_browse_title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_22dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center_vertical"
            android:id="@+id/video_image_browse_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/iconfont_fanhui18"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:id="@+id/video_image_browse_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <cn.damai.videobrowse.view.ControlScrollViewPager
        android:id="@+id/video_image_browse_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:id="@+id/video_image_info_rv"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="@color/color_ffffff"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/video_image_intro_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/margin_3dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="32dp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:id="@+id/image_download_tv"
            android:background="@drawable/commonbusiness_image_download_bg"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:text="@string/iconfont_xiazai32"/>
    </LinearLayout>
</LinearLayout>
