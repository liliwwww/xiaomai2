<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rank_word_item_root_view"
    android:background="@drawable/search_hot_list_national_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">
    <ImageView
        android:id="@+id/rank_word_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:src="@drawable/bricks_hot_list_national_title_bg"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/rank_word_item_city_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/rank_word_item_title"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/bricks_C887FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â·"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/bricks_C887FF"
            android:ellipsize="end"
            android:id="@+id/rank_word_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="120dp"
            android:maxLines="1"/>
    </LinearLayout>
    <cn.damai.uikit.copy.shadowlayout.DMShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rank_word_item_title"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="#00000000"
        app:sl_shadowRadius="6dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/rank_word_item_container"
            android:background="@drawable/bricks_bg_corner_8_sliod_white"
            android:paddingTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </cn.damai.uikit.copy.shadowlayout.DMShadowLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
