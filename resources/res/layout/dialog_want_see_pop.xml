<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.view.StrokeLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_corners_radius="21dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_dialog_want_lottie_top"
                android:layout_width="275dp"
                android:layout_height="220dp"
                android:src="@drawable/icon_bg_want_see_top"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/id_dialog_want_lottie"
                android:layout_width="275dp"
                android:layout_height="220dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
        </FrameLayout>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_000000"
            android:id="@+id/id_dialog_want_btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="[想看]记录每一次心动"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_9c9ca5"
            android:gravity="center"
            android:id="@+id/id_dialog_want_btn_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="在[我的-想看]能快速找到哦"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/id_dialog_want_btn_tv"
            android:background="@drawable/bg_submit_button_ff3299_ff2869"
            android:layout_width="214dp"
            android:layout_height="42dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="16dp"
            android:text="去看看"/>
    </cn.damai.uikit.view.StrokeLinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/id_dialog_want_close_btn"
        android:background="@drawable/bg_pop_ad_close_btn_border"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="21dp"
        android:text="@string/iconfont_guanbi24"/>
</LinearLayout>
