<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="148dp">
    <RelativeLayout
        android:id="@+id/poster_ui"
        android:layout_width="98dp"
        android:layout_height="131dp"
        android:layout_marginLeft="21dp">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/project_item_poster_image_iv"
            android:background="@drawable/bg_solid_f5f5f5_corner_6"
            android:layout_width="98dp"
            android:layout_height="131dp"
            android:scaleType="centerCrop"
            app:borderRadius="@dimen/margin_6dp"
            app:type="radial"/>
        <cn.damai.uikit.tag.DMCategroyTagView
            android:id="@+id/project_detail_agency_tag_fv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginRight="@dimen/margin_3dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="@color/color_ffffff"
            android:id="@+id/project_detail_image_num_tv"
            android:background="@drawable/project_detail_total_num_bg"
            android:padding="@dimen/margin_3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_3dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:includeFontPadding="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:layout_toRightOf="@+id/poster_ui">
        <cn.damai.uikit.flowlayout.FlowLayout
            android:id="@+id/project_show_tags_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_6dp"
            app:layoutDirection="ltr"/>
        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="16dp"
                    android:textColor="?attr/colorFF2869to171717"
                    android:ellipsize="end"
                    android:id="@+id/project_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9C9CA5"
                    android:id="@+id/project_dash_price_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_6dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/project_price_promotion"
                android:background="@drawable/bg_detail_header_earlybird_price"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1">
                        <cn.damai.uikit.number.DMDigitTextView
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:id="@+id/project_price_tv_inner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¥480-¥960"
                            android:maxLines="1"/>
                        <LinearLayout
                            android:gravity="bottom"
                            android:id="@+id/sfpt_container_inner"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="9dp"
                                android:textColor="@color/color_ccffffff"
                                android:id="@+id/sfpt_prefix_tv_inner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="9dp"
                                android:textColor="@color/color_ccffffff"
                                android:id="@+id/sfpt_tv_inner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="9dp"
                                android:textColor="@color/color_ccffffff"
                                android:id="@+id/sfpt_suffix_tv_inner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingRight="3dp"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_project_price_promotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3.5dp"
                        android:src="@drawable/icon_market_earlybird_inner"/>
                    <TextView
                        android:textSize="9dp"
                        android:textColor="@color/color_ffffff"
                        android:ellipsize="start"
                        android:id="@+id/project_detail_countdown_tv"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_3dp"
                        android:text="数量有限先到先得"
                        android:singleLine="true"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/sfpt_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_9c9ca5"
                    android:id="@+id/sfpt_prefix_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.alibaba.pictures.bricks.view.DigitTextView
                    android:textSize="10dp"
                    android:textColor="@color/color_price_font"
                    android:id="@+id/sfpt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/bricks_9c9ca5"
                    android:id="@+id/sfpt_suffix_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
