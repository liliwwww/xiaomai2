<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f3f4f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/color_111111"
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="18dp"
            android:textColor="@color/color_111111"
            android:id="@+id/tv_cancle"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_zuojiantou_"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingStart="24dp"
            android:paddingEnd="12dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_border_corner_edit_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/avatar_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/cg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="头像"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#959aa5"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="12dp"/>
            <cn.damai.uikit.view.avatar.AvatarView
                android:layout_gravity="center"
                android:id="@+id/avatar_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:avatarViewSize="size_40x40"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textColor="@color/color_5F6672"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:layout_toRightOf="@+id/nick_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/nick_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/cg_2"
                android:id="@+id/nick_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="昵称"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#959aa5"
                android:gravity="end"
                android:id="@+id/nick_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="12dp"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textColor="@color/color_5F6672"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:layout_toRightOf="@+id/nick_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/nick_name_delete"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/edit_delete_icon"
                    android:layout_width="13dp"
                    android:layout_height="13dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/desc_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/cg_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="简介"
                android:layout_weight="1"
                android:layout_centerVertical="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textColor="@color/color_5F6672"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/sex_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/cg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="性别"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="11dp"
                android:textColor="#ced1d6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="为你推荐感兴趣的内容"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="12dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#959aa5"
                android:id="@+id/sex_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="12dp"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textColor="@color/color_5F6672"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:layout_toRightOf="@+id/nick_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/birthday_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/cg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="生日"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="11dp"
                android:textColor="#ced1d6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="用于推荐内容、生日祝福"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#959aa5"
                android:id="@+id/birthday_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="请选择"
                android:layout_marginEnd="12dp"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textColor="@color/color_5F6672"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:layout_toRightOf="@+id/nick_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/headBg_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/cg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="背景图"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#959aa5"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="12dp"/>
            <com.alibaba.pictures.bricks.view.RoundRadiusImageView
                android:id="@+id/headBg_view"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/user_center_header_default_new"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                app:r_round_radius="4dp"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textColor="@color/color_5F6672"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:layout_toRightOf="@+id/nick_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
