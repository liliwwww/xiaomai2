<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.round.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rRadius="@dimen/resource_size_9">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_container"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.round.RoundRelativeLayout
            android:id="@+id/rl_bg_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:rRadius="@dimen/resource_size_9">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home_default_image_bg_pioneer"
                app:failureImage="@drawable/home_default_image_bg_pioneer"
                app:placeholderImage="@drawable/home_default_image_bg_pioneer"/>
        </cn.damai.uikit.view.round.RoundRelativeLayout>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/color_181818"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/bricks_2e333e"
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_more"
            app:layout_constraintEnd_toStartOf="@+id/iv_more"
            app:layout_constraintTop_toTopOf="@+id/iv_more"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/iv_more"
            android:background="@drawable/bg_border_corner4_all_000000"
            android:padding="2dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="1.5dp"
            android:src="@drawable/pioneer_card_all_arrow"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/horizontal_container"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:overScrollMode="never"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</cn.damai.uikit.view.round.RoundRelativeLayout>
