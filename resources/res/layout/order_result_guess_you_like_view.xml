<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guess_you_like_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/title_mask_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/color_tpp_primary_white"
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/tv_main_image_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/main_image"
        app:layout_constraintLeft_toLeftOf="@+id/main_image"
        app:layout_constraintRight_toRightOf="@+id/main_image"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_image_title"
        app:layout_constraintLeft_toLeftOf="@+id/main_image">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_video_tag"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="7dp">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="11dp"
                android:textColor="@color/color_tpp_primary_white"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="@string/icon_font_order_recommend_film"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_tpp_primary_white"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_main_image_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="9dp"
                android:maxLines="1"/>
        </LinearLayout>
    </FrameLayout>
    <ImageView
        android:id="@+id/video_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:src="@drawable/film_detail_video_play_950"
        android:text="@string/iconf_long_video_play"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/color_tpp_primary_white"
        android:gravity="center"
        android:id="@+id/tv_top_tag"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
