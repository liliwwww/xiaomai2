<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_21dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingBottom="@dimen/margin_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜索历史"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_delete"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_shanchu_"/>
    </LinearLayout>
    <cn.damai.uikit.flowlayout.FlowLayout xmlns:f="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:id="@+id/fl_hotsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="9dp"
        f:layoutDirection="ltr"/>
</LinearLayout>
