<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/layout_background"
        android:layout_width="300dp"
        android:layout_height="415dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:layout_gravity="center"
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:actualImageScaleType="fitXY"/>
        <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/lottie_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="false"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/click_area"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
    </FrameLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/common_text_color46"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/join_aiyi_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="37dp"
        android:text="@string/iconf_film_close_icon"/>
</LinearLayout>
