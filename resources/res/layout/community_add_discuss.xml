<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_add_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:textColorHint="#ffced1d6"
                android:id="@+id/discuss_editor"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:minHeight="50dp"
                android:text=""
                android:hint="和大家聊聊..."
                android:textCursorDrawable="@drawable/color_cursor"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/remain_count_text"
        android:paddingLeft="15dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1">
            <com.taobao.movie.android.commonui.widget.DeletableIconTagView
                android:layout_gravity="left"
                android:id="@+id/subject"
                android:background="@drawable/community_add_discuss_subject_bg"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                app:dit_color="@color/common_color_1004"
                app:dit_hint="选择话题"
                app:dit_iconfont="@string/iconf_subject_pound"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1">
            <com.taobao.movie.android.commonui.widget.DeletableIconTagView
                android:layout_gravity="right"
                android:id="@+id/poi"
                android:background="@drawable/community_add_discuss_poi_bg"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                app:dit_color="@color/common_color_1008"
                app:dit_hint="你在哪里"
                app:dit_iconfont="@string/iconf_titlebar_map"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:background="@color/common_text_color47"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/take_photo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:layout_gravity="center"
                android:id="@+id/take_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tpp_community_take_photo"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/pick_photo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:layout_gravity="center"
                android:id="@+id/pick_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_photo"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
