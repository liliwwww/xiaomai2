<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bgFilmDetailAll"
    android:paddingLeft="12dp"
    android:paddingTop="15dp"
    android:paddingRight="12dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_Headline2_M"
                android:textColor="@color/cg_1"
                android:id="@+id/boxing_office_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票房"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/cg_3"
                android:id="@+id/boxing_office_forecast"
                android:background="@drawable/boxing_office_forecast_bg"
                android:paddingLeft="9dp"
                android:paddingTop="2dp"
                android:paddingRight="9dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:includeFontPadding="false"/>
            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="12dp"
                android:textColor="@color/cg_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_alignParentLeft="true">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/cg_1"
                    android:id="@+id/real_time_box_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    app:font="@font/rubik"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/cg_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="实时票房(万)"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/cg_1"
                    android:id="@+id/cumulative_box_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    app:font="@font/rubik"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/cg_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="累计票房(万)"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/cg_1"
                    android:id="@+id/boxing_office_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    app:font="@font/rubik"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/cg_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="今日票房排名"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/has_boxing_office_rank"
            android:background="?android:attr/listDivider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_boxing_office_rank"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/cg_1"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/cg_3"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:includeFontPadding="false"/>
            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/cg_3"
                android:id="@+id/boxing_office_update_time"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
