    android:layout_width="78dp"
    android:layout_height="47dp">
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="@dimen/resource_size_11"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_12"
        android:text="@string/iconfont_jiarujiahao24"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/resource_size_9"
        android:textColor="@color/color_bricks_primary_90_white"
        android:ellipsize="end"
        android:id="@+id/id_bricks_more_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/resource_size_8"
        android:lines="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
