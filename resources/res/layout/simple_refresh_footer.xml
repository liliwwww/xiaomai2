<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/classics_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/srl_classics_title"
        android:layout_centerVertical="true"
        android:contentDescription="@android:string/untitled"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/srl_classics_title"/>
    <cn.damai.uikit.irecycler.widget.LoadingView
        android:id="@+id/footer_classics_progress"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:contentDescription="@android:string/untitled"
        android:layout_marginEnd="20dp"/>
</merge>
