<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_height">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_22dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="left"
            android:id="@+id/ticket_rob_title_back_tv"
            android:paddingLeft="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fanhui18"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_ffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/ticket_rob_title_tv"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15dp"
            android:text="抢票攻略"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/title_line"
        android:background="@color/master_black_10"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
