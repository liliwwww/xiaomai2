<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/ordering_popupwindow_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/title_container"
        android:background="@drawable/order_page_dialog_head_title_bg"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        style="@style/CommonListItemOrderHeaderContainerWhite">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="21dp"
            android:textColor="@color/color_tpp_primary_gray_c8"
            android:id="@+id/ordering_item_header_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/icon_font_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_toLeftOf="@+id/ordering_item_header_cancel"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:gravity="center"
                android:id="@+id/ordering_item_header_title"
                android:text="优惠券"
                android:includeFontPadding="false"
                android:layout_alignParentBottom="true"
                style="@style/CommonListItemOrderTitle"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/ordering_item_header_desc"
                android:layout_height="21dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:text="不可与优惠活动叠加使用"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_toRightOf="@+id/ordering_item_header_title"
                android:layout_alignParentBottom="true"
                style="@style/CommonListItemText"/>
        </RelativeLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/ordering_item_header_confirm"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_10dp"
            android:visibility="gone"
            android:text="@string/tpp_confirm"
            android:layout_alignParentRight="true"
            style="@style/CommonListItemTitle"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_bottom"
        android:background="@color/common_divider_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"/>
</LinearLayout>
