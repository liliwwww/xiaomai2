<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/block_bank_select_area"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    style="@style/OrderCommonMarketItem">
    <TextView
        android:gravity="left"
        android:id="@+id/block_bank_select_name"
        android:layout_marginRight="5dp"
        android:text="@string/ordering_selector_block_bank_title"
        android:layout_centerVertical="true"
        style="@style/ordering_module_title_tv_style"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_strong_guide"
            android:background="@drawable/bg_order_item_strong_guide"
            android:visibility="gone"
            android:paddingStart="@dimen/padding_4dp"
            android:paddingEnd="@dimen/padding_4dp"
            style="@style/ordering_item_strong_guide_tv_style"/>
        <TextView
            android:id="@+id/tv_weak_guide"
            android:visibility="gone"
            style="@style/ordering_item_weak_guide_tv_style"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/ll_price"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_price_prefix"
                style="@style/ordering_item_price_prefix_tv_style"/>
            <TextView
                android:textSize="@dimen/text_size_18_dp"
                android:id="@+id/block_bank_select_amount"
                style="@style/ordering_item_price_tv_style"/>
        </LinearLayout>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:id="@+id/block_bank_select_arrow"
            android:text="@string/icon_font_right_small"
            style="@style/ordering_item_arrow_style"/>
    </LinearLayout>
</RelativeLayout>
