<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/order_coupon_detail"
    android:background="@drawable/bricks_bg_choose_corner_white"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算明细"
            android:layout_centerInParent="true"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="14dp"
            android:textColor="#999999"
            android:gravity="center"
            android:id="@+id/close"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fucengguanbi16"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/line_title"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <ScrollView
        android:id="@+id/scv_ticket_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:id="@+id/tv_ticket_info"
                android:background="#f5f5f5"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="商品信息"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_ticket_info"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
