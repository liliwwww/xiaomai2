<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/color_111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publish_dm_name"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9c9ca5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="@string/publish_dm_subtitle"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <cn.damai.comment.view.PublishDMListView
        android:id="@+id/comment_publish_dm_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"/>
    <cn.damai.comment.view.PublishDMTagView
        android:id="@+id/comment_publish_dm_tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="21dp"/>
</merge>
