<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="2dp">
    <TextView
        android:textSize="9dp"
        android:textColor="@color/bricks_2e333e"
        android:id="@+id/sku_dollar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ï¿¥"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/bricks_2e333e"
        android:ellipsize="end"
        android:id="@+id/sku_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="115dp"
        android:maxLines="1"
        android:layout_marginEnd="5dp"
        app:layout_constraintLeft_toRightOf="@+id/sku_dollar_tv"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/bricks_2e333e"
        android:gravity="center"
        android:id="@+id/sku_ellipsis_tv"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:text="..."
        app:layout_constraintBottom_toBottomOf="@+id/sku_price_tv"
        app:layout_constraintRight_toRightOf="@+id/sku_price_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
