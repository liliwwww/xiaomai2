<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textColor="@color/color_tpp_primary_yellow"
        android:id="@+id/risk_alert_item_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_weight="1">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_main_title"
            android:ellipsize="end"
            android:id="@+id/risk_alert_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <com.taobao.movie.android.commonui.widget.MoCardTextView
            android:textSize="10dp"
            android:textColor="@color/color_tpp_primary_white"
            android:id="@+id/risk_alert_item_label_first"
            android:paddingLeft="4dp"
            android:paddingTop="1dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/risk_alert_item_title"
            app:mocard_background_color="@color/color_tpp_primary_yellow"
            app:mocard_background_radius="3dp"/>
        <com.taobao.movie.android.commonui.widget.MoCardTextView
            android:textSize="10dp"
            android:textColor="@color/color_tpp_primary_white"
            android:id="@+id/risk_alert_item_label_sec"
            android:paddingLeft="4dp"
            android:paddingTop="1dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/risk_alert_item_label_first"
            android:layout_below="@+id/risk_alert_item_title"
            app:mocard_background_color="@color/color_tpp_primary_yellow"
            app:mocard_background_radius="3dp"/>
    </RelativeLayout>
</LinearLayout>
