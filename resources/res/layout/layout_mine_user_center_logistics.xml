<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/ll_mine_order_logistics"
        android:background="@drawable/bg_olympic_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="9dp">
        <RelativeLayout
            android:background="@drawable/bg_user_center"
            android:layout_width="match_parent"
            android:layout_height="76dp">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/iv_mine_logistics_image"
                android:layout_width="39dp"
                android:layout_height="52dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/uikit_default_image_bg_gradient"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                app:borderRadius="@dimen/margin_8dp"
                app:type="radial"/>
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_111111"
                android:ellipsize="end"
                android:id="@+id/tv_mine_logistics_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_marginTop="19dp"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:layout_toRightOf="@+id/iv_mine_logistics_image"/>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_999999"
                android:ellipsize="end"
                android:id="@+id/tv_mine_logistics_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="@dimen/margin_12dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/iv_mine_logistics_image"
                android:layout_below="@+id/tv_mine_logistics_status"/>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_999999"
                android:id="@+id/tv_mine_logistics_status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/tv_mine_logistics_action"
                android:layout_below="@+id/tv_mine_logistics_status"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="12dp"
                android:textColor="@color/color_3c3f44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="@string/iconfont_rukoujiantou_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>
