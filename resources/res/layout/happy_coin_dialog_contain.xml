<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="106.5dp">
    <TextView
        android:textSize="15dp"
        android:textColor="@color/white"
        android:id="@+id/order_result_happy_coin_contain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:alpha="0.6"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <com.taobao.movie.android.commonui.widget.VerticalWheelContain
            android:id="@+id/order_result_happy_coin_wheel_contain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="24dp"
            android:textColor="#ffe652"
            android:id="@+id/order_result_happy_coin_contain_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="15dp"
        android:textColor="@color/white"
        android:id="@+id/order_result_happy_coin_contain_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/order_result_happy_coin_contain_desc"
        android:background="@drawable/order_result_happy_coin_dialog_black_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="7dp"
        android:includeFontPadding="false"
        android:alpha="0.6"/>
</LinearLayout>
