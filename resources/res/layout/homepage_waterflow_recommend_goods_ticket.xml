<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="9dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/homepage_waterflow_goods_buy_btn"
        android:background="@drawable/homepage_waterflow_goods_buy_btn_bg"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/homepage_waterflow_goods_ticket_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/homepage_waterflow_goods_buy_btn"
        android:layout_centerVertical="true">
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="12dp"
            android:textColor="#ff2869"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥"
            android:singleLine="true"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="16dp"
            android:textColor="#ff2d79"
            android:id="@+id/homepage_waterflow_goods_ticket_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
