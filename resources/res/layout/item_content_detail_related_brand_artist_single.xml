<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp">
    <FrameLayout
        android:id="@+id/artist_avatar_lay"
        android:background="@drawable/bg_artist_avatar"
        android:layout_width="@dimen/resource_size_60"
        android:layout_height="@dimen/resource_size_60"
        android:layout_marginLeft="@dimen/margin_9dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_white"
            android:layout_width="@dimen/resource_size_54"
            android:layout_height="@dimen/resource_size_54">
            <cn.damai.uikit.banner.sub.RoundRadiusImageView
                android:id="@+id/live_content_detail_related_brand_avatar"
                android:layout_width="@dimen/resource_size_50"
                android:layout_height="@dimen/resource_size_50"
                android:layout_centerInParent="true"
                app:r_round_radius="@dimen/resource_size_50"/>
            <ImageView
                android:id="@+id/live_content_detail_related_brand_tag"
                android:layout_width="@dimen/resource_size_16"
                android:layout_height="@dimen/resource_size_16"
                android:src="@drawable/user_v_tag"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/resource_size_3"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </FrameLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/live_content_detail_related_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:maxLines="1"
        android:maxEms="5"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/artist_avatar_lay"/>
    <ImageView
        android:id="@+id/iv_brand_icon"
        android:layout_width="@dimen/margin_29dp"
        android:layout_height="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/brand_icon"
        android:layout_toRightOf="@+id/artist_avatar_lay"
        android:layout_below="@+id/live_content_detail_related_brand_name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_9C9CA5"
        android:id="@+id/live_content_detail_related_brand_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_4dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/iv_brand_icon"
        android:layout_below="@+id/live_content_detail_related_brand_name"/>
    <TextView
        android:textSize="@dimen/textsize_12"
        android:textColor="#9999de"
        android:gravity="center"
        android:background="@drawable/content_detail_artist_btn_bg"
        android:layout_width="54dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/common_margin_15"
        android:text="去主页"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
