<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_refund_notice"
        android:background="@drawable/price_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"/>
    <RelativeLayout
        android:id="@+id/rl_tips"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_refund_notice">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/tv_rule_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/refund_change_notice"
            android:lineSpacingExtra="3dp"/>
    </RelativeLayout>
</RelativeLayout>
