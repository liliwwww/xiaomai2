<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/article_image"
        android:background="@color/common_text_color14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="0"
        fresco:placeholderImage="@drawable/oscar_default_image"
        fresco:placeholderImageScaleType="fitXY"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/article_topic_cover"
        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="14dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/topic_icon"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/article_summary"
                android:paddingLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="话题讨论"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="13dp"
            android:text="标题"
            android:maxLines="2"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:background="#4dffffff"
                android:layout_width="15dp"
                android:layout_height="0.7dp"/>
            <TextView
                android:textSize="11dp"
                android:textColor="#bbffffff"
                android:id="@+id/article_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:includeFontPadding="false"/>
            <View
                android:background="#4dffffff"
                android:layout_width="15dp"
                android:layout_height="0.7dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/article_topic_cover_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_tag_view_radius_fg_big"
        android:scaleType="fitXY"
        android:layout_alignLeft="@+id/article_image"
        android:layout_alignTop="@+id/article_image"
        android:layout_alignRight="@+id/article_image"
        android:layout_alignBottom="@+id/article_image"/>
</RelativeLayout>
