<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_corner_6_solid_fff4eb_stroke_ffd4ac"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="14dp"
            android:textColor="#eb7609"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/iconfont_tixing24"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#eb7609"
            android:id="@+id/tb_seat_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:text="已选座位不在同一排"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#eb7609"
            android:gravity="center"
            android:id="@+id/tb_seat_tip_close"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fucengguanbi16"/>
    </LinearLayout>
</FrameLayout>
