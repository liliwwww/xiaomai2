<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:roundimage="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.MaxHeightLinearLayout
            android:orientation="vertical"
            android:id="@+id/damai_theme_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.alibaba.pictures.bricks.view.RoundImageView
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/damai_theme_dialog_top_image_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    roundimage:borderRadius="24dp"
                    roundimage:clipLeftBottomRadius="true"
                    roundimage:clipRightBottomRadius="true"
                    roundimage:type="radial"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/damai_theme_dialog_top_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.5dp"/>
            </FrameLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/damai_theme_dialog_container"
                android:background="@drawable/bricks_theme_dialog_bg"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="125dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/damai_theme_dialog_title"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="#999999"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/damai_theme_dialog_subtitle"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:includeFontPadding="false"/>
                <FrameLayout
                    android:id="@+id/additional_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ScrollView
                    android:id="@+id/damai_theme_dialog_content_layout"
                    android:background="@drawable/bricks_theme_dialog_content_bg"
                    android:visibility="gone"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:overScrollMode="never">
                    <FrameLayout
                        android:id="@+id/damai_theme_dialog_content_container"
                        android:paddingLeft="12dp"
                        android:paddingTop="15dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="14dp"
                            android:textColor="#9c9ca5"
                            android:gravity="center_horizontal"
                            android:id="@+id/damai_theme_dialog_tip_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="3dp"/>
                    </FrameLayout>
                </ScrollView>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#ff2869"
                        android:gravity="center"
                        android:id="@+id/damai_theme_dialog_cancel_btn"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginRight="15dp"
                        android:text="取消"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/damai_theme_dialog_confirm_btn"
                        android:background="@drawable/bricks_theme_dialog_ok_bg"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:text="确定"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/damai_theme_dialog_close_btn"
                android:padding="18dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_guanbiyuanxian_"/>
        </com.alibaba.pictures.bricks.view.MaxHeightLinearLayout>
        <View
            android:id="@+id/damai_theme_dialog_bottom_space"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
</FrameLayout>
