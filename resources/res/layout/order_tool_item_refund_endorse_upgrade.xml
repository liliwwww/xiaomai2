<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/refund_and_endorse_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginBottom="@dimen/margin_9">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/img_bg"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:roundBottomLeft="true"
        app:roundTopLeft="true"
        app:roundedCornerRadius="6dp"/>
    <ImageView
        android:id="@+id/img_vip"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginStart="@dimen/margin_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/text_size_12_dp"
        android:textColor="@color/black_diamond_main_title"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/padding_3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/img_vip"
        app:layout_constraintRight_toLeftOf="@+id/tv_icon_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:id="@+id/tv_icon_arrow"
        android:layout_width="@dimen/text_size_12_dp"
        android:layout_height="@dimen/text_size_12_dp"
        android:text="@string/icon_font_right_small"
        android:layout_marginEnd="@dimen/padding_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        app:layout_constraintRight_toLeftOf="@+id/refund_endorse_upgrade_close"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:id="@+id/refund_endorse_upgrade_close"
        android:layout_width="@dimen/text_size_12_dp"
        android:layout_height="@dimen/text_size_12_dp"
        android:text="@string/icon_font_close_bold"
        android:layout_marginEnd="@dimen/margin_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
