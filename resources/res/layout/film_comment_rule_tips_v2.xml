<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_refund_notice"
        android:background="@drawable/price_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"/>
    <RelativeLayout
        android:id="@+id/rl_tips"
        android:padding="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_refund_notice">
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/tv_rule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/cg_3"
            android:gravity="center_vertical"
            android:id="@+id/tv_rule_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅展示部分影评，与影片无关或包含不文明内容的影评将被收起，且评分不计入总评分"
            android:layout_below="@+id/tv_rule_title"
            android:lineSpacingExtra="3dp"/>
    </RelativeLayout>
</RelativeLayout>
