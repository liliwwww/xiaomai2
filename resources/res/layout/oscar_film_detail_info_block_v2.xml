<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/bgFilmDetailAll"
    android:paddingTop="15dp"
    android:paddingBottom="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/font_Headline2_M"
            android:textColor="@color/cg_1"
            android:id="@+id/film_detail_intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/film_detail_intro_title"/>
        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/fl_film_detail_intro_watching_tip"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="@dimen/resource_size_9"
                android:textColor="@color/cb_rank"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:id="@+id/film_detail_intro_watching_tip"
                android:background="@drawable/oscar_film_detail_info_block_bg_v2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="有观影贴士"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="6dp"
                android:layout_marginEnd="7dp"/>
            <ImageView
                android:gravity="end|center_vertical"
                android:id="@+id/iv_watching_tip"
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:src="@drawable/watching_tips_icon"
                android:scaleType="fitXY"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/fl_film_detail_intro_egg"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="@dimen/resource_size_9"
                android:textColor="@color/cb_rank"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:id="@+id/film_detail_intro_egg_content"
                android:background="@drawable/oscar_film_detail_info_block_bg_v2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="6dp"/>
            <ImageView
                android:gravity="center_vertical"
                android:id="@+id/iv_easter_egg"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/easter_egg_new_v2"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </LinearLayout>
    <com.taobao.movie.android.app.ui.filmdetail.v2.widget.ExpandableTextView2V2
        android:textColor="@color/cg_1"
        android:ellipsize="end"
        android:id="@+id/film_detail_intro_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:collapsedLines="5"
        app:exp_textSize="@dimen/resource_size_14"
        app:lineSpacingExtra="4dp"
        app:maxCollapsedLines="3"/>
</LinearLayout>
