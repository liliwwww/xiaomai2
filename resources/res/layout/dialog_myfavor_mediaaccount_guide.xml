<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/round_8_dialog_background"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:layout_width="290dp"
        android:layout_height="315dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22.5dp">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:id="@+id/dialog_myfavor_mediaaccount_guide_closebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconf_community_close"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/dialog_myfavor_mediaaccount_guide_image"
            android:layout_width="173dp"
            android:layout_height="163dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/dialog_myfavor_mediaaccount_guide_confirmbtn"
            android:background="@drawable/gradient_red_small_l2r_btn"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:layout_marginTop="38dp"
            android:text="好的"/>
    </LinearLayout>
</FrameLayout>
