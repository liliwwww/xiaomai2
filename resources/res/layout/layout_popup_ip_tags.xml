<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sub_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ip_tags_top"
            android:background="@drawable/bg_border_corner_15_0_topradius"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_000000"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_tags_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="选择你认同的标签"
                android:layout_weight="1"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="@color/color_3c3f44"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_tags_top_close"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:text="@string/iconfont_guanbi24"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/ip_tags_scroll"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ip_tags_bottombar"
            android:layout_below="@+id/ip_tags_top">
            <cn.damai.uikit.flowlayout.FlowLayout
                android:orientation="horizontal"
                android:id="@+id/ip_tags_scroll_content"
                android:paddingLeft="@dimen/default_component_margin_rl"
                android:paddingRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>
        <FrameLayout
            android:id="@+id/ip_tags_bottombar"
            android:background="@color/white"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/ip_tags_buy"
                android:background="@drawable/buy_btn_usable_bg_selector"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="24dp"
                android:text="选好了"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
