<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_city_tour"
    android:background="@color/transparent"
    android:paddingLeft="8dp"
    android:paddingTop="@dimen/margin_12dp"
    android:paddingRight="8dp"
    android:paddingBottom="@dimen/margin_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/current_city_logo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/icon_location"
            android:scaleType="centerCrop"/>
        <TextView
            android:textSize="@dimen/tour_card_headline1"
            android:textColor="@color/primaryInfo"
            android:ellipsize="end"
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京站"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/tertiary_auxiliary_text"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019.08.24"
        android:singleLine="true"/>
</LinearLayout>
