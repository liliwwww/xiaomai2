<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/id_deliver_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_000000"
                android:id="@+id/id_deliver_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:id="@+id/id_deliver_ok"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fucengguanbi16"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/line_title"
            android:background="@color/color_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_21dp"
            android:layout_marginRight="@dimen/margin_21dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_deliver_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
