<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.MaxHeightLinearLayout
            android:orientation="vertical"
            android:id="@+id/damai_theme_dialog_layout"
            android:background="@drawable/damai_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:linear_max_ratio="0.55">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/damai_theme_dialog"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="105dp"
                android:layout_weight="1">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/damai_theme_dialog_title"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="18dp"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <FrameLayout
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailitem.ui.view.SmartScrollView
                        android:scrollbarStyle="insideInset"
                        android:id="@+id/damai_theme_dialog_content_layout"
                        android:background="@color/transparent"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:visibility="gone"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:overScrollMode="never">
                        <FrameLayout
                            android:id="@+id/damai_theme_dialog_content_container"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="14dp"
                                android:textColor="#2e333e"
                                android:gravity="left"
                                android:id="@+id/damai_theme_dialog_tip_content"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="3dp"/>
                        </FrameLayout>
                    </cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailitem.ui.view.SmartScrollView>
                    <RelativeLayout
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/tv_content_shadow"
                        android:background="@drawable/bg_border_corner_nat"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <ImageView
                            android:id="@+id/damai_theme_dialog_img_btn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/trade_dialog_scroll_tip"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </FrameLayout>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/damai_theme_dialog_confirm_btn"
                    android:background="@drawable/bg_border_corner_nat_red"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="@dimen/margin_18dp"
                    android:text="已知悉"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </cn.damai.uikit.view.MaxHeightLinearLayout>
        <View
            android:id="@+id/damai_theme_dialog_bottom_space"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
</FrameLayout>
