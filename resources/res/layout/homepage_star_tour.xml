<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/homepage_module_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homepage_star_tour_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <cn.damai.uikit.shadowlayout.DMShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:sl_cornerRadius="12dp"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="#266a7a99"
        app:sl_shadowRadius="9dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/homepage_star_tour_card"
            android:background="@drawable/homepage_star_tour_card_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/homepage_star_tour_star"
                android:layout_width="match_parent"
                android:layout_height="54dp">
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/homepage_star_tour_star_avatar"
                    android:background="@drawable/uikit_user_default_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:type="linear"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/color_000000"
                        android:id="@+id/homepage_star_tour_star_name"
                        android:paddingRight="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/homepage_star_tour_v_tag"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/user_v_tag"
                        android:layout_alignRight="@+id/homepage_star_tour_star_name"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9C9CA5"
                    android:id="@+id/homepage_star_tour_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12场在售演出"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9C9CA5"
                    android:id="@+id/homepage_star_tour_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_youjiantou12"/>
            </LinearLayout>
            <View
                android:background="#26000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/homepage_star_tour_project_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="12dp">
                <cn.damai.uikit.view.DMPosterView
                    android:id="@+id/homepage_star_tour_project_image"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="12dp"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/color_000000"
                    android:ellipsize="end"
                    android:id="@+id/homepage_star_tour_project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/homepage_star_tour_project_image"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#9c9ca5"
                    android:ellipsize="end"
                    android:id="@+id/homepage_star_tour_project_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/homepage_star_tour_project_image"
                    android:layout_below="@+id/homepage_star_tour_project_title"
                    android:lineSpacingExtra="3dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/homepage_star_tour_project_city_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/homepage_star_tour_project_image"
                    android:layout_below="@+id/homepage_star_tour_project_time">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#9c9ca5"
                        android:id="@+id/homepage_star_tour_project_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>
                    <View
                        android:layout_gravity="center_vertical"
                        android:id="@+id/homepage_star_tour_project_line"
                        android:background="@color/color_999999"
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#9c9ca5"
                        android:id="@+id/homepage_star_tour_project_venue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/homepage_star_tour_project_price_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/homepage_star_tour_project_image"
                    android:layout_alignParentBottom="true">
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="12dp"
                        android:textColor="#ff2869"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="¥"/>
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="16dp"
                        android:textColor="#ff2869"
                        android:id="@+id/homepage_star_tour_project_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="13dp"
                        android:singleLine="true"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="#9c9ca5"
                        android:layout_gravity="bottom|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="起"/>
                </FrameLayout>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="12dp"
                    android:textColor="#ff2d79"
                    android:id="@+id/homepage_star_tour_project_price_unknown"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格待定"
                    android:layout_toRightOf="@+id/homepage_star_tour_project_image"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/homepage_star_tour_city_list"
                android:background="@drawable/homepage_star_tour_city_bg"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#ff2869"
                    android:id="@+id/homepage_star_tour_city_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9C9CA5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个巡演城市"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#2a2a2a"
                    android:id="@+id/homepage_star_tour_city_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </cn.damai.uikit.shadowlayout.DMShadowLayout>
</LinearLayout>
