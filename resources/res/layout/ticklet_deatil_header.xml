<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/status_bar_gap"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ticklet_list_title_height">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:gravity="center"
            android:id="@+id/iftv_back"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fanhui24"
            style="@style/ticklet_white_18dp"/>
        <TextView
            android:id="@+id/ticklet_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="票详情"
            android:layout_centerInParent="true"
            style="@style/ticklet_white_20dp"/>
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/ticklet_rule_text_url"
            android:background="@drawable/shape_solid_radius6_percent70_white"
            android:visibility="gone"
            android:layout_width="57dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_18dp"
            android:text="规则"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</merge>
