<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#211616"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/scriptkill_top_gaussimg_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/scriptkill_top_gaussimg"
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:src="@drawable/bricks_scriptkill_top_gaussimg_cover"
            android:scaleType="fitXY"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_bar">
        <FrameLayout
            android:id="@+id/content_container"
            android:background="#f5f6f7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/one_arch_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlEnableLoadMore="false">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/one_arch_recyclerView"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            <com.alient.onearch.adapter.widget.OneTabLayout
                android:id="@+id/sticky_header"
                android:background="@drawable/bricks_script_sticky_header_bg"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/resource_size_53"
                app:tabMinWidth="@dimen/resource_size_25"
                app:tabPaddingEnd="0dp"
                app:tabPaddingStart="0dp"
                style="@style/BricksScriptTabStyle"/>
        </FrameLayout>
        <View
            android:background="#f5f6f7"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/content_container"
            app:layout_constraintTop_toBottomOf="@+id/content_container"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:id="@+id/nav_bar"
        android:background="#211616"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/status_bar_gap"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true">
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/common_navbar_back"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="@string/iconfont_zuojiantou_"
                android:maxLines="1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/title_navbar_share"
                android:background="@drawable/bricks_navbar_title_btn_bg"
                android:visibility="gone"
                android:layout_width="54dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:text="分享"
                android:layout_toLeftOf="@+id/title_navbar_report"
                android:layout_centerVertical="true"
                android:layout_alignWithParentIfMissing="true"/>
            <TextView
                android:textSize="@dimen/margin_8dp"
                android:textColor="#a6ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/title_navbar_report"
                android:background="@drawable/bricks_report_bg_tag"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_marginRight="-0.5dp"
                android:text="举报投诉"
                android:lines="2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="0dp"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/white"
                android:id="@+id/title_navbar_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧本详情"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
