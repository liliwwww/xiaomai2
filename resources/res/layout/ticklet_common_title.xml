<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/ticklet_title_bar_space_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="@color/color_000000"
            android:gravity="center"
            android:id="@+id/ticklet_iv_left_icon"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fanhui24"/>
        <TextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="@color/black"
            android:id="@+id/ticklet_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/ticklet_rule_text_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_18dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/ticklet_bottom_line"
        android:background="@color/color_EDEDED"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
