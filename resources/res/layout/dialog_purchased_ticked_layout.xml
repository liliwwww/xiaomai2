<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_center"
        android:background="@drawable/dialog_modify_personal_info_bg"
        android:padding="10dp"
        android:clickable="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="15dp"
            android:textColor="#82999999"
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@+id/close_arrow"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_off_single_dialog_close"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/small_head_01"/>
        <TextView
            android:textSize="@dimen/text_size_15"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_18_dp"
            android:text="你已购票"/>
        <TextView
            android:textSize="@dimen/text_size_15"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="49dp"
            android:text="本场次 1 人限购 1 张哦~"/>
    </LinearLayout>
</RelativeLayout>
