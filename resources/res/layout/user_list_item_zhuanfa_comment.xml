<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_content_wrapper"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text=""
            android:maxLines="4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:lineSpacingMultiplier="1.4"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_comment"
            android:background="@color/color_F5F5F5"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_comment">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_FF1268"
                android:ellipsize="end"
                android:id="@+id/tv_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="6dp"
                android:text=""
                android:maxLines="4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="14dp"
                    android:textColor="#ff1268"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:id="@+id/feeds_item_playicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_biaoqian16"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@drawable/user_profile_selector_un"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:id="@+id/feeds_item_playtitle"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="15dp"
                    android:text=""
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="right"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        <include layout="@layout/feeds_interact_layout"/>
    </RelativeLayout>
</LinearLayout>
