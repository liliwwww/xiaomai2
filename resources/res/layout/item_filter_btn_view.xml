<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:paddingLeft="4.5dp"
    android:paddingRight="4.5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="44dp">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/filter_btn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="13dp"
            android:textColor="#5f6672"
            android:id="@+id/filter_btn_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_shaixuanxia12"/>
    </LinearLayout>
</FrameLayout>
