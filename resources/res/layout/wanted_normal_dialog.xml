<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
                android:id="@+id/btn_icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginBottom="6dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="film_love_big_lottie.json"
                app:lottie_loop="false"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:gravity="center_vertical"
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wanted_tip_already"
                android:layout_toRightOf="@+id/btn_icon"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="14.5dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_want_count_index"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_coupon_item"
        android:background="@drawable/wanted_dialog_normal_item_bg"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">
        <RelativeLayout
            android:background="@drawable/product_coupon_left_valid_coupon_bg"
            android:layout_width="78dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="bottom|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:id="@+id/tv_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
        <com.taobao.movie.android.app.ui.product.item.MoCircleDashLine
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/color_tpp_primary_main_title"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_coupon_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:maxLines="2"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:gravity="center"
                    android:id="@+id/tv_coupon_expired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="有效期至2019年12月18日"
                    android:layout_below="@+id/tv_coupon_desc"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_youku_wanted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp">
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="15dp"
            android:textColor="@color/common_color_1006"
            android:id="@+id/check_youku_wanted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_selected_no"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/check_youku_wanted"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="11dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.5dp"
                android:text="想看记录也在优酷展示，可在线播放会收到提醒，可在设置中关闭"
                android:lineSpacingExtra="2.5dp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
