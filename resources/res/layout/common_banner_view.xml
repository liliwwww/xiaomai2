<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.AutoScrollViewPage
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.taobao.movie.android.commonui.widget.banner.LinePageIndicator
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/line_page_indicator"
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:layout_margin="8dp"/>
    <com.taobao.movie.android.commonui.widget.banner.CirclePageIndicator
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/circle_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>
</merge>
