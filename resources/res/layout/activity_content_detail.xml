<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/content_detail_title"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="19dp"
            android:textColor="#5f6672"
            android:gravity="center"
            android:id="@+id/content_detail_back_icon"
            android:paddingLeft="12dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_zuojiantou_"/>
        <cn.damai.discover.content.view.UserInfoView
            android:id="@+id/content_detail_user_info"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            app:avatarRightMargin="9dp"
            app:userAvatarSize="size_30x30"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_dna"
            android:gravity="center"
            android:id="@+id/content_detail_follow_btn"
            android:background="@drawable/bg_color_ff2869_ff3299_corners"
            android:visibility="gone"
            android:layout_width="54dp"
            android:layout_height="25dp"
            android:layout_marginRight="12dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="22dp"
            android:textColor="#5f6672"
            android:gravity="center"
            android:id="@+id/content_detail_share_btn"
            android:paddingRight="@dimen/margin_12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fenxiang44"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="22dp"
            android:textColor="#5f6672"
            android:gravity="center"
            android:id="@+id/content_detail_more_btn"
            android:paddingRight="@dimen/margin_12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_Gengduo18"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/live_content_detail_page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/content_detail_title">
        <cn.damai.uikit.irecycler.DamaiRootRecyclerView
            android:id="@+id/live_content_detail_list"
            android:background="#f4f5f6"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="54dp"
            android:overScrollMode="never"/>
    </FrameLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/content_detail_back_to_top"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/icon_scroll_to_top"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_detail_publisher_layout"
        android:background="@color/color_ffffff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="#1a000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <EditText
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:textColorHint="@color/color_9C9CA5"
                android:layout_gravity="center"
                android:id="@+id/content_detail_publisher_input"
                android:background="@drawable/content_detail_bottom_editbg"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:maxHeight="80dp"
                android:minHeight="30dp"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.3"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/content_detail_publisher_praise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="1dp">
                <RelativeLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/content_detail_dian_zan_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/content_detail_dian_zan_icon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="2dp"
                        app:lottie_repeatCount="0"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/color_666666"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/content_detail_publisher_praise_count_v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="31dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/content_detail_bottom_follow_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/content_detail_wanna_2_see_icon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="2dp"
                        app:lottie_repeatCount="0"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/color_666666"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/content_detail_wanna_2_see_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="31dp"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/content_detail_bottom_comment_layout"
                    android:paddingTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dp">
                    <ImageView
                        android:id="@+id/content_detail_comment_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/content_detail_bottom_comment"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/color_666666"
                        android:layout_gravity="center"
                        android:id="@+id/content_detail_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/content_detail_publisher_btn"
                android:background="@drawable/bg_color_ff2869_ff3299"
                android:visibility="gone"
                android:layout_width="54dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="21dp"
                android:text="发布"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/content_detail_wanna_2_see_guide"
        android:background="@drawable/live_wanna_see_guide_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_xiangkanmian_"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="点击想看，可以第一时间收获演出动态信息哦"/>
    </LinearLayout>
    <cn.damai.rank.view.WantSeeTips
        android:id="@+id/want_see_tips_content_detail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
