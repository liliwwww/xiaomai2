<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/project_service_item_tag_action"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">
    <TextView
        android:textSize="12dp"
        android:textColor="#0097ff"
        android:id="@+id/project_support_service_item_action_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="#0097ff"
        android:layout_gravity="center_vertical"
        android:id="@+id/show_count_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:text="@string/iconfont_fenleiyebofang18"/>
</LinearLayout>
