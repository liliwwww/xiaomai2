<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:ellipsize="end"
        android:id="@+id/ticklet_detail_event_code_title"
        android:paddingRight="@dimen/margin_6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:maxEms="15"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ticklet_000000_14dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:id="@+id/ticklet_detail_event_code_tip_icon"
        android:paddingTop="@dimen/margin_4dp"
        android:paddingBottom="@dimen/margin_4dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:text="@string/iconfont_tixingmian_"
        app:layout_constraintLeft_toRightOf="@+id/ticklet_detail_event_code_title"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ticklet_999999_13dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:id="@+id/tiklet_detail_event_code_icon_arrow"
        android:paddingLeft="@dimen/margin_18dp"
        android:paddingTop="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_youjiantou24"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ticklet_999999_13dp"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="#6c7077"
        android:gravity="center_vertical"
        android:id="@+id/ticklet_detail_event_code_num"
        android:paddingTop="@dimen/margin_12dp"
        android:paddingRight="33dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ticklet_detail_event_code_copy"
        app:layout_constraintTop_toBottomOf="@+id/ticklet_detail_event_code_title"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="#0091ff"
        android:id="@+id/ticklet_detail_event_code_copy"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_14dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复制"
        android:layout_alignParentRight="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ticklet_detail_event_code_num"/>
    <ImageView
        android:id="@+id/ticklet_down_code_arrow"
        android:background="@drawable/ticklet_down_arrow"
        android:visibility="invisible"
        android:layout_width="@dimen/margin_12dp"
        android:layout_height="@dimen/margin_6dp"
        android:layout_toStartOf="@+id/ticklet_detail_event_code_tip_icon"
        app:layout_constraintBottom_toTopOf="@+id/ticklet_detail_event_code_tip_icon"
        app:layout_constraintRight_toRightOf="@+id/ticklet_detail_event_code_tip_icon"/>
    <ImageView
        android:id="@+id/ticklet_down_code_arrow_bottom"
        android:background="@drawable/ticklet_up_arrow"
        android:visibility="invisible"
        android:layout_width="@dimen/margin_12dp"
        android:layout_height="@dimen/margin_6dp"
        android:layout_toStartOf="@+id/ticklet_detail_event_code_tip_icon"
        app:layout_constraintRight_toRightOf="@+id/ticklet_detail_event_code_tip_icon"
        app:layout_constraintTop_toBottomOf="@+id/ticklet_detail_event_code_tip_icon"/>
</merge>
