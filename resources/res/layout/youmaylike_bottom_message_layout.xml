<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wante_layout"
        android:background="@drawable/track_22opacity_bg"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/wante_see_logo_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="我想看的电影"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/wante_nums_txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/white"
            android:gravity="right"
            android:id="@+id/wante_nums_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/wante_see_logo_txt"
            app:layout_constraintRight_toLeftOf="@+id/line"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/line"
            android:background="#4ddedede"
            android:layout_width="1px"
            android:layout_height="9dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/wante_nums_txt"
            app:layout_constraintRight_toLeftOf="@+id/now_playing_film_txt"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/white"
            android:id="@+id/now_playing_film_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/line"
            app:layout_constraintRight_toLeftOf="@+id/arrow_txt"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:id="@+id/arrow_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="@string/icon_font_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_tpp_primary_50_white"
        android:layout_gravity="center"
        android:id="@+id/pick_you_favor_txt"
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="猜的不够准？先去PICK你的观影片好吧~"/>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>
