<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="#eaf5fd"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <TextView
        android:textSize="15dp"
        android:textColor="@color/common_color_1004"
        android:gravity="center_vertical"
        android:id="@+id/tv_video_remind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上次看到这里，点击刷新"
        android:includeFontPadding="false"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="15dp"
        android:textColor="@color/common_color_1004"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/iconf_refresh"
        android:includeFontPadding="false"/>
</LinearLayout>
