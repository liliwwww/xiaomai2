<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_refund_notice"
        android:background="@drawable/price_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <RelativeLayout
        android:id="@+id/rl_tips"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_refund_notice">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/film_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxWidth="200dp"
            android:lineSpacingExtra="3dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:id="@+id/film_name_en_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxWidth="200dp"
            android:layout_below="@+id/film_name_txt"
            android:lineSpacingExtra="3dp"
            android:alpha="0.5"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
