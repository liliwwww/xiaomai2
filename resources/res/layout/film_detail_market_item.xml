<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/film_detail_market_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        app:roundedCornerRadius="9dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/cg_1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/film_detail_market_title"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <com.google.android.flexbox.FlexboxLayout
            android:gravity="center_vertical"
            android:id="@+id/layout_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:alignItems="center"
            app:flexDirection="row">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/cg_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/film_detail_market_subtitle"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:layout_flexShrink="1"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="14dp"
                android:textColor="@color/cg_3"
                android:id="@+id/film_detail_market_subtitle_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_font_right_small"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/film_detail_market_title"
                app:layout_flexShrink="0"/>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_title"
        android:gravity="center"
        android:id="@+id/tv_action_btn"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="去看看"/>
</LinearLayout>
