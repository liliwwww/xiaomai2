<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/damai_list_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="6dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_minute_0"
                android:background="@drawable/or_green_button_bg"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                style="@style/wrap"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_minute_1"
                android:background="@drawable/or_green_button_bg"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:maxLength="1"
                style="@style/wrap"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/light_black_444"
                android:layout_marginLeft="2dp"
                android:text="@string/damai_event_minutes"
                android:singleLine="true"
                style="@style/wrap"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_second_0"
                android:background="@drawable/or_green_button_bg"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:maxLength="1"
                style="@style/wrap"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_second_1"
                android:background="@drawable/or_green_button_bg"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:maxLength="1"
                style="@style/wrap"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/light_black_444"
                android:layout_marginLeft="2dp"
                android:text="@string/damai_event_seconds"
                android:singleLine="true"
                style="@style/wrap"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/light_black_7d7d7d"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_time_message"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/order_detail_content_tip_time_01"
            style="@style/wrap"/>
    </LinearLayout>
</LinearLayout>
