<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.commonbusiness.photoselect.imageselected.view.MyViewPager
        android:id="@+id/vp_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <cn.damai.player.DMVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/rl_bottom_bar"
        android:background="#80000000"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">
        <include
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_25dp"
            android:layout_marginRight="@dimen/margin_21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            layout="@layout/activity_image_select_confirm"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rl_top_bar"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_bar_space_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_22dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_back"
                android:paddingLeft="@dimen/margin_21dp"
                android:paddingRight="@dimen/margin_21dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fanhui24"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_select"
                android:background="@drawable/circle_per60_white_oval"
                android:visibility="visible"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_video_select"
                android:background="@drawable/submit_enable_btn_h36"
                android:visibility="visible"
                android:layout_width="54dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:text="下一步"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
