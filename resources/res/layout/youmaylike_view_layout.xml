<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/film_post_layout"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/film_post_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="25dp"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="15dp"/>
    <View
        android:background="@drawable/youmaylike_post_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"/>
    <View
        android:layout_gravity="bottom"
        android:background="@drawable/youmaylike_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"/>
    <include
        android:id="@+id/youmaylike_top_slogan_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        layout="@layout/youmaylike_top_slogan_layout"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_tpp_primary_80_white"
            android:id="@+id/film_state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"/>
        <com.google.android.flexbox.FlexboxLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:alignItems="center"
            app:flexWrap="nowrap">
            <TextView
                android:textSize="24dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/film_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:maxLines="1"
                android:singleLine="true"
                android:includeFontPadding="false"
                app:layout_flexShrink="1"/>
            <TextView
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_secondary_orange"
                android:gravity="left"
                android:id="@+id/score_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="21dp"
                android:includeFontPadding="false"
                android:layout_weight="1"
                app:layout_flexShrink="0"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_80_white"
            android:ellipsize="end"
            android:id="@+id/reason_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="21dp"
            android:maxLines="1"
            android:singleLine="true"
            android:includeFontPadding="false"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="73dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/ticket_iconfont"
            android:background="@drawable/youmaylike_favor_bg"
            android:visibility="gone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:text="@string/icon_font_film_ticket"/>
        <androidx.legacy.widget.Space
            android:id="@+id/btn_space"
            android:layout_width="24dp"
            android:layout_height="match_parent"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/favor_iconfont"
            android:background="@drawable/youmaylike_ticket_bg"
            android:visibility="gone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:text="@string/icon_font_heart_unfavored"/>
    </LinearLayout>
</FrameLayout>
