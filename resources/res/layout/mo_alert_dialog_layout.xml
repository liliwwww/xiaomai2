<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/mo_alertdialog_rootview"
    android:background="#66000000"
    android:paddingLeft="38dp"
    android:paddingRight="38dp"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/mo_alertdialog_content"
        android:background="@color/white"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/mo_alertdialog_head_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/mo_alertdialog_top_body_divider"
            android:background="@color/common_color_1011"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mo_alertdialog_content_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/mo_alertdialog_body_bottom_divider"
            android:background="@color/common_color_1011"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/mo_alertdialog_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="18dp"
        android:textColor="@color/white"
        android:id="@+id/mo_alertdialog_bottom_close_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/icon_font_close"
        android:rotation="45"/>
</FrameLayout>
