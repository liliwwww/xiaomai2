<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/status_bar_gap"
            android:layout_width="match_parent"
            android:layout_height="21dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/resource_size_22"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/common_navbar_back"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_zuojiantou_"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/main_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#ff4973"
                android:gravity="center"
                android:id="@+id/title_navbar_share"
                android:background="@drawable/coupon_nav_bar_share_bg"
                android:visibility="visible"
                android:layout_width="54dp"
                android:layout_height="25dp"
                android:text="分享"
                android:layout_centerVertical="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginEnd="12dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
