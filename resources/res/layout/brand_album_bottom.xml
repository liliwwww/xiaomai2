<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@drawable/brand_album_bg_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:background="@drawable/brand_album_bg_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="13dp"
        android:textColor="#ffffffff"
        android:ellipsize="end"
        android:id="@+id/brand_album_shadow_text"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text=""
        android:maxLines="1"
        android:layout_toLeftOf="@+id/brand_ablum_video"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:id="@+id/brand_ablum_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="4dp"
        android:text="@string/iconfont_shipin_12"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/brand_ablum_vcount"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:id="@+id/brand_ablum_vcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text=""
        android:layout_toLeftOf="@+id/brand_ablum_photo"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:id="@+id/brand_ablum_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="@string/iconfont_tuce_12"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/brand_ablum_pcount"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:id="@+id/brand_ablum_pcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
