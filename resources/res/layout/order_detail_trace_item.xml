<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp">
        <ImageView
            android:background="@drawable/or_line_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_trace_flow_icon"
            android:background="@drawable/or_flowed_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_trace_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30sp"
                android:textColor="@color/light_black_444"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_day"
                style="@style/wrap"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/light_black_444"
                    android:id="@+id/tv_week"
                    style="@style/wrap"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/light_black_444"
                    android:id="@+id/tv_time"
                    style="@style/wrap"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/light_black_7d7d7d"
            android:id="@+id/tv_trace_detail"
            android:layout_marginRight="12dp"
            android:text=""
            style="@style/wrap"/>
    </LinearLayout>
</LinearLayout>
