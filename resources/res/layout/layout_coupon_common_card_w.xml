<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="64dp">
    <View
        android:id="@+id/common_top_space"
        android:visibility="gone"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"/>
    <RelativeLayout
        android:background="@drawable/bg_brand_coupon_left"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/common_card_top_vv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:id="@+id/common_card_top_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="¥"
                android:layout_alignBottom="@+id/common_card_top_value"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/common_card_top_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/common_card_top_flag"/>
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/common_card_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:layout_below="@+id/common_card_top_vv"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/brand_header_coupon_gapbg"/>
    <RelativeLayout
        android:background="@drawable/bg_brand_coupon_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/common_card_desc_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="70dp"
            android:maxLines="1"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/common_card_desc_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="70dp"
            android:maxLines="1"
            android:layout_below="@+id/common_card_desc_info"
            android:layout_alignParentLeft="true"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="9dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/item_header_coupon_got"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:paddingRight="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_xiangmutixing32"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/common_card_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已领取"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/item_header_coupon_want"
                android:background="@drawable/bg_border_corner_125"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="立即领取"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
