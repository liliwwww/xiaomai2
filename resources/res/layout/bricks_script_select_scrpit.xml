<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">
        <com.alibaba.pictures.bricks.view.RoundRadiusImageView
            android:id="@+id/script_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bricks_uikit_default_image_bg_grey"
            android:scaleType="fitXY"
            app:r_round_radius="6dp"/>
        <View
            android:layout_gravity="top|right"
            android:id="@+id/checkbox_bg"
            android:background="@android:color/white"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="top|right"
            android:id="@+id/checkbox"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/iconfont_yuangouxuanweixuanzhong"/>
    </FrameLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="#111111"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/script_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:includeFontPadding="false"/>
</LinearLayout>
