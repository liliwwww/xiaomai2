<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/live_venue_container"
    android:layout_width="153dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp">
    <com.alibaba.pictures.bricks.view.RoundImageView
        android:id="@+id/live_venue_bg_pic"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        app:borderRadius="6dp"
        app:type="radial"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/live_venue_info_container"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.alibaba.pictures.bricks.view.RoundImageView
            android:id="@+id/live_venue_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            app:borderRadius="5dp"
            app:type="radial"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/live_venue_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/live_venue_pic">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_2e333e"
                android:ellipsize="end"
                android:id="@+id/live_venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/bricks_9c9ca5"
                android:ellipsize="end"
                android:id="@+id/live_venue_performanceCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/live_venue_price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:src="@drawable/live_venue_price_bg"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/bricks_717171"
                    android:gravity="bottom"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Â¥"
                    android:layout_marginEnd="1dp"/>
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="14dp"
                    android:textColor="@color/bricks_717171"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:id="@+id/live_venue_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
