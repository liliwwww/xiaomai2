<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.shadowlayout.DMShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/id_pioneer_home_tab_container"
    android:layout_width="wrap_content"
    android:layout_height="67dp"
    app:sl_cornerRadius="20dp"
    app:sl_shadowColor="#26000000"
    app:sl_shadowRadius="10dp">
    <com.alibaba.pictures.bricks.view.RoundImageView2
        android:id="@+id/id_pioneer_home_tab_container_bg"
        android:background="@drawable/home_bottom_tab_pioneer_background"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        app:rRadius="12dp"/>
    <FrameLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_centerInParent="true">
        <View
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/pioneer_home_tab_container_bganim"
            android:background="@drawable/home_bottom_tab_select_bg"
            android:visibility="gone"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginLeft="5.5dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_pioneer_home_tab_items"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <include
                android:id="@+id/pioneer_home_tab_container_1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/layout_home_bottom_tab_pioneer_item"/>
            <include
                android:id="@+id/pioneer_home_tab_container_2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/pioneer_home_tab_container_3"
                app:layout_constraintStart_toEndOf="@+id/pioneer_home_tab_container_1"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/layout_home_bottom_tab_pioneer_item"/>
            <include
                android:id="@+id/pioneer_home_tab_container_3"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/pioneer_home_tab_container_4"
                app:layout_constraintStart_toEndOf="@+id/pioneer_home_tab_container_2"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/layout_home_bottom_tab_pioneer_item"/>
            <include
                android:id="@+id/pioneer_home_tab_container_4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/pioneer_home_tab_container_5"
                app:layout_constraintStart_toEndOf="@+id/pioneer_home_tab_container_3"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/layout_home_bottom_tab_pioneer_item"/>
            <include
                android:id="@+id/pioneer_home_tab_container_5"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/layout_home_bottom_tab_pioneer_item"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</cn.damai.uikit.shadowlayout.DMShadowLayout>
