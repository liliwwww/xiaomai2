<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/image_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="fitXY"
                app:isForcedShowErrorImg="false"
                app:roundBottomLeft="false"
                app:roundBottomRight="false"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundedCornerRadius="12dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_top"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
                    android:id="@+id/btn_icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginBottom="6dp"
                    app:layout_constraintEnd_toStartOf="@+id/tip"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="film_love_big_lottie.json"
                    app:lottie_loop="false"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/color_tpp_primary_main_title"
                    android:gravity="center_vertical"
                    android:id="@+id/tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wanted_tip_already"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:id="@+id/tv_index_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是第五次中奖了哦"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_top"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_index_info"/>
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:text="直接收下"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/btn_icon"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_ok"
                android:background="@drawable/common_red_small_btn_7_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:text="解锁更多优惠"
                android:maxLines="1"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/tv_ok"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
