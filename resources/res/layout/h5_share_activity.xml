<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/share_root"
    android:background="#99000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/button_container"
            android:background="@drawable/oscar_base_share_bg"
            android:paddingBottom="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_peekHeight="500dp"
            app:layout_behavior="@string/bottom_sheet_behavior">
            <View
                android:layout_gravity="center_horizontal"
                android:background="@drawable/share_menu_guide_strip"
                android:layout_width="30dp"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/share_menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_2e333e"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="分享到"
                    android:includeFontPadding="false"/>
                <View
                    android:background="#ffededed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_line_height"/>
            </LinearLayout>
            <com.alibaba.pictures.share.common.ui.widget.HorizontalShareMenu
                android:id="@+id/h5_share_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:share_channel="1234567"/>
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/color_2e333e"
                android:gravity="center"
                android:id="@+id/cancel_btn"
                android:background="@drawable/share_menu_cancel_bg"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="取消"
                android:includeFontPadding="false"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
