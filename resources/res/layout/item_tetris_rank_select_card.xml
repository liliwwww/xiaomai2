<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.StrokeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="95dp"
    android:layout_height="128dp"
    app:sl_corners_radius="6dp">
    <FrameLayout
        android:id="@+id/drama_inner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.damai.uikit.view.DMPosterView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/ll_tv_container"
            android:background="@drawable/bg_rank_select_1"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
            <TextView
                android:textSize="11dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>
    </FrameLayout>
</cn.damai.uikit.view.StrokeLinearLayout>
