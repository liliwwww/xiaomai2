<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin_15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/margin_16dp"
        android:textColor="@color/color_333333"
        android:id="@+id/tv_ticket_title"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您可能遇到的问题"
        android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_after_service"
        android:background="@drawable/trade_shape_ff4886_0_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/margin_7dp"
        android:layout_marginRight="@dimen/margin_15dp">
        <TextView
            android:textSize="13dp"
            android:textColor="#ff4886"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/after_service_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_9dp"
            android:maxLines="1"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#ff4886"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_9dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <cn.damai.uikit.flowlayout.FlowLayout
        android:id="@+id/fl_quest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line_ticket_title"
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_18dp"
        android:layout_marginEnd="15dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_user_service"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_xiangqingkefu24"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_333333"
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询客服"/>
    </LinearLayout>
</LinearLayout>
