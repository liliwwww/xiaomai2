<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/mo_tip_pop_img_arrow"
        android:background="@drawable/popwindow_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/white"
        android:gravity="start|center_vertical"
        android:id="@+id/mo_tip_pop_content"
        android:background="@drawable/popwindow_mo_tip_default_bg"
        android:padding="10dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mo_tip_pop_img_arrow"
        android:lineSpacingExtra="3dp"/>
</RelativeLayout>
