<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/aliuser_bottom_menu_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/aliuser_textsize_smallest"
            android:textColor="@color/aliuser_text_light_gray"
            android:gravity="center_horizontal"
            android:id="@+id/aliuser_bottom_menu_title_tv"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/aliuser_space_4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/aliuser_space_30"/>
        <View
            android:id="@+id/aliuser_bottom_menu_title_divider"
            android:background="#f2f2f2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <ListView
            android:id="@+id/aliuser_menu_lv"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/color_e7e7e7"
            android:dividerHeight="1px"
            android:layout_weight="1"/>
        <View
            android:background="@color/color_e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textAppearance="@style/AliUserMenuTextAppearance"
            android:textSize="@dimen/margin_14dp"
            android:gravity="center"
            android:id="@+id/aliuser_cancel_tv"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/aliuser_space_48"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>
