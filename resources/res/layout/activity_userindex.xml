<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.user.repertoite.view.LinearPullToRefreshView
        android:orientation="vertical"
        android:id="@+id/lin_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:orientation="vertical"
                    android:id="@+id/toolbar"
                    android:background="@drawable/mine_user_bg_layerlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="46dp"
                    app:collapsedTitleGravity="left"
                    app:collapsedTitleTextAppearance="@style/Toolbar.TitleText.Collapsed"
                    app:expandedTitleMarginBottom="64dp"
                    app:expandedTitleMarginStart="18dp"
                    app:expandedTitleTextAppearance="@style/Toolbar.TitleText"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll">
                    <RelativeLayout
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:layout_collapseMode="parallax">
                        <include
                            android:id="@+id/rl_header_b"
                            android:layout_width="match_parent"
                            android:layout_height="166dp"
                            android:layout_alignParentBottom="true"
                            layout="@layout/content_header_b"/>
                        <include
                            android:id="@+id/rl_header_b_other"
                            android:layout_width="match_parent"
                            android:layout_height="166dp"
                            android:layout_alignParentBottom="true"
                            layout="@layout/content_header_b_other"/>
                        <include
                            android:id="@+id/rl_header_c"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="322dp"
                            android:layout_alignParentBottom="true"
                            layout="@layout/content_header_c"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/status_bar_gap"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignParentTop="true"/>
                    <RelativeLayout
                        android:gravity="top"
                        android:id="@+id/nav_bar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/NAVBAR_H"
                        app:layout_collapseMode="pin">
                        <cn.damai.uikit.iconfont.DMIconFontTextView
                            android:textSize="18dp"
                            android:textColor="#ffffff"
                            android:id="@+id/tv_goback"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:text="@string/iconfont_fanhui18"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="16dp"
                            android:textColor="#ffffff"
                            android:ellipsize="end"
                            android:id="@+id/bname_titile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_24dp"
                            android:singleLine="true"
                            android:layout_toLeftOf="@+id/tv_attention"
                            android:layout_toRightOf="@+id/tv_goback"
                            android:layout_centerVertical="true"/>
                        <cn.damai.user.repertoite.view.AttentionView
                            android:gravity="center"
                            android:id="@+id/tv_attention"
                            android:visibility="gone"
                            android:layout_width="57dp"
                            android:layout_height="25dp"
                            android:layout_toLeftOf="@+id/tv_navchat"
                            android:layout_centerVertical="true"
                            app:attention_backgroud="@drawable/user_follow_gray"
                            app:attention_textColor="@color/color_999999"/>
                        <TextView
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/tv_publish"
                            android:background="@drawable/user_chat_bg"
                            android:visibility="gone"
                            android:layout_width="57dp"
                            android:layout_height="24dp"
                            android:text="发动态"
                            android:layout_toLeftOf="@+id/tv_navchat"
                            android:layout_centerVertical="true"/>
                        <cn.damai.uikit.iconfont.DMIconFontTextView
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_navchat"
                            android:visibility="gone"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="18dp"
                            android:text="@string/iconfont_sixin24"
                            android:layout_toLeftOf="@+id/tv_share"
                            android:layout_centerVertical="true"/>
                        <cn.damai.uikit.iconfont.DMIconFontTextView
                            android:textSize="18dp"
                            android:textColor="#ffffff"
                            android:id="@+id/tv_share"
                            android:paddingTop="2dp"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:text="@string/iconfont_bianji24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
                <RelativeLayout
                    android:background="#e6000000"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">
                    <RelativeLayout
                        android:background="@drawable/mine_user_radius_bg"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true">
                        <net.lucode.hackware.magicindicator.MagicIndicator
                            android:id="@+id/magic_indicator"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <View
                            android:background="@color/color_eeeeee"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <cn.damai.commonbusiness.view.DmViewPager
                android:id="@+id/view_pager"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </cn.damai.user.repertoite.view.LinearPullToRefreshView>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:id="@+id/user_publish"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/user_publish_click"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="14dp"
                android:textColor="@color/color_FF1268"
                android:id="@+id/user_publish_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_bianji16"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_FF1268"
                android:id="@+id/user_publish_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="发评价"/>
        </LinearLayout>
        <View
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/user_publish_click"/>
    </RelativeLayout>
</FrameLayout>
