<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_6dp"
    android:paddingBottom="@dimen/margin_6dp"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="42dp">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_perform"
        android:background="@drawable/project_detail_perform_bg_defalut"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_666666"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_package_ticket"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/damai_seat_package"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/perform_textView"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="bottom|right"
        android:id="@+id/iv_no_sale_tip"
        android:visibility="gone"
        android:layout_width="45dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_select_pirce_no_available_unselected"/>
</FrameLayout>
