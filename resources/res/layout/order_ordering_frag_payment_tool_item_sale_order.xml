<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/order_item_round_bg"
    android:paddingLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/order_sale_item_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:layout_gravity="top"
            android:id="@+id/order_sale_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:placeholderImage="@drawable/sale_item_default"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="6dp"
            app:roundingBorderColor="#1a000000"
            app:roundingBorderWidth="0.5dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/order_sale_item_image_new"
            android:background="@color/common_text_color4"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:text="新品"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/order_sale_item_image_hot"
            android:background="@color/common_text_color22"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:text="热销"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minHeight="85dp"
        android:layout_toRightOf="@+id/order_sale_item_image_container"
        android:layout_alignTop="@+id/order_sale_item_image_container">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:id="@+id/order_sale_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:includeFontPadding="false"
                android:lineSpacingExtra="2dp"/>
            <com.taobao.movie.android.commonui.widget.RoundedTextView
                android:textSize="11dp"
                android:textColor="@color/common_text_color3"
                android:id="@+id/order_sale_item_person_tag"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:includeFontPadding="false"
                app:background_color="@color/common_text_color3"
                app:padding_horizontal="4"
                app:padding_vertical="1"
                app:round_radius="4"
                app:round_type="stroke"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/activity_price_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:minHeight="50dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:background="@color/transparent"
        android:paddingLeft="9dp"
        android:paddingBottom="9dp"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">
        <com.taobao.movie.android.commonui.widget.CornerTagTextView
            android:layout_gravity="top|right"
            android:id="@+id/sales_corner_tag_lab"
            android:visibility="gone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tag_background_color="@color/common_color_1049"
            app:tag_corner_orientation="topRight"
            app:tag_margin_corner_dp="9"
            app:tag_text_color="@color/white"
            app:tag_text_size_dp="10"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
