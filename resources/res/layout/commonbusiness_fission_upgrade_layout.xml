<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e6000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/cb_title_bar_space_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ScrollView
        android:id="@+id/cb_fission_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="@dimen/margin_30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_ffffff"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/fission_upgrade_tip"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/fission_upgrade_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_fission_width"
                android:layout_marginRight="@dimen/margin_fission_width"
                android:src="@drawable/uikit_default_image_bg_grey"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fission_upgrade_tip"/>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_ffffff"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/fission_upgrade_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12dp"
                android:maxLines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fission_upgrade_view"/>
            <HorizontalScrollView
                android:layout_gravity="center_horizontal"
                android:id="@+id/fission_upgrade_share_kinds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fission_upgrade_main_title">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginRight="39dp">
                    <ImageView
                        android:id="@+id/icon_wx"
                        android:background="@drawable/cb_white_circle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/margin_18dp"
                        android:src="@drawable/share_wechat_icon"/>
                    <ImageView
                        android:id="@+id/icon_friend"
                        android:background="@drawable/cb_white_circle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/margin_18dp"
                        android:src="@drawable/share_wechat_circle_icon"/>
                    <ImageView
                        android:id="@+id/icon_weibo"
                        android:background="@drawable/cb_white_circle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/margin_18dp"
                        android:src="@drawable/share_sina_icon"/>
                    <ImageView
                        android:id="@+id/icon_save"
                        android:background="@drawable/cb_white_circle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="@dimen/margin_18dp"
                        android:src="@drawable/share_save_pic_icon"/>
                    <ImageView
                        android:id="@+id/icon_copy"
                        android:background="@drawable/cb_white_circle"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/share_copy_url"/>
                </LinearLayout>
            </HorizontalScrollView>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_18dp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/fission_upgrade_close"
                android:background="@drawable/cb_white26_circle_bg"
                android:padding="@dimen/margin_2dp"
                android:layout_width="@dimen/margin_26dp"
                android:layout_height="@dimen/margin_26dp"
                android:text="@string/iconfont_guanbi24"
                app:layout_constraintBottom_toBottomOf="@+id/fission_upgrade_tip"
                app:layout_constraintLeft_toRightOf="@+id/fission_upgrade_view"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
