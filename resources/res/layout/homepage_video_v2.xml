<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/homepage_module_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.player.video.ProxyVideoView
            android:id="@+id/homepage_video_player_v2"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/homepage_video_cover_v2"
            android:background="#1d2337"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/homepage_video_player_v2"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homepage_video_project_list_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-22dp"
            android:layout_below="@+id/homepage_video_player_v2"/>
    </RelativeLayout>
</LinearLayout>
