<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.FilmImagePlayNew
        android:id="@+id/film_poster"
        android:layout_width="@dimen/poster_width_search_result"
        android:layout_height="@dimen/poster_height_search_result"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.taobao.movie.android.commonui.widget.TitleMarkView
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/film_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">
            <TextView
                android:id="@+id/openday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                style="@style/Item_SubTitle2"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/rating_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_subtitle"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_remark_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_3"
                    android:text="@string/remark_title"
                    android:singleLine="true"
                    style="@style/FilmRemarkTitle"/>
                <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/color_tpp_primary_yellow"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_subtitle"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_remark_title_lite"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remark_title_lite"
                    android:paddingStart="3dp"
                    style="@style/FilmWantTitle"/>
                <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
                    android:textSize="15dp"
                    android:textColor="@color/color_tpp_primary_yellow"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/wantcount"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_subtitle"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_want_count_title"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/want_title"
                    style="@style/FilmWantTitle"/>
                <View
                    android:id="@+id/id_mixed_score_count_divider"
                    android:background="#e9ebef"
                    android:visibility="gone"
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/resource_size_12"
                    android:layout_marginLeft="@dimen/resource_size_6"
                    android:layout_marginRight="@dimen/resource_size_6"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_subtitle"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_score_want_ext_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilmWantTitle"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:ellipsize="end"
            android:id="@+id/film_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            style="@style/Item_SubTitle2"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:ellipsize="end"
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:includeFontPadding="false"
                style="@style/Item_SubTitle2"/>
            <TextView
                android:id="@+id/film_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:includeFontPadding="false"
                style="@style/Item_SubTitle2"/>
        </LinearLayout>
        <com.taobao.movie.android.app.oscar.ui.film.widget.DiscountTagContainerView
            android:id="@+id/id_discount_tags_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/id_right_btn_Layout"
        android:layout_width="wrap_content"
        android:layout_height="88dp">
        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_buy"
            android:padding="0dp"
            android:text="购票"
            style="@style/buy_button_style_small_7_3"/>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/search_result_favorite_fl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <TextView
                android:textSize="10dp"
                android:textColor="#ff3d5c"
                android:layout_gravity="end"
                android:id="@+id/favorite_with_gift"
                android:background="@drawable/want_see_with_gift_pop"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:text="想看有礼"/>
            <com.taobao.movie.android.app.oscar.ui.film.widget.WantButton
                android:layout_gravity="end|bottom"
                android:id="@+id/search_result_favorite"
                android:padding="0dp"
                android:visibility="gone"
                android:text="想看"
                style="@style/want_button_style_small"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/search_result_favorite_fl_pioneer"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="40.5dp"
            android:layout_marginTop="7dp">
            <TextView
                android:textSize="9dp"
                android:textColor="#ff7600"
                android:ellipsize="none"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/favorite_with_gift_pioneer"
                android:background="@drawable/nowshowing_dicount_button_bg_pioneer"
                android:paddingTop="13.5dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_marginTop="13.5dp"
                android:text="想看有礼"
                android:singleLine="true"/>
            <com.taobao.movie.android.app.oscar.ui.film.widget.WantButton
                android:layout_gravity="end|top"
                android:id="@+id/search_result_favorite_pioneer"
                android:padding="0dp"
                android:text="想看"
                android:elevation="0dp"
                style="@style/want_button_style_small"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
