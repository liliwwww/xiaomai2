<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/homepage_waterflow_category_bg"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14dp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/homepage_waterflow_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="我们都爱❤️演唱会"
        android:singleLine="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <View
            android:background="#1a000000"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:id="@+id/homepage_waterflow_category_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:text="大家都在搜"/>
        <View
            android:background="#1a000000"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/homepage_waterflow_category_first_keyword_layout"
        android:background="@drawable/homepage_waterflow_category_item_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp">
        <TextView
            android:textSize="16dp"
            android:textColor="#ff2869"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:id="@+id/homepage_waterflow_category_first_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#3c3f44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/homepage_waterflow_category_second_keyword_layout"
        android:background="@drawable/homepage_waterflow_category_item_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="9dp">
        <TextView
            android:textSize="16dp"
            android:textColor="#ff833c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:id="@+id/homepage_waterflow_category_second_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#3c3f44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/homepage_waterflow_category_third_keyword_layout"
        android:background="@drawable/homepage_waterflow_category_item_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="9dp">
        <TextView
            android:textSize="16dp"
            android:textColor="#ffad00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:id="@+id/homepage_waterflow_category_third_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#3c3f44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/homepage_waterflow_category_fourth_keyword_layout"
        android:background="@drawable/homepage_waterflow_category_item_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="@dimen/margin_15dp">
        <TextView
            android:textSize="16dp"
            android:textColor="#6a7a99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:id="@+id/homepage_waterflow_category_fourth_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#3c3f44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
</LinearLayout>
