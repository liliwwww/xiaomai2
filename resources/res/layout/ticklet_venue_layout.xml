<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/member_venue_fl"
    android:background="@color/color_F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/ticklet_map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.amap.api.maps.MapView
            android:id="@+id/member_ticklet_venue_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_gravity="top|left"
            android:id="@+id/member_ticklet_venue_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ticklet_venue_map_back"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_gravity="top|right"
            android:id="@+id/member_ticklet_venue_my_pos"
            android:background="@drawable/member_ticklet_venue_grey_shape"
            android:padding="4dp"
            android:layout_width="42dp"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="我的\10位置"
            android:drawableTop="@drawable/ticklet_venue_map_my_pos"
            android:drawablePadding="2dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_gravity="top|right"
            android:id="@+id/member_ticklet_venue_go_venue"
            android:background="@drawable/member_ticklet_venue_grey_shape"
            android:padding="4dp"
            android:layout_width="42dp"
            android:layout_height="47dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="@string/ticklet_venue_exchange_site_go_venue"
            android:drawableTop="@drawable/ticklet_venue_map_navi"
            android:drawablePadding="2dp"/>
    </FrameLayout>
    <cn.damai.ticklet.view.ScrollLayout
        android:id="@+id/scroll_down_layout"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ticklet_ll_viewPager"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:id="@+id/member_ticklet_venue_ExchangeSite_ainm"
                android:visibility="visible"
                android:layout_width="35dp"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ticklet_venue_top_icon"/>
            <TextView
                android:id="@+id/member_ticklet_exchange_title"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                style="@style/ticklet_000000_16dp"/>
            <cn.damai.commonbusiness.view.PagerSlidingTabStrip
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_999999"
                android:id="@+id/indicator"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:indicatorHeight="1.5dp"
                app:leftPadding="10dp"
                app:rightPadding="10dp"
                app:tabSpaceLeftAndRight="10dp"
                app:tabStripPaddingLeftRight="5dp"
                app:tabTextChooseColor="@color/color_000000"
                app:underlineHeight="1dp"/>
            <androidx.viewpager.widget.ViewPager
                android:layout_gravity="bottom"
                android:id="@+id/vPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:flipInterval="30"/>
        </LinearLayout>
    </cn.damai.ticklet.view.ScrollLayout>
</RelativeLayout>
