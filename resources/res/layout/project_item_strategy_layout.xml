<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_border_corner_white_9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="15dp"
            android:textColor="@color/color_000000"
            android:id="@+id/tv_coupon_title"
            android:paddingTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户观演攻略"
            android:paddingStart="12dp"/>
        <LinearLayout
            android:id="@+id/iv_right_guide_enter"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:src="@drawable/icon_strategy_right_guide_enter"
                android:layout_marginEnd="9dp"/>
        </LinearLayout>
    </RelativeLayout>
    <cn.damai.uikit.irecycler.HorizontalRecyclerView
        android:id="@+id/irc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
