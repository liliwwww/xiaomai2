<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.battle.BattleResultView
        android:id="@+id/battle_result_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/agree_layout"
        android:background="@drawable/agree_btn_bg"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="225dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/agree_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞同"
            android:maxLines="1"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_tpp_primary_80_white"
            android:ellipsize="end"
            android:id="@+id/agree_description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/disagree_layout"
        android:background="@drawable/disagree_btn_bg"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="225dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:layout_gravity="right"
            android:id="@+id/disagree_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不赞同"
            android:maxLines="1"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_tpp_primary_80_white"
            android:ellipsize="end"
            android:layout_gravity="right"
            android:id="@+id/disagree_description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:maxLines="1"/>
    </LinearLayout>
</merge>
