<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_has_join_aiyi_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:id="@+id/has_join_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/has_join_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/common_text_color46"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="欢迎加入爱艺之城"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_tpp_primary_90_white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_has_join_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"/>
            <TextView
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/tv_start_aiyi_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="95dp"/>
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/common_text_color46"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/tv_start_aiyi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="100dp"
                android:text="开始探索我的爱艺之城"/>
        </androidx.cardview.widget.CardView>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/common_text_color46"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/join_aiyi_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="37dp"
            android:text="@string/iconf_film_close_icon"/>
    </LinearLayout>
</RelativeLayout>
