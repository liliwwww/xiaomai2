<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="1dp"
        android:layout_height="9dp"
        android:layout_marginStart="12dp"/>
    <RelativeLayout
        android:background="@drawable/bricks_list_bg_top_radius_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/resource_size_36"
        android:paddingStart="@dimen/resource_size_12"
        android:paddingEnd="@dimen/resource_size_12">
        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_3"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/title_image"
                android:layout_width="240dp"
                android:layout_height="15dp"
                android:scaleType="fitStart"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="@dimen/font_Headline2_M"
                    android:textColor="#171717"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"/>
                <ImageView
                    android:id="@+id/title_right_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/resource_size_1"
                    android:scaleType="centerInside"
                    android:layout_marginStart="@dimen/resource_size_8"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/action_layout"
            android:paddingTop="@dimen/resource_size_5"
            android:paddingBottom="@dimen/resource_size_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/resource_size_28"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/resource_size_10"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/default_tab_btn_text"
                android:textColor="#181818"
                android:gravity="center"
                android:id="@+id/action_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/default_tab_btn_text"
                android:textColor="#323232"
                android:gravity="center"
                android:id="@+id/action_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#323232"
                android:layout_gravity="center_vertical"
                android:id="@+id/right_arrow"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou12"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
