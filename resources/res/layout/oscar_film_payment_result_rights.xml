<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/order_result_item_background"
    android:paddingBottom="@dimen/padding_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_12"
    android:layout_marginRight="@dimen/margin_12">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="42dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/lv_container"
        android:paddingLeft="@dimen/margin_7"
        android:paddingRight="@dimen/margin_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
