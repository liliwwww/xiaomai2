<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_content_view_wrap"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你标记的「想看」"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在这里都能快速找到～"/>
    </LinearLayout>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="10dp"
        android:textColor="@color/color_33FFFFFF"
        android:id="@+id/top_bar_wantsee_tip_close"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/iconfont_guanbi24"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
