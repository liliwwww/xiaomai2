<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/bg_solid_f7f8fa_corner_6"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="53dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/project_notice_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/project_notice_item_icon"
            android:visibility="gone"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="@color/color_bricks_primary_main_title"
            android:ellipsize="end"
            android:id="@+id/project_notice_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textColor="@color/color_bricks_primary_main_title"
            android:id="@+id/project_notice_item_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/color_bricks_primary_assist"
        android:ellipsize="end"
        android:id="@+id/project_notice_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"/>
</LinearLayout>
