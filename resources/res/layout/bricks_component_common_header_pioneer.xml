<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_component_common_header_pioneer"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:paddingStart="@dimen/resource_size_12"
    android:paddingEnd="@dimen/resource_size_12">
    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/title_image"
            android:layout_width="240dp"
            android:layout_height="15dp"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="@dimen/resource_size_16"
                android:textColor="#171717"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/title_right_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/resource_size_5"
                android:layout_toEndOf="@+id/title"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/action_layout"
        android:paddingTop="@dimen/resource_size_5"
        android:paddingBottom="@dimen/resource_size_5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/resource_size_28"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/resource_size_10"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="#171717"
            android:gravity="center"
            android:id="@+id/action_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="#171717"
            android:gravity="center"
            android:id="@+id/action_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_11"
            android:textColor="#171717"
            android:layout_gravity="center_vertical"
            android:id="@+id/right_arrow"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:text="@string/iconfont_youjiantou12"/>
    </LinearLayout>
</RelativeLayout>
