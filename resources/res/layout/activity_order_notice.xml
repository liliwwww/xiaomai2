<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v_outside"
        android:background="#7e000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_bottom"
        android:background="@drawable/project_item_pop_layer_bg"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center_vertical"
            android:paddingLeft="21dp"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告"
                android:layout_centerVertical="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="#663c3f44"
                android:gravity="center"
                android:id="@+id/layer_close"
                android:paddingRight="21dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fucengguanbi16"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ScrollView
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/margin_14dp"
                    android:textColor="@color/color_000000"
                    android:id="@+id/notice_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_3dp"/>
                <cn.damai.uikit.view.FixImageView
                    android:id="@+id/notice_content_img"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="@dimen/margin_18dp"
                    android:layout_marginRight="33dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
