<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/header_search_v2_ui"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/header_search_v2_space"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/resource_size_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/resource_size_40">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/ai_search"
            android:visibility="gone"
            android:layout_width="@dimen/resource_size_40"
            android:layout_height="@dimen/resource_size_40"
            android:layout_marginEnd="@dimen/resource_size_10"/>
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/header_search_v2_input_bg"
            android:background="@drawable/bricks_search_bg_input"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1">
            <EditText
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textColorHint="#cc9c9ca5"
                android:gravity="center_vertical"
                android:id="@+id/header_search_v2_input"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/bricks_damai_search_input_hint"
                android:singleLine="true"
                android:maxLength="100"
                android:layout_toLeftOf="@+id/header_search_v2_input_delete"
                android:layout_toRightOf="@+id/ib_search"
                android:layout_centerVertical="true"
                android:imeOptions="actionSearch"
                android:layout_marginStart="@dimen/resource_size_12"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="14dp"
                android:textColor="@color/color_cccccc"
                android:gravity="center_vertical"
                android:id="@+id/header_search_v2_input_delete"
                android:paddingLeft="8dp"
                android:paddingRight="11dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_qingchu24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="16dp"
                android:textColor="#3c3f44"
                android:id="@+id/ib_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="@string/iconfont_sousuo_"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/header_search_v2_cancel"
            android:paddingLeft="@dimen/margin_12dp"
            android:paddingRight="@dimen/margin_21dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30dp"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>
