<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/resource_size_53"
    android:paddingStart="@dimen/resource_size_2"
    android:paddingEnd="@dimen/resource_size_2">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/tab_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/resource_size_29">
        <TextView
            android:textSize="@dimen/resource_size_14"
            android:textColor="@color/color_pioneer_live_tag_text_select"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingStart="@dimen/resource_size_13"
            android:paddingEnd="@dimen/resource_size_13"/>
    </LinearLayout>
</FrameLayout>
