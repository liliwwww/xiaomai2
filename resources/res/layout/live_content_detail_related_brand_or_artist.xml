<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/margin_15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_12dp"
    android:paddingEnd="@dimen/margin_12dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_round_rect_gray_stroke_26000000_r12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tour_title"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:lines="1"/>
        <View
            android:id="@+id/divider_line"
            android:background="#26000000"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <cn.damai.discover.content.ui.viewholder.item.ContentDetailRelatedBrand
            android:id="@+id/live_content_detail_related_brand"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/artist_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/live_content_detail_related_artist_list"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <View
                android:background="@drawable/content_detail_artist_list_bg"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
