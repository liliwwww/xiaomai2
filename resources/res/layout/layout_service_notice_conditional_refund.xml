<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_service_conditional_refund"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/session_time_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@drawable/bg_white_transparent"
        android:layout_width="12dp"
        android:layout_height="40dp"
        android:layout_marginStart="1px"
        android:layout_alignParentStart="true"/>
    <View
        android:background="@drawable/bg_transparent_white"
        android:layout_width="12dp"
        android:layout_height="40dp"
        android:layout_marginEnd="1px"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/conditional_time_excel"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_9dp"
        android:layout_below="@+id/session_time_tab">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp">
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/color_2E333E"
                android:gravity="center_vertical"
                android:id="@+id/excel_head_first"
                android:background="@drawable/service_notice_conditional_excel_header_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="申请退票时间段"
                android:layout_weight="1"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"/>
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/color_2E333E"
                android:gravity="center"
                android:id="@+id/excel_head_end"
                android:background="@drawable/service_notice_conditional_excel_header_bg2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="退票手续费"
                android:layout_marginStart="-1px"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
