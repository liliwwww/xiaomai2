<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/filter_panel"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="bottom"
        android:id="@+id/filter_title"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/filter_main_tab_layout"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_tab_recycler"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="9dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/filter_time_ui"
            android:layout_width="wrap_content"
            android:layout_height="34dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_9C9CA5"
                android:id="@+id/filter_timer"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部时间"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="13dp"
                android:textColor="@color/color_999999"
                android:id="@+id/filter_timer_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/iconfont_shaixuanxia12"/>
        </LinearLayout>
    </LinearLayout>
    <cn.damai.uikit.view.XHorizontalScrollView
        android:id="@+id/filter_sub_horizontal_scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/filter_sub_container"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"/>
    </cn.damai.uikit.view.XHorizontalScrollView>
</LinearLayout>
