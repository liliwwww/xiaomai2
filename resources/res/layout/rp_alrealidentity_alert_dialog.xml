<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/rp_dialog_close_btn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/rp_ic_close"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="19sp"
            android:textColor="@color/rpsdk_common_text"
            android:id="@+id/rp_dialog_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/rp_dialog_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17sp"
                android:textColor="@color/rpsdk_gray_light"
                android:layout_gravity="left"
                android:id="@+id/rp_dialog_subtitle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:textSize="17sp"
                android:textColor="@color/rpsdk_common_text"
                android:layout_gravity="left"
                android:id="@+id/rp_dialog_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.4285"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/rpsdk_gap_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="19sp"
            android:textColor="@color/rpsdk_gray_light"
            android:id="@+id/rp_dialog_negative_btn"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
        <View
            android:background="@color/rpsdk_gap_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="19sp"
            android:textColor="@color/rpsdk_identity_primary"
            android:id="@+id/rp_dialog_positive_btn"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>
