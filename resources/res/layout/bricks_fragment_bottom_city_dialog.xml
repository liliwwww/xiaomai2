<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/city_base_view"
    android:background="@drawable/bricks_bg_city_select_corner_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18dp"
        android:textColor="#333333"
        android:id="@+id/city_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="@string/bricks_normal_select_city_str"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="#5f6672"
        android:gravity="center"
        android:id="@+id/city_list_close"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:text="@string/iconfont_guanbi24"
        android:layout_marginEnd="@dimen/margin_15dp"
        app:layout_constraintBottom_toBottomOf="@+id/city_list_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/city_list_title"/>
    <FrameLayout
        android:orientation="horizontal"
        android:id="@+id/city_list_view"
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_list_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
