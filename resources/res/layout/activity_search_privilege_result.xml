<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/search_title_layout"
        android:background="@drawable/app_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/title_bar_space"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_22dp"
            android:textColor="#3c3f44"
            android:gravity="center"
            android:id="@+id/search_title_close"
            android:paddingLeft="@dimen/margin_22dp"
            android:paddingRight="@dimen/margin_9dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="@string/iconfont_Daohangguanbi18"
            android:layout_below="@+id/title_bar_space"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/search_title_content"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="请选择要关联的项目"
            android:maxLines="1"
            android:layout_below="@+id/title_bar_space"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/margin_7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_title_content">
            <include layout="@layout/search_input"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/search_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.damai.uikit.irecycler.IRecyclerView
            android:id="@+id/irc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:refreshEnabled="true"
            app:refreshHeaderLayout="@layout/refresh_empty_view"/>
        <cn.damai.uikit.irecycler.IRecyclerView
            android:id="@+id/theme_evaluate_irc"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:refreshEnabled="true"
            app:refreshHeaderLayout="@layout/refresh_empty_view"/>
        <ImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/iv_top"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingTop="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_15dp"
            android:paddingBottom="@dimen/margin_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_top"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_error"
            android:visibility="visible"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
