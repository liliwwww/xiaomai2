<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/item_round_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@null"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CommonListItemContainerWhite">
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/block_notice_title"
            android:text="@string/ordering_selector_block_notice_title_seat"
            style="@style/CommonListItemOrderTitle"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="8dp"
            android:textColor="@color/common_text_color11"
            android:id="@+id/ordering_new_notice_btn_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="@string/iconf_up_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/block_notice_desc_container"
        android:background="@null"
        android:paddingLeft="12dp"
        android:paddingTop="0dp"
        android:paddingRight="12dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CommonListItemContainerWhite"/>
</LinearLayout>
