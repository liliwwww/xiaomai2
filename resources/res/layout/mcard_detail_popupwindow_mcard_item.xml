<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/tpp_gray_6"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/card_container"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">
            <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                android:id="@+id/card_bg"
                android:layout_width="match_parent"
                android:layout_height="162.5dp"
                app:actualImageScaleType="fitXY"
                app:roundedCornerRadius="10dp"/>
            <LinearLayout
                android:gravity="top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp">
                <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                    android:id="@+id/card_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="2dp"
                    app:roundAsCircle="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/cinema_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#99ffffff"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/card_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/discount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="#99ffffff"
                        android:id="@+id/origin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:background="@drawable/order_mcard_shadow"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/card_list_container_noscroll"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"/>
    <HorizontalScrollView
        android:id="@+id/card_list_wrap"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/card_list_container"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/card_use_tips_container"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="15dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_off_muted"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/card_use_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <View
        android:id="@+id/mcard_top_divider_use_tips"
        android:background="@color/common_divider_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/mcard_vip_benefit_container"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <View
        android:id="@+id/mcard_top_divider"
        android:background="@color/common_divider_color"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/common_text_color9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="16dp"
        android:text="购票优惠"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/card_benefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="16dp"/>
    <View
        android:background="@color/common_divider_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"/>
    <TextView
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/common_text_color9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="7dp"
        android:text="使用说明"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_subtitle"
        android:id="@+id/use_guide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingMultiplier="1.2"/>
</LinearLayout>
