<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/transparent"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp">
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tourism_spots_tab_background"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/tourism_tab_name_pic"
                android:background="@color/transparent"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:scaleType="fitStart"
                android:layout_marginStart="12dp"/>
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/bricks_2e333e"
                android:id="@+id/tourism_tab_name_text"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="12dp"/>
            <View
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_5f6672"
                android:id="@+id/tourism_btn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="12dp"
                android:textColor="@color/bricks_5f6672"
                android:id="@+id/tourism_tab_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:includeFontPadding="false"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_container"
            android:paddingBottom="9dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:overScrollMode="never"
            android:paddingStart="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tourism_btn_name"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>
