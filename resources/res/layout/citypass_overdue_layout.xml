<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_tpp_primary_73_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:background="@drawable/schedule_card_bg"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/city_pass_header"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                android:id="@+id/city_pass_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:actualImageScaleType="fitCenter"
                app:failureImage="@drawable/citypass_overdue_icon"
                app:failureImageScaleType="centerInside"
                app:placeholderImage="@drawable/citypass_overdue_icon"
                app:placeholderImageScaleType="centerInside"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/common_text_color46"
                android:ellipsize="end"
                android:id="@+id/city_pass_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_pass_header">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/city_pass_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/city_pass_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/common_text_color46"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/city_pass_continue"
                android:background="@drawable/schedule_card_btn_bg"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="9dp"
                android:text="立即续费"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/city_pass_desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="9dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/common_text_color46"
            android:gravity="center"
            android:id="@+id/dialog_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/iconf_off_single_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</FrameLayout>
