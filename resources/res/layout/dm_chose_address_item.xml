<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_15dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="14dp"
        android:textColor="#aaaaaa"
        android:gravity="center"
        android:id="@+id/icon_edit"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_bianji16"
        android:layout_below="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:enabled="false"
        android:textSize="@dimen/margin_20dp"
        android:textColor="@color/color_FF2D79"
        android:id="@+id/checkbox"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:button="@null"
        android:text="@string/iconfont_danxuanxuanzhong24"
        android:layout_below="@+id/line"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_toRightOf="@+id/icon_edit"
        android:layout_below="@+id/line"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_222222"
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_toRightOf="@+id/text_name"
        android:layout_below="@+id/line"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_888888"
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/icon_edit"
        android:layout_below="@+id/text_name"/>
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_below="@+id/text_address"/>
</RelativeLayout>
