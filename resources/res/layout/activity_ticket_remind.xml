<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#99000000"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:id="@+id/cl_ticket_remind_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <FrameLayout
            android:id="@+id/fl_electronic_view"
            android:paddingBottom="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.taobao.movie.android.app.order.ui.widget.ElectronicVisitorView
                android:id="@+id/tv_electronic_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="42dp"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/v_ticket_remind_birthday"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ticket_remind_happy_birthday"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_electronic_view"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/home_ticket_remind_footer_bg"
            android:paddingTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/member_level_bg">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:id="@+id/tv_home_remind_ticket_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="电影票"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/color_tpp_primary_black"
                    android:id="@+id/tv_home_remind_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_home_remind_ticket_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_home_remind_ticket_label"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:id="@+id/tv_home_remind_egg_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="彩蛋"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/color_tpp_primary_black"
                    android:id="@+id/tv_home_remind_egg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_home_remind_egg_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_home_remind_egg_label"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:id="@+id/tv_home_remind_sale_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:text="小食"
                    android:includeFontPadding="false"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/color_tpp_primary_black"
                    android:id="@+id/tv_home_remind_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:includeFontPadding="false"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_home_remind_sale_label"
                    app:layout_constraintTop_toBottomOf="@+id/tv_home_remind_sale_label"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ticket_remind_qr_code_container"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ticket_remind_qr_code_indicator"
                    android:background="@drawable/comment_stroke_radius15_c8_bg"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/ticket_remind_qr_code_indicator_ticket"
                        android:background="@drawable/comment_solid_radius15_999_bg"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="取票入场"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_tpp_primary_assist"
                        android:gravity="center"
                        android:id="@+id/ticket_remind_qr_code_indicator_gbcode"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="扫码入场"/>
                </LinearLayout>
                <com.taobao.movie.android.app.product.ui.widget.TicketRemindCodeView
                    android:id="@+id/ticket_code"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticket_remind_qr_code_indicator"
                    app:layout_goneMarginTop="0dp"/>
                <com.taobao.movie.android.app.product.ui.widget.TicketGBCodeBlockInPoPView
                    android:id="@+id/ticket_remind_qr_code_gb_block"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticket_remind_qr_code_indicator"
                    app:layout_goneMarginTop="0dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/v_home_remind_no_code_deliver"
                android:background="#cccccc"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="24dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/saleGoodsTip"
                android:background="@drawable/activity_ticket_remind_sale_bg"
                android:paddingLeft="15dp"
                android:paddingTop="11dp"
                android:paddingRight="15dp"
                android:paddingBottom="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_recommend_sale"
                android:background="@drawable/bg_ticket_remind_recommend_sale"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">
                <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                    android:id="@+id/sdv_sale_item_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeholderImage="@drawable/sale_item_default"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundedCornerRadius="3dp"
                    app:roundingBorderColor="#1a000000"
                    app:roundingBorderWidth="0.5dp"/>
                <TextView
                    android:textSize="8dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_sale_tag"
                    android:background="@drawable/bg_ticket_remind_recommend_sale_tag"
                    android:visibility="visible"
                    android:layout_width="40dp"
                    android:layout_height="11dp"
                    android:text="新品"
                    android:includeFontPadding="false"
                    app:layout_constraintBottom_toBottomOf="@+id/sdv_sale_item_image"
                    app:layout_constraintLeft_toLeftOf="@+id/sdv_sale_item_image"
                    app:layout_constraintLeft_toRightOf="@+id/sdv_sale_item_image"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/tv_sale_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginRight="6dp"
                    android:singleLine="true"
                    app:layout_constraintBottom_toTopOf="@+id/tv_sale_hint"
                    app:layout_constraintLeft_toRightOf="@+id/sdv_sale_item_image"
                    app:layout_constraintRight_toLeftOf="@+id/tv_sale_price"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_sale_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginBottom="12.5dp"
                    android:alpha="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/sdv_sale_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sale_name"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/seperate_line"
                android:background="@color/common_text_color14"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/tpp_secondary_blue"
                    android:gravity="center"
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:text="@string/ticket_remind_left_text"
                    android:layout_weight="1"/>
                <View
                    android:background="@color/common_text_color14"
                    android:layout_width="1px"
                    android:layout_height="17dp"/>
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_secondary_blue"
                    android:gravity="center"
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:text="@string/ticket_remind_right_text"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/member_level_bg"
            android:background="@drawable/home_ticket_remind_head"
            android:paddingBottom="18dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_ticket_remind_birthday"
            app:layout_goneMarginTop="0dp">
            <FrameLayout
                android:id="@+id/v_ticket_remind_birthday_ballon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/img_ticket_remind_ballon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-25dp"
                    android:layout_marginRight="-10dp"/>
            </FrameLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/member_level_img"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/film_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="26dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="开映"
                android:includeFontPadding="false"
                app:layout_constraintBottom_toBottomOf="@+id/film_play_time"
                app:layout_constraintLeft_toRightOf="@+id/film_play_time"
                app:layout_constraintTop_toTopOf="@+id/film_play_time"/>
            <TextView
                android:textSize="17dp"
                android:textColor="@color/white"
                android:id="@+id/film_name"
                android:paddingRight="24dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/film_play_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/film_play_time"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/cinema_name"
                android:paddingRight="24dp"
                android:paddingBottom="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toLeftOf="@+id/film_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/film_name"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_home_remind_machine_tip"
                android:background="@drawable/home_ticket_remind_bg"
                android:paddingLeft="24dp"
                android:paddingRight="5dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginTop="3dp"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toLeftOf="@+id/cinema_name"
                app:layout_constraintTop_toBottomOf="@+id/cinema_name"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:id="@+id/ift_home_remind_machine_tip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_remind_machine_tip"
                app:layout_constraintLeft_toLeftOf="@+id/tv_home_remind_machine_tip"
                app:layout_constraintTop_toTopOf="@+id/tv_home_remind_machine_tip"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_home_remind_ticket_tip"
                android:background="@drawable/home_ticket_remind_bg"
                android:paddingLeft="24dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toRightOf="@+id/tv_home_remind_machine_tip"
                app:layout_constraintTop_toBottomOf="@+id/cinema_name"
                app:layout_goneMarginLeft="0dp"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:id="@+id/ift_home_remind_ticket_tip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_home_remind_ticket_tip"
                app:layout_constraintLeft_toLeftOf="@+id/tv_home_remind_ticket_tip"
                app:layout_constraintTop_toTopOf="@+id/tv_home_remind_ticket_tip"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
