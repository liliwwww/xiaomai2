<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/mine_address_invalid_prompt_rv"
        android:background="#fff9d9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#f58f18"
            android:id="@+id/mine_address_invalid_close_prompt_tv"
            android:paddingLeft="@dimen/margin_18dp"
            android:paddingTop="@dimen/margin_9dp"
            android:paddingRight="@dimen/margin_18dp"
            android:paddingBottom="@dimen/margin_9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_guanbi16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#f58f18"
            android:ellipsize="end"
            android:id="@+id/mine_address_invalid_prompt_content_tv"
            android:paddingTop="@dimen/margin_9dp"
            android:paddingBottom="@dimen/margin_9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:lines="1"
            android:layout_toLeftOf="@+id/mine_address_invalid_close_prompt_tv"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</LinearLayout>
