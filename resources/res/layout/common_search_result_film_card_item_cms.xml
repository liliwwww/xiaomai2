<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/search_result_film_card_normal_header"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp">
        <com.taobao.movie.android.commonui.widget.FilmImagePlayNew
            android:id="@+id/search_result_film_card_poster"
            android:layout_width="88dp"
            android:layout_height="123dp"
            android:layout_marginRight="11dp"/>
        <com.taobao.movie.android.commonui.widget.MoCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mocard_background_radius="6dp"
            app:mocard_model="clip">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_invalid"
                android:gravity="center"
                android:id="@+id/search_result_film_card_no_banner"
                android:background="@color/color_tpp_primary_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="暂无图片"/>
            <com.taobao.movie.android.commonui.widget.banner.BannerView
                android:id="@+id/search_result_film_card_banner"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.taobao.movie.android.commonui.widget.MoCardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.taobao.movie.android.commonui.widget.TitleMarkView
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/search_result_film_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="2dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp">
                <TextView
                    android:id="@+id/openday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    style="@style/Item_SubTitle2"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/search_result_film_card_score_favor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_tpp_primary_subtitle"
                        android:gravity="center_vertical"
                        android:id="@+id/search_result_film_card_score_favor_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remark_title"
                        android:singleLine="true"
                        android:includeFontPadding="false"/>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_tpp_primary_yellow"
                        android:id="@+id/search_result_film_card_score_favor_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_tpp_primary_subtitle"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/score_favor_right_hint"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remark_title_lite"
                        android:paddingStart="3dp"
                        style="@style/FilmWantTitle"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:ellipsize="end"
                android:id="@+id/search_result_film_card_other_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <Button
            android:id="@+id/search_result_film_card_buy_btn"
            android:padding="0dp"
            android:layout_marginLeft="12dp"
            android:text="购票"
            style="@style/buy_button_style_small_7_3"/>
        <FrameLayout
            android:id="@+id/search_result_favorite_fl"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <TextView
                android:textSize="10dp"
                android:textColor="#ff3d5c"
                android:layout_gravity="end"
                android:id="@+id/favorite_with_gift"
                android:background="@drawable/want_see_with_gift_pop"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:text="想看有礼"/>
            <com.taobao.movie.android.app.oscar.ui.film.widget.WantButton
                android:layout_gravity="end|bottom"
                android:id="@+id/search_result_favorite"
                android:padding="0dp"
                android:text="想看"
                style="@style/want_button_style_small"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/search_result_favorite_fl_pioneer"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="40.5dp"
            android:layout_marginTop="7dp">
            <TextView
                android:textSize="9dp"
                android:textColor="#ff7600"
                android:ellipsize="none"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/favorite_with_gift_pioneer"
                android:background="@drawable/nowshowing_dicount_button_bg_pioneer"
                android:paddingTop="13.5dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_marginTop="13.5dp"
                android:text="想看有礼"
                android:singleLine="true"/>
            <com.taobao.movie.android.app.oscar.ui.film.widget.WantButton
                android:layout_gravity="end|top"
                android:id="@+id/search_result_favorite_pioneer"
                android:padding="0dp"
                android:text="想看"
                android:elevation="0dp"
                style="@style/want_button_style_small"/>
        </FrameLayout>
    </LinearLayout>
    <com.taobao.movie.android.commonui.widget.MoLinearCardView
        android:gravity="center_vertical"
        android:id="@+id/search_result_film_card_notice"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"
        app:mocard_background_color="@color/color_tpp_primary_bg"
        app:mocard_background_radius="3dp">
        <View
            android:layout_width="11dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_yellow"
            android:id="@+id/search_result_film_card_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="6"
            android:singleLine="true"/>
        <View
            android:id="@+id/search_result_film_card_notice_divider"
            android:background="@color/color_tpp_primary_assist"
            android:layout_width="1px"
            android:layout_height="9dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:alpha="0.3"/>
        <TextView
            android:textSize="12dp"
            android:ellipsize="end"
            android:id="@+id/search_result_film_card_notice_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:singleLine="true"
            android:layout_weight="1"/>
    </com.taobao.movie.android.commonui.widget.MoLinearCardView>
</LinearLayout>
