<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/film_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/film_image"
        android:background="@color/common_text_color14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="0"
        fresco:failureImage="@drawable/oscar_default_image"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/oscar_default_image"
        fresco:placeholderImageScaleType="centerInside"
        fresco:retryImage="@drawable/oscar_default_image"
        fresco:retryImageScaleType="centerInside"
        style="@style/small_round_style"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/icon_play"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/play_icon"/>
    <View
        android:id="@+id/radius_fg"
        android:background="@drawable/image_tag_view_radius_fg_big"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</merge>
