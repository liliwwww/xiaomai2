<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.baseview.RCRelativeLayoutView
        android:id="@+id/image_layout_juebuchongfu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:clip_background="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round_corner="6dp"
        app:stroke_color="#26000000"
        app:stroke_width="0.5dp">
        <ImageView
            android:id="@+id/image_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </cn.damai.baseview.RCRelativeLayoutView>
    <cn.damai.uikit.number.DMDigitTextView
        android:textSize="12dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/tv_fuhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        app:layout_constraintBottom_toBottomOf="@+id/product_price"
        app:layout_constraintLeft_toLeftOf="@+id/product_name"/>
    <cn.damai.uikit.number.DMDigitTextView
        android:textSize="16dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="130"
        app:layout_constraintLeft_toRightOf="@+id/tv_fuhao"
        app:layout_constraintTop_toBottomOf="@+id/product_name"/>
    <TextView
        android:textSize="14dp"
        android:textColor="#ff000000"
        android:ellipsize="end"
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="【乐华娱乐TURNON】红…"
        android:lines="2"
        app:layout_constraintLeft_toLeftOf="@+id/image_layout_juebuchongfu"
        app:layout_constraintRight_toRightOf="@+id/image_layout_juebuchongfu"
        app:layout_constraintTop_toBottomOf="@+id/image_layout_juebuchongfu"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#ffff2869"
        android:id="@+id/product_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="VIP会员享8折"
        app:layout_constraintLeft_toLeftOf="@+id/tv_fuhao"
        app:layout_constraintTop_toBottomOf="@+id/product_price"/>
</androidx.constraintlayout.widget.ConstraintLayout>
