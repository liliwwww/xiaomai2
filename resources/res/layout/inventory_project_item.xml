<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fl_root"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingTop="@dimen/margin_13dp"
    android:paddingRight="@dimen/margin_15dp"
    android:paddingBottom="@dimen/margin_14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@drawable/project_image_common_bg"
            android:padding="0.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/image_project"
                android:layout_width="111dp"
                android:layout_height="148dp"
                android:src="@drawable/uikit_default_image_bg_gradient"
                android:scaleType="fitXY"
                app:borderRadius="6dp"
                app:type="radial"/>
            <ImageView
                android:id="@+id/bg_project_image"
                android:background="@drawable/bg_border_corner_1a0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <cn.damai.uikit.tag.DMCategroyTagView
                android:layout_gravity="right"
                android:id="@+id/tv_type_mark"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/icon_video"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search_play"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingExtra="2dp"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_see"
                android:background="@drawable/common_tag_yellow_moon_bg"
                android:paddingLeft="3dp"
                android:paddingRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="6dp"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="18dp"
                    android:textColor="@color/color_ff2d79"
                    android:gravity="bottom"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-2dp"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/color_666666"
                    android:gravity="bottom"
                    android:id="@+id/tv_price_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="@dimen/margin_2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="bottom|right"
        android:id="@+id/btn_buy"
        android:background="@drawable/common_btn_bg"
        android:visibility="visible"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:singleLine="true"/>
</FrameLayout>
