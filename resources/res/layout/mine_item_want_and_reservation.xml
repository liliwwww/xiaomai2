<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/ll_mine_want_and_reservation"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginStart="@dimen/margin_12dp"
    android:layout_marginEnd="@dimen/margin_12dp">
    <com.google.android.flexbox.FlexboxLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/ll_mine_want"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="@dimen/resource_size_12"
        android:layout_marginEnd="@dimen/margin_3dp"
        app:alignItems="center"
        app:justifyContent="center">
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="@dimen/resource_size_21"
            android:textColor="@color/bricks_2e333e"
            android:id="@+id/tv_mine_want_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/margin_5dp"
            app:layout_flexShrink="0"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_13"
            android:textStyle="bold"
            android:textColor="@color/bricks_2e333e"
            android:id="@+id/tv_mine_want"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想看"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/margin_5dp"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/bricks_959AA5"
            android:ellipsize="end"
            android:gravity="right"
            android:id="@+id/tv_mine_want_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_flexGrow="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/bricks_5f6672"
            android:id="@+id/tv_mine_want_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_thin_right_arrow"
            app:layout_flexShrink="0"/>
    </com.google.android.flexbox.FlexboxLayout>
    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/divide_line_normal"
        android:background="#ced1d6"
        android:layout_width="1px"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/resource_size_16"
        android:layout_marginEnd="@dimen/resource_size_16"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/ll_mine_reservation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingEnd="@dimen/resource_size_12"
        android:layout_marginStart="@dimen/margin_3dp"
        app:alignItems="center"
        app:justifyContent="center">
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="@dimen/resource_size_21"
            android:textColor="@color/color_171717"
            android:id="@+id/tv_mine_reservation_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/margin_5dp"
            app:layout_flexShrink="0"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_13"
            android:textStyle="bold"
            android:textColor="@color/color_171717"
            android:id="@+id/tv_mine_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢票预约"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/margin_5dp"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0"/>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/bricks_959AA5"
            android:ellipsize="end"
            android:gravity="right"
            android:id="@+id/tv_mine_reservation_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_flexGrow="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/bricks_5f6672"
            android:id="@+id/tv_mine_reservation_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_thin_right_arrow"
            app:layout_flexShrink="0"/>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
