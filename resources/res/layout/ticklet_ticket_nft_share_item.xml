<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_unity_container"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_marginStart="51dp"
    android:layout_marginEnd="51dp">
    <cn.damai.uikit.view.HoleCardView
        android:id="@+id/hv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_13dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:holeBackgroundColor="@android:color/transparent"
        app:holeCornerRadius="14dp"
        app:holeScallopRadius="6dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_layout"
            android:background="@drawable/ticket_nft_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_cover"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:src="@drawable/uikit_default_image_bg_gradient"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/v_line"
                android:background="@drawable/ticket_nft_line"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_cover"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_title"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginStart="@dimen/margin_14dp"
                android:layout_marginEnd="@dimen/margin_14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_cover"
                app:layout_constraintVertical_bias="0.29"/>
            <ImageView
                android:id="@+id/iv_bottom_icon"
                android:visibility="visible"
                android:layout_width="32dp"
                android:layout_height="19dp"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:src="@drawable/ticket_nft_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </cn.damai.uikit.view.HoleCardView>
    <ImageView
        android:id="@+id/iv_nft_back_rim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ticket_nft_back_rim"
        android:scaleType="fitXY"/>
</RelativeLayout>
