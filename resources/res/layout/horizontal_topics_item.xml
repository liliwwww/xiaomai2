<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_tpp_primary_bg"
    android:paddingBottom="20dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/common_color_1008"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="@dimen/text_size_11_dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_right_arrow"
            android:layout_alignBaseline="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/text_size_13_dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="@string/oscar_article_film_express_more"
            android:layout_toLeftOf="@+id/more"
            android:layout_alignBaseline="@+id/title"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
