<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/top_score_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/top_score_layout_left"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/layout_score_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="114dp"
                        android:layout_height="36dp"
                        android:src="@drawable/project_score_logo_3x"/>
                    <cn.damai.uikit.iconfont.DMIconFontTextView
                        android:textSize="14dp"
                        android:textColor="#739c9ca5"
                        android:id="@+id/tv_score_icon_tip"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/iconfont_tixingxian_"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="36dp"
                        android:textColor="#ff8f3f"
                        android:id="@+id/tv_score"
                        android:paddingTop="@dimen/margin_8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#ff8f3f"
                        android:id="@+id/tv_socre_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="@dimen/margin_6dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2dp">
                    <cn.damai.uikit.view.DMRatingBar
                        android:id="@+id/scoreStar_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="6dp"
                        app:isIndicator="true"
                        app:showText="false"
                        app:starCount="5"
                        app:starDistance="@dimen/margin_1dp"
                        app:starEmpty="@drawable/rating_empty"
                        app:starFill="@drawable/rating_fill"
                        app:starSize="8dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_9C9CA5"
                        android:id="@+id/tv_rating_num_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <com.alibaba.pictures.picturesbiz.page.comment.view.TopScoreDivideView
                android:layout_gravity="center_vertical"
                android:id="@+id/top_score_layout_div"
                android:visibility="visible"
                android:layout_width="1dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:layout_marginStart="7.5dp"
                app:divide_color="#cccccc"/>
            <com.alibaba.pictures.picturesbiz.page.comment.view.DMEvaluateGradeBlockView
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@+id/evaluate_grade_block"
                android:paddingLeft="0dp"
                android:paddingTop="12dp"
                android:paddingRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"/>
        </LinearLayout>
        <View
            android:id="@+id/top_score_layoutdiv"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <cn.damai.uikit.flowlayout.FlowLayout
            android:id="@+id/evaluate_label_list"
            android:paddingBottom="@dimen/resource_size_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/resource_size_9"/>
    </LinearLayout>
</merge>
