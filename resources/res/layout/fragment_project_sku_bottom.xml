<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_bottom_line1"
        android:background="@drawable/sku_shadow_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_FF2D79"
        android:gravity="center"
        android:id="@+id/tv_weizhifu_tip"
        android:background="@color/color_ffeaf1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/layout_bottom_num"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择数量"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_999999"
                android:id="@+id/tv_select_perform_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <FrameLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:id="@+id/layout_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/buynow_sub"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/project_buynow_price_sub_selected"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/color_666666"
                    android:gravity="center"
                    android:id="@+id/buynow_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="1"/>
                <ImageView
                    android:id="@+id/buynow_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/project_buynow_plus_selected"/>
            </LinearLayout>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_999999"
                android:layout_gravity="right"
                android:id="@+id/tv_maxnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="每笔订单限购--张"
                android:singleLine="true"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line2"
        android:background="@color/color_eeeeee"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <FrameLayout
        android:id="@+id/layout_two_row"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/layout_amount"
                android:paddingLeft="15dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="13dp"
                        android:textColor="@color/color_FF2D79"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:text="¥"/>
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="20dp"
                        android:textColor="@color/color_FF2D79"
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/color_999999"
                        android:id="@+id/tv_original_price"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="¥0"/>
                </LinearLayout>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/color_999999"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_price_tip"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:text="优惠以订单确认页为准"/>
            </LinearLayout>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_999999"
                android:gravity="center_vertical"
                android:id="@+id/tv_select_tip"
                android:paddingLeft="15dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="请选择日期"
                android:layout_weight="1.5"/>
            <cn.damai.uikit.view.DMLabelView
                android:id="@+id/btn_buy"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1.3"/>
        </LinearLayout>
        <View
            android:id="@+id/view_translucent"
            android:background="#66ffffff"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </FrameLayout>
</LinearLayout>
