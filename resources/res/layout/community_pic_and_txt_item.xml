<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.app.oscar.ui.community.view.CommunityDiscussionItemHeadView
        android:id="@+id/community_item_head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:id="@+id/community_txt_layout"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/community_item_head_view">
        <com.taobao.movie.android.app.oscar.ui.community.view.CommunityExpandTextView
            android:textSize="16dp"
            android:textColor="@color/color_tpp_primary_title"
            android:ellipsize="end"
            android:id="@+id/community_txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/tpp_secondary_blue"
            android:id="@+id/community_txt_all_txt"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全文"
            android:includeFontPadding="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <com.taobao.movie.android.app.oscar.ui.community.view.NinePictureView
        android:id="@+id/community_nine_pic_view"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/community_txt_layout"/>
    <com.taobao.movie.android.app.oscar.ui.community.view.CommunityDiscussItemBottomView
        android:id="@+id/community_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/community_nine_pic_view"/>
</RelativeLayout>
