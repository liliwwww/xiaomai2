<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="@color/color_000000"
        android:id="@+id/tv_tip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="给你推荐一些有趣的人"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/live_people_item_bg"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.damai.discover.content.view.UserInfoView
                android:id="@+id/userinfo_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="54dp"
                app:avatarRightMargin="12dp"
                app:userAvatarSize="size_40x40"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_follow"
                android:background="@drawable/live_star_button_addfollow"
                android:layout_width="54dp"
                android:layout_height="25dp"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:maxLines="3"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">
                <FrameLayout
                    android:id="@+id/imagelayout_1"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1">
                    <cn.damai.uikit.view.RoundImageView
                        android:id="@+id/image_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/live_common_image_default"
                        app:borderRadius="6dp"
                        app:type="radial"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/video1"
                        android:visibility="gone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/live_feed_video_icon"/>
                </FrameLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/imagelayout_2"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1">
                    <cn.damai.uikit.view.RoundImageView
                        android:id="@+id/image_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/live_common_image_default"
                        app:borderRadius="6dp"
                        app:type="radial"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/video2"
                        android:visibility="gone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/live_feed_video_icon"/>
                </FrameLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="1dp"/>
                <FrameLayout
                    android:id="@+id/imagelayout_3"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1">
                    <cn.damai.uikit.view.RoundImageView
                        android:id="@+id/image_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/live_common_image_default"
                        app:borderRadius="6dp"
                        app:type="radial"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/video3"
                        android:visibility="gone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/live_feed_video_icon"/>
                </FrameLayout>
            </LinearLayout>
            <cn.damai.discover.content.view.LiveTopicView
                android:id="@+id/live_topic_view"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="9dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
