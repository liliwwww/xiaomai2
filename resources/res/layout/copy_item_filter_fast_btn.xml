<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/copy_bg_filter_fast_btn_selector_white"
    android:layout_width="wrap_content"
    android:layout_height="28dp"
    android:layout_marginBottom="16dp">
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:layout_gravity="end"
        android:id="@+id/fast_filter_tv_lottie"
        android:layout_width="@dimen/resource_size_25"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-3dp"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/pioneer_home_feed_tab"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_FF2869"
        android:layout_gravity="center"
        android:id="@+id/fast_filter_tv"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>
