<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_item_dialog_permission_child_entrance"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="68dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <TextView
            android:textSize="14dp"
            android:textColor="#2e333e"
            android:id="@+id/child_ipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#959aa5"
            android:ellipsize="end"
            android:id="@+id/child_ipe_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lines="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <cn.damai.uikit.switchbutton.SwitchButton
            android:id="@+id/child_permission_switch"
            android:layout_width="43dp"
            android:layout_height="26dp"
            android:checked="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:kswBackColor="@drawable/bg_setting_recommend_switch_btn"
            app:kswThumbColor="@color/color_ffffff"
            app:kswThumbHeight="25dp"
            app:kswThumbWidth="25dp"/>
    </LinearLayout>
</LinearLayout>
