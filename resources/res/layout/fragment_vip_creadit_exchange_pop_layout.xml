<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/blank_black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content"
        android:background="@drawable/credit_exchange_pop_bg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75">
        <include layout="@layout/title_pop_layer"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/view_bottom_up"
            android:background="#fff5f5f5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <cn.damai.commonbusiness.view.PrivilegedAudienceReminderView
            android:gravity="bottom"
            android:id="@+id/audience_reminder"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/view_bottom_down"
            android:background="#fff5f5f5"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:id="@+id/rl_vip_exchange"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_senior_vip_integral"
                android:paddingTop="6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="19dp"
                    android:textColor="#210276"
                    android:id="@+id/tv_senior_vip_integral_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="#210276"
                    android:id="@+id/tv_senior_vip_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="积分"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_senior_vip_integral_number"
                    app:layout_constraintStart_toEndOf="@+id/tv_senior_vip_integral_number"
                    app:layout_constraintTop_toTopOf="@+id/tv_senior_vip_integral_number"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="#959aa5"
                    android:id="@+id/tv_senior_vip_integral_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_senior_vip_integral"
                    app:layout_constraintStart_toEndOf="@+id/tv_senior_vip_integral"
                    app:layout_constraintTop_toTopOf="@+id/tv_senior_vip_integral"/>
                <include
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_senior_vip_integral_number"
                    layout="@layout/senior_vip_tag"/>
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#210276"
                    android:gravity="center"
                    android:id="@+id/senior_tv_stock_top"
                    android:background="@drawable/senior_vip_residual_num"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="@dimen/margin_3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_senior_vip_integral"
                    app:layout_constraintStart_toEndOf="@+id/tv_senior_vip_integral_base"
                    app:layout_constraintTop_toTopOf="@+id/tv_senior_vip_integral"/>
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#210276"
                    android:gravity="center"
                    android:id="@+id/senior_tv_stock"
                    android:background="@drawable/senior_vip_residual_num"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tag"
                    app:layout_constraintStart_toEndOf="@+id/tag"
                    app:layout_constraintTop_toTopOf="@+id/tag"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/ll_senior_vip_integral">
                <TextView
                    android:textSize="19dp"
                    android:textColor="#ea9a7e"
                    android:id="@+id/tv_integral_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="#ea9a7e"
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="积分"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="#ea9a7e"
                    android:id="@+id/tv_stock"
                    android:background="@drawable/vip_credit_exchange_stock_bg"
                    android:paddingLeft="4dp"
                    android:paddingTop="2.5dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="#959aa5"
                android:id="@+id/tv_use_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_below="@+id/ll_integral"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_exchange"
                android:background="@drawable/vip_credit_exchange_bottom_bg"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#582331"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/btn_exchange"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即兑换"
                    android:maxLines="2"
                    app:layout_constraintBottom_toTopOf="@+id/btn_exchange_ext"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#582331"
                    android:id="@+id/btn_exchange_ext"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_exchange"
                    app:layout_constraintVertical_chainStyle="packed"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_exchange_with_reminder"
                android:background="@drawable/vip_credit_exchange_bottom_bg"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="193dp"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="13dp"
                    android:textColor="#582331"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/btn_exchange_with_reminder"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即兑换"
                    android:maxLines="2"
                    app:layout_constraintBottom_toTopOf="@+id/btn_exchange_ext_with_reminder"
                    app:layout_constraintEnd_toStartOf="@+id/ll_exchange_reminder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="#582331"
                    android:id="@+id/btn_exchange_ext_with_reminder"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ll_exchange_reminder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_exchange_with_reminder"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ll_exchange_reminder"
                    android:background="@drawable/vip_credit_exchange_reminder_bg"
                    android:layout_width="84dp"
                    android:layout_height="45dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <cn.damai.uikit.iconfont.DMIconFontTextView
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/iv_exchange_reminder_icon"
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="1dp"
                        android:text="@string/iconfont_tixing12"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:id="@+id/btn_exchange_reminder_submit"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/btn_exchange_reminder_cancel_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
