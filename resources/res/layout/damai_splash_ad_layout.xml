<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_layout"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>
    <cn.damai.launcher.splash.SplashRoundProgressBar
        android:id="@+id/homepage_advert_pb"
        android:clickable="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android_custom:roundColor="#e51b46"
        android_custom:roundProgressColor="#e51b46"
        android_custom:roundWidthProgressBar="2dp"
        android_custom:textColor="@android:color/white"
        android_custom:textSize="10dp"/>
    <FrameLayout
        android:id="@+id/iv_splash_ad_logo_layout"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_splash_ad_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:src="@drawable/launcher_splash_logo"/>
    </FrameLayout>
    <cn.damai.uikit.view.ArcCorverView
        android:id="@+id/iv_splash_arc"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_above="@+id/iv_splash_ad_logo_layout"
        android:layout_alignParentRight="true"
        android_custom:arcGravity="rightBottom"
        android_custom:coverColor="#ffffff"/>
    <TextView
        android:textSize="11dp"
        android:textColor="#ffffff"
        android:id="@+id/tv_splash_ads_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="广告"
        android:shadowColor="#73000000"
        android:shadowDx="1.5"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/splash_ads_click_zone"
        android:background="@drawable/shape_splash_click_zone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/iv_splash_ad_logo_layout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/tv_splash_ads_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/splash_ads_click_zone_desc"
                android:maxLines="1"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou24"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
