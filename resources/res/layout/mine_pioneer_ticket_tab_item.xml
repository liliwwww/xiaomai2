<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/resource_size_8"
    android:paddingBottom="@dimen/resource_size_5"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/resource_size_2"
    android:paddingEnd="@dimen/resource_size_2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/mine_ticket_tab_indicator"
            android:background="@drawable/pioneer_mine_ticket_tab_layout_indicator"
            android:layout_width="36dp"
            android:layout_height="7dp"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/mine_ticket_tab_title_layout"
            android:layout_centerHorizontal="true"/>
        <FrameLayout
            android:id="@+id/mine_ticket_tab_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="@dimen/resource_size_14"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:id="@+id/mine_ticket_tab_title_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/resource_size_6"
                android:paddingEnd="@dimen/resource_size_6"/>
            <TextView
                android:textSize="@dimen/resource_size_14"
                android:textColor="#66666666"
                android:layout_gravity="center"
                android:id="@+id/mine_ticket_tab_title_normal"
                android:paddingTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/resource_size_6"
                android:paddingEnd="@dimen/resource_size_6"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>
