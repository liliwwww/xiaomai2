<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_12dp"
        android:src="@drawable/mine_want_newcomer_guide"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/white"
        android:id="@+id/tv_i_know"
        android:paddingTop="@dimen/margin_7dp"
        android:paddingBottom="@dimen/margin_7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:text="我知道了"
        android:layout_below="@+id/iv_guide"
        android:layout_alignParentRight="true"
        android:paddingStart="@dimen/margin_12dp"
        android:paddingEnd="@dimen/margin_12dp"/>
</RelativeLayout>
