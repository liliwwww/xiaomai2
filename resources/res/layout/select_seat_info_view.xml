<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/tpp_secondary_blue"
            android:id="@+id/switch_schedule"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:text="切换场次"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/common_text_color45"
            android:ellipsize="end"
            android:id="@+id/cinema_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/switch_schedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/common_color_1008"
            android:ellipsize="end"
            android:id="@+id/play_date_time_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switch_schedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cinema_name"
            app:layout_goneMarginBottom="11dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.taobao.movie.android.app.oscar.ui.cinema.widget.FastSelectScheduleView
        android:id="@+id/oscar_cinemalist_cinema_schedules"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15"
        android:overScrollMode="never"/>
    <View
        android:id="@+id/select_seat_info_deliver"
        android:background="@color/color_tpp_primary_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="3dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/recommend_container_view"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="13dp">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:text="@string/recommend_seat"/>
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/recommend_container"
                android:clipToPadding="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/price_container_view"
        android:visibility="visible"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/price_container"
            android:paddingLeft="12dp"
            android:paddingRight="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
</LinearLayout>
