<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/update_rootDialog"
    android:background="@color/transparent"
    android:layout_width="280dp"
    android:layout_height="420dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:background="@color/G_black_light_5"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="0dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp">
            <TextView
                android:textSize="16dp"
                android:textColor="#333333"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/text_title"
                android:layout_width="220dp"
                android:layout_height="46dp"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="12dp"
                android:text="手机淘宝新版本更新啦，诚邀你抢先体验！"/>
            <TextView
                android:textSize="13dp"
                android:textColor="#666666"
                android:id="@+id/text_content"
                android:layout_width="220dp"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp"
                android:text="text content"
                android:layout_weight="1"
                android:layout_below="@+id/text_title"
                android:lineSpacingExtra="2dp"/>
            <Button
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:id="@+id/image_button"
                android:background="@drawable/button"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/button"
                android:text="立即参与"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/title_image"
        android:background="@color/transparent"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/update_logo"/>
    <ImageView
        android:layout_gravity="end"
        android:id="@+id/close_btn"
        android:layout_width="16dp"
        android:layout_height="11dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/cancel"
        android:elevation="0dp"/>
</FrameLayout>
