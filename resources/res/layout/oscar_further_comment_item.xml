<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/item_click_effect"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:id="@+id/article_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/article_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/media_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:actualImageScaleType="centerCrop"
            app:fadeDuration="0"
            app:placeholderImage="@drawable/header_icon"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/common_divider_color"
            app:roundingBorderWidth="1px"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/media_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <com.taobao.movie.android.commonui.widget.FavorLottieAnimationView
            android:id="@+id/article_add_favor"
            android:visibility="visible"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:lottie_autoPlay="false"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="center_vertical"
            android:id="@+id/article_favor_count"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="-1dp"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="center"
            android:id="@+id/article_add_comment"
            android:paddingLeft="5dp"
            android:paddingRight="2.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_do_reply"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="center_vertical"
            android:id="@+id/article_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
</LinearLayout>
