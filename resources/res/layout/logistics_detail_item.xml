<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/v_line"
        android:background="@color/color_EEEEEE"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_18dp">
            <RelativeLayout
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/margin_1dp">
                <View
                    android:id="@+id/v_big_cicrle"
                    android:background="@drawable/shape_cicrle_ff1268"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"/>
                <View
                    android:id="@+id/v_small_cicrle"
                    android:background="@drawable/shape_cicrle_white"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_111111"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_trackInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:text="配送成功，您的订单已经签收。"/>
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_111111"
            android:id="@+id/tv_track_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47.5dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:text="2017.12.08  10:06:32"/>
    </LinearLayout>
</RelativeLayout>
