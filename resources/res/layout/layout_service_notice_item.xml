<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="21dp"
    android:paddingTop="@dimen/margin_18dp"
    android:paddingRight="21dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textStyle="normal"
        android:textColor="@color/color_000000"
        android:id="@+id/project_service_item_tag_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_666666"
        android:id="@+id/project_service_item_tag_desc_tv"
        android:paddingTop="@dimen/margin_3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_service_tag_lv"
        android:lineSpacingExtra="4dp"/>
    <include layout="@layout/layout_service_notice_item_action"/>
    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/project_service_item_tag_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18dp">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/project_service_item_tag_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/uikit_default_image_bg_grey"
            app:borderRadius="6dp"
            app:type="radial"/>
        <ImageView
            android:background="@drawable/bg_border_corner_dadfe4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_18dp"/>
</LinearLayout>
