<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#f6f7f8"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <RelativeLayout
        android:background="?attr/bgDetailMidGrabBg"
        android:paddingTop="12dp"
        android:paddingRight="21dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/goto_setinfo_desc"
            android:paddingLeft="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goto_setinfo_imgtitle"
                android:layout_width="73dp"
                android:layout_height="16dp"
                android:src="@drawable/project_mid_grab_title"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="?attr/colorFF2869to171717"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/goto_setinfo_tv1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="请重新设置本次抢票观演人"
                android:lines="1"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_999999"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/goto_setinfo_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="开抢前第一时间提醒你~"
                android:lines="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/goto_setinfo_btn"
            android:background="?attr/bgDetailMidGrabBtn"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:layout_width="60dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="12dp"
                android:textColor="?attr/bgDetailColorWhite171717"
                android:id="@+id/goto_setinfo_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
