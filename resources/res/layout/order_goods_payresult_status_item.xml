<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_tpp_primary_white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="21dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="30dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:layout_gravity="center"
            android:id="@+id/pay_done_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="@string/iconf_round_check_fill"/>
        <TextView
            android:textSize="25dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pay_status_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ordering_result_success_drawn_title"/>
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/goods_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/refound_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:includeFontPadding="false"
        android:alpha="0.7"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/drawn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp">
        <com.taobao.movie.android.commonui.widget.MoCardTextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="center"
            android:id="@+id/back_btn"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:text="返回"
            app:mocard_background_radius="40dp"
            app:mocard_stroke_color="@color/color_tpp_primary_assist"
            app:mocard_stroke_width="1px"/>
        <com.taobao.movie.android.commonui.widget.MoCardTextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_white"
            android:gravity="center"
            android:id="@+id/detail_enter_pay_done"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="@string/check_order_status"
            app:mocard_background_radius="40dp"
            app:mocard_linear_gradient_end="@color/tpp_gradient_red_end"
            app:mocard_linear_gradient_start="@color/tpp_gradient_red_start"/>
    </LinearLayout>
</LinearLayout>
