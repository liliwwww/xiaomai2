<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:gravity="center"
        android:id="@+id/fr_countdown_day_time"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.PuHuiTiNumTextView
            android:textSize="@dimen/resource_size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_countdown_day_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/resource_size_10"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_countdown_day_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_3"
        android:layout_marginRight="@dimen/resource_size_3"
        android:text="天"
        android:maxLines="1"/>
    <FrameLayout
        android:gravity="center"
        android:id="@+id/fr_countdown_hour_time"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.PuHuiTiNumTextView
            android:textSize="@dimen/resource_size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_countdown_hour_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/resource_size_10"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_countdown_hour_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_3"
        android:layout_marginRight="@dimen/resource_size_3"
        android:text="时"
        android:maxLines="1"/>
    <FrameLayout
        android:gravity="center"
        android:id="@+id/fr_countdown_minute_time"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.PuHuiTiNumTextView
            android:textSize="@dimen/resource_size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_countdown_minute_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/resource_size_10"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_countdown_minute_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_3"
        android:layout_marginRight="@dimen/resource_size_3"
        android:text="分"
        android:maxLines="1"/>
    <FrameLayout
        android:gravity="center"
        android:id="@+id/fr_countdown_second_time"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.PuHuiTiNumTextView
            android:textSize="@dimen/resource_size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_countdown_second_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/resource_size_10"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_countdown_second_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_3"
        android:text="秒"
        android:maxLines="1"/>
    <TextView
        android:textSize="@dimen/resource_size_10"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_countdown_suffix_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
</merge>
