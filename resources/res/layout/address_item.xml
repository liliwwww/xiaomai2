<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/damai_list_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@drawable/mine_address_default_selector"
        android:id="@+id/mine_address_item_right_indicator_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_18dp"
        android:text="@string/iconfont_youjiantou24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/mine_address_item_receiver_basic_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_marginTop="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_18dp"
        android:layout_alignParentTop="true">
        <TableLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/color_111111"
                    android:ellipsize="end"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/color_222222"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/color_ffffff"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/mine_address_item_invalid_indicator_tv"
                    android:background="@drawable/mine_address_invalid_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="失效地址"
                    android:singleLine="true"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_111111"
        android:id="@+id/mine_address_item_detail_address_tv"
        android:paddingRight="@dimen/margin_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/mine_address_item_right_indicator_tv"
        android:layout_below="@+id/mine_address_item_receiver_basic_ll"
        android:layout_alignLeft="@+id/mine_address_item_receiver_basic_ll"
        android:lineSpacingExtra="@dimen/margin_3dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_18dp"
        android:layout_below="@+id/mine_address_item_detail_address_tv"
        android:layout_alignLeft="@+id/mine_address_item_receiver_basic_ll">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/mine_address_item_set_default_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/iv_jiantou"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="@drawable/mine_address_default_selector"
                android:id="@+id/mine_address_item_default_indicator_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_danxuanxuanzhong24"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_111111"
                android:id="@+id/mine_address_item_default_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6dp"
                android:text="设为默认地址"/>
        </LinearLayout>
        <View
            android:background="@drawable/devider_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/margin_25dp"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
