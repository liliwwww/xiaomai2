<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/color_f9f9f9"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ticklet_transfer_people_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="@string/ticklet_transfer_person_tip"
            style="@style/ticklet_4a4a4a_13dp"/>
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_000000"
            android:id="@+id/ticklet_transfer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ticklet_transfer_people_tips"/>
        <TextView
            android:id="@+id/ticklet_transfer_ticklet_num_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="转送票"
            android:layout_below="@+id/ticklet_transfer_people_tips"
            style="@style/ticklet_4a4a4a_13dp"/>
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_000000"
            android:id="@+id/ticklet_transfer_ticklet_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_toRightOf="@+id/ticklet_transfer_ticklet_num_tips"
            android:layout_below="@+id/ticklet_transfer_phone"/>
    </RelativeLayout>
    <ScrollView
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="@dimen/margin_18dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/ticklet_transfer_tv_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ticklet_666666_12dp"/>
    </ScrollView>
</merge>
