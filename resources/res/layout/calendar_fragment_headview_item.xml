<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/week_bg"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <TextView
            android:text="@string/damai_day1_07"
            style="@style/style_calendar_week"/>
        <TextView
            android:text="@string/damai_day1_01"
            style="@style/style_calendar_week"/>
        <TextView
            android:text="@string/damai_day1_02"
            style="@style/style_calendar_week"/>
        <TextView
            android:text="@string/damai_day1_03"
            style="@style/style_calendar_week"/>
        <TextView
            android:text="@string/damai_day1_04"
            style="@style/style_calendar_week"/>
        <TextView
            android:text="@string/damai_day1_05"
            style="@style/style_calendar_week"/>
        <TextView
            android:text="@string/damai_day1_06"
            style="@style/style_calendar_week"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/calendar_view"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
