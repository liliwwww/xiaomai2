<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:paddingLeft="18dp"
    android:paddingTop="24dp"
    android:paddingRight="18dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_order_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_number"
        style="@style/style_hn_order_invoice_subtitle"/>
    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/tv_order_number_title"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tv_order_number_title"
        style="@style/style_hn_order_invoice_subtitle"/>
    <TextView
        android:id="@+id/tv_order_money_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/order_amount_of_money"
        android:layout_below="@+id/tv_order_number_title"
        style="@style/style_hn_order_invoice_subtitle"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_AAAAAA"
        android:id="@+id/tv_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/tv_order_money_title"
        android:layout_alignBaseline="@+id/tv_order_money_title"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tv_order_money_title"/>
</RelativeLayout>
