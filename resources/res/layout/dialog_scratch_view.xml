<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:scratch="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="#7d000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dialog_scratch_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginBottom="@dimen/padding_10dp">
            <TextView
                android:textSize="13sp"
                android:textColor="#fffbf2"
                android:gravity="center"
                android:id="@+id/btn_cancle"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:includeFontPadding="false"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#feffe8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在下方刮奖揭晓奖品"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gua_jiang_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/has_prize"
                android:background="@drawable/gua_jiang_ticket_bg"
                android:visibility="visible"
                android:layout_width="180dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#ff4d64"
                    android:ellipsize="end"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/prize_name"
                    android:paddingTop="@dimen/padding_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_16_dp"
                    android:layout_marginRight="@dimen/text_size_16_dp"
                    android:singleLine="true"/>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:id="@+id/prize_num_zone"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="25dp"
                        android:textColor="#ff4b61"
                        android:ellipsize="end"
                        android:id="@+id/prize_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#ff4d64"
                        android:ellipsize="end"
                        android:id="@+id/prize_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_2dp"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:id="@+id/prize_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="11dp"
                        android:textColor="#b1a89c"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去查看"/>
                    <com.taobao.movie.android.commonui.widget.MIconfontTextView
                        android:textSize="6dp"
                        android:textColor="#b1a89c"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/iconf_right_arrow"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="15dp"
                android:textColor="#ff4d64"
                android:layout_gravity="center"
                android:id="@+id/no_prize"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="很遗憾，没有刮到奖品"/>
            <com.taobao.movie.android.commonui.widget.ScratchView
                android:id="@+id/scratch_view"
                android:visibility="visible"
                android:layout_width="300dp"
                android:layout_height="112dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="16dp"
                scratch:maxPercent="20"
                scratch:watermark="@drawable/gua_jiang_layer"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
