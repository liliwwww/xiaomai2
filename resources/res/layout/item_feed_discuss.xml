<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.StrokeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_feed_vote_ui"
    android:background="@drawable/bg_circle_discuss_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_9dp"
    app:sl_corners_radius="8dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/discuss_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:paddingStart="@dimen/margin_12dp"
        android:paddingEnd="@dimen/margin_12dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/discuss_icon"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discuss_title"
            android:layout_marginStart="6dp"/>
    </LinearLayout>
    <cn.damai.comment.view.DMHotDiscussView
        android:id="@+id/theme_discuss_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"/>
</cn.damai.uikit.view.StrokeLinearLayout>
