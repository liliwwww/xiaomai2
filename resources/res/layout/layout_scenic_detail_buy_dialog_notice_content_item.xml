<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_12dp"
    android:layout_marginStart="1px">
    <View
        android:background="@color/color_D5D7DB"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/title_container"
        android:paddingLeft="12dp"
        android:paddingTop="@dimen/margin_15dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.moimage.MoImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_notice"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="@color/bricks_2e333e"
            android:id="@+id/tv_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_69717C"
            android:ellipsize="end"
            android:id="@+id/tv_notice_content"
            android:paddingLeft="12dp"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingRight="12dp"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:lineSpacingExtra="2dp"/>
        <LinearLayout
            android:layout_gravity="end|bottom"
            android:orientation="horizontal"
            android:id="@+id/ll_notice_expand"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_15dp">
            <View
                android:id="@+id/view_notice_cover"
                android:layout_width="26dp"
                android:layout_height="15dp"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#60a3ff"
                android:id="@+id/tv_notice_expand"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
