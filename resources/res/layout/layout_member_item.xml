<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_6dp"
    android:paddingBottom="@dimen/margin_6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_avatar_layout"
        android:layout_width="61dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_artist_placeholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/uikit_user_default_icon"/>
        <cn.damai.uikit.view.RoundImageView
            android:layout_gravity="center"
            android:id="@+id/iv_artist_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:type="linear"/>
        <View
            android:layout_gravity="center"
            android:id="@+id/iv_artist_inner_border"
            android:background="@drawable/member_inner_border"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="@color/color_ffffff"
            android:ellipsize="end"
            android:layout_gravity="bottom|right"
            android:id="@+id/tv_artist_name"
            android:background="@drawable/member_name_bg"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingTop="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_3dp"
            android:paddingBottom="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朱正廷"
            android:maxLines="2"/>
    </FrameLayout>
</LinearLayout>
