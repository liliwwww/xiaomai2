<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.DMAvatar
        android:id="@+id/user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/user_icon_right_margin"
        android:layout_width="9dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_000000"
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"/>
            <cn.damai.uikit.view.UserTagView
                android:id="@+id/user_tag_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"/>
            <cn.damai.uikit.view.UserTagView
                android:id="@+id/user_old_vip_tag_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <View
            android:id="@+id/user_name_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/user_desc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_user_dna"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_9c9ca5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_dna_part1"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="9dp"
                android:layout_marginTop="0.5dp"
                android:src="@drawable/icon_discover_content_detail_dna"
                android:scaleType="fitXY"
                android:layout_marginStart="0.5dp"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/color_dna"
                android:id="@+id/tv_user_dna_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
