<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/list_selector_white_bg"
    android:layout_width="match_parent"
    android:layout_height="71dp">
    <TextView
        android:textSize="16dp"
        android:textColor="@color/common_text_color10"
        android:id="@+id/group_buy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:maxLines="2"
        android:layout_weight="1"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/common_red_small_text"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/group_buy_sale_tag"
        android:background="@drawable/oscar_schedule_can_buy_tag_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>
