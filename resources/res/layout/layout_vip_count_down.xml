<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_10dp"
        android:textColor="#9c9ca5"
        android:paddingRight="@dimen/margin_3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距开抢"/>
    <TextView
        android:textSize="@dimen/margin_16dp"
        android:textColor="@color/main_color"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22:18:22"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_time_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/main_color"
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="@color/main_color"
            android:paddingLeft="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/main_color"
            android:id="@+id/tv_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="@color/main_color"
            android:paddingLeft="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"/>
    </LinearLayout>
</LinearLayout>
