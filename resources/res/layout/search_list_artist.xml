<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.round.RoundImageView2
        android:id="@+id/iv_head_bg_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rRadius="12dp"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:maxWidth="190dp"
        android:singleLine="true"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_account_arrow"
        android:visibility="invisible"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/user_v_tag"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_account_name"
        app:layout_constraintStart_toEndOf="@+id/tv_account_name"
        app:layout_constraintTop_toTopOf="@+id/tv_account_name"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/tv_account_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/tv_account_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_name"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="@+id/tv_account_count"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_count">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/relation_status"
            android:background="@drawable/search_attention_button"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="54dp"
            android:text="关注"
            android:layout_marginStart="12dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/goto_main_page"
            android:background="@drawable/search_attention_button"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:minWidth="54dp"
            android:text="去主页"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_account_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="36dp"
        android:src="@drawable/uikit_user_default_icon_trans_white"
        android:scaleType="centerCrop"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
