<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <View
        android:id="@+id/seatPriceDivider"
        android:background="@color/color_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <cn.damai.uikit.flowlayout.FlowLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:layout_weight="36">
            <TextView
                android:textSize="@dimen/textsize_13"
                android:textColor="@color/color_111111"
                android:id="@+id/seatPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/textsize_13"
                android:textColor="@color/color_000000"
                android:id="@+id/seatPriceTaoPiaoTag"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/trade_seat_taopiao_text"/>
            <cn.damai.seat.view.CutLineTextView
                android:textSize="@dimen/textsize_13"
                android:textColor="@color/color_999999"
                android:id="@+id/seat_price_cut_line_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:lines="1"/>
            <TextView
                android:textSize="@dimen/textsize_13"
                android:textColor="@color/main_color"
                android:id="@+id/seatPriceValuedanwei"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/damai_seat_student_ticket"/>
        </cn.damai.uikit.flowlayout.FlowLayout>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_111111"
            android:ellipsize="end"
            android:id="@+id/paihao_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:singleLine="true"
            android:layout_weight="30"/>
        <TextView
            android:textSize="@dimen/textsize_13"
            android:textColor="@color/color_111111"
            android:gravity="right"
            android:id="@+id/quhao_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:layout_weight="30"/>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/textsize_16"
                android:textColor="#c8c8c8"
                android:gravity="center"
                android:id="@+id/iv_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="@string/iconfont_shanchu18"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
