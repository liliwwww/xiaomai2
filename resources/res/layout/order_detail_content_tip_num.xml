<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/window_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/damai_list_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/light_black_7d7d7d"
                android:layout_gravity="center_horizontal"
                android:id="@+id/choose_seat_starttime"
                android:layout_marginTop="10dp"
                android:text="@string/damai_orderdetailnew_grab_seat_start_time"
                style="@style/wrap"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/paihao_num"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_line_tip"
            android:background="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/time_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/show_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/light_black_444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/order_detail_content_tip_num_01"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/main_color"
                    android:id="@+id/day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/light_black_444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/damai_event_day"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/main_color"
                    android:id="@+id/hour_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/light_black_444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/damai_event_when"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/main_color"
                    android:id="@+id/min_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/light_black_444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/damai_event_minutes"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/main_color"
                    android:id="@+id/second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/light_black_444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/damai_event_seconds"/>
            </LinearLayout>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/light_black_7d7d7d"
                android:layout_gravity="center_horizontal"
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/c_time_pic"
                android:drawablePadding="5dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/light_black_444"
                android:layout_gravity="center_horizontal"
                android:id="@+id/status_text"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/order_detail_content_tip_num_02"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/choose_zuowei_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/choose_zuowei_btn"
            android:background="@drawable/bg_submit_button_normal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/order_detail_content_tip_num_03"/>
    </LinearLayout>
</LinearLayout>
