<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/ticklet_white_topradius12_bg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75">
        <RelativeLayout
            android:gravity="center_vertical"
            android:paddingLeft="21dp"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_000000"
                android:id="@+id/layer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="#663c3f44"
                android:gravity="center"
                android:id="@+id/layer_close"
                android:paddingRight="21dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fucengguanbi16"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ScrollView
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/margin_13dp"
                    android:textColor="@color/color_666666"
                    android:id="@+id/project_notification_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_3dp"/>
                <cn.damai.uikit.view.FixImageView
                    android:id="@+id/project_notification_content_img"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_15"
                    android:layout_marginBottom="24dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
