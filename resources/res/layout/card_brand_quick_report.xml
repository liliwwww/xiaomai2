<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brand_quickreport_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_11dp"
    android:layout_marginRight="@dimen/margin_11dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/brand_quickreport_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_alignParentTop="true">
        <TextView
            android:textSize="@dimen/margin_18dp"
            android:textColor="@color/color_000000"
            android:id="@+id/brand_quickreport_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"/>
        <TextView
            android:textSize="25dp"
            android:textColor="#ff8e37"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/brand_quickreport_update_time_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_2dp"
            android:text="⋅"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#ff8e37"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/brand_quickreport_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/brand_ll_quickreport_more"
            android:background="@drawable/bg_border_corner_15_0"
            android:paddingLeft="@dimen/margin_9dp"
            android:paddingTop="@dimen/margin_4dp"
            android:paddingRight="@dimen/margin_9dp"
            android:paddingBottom="@dimen/margin_4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:text="@string/iconfont_youjiantou24"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/brand_quickreport_item_layout_fr_shadow"
        android:padding="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/brand_quickreport_item_layout"
        android:layout_alignBottom="@+id/brand_quickreport_item_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/brand_quickreport_item_layout"
        android:background="@drawable/bg_border_corner_15_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/brand_quickreport_title_layout">
        <RelativeLayout
            android:id="@+id/brand_quickreport_special"
            android:background="@drawable/brand_card_quickreport_item_bg"
            android:paddingLeft="@dimen/margin_12dp"
            android:paddingRight="@dimen/margin_12dp"
            android:paddingBottom="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.2dp">
            <cn.damai.uikit.view.DMPosterView
                android:id="@+id/brand_quickreport_special_img"
                android:layout_width="104dp"
                android:layout_height="78dp"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="25dp"
                android:textColor="#14ff2869"
                android:id="@+id/brand_quickreport_special_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_fenxiang_yinhao_35"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="#ff6392"
                android:ellipsize="end"
                android:id="@+id/brand_quickreport_tv_special_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:maxLines="2"
                android:layout_toLeftOf="@+id/brand_quickreport_special_img"
                android:layout_below="@+id/brand_quickreport_special_icon"
                android:layout_alignParentLeft="true"
                android:lineSpacingExtra="@dimen/margin_5dp"/>
            <TextView
                android:textSize="@dimen/margin_11dp"
                android:textColor="#99ff6c98"
                android:id="@+id/brand_quickreport_tv_special_ipuv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/brand_quickreport_special_img"
                android:layout_below="@+id/brand_quickreport_tv_special_title"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <include
            android:id="@+id/card_brand_normal_item_one"
            android:visibility="gone"
            layout="@layout/card_brand_quick_report_normal_item"/>
        <include
            android:id="@+id/card_brand_normal_item_two"
            android:visibility="gone"
            layout="@layout/card_brand_quick_report_normal_item"/>
        <View
            android:id="@+id/card_brand_normal_item_black_holder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_18dp"/>
    </LinearLayout>
</RelativeLayout>
