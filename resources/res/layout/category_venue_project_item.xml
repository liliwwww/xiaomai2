<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/project_layout"
    android:layout_width="111dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/venus_rank_item_image_layout"
        android:layout_width="match_parent"
        android:layout_height="148dp">
        <cn.damai.uikit.shadowlayout.DMShadowLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sl_shadowColor="#1a000000"
            app:sl_shadowRadius="3dp">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/venus_rank_item_image"
                android:background="@drawable/uikit_default_image_bg_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:borderRadius="2dp"
                app:type="radial"/>
        </cn.damai.uikit.shadowlayout.DMShadowLayout>
        <cn.damai.uikit.tag.DMCategroyTagView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:id="@+id/venus_rank_item_image_tag"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/venus_rank_item_rank"
            android:background="@drawable/item_rank"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"/>
    </FrameLayout>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/venus_rank_item_title"
        android:paddingLeft="@dimen/margin_3dp"
        android:paddingRight="@dimen/margin_3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:maxLines="2"
        android:lineSpacingMultiplier="1.1"/>
    <TextView
        android:id="@+id/venus_rank_item_time"
        android:paddingLeft="@dimen/margin_3dp"
        android:paddingRight="@dimen/margin_3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:singleLine="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/venus_rank_item_price_layout"
        android:paddingLeft="@dimen/margin_3dp"
        android:paddingRight="@dimen/margin_3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="16dp"
            android:textColor="#ff2d79"
            android:id="@+id/venus_rank_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_666666"
            android:id="@+id/venus_rank_item_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="èµ·"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
