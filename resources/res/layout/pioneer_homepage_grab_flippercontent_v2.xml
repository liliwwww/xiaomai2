<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/resource_size_11"
        android:textColor="@color/bricks_2e333e"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/home_grab_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:paddingEnd="17dp"/>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="11dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@drawable/pioneer_right_arrow_bg_r4"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:text="@string/iconfont_changbingjiantou"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/home_grab_content_text"/>
</RelativeLayout>
