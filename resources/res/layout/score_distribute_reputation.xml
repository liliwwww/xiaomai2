            android:layout_gravity="center_vertical"
            android:id="@+id/progress3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="6dp"
            android:max="100"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/score_distribute_progress_v2"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="6dp"
            android:textColor="@color/cb_orange"
            android:gravity="end"
            android:id="@+id/icon_star_two"
            android:layout_width="32dp"
            android:layout_height="6dp"
            android:alpha="0.2"
            android:letterSpacing="-0.025"/>
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/progress4"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="6dp"
            android:max="100"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/score_distribute_progress_v2"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="6dp"
            android:textColor="@color/cb_orange"
            android:gravity="end"
            android:id="@+id/icon_star_one"
            android:layout_width="32dp"
            android:layout_height="6dp"
            android:alpha="0.2"
            android:letterSpacing="-0.025"/>
