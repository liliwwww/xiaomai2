<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/order_success_vip_benefit_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_12"
        android:layout_marginRight="@dimen/resource_size_12">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/color_2e333e"
            android:ellipsize="end"
            android:id="@+id/order_success_benefit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="8dp"
            android:textColor="@color/color_999999"
            android:id="@+id/order_success_benefit_btn_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_right_arrow_bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_999999"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/order_success_benefit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/order_success_benefit_btn_arrow"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#969aa4"
            android:ellipsize="end"
            android:id="@+id/order_success_benefit_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/order_success_benefit_btn"
            android:layout_toRightOf="@+id/order_success_benefit_title"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/order_success_vip_benefit_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resource_size_12"
        android:layout_marginTop="@dimen/resource_size_12"
        android:layout_marginRight="@dimen/resource_size_12"
        android:layout_marginBottom="@dimen/resource_size_12"/>
</merge>
