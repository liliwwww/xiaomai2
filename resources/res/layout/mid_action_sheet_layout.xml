<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/mid_action_header"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:layout_centerInParent="true"/>
        <View
            android:background="@color/common_divider_color"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/action_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/action_sheet_cancel_item"
        android:background="@drawable/mid_action_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
