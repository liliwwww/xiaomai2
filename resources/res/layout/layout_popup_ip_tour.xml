<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sub_content"
        android:background="@drawable/bg_border_corner_15_0_topradius"
        android:paddingBottom="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ScrollView
            android:id="@+id/ip_tour_scroll"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_add_city_container">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ip_tour_scroll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ip_tour_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/bricks_959AA5"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_tour_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="城市巡演"
                android:layout_weight="1"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="@color/color_663c3f44"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_tour_top_close"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:text="@string/iconfont_guanbi24"/>
        </LinearLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:orientation="horizontal"
            android:id="@+id/ll_add_city_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip_tour_top"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            app:alignItems="center">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/bricks_959AA5"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_add_city_desc"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_flexShrink="1"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_add_city"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:layout_marginStart="@dimen/margin_5dp"
                app:layout_flexShrink="0">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_959AA5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求加场"/>
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_959AA5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_youjiantou24"/>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </RelativeLayout>
</RelativeLayout>
