<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/bg_color_f8"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <include layout="@layout/order_create_line"/>
    <TextView
        android:textSize="@dimen/margin_16dp"
        android:textColor="@color/color_999999"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_17dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="配送信息"/>
    <View
        android:background="@color/color_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_12dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_17dp"
        android:paddingRight="@dimen/margin_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单编号："/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_delivery_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递名称："/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_delivery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送状态："/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_delivery_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include layout="@layout/order_create_line"/>
</LinearLayout>
