<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/title_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_44dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_20dp"
            android:textColor="@color/color_000000"
            android:gravity="center_vertical"
            android:id="@+id/tv_back"
            android:paddingLeft="@dimen/margin_18dp"
            android:paddingRight="@dimen/margin_18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fanhui24"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/margin_18dp"
            android:paddingRight="@dimen/margin_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"/>
    </FrameLayout>
    <com.alibaba.pictures.bricks.view.tab.HomeTabScrollView
        android:layout_gravity="center_horizontal"
        android:id="@+id/indicator"
        android:background="#ffffff"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <View
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="12dp"/>
    <cn.damai.trade.view.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:flipInterval="30"/>
</LinearLayout>
