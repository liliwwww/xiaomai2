<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="60dp"
    android:layout_height="110dp">
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp">
        <cn.damai.tetris.component.home.widget.banner.sub.RoundRadiusImageView
            android:id="@+id/rank_user_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:r_round_radius="20dp"
            app:r_stroke_color="#26000000"
            app:r_stroke_width="1px"/>
        <ImageView
            android:id="@+id/rank_user_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/rank_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_FF2869"
            android:id="@+id/rank_user_me_tag"
            android:background="@drawable/bg_rank_shape_me"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="æˆ‘"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_333333"
            android:ellipsize="end"
            android:id="@+id/rank_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_9c9ca5"
        android:id="@+id/rank_user_extra"
        android:paddingTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
