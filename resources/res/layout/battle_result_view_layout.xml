<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textColor="@color/tpp_primary_red"
        android:id="@+id/agree_icon_font"
        android:paddingRight="3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:text="@string/iconf_checked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textColor="@color/tpp_secondary_blue"
        android:id="@+id/disagree_icon_font"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="3dp"
        android:text="@string/iconf_checked"
        app:layout_constraintRight_toLeftOf="@+id/disagree_txt"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/tpp_primary_red"
        android:id="@+id/agree_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/agree_icon_font"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="15dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/tpp_secondary_blue"
        android:id="@+id/disagree_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/agree_txt">
        <View
            android:id="@+id/agree_percent"
            android:background="@drawable/battle_agree_bg"
            android:layout_width="5dp"
            android:layout_height="9dp"
            android:layout_alignParentLeft="true"/>
        <View
            android:id="@+id/disagree_percent"
            android:background="@drawable/battle_disagree_bg"
            android:layout_width="5dp"
            android:layout_height="9dp"
            android:layout_alignParentRight="true"
            app:layout_constraintRight_toRightOf="parent"/>
    </RelativeLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/agree_percent_txt"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_layout"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/disagree_percent_txt"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/agree_percent_txt"
        app:layout_constraintRight_toRightOf="parent"/>
</merge>
