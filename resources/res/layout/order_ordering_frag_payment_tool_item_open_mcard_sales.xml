<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/block_presalecode_select_area"
    android:background="@drawable/list_selector"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    style="@style/CommonListItemContainerWhite2">
    <TextView
        android:id="@+id/open_mcard_title"
        android:layout_marginRight="6dp"
        android:text="@string/ordering_selector_block_use_mcard"
        style="@style/CommonListItemOrderTitle"/>
    <com.taobao.movie.android.commonui.widget.RoundedTextView
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/activity_tag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:text="卡"
        app:background_color="@color/common_text_color4"
        app:padding_horizontal="0"
        app:padding_vertical="0"
        app:round_radius="6"
        app:round_type="fill"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/common_text_color4"
        android:gravity="right"
        android:id="@+id/open_mcard_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="right"
        android:id="@+id/right_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_font_right_small"/>
    <Button
        android:id="@+id/right_button"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/margin_10"
        android:text="@string/refresh"
        style="@style/mcard_refresh_button_style_small"/>
</LinearLayout>
