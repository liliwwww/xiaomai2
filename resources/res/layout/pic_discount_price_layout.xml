<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/container_common_price"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
            android:textSize="12dp"
            android:textColor="#582331"
            android:id="@+id/tv_money_prefix"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="￥"/>
        <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
            android:textSize="27dp"
            android:textColor="#582331"
            android:ellipsize="end"
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
            android:textSize="12dp"
            android:textColor="#582331"
            android:id="@+id/tv_price_suffix"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:text="购"/>
    </LinearLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="#80582331"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:id="@+id/tv_money_desc"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxLines="2"/>
</merge>
