<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="true"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp">
    <View
        android:background="@drawable/bg_baochang_entrance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/bricks_171717"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:maxLines="1"
            android:layout_marginStart="@dimen/margin_12dp"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5.5dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/margin_3dp"/>
    </LinearLayout>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/bricks_5f6672"
        android:ellipsize="end"
        android:layout_gravity="bottom"
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.cardview.widget.CardView>
