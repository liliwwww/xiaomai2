<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.StrokeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_circle_theme_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_9dp"
    app:sl_corners_radius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_circle_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/theme_icon"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/theme_title"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/theme_watch_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="10dp"
                android:textColor="#ff903c"
                android:id="@+id/theme_content_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_9c9ca5"
                android:id="@+id/theme_content_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人参与"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_9c9ca5"
                android:id="@+id/watch_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="10dp"
                android:textColor="#ff903c"
                android:id="@+id/theme_ipvuv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_9c9ca5"
                android:id="@+id/theme_ipvuv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人围观"/>
        </LinearLayout>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/theme_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toStartOf="@+id/theme_img_layout"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <cn.damai.uikit.view.StrokeLinearLayout
            android:orientation="vertical"
            android:id="@+id/theme_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/theme_watch_info"
            app:layout_constraintTop_toTopOf="@+id/theme_title"
            app:sl_corners_radius="6dp">
            <cn.damai.commonbusiness.lazyimg.view.GifCareImageView
                android:id="@+id/theme_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"/>
        </cn.damai.uikit.view.StrokeLinearLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:id="@+id/theme_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:maxLines="1"
            android:layout_marginEnd="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/theme_img_layout"
            app:layout_constraintStart_toStartOf="@+id/theme_title"
            app:layout_constraintTop_toBottomOf="@+id/theme_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</cn.damai.uikit.view.StrokeLinearLayout>
