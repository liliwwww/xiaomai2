<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepage_video_item_image_layout"
    android:background="@drawable/bg_border_corner_6_headervideoitem"
    android:layout_width="166dp"
    android:layout_height="60dp">
    <cn.damai.uikit.view.round.RoundImageView2
        android:id="@+id/homepage_video_item_image"
        android:background="@drawable/uikit_default_image_bg_gradient"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:layout_marginLeft="9dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        app:rRadius="6dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#80ffffff"
        android:ellipsize="end"
        android:id="@+id/homepage_video_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:maxLines="2"
        android:layout_toRightOf="@+id/homepage_video_item_image"/>
    <cn.damai.uikit.number.DMDigitTextView
        android:textSize="10dp"
        android:textColor="#b3ffffff"
        android:id="@+id/homepage_video_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/homepage_video_item_image"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#80ffffff"
        android:id="@+id/homepage_video_item_buy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-2dp"
        android:text="购票"
        android:layout_toLeftOf="@+id/homepage_video_item_buy_btnarrow"
        android:layout_alignBottom="@+id/homepage_video_item_desc"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textColor="#80ffffff"
        android:id="@+id/homepage_video_item_buy_btnarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="@string/iconfont_bofang32"
        android:layout_alignTop="@+id/homepage_video_item_buy_btn"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
