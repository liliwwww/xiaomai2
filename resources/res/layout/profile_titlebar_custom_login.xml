<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/ll_titlebar_login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/profile_header_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            app:fadeDuration="0"
            app:failureImage="@drawable/header_place_holder"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/header_place_holder"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="12dp"/>
        <TextView
            android:textSize="@dimen/text_size_15_dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_main_title"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gfjkgdklgkl"
            android:maxLines="1"
            android:layout_marginStart="@dimen/margin_6"/>
    </LinearLayout>
</FrameLayout>
