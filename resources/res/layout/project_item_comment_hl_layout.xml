<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/color_f6f7f8"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/comment_num_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_21dp"
            android:text="你说我说"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/icon_letstalk"/>
    </LinearLayout>
    <cn.damai.comment.view.DMHotDiscussView
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/header_comment_ui"
        android:background="@color/color_ffffff"
        android:paddingBottom="@dimen/project_modul_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"/>
</LinearLayout>
