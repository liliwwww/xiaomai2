<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_selector"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="33dp">
    <View
        android:id="@+id/top_divider"
        android:background="@color/common_divider_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"
        android:layout_alignParentTop="true"/>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_toLeftOf="@+id/action_text"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:alignItems="center"
        app:flexWrap="nowrap">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/derivation_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:layout_flexShrink="0"/>
        <com.taobao.movie.android.commonui.widget.RoundedTextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/activity_tag"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginRight="4dp"
            android:lines="1"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            app:layout_flexShrink="0"
            app:padding_horizontal="4"
            app:round_radius="6"
            app:round_type="stroke"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/tpp_gray_2"
            android:ellipsize="end"
            android:id="@+id/derivation_icon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerVertical="true"
            app:layout_flexShrink="1"/>
    </com.google.android.flexbox.FlexboxLayout>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="8dp"
        android:textColor="@color/tpp_gray_3"
        android:layout_gravity="center"
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:text="@string/iconf_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/tpp_gray_3"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:id="@+id/action_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="今日过期"
        android:lines="1"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_centerVertical="true"/>
</RelativeLayout>
