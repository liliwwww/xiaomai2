<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/resource_size_5"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="@dimen/resource_size_16"
                android:textColor="#2e333e"
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="@dimen/resource_size_10"
                android:textColor="#2e333e"
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_alignBaseline="@+id/number"
                android:layout_toEndOf="@+id/number"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/resource_size_11"
            android:textColor="#5f6672"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/resource_size_3"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="#e3e3e3"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/resource_size_27"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
