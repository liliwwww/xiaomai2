<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/top_brandbg"
    android:background="@drawable/bg_border_corner9_gradientpink"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="14dp"
            android:textColor="@color/color_171717"
            android:gravity="top|left"
            android:id="@+id/top_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:text="必看厂牌"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <FrameLayout
            android:layout_width="@dimen/margin_14dp"
            android:layout_height="@dimen/margin_14dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/iv_more"
                android:background="@drawable/bg_border_corner4_all_000000"
                android:padding="2dp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/pioneer_card_all_arrow"
                android:layout_marginEnd="8dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/topr_right_action"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <include
        android:id="@+id/content_line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:layout_below="@+id/top_brand"
        layout="@layout/component_pioneer_cinema_venue_page_topright_item_cell"/>
    <View
        android:id="@+id/content_line1_div"
        android:background="#e9ebef"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/content_line1"/>
    <include
        android:id="@+id/content_line2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:layout_below="@+id/content_line1_div"
        layout="@layout/component_pioneer_cinema_venue_page_topright_item_cell"/>
</LinearLayout>
