<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tpp_gray_6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/vip_profit_title_round9_bg"
        android:paddingLeft="12dp"
        android:paddingTop="@dimen/padding_15dp"
        android:paddingRight="12dp"
        android:paddingBottom="@dimen/padding_15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15">
        <TextView
            android:textSize="@dimen/text_size_18_dp"
            android:textStyle="bold"
            android:textColor="@color/tpp_gray_1"
            android:id="@+id/profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/text_size_12_dp"
            android:textColor="@color/tpp_gray_3"
            android:gravity="left"
            android:id="@+id/tv_profit_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
</FrameLayout>
