<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_12dp">
    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/ticklet_list_item_bg_top"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_21dp"
        android:layout_marginRight="@dimen/margin_21dp">
        <RelativeLayout
            android:id="@+id/ticklet_to_evaluate_ticket_info_rv"
            android:paddingLeft="@dimen/margin_12dp"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <cn.damai.uikit.view.DMPosterView
                android:id="@+id/ticklet_to_evaluate_perform_iv"
                android:layout_width="78dp"
                android:layout_height="104dp"/>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_toRightOf="@+id/ticklet_to_evaluate_perform_iv">
                <TextView
                    android:textSize="@dimen/margin_18dp"
                    android:textColor="@color/color_111111"
                    android:ellipsize="end"
                    android:id="@+id/ticklet_to_evaluate_perform_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_alignParentTop="true"/>
                <LinearLayout
                    android:id="@+id/ticklet_to_evaluate_perform_address_lv"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:layout_above="@+id/ticklet_to_evaluate_show_time_lv">
                    <TextView
                        android:textSize="@dimen/margin_13dp"
                        android:textColor="@color/color_666666"
                        android:ellipsize="end"
                        android:id="@+id/ticklet_to_evaluate_perform_address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ticklet_to_evaluate_show_time_lv"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textSize="@dimen/margin_14dp"
                        android:textColor="@color/color_666666"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/ticklet_to_evaluate_perform_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ticklet_ticket_evaluates_lv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_below="@+id/ticklet_to_evaluate_ticket_info_rv"/>
    </RelativeLayout>
    <View
        android:id="@+id/mine_order_info_divider"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"/>
    <RelativeLayout
        android:id="@+id/ticklet_to_evaluate_user_evaluate_rv"
        android:background="@drawable/ticklet_list_item_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/margin_21dp"
        android:layout_marginRight="@dimen/margin_21dp"
        android:minHeight="@dimen/margin_8dp">
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_111111"
            android:layout_gravity="center_vertical"
            android:id="@+id/ticklet_tosee_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:text="看看大家评价"
            android:layout_centerVertical="true"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_111111"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/margin_21dp"
            android:layout_height="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_1dp"
            android:text="@string/iconfont_youjiantou_"
            android:layout_toRightOf="@+id/ticklet_tosee_comments"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="#ff2869"
            android:gravity="center"
            android:id="@+id/ticklet_list_comment_gift"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:layout_toLeftOf="@+id/ticklet_tocomment_btn_layout"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/ticklet_tocomment_btn_layout"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/ticklet_tocomment_btn"
                android:background="@drawable/bg_submit_button_ff3299_ff2869"
                android:layout_width="54dp"
                android:layout_height="@dimen/margin_25dp"
                android:text="去评价"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
