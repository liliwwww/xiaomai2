<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#f6f7f8"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/layout_score_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="33dp"
                    android:src="?attr/bgDetailScoreTitle"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="14dp"
                    android:textColor="@color/color_739c9ca5"
                    android:id="@+id/tv_score_icon_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_tixingxian_"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9c9ca5"
                    android:id="@+id/tv_score_extra_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_3c3f44"
                    android:id="@+id/tv_score_to_comment"
                    android:paddingLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21dp"
                    android:text="@string/iconfont_youjiantou12"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <cn.damai.uikit.number.DMDigitTextView
                            android:textSize="36dp"
                            android:textColor="?attr/bgDetailLikeTextSelect"
                            android:id="@+id/tv_score"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="4dp"/>
                        <TextView
                            android:textSize="12dp"
                            android:textColor="?attr/bgDetailLikeTextSelect"
                            android:id="@+id/tv_socre_desc"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="@dimen/margin_8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">
                        <cn.damai.uikit.view.DMRatingBar
                            android:id="@+id/prj_score_star_view"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            app:isIndicator="true"
                            app:showText="false"
                            app:starCount="5"
                            app:starDistance="@dimen/margin_1dp"
                            app:starEmpty="@drawable/rating_empty"
                            app:starFill="?attr/bgRatingBarStar"
                            app:starSize="9dp"/>
                        <TextView
                            android:textSize="12dp"
                            android:textColor="@color/color_9C9CA5"
                            android:id="@+id/tv_rating_num_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/header_score_devide_line"
                    android:background="@color/color_1A000000"
                    android:layout_width="0.5dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"/>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ViewFlipper
                        android:gravity="center_vertical"
                        android:id="@+id/header_project_right_view_flipper"
                        android:background="@drawable/bg_border_corner_5fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inAnimation="@anim/flipper_in"
                        android:outAnimation="@anim/flipper_out">
                        <include
                            android:id="@+id/header_service_etc_ui"
                            layout="@layout/header_project_socre_right_flipper_item"/>
                    </ViewFlipper>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <View
            android:id="@+id/view_bottom"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/score_bottom_ui"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/score_bottom_wanna_see_ui"
                android:paddingLeft="21dp"
                android:layout_width="126dp"
                android:layout_height="34dp">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="8dp"
                    android:textColor="@color/color_FF2869"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_xiangkanmian_"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9c9ca5"
                    android:id="@+id/score_bottom_wanna_see_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:lines="1"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/tag_layout"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
