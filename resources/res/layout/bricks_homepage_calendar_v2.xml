<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_calendar_container_v2"
    android:layout_width="match_parent"
    android:layout_height="53dp">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/home_calendar_bg_pic_v2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
            android:layout_gravity="end"
            android:id="@+id/home_calendar_bg_lottie_v2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/home_calendar_right_icon_v2"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/home_calendar_title_v2"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:src="@drawable/bricks_home_calendar_title"
        android:scaleType="fitStart"
        android:layout_marginStart="@dimen/dim_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="11dp"
        android:ellipsize="end"
        android:id="@+id/home_calendar_subTitle_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/dim_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_calendar_title_v2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
