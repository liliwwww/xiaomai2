<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/live_content_dm_layout"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_round_rect_gray_stroke_26000000_r12"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="82dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/store_pic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:borderRadius="6dp"
                app:type="radial"/>
        </FrameLayout>
        <RelativeLayout
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_111111"
                android:ellipsize="end"
                android:id="@+id/store_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_toLeftOf="@+id/tv_btn"
                android:layout_marginEnd="6dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:gravity="center_vertical"
                android:id="@+id/tv_store_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:lines="1"
                android:layout_toLeftOf="@+id/tv_btn"
                android:layout_below="@+id/store_title"
                android:layout_marginEnd="6dp"/>
            <TextView
                android:textSize="@dimen/textsize_12"
                android:textColor="#9999de"
                android:gravity="center"
                android:id="@+id/tv_btn"
                android:background="@drawable/content_detail_artist_btn_bg"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:text="去看看"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
