<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uik_refresh_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/uik_refresh_header_second_floor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/uik_refresh_header_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.taobao.android.animationkit.AnimationView
            android:layout_gravity="center_horizontal"
            android:id="@+id/uik_refresh_header_progress1"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ak_autoPlay="false"
            app:ak_jsonFilePath="pullrefresh/normal/uik_pull_to_refresh.json"
            app:ak_loop="false"/>
        <com.taobao.android.animationkit.AnimationView
            android:layout_gravity="center_horizontal"
            android:id="@+id/uik_refresh_header_progress2"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ak_autoPlay="false"
            app:ak_jsonFilePath="pullrefresh/normal/uik_refreshing.json"
            app:ak_loop="true"/>
        <com.taobao.android.animationkit.AnimationView
            android:layout_gravity="center_horizontal"
            android:id="@+id/uik_refresh_header_progress3"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ak_autoPlay="false"
            app:ak_jsonFilePath="pullrefresh/normal/uik_refresh_finished.json"
            app:ak_loop="false"/>
    </FrameLayout>
</FrameLayout>
