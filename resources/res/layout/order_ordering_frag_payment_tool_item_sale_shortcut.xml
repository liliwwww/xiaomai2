<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview"
    android:background="@color/white"
    android:paddingLeft="9dp"
    android:paddingTop="6dp"
    android:paddingRight="0dp"
    android:paddingBottom="6dp"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CommonListItemContainerWhiteSaleItem">
    <RelativeLayout
        android:id="@+id/order_sale_item_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_alignParentTop="true">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:layout_gravity="top"
            android:id="@+id/order_sale_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:failureImage="@drawable/sale_item_default"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/sale_item_default"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="6dp"
            app:roundingBorderColor="#1a000000"
            app:roundingBorderWidth="0.5dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/order_sale_item_image_new"
            android:background="@color/tpp_secondary_green"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="新品"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/order_sale_item_image_hot"
            android:background="@color/tpp_primary_red"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="销量最高"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/order_sale_item_image_buy"
            android:background="@color/tpp_primary_red"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="买过"
            android:includeFontPadding="false"/>
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_15dp"
        android:layout_toLeftOf="@+id/buy_zone"
        android:layout_toRightOf="@+id/order_sale_item_image_container"
        android:layout_alignTop="@+id/order_sale_item_image_container"
        layout="@layout/order_ordering_common_sale_item"/>
    <FrameLayout
        android:id="@+id/buy_zone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/common_red_small_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/order_ordering_common_sale_btn"
            android:background="@drawable/oscar_schedule_can_buy_tag_bg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="9dp"
            android:minWidth="54dp"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="18dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:layout_gravity="center"
            android:id="@+id/sale_select_switch"
            android:padding="9dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_no_selected"/>
    </FrameLayout>
    <com.taobao.movie.android.commonui.widget.CornerTagTextView
        android:id="@+id/sales_corner_tag_lab"
        android:visibility="gone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:tag_background_color="@color/common_color_1049"
        app:tag_corner_orientation="topRight"
        app:tag_margin_corner_dp="10"
        app:tag_text_color="@color/white"
        app:tag_text_size_dp="10"/>
</RelativeLayout>
