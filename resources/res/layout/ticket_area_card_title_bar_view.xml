<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/gap_view1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:id="@+id/ticket_success_lottie_view"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gap_view1"
        app:lottie_autoPlay="false"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/ticket_result_description_layout"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/ticket_success_lottie_view"
        app:layout_constraintLeft_toRightOf="@+id/ticket_success_lottie_view"
        app:layout_constraintTop_toBottomOf="@+id/gap_view1">
        <TextView
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="@color/bricks_2e333e"
            android:id="@+id/ticket_result_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/ticket_icon"
            android:layout_width="58dp"
            android:layout_height="13dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/ticket_result_description"
            android:layout_marginEnd="3dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/bricks_2e333e"
            android:ellipsize="end"
            android:id="@+id/ticket_resultContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:layout_below="@+id/ticket_result_description"
            android:layout_marginEnd="122dp"
            android:layout_toEndOf="@+id/ticket_icon"/>
    </RelativeLayout>
    <TextView
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ticket_btn"
        android:background="@drawable/ticket_area_card_btn_non_members_bg"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:maxLines="1"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gap_view1"/>
    <TextView
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/color_582432"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ticket_btn_hint"
        android:background="@drawable/bricks_icon_vip_hint"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-3dp"
        android:maxWidth="260dp"
        android:maxLines="1"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/ticket_btn"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
