<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="#0e0e0e"
        android:id="@+id/ticklet_to_bind_face_tv"
        android:background="@drawable/ticklet_face_to_bind_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_20dp"
        android:text="@string/ticklet_face_to_bind"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ticklet_face_to_bind_ticket_info_lv"
        android:paddingTop="@dimen/margin_20dp"
        android:paddingBottom="@dimen/margin_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_toLeftOf="@+id/ticklet_to_bind_face_tv">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ticklet_to_bind_face_ticket_seat_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_AAAAAA"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/ticklet_to_bind_face_ticket_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:lines="1"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_AAAAAA"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/ticklet_to_bind_face_ticket_cert_name_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:lines="1"/>
    </LinearLayout>
    <View
        android:id="@+id/ticklet_to_bind_face_divider"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_marginRight="@dimen/margin_18dp"
        android:layout_below="@+id/ticklet_face_to_bind_ticket_info_lv"/>
</RelativeLayout>
