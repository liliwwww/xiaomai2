<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="12dp"
    android:layout_width="wrap_content"
    android:layout_height="42dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ip_tags_tag_bg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="12dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_9C9CA5"
            android:gravity="center_vertical"
            android:id="@+id/ip_tags_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:maxWidth="140dp"
            android:maxLines="1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="16dp"
            android:textColor="@color/color_3c3f44"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/ip_tags_tag_zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:text="@string/iconfont_zan24"
            android:layout_toRightOf="@+id/ip_tags_tag_title"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_9C9CA5"
            android:gravity="center_vertical"
            android:id="@+id/ip_tags_tag_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="9dp"
            android:text="101"
            android:layout_toRightOf="@+id/ip_tags_tag_zan"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</FrameLayout>
