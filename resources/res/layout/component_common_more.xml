    android:orientation="horizontal"
    android:background="@drawable/bg_component_common_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="#9c9ca5"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="#959aa5"
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_youjiantou12"/>
</LinearLayout>
