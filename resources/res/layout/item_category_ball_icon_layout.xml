<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_ball_container"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/horizontal_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="16dp"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/category_icon_title_left"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:singleLine="true"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/category_icon_pic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="center"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/font_Subhead2_R"
        android:textColor="@color/bricks_2e333e"
        android:ellipsize="end"
        android:id="@+id/category_icon_title_bottom"
        android:paddingLeft="3dp"
        android:paddingTop="6dp"
        android:paddingRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_container"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="@dimen/font_Subhead2_R"
        android:textColor="@color/bricks_2e333e"
        android:ellipsize="end"
        android:id="@+id/category_icon_title_bottom_pioneer"
        android:paddingLeft="3dp"
        android:paddingTop="6dp"
        android:paddingRight="3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_container"/>
    <View
        android:id="@+id/category_icon_line"
        android:background="#0d000000"
        android:layout_width="1dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/category_ball_container_rl_label"
        android:background="@drawable/bricks_home_ball_tips_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/resource_size_19"
        android:layout_marginTop="4dp"
        android:minWidth="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/font_Footnote2_M"
            android:textColor="@color/cg_7"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/category_ball_container_label"
            android:paddingLeft="@dimen/dim_3"
            android:paddingRight="@dimen/dim_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/resource_size_12"
            android:layout_marginBottom="1dp"
            android:maxWidth="52dp"
            android:maxLines="1"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
