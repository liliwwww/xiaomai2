<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/mark_s1_layout_normal"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/mark_s1_img_3_ui"
                android:background="@drawable/bg_item_city_mark_icon_ring"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/mark_s1_img_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/mark_s1_img_2_ui"
                android:background="@drawable/bg_item_city_mark_icon_ring"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/mark_s1_img_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/mark_s1_img_1_ui"
                android:background="@drawable/bg_item_city_mark_icon_ring"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/mark_s1_img_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </FrameLayout>
        </FrameLayout>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:id="@+id/mark_s1_city_name"
            android:background="@drawable/icon_city_mark_name_bg"
            android:paddingLeft="9dp"
            android:paddingTop="0.5dp"
            android:paddingRight="9dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:id="@+id/mark_s1_city_name_shining"
            android:background="@drawable/icon_city_mark_name_bg_shining2"
            android:paddingLeft="9dp"
            android:paddingTop="0.5dp"
            android:paddingRight="9dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/mark_s2_layout_highlight"
        android:background="@drawable/bg_item_city_highlight"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="86dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/icon_white_location"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/mark_s2_city_name"
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>
            <include
                android:id="@+id/mark_s2_show_layout_1"
                layout="@layout/item_city_music_project_mark"/>
            <include
                android:id="@+id/mark_s2_show_layout_2"
                layout="@layout/item_city_music_project_mark"/>
            <include
                android:id="@+id/mark_s2_show_layout_3"
                layout="@layout/item_city_music_project_mark"/>
        </LinearLayout>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:id="@+id/mark_s2_close"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_fucengguanbi16"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/mark_s3_layout_point"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_city_mark_point"/>
</LinearLayout>
