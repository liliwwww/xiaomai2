<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/equity_pop_item"
    android:background="@drawable/common_coupon_not_use_bg"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginBottom="9dp"
    android:minHeight="33dp">
    <FrameLayout
        android:id="@+id/fl_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/equity_icon"
            android:layout_width="wrap_content"
            android:layout_height="16dp"/>
        <com.taobao.movie.android.commonui.widget.RoundedTextViewNewStyle
            android:textSize="10dp"
            android:textColor="@color/BA8F5C"
            android:id="@+id/tag_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            app:background_color="@color/BA8F5C"
            app:padding_horizontal="3"
            app:padding_vertical="2"
            app:round_radius="4"
            app:round_type="stroke"/>
    </FrameLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_title"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fl_tag"
        app:layout_constraintRight_toLeftOf="@+id/sub_title"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:gravity="right"
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title"
        app:layout_constraintRight_toRightOf="@+id/arrow"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:gravity="center"
        android:id="@+id/arrow"
        android:visibility="gone"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:text="@string/icon_font_right_small"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.app.order.ui.widget.OneKeyReceive88VipView
        android:id="@+id/receive_88vip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
