<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/pick_up_container"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingTop="@dimen/margin_18dp"
    android:paddingRight="@dimen/margin_15dp"
    android:paddingBottom="@dimen/margin_18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_666666"
            android:id="@+id/icon"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_wodeshouhuodizhi_"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_000000"
                android:id="@+id/tv_pickup_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店取票网点信息"/>
            <TextView
                android:textSize="@dimen/margin_11dp"
                android:textColor="@color/color_ff2d79"
                android:id="@+id/tv_pickup_tag"
                android:background="@drawable/bg_border_corner_fa_trans"
                android:paddingLeft="@dimen/margin_2dp"
                android:paddingRight="@dimen/margin_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:text="望京大麦店"/>
            <TextView
                android:textSize="@dimen/margin_11dp"
                android:textColor="@color/color_ff2d79"
                android:gravity="right"
                android:id="@+id/tv_pickup_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="距离 1.5 km"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_self_company_address"
        android:paddingLeft="@dimen/margin_30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:lineSpacingMultiplier="1.1"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_self_company_time"
        android:paddingLeft="@dimen/margin_30dp"
        android:paddingTop="@dimen/margin_9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_self_company_phone"
        android:paddingLeft="@dimen/margin_30dp"
        android:paddingTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_self_company_count"
        android:paddingLeft="@dimen/margin_30dp"
        android:paddingTop="@dimen/margin_13dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_666666"
            android:id="@+id/tv_self_company_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看3个取票点"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="13dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_self_company_more"
            android:paddingLeft="@dimen/margin_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
</LinearLayout>
