<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/grab_time_rl"
        android:background="@drawable/pioneer_home_rob_ticket_left_icon_v2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:scaleType="fitEnd"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grab_time_img">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="23dp">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="14dp"
                android:textColor="@color/bricks_171717"
                android:gravity="center_vertical"
                android:id="@+id/grab_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="1dp"
                android:text=""
                android:maxLines="1"/>
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="11dp"
                android:textColor="@color/bricks_171717"
                android:gravity="center_vertical"
                android:id="@+id/grab_time_tv_suffix"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text=""
                android:maxLines="1"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/grab_time_img"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:src="@drawable/pioneer_home_rob_ticket_right_icon"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
