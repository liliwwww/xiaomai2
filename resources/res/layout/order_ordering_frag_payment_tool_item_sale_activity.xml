<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CommonListItemContainerWhiteSaleItem">
    <RelativeLayout
        android:id="@+id/order_sale_item_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:layout_gravity="top"
            android:id="@+id/order_sale_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:failureImage="@drawable/sale_item_default"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/sale_item_default"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="6dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_8dp"
        android:minHeight="65dp"
        android:layout_toRightOf="@+id/order_sale_item_image_container">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_title"
            android:ellipsize="end"
            android:id="@+id/order_sale_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="2"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="@dimen/text_size_16_dp"
            android:textColor="@color/tpp_primary_red"
            android:id="@+id/order_sale_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:text="¥0"
            android:maxLines="1"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/order_sale_item_gift_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <com.taobao.movie.android.commonui.widget.RoundedTextView
            android:textSize="10dp"
            android:textColor="@color/common_color_1049"
            android:layout_gravity="center_vertical"
            android:id="@+id/activity_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:includeFontPadding="false"
            app:background_color="@color/common_color_1049"
            app:padding_horizontal="4"
            app:padding_vertical="2"
            app:round_radius="24"
            app:round_type="stroke"/>
        <TextView
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_gravity="center_vertical"
            android:text="赠送"
            android:includeFontPadding="false"
            style="@style/CommonListItemText"/>
        <TextView
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_gravity="center_vertical"
            android:id="@+id/order_sale_item_gift_value"
            android:text="0"
            android:includeFontPadding="false"
            style="@style/CommonListItemText"/>
        <TextView
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_gravity="center_vertical"
            android:text="份"
            android:includeFontPadding="false"
            style="@style/CommonListItemText"/>
    </LinearLayout>
</RelativeLayout>
