<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/tab_group_scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tab_group"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp">
            <RadioButton
                android:id="@+id/show_btn"
                android:layout_marginRight="9dp"
                android:text="全部演出"
                style="@style/wanna_2_see_radio_style"/>
            <RadioButton
                android:id="@+id/valid_show_btn"
                android:layout_marginRight="9dp"
                android:text="可购票"
                style="@style/wanna_2_see_radio_style"/>
            <RadioButton
                android:id="@+id/script_btn"
                android:layout_marginRight="9dp"
                android:text="剧本杀"
                style="@style/wanna_2_see_radio_style"/>
            <RadioButton
                android:id="@+id/record_btn"
                android:layout_marginRight="9dp"
                android:text="现场记录"
                style="@style/wanna_2_see_radio_style"/>
            <RadioButton
                android:id="@+id/compilation_btn"
                android:text="合辑"
                style="@style/wanna_2_see_radio_style"/>
        </RadioGroup>
    </HorizontalScrollView>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:background="@drawable/layer_list_want_see_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
