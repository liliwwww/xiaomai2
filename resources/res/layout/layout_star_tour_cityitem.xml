<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/star_tour_cityitem_bg"
    android:layout_width="98dp"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/star_tour_item_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <TextView
        android:textSize="16dp"
        android:textColor="#e94bd7"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/star_tour_info_cityname"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:maxLines="1"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#b4b4b4"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/star_tour_info_citydesc"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:layout_below="@+id/star_tour_info_cityname"
        android:layout_alignParentRight="true"/>
    <cn.damai.uikit.number.DMDigitTextView
        android:textSize="14dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/star_tour_info_citydate"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_below="@+id/star_tour_info_citydesc"
        android:layout_alignParentRight="true"/>
    <cn.damai.uikit.view.round.RoundImageView2
        android:id="@+id/star_tour_info_cityimg"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/star_tour_city_itembg"
        android:scaleType="fitXY"
        android:layout_below="@+id/star_tour_info_citydate"
        app:rRadius="6dp"/>
</RelativeLayout>
