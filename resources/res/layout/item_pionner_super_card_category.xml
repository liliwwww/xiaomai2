<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="56dp"
    android:layout_height="50dp">
    <View
        android:background="@drawable/bg_super_card_category_right"
        android:layout_width="32.5dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/resource_size_21"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/b_account_lay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/resource_size_12"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/b_account_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_default_image_bg_gradient_pioneer"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            app:failureImage="@drawable/home_default_image_bg_gradient_pioneer"
            app:placeholderImage="@drawable/home_default_image_bg_gradient_pioneer"
            app:roundedCornerRadius="15dp"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/b_b_account_category_layout"
            android:background="@drawable/icon_category_top_bg"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="29dp">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/b_account_category_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="-2dp"
                app:text="音乐"/>
            <FrameLayout
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-2dp">
                <TextView
                    android:textSize="10dp"
                    android:textColor="#99ffffff"
                    android:ellipsize="none"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/b_account_category_subtitle"
                    android:paddingLeft="@dimen/margin_3dp"
                    android:paddingRight="@dimen/margin_3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    app:text="姥姥的外孙"/>
                <ImageView
                    android:layout_gravity="end"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_text_mask"
                    android:scaleType="fitXY"/>
            </FrameLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
