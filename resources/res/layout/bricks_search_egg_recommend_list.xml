<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.shadowlayout.DMShadowLayout
        android:id="@+id/iv_recommend_1_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sl_cornerRadius="12dp"
        app:sl_dx="2dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="#0d000000"
        app:sl_shadowRadius="4dp">
        <cn.damai.baseview.RCRelativeLayoutView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_corner="12dp">
            <ImageView
                android:id="@+id/iv_recommend_1"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:scaleType="centerCrop"/>
        </cn.damai.baseview.RCRelativeLayoutView>
    </cn.damai.uikit.shadowlayout.DMShadowLayout>
    <cn.damai.uikit.shadowlayout.DMShadowLayout
        android:id="@+id/iv_recommend_2_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv_recommend_3_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_recommend_1_container"
        app:sl_cornerRadius="6dp"
        app:sl_shadowColor="#0d000000"
        app:sl_shadowRadius="6dp">
        <cn.damai.baseview.RCRelativeLayoutView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_corner="6dp">
            <ImageView
                android:id="@+id/iv_recommend_2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:scaleType="centerCrop"/>
        </cn.damai.baseview.RCRelativeLayoutView>
    </cn.damai.uikit.shadowlayout.DMShadowLayout>
    <cn.damai.uikit.shadowlayout.DMShadowLayout
        android:id="@+id/iv_recommend_3_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_recommend_2_container"
        app:layout_constraintEnd_toStartOf="@+id/iv_recommend_4_container"
        app:layout_constraintStart_toEndOf="@+id/iv_recommend_2_container"
        app:layout_constraintTop_toTopOf="@+id/iv_recommend_2_container"
        app:sl_cornerRadius="6dp"
        app:sl_shadowColor="#0d000000"
        app:sl_shadowRadius="6dp">
        <cn.damai.baseview.RCRelativeLayoutView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_corner="6dp">
            <ImageView
                android:id="@+id/iv_recommend_3"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:scaleType="centerCrop"/>
        </cn.damai.baseview.RCRelativeLayoutView>
    </cn.damai.uikit.shadowlayout.DMShadowLayout>
    <cn.damai.uikit.shadowlayout.DMShadowLayout
        android:id="@+id/iv_recommend_4_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_recommend_2_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_recommend_3_container"
        app:layout_constraintTop_toTopOf="@+id/iv_recommend_2_container"
        app:sl_cornerRadius="6dp"
        app:sl_shadowColor="#0d000000"
        app:sl_shadowRadius="6dp">
        <cn.damai.baseview.RCRelativeLayoutView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_corner="6dp">
            <ImageView
                android:id="@+id/iv_recommend_4"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:scaleType="centerCrop"/>
        </cn.damai.baseview.RCRelativeLayoutView>
    </cn.damai.uikit.shadowlayout.DMShadowLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
