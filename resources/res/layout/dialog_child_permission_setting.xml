<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dialog_content"
        android:background="@drawable/bg_permission_child_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/bg_permission_child_setting_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/resource_size_55"
            android:paddingStart="@dimen/resource_size_12"
            android:paddingEnd="@dimen/resource_size_12">
            <TextView
                android:textSize="@dimen/resource_size_16"
                android:textColor="#2e333e"
                android:id="@+id/child_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用场景授权设置"
                android:layout_centerVertical="true"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#9e9e9e"
                android:id="@+id/close"
                android:padding="@dimen/resource_size_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_guanbi_"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="#959aa5"
            android:id="@+id/child_permission_sub_title"
            android:paddingLeft="@dimen/resource_size_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/resource_size_18"
            android:layout_marginBottom="@dimen/resource_size_12"
            android:paddingEnd="@dimen/resource_size_12"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/child_permission_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/resource_size_12"
            android:paddingEnd="@dimen/resource_size_12"/>
    </LinearLayout>
</LinearLayout>
