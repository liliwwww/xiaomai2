<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/statemanager_img"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/no_session_tip_icon"/>
    <TextView
        android:textSize="15dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center_horizontal"
        android:id="@+id/statemanager_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:includeFontPadding="false"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ll_phone_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="2dp"
            android:text="如有疑问请拨打影院电话"
            android:includeFontPadding="false"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="21dp">
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="18dp"
                android:textColor="#349cec"
                android:gravity="center_vertical"
                android:id="@+id/titlebar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconf_phone3"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#349cec"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.5dp"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
