<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/evaluate_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/base_padding_left"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>
    <View
        android:id="@+id/base_padding_right"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:id="@+id/comment_userinfo_layout"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/uikit_damai_avatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/uikit_user_default_icon"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            ratingbar:type="linear"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/comment_userinfo_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="49dp"
            android:layout_toRightOf="@+id/uikit_damai_avatar"
            android:layout_centerVertical="true">
            <include layout="@layout/evaluate_username_vip_layout"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/user_ratingbar"
                android:paddingTop="@dimen/margin_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/color_score_font"
                    android:id="@+id/comment_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.alibaba.pictures.bricks.view.DMRatingBar
                    android:id="@+id/evaluate_grade_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    ratingbar:isIndicator="true"
                    ratingbar:showText="false"
                    ratingbar:starCount="5"
                    ratingbar:starDistance="@dimen/margin_1dp"
                    ratingbar:starEmpty="@drawable/rating_empty"
                    ratingbar:starFill="@drawable/rating_fill"
                    ratingbar:starSize="9dp"/>
                <TextView
                    android:textSize="@dimen/margin_10dp"
                    android:textColor="#ff79bd"
                    android:gravity="center"
                    android:id="@+id/comment_has_played_icon"
                    android:background="@drawable/shape_rect_s_ff79bd_cor_16_solid_white"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginLeft="3dp"
                    android:text="购票并玩过"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_9C9CA5"
                android:ellipsize="end"
                android:id="@+id/comment_date_indetail"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:maxLines="1"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_comment_luxury"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bricks_feed_note_card_feature"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/base_padding_right"/>
    <RelativeLayout
        android:id="@+id/comment_content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/comment_userinfo_layout"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left">
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="@color/cg_1"
            android:ellipsize="end"
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:lineSpacingExtra="5.6dp"/>
        <TextView
            android:textSize="14dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:id="@+id/common_exptext_cover"
            android:background="@drawable/bg_button_black_white_gradient"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/common_exptext_btn"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#219cff"
            android:gravity="right"
            android:layout_gravity="right"
            android:id="@+id/common_exptext_btn"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全文"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/subreply_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="@dimen/margin_9dp"
        android:layout_below="@+id/comment_content_wrapper"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left">
        <TextView
            android:id="@+id/sub_reply_line"
            android:background="@drawable/evaluate_reply_line"
            android:layout_width="@dimen/margin_3dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_6dp"
            android:layout_alignTop="@+id/sub_reply_content"
            android:layout_alignBottom="@+id/sub_reply_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/sub_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sub_reply_line"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="@dimen/margin_4dp"/>
    </RelativeLayout>
    <cn.damai.uikit.view.NineGridlayout
        android:id="@+id/nine_image_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/evaluate_item_margin_left"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_below="@+id/subreply_layout"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left"/>
    <ImageView
        android:id="@+id/evaluate_spoiler_view"
        android:visibility="gone"
        android:layout_width="86dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/evaluate_item_margin_left"
        android:layout_marginTop="@dimen/margin_9dp"
        android:src="@drawable/script_spoiler"
        android:layout_below="@+id/nine_image_layout"
        android:layout_toEndOf="@+id/base_padding_left"/>
    <cn.damai.comment.view.DMTagView
        android:id="@+id/evaluate_dm_info_tag_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/evaluate_item_margin_left"
        android:layout_marginTop="@dimen/margin_9dp"
        android:layout_below="@+id/evaluate_spoiler_view"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left"/>
    <cn.damai.evaluate.view.DMEvaluateProjectCardView
        android:id="@+id/evaluate_project_info"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/evaluate_item_margin_left"
        android:layout_marginTop="@dimen/margin_9dp"
        android:layout_below="@+id/evaluate_dm_info_tag_view"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/bricks_9c9ca5"
        android:id="@+id/third_party"
        android:background="@drawable/third_party_comment"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/evaluate_item_margin_left"
        android:layout_marginTop="@dimen/margin_9dp"
        android:text="@string/third_party_comment"
        android:layout_below="@+id/evaluate_project_info"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_toEndOf="@+id/base_padding_left"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/comment_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/evaluate_item_margin_left"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_below="@+id/third_party"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="#959aa5"
                android:ellipsize="end"
                android:id="@+id/comment_date_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/comment_layout"
            android:paddingLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.damai.comment.view.PraiseView
                android:id="@+id/comment_praise_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="16dp"
                android:textColor="@color/color_5F6672"
                android:gravity="center"
                android:id="@+id/reply_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/iconfont_comment"/>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_5F6672"
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.5dp"/>
        </LinearLayout>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_5F6672"
            android:id="@+id/comment_detail_maincomment_more"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_more"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_5F6672"
            android:id="@+id/comment_detail_comment_delete"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/margin_1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/iconfont_shanchu_"/>
    </LinearLayout>
    <View
        android:id="@+id/evaluate_bottom_line"
        android:background="#26000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/evaluate_item_margin_left"
        android:layout_below="@+id/comment_bottom_layout"
        android:layout_toStartOf="@+id/base_padding_right"
        android:layout_toEndOf="@+id/base_padding_left"/>
</RelativeLayout>
