<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item_vote_layout_id"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp">
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="10dp"
            android:textColor="#ff903c"
            android:id="@+id/vote_select_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_9c9ca5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vote_num_des"/>
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/vote_select_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:maxLines="2"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vote_select_item_container"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
</LinearLayout>
