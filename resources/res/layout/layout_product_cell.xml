<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/default_component_margin_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/produce_cell_title"
        android:paddingTop="@dimen/default_component_title_margintop"
        android:paddingBottom="@dimen/default_component_content_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周边商品"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="15dp">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/produce_cell_img"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:scaleType="fitXY"
            app:borderRadius="6dp"
            app:type="radial"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/produce_cell_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:maxLines="2"
            android:layout_toRightOf="@+id/produce_cell_img"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/ll_child_price"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/produce_cell_img"
            android:layout_alignParentBottom="true">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="12dp"
                android:textColor="@color/color_FF2869"
                android:id="@+id/tv_fuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-0.5dp"
                android:text="¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="@color/color_FF2869"
                android:id="@+id/tv_project_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-0.5dp"
                android:text="130"/>
            <TextView
                android:textSize="@dimen/margin_10dp"
                android:textColor="@color/color_9C9CA5"
                android:id="@+id/tv_project_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3dp"
                android:text="起"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
