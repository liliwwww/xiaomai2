<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/choose_from_first"
        android:background="#ffffffff"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_header_frompic"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="从相册选"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/choose_from_second"
        android:background="#ffffffff"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_header_fromcamera"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="拍照"/>
    </LinearLayout>
</LinearLayout>
