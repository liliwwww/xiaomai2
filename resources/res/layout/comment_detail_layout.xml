<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/comment_list_title"
        layout="@layout/evaluate_userinfo_layout"/>
    <cn.damai.uikit.irecycler.IRecyclerView
        android:id="@+id/comment_detail_irecyclerview"
        android:background="@color/transparent"
        android:paddingBottom="50dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/comment_list_title"
        android:overScrollMode="never"
        app:loadMoreEnabled="true"
        app:loadMoreFooterLayout="@null"
        app:refreshEnabled="true"/>
    <include
        android:id="@+id/comment_and_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/evaluate_detail_submit_layout"/>
    <ImageView
        android:id="@+id/evaluate_back_to_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="82dp"
        android:src="@drawable/icon_scroll_to_top"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:id="@+id/errorView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/comment_list_title">
        <include layout="@layout/layout_common_error_page"/>
    </LinearLayout>
</RelativeLayout>
