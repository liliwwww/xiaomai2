<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/pioneer_ll_feed_rank_title"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_cl_feed_rank_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/home_feed_rank_title_icon_left"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:src="@drawable/home_feed_rank_tip_icon_left"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.alibaba.pictures.kit.ui.EndCoverTextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_171717"
            android:id="@+id/home_feed_rank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginStart="2dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/home_feed_rank_title_icon_left"
            app:layout_constraintRight_toLeftOf="@+id/home_feed_rank_title_icon_right"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/home_feed_rank_title_icon_right"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/home_feed_rank_tip_icon_right"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_feed_rank_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_171717"
        android:gravity="start"
        android:layout_gravity="center_vertical"
        android:id="@+id/home_feed_rank_right_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部"/>
    <ImageView
        android:id="@+id/home_feed_rank_right_arrow"
        android:layout_width="13.5dp"
        android:layout_height="15dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/pioneer_right_arrow_black"
        android:text="@string/iconfont_changbingjiantou"/>
</LinearLayout>
