<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/tv_tips_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_21dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingRight="@dimen/margin_21dp"
        android:paddingBottom="@dimen/margin_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12dp"/>
</LinearLayout>
