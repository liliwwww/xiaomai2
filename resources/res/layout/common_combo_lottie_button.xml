<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/btn_icon_container"
        android:visibility="gone"
        android:clipChildren="false"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="5dp">
        <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
            android:id="@+id/btn_icon"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"/>
    </LinearLayout>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="15dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/txt_icon"
        android:visibility="gone"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:includeFontPadding="false"
        android:layout_marginStart="10dp"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:gravity="center"
        android:id="@+id/img_icon"
        android:visibility="gone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:scaleType="center"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="9dp"
        app:fadeDuration="@integer/default_enter_duration"
        app:failureImageScaleType="center"
        app:placeholderImageScaleType="center"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="16dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:id="@+id/btn_txt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:includeFontPadding="false"/>
</merge>
