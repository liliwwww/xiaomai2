<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="9dp"
    android:layout_width="match_parent"
    android:layout_height="72dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/order_success_vip_benefit_item_pic"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:placeholderImage="@color/d8d8d8"
        app:roundedCornerRadius="4dp"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/member_main_title"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/order_success_vip_benefit_item_btn"
        android:layout_width="82dp"
        android:layout_height="27dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/member_main_title"
        android:ellipsize="end"
        android:id="@+id/order_success_vip_benefit_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/order_success_vip_benefit_item_btn"
        android:layout_toRightOf="@+id/order_success_vip_benefit_item_pic"
        android:layout_centerVertical="true"/>
</merge>
