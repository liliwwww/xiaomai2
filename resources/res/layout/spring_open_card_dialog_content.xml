<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="21dp"
    android:paddingRight="15dp"
    android:paddingBottom="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#fff12140"
        android:gravity="center"
        android:id="@+id/tv_spring_dialog_subtitle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/iv_spring_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_open_card_loading_contain"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="270dp">
        <ImageView
            android:id="@+id/iv_spring_dialog_content_error"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sys_network_error_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/pb_loading_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_tpp_primary_title"
            android:gravity="center_horizontal"
            android:id="@+id/tv_loading_des"
            android:paddingTop="21dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="@string/spring_open_card_info_error"
            app:layout_constraintTop_toBottomOf="@+id/iv_spring_dialog_content_error"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:gravity="center"
            android:id="@+id/btn_spring_open_card_refresh"
            android:background="@drawable/open_card_refresh_bg"
            android:visibility="gone"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginBottom="24dp"
            android:text="@string/refresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_loading_des"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
