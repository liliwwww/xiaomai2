<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_two_corner_white_bg"
    android:paddingLeft="12dp"
    android:paddingTop="6dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/film_detail_bottom_container"
        android:background="@drawable/top_two_corner_white_bg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/film_detail_bottom_left_container"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_black"
                android:ellipsize="end"
                android:id="@+id/film_detail_bottom_left_maindes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:id="@+id/film_detail_bottom_left_subdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/film_detail_bottom_right_container"
            android:background="@drawable/common_red_small_btn_7_3"
            android:layout_width="170dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/film_detail_bottom_right_container_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp">
                <View
                    android:background="@drawable/pioneer_buy_button_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:id="@+id/film_detail_bottom_atmosphere"
                android:background="@drawable/filmdetail_bottom_btn_atmosphere_onshow"
                android:paddingTop="2dp"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.alibaba.pictures.moimage.MoImageView
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/film_detail_bottom_atmosphere_icon"
                    android:visibility="gone"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:roundBottomRight="true"
                    app:roundTopRight="true"
                    app:roundedCornerRadius="45dp"/>
                <com.alibaba.pictures.moimage.MoImageView
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/film_detail_bottom_flash_avatar"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="3.5dp"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="19dp"
                    app:roundingBorderColor="@color/color_tpp_primary_white"
                    app:roundingBorderWidth="1dp"/>
                <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
                    android:layout_gravity="end"
                    android:id="@+id/film_detail_bottom_atmosphere_layter_top"
                    android:visibility="visible"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:lottie_loop="true"
                    app:lottie_url="@string/flash_packet_atmosphere_lottie_url"/>
            </FrameLayout>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="16dp"
                android:textColor="@color/color_tpp_primary_white"
                android:id="@+id/film_detail_bottom_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginEnd="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/film_detail_bottom_right_maindes"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/film_detail_bottom_right_discount"
                app:layout_constraintTop_toTopOf="@+id/film_detail_bottom_right_maindes"/>
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_white"
                android:id="@+id/film_detail_bottom_right_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:includeFontPadding="false"
                app:layout_constraintBaseline_toBaselineOf="@+id/film_detail_bottom_right_maindes"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toRightOf="@+id/film_detail_bottom_right_icon"
                app:layout_constraintRight_toLeftOf="@+id/film_detail_bottom_right_maindes"
                app:layout_goneMarginLeft="0dp"/>
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_white"
                android:id="@+id/film_detail_bottom_right_maindes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                app:layout_constraintBottom_toTopOf="@+id/film_detail_bottom_right_subdes"
                app:layout_constraintLeft_toRightOf="@+id/film_detail_bottom_right_discount"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_goneMarginLeft="0dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_tpp_primary_70_white"
                android:id="@+id/film_detail_bottom_right_subdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/film_detail_bottom_right_maindes"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>
