<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/project_item_pull_to_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.damai.uikit.irecycler.DamaiRootRecyclerView
                android:id="@+id/project_item_detail_recycler_view"
                android:fadingEdge="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:overScrollMode="never"/>
        </FrameLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <ViewStub
        android:id="@+id/project_item_not_exist_view_stub"
        android:layout="@layout/trade_project_detail_not_exist_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/project_item_fix_title_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/project_new_title"
            layout="@layout/header_project_title_layout"/>
        <cn.damai.trade.newtradeorder.ui.projectdetail.projectdetailitem.ui.view.AnchorIndicatorView
            android:id="@+id/project_item_anchor_indicator_fixed"
            android:background="@color/color_ffffff"
            android:padding="0dp"
            android:paddingLeft="@dimen/margin_30dp"
            android:paddingRight="@dimen/margin_30dp"
            android:layout_width="match_parent"
            android:layout_height="53dp"/>
        <View
            android:id="@+id/header_line_divider"
            android:background="@color/master_black_10"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</merge>
