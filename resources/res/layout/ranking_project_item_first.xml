<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="6.5dp"
    android:paddingBottom="6.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layout_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_project"
        android:background="@drawable/rank_item_first_bg_normal"
        android:paddingLeft="12dp"
        android:paddingTop="32dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp">
        <FrameLayout
            android:background="@drawable/project_image_common_bg"
            android:padding="0.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/image_project"
                android:layout_width="111dp"
                android:layout_height="148dp"
                android:src="@drawable/uikit_default_image_bg_gradient"
                android:scaleType="fitXY"
                app:borderRadius="2dp"
                app:type="radial"/>
            <cn.damai.uikit.tag.DMCategroyTagView
                android:layout_gravity="right"
                android:id="@+id/tv_type_mark"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingExtra="2dp"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_666666"
                android:ellipsize="end"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_4caeaf"
                android:gravity="center"
                android:id="@+id/tv_tag_new"
                android:background="@drawable/rank_item_new_tag_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/layout_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.5dp">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_see"
            android:background="@drawable/common_tag_yellow_moon_bg"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="29.2dp"
            android:layout_marginLeft="132dp"/>
        <ImageView
            android:layout_width="143dp"
            android:layout_height="32dp"
            android:src="@drawable/rank_first_tag"
            android:scaleType="fitXY"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="171dp">
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="16dp"
            android:textColor="@color/color_ff2d79"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_666666"
            android:id="@+id/tv_price_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/btn_buy"
        android:background="@drawable/common_btn_bg"
        android:paddingBottom="4dp"
        android:visibility="visible"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_marginTop="165dp"
        android:layout_marginRight="30dp"
        android:singleLine="true"/>
</FrameLayout>
