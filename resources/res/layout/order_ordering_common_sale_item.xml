<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp">
    <TextView
        android:textSize="13dp"
        android:textColor="@color/tpp_gray_1"
        android:ellipsize="end"
        android:id="@+id/order_sale_item_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:includeFontPadding="false"
        android:layout_alignParentTop="true"/>
    <com.taobao.movie.android.commonui.widget.RoundedTextViewNewStyle
        android:textSize="10dp"
        android:textColor="@color/common_color_1049"
        android:gravity="center"
        android:id="@+id/order_sale_item_person_tag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:includeFontPadding="false"
        app:background_color="@color/common_color_1049"
        app:padding_horizontal="3"
        app:round_radius="2"
        app:round_radius_unit="dp"
        app:round_type="stroke"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/common_color_1049"
        android:gravity="center"
        android:id="@+id/order_sale_item_bought"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:text="上次买过"
        android:layout_below="@+id/order_sale_item_detail"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            app:alignItems="flex_end"
            app:flexWrap="nowrap">
            <TextView
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_primary_red"
                android:ellipsize="end"
                android:gravity="bottom"
                android:id="@+id/order_sale_item_price_desc"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:includeFontPadding="false"
                app:layout_flexShrink="1"/>
            <TextView
                android:textSize="@dimen/text_size_16_dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_primary_red"
                android:gravity="bottom"
                android:id="@+id/order_sale_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-2dp"
                android:maxLines="1"
                android:singleLine="true"
                android:includeFontPadding="false"
                app:layout_flexShrink="0"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/tpp_secondary_green"
                android:gravity="bottom"
                android:id="@+id/order_sale_item_mcard_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="-1dp"
                android:text="ADA"
                android:maxLines="1"
                android:singleLine="true"
                app:layout_flexShrink="0"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:gravity="bottom"
                android:id="@+id/order_sale_item_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="-1dp"
                android:text="adaf"
                android:maxLines="1"
                android:singleLine="true"
                app:layout_flexShrink="0"/>
        </com.google.android.flexbox.FlexboxLayout>
        <com.taobao.movie.android.commonui.widget.SelectAmountView
            android:id="@+id/order_sale_item_select_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</RelativeLayout>
