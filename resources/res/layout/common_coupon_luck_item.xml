<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/iv_coupon_luck_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="h,1035:177"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/v_left_location"
        android:layout_width="1px"
        android:layout_height="1px"
        app:layout_constraintHorizontal_bias="0.2275"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14dp"
        android:textColor="#ff472e"
        android:ellipsize="end"
        android:id="@+id/tv_schedule_coupon_luck_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="@+id/v_left_location"
        app:layout_constraintRight_toLeftOf="@+id/tv_schedule_coupon_luck_get"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.commonui.widget.RoundedTextView
        android:textSize="10dp"
        android:textColor="@color/common_color_1080"
        android:id="@+id/tv_schedule_coupon_luck_tag"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        app:background_color="@color/common_color_1080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_schedule_coupon_luck_name"
        app:round_radius="6"
        app:round_type="stroke"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/common_color_1080"
        android:gravity="center"
        android:id="@+id/tv_schedule_coupon_luck_get"
        android:background="@drawable/schedule_luck_coupon_get"
        android:layout_width="54dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
