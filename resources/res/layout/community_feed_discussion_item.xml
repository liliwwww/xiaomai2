<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/f3f6fb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_discuss_bg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:id="@+id/tv_column_name"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/text_line"
                android:background="@color/color_tpp_primary_subtitle"
                android:layout_width="@dimen/space_line_1_px"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_column_name"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:ellipsize="end"
                android:id="@+id/film_name_txt"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:maxLines="1"
                android:includeFontPadding="false"
                app:layout_constraintBaseline_toBaselineOf="@+id/colum_name_txt"
                app:layout_constraintLeft_toRightOf="@+id/text_line"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.taobao.movie.android.app.common.widget.UserIconView
                android:id="@+id/user_icon_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_column_name"/>
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_black"
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@+id/user_icon_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_column_name"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                app:layout_constraintLeft_toRightOf="@+id/user_icon_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_tpp_primary_black"
                android:ellipsize="end"
                android:id="@+id/tv_discuss_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_icon_view"/>
            <FrameLayout
                android:id="@+id/picture_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_discuss_content">
                <com.taobao.movie.android.app.oscar.ui.community.view.SixPictureView
                    android:layout_gravity="start"
                    android:id="@+id/picture_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <com.taobao.movie.android.app.common.widget.CommunityCommentView
                android:id="@+id/community_comment_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture_layout"/>
            <com.taobao.movie.android.app.common.widget.CommunityInputView
                android:id="@+id/community_input_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/community_comment_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
