<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_round_rect_gray_stroke_26000000_r12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/card_ui"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/drama_pic"
                android:layout_width="48dp"
                android:layout_height="64dp"
                app:borderRadius="4dp"
                app:type="radial"/>
            <RelativeLayout
                android:paddingLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/color_333333"
                    android:ellipsize="end"
                    android:id="@+id/drama_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_toLeftOf="@+id/tv_btn"
                    android:layout_marginEnd="6dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_9C9CA5"
                    android:ellipsize="end"
                    android:id="@+id/drama_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:layout_toLeftOf="@+id/tv_btn"
                    android:layout_below="@+id/drama_title"
                    android:layout_marginEnd="6dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/drama_score_ui"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_below="@+id/drama_desc">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#4d4d56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大麦评分"/>
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="12dp"
                        android:textColor="#ff8f3f"
                        android:id="@+id/drama_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="-2dp"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/textsize_12"
                    android:textColor="#9999de"
                    android:gravity="center"
                    android:id="@+id/tv_btn"
                    android:background="@drawable/content_detail_artist_btn_bg"
                    android:layout_width="54dp"
                    android:layout_height="25dp"
                    android:text="去看看"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/item_relate_project_city_ui"/>
    </LinearLayout>
</FrameLayout>
