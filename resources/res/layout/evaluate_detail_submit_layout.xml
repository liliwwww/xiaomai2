<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp">
    <View
        android:id="@+id/line"
        android:background="#26000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <EditText
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_999999"
            android:gravity="center_vertical"
            android:id="@+id/comment_reply_content"
            android:background="@drawable/evaluate_reply_edittext_bg"
            android:paddingLeft="@dimen/margin_10dp"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_21dp"
            android:maxHeight="115dp"
            android:minHeight="35dp"
            android:layout_toLeftOf="@+id/evaluate_detail_action"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="@dimen/margin_3dp"
            android:textCursorDrawable="@drawable/comment_publish_line"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/evaluate_detail_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <cn.damai.evaluate.view.DMEvaluateDetailPraiseView
                android:id="@+id/detail_praise_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_9dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/comment_publish_submit"
                android:background="@drawable/comment_submit_unable_btn"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="发布"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
