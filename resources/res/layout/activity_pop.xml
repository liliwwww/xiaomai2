<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v_outside"
            android:background="#7e000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/rl_bottom"
            android:background="@drawable/bg_choose_corner_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <TextView
                    android:textSize="@dimen/margin_16dp"
                    android:textColor="@color/color_000000"
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textSize="@dimen/margin_16dp"
                    android:textColor="@color/color_000000"
                    android:id="@+id/left_text_title"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="@dimen/margin_14dp"
                    android:textColor="@color/color_999999"
                    android:gravity="center"
                    android:id="@+id/text_ok"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/iconfont_fucengguanbi16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_title_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_title">
                <View
                    android:id="@+id/line_title"
                    android:background="@color/color_EEEEEE"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/margin_21dp"
                    android:layout_marginRight="@dimen/margin_21dp"/>
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="#9b9b9b"
                    android:gravity="center"
                    android:id="@+id/title_tip"
                    android:background="@color/color_f8f8f8"
                    android:paddingTop="9dp"
                    android:paddingBottom="@dimen/margin_9dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取票地址在演出前可能有调整，最终地址请在下单后查看票夹"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_bottom_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_title_bottom">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <FrameLayout
                    android:id="@+id/rc_bottom"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </RelativeLayout>
        <cn.damai.uikit.view.DMLabelView
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_confirm"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <cn.damai.ultron.view.component.QuickAlphabeticBar
        android:textSize="11dp"
        android:textColor="#2c9bff"
        android:layout_gravity="right"
        android:id="@+id/quick_alphabetic"
        android:paddingTop="6dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1dp"/>
</FrameLayout>
