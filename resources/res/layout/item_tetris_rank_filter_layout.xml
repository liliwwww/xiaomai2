<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/id_tetris_rank_top_round_bg"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/id_tetris_rank_layout"
            android:background="@drawable/shape_rank_rect_top_corners_12_solid_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="46dp">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/id_rank_f_main_btn_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    app:tabIndicatorHeight="4dp"
                    app:tabMinWidth="32dp"
                    app:tabMode="scrollable"
                    app:tabPaddingEnd="9dp"
                    app:tabPaddingStart="9dp"
                    app:tabRippleColor="@color/transparent"
                    app:tabSelectedTextColor="@color/color_000000"
                    app:tabTextAppearance="@style/tab_layout_one_text_style"
                    app:tabTextColor="@color/color_9c9ca5"/>
                <View
                    android:layout_gravity="right"
                    android:background="@drawable/shape_rank_right_mask"
                    android:layout_width="32dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="15dp"/>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_rank_f_sub_btn_lv"
                android:layout_width="match_parent"
                android:layout_height="33dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:paddingBottom="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/color_9c9ca5"
                    android:ellipsize="end"
                    android:id="@+id/id_rank_f_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/color_666666"
                    android:ellipsize="end"
                    android:id="@+id/id_rank_city_tip"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="当前分类演出较少，看看其它城市吧~"
                    android:lines="1"/>
            </LinearLayout>
        </LinearLayout>
        <include
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_tetris_rank_empty_layout"/>
    </LinearLayout>
</FrameLayout>
