<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ip_brand_root"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/ip_brand_title"
        android:paddingLeft="@dimen/default_component_margin_rl"
        android:paddingTop="@dimen/default_component_title_margintop"
        android:paddingBottom="@dimen/default_component_content_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属品牌"/>
    <RelativeLayout
        android:id="@+id/ip_brand_container"
        android:paddingLeft="@dimen/default_component_margin_rl"
        android:paddingRight="@dimen/default_component_margin_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:id="@+id/ip_brand_card_dynnews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-14dp"
            android:layout_below="@+id/ip_brand_card_line1">
            <cn.damai.uikit.view.round.RoundImageView2
                android:id="@+id/brandip_top_imgbg_bottomshadow"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                app:rBottomLeftRadius="12dp"
                app:rBottomRightRadius="12dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ip_brand_card_dynnews_card"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/title_latest_news"/>
                <ViewFlipper
                    android:gravity="center_vertical"
                    android:id="@+id/ip_brand_card_dynnews_flipper"
                    android:background="@drawable/bg_border_corner_5fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:inAnimation="@anim/flipper_in"
                    android:outAnimation="@anim/flipper_out"
                    android:layout_weight="1">
                    <include
                        android:id="@+id/ip_brand_card_dynnews_flipper_item"
                        layout="@layout/ip_brand_card_dynnews_flipper_item"/>
                </ViewFlipper>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ip_brand_card_line1"
            android:background="@drawable/bg_border_corner_trans_12"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <cn.damai.uikit.view.round.RoundImageView2
                android:id="@+id/brandip_top_imgbg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:rRadius="12dp"/>
            <cn.damai.uikit.view.round.RoundImageView2
                android:id="@+id/brandip_top_imgbg_cover"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:rRadius="12dp"/>
            <cn.damai.uikit.view.round.RoundImageView2
                android:id="@+id/brandip_top_imgbg_cover_4"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:rRadius="12dp"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_ffffff"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_brand_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="11dp"
                android:maxWidth="200dp"
                android:text="name"
                android:maxLines="1"
                android:layout_toRightOf="@+id/ip_brand_card_img"
                android:layout_alignWithParentIfMissing="true"/>
            <ImageView
                android:id="@+id/ip_brand_card_name_v"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/user_v_tag_brand"
                android:layout_toRightOf="@+id/ip_brand_card_name"
                android:layout_alignBottom="@+id/ip_brand_card_name"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/iconfont_youjiantou24"
                android:layout_toRightOf="@+id/ip_brand_card_name_v"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_ffffff"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_brand_card_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:maxWidth="200dp"
                android:text="descdesc"
                android:maxLines="1"
                android:layout_toRightOf="@+id/ip_brand_card_img"
                android:layout_below="@+id/ip_brand_card_name"
                android:layout_alignWithParentIfMissing="true"/>
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/ip_brand_card_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/uikit_user_default_icon"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:type="linear"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/brandip_top_imgbg_4"
                android:visibility="visible"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:rBottomRightRadius="12dp"
                app:rTopRightRadius="12dp"/>
            <cn.damai.commonbusiness.view.AttentionView
                android:id="@+id/attent_view_ipbrand"
                android:visibility="gone"
                android:layout_width="57dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignWithParentIfMissing="true"
                app:noattention_backgroud="@drawable/attention_btn_followed_normal"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ip_brand_card_line2"
            android:background="@drawable/bg_border_corner_15_0top"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip_brand_card_dynnews">
            <include
                android:id="@+id/mine_brand_project_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mine_brand_project_2"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/card_brand_ip_item_vertical"/>
            <include
                android:id="@+id/mine_brand_project_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mine_brand_project_3"
                app:layout_constraintStart_toEndOf="@+id/mine_brand_project_1"
                app:layout_constraintTop_toTopOf="@+id/mine_brand_project_1"
                layout="@layout/card_brand_ip_item_vertical"/>
            <include
                android:id="@+id/mine_brand_project_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mine_brand_project_2"
                app:layout_constraintTop_toTopOf="@+id/mine_brand_project_1"
                layout="@layout/card_brand_ip_item_vertical"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ip_brand_card_line3"
            android:background="@drawable/bg_border_corner_15_0top"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip_brand_card_dynnews">
            <include
                android:id="@+id/ip_brand_card_item1"
                layout="@layout/card_brand_ip_item_horizontal"/>
            <View
                android:background="#1a000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <include
                android:id="@+id/ip_brand_card_item2"
                layout="@layout/card_brand_ip_item_horizontal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
