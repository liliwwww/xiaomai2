<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:paddingTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_20dp"
        android:textColor="@color/color_000000"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ticklet_face_unbind_note_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ticklet_face_unbind_ticket_seat_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_666666"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ticklet_face_unbind_cert_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/ticklet_face_unbind_operation_lv"
        android:paddingBottom="40dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="#0e0e0e"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ticklet_face_unbind_tv"
            android:background="@drawable/ticklet_face_unbind_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticklet_face_unbind_entrance"/>
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ticklet_face_show_credentials_tv"
            android:background="@drawable/btn_rounded_corner_bg_selector"
            android:paddingLeft="26dp"
            android:paddingTop="@dimen/margin_6dp"
            android:paddingRight="26dp"
            android:paddingBottom="@dimen/margin_6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:text="@string/ticklet_face_show_credentials"/>
    </LinearLayout>
</LinearLayout>
