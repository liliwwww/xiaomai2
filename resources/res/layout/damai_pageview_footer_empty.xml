<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/id_foot_rank_define_layout"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_9c9ca5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咦～ 没有了，看看顶部其它分类吧"/>
        <ImageView
            android:layout_width="153dp"
            android:layout_height="31dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon_rank_bottom_logo"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/id_foot_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/foot_icon"
            android:visibility="gone"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginEnd="@dimen/margin_6dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_aaaaaa"
            android:gravity="center"
            android:id="@+id/foot_tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="只有这么多了"/>
    </LinearLayout>
</LinearLayout>
