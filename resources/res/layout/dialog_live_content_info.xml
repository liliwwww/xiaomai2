<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bricks_bg_city_select_corner_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="14dp"
        android:textColor="#000000"
        android:id="@+id/dialog_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="内容详情"
        android:includeFontPadding="false"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#5f6672"
        android:id="@+id/dialog_list_close"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:text="@string/iconfont_guanbi24"
        android:layout_marginEnd="@dimen/margin_15dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_list_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_list_title"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/dialog_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="60dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_list_title">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/dialog_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.core.widget.NestedScrollView>
    <cn.damai.discover.media.ui.LiveCommentActionView
        android:id="@+id/dialog_comment_ll"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
