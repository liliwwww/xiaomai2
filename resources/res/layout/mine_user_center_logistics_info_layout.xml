<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/mine_logistics_project_image_iv"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:src="@drawable/uikit_default_image_bg_gradient"/>
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_111111"
        android:ellipsize="end"
        android:id="@+id/mine_logistics_status_tv"
        android:paddingRight="@dimen/margin_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginTop="26dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/mine_logistics_project_image_iv"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_999999"
        android:id="@+id/mine_logistics_status_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:layout_below="@+id/mine_logistics_status_tv"
        android:layout_alignLeft="@+id/mine_logistics_status_tv"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_999999"
        android:ellipsize="end"
        android:id="@+id/mine_logistics_action_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="33dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/mine_logistics_status_time_tv"
        android:layout_alignTop="@+id/mine_logistics_status_time_tv"/>
</RelativeLayout>
