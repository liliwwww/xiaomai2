<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.HoleCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holecardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:holeBackgroundColor="@color/white"
    app:holeCornerRadius="@dimen/margin_24dp"
    app:holeElevation="8dp"
    app:holeScallopRadius="0dp">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fission_image_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/fission_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/fission_mask_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fission_image_bg"
            android:layout_alignBottom="@+id/fission_image_bg">
            <View
                android:id="@+id/fission_content_up_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fission_content_down_bg"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/fission_content_down_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/cb_main_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:maxLines="2"
            android:layout_above="@+id/cb_sub_message"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#ccffffff"
            android:ellipsize="end"
            android:id="@+id/cb_sub_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:maxLines="1"
            android:layout_above="@+id/cb_user_layout"/>
        <ImageView
            android:id="@+id/fission_placeholer_circle"
            android:layout_width="75dp"
            android:layout_height="93dp"
            android:src="@drawable/fission_circle_icon"
            android:scaleType="fitXY"
            android:layout_above="@+id/cb_placeholer_bg"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/cb_placeholer_bg"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/fission_image_bg"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/cb_user_layout"
            android:paddingLeft="@dimen/margin_18dp"
            android:paddingTop="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cb_my_invite_content">
            <cn.damai.uikit.view.DMAvatar
                android:id="@+id/cb_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@+id/cb_user_name"
                android:paddingLeft="@dimen/margin_6dp"
                android:paddingBottom="@dimen/margin_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3dp"
                android:layout_marginBottom="@dimen/margin_2dp"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/cb_my_invite_content"
            android:background="@drawable/bg_border_bottom_corner_1halfa0"
            android:paddingLeft="@dimen/margin_18dp"
            android:paddingTop="12dp"
            android:paddingRight="@dimen/margin_18dp"
            android:paddingBottom="@dimen/margin_28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:maxLines="2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="8dp"/>
    </RelativeLayout>
</cn.damai.uikit.view.HoleCardView>
