<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:layout_width="match_parent"
    android:layout_height="121dp">
    <ImageView
        android:id="@+id/b_account_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <cn.damai.tetris.component.home.widget.banner.sub.RoundRadiusImageView
        android:id="@+id/b_account_icon"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginRight="9dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:r_round_radius="12dp"/>
    <FrameLayout
        android:id="@+id/b_account_name_ui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b_account_icon"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/b_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"/>
    </FrameLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="#ccffffff"
        android:id="@+id/b_account_fans_and_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去主页"/>
        <ImageView
            android:id="@+id/b_account_arrow_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/icon_white_arrow"/>
        <ImageView
            android:id="@+id/b_account_arrow_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_white_arrow"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
