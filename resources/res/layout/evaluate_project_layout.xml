<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:iv="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:id="@+id/evaluate_project"
    android:background="@drawable/issue_rend_tags_bg"
    android:layout_width="match_parent"
    android:layout_height="66dp">
    <com.alibaba.pictures.bricks.view.DMPosterView
        android:id="@+id/evaluate_project_image"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:layout_margin="@dimen/margin_12dp"
        android:src="@drawable/uikit_default_image_bg_grey"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_111111"
        android:ellipsize="end"
        android:id="@+id/evaluate_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_26dp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/evaluate_project_image"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:id="@+id/evaluate_project_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_26dp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/evaluate_project_image"
        android:layout_below="@+id/evaluate_project_name"/>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="@dimen/margin_9dp"
        android:textColor="#3c3f44"
        android:id="@+id/evaluate_icon_arrow"
        android:paddingTop="@dimen/margin_1dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_12dp"
        android:text="@string/iconfont_youjiantou24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
