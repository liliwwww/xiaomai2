<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/comment_tag_container"
    android:paddingLeft="12dp"
    android:paddingRight="15dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="27dp"
    android:layout_marginRight="9dp"
    android:layout_marginBottom="9dp">
    <ImageView
        android:id="@+id/comment_tag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/tpp_gray_0"
        android:id="@+id/comment_tag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:singleLine="true"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="@dimen/resource_size_11"
        android:textColor="@color/tpp_gray_3"
        android:id="@+id/comment_tag_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:singleLine="true"
        android:includeFontPadding="false"/>
</LinearLayout>
