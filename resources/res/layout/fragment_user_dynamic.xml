<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_main"
    android:background="#f0f3f7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_label"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_publish_container"
            android:paddingLeft="@dimen/margin_12dp"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <cn.damai.uikit.irecycler.DamaiRootRecyclerView
            android:id="@+id/recycler_view"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
