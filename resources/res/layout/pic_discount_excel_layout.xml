<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_6dp"
    android:layout_marginTop="@dimen/margin_9dp"
    android:layout_marginRight="@dimen/margin_6dp">
    <TextView
        android:textSize="@dimen/margin_15dp"
        android:textColor="#2e333e"
        android:id="@+id/item_promotion_excel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_9dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/ll_promotion_excel_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
