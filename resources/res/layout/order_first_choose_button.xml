<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/ll_pay_after_remind"
        android:background="@drawable/bg_border_corner_remind"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_25dp"
        android:layout_marginLeft="@dimen/margin_9dp">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/btn_pay_after_remind"
            android:paddingLeft="6dp"
            android:paddingRight="@dimen/margin_6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒我"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_FF2D79"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/btn_pay_after_seat"
        android:background="@drawable/bg_border_corner_remind"
        android:paddingLeft="@dimen/margin_6dp"
        android:paddingRight="@dimen/margin_6dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_25dp"
        android:layout_marginLeft="@dimen/margin_9dp"
        android:text="去选座"/>
</merge>
