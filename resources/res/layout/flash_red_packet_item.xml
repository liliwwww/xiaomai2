<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:layout_marginLeft="@dimen/cinema_list_page_hor_spacing"
    android:layout_marginRight="@dimen/cinema_list_page_hor_spacing"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/flash_red_packet_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/flash_red_packet_default_bg"
        android:scaleType="centerCrop"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/flash_red_packet_item_aura"
        android:scaleType="fitEnd"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="74dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/flash_red_packet_item_portrait"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/default_disscu_avater"
                android:scaleType="centerCrop"
                app:roundedCornerRadius="24dp"
                app:roundingBorderColor="@color/color_tpp_primary_white"
                app:roundingBorderWidth="1dp"/>
            <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
                android:layout_gravity="center_horizontal"
                android:id="@+id/flash_red_packet_item_flash_tag"
                android:layout_width="51dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_url="@string/flash_packet_tag_lottie_url"/>
            <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_url="@string/flash_packet_atmosphere_lottie_url"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_tpp_primary_white"
                android:ellipsize="end"
                android:id="@+id/flash_red_packet_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_white"
                android:ellipsize="end"
                android:id="@+id/flash_red_packet_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="9dp"
                android:textColor="@color/color_tpp_primary_70_white"
                android:ellipsize="end"
                android:id="@+id/flash_red_packet_item_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.taobao.movie.android.commonui.widget.TimerDigitalClockView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_white"
                android:gravity="center_vertical"
                android:id="@+id/flash_red_packet_item_timer"
                android:layout_width="wrap_content"
                android:layout_height="22dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_tpp_primary_white"
                android:id="@+id/flash_red_packet_item_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
            <TextView
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_primary_red"
                android:id="@+id/flash_red_packet_item_btn"
                android:background="@drawable/common_solid_white_small_btn"
                android:paddingLeft="9dp"
                android:paddingTop="6dp"
                android:paddingRight="9dp"
                android:paddingBottom="6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
