<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#9e000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/dialog_zone"
        android:background="@drawable/comment_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="18dp"
            android:textColor="@color/color_tpp_primary_gray_c8"
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:text="@string/icon_font_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:textSize="@dimen/text_size_16_dp"
                android:textColor="@color/tpp_gray_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="@string/film_comment_dialog_title"/>
        </LinearLayout>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/poster"
            android:layout_width="64dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/ll_title"
            android:layout_centerHorizontal="true"
            app:failureImage="@drawable/oscar_default_image"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/oscar_default_image"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="4dp"/>
        <TextView
            android:textSize="@dimen/text_size_14_dp"
            android:textColor="@color/tpp_gray_1"
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/poster"
            android:layout_centerHorizontal="true"/>
        <FrameLayout
            android:gravity="center_horizontal"
            android:id="@+id/guide_zone"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_below="@+id/show_name">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/no_score_zone"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12_dp"
                    android:textColor="@color/tpp_gray_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/film_comment_dialog_guide_tip"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/score_zone"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="36dp"
                        android:textColor="@color/tpp_secondary_orange"
                        android:layout_gravity="bottom"
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/tpp_secondary_orange"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="@string/film_comment_dialog_score"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <com.taobao.movie.android.commonui.widget.richtext.RichTextView
                    android:textSize="@dimen/text_size_13_dp"
                    android:textColor="@color/tpp_gray_2"
                    android:id="@+id/score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layout_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_zone"
            android:layout_centerHorizontal="true">
            <com.taobao.movie.android.app.oscar.ui.widget.MovieRatingBar
                android:gravity="center"
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:rating="0"
                app:starEmpty="@drawable/star_for_comment_empty"
                app:starFill="@drawable/star_for_comment_full"
                app:starHalf="@drawable/star_for_comment_half"
                app:starMax="5"
                app:star_height="27dp"
                app:star_padding="15dp"
                app:star_width="28dp"/>
            <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
                android:layout_gravity="center"
                android:id="@+id/rating_bar_anim"
                android:layout_width="207dp"
                android:layout_height="51dp"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tip_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/layout_rating"
            android:layout_centerHorizontal="true">
            <View
                android:background="@color/tpp_gray_3"
                android:layout_width="15dp"
                android:layout_height="0.7dp"
                android:layout_marginTop="1dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/tpp_gray_3"
                android:gravity="center"
                android:id="@+id/guide_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:maxLines="1"/>
            <View
                android:background="@color/tpp_gray_3"
                android:layout_width="15dp"
                android:layout_height="0.7dp"
                android:layout_marginTop="1dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
