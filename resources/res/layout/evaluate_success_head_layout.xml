<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/uikit_dialog_customer_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_share"
        android:paddingTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/comment_evaluate_success_share_icon"
            android:scaleType="centerInside"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="#ff45bd"
                android:id="@+id/tv_share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_666666"
                android:id="@+id/tv_share_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_coin"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="21dp">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/comment_evaluate_success_coin_icon"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_582331"
            android:id="@+id/tv_coins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="你的评价获得80会员积分，可兑专享福利哦~"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_582331"
            android:gravity="center"
            android:id="@+id/tv_action_btn"
            android:background="@drawable/evaluate_success_coin_action_btn"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:text="去兑换"/>
    </LinearLayout>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/color_000000"
        android:gravity="center"
        android:id="@+id/tv_comment_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="这是你发表的第XX条评论"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_9C9CA5"
        android:id="@+id/tv_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:text="你的内容会帮忙更多玩家选择剧本哦"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_FF2D79"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_goto_detail"
        android:background="@drawable/evaluate_success_label_pink"
        android:padding="@dimen/margin_4dp"
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="25dp"
        android:text="查看详情"/>
    <TextView
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/tv_hot_play_title"
        android:background="#f8f8f8"
        android:paddingLeft="@dimen/margin_9dp"
        android:paddingTop="25dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门剧本"/>
    <View
        android:background="#f8f8f8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_9dp"/>
</LinearLayout>
