<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="top|left"
        android:orientation="vertical"
        android:id="@+id/container"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/tip_circle_bg"
            android:layout_width="7.5dp"
            android:layout_height="7.5dp"
            android:layout_marginLeft="161dp"/>
        <View
            android:background="#ffc250"
            android:layout_width="1.6dp"
            android:layout_height="27.5dp"
            android:layout_marginLeft="164dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/select_seat_area_tip_message"
            android:background="@drawable/area_tip_bg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="206dp"
            android:layout_height="50.5dp"
            android:text="本场次不同区域票价不同哦，选座时请注意价格~"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>
</FrameLayout>
