<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?attr/actionBarSize">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <include
            android:id="@+id/titlebar_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            layout="@layout/titlebar_left_button_item"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:id="@+id/titlebar_right_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    layout="@layout/titlebar_right_button_item"/>
                <include
                    android:id="@+id/titlebar_right_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/titlebar_right_combo_button_item"/>
                <include
                    android:id="@+id/titlebar_right_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    layout="@layout/titlebar_right_button_item"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/search_view"
                android:background="@drawable/common_search_home_background"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp">
                <com.taobao.movie.android.commonui.widget.IconFontTextView
                    android:textSize="13dp"
                    android:textColor="@color/common_color_1003"
                    android:gravity="center"
                    android:id="@+id/search_view_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_font_search"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/common_color_1003"
                    android:ellipsize="end"
                    android:id="@+id/search_view_txt"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/home_search_tip"
                    android:maxLines="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</merge>
