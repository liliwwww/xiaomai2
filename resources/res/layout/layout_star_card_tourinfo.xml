<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/kv_star_tour_info"
        android:paddingLeft="21dp"
        android:paddingTop="15dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.StrokeLinearLayout
            android:id="@+id/kv_star_tour_info_video_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:sl_corners_radius="12dp">
            <cn.damai.player.video.ProxyVideoView
                android:id="@+id/kv_star_tour_info_video_v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </cn.damai.uikit.view.StrokeLinearLayout>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/kv_star_tour_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/kv_star_tour_info_price"
            android:layout_below="@+id/kv_star_tour_info_video_ui"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/kv_star_tour_info_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/kv_star_tour_info_video_ui"
            android:layout_alignTop="@+id/kv_star_tour_info_name"
            android:layout_alignParentRight="true">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="12dp"
                android:textColor="#ff2869"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@+id/tv_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:text="¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="#ff2869"
                android:gravity="top"
                android:id="@+id/kv_star_tour_info_pricevalue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-2dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_666666"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:text="起"/>
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/qrcode_info_body"
            android:id="@+id/kv_star_tour_info_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/kv_star_tour_info_name"/>
        <HorizontalScrollView
            android:id="@+id/kv_star_tour_info_tags"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/kv_star_tour_info_desc">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/kv_star_tour_info_tags_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </HorizontalScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/nkv_star_tour_info"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <HorizontalScrollView
        android:id="@+id/star_tour_info_cities"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/star_tour_info_cities_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</LinearLayout>
