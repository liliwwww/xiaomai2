<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <cn.damai.commonbusiness.seatbiz.sku.qilin.ui.view.MinWidthLinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/perform_textView_layout"
        android:background="@drawable/sku_perform_bg"
        android:paddingLeft="13dp"
        android:paddingTop="14dp"
        android:paddingRight="13dp"
        android:paddingBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="9dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/perform_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_666666"
            android:id="@+id/perform_seat_tip_tv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6dp"/>
    </cn.damai.commonbusiness.seatbiz.sku.qilin.ui.view.MinWidthLinearLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_FF2D79"
        android:gravity="center"
        android:id="@+id/tv_hui"
        android:background="@drawable/bg_common_red_trans10"
        android:paddingLeft="2dp"
        android:paddingTop="0.5dp"
        android:paddingRight="2dp"
        android:paddingBottom="0.5dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="æƒ "/>
    <LinearLayout
        android:layout_gravity="top|left"
        android:orientation="vertical"
        android:id="@+id/layout_yushou"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp">
        <TextView
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_yushou"
            android:background="@drawable/sku_common_tag_bg"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_yushou_sanjiao"
            android:background="@color/color_FF5F5F"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_marginLeft="-9.5dp"
            android:layout_marginTop="-6.5dp"
            android:rotation="155"/>
    </LinearLayout>
</FrameLayout>
