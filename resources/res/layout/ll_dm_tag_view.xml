<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/dm_tag_f2f2f2_bg"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_24dp"
    android:paddingStart="3.5dp"
    android:paddingEnd="9dp">
    <FrameLayout
        android:id="@+id/fl_dm_img_container"
        android:background="@drawable/dm_tag_header_bg"
        android:layout_width="@dimen/margin_18dp"
        android:layout_height="@dimen/margin_18dp">
        <com.alibaba.pictures.bricks.view.RoundRadiusImageView
            android:id="@+id/riv_dm_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            app:r_round_radius="@dimen/margin_30dp"/>
    </FrameLayout>
    <ImageView
        android:layout_width="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_11dp"
        android:layout_marginTop="0.5dp"
        android:src="@drawable/icon_dm_img"
        android:layout_marginStart="6dp"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="#2e333f"
        android:ellipsize="end"
        android:id="@+id/tv_dm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="84dp"
        android:maxLines="1"
        android:layout_marginStart="3dp"/>
    <TextView
        android:textSize="@dimen/margin_11dp"
        android:textColor="#5e6572"
        android:ellipsize="end"
        android:id="@+id/tv_dm_tag_1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="9dp"/>
    <View
        android:id="@+id/v_dm_tag_line"
        android:background="@color/color_c8c8c8"
        android:visibility="gone"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/margin_11dp"
        android:layout_marginTop="0.5dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>
    <TextView
        android:textSize="@dimen/margin_11dp"
        android:textColor="#5e6572"
        android:ellipsize="end"
        android:id="@+id/tv_dm_tag_2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
</LinearLayout>
