<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/page_title_bar_status_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/media_page_title_bar"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_height">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="22dp"
            android:textColor="@color/color_bricks_primary_white"
            android:gravity="center"
            android:id="@+id/media_page_title_bar_back_btn"
            android:background="@drawable/title_back_bg_solid_r9_70_black"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:text="@string/iconfont_zuojiantou_"
            android:paddingStart="5dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="21dp"
            android:textColor="@color/color_bricks_primary_white"
            android:gravity="center"
            android:id="@+id/media_page_title_bar_share_btn"
            android:background="@drawable/title_back_bg_solid_r9_70_black"
            android:visibility="visible"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:text="@string/iconfont_fenxiang44"/>
    </LinearLayout>
</LinearLayout>
