<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_bricks_component_venue_coupon_item"
    android:layout_width="match_parent"
    android:layout_height="27dp"
    android:layout_marginTop="@dimen/margin_5dp"
    android:layout_marginBottom="@dimen/margin_4dp"
    android:layout_marginStart="63dp"
    android:layout_marginEnd="@dimen/margin_12dp"
    app:alignItems="center">
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="@dimen/resource_size_18"
        android:textColor="@color/color_pioneer_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_fill_youhuiquan"
        android:layout_marginStart="@dimen/margin_9dp"
        app:layout_flexShrink="0"/>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/color_pioneer_primary"
        android:ellipsize="end"
        android:id="@+id/coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_5dp"
        app:layout_flexShrink="1"/>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="#8b93a5"
        android:id="@+id/coupon_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_3dp"
        app:layout_flexGrow="1"
        app:layout_flexShrink="0"/>
    <TextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/color_pioneer_primary"
        android:id="@+id/coupon_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="领取"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_flexShrink="0"/>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/color_pioneer_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_xf_bofang"
        android:layout_marginStart="@dimen/margin_1dp"
        android:layout_marginEnd="@dimen/margin_6dp"
        app:layout_flexShrink="0"/>
</com.google.android.flexbox.FlexboxLayout>
