<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_subtitle"
        android:gravity="end"
        android:id="@+id/oscar_cinema_detail_item_evaluate_right_inneritem_title"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"/>
    <ProgressBar
        android:id="@+id/oscar_cinema_detail_item_evaluate_right_inneritem_progress"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:progress="0"
        android:layout_weight="1"
        style="@style/NormalProgressbarStyle"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/common_color_1049"
        android:gravity="center"
        android:id="@+id/oscar_cinema_detail_item_evaluate_right_inneritem_ratio"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text=""/>
</LinearLayout>
