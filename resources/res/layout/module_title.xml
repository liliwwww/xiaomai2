<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <TextView
        android:textSize="20dp"
        android:textColor="@color/color_000000"
        android:id="@+id/module_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/module_title_more_layout_1"
        android:background="@drawable/module_title_more_bg"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/module_title_more_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou_"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/module_title_more_layout_2"
        android:background="@drawable/module_title_more_bg"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="9dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/module_title_more_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou_"/>
    </LinearLayout>
</LinearLayout>
