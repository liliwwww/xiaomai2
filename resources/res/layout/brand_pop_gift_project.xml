<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/brand_redgift_project_shadow"
    android:paddingLeft="21dp"
    android:paddingTop="8dp"
    android:paddingRight="21dp"
    android:paddingBottom="9.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_corner_12_white_blackborder"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <cn.damai.uikit.view.DMPosterView
            android:id="@+id/popproj_poster"
            android:layout_width="86dp"
            android:layout_height="115dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_12dp">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/popproj_tv_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="30dp"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/margin_3dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/popproj_tv_project_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/popproj_tv_project_vanue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/popproj_tv_project_count"
                    android:background="@drawable/star_attention_bg_red"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立减"/>
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:id="@+id/ll_child_price"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="12dp"
                        android:textColor="@color/color_FF2869"
                        android:id="@+id/tv_fuhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-0.5dp"
                        android:text="¥"/>
                    <cn.damai.uikit.number.DMDigitTextView
                        android:textSize="16dp"
                        android:textColor="@color/color_FF2869"
                        android:id="@+id/tv_project_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-0.5dp"
                        android:text="130"/>
                    <TextView
                        android:textSize="@dimen/margin_10dp"
                        android:textColor="@color/color_9C9CA5"
                        android:id="@+id/tv_project_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_3dp"
                        android:text="起"/>
                    <TextView
                        android:textSize="@dimen/margin_16dp"
                        android:textColor="@color/color_FF2D79"
                        android:id="@+id/tv_project_price_unknow"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格待定"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="9dp"
        android:textColor="#80404040"
        android:id="@+id/popproj_close"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/iconfont_guanbi_"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
