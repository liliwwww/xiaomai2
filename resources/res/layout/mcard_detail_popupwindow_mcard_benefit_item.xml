<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/benefit_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="6dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_main_title"
            android:id="@+id/benefit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/benefit_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
