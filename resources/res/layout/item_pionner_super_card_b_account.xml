<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="@dimen/resource_size_70"
    android:layout_height="@dimen/resource_size_78">
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/b_account_item_selected_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/selected_box"
            android:background="@drawable/bg_pioneer_super_card_category_b_account_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/b_account_item_selected_indicator"
            android:background="@drawable/bg_pioneer_super_card_category_b_account_selected_bottom"
            android:layout_width="@dimen/resource_size_31"
            android:layout_height="@dimen/resource_size_8"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/b_account_lay"
        android:layout_width="@dimen/resource_size_64"
        android:layout_height="@dimen/resource_size_64"
        android:layout_marginBottom="@dimen/resource_size_11"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/resource_size_12"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <cn.damai.pioneer.component.supercard.v2.SCardItemFlipper
            android:id="@+id/item_flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:flipInterval="2000"
            android:layout_centerInParent="true"
            android:autoStart="false"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_gravity="end|top"
        android:id="@+id/reservation"
        android:background="@drawable/icon_s_card_reservation"
        android:visibility="visible"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="-1px"
        android:layout_marginRight="-1px"
        android:layout_alignTop="@+id/b_account_lay"
        android:layout_alignRight="@+id/b_account_lay"/>
</RelativeLayout>
