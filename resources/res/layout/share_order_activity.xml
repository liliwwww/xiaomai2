<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <ScrollView
        android:id="@+id/share_scrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxWidth="@dimen/share_order_max_width">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/share_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/share_content_head"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="86dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="16dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/share_content_user_img"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="9dp"
                    android:scaleType="centerCrop"
                    app:failureImage="@drawable/mine_icon_user_default_none_login"
                    app:roundAsCircle="true"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="9dp"
                    android:layout_weight="1">
                    <com.google.android.flexbox.FlexboxLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:alignItems="center">
                        <TextView
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="#2e333e"
                            android:ellipsize="end"
                            android:id="@+id/share_content_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:includeFontPadding="false"
                            app:layout_flexShrink="1"/>
                        <com.alibaba.pictures.moimage.MoImageView
                            android:id="@+id/share_content_user_member_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_marginLeft="6dp"
                            android:scaleType="centerCrop"
                            app:layout_flexShrink="0"/>
                    </com.google.android.flexbox.FlexboxLayout>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#2e333e"
                        android:ellipsize="end"
                        android:id="@+id/share_content_user_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/share_content_user_info_visible_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="21dp"/>
            </LinearLayout>
            <com.alibaba.pictures.bricks.view.ticket.TicketAreaCardView
                android:id="@+id/layout_ticket_area"
                android:layout_width="match_parent"
                android:layout_height="336dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:layout_gravity="center"
                    android:id="@+id/layout_bottom_channel_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/layout_bottom_qrcode_area_ll"
                    android:background="@drawable/share_order_qrcode_area_black_diamond_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.alibaba.pictures.moimage.MoImageView
                        android:id="@+id/layout_bottom_qrcode_area_img"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginTop="12dp"
                        app:roundBottomLeft="true"
                        app:roundBottomRight="true"
                        app:roundTopLeft="true"
                        app:roundTopRight="true"
                        app:roundedCornerRadius="6dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:id="@+id/layout_bottom_qrcode_area_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="长按识别二维码\10来大麦看精彩演出"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/share_title_layout"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/status_bar_gap"
            android:layout_width="match_parent"
            android:layout_height="21dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/icon_back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/iconfont_fanhui24"/>
    </LinearLayout>
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/share_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:maxWidth="@dimen/share_order_max_width"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>
    <LinearLayout
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/share_board"
        android:background="@drawable/bg_share_board"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/share_order_max_width">
        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_channel"
                android:paddingLeft="21dp"
                android:paddingTop="21dp"
                android:paddingRight="21dp"
                android:paddingBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <cn.damai.commonbusiness.share.view.ShareBoardItemLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/share_save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:gravity="center"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/share_save_icon"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="存到手机"/>
                </cn.damai.commonbusiness.share.view.ShareBoardItemLayout>
                <cn.damai.commonbusiness.share.view.ShareBoardItemLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/share_wechat_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:gravity="center"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/share_wechat_icon"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="@string/damai_share_micro_channel_friends"/>
                </cn.damai.commonbusiness.share.view.ShareBoardItemLayout>
                <cn.damai.commonbusiness.share.view.ShareBoardItemLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/share_wechat_circle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:gravity="center"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/share_wechat_circle_icon"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="@string/damai_share_circle_friends"/>
                </cn.damai.commonbusiness.share.view.ShareBoardItemLayout>
                <cn.damai.commonbusiness.share.view.ShareBoardItemLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/share_qq_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:gravity="center"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/share_qq_icon"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="@string/damai_share_qq_friends"/>
                </cn.damai.commonbusiness.share.view.ShareBoardItemLayout>
                <cn.damai.commonbusiness.share.view.ShareBoardItemLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/share_sina_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:gravity="center"
                        android:id="@+id/imageView2"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/share_sina_icon"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="微博"/>
                </cn.damai.commonbusiness.share.view.ShareBoardItemLayout>
                <cn.damai.commonbusiness.share.view.ShareBoardItemLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/share_dingding_circle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:gravity="center"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/share_ding_circle_icon"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="钉钉"/>
                </cn.damai.commonbusiness.share.view.ShareBoardItemLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</FrameLayout>
