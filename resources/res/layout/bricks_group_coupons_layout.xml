<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bricks_group_coupons_bg"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="16dp"
        android:textColor="#333333"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bricks_group_coupons_title"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#333333"
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"/>
    <View
        android:background="#1a000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"/>
    <com.alibaba.pictures.bricks.coupon.order.view.CouponsListView
        android:id="@+id/rl_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/sp_line2"
        android:background="#1a000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="13dp"
        android:textColor="#30aeff"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_show_all"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="49dp"/>
</LinearLayout>
