<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/comment_film_container"
    android:background="@drawable/common_film_container_bg"
    android:padding="6dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/comment_film_image"
        android:background="@color/common_text_color14"
        android:layout_width="36dp"
        android:layout_height="50dp"
        app:actualImageScaleType="centerCrop"
        app:fadeDuration="0"
        app:failureImage="@drawable/oscar_default_image"
        app:failureImageScaleType="centerInside"
        app:placeholderImage="@drawable/oscar_default_image"
        app:placeholderImageScaleType="centerInside"
        app:retryImage="@drawable/oscar_default_image"
        app:retryImageScaleType="centerInside"
        app:roundedCornerRadius="2dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="9dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/common_text_color38"
            android:ellipsize="end"
            android:id="@+id/comment_film_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/common_text_color40"
            android:ellipsize="end"
            android:id="@+id/comment_film_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>
