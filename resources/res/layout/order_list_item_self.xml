<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_time_status_view"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingRight="@dimen/margin_15dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <include layout="@layout/layout_order_detail_line"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_000000"
        android:id="@+id/tv_self_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/time_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_self_desc"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/tv_self_day"
            android:paddingLeft="@dimen/margin_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/tv_self_hour"
            android:background="@drawable/bg_border_corner_time"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingTop="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_3dp"
            android:paddingBottom="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingRight="@dimen/margin_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/tv_self_min"
            android:background="@drawable/bg_border_corner_time"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingTop="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_3dp"
            android:paddingBottom="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_1dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_000000"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingRight="@dimen/margin_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_000000"
            android:id="@+id/tv_self_sec"
            android:background="@drawable/bg_border_corner_time"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingTop="@dimen/margin_1dp"
            android:paddingRight="@dimen/margin_3dp"
            android:paddingBottom="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
