<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <cn.damai.tetris.component.home.widget.HomeTabScrollView
            android:layout_gravity="bottom"
            android:id="@+id/homepage_rank_top_tablayout"
            android:paddingLeft="12dp"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/homepage_rank_top_more_layout"
            android:background="@drawable/homepage_module_title_more_bg"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_000000"
                android:id="@+id/homepage_rank_top_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日历"
                android:includeFontPadding="false"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="12dp"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou12"/>
        </LinearLayout>
    </LinearLayout>
    <cn.damai.commonbusiness.view.DmViewPager
        android:id="@+id/homepage_rank_top_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
