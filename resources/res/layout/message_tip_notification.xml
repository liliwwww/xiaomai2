<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/message_ll_push"
    android:background="#fff5bf"
    android:paddingLeft="@dimen/margin_12dp"
    android:paddingTop="@dimen/margin_15dp"
    android:paddingRight="@dimen/margin_12dp"
    android:paddingBottom="@dimen/margin_15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="20dp"
        android:textColor="@color/color_666666"
        android:id="@+id/message_tv_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:text="@string/iconfont_guanbi24"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="@string/message_push_close_tip"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_FF1268"
        android:id="@+id/message_tv_push_status"
        android:background="@drawable/bg_strkoe_fa1155"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_push_open"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</LinearLayout>
