<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/video_tag_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.taobao.movie.android.commonui.widget.TppAnimImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="@color/common_text_color13"
            app:fadeDuration="0"
            app:failureImage="@drawable/oscar_default_image"
            app:failureImageScaleType="fitXY"
            app:placeholderImage="@drawable/oscar_default_image"
            app:placeholderImageScaleType="fitXY"
            app:retryImage="@drawable/oscar_default_image"
            app:retryImageScaleType="fitXY"
            app:roundedCornerRadius="@dimen/padding_2dp"/>
        <View
            android:background="@drawable/image_tag_view_radius_fg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:layout_gravity="top|left"
            android:id="@+id/pay_tag"
            android:background="@drawable/long_video_red_tag"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="全片付费"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/video_tag_view_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp">
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/play_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconf_video"/>
            <TextView
                android:textSize="11dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <TextView
            android:textSize="13dp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/video_title"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:singleLine="true"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="9dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="top|left"
        android:id="@+id/video_tag"
        android:background="@drawable/video_tag_bg"
        android:paddingLeft="4dp"
        android:paddingTop="3dp"
        android:paddingRight="4dp"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
</merge>
