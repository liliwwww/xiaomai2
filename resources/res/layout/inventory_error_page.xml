<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_error_container"
    android:background="@color/color_274B93"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/error_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/error_btn_left"
            android:paddingLeft="15dp"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:text="@string/iconfont_fanhui18"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_error_page"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
