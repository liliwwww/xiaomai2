<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/rank_line"
        android:background="#f6f7f8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <View
        android:id="@+id/rank_line_1dp"
        android:background="#19000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/header_rank_ui"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/rank_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="6dp"
            android:src="?attr/bgDetailScoreBangLogo"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_2e333e"
                android:ellipsize="end"
                android:id="@+id/rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxEms="15"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="12dp"
                android:textColor="@color/bricks_2e333e"
                android:id="@+id/rank_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/bricks_2e333e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/iconfont_youjiantou24"
            android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>
