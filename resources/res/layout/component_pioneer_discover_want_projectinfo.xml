<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/color_pioneer_primary_black"
            android:id="@+id/discover_want_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <View
            android:id="@+id/discover_want_item_title_end_cover"
            android:background="@drawable/text_view_end_cover"
            android:visibility="visible"
            android:layout_width="34dp"
            android:layout_height="17dp"
            android:layout_alignRight="@+id/discover_want_item_title"
            android:layout_alignBottom="@+id/discover_want_item_title"/>
    </RelativeLayout>
    <cn.damai.uikit.flowlayout.FlowLayout
        android:gravity="top"
        android:layout_gravity="top"
        android:id="@+id/discover_want_item_score_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.DMCommonPriceView
            android:id="@+id/discover_want_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1.5dp"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/color_pioneer_primary_black"
            android:id="@+id/discover_want_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>
</LinearLayout>
