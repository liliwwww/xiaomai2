<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/community_film_hall_more_bg"
    android:layout_width="210dp"
    android:layout_height="120dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:id="@+id/tv_homepage_show_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/film_detail_all_tag"/>
        <View
            android:id="@+id/tv_homepage_show_more_divider"
            android:background="@color/common_text_color44"
            android:layout_width="40dp"
            android:layout_height="@dimen/space_line_height"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:id="@+id/tv_more_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
