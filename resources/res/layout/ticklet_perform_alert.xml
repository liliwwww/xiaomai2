<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14dp"
        android:textColor="#9c9ca5"
        android:gravity="center_horizontal"
        android:id="@+id/ticklet_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6dp"
        android:includeFontPadding="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ticklet_alert_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticklet_project_name"
        android:layout_centerHorizontal="true">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="#8890a0"
            android:id="@+id/ticklet_alert_text"
            android:paddingTop="@dimen/margin_3dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_duoxuan_weixuan_"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本场次不再提醒"/>
    </LinearLayout>
</RelativeLayout>
