<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/customFlexTabBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/resource_size_8">
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flex_tab"
        android:paddingBottom="@dimen/resource_size_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/resource_size_6"
        android:paddingEnd="@dimen/resource_size_6"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"/>
</RelativeLayout>
