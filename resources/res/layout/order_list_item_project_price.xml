<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:id="@+id/ll_price"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_000000"
        android:id="@+id/tv_project_price_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_1dp"
        android:text="Â¥"/>
    <TextView
        android:textSize="@dimen/margin_20dp"
        android:textColor="@color/color_000000"
        android:id="@+id/tv_project_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_project_count"
        android:paddingLeft="@dimen/margin_3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="#777777"
        android:ellipsize="end"
        android:id="@+id/tv_project_price_desc"
        android:paddingLeft="@dimen/margin_3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"/>
</LinearLayout>
