<?xml version="1.0" encoding="utf-8"?>
<com.taobao.movie.android.app.order.ui.widget.TrackerFrameLayout2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.flexbox.FlexboxLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexDirection="column"
        app:flexWrap="nowrap">
        <View
            android:background="@color/common_text_color14"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_flexShrink="0"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_content"
            android:background="@color/white"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/common_divider_color"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_minHeight="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_minHeight="55dp">
            <TextView
                android:textSize="@dimen/text_size_17_dp"
                android:textColor="#ff666666"
                android:gravity="center"
                android:id="@+id/reset"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="@string/reset"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/text_size_17_dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/confirm"
                android:background="@drawable/cinema_filter_pop_comfirm_button"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:text="@string/tpp_confirm"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:id="@+id/flex_bg_layout"
            android:background="#55000000"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_weight="1"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0"
            app:layout_minHeight="175dp"/>
    </com.google.android.flexbox.FlexboxLayout>
</com.taobao.movie.android.app.order.ui.widget.TrackerFrameLayout2>
