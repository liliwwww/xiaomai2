<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="43dp">
    <TextView
        android:textSize="14dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/id_filter_category_sub"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:lines="1"
        android:layout_weight="1"/>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="18dp"
        android:textColor="@color/color_FF2869"
        android:id="@+id/id_filter_category_sub_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/iconfont_duihaomian_"/>
</LinearLayout>
