<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f1f2f5"
    android:paddingLeft="@dimen/margin_18dp"
    android:paddingTop="@dimen/margin_18dp"
    android:paddingRight="@dimen/margin_18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="@dimen/margin_14dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_111111"
            android:ellipsize="end"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_888888"
            android:id="@+id/tv_time"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_feed_state"
            android:paddingTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/main_color"
                android:id="@+id/tv_feed_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_3A3A3A"
                android:ellipsize="end"
                android:id="@+id/tv_feed_state_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
