<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/block_coupon_select_area"
    android:background="@drawable/list_selector"
    android:paddingLeft="12dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CommonListItemContainerWhite">
    <TextView
        android:gravity="left"
        android:id="@+id/block_coupon_select_name"
        android:layout_width="0dp"
        android:layout_marginRight="8dp"
        android:text="@string/ordering_selector_block_coupon_title"
        android:layout_weight="1"
        style="@style/CommonListItemOrderTitle"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/common_text_color11"
        android:ellipsize="end"
        android:gravity="right"
        android:id="@+id/block_coupon_select_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text=""
        android:singleLine="true"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textColor="@color/common_text_color13"
        android:gravity="right"
        android:id="@+id/block_coupon_select_arrow"
        android:layout_width="@dimen/margin_16"
        android:layout_height="wrap_content"
        android:text="@string/iconf_right_arrow"/>
</LinearLayout>
