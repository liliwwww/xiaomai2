<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/common_text_color13"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="14dp"
                android:textColor="@color/tpp_primary_red"
                android:gravity="center"
                android:id="@+id/play_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconf_gou"/>
            <TextView
                android:textSize="14dp"
                android:id="@+id/play_time"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按上映时间排序"/>
        </LinearLayout>
        <View
            android:background="@color/common_text_color13"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="14dp"
                android:textColor="@color/tpp_primary_red"
                android:gravity="center"
                android:id="@+id/add_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconf_gou"/>
            <TextView
                android:textSize="14dp"
                android:id="@+id/add_time"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按标记时间排序"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
