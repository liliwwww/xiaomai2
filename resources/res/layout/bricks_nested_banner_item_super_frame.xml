<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/id_bricks_banner_super_img_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/id_bricks_banner_super_gradient_bg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="85dp"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/id_bricks_banner_super_color_bg"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"/>
    <com.alibaba.pictures.bricks.view.CornerFrameLayout
        android:id="@+id/id_bricks_banner_sub_img_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        app:clip_corner_radius="4dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/id_bricks_banner_super_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_gravity="bottom"
                    android:background="@drawable/bricks_bg_super_frame_text"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="@dimen/resource_size_11"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/id_bricks_banner_super_text1"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </FrameLayout>
            <com.alibaba.pictures.bricks.view.DashView
                android:layout_width="0.5dp"
                android:layout_height="72dp"
                android:layout_marginLeft="-0.5dp"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/id_bricks_banner_super_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_gravity="bottom"
                    android:background="@drawable/bricks_bg_super_frame_text"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="@dimen/resource_size_11"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/id_bricks_banner_super_text2"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </FrameLayout>
            <com.alibaba.pictures.bricks.view.DashView
                android:layout_width="0.5dp"
                android:layout_height="72dp"
                android:layout_marginLeft="-0.5dp"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/id_bricks_banner_super_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <View
                    android:layout_gravity="bottom"
                    android:background="@drawable/bricks_bg_super_frame_text"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <TextView
                    android:textSize="@dimen/resource_size_11"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/id_bricks_banner_super_text3"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"/>
            </FrameLayout>
        </LinearLayout>
    </com.alibaba.pictures.bricks.view.CornerFrameLayout>
</RelativeLayout>
