<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/ticklet_capture_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="45dp"
    android:layout_marginRight="45dp"
    android:minHeight="125dp"
    android:layout_centerInParent="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ticklet_white_radius24_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_30dp"
            android:textColor="#ffb916"
            android:gravity="center"
            android:paddingTop="@dimen/margin_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:layout_marginBottom="12dp"
            android:text="@string/iconfont_tixing24"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginBottom="9dp"
            android:singleLine="true"
            android:includeFontPadding="false"
            style="@style/ticklet_000000_18dp"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_title_des_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            style="@style/ticklet_999999_14dp"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/ticklet_capture_tv_transfer"
            android:background="@drawable/submit_enable_btn_h44"
            android:paddingTop="@dimen/margin_11dp"
            android:paddingBottom="@dimen/margin_11dp"
            android:visibility="gone"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:text="@string/ticklet_ticket_capture_transfer"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15dp">
            <TextView
                android:gravity="center"
                android:id="@+id/ticklet_capture_tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求助反馈"
                style="@style/ticklet_000000_14dp"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:paddingTop="@dimen/margin_1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou24"
                style="@style/ticklet_000000_12dp"/>
        </LinearLayout>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/ticklet_capture_tv_cancle"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/iconfont_guanbiyuanxian_"/>
</LinearLayout>
