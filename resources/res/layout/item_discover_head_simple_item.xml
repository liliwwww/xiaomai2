<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="45dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fixed_sub_img"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:id="@+id/fixed_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_below="@+id/fixed_sub_img"/>
    <cn.damai.uikit.banner.sub.RoundRadiusImageView
        android:id="@+id/fixed_bg_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_11dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/fixed_sub_title"
        app:r_round_radius="4dp"/>
</RelativeLayout>
