<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/header_image"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:src="@drawable/bricks_ranklist_header_bg_top"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/title_bar_space"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <include
            android:id="@+id/discount_ticket_title_layout"
            layout="@layout/rank_activity_title"/>
        <FrameLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <in.srain.cube.views.ptr.PtrFrameLayout
                android:id="@+id/discount_ticket_ptr"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/rank_recycle_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.appbar.AppBarLayout
                        android:id="@+id/appbar"
                        android:background="#00000000"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:elevation="0dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_scrollFlags="scroll">
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="17dp"
                                android:layout_marginLeft="21dp"
                                android:layout_marginBottom="77dp"
                                android:src="@drawable/rank_list_header"
                                android:scaleType="centerCrop"
                                android:layout_alignParentBottom="true"/>
                            <TextView
                                android:textSize="12dp"
                                android:textColor="@color/white"
                                android:id="@+id/tv_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="21dp"
                                android:layout_marginBottom="14dp"
                                android:layout_alignParentBottom="true"/>
                            <TextView
                                android:textSize="30dp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="21dp"
                                android:layout_marginBottom="35dp"
                                android:maxLines="1"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                    </com.google.android.material.appbar.AppBarLayout>
                    <cn.damai.uikit.irecycler.DamaiRootRecyclerView
                        android:id="@+id/discount_ticket_recycler"
                        android:background="@drawable/discount_lv_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/margin_12dp"
                        android:paddingEnd="@dimen/margin_12dp"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </in.srain.cube.views.ptr.PtrFrameLayout>
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/tv_collect_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/bg_collect_tip"/>
    <cn.damai.rank.view.WantSeeTips
        android:layout_gravity="bottom"
        android:id="@+id/want_see_tips_rank_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
