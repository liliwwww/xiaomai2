<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:gravity="top"
        android:id="@+id/live_mo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        app:failureImage="@drawable/bg_img_black_ecffd_bg"
        app:placeholderImage="@drawable/bg_img_black_ecffd_bg"/>
    <View
        android:layout_gravity="center"
        android:id="@+id/live_mo_image_failure_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="115dp"/>
</FrameLayout>
