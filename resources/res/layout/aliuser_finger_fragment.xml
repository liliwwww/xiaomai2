<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aliuser_containers_sv"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/aliuser_user_login_ll"
        android:paddingLeft="@dimen/aliuser_page_padding"
        android:paddingTop="@dimen/aliuser_space_12"
        android:paddingRight="@dimen/aliuser_page_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/aliuser_history"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_30"
            android:layout_marginBottom="@dimen/aliuser_space_12">
            <Button
                android:textColor="@color/aliuser_color_white"
                android:id="@+id/aliuser_login_btn"
                android:background="@drawable/aliuser_main_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/aliuser_finger_button_text"/>
            <TextView
                android:gravity="center"
                android:id="@+id/aliuser_login_switch_more_login"
                android:paddingTop="@dimen/aliuser_space_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aliuser_login_more_login"/>
        </LinearLayout>
        <include
            android:id="@+id/aliuser_alipay_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            layout="@layout/aliuser_bottom_area"/>
    </LinearLayout>
</ScrollView>
