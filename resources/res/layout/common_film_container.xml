<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/comment_film_container"
    android:background="@color/color_tpp_primary_bg"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/comment_film_image"
        android:background="@color/common_text_color14"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="0"
        fresco:failureImage="@drawable/oscar_default_image"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/oscar_default_image"
        fresco:placeholderImageScaleType="centerInside"
        fresco:retryImage="@drawable/oscar_default_image"
        fresco:retryImageScaleType="centerInside"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="11dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/common_text_color38"
            android:ellipsize="end"
            android:id="@+id/comment_film_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/common_text_color40"
            android:ellipsize="end"
            android:id="@+id/comment_film_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>
