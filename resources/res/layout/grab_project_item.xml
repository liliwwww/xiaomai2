<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_top"
    android:paddingTop="7.5dp"
    android:paddingBottom="7.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layout_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_container"
        android:background="@drawable/grab_item_bg_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp">
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/image_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:borderRadius="12dp"
                app:type="radial"/>
            <ImageView
                android:layout_gravity="end"
                android:layout_width="95dp"
                android:layout_height="172dp"
                android:layout_marginTop="-27dp"
                android:src="@drawable/icon_grab_title_watermask"
                android:scaleType="centerCrop"
                android:alpha="0.5"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_project"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">
                <cn.damai.uikit.view.DMPosterView
                    android:id="@+id/poster"
                    android:layout_width="104dp"
                    android:layout_height="140dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/color_000000"
                            android:ellipsize="end"
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/color_666666"
                        android:ellipsize="end"
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/color_666666"
                        android:ellipsize="end"
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:singleLine="true"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/layout_see"
                        android:background="@drawable/common_tag_yellow_moon_bg"
                        android:paddingLeft="4dp"
                        android:paddingRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_see"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <cn.damai.uikit.number.DMDigitTextView
                            android:textSize="16dp"
                            android:textColor="@color/color_ff2d79"
                            android:gravity="bottom"
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"/>
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/color_666666"
                            android:gravity="bottom"
                            android:id="@+id/tv_price_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:textSize="13dp"
                            android:textColor="@color/color_ff2d79"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:id="@+id/tv_price_custom"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:maxWidth="120dp"
                            android:maxLines="1"/>
                        <cn.damai.uikit.view.HorTagView
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/ht_ll_tagview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:id="@+id/btn_buy"
                            android:background="@drawable/common_btn_bg"
                            android:paddingBottom="4dp"
                            android:visibility="gone"
                            android:layout_width="60dp"
                            android:layout_height="27dp"
                            android:text="去抢票"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:singleLine="true"/>
            <include
                android:id="@+id/layout_daojishi"
                layout="@layout/grab_daojishi"/>
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_see"
                android:background="@drawable/common_btn_bg"
                android:paddingBottom="4dp"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:text="去看看"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/layout_bottom2"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_selling_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_go_buy"
                android:background="@drawable/common_btn_bg"
                android:paddingBottom="4dp"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:text="去抢票"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_ffe4ba"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/tv_qiangwanle"
        android:background="@drawable/grab_qiangwanle"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginRight="11dp"
        android:text="太遗憾抢完了"/>
</FrameLayout>
