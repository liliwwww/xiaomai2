<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingBottom="@dimen/margin_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_xuxian"
        android:background="#19000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_star"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="20dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/category_star_image_quan"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_star"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/uikit_user_default_icon_trans_white"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/color_000000"
                    android:ellipsize="end"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="9"
                    android:singleLine="true"/>
                <cn.damai.uikit.view.DMLRLabelView
                    android:id="@+id/lrlabel_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:id="@+id/tv_btn"
                    android:background="@drawable/category_star_button_addfollow"
                    android:layout_width="54dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9c9ca5"
                android:ellipsize="end"
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="5场在售演出 | 118.3万粉丝 "
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
