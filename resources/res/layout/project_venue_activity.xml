<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/trade_project_venue_title_lv"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/top_status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_20dp"
                android:textColor="@color/color_000000"
                android:gravity="center_vertical"
                android:id="@+id/trade_project_venue_title_left_icon"
                android:paddingLeft="@dimen/margin_18dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fanhui24"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/margin_20dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/trade_project_venue_title_main_tv"
                android:paddingLeft="@dimen/margin_15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_15dp"
                android:singleLine="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <com.amap.api.maps.MapView
        android:id="@+id/trade_project_detail_venue_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/trade_project_venue_title_lv"/>
</RelativeLayout>
