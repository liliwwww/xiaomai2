<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/icon_amap_marker_bg"
    android:paddingLeft="12dp"
    android:paddingTop="16dp"
    android:paddingRight="12dp"
    android:paddingBottom="28dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.taobao.movie.android.commonui.widget.TitleMarkView
            android:gravity="center_vertical"
            android:id="@+id/oscar_cinema_list_marker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/common_text_color11"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/oscar_cinema_list_marker_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:text="xx路xx号"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/oscar_cinema_list_marker_navigation"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:text="导航"
        style="@style/presale_button_style_small"/>
</LinearLayout>
