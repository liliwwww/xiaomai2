<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/OrderCommonMarketItem">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/rl_vip_item"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_strong_guide"
                android:background="@drawable/bg_order_item_strong_guide"
                android:visibility="gone"
                android:paddingStart="@dimen/padding_4dp"
                android:paddingEnd="@dimen/padding_4dp"
                style="@style/ordering_item_strong_guide_tv_style"/>
            <TextView
                android:id="@+id/tv_sub_title"
                android:visibility="gone"
                style="@style/ordering_item_subtitle_tv_style"/>
            <TextView
                android:id="@+id/tv_weak_guide"
                android:visibility="gone"
                style="@style/ordering_item_weak_guide_tv_style"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/ll_price"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_2">
                <TextView
                    android:id="@+id/tv_price_prefix"
                    style="@style/ordering_item_price_prefix_tv_style"/>
                <TextView
                    android:textSize="@dimen/text_size_18_dp"
                    android:id="@+id/tv_price"
                    style="@style/ordering_item_price_tv_style"/>
            </LinearLayout>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:id="@+id/icon_arrow"
                android:text="@string/icon_font_right_small"
                style="@style/ordering_item_arrow_style"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_vip_item"
        android:paddingTop="@dimen/padding_4dp"
        android:paddingBottom="@dimen/padding_4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_3"
        android:paddingStart="@dimen/padding_12">
        <com.taobao.movie.android.app.order.ui.item.OrderingVIPBogoItemView
            android:id="@+id/ordering_vip_bogo_item_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.taobao.movie.android.app.order.ui.item.OrderingVIPPriceItemView
            android:id="@+id/ordering_vip_price_item_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.taobao.movie.android.app.order.ui.item.OrderingEarlyBridItemView
            android:id="@+id/ordering_early_brid_item_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
