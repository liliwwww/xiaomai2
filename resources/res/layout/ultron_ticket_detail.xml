<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.alibaba.pictures.bricks.view.HRatioLinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:id="@+id/ll_ticket_detail"
        android:background="@drawable/bg_choose_corner_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:extra_reduce_height="60dp"
        app:max_ratio_height_of_screen="0.8">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="18dp"
                android:textColor="@color/color_000000"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="价格明细"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:id="@+id/text_ok"
                android:paddingLeft="15dp"
                android:paddingRight="21dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:text="@string/iconfont_fucengguanbi16"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/line_title"
            android:background="@color/color_EEEEEE"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <ScrollView
            android:id="@+id/scv_ticket_info"
            android:paddingBottom="@dimen/resource_size_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/margin_13dp"
                    android:textColor="@color/color_000000"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_ticket_info"
                    android:background="#f5f5f5"
                    android:paddingLeft="@dimen/margin_15dp"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="票品信息"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_ticket_info"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/color_000000"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_payment_details"
                    android:background="#f5f5f5"
                    android:paddingLeft="@dimen/margin_15dp"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="付款明细"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_payment_details"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </com.alibaba.pictures.bricks.view.HRatioLinearLayout>
</merge>
