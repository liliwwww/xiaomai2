<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/resource_size_9"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/resource_size_12"
    android:paddingEnd="@dimen/resource_size_12">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <RelativeLayout
            android:id="@+id/super_card_project_info_container"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <View
                android:id="@+id/pioneer_super_card_grey"
                android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:id="@+id/pioneer_super_card_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/pioneer_super_card_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_super_card_top_right_mask"
                android:scaleType="fitEnd"
                android:alpha="0.7"
                android:layout_alignParentEnd="true"/>
            <View
                android:background="@drawable/bg_super_card_item_poster_mask"
                android:layout_width="89dp"
                android:layout_height="125dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/resource_size_12"
                android:layout_alignParentEnd="true"/>
            <com.alibaba.pictures.bricks.view.RCRelativeLayoutView
                android:id="@+id/pioneer_super_cd_card_poster"
                android:layout_width="100dp"
                android:layout_height="132dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/resource_size_22"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/transparent"
                app:clip_background="true"
                app:round_corner_top_left="@dimen/resource_size_8"
                app:round_corner_top_right="@dimen/resource_size_8">
                <View
                    android:id="@+id/pioneer_super_card_poster_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/pioneer_super_card_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:failureImage="@drawable/home_default_image_bg_gradient_pioneer"
                    app:failureImageScaleType="fitXY"
                    app:placeholderImage="@drawable/home_default_image_bg_gradient_pioneer"
                    app:placeholderImageScaleType="fitXY"/>
                <View
                    android:id="@+id/pioneer_super_card_poster_bottom_mask"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_alignParentBottom="true"/>
            </com.alibaba.pictures.bricks.view.RCRelativeLayoutView>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/tags_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginStart="12dp"
                android:layout_alignEnd="@+id/pioneer_super_cd_card_poster">
                <androidx.cardview.widget.CardView
                    android:id="@+id/pioneer_ll_super_card_hasreserved"
                    android:layout_width="@dimen/resource_size_43"
                    android:layout_height="@dimen/resource_size_18"
                    android:layout_marginEnd="@dimen/resource_size_4"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_pioneer_has_reserved"
                        android:paddingLeft="@dimen/resource_size_2"
                        android:paddingRight="@dimen/resource_size_2"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp">
                        <ImageView
                            android:layout_width="@dimen/resource_size_9"
                            android:layout_height="@dimen/resource_size_9"
                            android:layout_marginTop="-0.5dp"
                            android:src="@drawable/pioneer_super_card_hasreserved_icon"/>
                        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                            android:textSize="@dimen/resource_size_9"
                            android:textColor="@color/bricks_171717"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:id="@+id/pioneer_super_card_hasreserved"
                            android:paddingBottom="0.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="已预约"
                            android:maxLines="1"
                            android:includeFontPadding="false"
                            android:layout_marginStart="@dimen/resource_size_1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="@dimen/margin_10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/pioneer_super_card_movie_flag"
                    android:background="@drawable/bg_border_corner_e6000000_6"
                    android:paddingLeft="@dimen/margin_4dp"
                    android:paddingRight="@dimen/margin_4dp"
                    android:paddingBottom="0.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/resource_size_4"/>
                <cn.damai.pioneer.component.supercard.SuperCardNumCenterTextView
                    android:id="@+id/pioneer_super_card_want_score"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/pioneer_super_card_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/pioneer_super_ll_cd_card_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="38dp"
                android:paddingStart="@dimen/resource_size_12"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/pioneer_super_cd_card_poster">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="@dimen/resource_size_18"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/pioneer_super_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/resource_size_3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/resource_size_6">
                    <TextView
                        android:textSize="@dimen/resource_size_12"
                        android:textColor="#ffffff"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/pioneer_super_card_subtitle_left"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:alpha="0.9"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/pioneer_super_card_line"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_min="22dp"/>
                    <View
                        android:id="@+id/pioneer_super_card_line"
                        android:background="@drawable/bg_line_corner_4dffffff_1"
                        android:visibility="gone"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/resource_size_8"
                        android:layout_marginLeft="@dimen/margin_6dp"
                        android:layout_marginRight="@dimen/margin_6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/pioneer_super_card_subtitle_left"
                        app:layout_constraintRight_toLeftOf="@+id/pioneer_super_card_subtitle_right"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="@dimen/resource_size_12"
                        android:textColor="#ffffff"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/pioneer_super_card_subtitle_right"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:alpha="0.9"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/pioneer_super_card_line"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/resource_size_16"
                    android:layout_weight="1">
                    <cn.damai.pioneer.component.supercard.SuperCardCountDownView
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:id="@+id/pioneer_super_card_count_down"
                        android:paddingLeft="@dimen/margin_1dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_4dp"
                        android:layout_marginBottom="1.5dp"/>
                    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                        android:textSize="@dimen/resource_size_12"
                        android:textColor="@color/bricks_white"
                        android:gravity="bottom"
                        android:id="@+id/live_pioneer_low_price_unit"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1px"
                        android:includeFontPadding="false"
                        android:layout_marginEnd="-1dp"/>
                    <cn.damai.pioneer.component.supercard.SuperCardNumTextView
                        android:gravity="bottom"
                        android:id="@+id/pioneer_super_card_num_desc_view"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_gravity="end"
        android:id="@+id/pioneer_super_card_right_tag"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="-9dp"
        android:layout_alignParentEnd="true"
        android:translationZ="10dp"/>
</RelativeLayout>
