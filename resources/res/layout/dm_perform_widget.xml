<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/dm_perform_ll"
    android:background="@drawable/dm_perform_widget_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp">
        <ImageView
            android:background="@drawable/widget_dm_logo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:background="@drawable/widget_city_hot_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/dm_perform_widget_city_name_dot"
            android:background="@drawable/dm_perform_widget_point"
            android:visibility="gone"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#c887ff"
            android:gravity="center"
            android:id="@+id/dm_perform_widget_city_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/dm_perform_widget_search_area"
            android:background="@drawable/widget_search_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <FrameLayout
        android:background="@drawable/dm_perform_widget_context_bg"
        android:paddingLeft="2dp"
        android:paddingTop="8dp"
        android:paddingRight="2dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp">
        <GridView
            android:id="@+id/dm_perform_widget_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="4dp"
            android:numColumns="2"/>
        <LinearLayout
            android:id="@+id/dm_perform_widget_empty_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp">
            <ImageView
                android:background="@drawable/widget_empty_scenes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <TextView
                android:textColor="#98a7c2"
                android:id="@+id/dm_perform_widget_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="33dp"
                android:text="当前城市暂无热搜演出\10点击查看更多精彩内容"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
