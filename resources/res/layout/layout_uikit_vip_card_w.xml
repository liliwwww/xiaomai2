<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/brand_banner"
    android:background="@drawable/vip_coupon_bg_w"
    android:paddingTop="3dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <ImageView
            android:id="@+id/vip_card_typeimg"
            android:background="@drawable/vip_card_logo_vip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/vip_card_top_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:text="¥"
            android:layout_alignBottom="@+id/vip_card_top_value"
            android:layout_alignParentLeft="true"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="26dp"
            android:textColor="@color/black"
            android:id="@+id/vip_card_top_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/vip_card_top_flag"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#c99e7b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="会员专享优惠"
            android:layout_below="@+id/vip_card_top_flag"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/vip_card_top_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:lines="1"
            android:layout_toLeftOf="@+id/item_header_coupon_wantparent"
            android:layout_toRightOf="@+id/vip_card_top_value"
            android:layout_alignBottom="@+id/vip_card_top_value"/>
        <FrameLayout
            android:id="@+id/item_header_coupon_wantparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/item_header_coupon_want"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="10dp"
                    android:textColor="@color/color_cccccc"
                    android:paddingRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_xiangmutixing32"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_cccccc"
                    android:id="@+id/vip_card_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已领取"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="#f8d2b2"
                android:gravity="center"
                android:id="@+id/item_header_coupon_got"
                android:background="@drawable/vip_card_followget"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注并领取"/>
        </FrameLayout>
    </RelativeLayout>
    <View
        android:id="@+id/vip_top_space"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>
