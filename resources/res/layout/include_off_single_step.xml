<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/name_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0">
    <RelativeLayout
        android:background="@drawable/off_single_step_content_bg"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView
            android:textSize="16dp"
            android:textColor="#4b4a50"
            android:id="@+id/tip_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="昵称："
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#4b4a50"
            android:id="@+id/result_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="黛米普若黛米普若黛米普若黛米普若黛米普若"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tip_view"
            android:layout_centerVertical="true"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/progress_view"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/off_single_progress"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="17dp"
            android:textColor="@color/off_single_un_passed"
            android:id="@+id/result_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:text="@string/iconf_off_single_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="0"/>
    </RelativeLayout>
</LinearLayout>
