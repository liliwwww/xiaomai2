<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    app:cardCornerRadius="@dimen/resource_size_18"
    app:cardElevation="@dimen/resource_size_0">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_pioneer_slider_grab_calendar"
        android:paddingTop="@dimen/resource_size_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/resource_size_12"
        android:paddingEnd="@dimen/resource_size_12">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="@dimen/resource_size_16"
                android:textColor="#171717"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:id="@+id/right_indicator"
                android:layout_width="17dp"
                android:layout_height="@dimen/resource_size_14"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_pioneer_slider_grab_calendar_arrow"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/resource_size_8">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/poster"
                android:layout_width="@dimen/resource_size_50"
                android:layout_height="@dimen/resource_size_50"
                android:scaleType="centerCrop"
                app:placeholderImage="@drawable/bg_pioneer_poster_placeholder_corner_12"
                app:roundedCornerRadius="@dimen/resource_size_12"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/resource_size_9">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="@dimen/resource_size_16"
                    android:textColor="#171717"
                    android:ellipsize="end"
                    android:id="@+id/project_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="@dimen/resource_size_12"
                    android:textColor="#171717"
                    android:id="@+id/project_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/resource_size_5"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/calendar_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/resource_size_37"
            android:layout_marginTop="@dimen/resource_size_8"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
