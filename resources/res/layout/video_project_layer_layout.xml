<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_round_rect"
    android:padding="@dimen/margin_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.DMPosterView
        android:id="@+id/video_project_img"
        android:layout_width="86dp"
        android:layout_height="115dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:src="@drawable/uikit_default_image_bg_gradient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/video_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_toRightOf="@+id/video_project_img"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_9c9ca5"
        android:ellipsize="end"
        android:id="@+id/video_project_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6dp"
        android:text=""
        android:maxLines="1"
        android:layout_toRightOf="@+id/video_project_img"
        android:layout_below="@+id/video_project_name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_9c9ca5"
        android:ellipsize="end"
        android:id="@+id/video_project_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_3dp"
        android:text=""
        android:maxLines="1"
        android:layout_toRightOf="@+id/video_project_img"
        android:layout_below="@+id/video_project_time"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/video_project_see_project"
        android:background="@drawable/buy_btn_normal_bg"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="去看看"
        android:maxLines="1"
        android:layout_alignBottom="@+id/video_project_img"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
