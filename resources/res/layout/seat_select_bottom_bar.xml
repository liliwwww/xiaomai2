<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="21dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_seat_price_and_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/layout_seat_total_price"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <LinearLayout
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:id="@+id/price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12dp"
                            android:textColor="@color/color_FF1268"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="¥"/>
                        <cn.damai.uikit.number.DMDigitTextView
                            android:textSize="20dp"
                            android:textColor="@color/color_FF1268"
                            android:id="@+id/total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <TextView
                            android:textSize="12dp"
                            android:textColor="@color/color_111111"
                            android:id="@+id/tip_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginBottom="2dp"
                            android:text="价格明细"/>
                        <cn.damai.uikit.iconfont.DMIconFontTextView
                            android:textSize="12dp"
                            android:textColor="@color/color_000000"
                            android:id="@+id/choose_arrow_ift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_margin_2"
                            android:layout_marginBottom="2dp"
                            android:text="@string/iconfont_shaixuanshang12"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_999999"
                        android:id="@+id/order_promotion_tv"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:lines="1"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/empty_seat_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_FF1268"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="¥"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="20dp"
                    android:textColor="@color/color_FF1268"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_seat_num"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_select_seat_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/seat_confirm_order"
            android:background="@drawable/buy_btn_usable_bg_selector"
            android:paddingBottom="2dp"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="@dimen/common_margin_15"
            android:text="@string/trade_seat_confirm_seat"/>
    </LinearLayout>
    <View
        android:id="@+id/bottom_bar_top_divide_line"
        android:background="@color/color_5_percent_black"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
</RelativeLayout>
