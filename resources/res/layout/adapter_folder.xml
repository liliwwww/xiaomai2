<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.DMPosterView
        android:id="@+id/iv_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/uikit_default_image_bg_grey"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_11dp"
        android:layout_marginTop="@dimen/margin_21dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/iv_image"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_9C9CA5"
        android:id="@+id/tv_folder_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_25dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/tv_folder_name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_select_num"
        android:background="@drawable/circle_ff2869_oval"
        android:visibility="gone"
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_21dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:layout_toLeftOf="@+id/item_icon_arrow"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_999999"
        android:id="@+id/item_icon_arrow"
        android:paddingTop="@dimen/margin_1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:text="@string/iconfont_youjiantou24"
        android:layout_alignParentRight="true"/>
    <View
        android:background="#26000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:layout_marginBottom="@dimen/margin_14dp"
        android:layout_below="@+id/iv_image"/>
</RelativeLayout>
