<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="98dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_18dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/onlive_date_layout"
        android:layout_width="98dp"
        android:layout_height="21dp">
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:layout_gravity="bottom"
            android:id="@+id/onlive_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天 "/>
        <View
            android:background="#9c9ca5"
            android:layout_width="34dp"
            android:layout_height="0.2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pro_inner_layout"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp">
        <cn.damai.tetris.component.online.viewholder.OnLinePosterView
            android:id="@+id/item_poster"
            android:layout_width="98dp"
            android:layout_height="131dp"
            android:scaleType="fitXY"
            app:borderRadius="6dp"
            app:type="radial"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="2019摩登兄弟“成长风暴”巡回演唱会"
            android:lines="2"
            android:lineSpacingExtra="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/item_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:textSize="12dp"
                android:textColor="#ff2869"
                android:id="@+id/item_price_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="#ff2869"
                android:id="@+id/item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#9c9ca5"
                android:id="@+id/item_price_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="1dp"
                android:text="起"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_FF2D79"
                android:id="@+id/tv_project_price_confirm"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="免费观看"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#9c9ca5"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:id="@+id/item_price_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="0.5dp"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
