<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp">
        <View
            android:id="@+id/vd_top_line"
            android:background="?android:attr/listDivider"
            android:layout_width="1.5dp"
            android:layout_height="9dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tv_gray_circle"
            android:background="@drawable/gray_hollow_circle"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="12.5dp"/>
        <View
            android:id="@+id/vd_bottom_line"
            android:background="?android:attr/listDivider"
            android:layout_width="1.5dp"
            android:layout_height="9dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/cb_orange"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:id="@+id/film_detail_video_dynamic_title"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:maxLines="1"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/cg_1"
        android:ellipsize="end"
        android:id="@+id/film_detail_video_dynamic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>
