<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/share_page"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/share_page_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#80000000"
                android:paddingLeft="15dp"
                android:paddingTop="57dp"
                android:paddingRight="15dp"
                android:paddingBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/share_page_poster_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@drawable/comment_share_content_top_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="152dp"/>
                        <cn.damai.uikit.shadowlayout.DMShadowLayout
                            android:id="@+id/comment_share_content_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_below="@+id/placeholder_layout"
                            app:sl_shadowColor="#33000000"
                            app:sl_shadowRadius="10dp">
                            <cn.damai.uikit.view.RoundImageView
                                android:id="@+id/share_page_poster"
                                android:layout_width="match_parent"
                                android:layout_height="400dp"
                                android:src="@drawable/uikit_default_image_bg_grey"
                                android:scaleType="centerCrop"
                                app:borderRadius="2dp"
                                app:type="radial"/>
                        </cn.damai.uikit.shadowlayout.DMShadowLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/color_ffffff"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="22dp"
                            android:textColor="@color/color_111111"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:id="@+id/share_page_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:lineSpacingMultiplier="1.2"/>
                        <TextView
                            android:textSize="14dp"
                            android:textColor="@color/color_666666"
                            android:gravity="center_horizontal"
                            android:id="@+id/share_page_comment_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:lineSpacingExtra="@dimen/margin_6dp"/>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp">
                            <cn.damai.uikit.view.RoundImageView
                                android:id="@+id/share_page_comment_user_icon"
                                android:background="@drawable/uikit_user_default_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                            <TextView
                                android:textSize="12dp"
                                android:textColor="@color/color_111111"
                                android:ellipsize="end"
                                android:id="@+id/share_page_comment_user_nick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:maxLines="1"
                                android:layout_weight="1"/>
                            <TextView
                                android:textSize="12dp"
                                android:textColor="@color/color_999999"
                                android:ellipsize="end"
                                android:id="@+id/share_page_comment_create_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:maxWidth="65dp"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </LinearLayout>
                    <include layout="@layout/comment_share_middle_layout"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/comment_share_content_bottom_bg"
                        android:paddingLeft="18dp"
                        android:paddingTop="20dp"
                        android:paddingRight="18dp"
                        android:paddingBottom="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/share_page_qrcode_img"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/share_page_damai_logo"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/share_page_damai_logo"/>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>
