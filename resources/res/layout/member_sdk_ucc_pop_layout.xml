<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ali_ucc_login_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/ali_ucc_new_login_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/ali_ucc_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/ali_ucc_dialog_close"
                android:scaleType="centerInside"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/ali_ucc_login_dialog_title"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ali_ucc_bind_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ali_ucc_login_title"/>
        </FrameLayout>
        <com.ali.user.open.core.webview.AliUccCustomToolbar
            android:id="@+id/ali_user_webview_toolbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>
        <FrameLayout
            android:id="@+id/ali_user_webview_container"
            android:background="@color/member_sdk_ucc_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</FrameLayout>
