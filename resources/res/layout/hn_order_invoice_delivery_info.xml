<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_invoice_delivery_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hn_order_invoice_delivery_type"
            style="@style/style_hn_order_invoice_title"/>
        <TextView
            android:id="@+id/tv_invoice_delivery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/style_hn_order_invoice_title_content"/>
        <RelativeLayout
            android:id="@+id/layout_invoice_delivery_type_mail"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_below="@+id/tv_invoice_delivery_type_title">
            <TextView
                android:id="@+id/tv_invoice_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hn_order_invoice_mail"
                style="@style/style_hn_order_invoice_subtitle"/>
            <EditText
                android:id="@+id/et_invoice_mail_content"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint="@string/hn_order_invoice_mail_tip"
                android:singleLine="true"
                android:layout_toRightOf="@+id/tv_invoice_mail"
                android:layout_alignTop="@+id/tv_invoice_mail"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/tv_invoice_mail"
                style="@style/style_hn_order_invoice_subtitle_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_invoice_delivery_type_express"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_below="@+id/tv_invoice_delivery_type_title">
            <RelativeLayout
                android:id="@+id/layout_invoice_express_address_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_invoice_express_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hn_order_invoice_express_address"
                    style="@style/style_hn_order_invoice_subtitle"/>
                <TextView
                    android:ellipsize="middle"
                    android:id="@+id/tv_invoice_express_contacts"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/tv_invoice_express_phone"
                    android:layout_toRightOf="@+id/tv_invoice_express_address_title"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/tv_invoice_express_phone"
                    android:layout_toEndOf="@+id/tv_invoice_express_address_title"
                    style="@style/style_hn_order_invoice_subtitle"/>
                <TextView
                    android:id="@+id/tv_invoice_express_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:hint="新增收货地址"
                    android:layout_toLeftOf="@+id/tv_invoice_express_address_arrow"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/tv_invoice_express_address_arrow"
                    style="@style/style_hn_order_invoice_subtitle_content"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_AAAAAA"
                    android:id="@+id/tv_invoice_express_address"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/tv_invoice_express_address_arrow"
                    android:layout_toRightOf="@+id/tv_invoice_express_address_title"
                    android:layout_below="@+id/tv_invoice_express_address_title"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/tv_invoice_express_address_arrow"
                    android:layout_toEndOf="@+id/tv_invoice_express_address_title"
                    style="@style/style_hn_order_invoice_subtitle"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_DDDDDD"
                    android:id="@+id/tv_invoice_express_address_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_youjiantou12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_invoice_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/hn_order_invoice_freight"
                android:layout_below="@+id/layout_invoice_express_address_info"
                style="@style/style_hn_order_invoice_subtitle"/>
            <TextView
                android:id="@+id/tv_invoice_freight_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:layout_alignTop="@+id/tv_invoice_freight"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/style_hn_order_invoice_subtitle"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_AAAAAA"
        android:id="@+id/tv_invoice_freight_tip"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_invoice_freight"
        android:lineSpacingMultiplier="1.2"
        style="@style/style_hn_order_invoice_subtitle"/>
</LinearLayout>
