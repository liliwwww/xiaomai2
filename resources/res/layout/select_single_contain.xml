<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_panel_top"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="6dp">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/head_icon"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/header_place_holder_2"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_9"
        android:maxWidth="180dp"
        android:maxLines="1"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/head_icon"
        app:layout_constraintLeft_toRightOf="@+id/head_icon"
        app:layout_constraintTop_toTopOf="@+id/head_icon"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="@dimen/text_size_11_dp"
        android:textColor="#ff8ab4"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/sex_icon"
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:text="@string/iconf_girl"
        app:layout_constraintBottom_toBottomOf="@+id/head_icon"
        app:layout_constraintLeft_toLeftOf="@+id/name_tv"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/desc_tv"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/sex_icon"
        app:layout_constraintLeft_toRightOf="@+id/sex_icon"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/tpp_secondary_blue"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改个人信息"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
