<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_banner_image"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        fresco:fadeDuration="0"
        fresco:failureImage="@color/color_tpp_primary_bg"
        fresco:failureImageScaleType="fitXY"
        fresco:placeholderImage="@color/color_tpp_primary_bg"
        fresco:placeholderImageScaleType="fitXY"
        fresco:retryImage="@color/color_tpp_primary_bg"
        fresco:retryImageScaleType="fitXY"
        fresco:roundedCornerRadius="6dp"/>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="bottom|right"
        android:id="@+id/advert_flag"
        android:background="@drawable/common_advert_flag_bg"
        android:layout_width="25dp"
        android:layout_height="17dp"
        android:text="广告"/>
</FrameLayout>
