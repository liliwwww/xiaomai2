<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="21dp"
    android:paddingTop="7.5dp"
    android:paddingRight="21dp"
    android:paddingBottom="7.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.DMPosterView
            android:id="@+id/poster"
            android:layout_width="98dp"
            android:layout_height="131dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_marginLeft="6dp">
            <cn.damai.uikit.banner.Banner
                android:id="@+id/banner_video"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                app:image_scale_type="fit_xy"/>
            <cn.damai.uikit.banner.sub.RoundLayerView
                android:layout_width="match_parent"
                android:layout_height="131dp"
                app:x_round_radius="6dp"/>
            <View
                android:layout_gravity="bottom"
                android:background="@drawable/category_video_yinying_bg"
                android:layout_width="match_parent"
                android:layout_height="74dp"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:singleLine="true"
        android:lineSpacingExtra="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_9c9ca5"
                android:ellipsize="end"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/color_9c9ca5"
                android:ellipsize="end"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:singleLine="true"/>
        </LinearLayout>
        <cn.damai.uikit.view.ScoreStarDigitView
            android:gravity="bottom|right"
            android:orientation="horizontal"
            android:id="@+id/layout_score"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-2dp"/>
    </LinearLayout>
    <cn.damai.commonbusiness.search.TimerView
        android:id="@+id/ll_timer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="9dp"/>
</LinearLayout>
