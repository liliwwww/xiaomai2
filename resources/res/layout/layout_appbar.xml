<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="24dp"
        android:textColor="@color/appbar_light"
        android:gravity="center"
        android:id="@+id/navigation"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:text="@string/icon_font_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="7dp"
        android:textColor="@color/white"
        android:id="@+id/tv_license"
        android:paddingLeft="2.5dp"
        android:paddingTop="1.5dp"
        android:paddingRight="4.5dp"
        android:paddingBottom="2.5dp"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:text="@string/app_bar_license"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/navigation"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="16dp"
        android:textColor="@color/appbar_light_primary"
        android:gravity="start|center_vertical"
        android:id="@+id/txt_info"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="0dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:maxLines="1"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_license"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="16dp"/>
    <com.alipay.mobile.mpass.badge.ui.BadgeView
        android:id="@+id/badge_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/txt_info"
        app:layout_constraintTop_toTopOf="@+id/txt_info"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/appbar_light_primary"
        android:gravity="center"
        android:id="@+id/txt_sub"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_font_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_info"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/search_view_container"
        android:background="@drawable/common_search_home_background"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_action1"
        app:layout_constraintStart_toEndOf="@+id/txt_sub"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="12dp"
        app:layout_goneMarginStart="12dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/search_view"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="13dp"
                android:textColor="@color/appbar_light_hint"
                android:gravity="center"
                android:id="@+id/search_view_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/iconf_search"
                android:layout_marginStart="10dp"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/appbar_light_hint"
                android:ellipsize="end"
                android:id="@+id/search_view_hint"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/search_list_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="14dp"
                android:textColor="@color/appbar_light_hint"
                android:gravity="center"
                android:id="@+id/search_list_view_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/iconf_scan"
                android:layout_marginStart="10dp"/>
            <View
                android:id="@+id/divider"
                android:background="@color/tpp_gray_5"
                android:layout_width="1px"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <com.taobao.movie.android.commonui.widget.ObservableViewFlipper
                android:ellipsize="end"
                android:id="@+id/search_list_view_flipper"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12dp"
                android:gravity="center"
                android:id="@+id/search_btn"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="@string/search_btn_text"/>
        </LinearLayout>
    </FrameLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="24dp"
        android:textColor="@color/appbar_light"
        android:gravity="center"
        android:id="@+id/menu_action1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_action2_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="8dp"/>
    <com.alipay.mobile.mpass.badge.ui.BadgeView
        android:id="@+id/badge_menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/menu_action1"
        app:layout_constraintTop_toTopOf="@+id/menu_action1"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/menu_action2_container"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="8dp">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="24dp"
            android:textColor="@color/appbar_light"
            android:gravity="center"
            android:id="@+id/menu_action2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/appbar_light"
            android:id="@+id/menu_action2_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.alipay.mobile.mpass.badge.ui.BadgeView
        android:id="@+id/badge_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/menu_action2_container"
        app:layout_constraintTop_toTopOf="@+id/menu_action2_container"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="18dp"
        android:textColor="@color/appbar_light"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="32dp"
        android:minHeight="32dp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/sub_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/appbar_light_sub"
        android:ellipsize="end"
        android:id="@+id/sub_title"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxEms="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <View
        android:id="@+id/compat_elevation"
        android:background="@color/color_tpp_primary_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
