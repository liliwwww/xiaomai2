<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/ticklet_transfer_ll_allow_info"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_21dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ticklet_transfer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_19dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="#636363"
            android:id="@+id/ticklet_transfer_tv_choose_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:text="@string/iconfont_danxuanweixuanzhong24"/>
        <TextView
            android:id="@+id/ticklet_transfer_seat_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ticklet_4a4a4a_14dp"/>
        <TextView
            android:id="@+id/ticklet_transfer_limit_value"
            android:background="@drawable/ticklet_transfer_bg_allow_limit_value"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:paddingRight="6dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="19dp"
            style="@style/ticklet_aaaaaa_10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ticklet_transfer_cert_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp">
        <TextView
            android:id="@+id/ticklet_transfer_name"
            android:paddingTop="@dimen/margin_6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_16dp"
            style="@style/ticklet_aaaaaa_12dp"/>
        <TextView
            android:id="@+id/ticklet_transfer_cert"
            android:paddingTop="@dimen/margin_6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ticklet_aaaaaa_12dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ticklet_transfer_tn"
        android:paddingTop="@dimen/margin_6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        style="@style/ticklet_aaaaaa_12dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ticklet_ll_transfer_face_icon"
        android:background="@drawable/ticklet_transfer_bg_allow_limit_value"
        android:padding="@dimen/margin_3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="@dimen/margin_12dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="8dp"
            android:textColor="@color/color_FF2D79"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ticklet_perform_list_face_icon"
            android:paddingLeft="2dp"
            android:paddingTop="4dp"
            android:paddingRight="@dimen/margin_2dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_faceicon_"/>
        <TextView
            android:paddingLeft="@dimen/margin_2dp"
            android:paddingRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支持人脸识别"
            style="@style/ticklet_ff2d79_10dp"/>
    </LinearLayout>
    <View
        android:id="@+id/ticklet_transfer_allow_line"
        android:background="@color/color_E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_marginTop="@dimen/margin_21dp"
        android:layout_marginRight="@dimen/margin_18dp"/>
</LinearLayout>
