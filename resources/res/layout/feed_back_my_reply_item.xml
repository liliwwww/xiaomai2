<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/line_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="14dp"/>
    <LinearLayout
        android:gravity="center"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="36dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_replay_icon"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/bg_circle_main_red"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="@color/main_color"
            android:id="@+id/tv_replay_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="麦麦答复："/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line_bottom"
            android:background="@color/color_DDDDDD"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:layout_marginRight="@dimen/margin_18dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/black"
                android:id="@+id/tv_replay_content"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="感谢您的反馈，后面的文字为问题的处理结论,根据具体的情况给出对应的文案。"
                android:lineSpacingExtra="@dimen/margin_3dp"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_888888"
                android:id="@+id/tv_replay_time"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-05-21 18:00"
                android:lineSpacingExtra="@dimen/margin_3dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
