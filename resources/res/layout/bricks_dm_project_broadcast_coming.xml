<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:src="@drawable/bg_channel_broadcast"
        android:scaleType="fitXY"/>
    <FrameLayout
        android:id="@+id/dm_project_broadcast_coming_title_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginEnd="@dimen/margin_12dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/dm_project_broadcast_coming_title"
            android:layout_width="240dp"
            android:layout_height="15dp"
            android:src="@drawable/dm_project_broadcast_upcoming_icon"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:id="@+id/dm_project_broadcast_coming_title_right_block"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_5f6672"
                android:id="@+id/dm_project_broadcast_coming_title_right_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:includeFontPadding="false"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="12dp"
                android:textColor="@color/bricks_5f6672"
                android:id="@+id/dm_project_broadcast_coming_title_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_youjiantou_"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dc_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8"
        android:layout_marginBottom="@dimen/dim_8"
        android:layout_below="@+id/dm_project_broadcast_coming_title_block"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <com.alibaba.pictures.bricks.view.DMPosterView
            android:id="@+id/dc_project_poster"
            android:layout_width="77dp"
            android:layout_height="103dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">
            <FrameLayout
                android:id="@+id/lottie_want_see_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12dp"
                android:layout_marginEnd="0dp"
                android:layout_alignParentEnd="true">
                <com.alibaba.pictures.bricks.view.DMWantLottieAnimtionView
                    android:id="@+id/lottie_want_see"
                    android:layout_width="22dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/broadcast_block_want_see_iv"
                    android:visibility="gone"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/icon_block_want_gray"
                    android:scaleType="centerInside"/>
            </FrameLayout>
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="15dp"
                android:textColor="@color/color_bricks_primary_main_title"
                android:ellipsize="end"
                android:id="@+id/dc_project_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_toLeftOf="@+id/lottie_want_see_fl"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_ipvuv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dc_project_title">
                <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/bricks_FF8F3F"
                    android:ellipsize="end"
                    android:id="@+id/dc_project_ipuv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:lines="1"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#4d4d56"
                    android:ellipsize="end"
                    android:id="@+id/tv_project_ipuv_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人想看"
                    android:lines="1"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="#4d4d56"
                android:ellipsize="end"
                android:id="@+id/dc_project_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:lines="1"
                android:layout_below="@+id/layout_ipvuv"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#4d4d56"
                android:ellipsize="end"
                android:id="@+id/dc_project_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:lines="1"
                android:layout_below="@+id/dc_project_date"/>
            <RelativeLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <com.alibaba.pictures.bricks.view.DMCommonPriceView
                        android:id="@+id/project_with_price_ui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="#ff4886"
                        android:ellipsize="end"
                        android:id="@+id/project_with_price_custom_ui"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:text="自定义字段"
                        android:maxLines="1"/>
                    <com.alibaba.pictures.bricks.view.FlowLayout
                        android:id="@+id/project_with_price_promotion"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="1.5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:id="@+id/project_state_count_down"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <com.alibaba.pictures.bricks.view.DMDigitTextView
                        android:textSize="13dp"
                        android:textColor="#ff4886"
                        android:id="@+id/project_state_count_down_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#ff4886"
                        android:id="@+id/project_state_count_down_day_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="天"/>
                    <com.alibaba.pictures.bricks.view.DMDigitTextView
                        android:textSize="13dp"
                        android:textColor="#ff4886"
                        android:id="@+id/project_state_count_down_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#ff4886"
                        android:id="@+id/tv_hour_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <com.alibaba.pictures.bricks.view.DMDigitTextView
                        android:textSize="13dp"
                        android:textColor="#ff4886"
                        android:id="@+id/project_state_count_down_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#ff4886"
                        android:id="@+id/tv_minute_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"/>
                    <com.alibaba.pictures.bricks.view.DMDigitTextView
                        android:textSize="13dp"
                        android:textColor="#ff4886"
                        android:gravity="bottom"
                        android:id="@+id/project_state_count_down_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#ff4886"
                        android:gravity="bottom"
                        android:id="@+id/tv_time_suffix"
                        android:paddingBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后开售"/>
                </LinearLayout>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/project_state_buy"
                    android:background="@drawable/bricks_channel_grabhot_btn"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="火爆热抢中"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="#ff4886"
                    android:gravity="center"
                    android:id="@+id/project_state_none_ticket"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="很遗憾没票了"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
