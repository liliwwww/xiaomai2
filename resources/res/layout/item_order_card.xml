<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:background="@drawable/common_corner_6_white_card_bg"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="9dp"
    android:layout_marginRight="12dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/iv_card_union_icon"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="10dp"
        android:textStyle="bold"
        android:id="@+id/iv_card_tag"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/iv_card_tag_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_card_union_icon,iv_card_tag"/>
    <TextView
        android:textColor="@color/color_tpp_primary_main_title"
        android:id="@+id/tv_union_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_card_tag_barrier"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/tpp_primary_red"
        android:id="@+id/tv_union_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/tv_union_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_union_title"
        app:layout_constraintTop_toTopOf="@+id/tv_union_title"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/tpp_gray_3"
        android:id="@+id/tv_union_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ift_union_check"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_subtitle"
        android:id="@+id/tv_union_use_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="66dp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="@+id/tv_union_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_union_title"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="21dp"
        android:textColor="@color/color_tpp_primary_gray_c8"
        android:gravity="center"
        android:id="@+id/ift_union_check"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_font_selected_no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.app.order.ui.widget.OneKeyReceive88VipView
        android:id="@+id/receive_88vip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
