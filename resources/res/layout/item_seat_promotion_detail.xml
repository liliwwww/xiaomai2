<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingTop="@dimen/margin_18dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingBottom="@dimen/margin_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/textsize_13"
            android:textColor="@color/color_000000"
            android:id="@+id/item_promotion_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:layout_weight="33"/>
        <TextView
            android:textSize="@dimen/textsize_13"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/item_promotion_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_4"
            android:maxLines="2"
            android:layout_weight="30"/>
        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30">
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_FF2D79"
                android:id="@+id/item_promotion_tag"
                android:background="@drawable/bg_border_corner_2_solid_white"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_4"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:textSize="@dimen/textsize_13"
                android:textColor="@color/color_000000"
                android:id="@+id/item_promotion_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
