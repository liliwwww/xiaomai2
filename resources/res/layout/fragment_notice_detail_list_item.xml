<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/notice_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textIsSelectable="true"/>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/notice_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textIsSelectable="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/notice_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textIsSelectable="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/notice_list_imgcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"/>
    <View
        android:id="@+id/notice_list_divline"
        android:background="@color/color_ededed"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"/>
</LinearLayout>
