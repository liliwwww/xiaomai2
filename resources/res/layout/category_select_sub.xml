<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_select_sub"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/category_select_tran01yuanbg"
        android:paddingLeft="15dp"
        android:paddingRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_FF2D79"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_select_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="7"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_FF2D79"
            android:id="@+id/tv_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_FF2D79"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/iconfont_guanbi16"/>
    </LinearLayout>
</LinearLayout>
