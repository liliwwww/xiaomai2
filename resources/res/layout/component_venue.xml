<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bricks_damai_list_bg"
    android:paddingTop="@dimen/damai_line_spacing_up"
    android:paddingBottom="@dimen/damai_line_spacing_down"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:paddingStart="@dimen/damai_margin_right_left"
    android:paddingEnd="@dimen/damai_line_spacing_right">
    <FrameLayout
        android:id="@+id/artist_avatar_lay"
        android:background="@drawable/bg_artist_avatar"
        android:layout_width="@dimen/resource_size_60"
        android:layout_height="@dimen/resource_size_60"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_white"
            android:layout_width="@dimen/resource_size_54"
            android:layout_height="@dimen/resource_size_54">
            <cn.damai.uikit.banner.sub.RoundRadiusImageView
                android:id="@+id/artist_avatar"
                android:layout_width="@dimen/resource_size_50"
                android:layout_height="@dimen/resource_size_50"
                android:src="@drawable/ic_venue_location"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/damai_column_spacing"
        android:layout_toEndOf="@+id/artist_avatar_lay">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/resource_size_16"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/resource_size_6"
                android:layout_toStartOf="@+id/venue_distance_icon"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="#33000000"
                android:id="@+id/venue_distance_icon"
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_ticket_point"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/venue_distance"/>
            <TextView
                android:textSize="@dimen/resource_size_14"
                android:textColor="@color/black"
                android:id="@+id/venue_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/resource_size_3"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/color_9B9B9B"
            android:ellipsize="end"
            android:id="@+id/venue_location"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/damai_maintitle_subtitle_spacing"
            android:maxLines="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/performance"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/damai_maintitle_subtitle_spacing">
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/color_9B9B9B"
                android:gravity="center"
                android:id="@+id/performance_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/color_9B9B9B"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/performance_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginStart="@dimen/resource_size_5"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
