<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actor_layout"
    android:background="@color/aliuser_color_white"
    android:layout_width="50dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/aritst_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/actor_image_bg"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/livehouse_actor_image_bg"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/actor_image"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/artist_tag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/artist_tag_bg"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:id="@+id/artist_tag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:id="@+id/actor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="6dp"
        android:text="哈哈"
        android:singleLine="true"
        android:layout_below="@+id/aritst_image_layout"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
