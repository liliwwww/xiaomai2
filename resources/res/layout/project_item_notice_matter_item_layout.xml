<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/color_ffffff"
    android:paddingLeft="@dimen/margin_21dp"
    android:paddingTop="18.5dp"
    android:paddingRight="@dimen/margin_21dp"
    android:paddingBottom="10.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_vertical"
                android:background="@drawable/title_bg_dot"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:id="@+id/project_item_prompt_tag_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:singleLine="true"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:id="@+id/project_item_prompt_tag_desc_tv"
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:lineSpacingExtra="@dimen/margin_4dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/project_item_prompt_tag_desc_ll"
        android:background="@color/color_ffffff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_vertical"
                android:background="@drawable/title_bg_dot"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:id="@+id/project_item_prompt_tag_name_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:singleLine="true"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:id="@+id/project_item_prompt_tag_desc_tv2"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:lineSpacingExtra="@dimen/margin_4dp"/>
    </LinearLayout>
</LinearLayout>
