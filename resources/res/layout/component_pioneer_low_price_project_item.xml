<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/pioneer_homepage_item_container"
    android:layout_width="71dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/pioneer_homepage_poster_container"
        android:layout_width="71dp"
        android:layout_height="94dp">
        <com.alibaba.pictures.bricks.view.RoundImageView
            android:id="@+id/pioneer_homepage_item_image_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_default_image_bg_pioneer"
            android:scaleType="centerCrop"
            app:borderRadius="9dp"
            app:type="radial"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/pioneer_homepage_item_image_normal_cover"
            android:background="@drawable/pioneer_item_cover"
            android:layout_width="match_parent"
            android:layout_height="33dp"/>
        <com.alibaba.pictures.bricks.view.FlowLayout
            android:layout_gravity="start"
            android:id="@+id/pioneer_homepage_item_tag_view"
            android:paddingTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"/>
        <com.alibaba.pictures.bricks.view.CustomHighlightsTextView
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/pioneer_homepage_item_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:alignItems="baseline"
            app:flexDirection="row"
            app:flexWrap="nowrap"/>
    </FrameLayout>
</LinearLayout>
