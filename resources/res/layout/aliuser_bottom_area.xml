<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom|center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/aliuser_space_20">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/aliuser_default_text_color"
            android:gravity="center"
            android:id="@+id/aliuser_qrlogin_tv"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aliuser_qrlogin"
            android:drawablePadding="@dimen/aliuser_space_4"/>
        <View
            android:layout_gravity="center"
            android:id="@+id/aliuser_qrlogin_divider"
            android:background="@color/aliuser_color_ccc"
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/aliuser_space_12"
            android:layout_marginRight="@dimen/aliuser_space_12"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/aliuser_default_text_color"
            android:gravity="center"
            android:id="@+id/ali_user_login_alipay_login_tv"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ali_user_alipay_quick_login"
            android:drawableLeft="@drawable/aliuser_ic_alipay"
            android:drawablePadding="@dimen/aliuser_space_4"/>
    </LinearLayout>
    <include
        android:id="@+id/aliuser_check_rl"
        layout="@layout/aliuser_check_protocol"/>
</LinearLayout>
