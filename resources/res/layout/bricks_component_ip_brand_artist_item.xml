<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.pictures.bricks.view.RCRelativeLayoutView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:id="@+id/ip_brand_artist_layout"
    android:layout_width="98dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="9dp"
    app:round_corner="6dp">
    <com.alibaba.pictures.bricks.view.DMPosterView
        android:id="@+id/drama_image"
        android:layout_width="98dp"
        android:layout_height="120dp"
        android:src="@drawable/bricks_bg_music_cardbg_0"/>
    <com.alibaba.pictures.bricks.view.DMAvatar
        android:id="@+id/ip_brand_artist_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:avatarSize="size_50x50"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:id="@+id/ip_brand_artist_name"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:lines="1"
        android:layout_below="@+id/ip_brand_artist_avatar"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#999999"
        android:ellipsize="end"
        android:id="@+id/ip_brand_artist_fancount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lines="1"
        android:layout_below="@+id/ip_brand_artist_name"
        android:layout_centerHorizontal="true"/>
</com.alibaba.pictures.bricks.view.RCRelativeLayoutView>
