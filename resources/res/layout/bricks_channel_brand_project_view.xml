<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/bricks_channel_brand_project_poster"
        android:layout_width="48dp"
        android:layout_height="64dp"
        app:failureImage="@drawable/bricks_default_image_bg_gradient"
        app:placeholderImage="@drawable/bricks_default_image_bg_gradient"
        app:roundedCornerRadius="3dp"
        app:roundingBorderColor="#1a000000"
        app:roundingBorderWidth="0.5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_bricks_primary_main_title"
            android:ellipsize="end"
            android:id="@+id/bricks_channel_brand_project_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="2"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"/>
        <com.alibaba.pictures.bricks.view.DMCommonPriceView
            android:id="@+id/bricks_channel_brand_project_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
