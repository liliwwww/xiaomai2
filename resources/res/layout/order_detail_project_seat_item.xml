<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_order_seat_seat"
        android:layout_width="130dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:id="@+id/tv_order_seat_no"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:textSize="@dimen/margin_10dp"
        android:textColor="#ff5f5f"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_taopiao"
        android:background="@drawable/bg_border_corner_ff5f5f"
        android:paddingLeft="4dp"
        android:paddingTop="@dimen/margin_1dp"
        android:paddingRight="@dimen/margin_4dp"
        android:paddingBottom="@dimen/margin_1dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="套票"/>
    <TextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="@color/color_666666"
        android:gravity="right"
        android:id="@+id/tv_order_seat_price"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
