<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:text="@string/appstore_desc"
        android:lineSpacingExtra="5dp"/>
    <View
        android:background="@color/color_tpp_primary_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/tpp_secondary_blue"
        android:gravity="center"
        android:id="@+id/comment"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tpp_appstore_comment"/>
    <View
        android:background="@color/color_tpp_primary_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/tpp_secondary_blue"
        android:gravity="center"
        android:id="@+id/feedback"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tpp_appstore_feedback"/>
    <View
        android:background="@color/color_tpp_primary_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/tpp_secondary_blue"
        android:gravity="center"
        android:id="@+id/dontremind"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dontremind"/>
</LinearLayout>
