<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="#66000000"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/content_zone"
        android:background="@drawable/refund_and_endorse_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp">
        <TextView
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="15dp"
            android:text="退改签服务协议"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_title"
            android:id="@+id/protocol_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:text=""
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/protocol_zone"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.taobao.movie.android.commonui.widget.IconFontTextView
                    android:textSize="21dp"
                    android:textColor="@color/tpp_gray_4"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_font_selected_no"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_subtitle"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="我已阅读并同意以上协议"/>
            </LinearLayout>
            <View
                android:background="@color/common_color_1011"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_17_dp"
                    android:textColor="@color/color_tpp_primary_subtitle"
                    android:gravity="center"
                    android:id="@+id/cancle"
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    android:text="暂不购票"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/text_size_17_dp"
                    android:textColor="@color/tpp_secondary_blue"
                    android:gravity="center"
                    android:id="@+id/buy"
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    android:text="继续购票"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
