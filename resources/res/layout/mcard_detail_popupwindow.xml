<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/blank_black"
        android:background="#40000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/blank_white_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_gravity="bottom"
            android:id="@+id/blank_white"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/core_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ordering_selector_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/common_divider_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_line_height"/>
            <include
                android:id="@+id/chargecard_item"
                android:visibility="gone"
                layout="@layout/order_ordering_frag_payment_chargecard_common"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_open_card_parent"
                android:background="#efffffff"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/phone_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">
                        <TextView
                            android:textSize="12dp"
                            android:textColor="@color/color_tpp_primary_assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_desc"/>
                        <TextView
                            android:textSize="12dp"
                            android:textColor="@color/common_text_color9"
                            android:textColorHint="@color/color_tpp_primary_assist"
                            android:id="@+id/buy_card_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:hint="@string/empty_user_phone_tip"
                            android:singleLine="true"
                            android:maxLength="13"/>
                        <com.taobao.movie.android.commonui.widget.MIconfontTextView
                            android:textSize="12dp"
                            android:textColor="@color/common_blue_text_color"
                            android:id="@+id/buy_card_edit_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/iconf_edit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.taobao.movie.android.commonui.widget.IconFontTextView
                            android:textSize="13dp"
                            android:textColor="@color/tpp_gray_4"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_agree_mcard_protocol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_font_selected_no"
                            android:includeFontPadding="false"/>
                        <TextView
                            android:textSize="13dp"
                            android:textColor="@color/color_tpp_primary_subtitle"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/card_use_guide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:text="@string/action_can_not_call"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/open_card_container"
                    android:background="@drawable/select_seat_bottom_bg"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/open_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/recharge_btn_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/open_card"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
