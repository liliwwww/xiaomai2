<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.view.RoundImageView
        android:id="@+id/homepage_waterflow_venues_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/homepage_waterflow_venues_default_bg"
        app:borderRadius="6dp"
        app:type="radial"/>
    <ImageView
        android:id="@+id/homepage_waterflow_venues_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/homepage_waterflow_venues_default_shade"/>
    <cn.damai.baseview.RCRelativeLayoutView
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:round_corner="6dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/homepage_waterflow_venues_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="#33ffffff"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="#99ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_huabian"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选厂牌"
                android:singleLine="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="#99ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_huabianfan"/>
            <View
                android:background="#33ffffff"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/homepage_waterflow_venues_header_icon_layout"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/homepage_waterflow_venues_tag"
            android:layout_centerHorizontal="true">
            <ImageView
                android:background="@drawable/homepage_waterflow_venues_header_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <cn.damai.uikit.view.RoundImageView
                android:layout_gravity="center"
                android:id="@+id/homepage_waterflow_venues_header_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/uikit_user_default_icon_trans_white"
                android:scaleType="centerCrop"
                app:type="linear"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/homepage_waterflow_venues_header_v_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/user_v_tag"/>
        </FrameLayout>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_ffffff"
            android:id="@+id/homepage_waterflow_venues_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:layout_below="@+id/homepage_waterflow_venues_header_icon_layout"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/homepage_waterflow_venues_desc_top_dash"
            android:background="@drawable/homepage_waterflow_venues_dash"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/homepage_waterflow_venues_name"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#66ffffff"
            android:ellipsize="end"
            android:id="@+id/homepage_waterflow_venues_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:layout_below="@+id/homepage_waterflow_venues_desc_top_dash"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="3dp"/>
        <View
            android:id="@+id/homepage_waterflow_venues_desc_bottom_dash"
            android:background="@drawable/homepage_waterflow_venues_dash"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/homepage_waterflow_venues_desc"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/homepage_waterflow_venues_entrance_btn"
            android:background="@drawable/homepage_waterflow_venues_entrance_btn_bg"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_ffffff"
                android:id="@+id/homepage_waterflow_venues_entrance_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击了解"
                android:singleLine="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="10dp"
                android:textColor="@color/color_ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/iconfont_youjiantou12"/>
        </LinearLayout>
    </cn.damai.baseview.RCRelativeLayoutView>
</FrameLayout>
