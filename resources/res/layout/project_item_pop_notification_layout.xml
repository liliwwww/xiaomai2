<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/project_item_pop_layer_bg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75">
        <include layout="@layout/title_pop_layer"/>
        <ScrollView
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/margin_13dp"
                    android:textColor="@color/color_666666"
                    android:id="@+id/project_notification_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/margin_3dp"/>
                <cn.damai.uikit.view.FixImageView
                    android:id="@+id/project_notification_content_img"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin_15"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
