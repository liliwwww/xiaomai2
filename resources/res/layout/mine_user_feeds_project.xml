<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mine_user_feed_wrapper"
    android:background="@drawable/mine_brand_card_border"
    android:layout_width="match_parent"
    android:layout_height="66dp">
    <cn.damai.uikit.view.RoundImageView
        android:id="@+id/mine_user_feed_propic"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        app:borderRadius="6dp"
        app:type="radial"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/mine_user_feed_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/mine_user_feed_propic"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="14dp"
            android:textColor="#111111"
            android:ellipsize="end"
            android:id="@+id/mine_user_feed_mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:ellipsize="end"
            android:id="@+id/mine_user_feed_mid_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:layout_below="@+id/mine_user_feed_mid_text"/>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/mine_user_feed_jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="@string/iconfont_youjiantou24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
