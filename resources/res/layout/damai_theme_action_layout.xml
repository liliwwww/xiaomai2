<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:roundimage="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/damai_theme_dialog_confirm_btn"
        android:background="@drawable/bg_submit_button_selector"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:text="确定"
        android:singleLine="true"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="16dp"
        android:textColor="#ff2869"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/damai_theme_dialog_cancel_btn"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:text="取消"
        android:singleLine="true"
        android:includeFontPadding="false"/>
</LinearLayout>
