<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/title_bar_ui"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_height">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="22dp"
            android:textColor="@color/color_bricks_primary_white"
            android:gravity="center"
            android:id="@+id/back_btn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:text="@string/iconfont_zuojiantou_"
            android:layout_centerVertical="true"
            android:paddingStart="5dp"
            android:layout_marginStart="12dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:id="@+id/share_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/share_activity"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/share_ll"
                android:layout_width="57dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true">
                <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                    android:id="@+id/share_gif"
                    android:visibility="visible"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    app:lottie_loop="true"/>
                <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                    android:id="@+id/share_gif_new"
                    android:visibility="gone"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/lottie_project_detail_default_share"
                    app:lottie_repeatCount="1"/>
                <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/base_head_line_color"
                    android:gravity="center"
                    android:id="@+id/share_btn"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"/>
            </LinearLayout>
        </RelativeLayout>
        <cn.damai.uikit.tag.DMCertInfoTagView
            android:id="@+id/cert_btn"
            android:visibility="gone"
            android:layout_width="31dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/divider_line"
            android:background="#19000000"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
