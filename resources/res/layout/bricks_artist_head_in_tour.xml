<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:layout_width="60dp"
    android:layout_height="60dp">
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/bricks_artist_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-9dp"/>
    <View
        android:id="@+id/id_bricks_artist_head_bg1"
        android:background="@drawable/bricks_artist_head_bg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-2dp"/>
    <com.alibaba.pictures.bricks.view.RoundRadiusImageView
        android:id="@+id/id_bricks_artist_head_img"
        android:background="@drawable/bricks_uikit_default_image_bg_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:r_round_radius="6dp"/>
    <View
        android:id="@+id/id_bricks_artist_head_mask"
        android:background="@drawable/bricks_artist_head_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"/>
    <com.alibaba.pictures.bricks.view.CornerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:clip_corner_radius="6dp">
        <ImageView
            android:id="@+id/id_bricks_artist_head_shining"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_artist_shining"/>
    </com.alibaba.pictures.bricks.view.CornerFrameLayout>
    <TextView
        android:textSize="@dimen/resource_size_11"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:id="@+id/id_bricks_artist_name_tv"
        android:background="@drawable/bricks_artist_name_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"/>
</FrameLayout>
