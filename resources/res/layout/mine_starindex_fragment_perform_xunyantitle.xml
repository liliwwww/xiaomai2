<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="166dp">
    <RelativeLayout
        android:layout_gravity="right"
        android:id="@+id/starindex_perform_pro_img"
        android:layout_width="106dp"
        android:layout_height="136dp"
        android:layout_marginLeft="21dp"
        android:layout_alignParentLeft="true">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/image_item"
            android:layout_width="102dp"
            android:layout_height="136dp"
            android:src="@drawable/uikit_default_image_bg_gradient"
            android:scaleType="fitXY"
            app:borderRadius="6dp"
            app:type="radial"/>
        <cn.damai.uikit.view.DMLabelView
            android:id="@+id/laeblview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@+id/starindex_perform_pro_img">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lineSpacingExtra="4dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:id="@+id/tv_subtitle"
            android:paddingTop="3dp"
            android:paddingRight="6dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:lineSpacingExtra="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="12dp"
                android:textColor="#ff2869"
                android:gravity="bottom"
                android:id="@+id/tv_price_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="#ff2869"
                android:gravity="bottom"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-2dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_666666"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:text="起"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
