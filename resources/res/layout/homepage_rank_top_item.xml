<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="98dp"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/homepage_rank_top_bg_second"
        android:layout_width="6dp"
        android:layout_height="91dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="12dp"/>
    <View
        android:background="@drawable/homepage_rank_top_bg_first"
        android:layout_width="6dp"
        android:layout_height="103dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="6dp"/>
    <cn.damai.uikit.view.RoundImageView
        android:id="@+id/homepage_rank_top_item_image"
        android:background="@drawable/uikit_default_image_bg_gradient"
        android:layout_width="86dp"
        android:layout_height="115dp"
        app:borderRadius="6dp"
        app:type="radial"/>
    <View
        android:background="@drawable/bricks_homepage_project_image_border"
        android:layout_width="86dp"
        android:layout_height="115dp"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/homepage_rank_top_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:maxLines="1"
        android:minLines="1"
        android:layout_below="@+id/homepage_rank_top_item_image"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:id="@+id/homepage_rank_top_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:minLines="1"
        android:layout_below="@+id/homepage_rank_top_item_title"/>
</RelativeLayout>
