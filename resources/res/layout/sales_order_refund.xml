<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_text_color46"
    android:paddingLeft="12dp"
    android:paddingTop="3dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="12.5dp"
                android:textColor="@color/color_tpp_primary_subtitle"
                android:id="@+id/refund_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:id="@+id/refund_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="12.5dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:id="@+id/refund_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:id="@+id/refund_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:singleLine="true"/>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>
