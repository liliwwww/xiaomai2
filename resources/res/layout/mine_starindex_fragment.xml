<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_gap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"/>
    <FrameLayout
        android:id="@+id/starindex_layout_bg"
        android:background="@drawable/app_title_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <include
        android:id="@+id/user_call_follow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/user_publish"
        android:layout_alignParentBottom="true"
        layout="@layout/user_call_follow"/>
    <cn.damai.uikit.irecycler.DamaiRootRecyclerView
        android:id="@+id/starindex_irecyclerview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:loadMoreFooterLayout="@layout/layout_irecyclerview_load_more_footer"/>
</RelativeLayout>
