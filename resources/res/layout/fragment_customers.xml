<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bricks_F0F3F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.irecycler.IRecyclerView
        android:id="@+id/customer_irecyclerview"
        android:background="@drawable/activity_contracts_list_bg"
        android:paddingLeft="12dp"
        android:paddingTop="1dp"
        android:paddingRight="12dp"
        android:paddingBottom="1dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="70dp"
        android:overScrollMode="never"
        app:loadMoreEnabled="false"
        app:loadMoreFooterLayout="@null"
        app:refreshEnabled="false"/>
    <FrameLayout
        android:id="@+id/bottom"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:id="@+id/add_customer_btn"
            android:background="@drawable/damai_btn_rightbottom_sharp_corner_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:text="添加新观演人"/>
    </FrameLayout>
</RelativeLayout>
