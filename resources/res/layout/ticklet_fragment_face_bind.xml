<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll_face_complete"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:id="@+id/rebind_complete_tv"
            android:background="@drawable/ticklet_stroke_ff2d79_bg"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <cn.damai.uikit.irecycler.IRecyclerView
        android:id="@+id/ticklet_face_bind_recyclerview"
        android:background="@color/color_f8f8f8"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_face_complete"
        android:overScrollMode="never"
        app:loadMoreEnabled="false"
        app:refreshEnabled="false"
        app:refreshHeaderLayout="@layout/refresh_empty_view"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ticklet_face_bind_error_page"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
