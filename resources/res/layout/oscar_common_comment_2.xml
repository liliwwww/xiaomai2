<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/comment_item"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.app.common.widget.CommentUserNickView
                android:gravity="center_vertical"
                android:id="@+id/common_comment_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"/>
            <com.taobao.movie.android.commonui.widget.richtext.RichTextView
                android:textSize="15dp"
                android:textColor="@color/tpp_gray_0"
                android:gravity="start"
                android:id="@+id/common_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="35dp"/>
        </RelativeLayout>
        <com.taobao.movie.android.app.ui.widget.ExpandableReplyTextView
            android:id="@+id/comment_reply_txt"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"/>
        <ViewStub
            android:id="@+id/comment_magic_tag_viewstub"
            android:layout="@layout/common_magic_tag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="20dp"/>
        <ViewStub
            android:id="@+id/comment_film_viewstub"
            android:layout="@layout/common_film_container"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/common_color_1006"
                    android:id="@+id/common_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/common_color_1006"
                    android:id="@+id/common_comment_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="14dp"
                android:textColor="@color/common_color_1006"
                android:gravity="center"
                android:id="@+id/common_comment_reply_btn"
                android:paddingLeft="4dp"
                android:paddingTop="12dp"
                android:paddingRight="4dp"
                android:paddingBottom="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/iconf_do_reply"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/common_color_1006"
                android:gravity="center_vertical"
                android:id="@+id/common_comment_reply_count"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <View
            android:id="@+id/bottom_line"
            android:background="@color/common_color_1011"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="18dp"
                android:textColor="@color/common_color_1006"
                android:id="@+id/common_comment_favor_btn"
                android:padding="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconf_add_favor"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="18dp"
                android:textColor="@color/vertical_close_btn_color"
                android:id="@+id/common_comment_new_favor_btn"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_font_heart_empty"/>
        </FrameLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/common_color_1006"
            android:layout_gravity="center_horizontal"
            android:id="@+id/common_comment_favor_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</merge>
