<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/common_text_color10"
        android:ellipsize="end"
        android:id="@+id/expandable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:lineSpacingExtra="11dp"/>
    <FrameLayout
        android:layout_gravity="bottom|right"
        android:id="@+id/ll_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/film_detail_expand_more_bg"
            android:layout_width="15dp"
            android:layout_height="18dp"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="11dp"
            android:textColor="@color/cg_1"
            android:gravity="center"
            android:id="@+id/expand_collapse"
            android:visibility="visible"
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:text="@string/iconf_down_arrow"
            android:layout_marginStart="6dp"/>
    </FrameLayout>
</FrameLayout>
