<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/oscar_cinemalist_child_root_view"
    android:background="@drawable/item_click_effect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/last_visited_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lasted_cinema"
        android:layout_alignRight="@+id/padding_View"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:layout_constraintEnd_toEndOf="@+id/padding_View"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/padding_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout1"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexWrap="nowrap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="0dp">
        <TextView
            android:textSize="@dimen/text_size_15_dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_main_title"
            android:ellipsize="end"
            android:id="@+id/oscar_cinemalist_cinema_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_flexShrink="1"/>
        <TextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/recomment_tag"
            android:background="@drawable/cineamlist_recomment_tag_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginRight="4dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_flexShrink="0"/>
        <TextView
            android:textSize="9dp"
            android:textColor="@color/color_tpp_primary_white"
            android:gravity="center"
            android:id="@+id/recommend_spec_tag"
            android:background="@drawable/cineamlist_recomment_tag_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginRight="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_flexShrink="0"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="11dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:id="@+id/oscar_cinemalist_cinema_action"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="1dp"
            android:text="@string/iconf_right_arrow"
            app:layout_flexShrink="0"/>
        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:gravity="right"
                android:layout_gravity="bottom"
                android:id="@+id/oscar_cinenalist_cinema_oriprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/tpp_primary_red"
                android:ellipsize="end"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:id="@+id/oscar_cinenalist_cinema_newcomer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginStart="3dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/tpp_primary_red"
                android:ellipsize="end"
                android:gravity="right"
                android:layout_gravity="bottom"
                android:id="@+id/oscar_cinenalist_cinema_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:layout_gravity="bottom"
                android:id="@+id/oscar_cinenalist_cinema_price_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:layout_gravity="bottom"
                android:id="@+id/cinema_offline_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout2"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/layout1"
        app:layout_constraintTop_toBottomOf="@+id/layout1">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:gravity="center"
            android:id="@+id/oscar_cinemas_score_tag_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:gravity="center"
            android:id="@+id/oscar_cinenalist_cinema_no_score"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="暂无好评度"
            android:singleLine="true"
            android:includeFontPadding="false"
            app:layout_flexShrink="0"/>
        <View
            android:id="@+id/oscar_cinemas_score_tag_divider"
            android:background="#80c8c8c8"
            android:visibility="gone"
            android:layout_width="1px"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/oscar_cinemalist_cinema_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_20"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_weight="1"
            style="@style/CinemaList_Address"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/oscar_cinemalist_cinema_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            style="@style/CinemaList_Distance"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/cinema_distance_mall_metro_des_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout2">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:ellipsize="end"
            android:id="@+id/cinema_distance_mall_metro_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:singleLine="true"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/cinema_distance_mall_metro_des_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <com.taobao.movie.android.app.seat.ui.weight.ExFlowLayout
        android:id="@+id/cinema_function_tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:layout_marginEnd="60dp"
        app:fold_lines="2"
        app:itemSpacing="3dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_collapsedIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinema_distance_mall_metro_des_container"
        app:lineSpacing="6dp"
        app:max_lines="3"/>
    <TextView
        android:textSize="13dp"
        android:gravity="center"
        android:id="@+id/tv_collapsedIcon"
        android:visibility="invisible"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:text="@string/icon_font_down_small"
        app:fontFamily="@font/icon_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout2"/>
    <TextView
        android:id="@+id/oscar_cinemalist_cinema_status"
        android:paddingLeft="13dp"
        android:paddingTop="@dimen/margin_8"
        android:paddingRight="13dp"
        android:paddingBottom="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cinema_function_tag_container"
        style="@style/CinemaList_Address"/>
    <View
        android:id="@+id/mark_bottom_spacing"
        android:layout_width="1px"
        android:layout_height="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oscar_cinemalist_cinema_status"/>
    <View
        android:id="@+id/divider_bottom"
        android:background="@color/tpp_gray_5"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
