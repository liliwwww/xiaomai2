<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/feed_media_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/community_head_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="9dp">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/community_media_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="0"
            fresco:placeholderImage="@drawable/header_place_holder"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/color_tpp_primary_gray_c8"
            fresco:roundingBorderWidth="1px"/>
        <ImageView
            android:id="@+id/community_media_verify"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/business_feed_media_tag"
            android:layout_alignRight="@+id/community_media_icon"
            android:layout_alignBottom="@+id/community_media_icon"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="9dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_black"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/community_media_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:maxLines="1"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/community_meida_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
</merge>
