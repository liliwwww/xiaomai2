<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/homepage_module_title"/>
    <RelativeLayout
        android:background="@color/black"
        android:paddingBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.player.DMVideoPlayer
            android:id="@+id/homepage_video_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@drawable/bg_black2trans"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_alignBottom="@+id/homepage_video_player"/>
        <View
            android:id="@+id/homepage_video_cover"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_below="@+id/homepage_video_player"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homepage_video_project_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="21dp"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/single_user_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentRight="true">
            <FrameLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/red_oval_bg"/>
                <cn.damai.uikit.view.RoundImageView
                    android:id="@+id/user_head_single"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/user_head_single_name"
                android:background="@drawable/bg_border_corner_99_black_22"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxWidth="65dp"
                android:minWidth="40dp"
                android:lines="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
