<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:background="@drawable/item_round_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_9dp"
    style="@style/OrderCommonMarketItem">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_coupons"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12">
            <TextView
                android:textSize="@dimen/text_size_15_dp"
                android:textStyle="bold"
                android:textColor="@color/bricks_2e333e"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/bricks_959AA5"
                android:gravity="right"
                android:id="@+id/tv_sub_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_coupons"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="@dimen/margin_9"
            android:layout_marginBottom="@dimen/margin_9"/>
    </LinearLayout>
</LinearLayout>
