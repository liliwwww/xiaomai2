<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aliuser_reg_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/aliuser_default_bg"
        android:paddingLeft="@dimen/aliuser_page_padding"
        android:paddingRight="@dimen/aliuser_page_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/aliuser_region_rl"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_48">
            <TextView
                android:textColor="@color/aliuser_default_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aliuser_region"/>
            <TextView
                android:textColor="@color/aliuser_default_text_color"
                android:id="@+id/aliuser_region_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国大陆 +86"
                android:drawableRight="@drawable/aliuser_ic_right_arrow"
                android:drawablePadding="@dimen/aliuser_space_8"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="@dimen/aliuser_textsize_big"
                android:id="@+id/aliuser_register_mobile_et"
                android:background="@drawable/aliuser_edittext_bg"
                android:nextFocusDown="@+id/aliuser_register_sms_code_et"
                android:layout_marginTop="@dimen/aliuser_space_24"
                android:hint="@string/aliuser_mobile_hint"
                android:maxLength="20"
                android:inputType="phone"
                style="@style/AliUserEditTextStyle"/>
            <ImageView
                android:id="@+id/aliuser_login_mobile_clear_iv"
                android:paddingLeft="@dimen/aliuser_space_8"
                android:paddingTop="@dimen/aliuser_space_8"
                android:paddingRight="@dimen/aliuser_space_4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aliuser_ic_edit_text_clear_x"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/aliuser_assist_clear"
                android:paddingStart="@dimen/aliuser_space_8"
                android:paddingEnd="@dimen/aliuser_space_4"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/aliuser_space_16"
            style="@style/AliUserEditParentLayoutStyle">
            <EditText
                android:id="@+id/aliuser_register_sms_code_et"
                android:background="@drawable/aliuser_edittext_bg"
                android:layout_marginTop="@dimen/aliuser_space_8"
                android:hint="@string/aliuser_sms_code_hint"
                android:maxLength="6"
                android:digits="1234567890"
                android:inputType="number"
                style="@style/AliUserEditTextStyle"/>
            <com.ali.user.mobile.ui.widget.CountDownButton
                android:enabled="false"
                android:textSize="13sp"
                android:textColor="@color/aliuser_send_sms_text_color"
                android:id="@+id/aliuser_register_send_smscode_btn"
                android:background="@drawable/aliuser_bg_send_sms_btn"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginBottom="@dimen/aliuser_space_4"
                android:text="@string/aliuser_signup_verification_getCode"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/aliuser_textsize_smallest"
            android:textColor="@color/aliuser_func_text_color"
            android:id="@+id/aliuser_send_sms_success_tip"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_4"
            android:layout_marginBottom="@dimen/aliuser_space_8"
            android:text="@string/aliuser_sms_code_success_hint"
            android:drawableLeft="@drawable/aliuser_ic_tip"
            android:drawablePadding="@dimen/aliuser_space_8"/>
        <EditText
            android:id="@+id/aliuser_register_email_et"
            android:background="@drawable/aliuser_edittext_bg"
            android:visibility="gone"
            android:nextFocusDown="@+id/aliuser_register_sms_code_et"
            android:layout_marginBottom="@dimen/aliuser_space_24"
            android:hint="请输入电子邮箱地址"
            android:inputType="textEmailAddress"
            style="@style/AliUserEditTextStyle"/>
        <EditText
            android:id="@+id/aliuser_register_password_et"
            android:background="@drawable/aliuser_edittext_bg"
            android:visibility="gone"
            android:nextFocusDown="@+id/aliuser_register_sms_code_et"
            android:hint="请设置登录密码"
            android:maxLength="20"
            android:inputType="textPassword"
            style="@style/AliUserEditTextStyle"/>
        <TextView
            android:textSize="@dimen/aliuser_textsize_smallest"
            android:textColor="@color/aliuser_func_text_color"
            android:id="@+id/aliuser_register_password_tip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_4"
            android:layout_marginBottom="@dimen/aliuser_space_8"
            android:text="@string/aliuser_register_password_hint"/>
        <LinearLayout
            android:id="@+id/aliuser_register_reg_btn_ll"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_20">
            <Button
                android:enabled="false"
                android:id="@+id/aliuser_register_reg_btn"
                android:text="@string/aliuser_agree_and_reg"
                style="@style/AliUserButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/aliuser_space_20"
            android:layout_weight="1">
            <include
                android:id="@+id/aliuser_check_rl"
                layout="@layout/aliuser_check_protocol"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
