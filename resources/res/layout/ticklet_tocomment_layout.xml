<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.irecycler.IRecyclerView
        android:id="@+id/ticklet_history_list_irecyclerview"
        android:background="@color/transparent"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_18dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        app:loadMoreEnabled="false"
        app:loadMoreFooterLayout="@null"
        app:refreshEnabled="false"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/errorPageView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/ticklet_tocomment_gift"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/uikit_default_image_bg_gradient"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
