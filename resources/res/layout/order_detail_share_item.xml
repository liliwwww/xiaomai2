<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/order_detail_share_container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="67dp">
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:id="@+id/order_detail_share_icon"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginLeft="9dp"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/order_detail_share_img"
        android:visibility="gone"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginLeft="9dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/order_detail_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="11dp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:id="@+id/order_detail_share_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/order_detail_share_button"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>
