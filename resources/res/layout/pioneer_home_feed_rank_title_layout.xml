<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/pioneer_ll_feed_rank_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_cl_feed_rank_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_171717"
            android:id="@+id/home_feed_rank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/home_feed_rank_title_icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/discover_want_item_title_end_cover"
            android:background="@drawable/text_rank_view_end_cover"
            android:visibility="visible"
            android:layout_width="34dp"
            android:layout_height="17dp"
            android:layout_marginRight="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/home_feed_rank_title_icon"
            android:layout_width="@dimen/margin_26dp"
            android:layout_height="@dimen/margin_14dp"
            android:layout_marginLeft="@dimen/margin_1dp"
            android:layout_marginTop="@dimen/margin_1dp"
            android:src="@drawable/home_feed_rank_tip_icon"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_feed_rank_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_171717"
        android:gravity="start"
        android:layout_gravity="center_vertical"
        android:id="@+id/home_feed_rank_right_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_171717"
        android:gravity="start"
        android:layout_gravity="center_vertical"
        android:id="@+id/home_feed_rank_right_arrow"
        android:layout_width="@dimen/margin_18dp"
        android:layout_height="@dimen/margin_12dp"
        android:text="@string/iconfont_youjiantou12"/>
</LinearLayout>
