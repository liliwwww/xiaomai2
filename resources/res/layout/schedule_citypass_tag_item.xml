<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/activity_tag"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/citypass_small"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/remote_activity_tag"
        android:visibility="gone"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="fitXY"
        fresco:failureImage="@drawable/citypass_small"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="11dp"
        android:textColor="@color/common_text_color13"
        android:id="@+id/activity_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="15dp"
        android:text="@string/iconf_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/common_text_color12"
        android:gravity="center_vertical"
        android:id="@+id/activity_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/activity_arrow"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/common_text_color11"
        android:ellipsize="end"
        android:id="@+id/activity_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/activity_count"
        android:layout_toRightOf="@+id/activity_tag"
        android:layout_centerVertical="true"/>
    <View
        android:background="@color/color_tpp_primary_bg"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
