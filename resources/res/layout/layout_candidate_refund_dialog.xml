<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootview"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rl_bottom"
        android:background="@drawable/bg_border_corner_white_12"
        android:paddingBottom="34dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="20dp"
                android:textColor="@color/bricks_000000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_22dp"
                android:text="@string/candidate_refund_title"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/bricks_000000"
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_18dp"
                android:text="@string/candidate_refund_des"
                android:layout_marginStart="@dimen/margin_21dp"/>
            <cn.damai.uikit.flowlayout.MaxHeightScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:maxHeight="400dp">
                <cn.damai.uikit.flowlayout.FlowLayout
                    android:id="@+id/cancel_reason_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_12dp"
                    android:paddingEnd="@dimen/margin_12dp"/>
            </cn.damai.uikit.flowlayout.MaxHeightScrollView>
            <View
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="18dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="@dimen/margin_15dp"
                    android:textColor="#ff3299"
                    android:gravity="center"
                    android:id="@+id/ok_btn"
                    android:background="@drawable/bg_candidate_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:text="狠心取消"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"/>
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="@dimen/margin_15dp"
                    android:textColor="@color/color_ffffff"
                    android:gravity="center"
                    android:id="@+id/cancel_btn"
                    android:background="@drawable/bg_submit_button_ff3299_ff2869"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:text="继续候补"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
