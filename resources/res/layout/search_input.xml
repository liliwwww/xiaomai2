<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/layout_search_input"
        android:background="@drawable/bg_input"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="16dp"
            android:textColor="#3c3f44"
            android:id="@+id/ib_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="8dp"
            android:text="@string/iconfont_sousuo_"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="14dp"
            android:textColor="@color/color_cccccc"
            android:gravity="center_vertical"
            android:id="@+id/ll_delete"
            android:paddingLeft="8dp"
            android:paddingRight="11dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_qingchu24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <EditText
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textColorHint="#cc9c9ca5"
            android:gravity="center_vertical"
            android:id="@+id/et_keyword"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/damai_search_input_hint"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_toLeftOf="@+id/ll_delete"
            android:layout_toRightOf="@+id/ib_search"
            android:layout_centerVertical="true"
            android:imeOptions="actionSearch"/>
    </RelativeLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:id="@+id/tv_cancel"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingRight="@dimen/margin_21dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_30dp"
        android:text="取消"/>
</merge>
