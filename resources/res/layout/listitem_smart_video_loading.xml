<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="7dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/loading_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
        android:layout_gravity="center"
        android:id="@+id/pioneer_loading_item"
        android:visibility="gone"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/ic_pioneer_loading"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/common_color_1006"
        android:gravity="center"
        android:id="@+id/loading_des"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/exception_item"/>
</FrameLayout>
