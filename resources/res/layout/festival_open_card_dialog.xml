<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="#66000000"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/content_zone"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#743b0c"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.5dp"
            android:text="@string/dialog_festival_title"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#743b0c"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="36dp"
            android:text="开通后享春节省钱价￥23/张（本单可省10元，下一单可再省10元）"
            android:maxLines="2"
            android:layout_below="@+id/title"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#f12140"
            android:gravity="center"
            android:id="@+id/confirm"
            android:background="@drawable/festival_card_confirm_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="40.5dp"
            android:layout_marginTop="51dp"
            android:layout_marginRight="40.5dp"
            android:text="立即开通"
            android:layout_below="@+id/message"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#ffecc5"
            android:gravity="center"
            android:id="@+id/cancle"
            android:background="@drawable/festival_card_cancel_bg"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="40.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40.5dp"
            android:layout_marginBottom="21.5dp"
            android:text="放弃优惠，只买一张"
            android:layout_below="@+id/confirm"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffecc5"
            android:id="@+id/tips"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="21.5dp"
            android:text="凭芝麻信用和花呗，无需付卡费"
            android:layout_below="@+id/confirm"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/icon_font_close"
        android:layout_below="@+id/content_zone"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
