<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/mine_address_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/mine_title_header"/>
    <FrameLayout
        android:id="@+id/bottom_btn_container_fl"
        android:background="@color/color_ffffff"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:background="@drawable/btn_shadow_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_7dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/margin_7dp"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:id="@+id/tv_add_main"
            android:background="@drawable/damai_btn_rightbottom_sharp_corner_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/damai_addreceiptaddress_title"/>
        <View
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </FrameLayout>
    <cn.damai.uikit.irecycler.DamaiRootRecyclerView
        android:id="@+id/mine_address_list_recycler_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_btn_container_fl"
        android:layout_below="@+id/mine_address_list_header"
        android:overScrollMode="never"/>
</RelativeLayout>
