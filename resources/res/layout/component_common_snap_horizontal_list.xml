<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/onearch_white_corner_6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alient.onearch.adapter.widget.RoundRadiusImageView
        android:id="@+id/list_bg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        app:r_round_radius="6dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginRight="12dp">
        <ImageView
            android:id="@+id/title"
            android:layout_width="240dp"
            android:layout_height="15dp"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/font_Subhead2_R"
                android:textColor="#5f6672"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/more_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="全部"
                android:maxLines="1"/>
            <ImageView
                android:id="@+id/more_arrow"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_2"
                android:src="@drawable/onearch_icon_right_black_arrow"/>
        </LinearLayout>
    </RelativeLayout>
    <com.alient.onearch.adapter.widget.pager.SnapHorizontalListView
        android:id="@+id/snap_horizontal_list"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/title_lay"
        android:overScrollMode="never"
        app:snapGravity="start"/>
</RelativeLayout>
