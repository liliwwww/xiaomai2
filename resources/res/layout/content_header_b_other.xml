<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp">
    <ImageView
        android:id="@+id/user_iv_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/tv_header_v"
        android:paddingTop="2dp"
        android:paddingRight="3dp"
        android:visibility="gone"
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:src="@drawable/user_v_tag"
        android:layout_alignRight="@+id/user_iv_header"
        android:layout_alignBottom="@+id/user_iv_header"/>
    <TextView
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:id="@+id/user_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:maxLines="1"
        android:drawablePadding="4dp"
        android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/user_tv_name">
        <RelativeLayout
            android:gravity="left"
            android:id="@+id/ll_left"
            android:paddingLeft="18dp"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/mine_userprofile_fans_hor"/>
        </RelativeLayout>
        <LinearLayout
            android:background="@color/color_99FFFFFF"
            android:layout_width="1dp"
            android:layout_height="9dp"
            android:layout_marginLeft="5.5dp"
            android:layout_marginRight="5.5dp"/>
        <RelativeLayout
            android:id="@+id/ll_mid"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/mine_userprofile_fans_hor"/>
        </RelativeLayout>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="13dp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:id="@+id/user_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="30dp"
        android:text=""
        android:maxLines="2"
        android:layout_toLeftOf="@+id/user_iv_header"
        android:layout_below="@+id/ll_fans"
        android:layout_alignParentLeft="true"
        android:lineSpacingMultiplier="1.4"/>
</RelativeLayout>
