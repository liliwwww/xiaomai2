<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/color_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/invoice_delivery_address_rv"
        android:paddingLeft="@dimen/margin_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_999999"
            android:id="@+id/invoice_delivery_address_tv"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="@string/trade_create_order_delivery_address"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/invoice_delivery_address_indicator_iv"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grey_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_333333"
            android:id="@+id/invoice_receiver_name_phone_tv"
            android:paddingTop="14dp"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/invoice_delivery_address_indicator_iv"
            android:layout_toRightOf="@+id/invoice_delivery_address_tv"
            android:lineSpacingExtra="5dp"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/color_333333"
            android:id="@+id/invoice_detail_address_tv"
            android:paddingTop="5dp"
            android:paddingRight="@dimen/margin_12dp"
            android:paddingBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/invoice_delivery_address_indicator_iv"
            android:layout_toRightOf="@+id/invoice_delivery_address_tv"
            android:layout_below="@+id/invoice_receiver_name_phone_tv"
            android:lineSpacingExtra="5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_invoice_freight"
        android:paddingLeft="@dimen/margin_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/order_create_line"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_999999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="运费"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_fa1155"
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/invoice_no_address_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp">
        <TextView
            android:textSize="@dimen/margin_15dp"
            android:textColor="@color/color_999999"
            android:paddingLeft="@dimen/margin_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_create_order_delivery_address"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/invoice_no_address_indicator_iv"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grey_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_cccccc"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_create_order_click_selected_address"
            android:layout_toLeftOf="@+id/invoice_no_address_indicator_iv"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <include layout="@layout/order_create_line"/>
    <View
        android:background="@color/bg_color_f8"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>
