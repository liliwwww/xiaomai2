<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/share_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/ticket_nft_card_share_bg"
            android:paddingTop="@dimen/margin_21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/constraintLayout"
                android:background="@drawable/ticket_nft_card_share_rim"
                android:paddingTop="@dimen/margin_28dp"
                android:layout_width="317dp"
                android:layout_height="551dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <include
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    layout="@layout/ticklet_ticket_nft_share_item"/>
                <TextView
                    android:textColor="#ffdc9b"
                    android:id="@+id/tv_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="174dp"
                    android:text="@string/ticket_nft_user_title"
                    android:layout_marginStart="31dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:textSize="@dimen/margin_20dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:layout_marginEnd="31dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_user_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_user_title"/>
                <TextView
                    android:textColor="#ffdc9b"
                    android:id="@+id/tv_yc_code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/ticket_nft_yc_code_title"
                    app:layout_constraintStart_toStartOf="@+id/tv_user_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_user_name"/>
                <TextView
                    android:textSize="11.5dp"
                    android:textColor="#765d2a"
                    android:gravity="center"
                    android:id="@+id/tv_yc_code"
                    android:background="@drawable/ticket_nft_yc_code"
                    android:visibility="visible"
                    android:layout_width="150dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="3dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_yc_code_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_yc_code_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_ticket_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:text="@string/ticket_nft_share_des"
                android:layout_marginStart="-3dp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_ticket_sub_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/ticket_nft_share_des_sub"
                app:layout_constraintStart_toStartOf="@+id/tv_ticket_des"
                app:layout_constraintTop_toBottomOf="@+id/tv_ticket_des"/>
            <ImageView
                android:id="@+id/iv_qrcode_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="53dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-3dp"
                android:layout_alignParentEnd="true"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
