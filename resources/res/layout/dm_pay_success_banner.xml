<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:id="@+id/payresult_score_info"
        android:background="@drawable/bg_border_corner_1a0_12"
        android:padding="1px"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginLeft="@dimen/margin_21dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="@dimen/margin_21dp">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/iv_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:borderRadius="@dimen/margin_12dp"
            app:type="radial"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/payresult_score_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@drawable/score_icon"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/margin_15dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_000000"
                    android:ellipsize="end"
                    android:id="@+id/tv_score_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_18dp"
                    android:text="恭喜你购票获得80积分"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/color_999999"
                    android:ellipsize="end"
                    android:id="@+id/tv_score_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:text="积分可免费兑换代金券哦~"
                    android:singleLine="true"
                    android:layout_below="@+id/tv_score_title"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="#582331"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_score_btn"
                android:background="@drawable/bg_score_btn"
                android:layout_width="66dp"
                android:layout_height="27dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:text="去看看"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/payresult_brand_area"
        android:paddingTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_banner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="21dp"
        android:scaleType="centerCrop"/>
</LinearLayout>
