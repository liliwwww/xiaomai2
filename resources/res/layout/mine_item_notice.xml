<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/mine_notice_container"
    android:padding="@dimen/margin_9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_9dp"
    android:layout_marginStart="@dimen/margin_12dp"
    android:layout_marginEnd="@dimen/margin_12dp">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/resource_size_15"
        android:textColor="@color/color_ff335c"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_mine_notice_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_shengyin2"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_ff335c"
        android:ellipsize="end"
        android:id="@+id/tv_mine_notice_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_3dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/color_ff335c"
        android:gravity="center_vertical"
        android:id="@+id/tv_mine_notice_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/iconfont_guanbi16"/>
</LinearLayout>
