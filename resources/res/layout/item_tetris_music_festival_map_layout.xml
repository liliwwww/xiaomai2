<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/music_festival_map_layout"
    android:layout_width="match_parent"
    android:layout_height="270dp">
    <cn.damai.musicfestival.view.MusicFestivalMapView
        android:id="@+id/music_festival_map_view"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_gravity="bottom"
        android:id="@+id/music_festival_map_tab_list"
        android:background="@drawable/shape_music_festival_map_tab"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/color_DBDBDB"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:id="@+id/music_festival_map_tip"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:lines="1"/>
    <FrameLayout
        android:id="@+id/music_festival_hot_vf_ui"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp">
        <ViewFlipper
            android:layout_gravity="center_vertical"
            android:id="@+id/music_festival_vf"
            android:background="@drawable/bg_music_hot_text_round"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:inAnimation="@anim/flipper_in_music"
            android:outAnimation="@anim/flipper_out_music"/>
        <FrameLayout
            android:background="@drawable/bg_music_hot_icon_round"
            android:layout_width="32dp"
            android:layout_height="32dp">
            <cn.damai.tetris.component.music.viewholder.ClipViewFlipper
                android:layout_gravity="center"
                android:id="@+id/music_icon_vf"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:inAnimation="@anim/flipper_in_music"
                android:outAnimation="@anim/flipper_out_music"/>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
