<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.bricks.view.RoundImageView
        android:id="@+id/iv_marketing_interaction_bg"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:src="@drawable/bg_marketing_position"
        android:scaleType="fitXY"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        app:borderRadius="@dimen/margin_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type="radial"/>
    <FrameLayout
        android:id="@+id/fl_marketing_interaction_ge"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_marketing_interaction_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_marketing_interaction_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_marketing_interaction_bg"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_marketing_interaction_bg"
        app:layout_constraintLeft_toRightOf="@+id/fl_marketing_interaction_ge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_marketing_interaction_bg">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#2e333e"
            android:ellipsize="end"
            android:id="@+id/tv_marketing_interaction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#69717c"
            android:ellipsize="end"
            android:id="@+id/tv_marketing_interaction_subtitle"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <TextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="?attr/bgDetailCityNameColor"
        android:gravity="center"
        android:id="@+id/tv_marketing_interaction_button"
        android:background="?attr/bgDetailBrandLikeBtn"
        android:paddingBottom="1dp"
        android:layout_width="64dp"
        android:layout_height="28dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_marketing_interaction_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_marketing_interaction_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_marketing_interaction_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
