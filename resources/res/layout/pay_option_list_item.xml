<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="51dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/iv_pay_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"/>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="15dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:gravity="center_vertical"
        android:id="@+id/tv_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="4dp"
        android:text="支付宝"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/tpp_primary_red"
        android:gravity="center_vertical"
        android:id="@+id/tv_pay_desc"
        android:background="@drawable/bg_red_stroke"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="@dimen/text_size_17_dp"
        android:textColor="@color/tpp_gray_3"
        android:id="@+id/tv_pay_option_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/icon_font_no_selected"
        android:includeFontPadding="false"/>
</LinearLayout>
