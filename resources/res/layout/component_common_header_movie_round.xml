<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingStart="@dimen/resource_size_12"
    android:paddingEnd="@dimen/resource_size_12"
    android:layout_marginStart="@dimen/resource_size_12"
    android:layout_marginEnd="@dimen/resource_size_12">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="@dimen/resource_size_15"
            android:textColor="@color/cg_1"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/title_right_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="centerInside"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="end|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/title_container"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="@color/cg_3"
            android:gravity="center"
            android:id="@+id/action_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="@color/cg_3"
            android:gravity="center"
            android:id="@+id/action_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/resource_size_15"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12dp"
            android:textColor="@color/cg_3"
            android:gravity="center"
            android:id="@+id/right_arrow"
            android:paddingTop="@dimen/resource_size_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_right_small"/>
    </LinearLayout>
</RelativeLayout>
