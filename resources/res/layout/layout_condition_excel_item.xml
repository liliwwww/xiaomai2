<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-1px"
    android:minHeight="33dp">
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_69717c"
        android:id="@+id/conditional_rule_single_des"
        android:background="@drawable/service_notice_conditional_excel_bg_single"
        android:padding="9dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/conditional_rule_time_container"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/margin_9dp"
        android:paddingEnd="@dimen/margin_9dp">
        <com.alibaba.pictures.bricks.view.TextTailLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_959AA5"
                android:gravity="center_vertical"
                android:id="@+id/conditional_rule_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="9dp"
                android:textColor="#ff4886"
                android:gravity="center"
                android:id="@+id/conditional_rule_current_tag"
                android:background="@drawable/bg_conditional_current_tag"
                android:visibility="gone"
                android:layout_width="46dp"
                android:layout_height="15dp"
                android:text="当前阶段"
                android:layout_marginStart="3dp"/>
        </com.alibaba.pictures.bricks.view.TextTailLayout>
    </FrameLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/bricks_959AA5"
        android:gravity="center"
        android:id="@+id/conditional_rule_des"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-1px"/>
</LinearLayout>
