<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/area_code_choose_container_fv"
    android:background="#7e000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/area_code_top_status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <cn.damai.uikit.view.MaxHeightLinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/area_code_choose_layer_lv"
        android:background="@drawable/bg_pop_layer_white_corner_6"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_000000"
                android:id="@+id/area_code_choose_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择国家和地区"
                android:layout_centerInParent="true"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:id="@+id/area_code_choose_close_tv"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_fucengguanbi16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:background="@color/color_EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/area_code_rlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </cn.damai.uikit.view.MaxHeightLinearLayout>
</FrameLayout>
