<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/resource_size_48">
        <com.alient.onearch.adapter.widget.OneTabLayout
            android:id="@+id/component_tab_layout"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/action_layout"
            app:normalTextColor="#5f6672"
            app:normalTextSize="16"
            app:selectedTextColor="#2e333e"
            app:selectedTextSize="18"
            app:tabGravity="start"
            app:tabMinWidth="@dimen/resource_size_20"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp"
            style="@style/CommonTabStyle"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/action_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/resource_size_15"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/default_tab_btn_text"
                android:textColor="@color/cg_2"
                android:gravity="center"
                android:id="@+id/action_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"/>
            <TextView
                android:textSize="@dimen/default_tab_btn_text"
                android:textColor="@color/cg_2"
                android:gravity="center"
                android:id="@+id/action_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="@dimen/default_tab_btn_text"
                android:textColor="@color/cg_2"
                android:gravity="center"
                android:id="@+id/right_arrow"
                android:paddingTop="@dimen/resource_size_2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_font_right_small"/>
        </LinearLayout>
    </RelativeLayout>
    <com.alient.onearch.adapter.component.tab.GenericTabViewContainer
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
