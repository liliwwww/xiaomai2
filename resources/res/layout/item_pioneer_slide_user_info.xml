<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_pioneer_slide_user_info_container"
    android:layout_width="match_parent"
    android:layout_height="105dp">
    <View
        android:id="@+id/id_pioneer_slide_click_area"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/resource_size_9"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"/>
    <cn.damai.pioneer.view.PioneerAvatar
        android:id="@+id/id_pioneer_slide_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/resource_size_9"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/resource_size_15"
        android:layout_marginEnd="@dimen/resource_size_9"
        app:avatar_size="size_60dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/id_pioneer_slide_msg_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-17dp"
        android:layout_alignTop="@+id/id_pioneer_slide_click_area"
        android:layout_alignParentEnd="true">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_30"
            android:textColor="@color/color_171717"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/resource_size_18"
            android:text="@string/iconfont_xf_xiaoxi"/>
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="@dimen/resource_size_10"
            android:textColor="@color/color_ffffff"
            android:gravity="center"
            android:id="@+id/id_pioneer_slide_msg_badge"
            android:background="@drawable/bg_pioneer_msg_red_badge"
            android:paddingLeft="@dimen/resource_size_5"
            android:paddingRight="@dimen/resource_size_5"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minWidth="16dp"
            android:layout_marginStart="-9dp"/>
    </LinearLayout>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="@dimen/resource_size_20"
        android:textColor="@color/color_171717"
        android:ellipsize="end"
        android:id="@+id/id_pioneer_slide_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_1"
        android:lines="1"
        android:layout_alignTop="@+id/id_pioneer_slide_avatar"
        android:layout_marginEnd="@dimen/resource_size_5"
        android:layout_toStartOf="@+id/id_pioneer_slide_msg_box"
        android:layout_toEndOf="@+id/id_pioneer_slide_avatar"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/id_pioneer_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/resource_size_4"
        android:layout_alignBottom="@+id/id_pioneer_slide_avatar"
        android:paddingEnd="@dimen/resource_size_12"
        android:layout_toEndOf="@+id/id_pioneer_slide_avatar">
        <TextView
            android:textSize="@dimen/resource_size_14"
            android:textColor="@color/color_171717"
            android:id="@+id/id_pioneer_login_status_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/color_171717"
            android:id="@+id/id_pioneer_login_status_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou12"
            android:layout_marginStart="1dp"/>
    </LinearLayout>
</RelativeLayout>
