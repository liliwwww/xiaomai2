<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/page_title_bar_status_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/feed_mini_title_bar"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_height">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="24dp"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            android:id="@+id/feed_mini_title_bar_back_btn"
            android:background="@drawable/title_back_bg_solid_r12_70_white"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:text="@string/iconfont_xf_jiantoubig_zuo"/>
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/feed_mini_title_bar_share_block"
            android:background="@drawable/title_back_bg_solid_r12_70_white"
            android:layout_width="27dp"
            android:layout_height="27dp">
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="24dp"
                android:textColor="@color/text_color_black"
                android:gravity="center"
                android:id="@+id/feed_mini_title_bar_share_btn"
                android:visibility="gone"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:text="@string/iconfont_fenxiang44"/>
            <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
                android:id="@+id/feed_mini_title_bar_share_btn_lottie"
                android:visibility="visible"
                android:layout_width="27dp"
                android:layout_height="27dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/lottie_feed_mini_share"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
