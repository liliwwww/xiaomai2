<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ticket_souvenir_header"
        layout="@layout/ticklet_common_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ticket_souvenir_header">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ticket_souvenir_error_v"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_horizontal"
                android:background="@color/color_ff2d79"
                android:layout_width="match_parent"
                android:layout_height="108dp">
                <TextView
                    android:textSize="@dimen/margin_20dp"
                    android:textColor="@color/white"
                    android:id="@+id/ticket_souvenir_top_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"/>
            </LinearLayout>
            <ScrollView
                android:id="@+id/ticket_souvenir_body_layout"
                android:background="@drawable/ticklet_white_circle4_bg"
                android:visibility="gone"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_margin_15"
                android:layout_marginTop="-34dp"
                android:layout_marginRight="@dimen/common_margin_15"
                android:layout_marginBottom="34dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/common_margin_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <TextView
                            android:textSize="@dimen/margin_16dp"
                            android:textColor="@color/color_111111"
                            android:id="@+id/ticket_souvenir_body_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="功能概述"/>
                        <TextView
                            android:id="@+id/ticket_souvenir_func_note"
                            style="@style/Ticket_Souvenir_Note_Style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <TextView
                            android:textSize="@dimen/margin_16dp"
                            android:textColor="@color/color_111111"
                            android:id="@+id/ticket_souvenir_body_time_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="本场次换取时间"/>
                        <TextView
                            android:id="@+id/ticket_souvenir_openTime"
                            style="@style/Ticket_Souvenir_Note_Style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ticket_exchange_style_1_layout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp">
                        <TextView
                            android:textSize="@dimen/margin_16dp"
                            android:textColor="@color/color_111111"
                            android:id="@+id/ticket_souvenir_style_1_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/ticket_souvenir_style_1_desc"
                            style="@style/Ticket_Souvenir_Note_Style"/>
                        <include
                            android:id="@+id/ticket_souvenir_ticket_layout"
                            layout="@layout/ticket_souvenir_action_item"/>
                        <include
                            android:id="@+id/ticket_souvenir_exchange_site_layout"
                            layout="@layout/ticket_souvenir_action_item"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/ticket_souvenir_fg_container"
        android:background="#e0000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
