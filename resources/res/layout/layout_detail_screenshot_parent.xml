<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/detail_screenshot_conent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/detail_screenshot_conent_top"
            android:background="@drawable/detail_screenshot_title_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_screenshot_title"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/screenshot_share_content_scroll_parent"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ScrollView
                android:id="@+id/screenshot_share_content_scroll"
                android:scrollbars="vertical"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/screenshot_share_content_ll"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/screenshot_share_content_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"/>
                    <View
                        android:id="@+id/screenshot_share_content_gap"
                        android:background="#f6f7f8"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:id="@+id/screenshot_share_content_title_artisit"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="9dp"
                        android:text="演职人员"/>
                    <ImageView
                        android:id="@+id/screenshot_share_content_img_artisit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:id="@+id/screenshot_share_content_title_brand"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="2dp"
                        android:text="品牌"/>
                    <ImageView
                        android:id="@+id/screenshot_share_content_imgbrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:id="@+id/screenshot_share_content_title_info"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="9dp"
                        android:text="项目介绍"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/color_333333"
                        android:ellipsize="end"
                        android:id="@+id/screenshot_share_content_info"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="18dp"
                        android:maxLines="5"/>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:background="#f9f9f9"
                        android:layout_width="match_parent"
                        android:layout_height="58dp">
                        <View
                            android:id="@+id/share_page_tiplogo"
                            android:background="@drawable/screenshot_share_content_bottomlogo"
                            android:layout_width="45dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="14dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:id="@+id/share_page_qrcode_tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="6dp"
                            android:text="长按二维码查看演出详情"
                            android:maxLines="1"
                            android:layout_below="@+id/share_page_tiplogo"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/screenshot_share_content_qrcode_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="18dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
            <View
                android:id="@+id/detail_screenshot_content_save1"
                android:background="@drawable/screenshot_share_content_save"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="-15.5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/detail_screenshot_conent_bottom"
            android:background="@drawable/bg_screenshot_bottom"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="124dp">
            <RelativeLayout
                android:id="@+id/screenshot_share_action"
                android:background="@drawable/detail_screenshot_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="16dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <cn.damai.uikit.iconfont.DMIconFontTextView
                        android:textSize="16dp"
                        android:textColor="#ff6010"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="@string/iconfont_fenxiang24"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#ff6010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="分享给小伙伴"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/screenshot_feedback_action"
                android:background="@drawable/detail_screenshot_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/screenshot_share_action">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <cn.damai.uikit.iconfont.DMIconFontTextView
                        android:textSize="16dp"
                        android:textColor="#ff6010"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:text="@string/iconfont_xiaoxi_"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#ff6010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="有问题要反馈"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/detail_screenshot_content_save2"
                android:background="@drawable/screenshot_share_content_save"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginTop="-15.5dp"
                android:layout_marginRight="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <include
        android:id="@+id/project_header"
        layout="@layout/header_project_total_layout"/>
</RelativeLayout>
