<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/order_create_line"/>
    <TextView
        android:textSize="@dimen/margin_16dp"
        android:textColor="@color/color_333333"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_17dp"
        android:paddingRight="@dimen/margin_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取方式"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_6dp"
        android:paddingTop="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_6dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_invoice_way_invite"
            android:visibility="gone"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginRight="@dimen/margin_6dp">
            <TextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_666666"
                android:gravity="center"
                android:id="@+id/tv_invoice_way_invite"
                android:background="@drawable/bg_border_corner_cc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/iv_invoice_way_invite"
                android:visibility="gone"
                android:layout_width="@dimen/margin_12dp"
                android:layout_height="@dimen/margin_12dp"
                android:src="@drawable/trade_order_select"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_invoice_way_delivery"
            android:visibility="gone"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginRight="@dimen/margin_6dp">
            <TextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/color_fa1155"
                android:gravity="center"
                android:id="@+id/tv_invoice_way_delivery"
                android:background="@drawable/bg_border_corner_fa_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/iv_invoice_way_delivery"
                android:visibility="gone"
                android:layout_width="@dimen/margin_12dp"
                android:layout_height="@dimen/margin_12dp"
                android:src="@drawable/trade_order_select"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_invoice_tip"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/margin_13dp"
            android:layout_height="@dimen/margin_13dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/trade_order_tip"/>
        <TextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_invoice_tip"
            android:paddingLeft="@dimen/margin_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票一般在演出结束后1个月左右由主办方开具，发票开具后大麦会以短信通知"
            android:lineSpacingMultiplier="1.2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_invite_way_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/order_detail_invoice_way_invite"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_delivery_way_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/order_detail_invoice_way_address"/>
        <include layout="@layout/order_detail_invoice_way_pay"/>
        <include layout="@layout/order_create_line"/>
        <View
            android:background="@color/bg_color_f8"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
</LinearLayout>
