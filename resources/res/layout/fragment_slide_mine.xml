<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/slide_action_top_space"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <include layout="@layout/item_pioneer_slide_user_info"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/slide_action_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/slide_credential"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="@dimen/resource_size_38">
        <ImageView
            android:id="@+id/slide_action_to_cert"
            android:layout_width="98dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/resource_size_6"
            android:src="@drawable/icon_pioneer_cert_damai"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>
