<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/container"
    android:paddingLeft="@dimen/margin_30dp"
    android:paddingRight="@dimen/margin_30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/publicity_coupon_dialog_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/publicity_coupon_dialog_top_container"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-15dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/publicity_coupon_dialog_top_iv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:failureImage="@color/color_FEF6EA"
            app:placeholderImage="@color/color_FEF6EA"/>
    </RelativeLayout>
    <cn.damai.uikit.view.MaxHeightLinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_null"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        app:linear_max_ratio="0.31">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/publicity_coupon_dialog_center_container"
            android:paddingLeft="@dimen/margin_12dp"
            android:paddingRight="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </cn.damai.uikit.view.MaxHeightLinearLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:id="@+id/publicity_coupon_dialog_action_container"
        android:paddingTop="@dimen/margin_20dp"
        android:paddingBottom="@dimen/margin_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/publicity_coupon_loading"
            android:background="@drawable/homepage_ff9c1c_ffbd2d_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp">
            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:indeterminateTint="@color/white"/>
        </FrameLayout>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="17dp"
            android:textColor="#181818"
            android:gravity="center"
            android:id="@+id/publicity_coupon_jump_action_btn"
            android:background="@drawable/homepage_ff9c1c_ffbd2d_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:text="一键领取"/>
    </RelativeLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_15dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/publicity_coupon_dialog_top_close_iv"
        android:background="@drawable/homepage_half_black_25_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/iconfont_guanbi16"/>
    <View
        android:id="@+id/publicity_coupon_dialog_holder_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>
