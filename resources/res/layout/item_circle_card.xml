<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/circle_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_marginBottom="@dimen/margin_6dp">
        <cn.damai.tetris.component.home.widget.banner.sub.RoundRadiusImageView
            android:id="@+id/iv_circle_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/defult_circle_head"
            android:scaleType="centerCrop"
            app:r_round_radius="4dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/circle_content_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_6dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_333333"
                android:ellipsize="end"
                android:id="@+id/tv_circle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="10dp"
                android:ellipsize="end"
                android:id="@+id/tv_circle_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_circle_action_icon"
            android:visibility="gone"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/item_reward_icon"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</LinearLayout>
