<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/resource_size_6"
    android:focusable="true"
    android:clickable="true"
    android:duplicateParentState="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/resource_size_6">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_film_profile_item"
        android:background="@drawable/oscar_film_detail_profile_item_bg_v2"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.flexbox.FlexboxLayout
            android:orientation="horizontal"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexWrap="nowrap">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/tv_film_profile_item_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_flexShrink="0"/>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textStyle="bold"
                android:textColor="@color/cg_1"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_film_profile_item_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxLines="1"
                android:singleLine="true"
                android:includeFontPadding="false"
                app:layout_flexShrink="1"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/cg_1"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_film_profile_item_sub_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_font_right_small"
                app:layout_flexShrink="0"/>
        </com.google.android.flexbox.FlexboxLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:textSize="@dimen/resource_size_10"
                android:textColor="@color/cg_3"
                android:ellipsize="end"
                android:id="@+id/tv_film_profile_item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:includeFontPadding="false"
                app:layout_flexShrink="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
