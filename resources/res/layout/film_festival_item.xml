<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="9dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/community_festival_card_view"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/community_festival_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:placeholderImage="@drawable/poster_default_bg"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/common_text_color46"
            android:gravity="center"
            android:id="@+id/tv_community_festival_tag"
            android:paddingLeft="2.5dp"
            android:paddingTop="1.5dp"
            android:paddingRight="2.5dp"
            android:paddingBottom="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/common_text_color45"
        android:ellipsize="end"
        android:id="@+id/tv_community_festival_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:id="@+id/tv_community_festival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:maxLines="1"/>
</LinearLayout>
