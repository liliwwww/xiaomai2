<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="64dp">
    <View
        android:id="@+id/common_top_space"
        android:visibility="visible"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"/>
    <RelativeLayout
        android:background="@drawable/bg_coupon_pink_left"
        android:layout_width="63.5dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/common_card_top_vv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:id="@+id/common_card_top_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="¥"
                android:layout_alignBottom="@+id/common_card_top_value"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:id="@+id/common_card_top_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/common_card_top_flag"/>
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/common_card_top_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:maxLines="2"
            android:layout_below="@+id/common_card_top_vv"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/bg_coupon_pink_right"
        android:paddingLeft="6dp"
        android:layout_width="96.5dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="11dp"
            android:textColor="@color/white"
            android:id="@+id/common_card_desc_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="3dp"
            android:maxLines="2"
            android:layout_alignParentLeft="true"
            android:lineSpacingMultiplier="1.1"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="9dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/item_header_coupon_got"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:paddingRight="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_xiangmutixing32"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/common_card_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已领取"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/item_header_coupon_want"
                android:background="@drawable/bg_border_corner_125"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="立即领取"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
