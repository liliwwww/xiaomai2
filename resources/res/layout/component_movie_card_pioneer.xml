<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_movie_layout"
            android:layout_width="@dimen/pioneer_poster_width"
            android:layout_height="@dimen/pioneer_poster_height"
            android:layout_centerInParent="true"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:layout_gravity="center"
                android:id="@+id/iv_movie_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:actualImageScaleType="centerCrop"
                app:failureImage="@drawable/poster_default_bg"
                app:placeholderImage="@drawable/poster_default_bg"
                app:roundedCornerRadius="9dp"
                app:roundingBorderColor="@color/color_bricks_primary_5_black"
                app:roundingBorderWidth="1dp"/>
            <com.taobao.movie.android.app.oscar.ui.widget.queueflipper.GifSafeQueueViewFlipper
                android:layout_gravity="center"
                android:id="@+id/iv_movie_trailer_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:customLayout="@layout/component_pioneer_flipper_poster"
                app:firstPostWidth="@dimen/channel_movie_poster_width_pioneer"
                app:flipperCornerSize="@dimen/channel_movie_poster_corner_pioneer"
                app:secondPostWidth="@dimen/channel_movie_poster_width_second_pioneer"
                app:thirdPostWidth="@dimen/channel_movie_poster_width_third_pioneer"/>
            <View
                android:layout_gravity="start|bottom"
                android:id="@+id/overlay_home_movie_trailer_item"
                android:background="@drawable/bg_channel_movie_mask_bg"
                android:layout_width="@dimen/pioneer_poster_width"
                android:layout_height="33dp"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/layout_movie_want_remark"
                android:paddingBottom="3dp"
                android:layout_width="@dimen/pioneer_poster_width"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/tv_movie_want_remark_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"/>
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="9dp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:id="@+id/tv_movie_want_remark_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/margin_1dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/normal_tag_zone"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/dianying_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_tpp_primary_white"
                    android:gravity="center"
                    android:id="@+id/tv_homepage_show_mark"
                    android:background="@drawable/channel_recomment_tag_bg_pioneer"
                    android:paddingLeft="@dimen/padding_2dp"
                    android:paddingRight="@dimen/padding_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/home_page_movie_poster_tag_height"
                    android:layout_marginTop="3dp"
                    android:text="3D"
                    android:layout_marginEnd="@dimen/margin_1dp"/>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:textColor="#fff46d"
                    android:gravity="center"
                    android:id="@+id/tv_reopen_mark"
                    android:background="@drawable/channel_recomment_tag_bg_pioneer"
                    android:paddingLeft="@dimen/padding_2dp"
                    android:paddingRight="@dimen/padding_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/home_page_movie_poster_tag_height"
                    android:layout_marginTop="3dp"
                    android:text="@string/movie_reopen"
                    android:layout_marginEnd="@dimen/margin_1dp"/>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:textColor="#fff46d"
                    android:gravity="center"
                    android:id="@+id/tv_preschedule_mark"
                    android:background="@drawable/channel_recomment_tag_bg_pioneer"
                    android:paddingLeft="@dimen/padding_2dp"
                    android:paddingRight="@dimen/padding_2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/home_page_movie_poster_tag_height"
                    android:layout_marginTop="3dp"
                    android:text="点映"
                    android:layout_marginEnd="@dimen/margin_1dp"/>
            </LinearLayout>
            <ViewFlipper
                android:id="@+id/flipper_tag_zone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/home_page_movie_poster_flipper_height"
                android:layout_marginTop="3dp"
                android:inAnimation="@anim/roll_in"
                android:outAnimation="@anim/roll_out"
                android:flipInterval="5000"/>
        </LinearLayout>
        <com.taobao.movie.android.app.oscar.ui.widget.WantSeeWithGiftView
            android:id="@+id/want_see_with_gift"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>
        <com.alibaba.pictures.bricks.component.home.moviecard.FlashRedPacketView
            android:id="@+id/flash_red_packet"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.5dp">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="#171717"
            android:id="@+id/tv_movie_name"
            android:layout_width="@dimen/pioneer_poster_width"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <View
            android:layout_gravity="end|center_vertical"
            android:id="@+id/pioneer_movie_item_mask"
            android:background="@drawable/bg_pioneer_popular_title"
            android:layout_width="12dp"
            android:layout_height="14dp"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_10_dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/tv_show_open_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:layout_gravity="end"
            android:background="@drawable/bg_pioneer_popular_title"
            android:layout_width="12dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_show_open_time"
            app:layout_constraintEnd_toEndOf="@+id/tv_show_open_time"
            app:layout_constraintTop_toTopOf="@+id/tv_show_open_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <TextView
            android:textSize="9dp"
            android:textColor="#ff7600"
            android:ellipsize="none"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/discount_info_tv"
            android:background="@drawable/nowshowing_dicount_button_bg"
            android:paddingTop="7dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:singleLine="true"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_11"
            android:textColor="@color/bricks_white"
            android:gravity="center"
            android:id="@+id/btn_action"
            android:background="@drawable/bg_pioneer_movie_item_buy_btn"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="0.5dp"
            android:text="购票"
            android:includeFontPadding="false"/>
    </RelativeLayout>
</LinearLayout>
