<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="20dp"
        android:textColor="@drawable/mine_address_default_selector"
        android:id="@+id/customer_select_indicator_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:text="@string/iconfont_danxuanxuanzhong24"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/textsize_16"
        android:textColor="@color/color_222222"
        android:id="@+id/customer_name"
        android:paddingLeft="18dp"
        android:paddingTop="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="朱辉"
        android:layout_toRightOf="@+id/customer_select_indicator_iv"
        android:lineSpacingExtra="5dp"/>
    <TextView
        android:textSize="@dimen/textsize_13"
        android:textColor="@color/color_999999"
        android:ellipsize="end"
        android:id="@+id/customer_idcard_num"
        android:paddingLeft="18dp"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身份证  41"
        android:maxLines="2"
        android:layout_toRightOf="@+id/customer_select_indicator_iv"
        android:layout_below="@+id/customer_name"
        android:lineSpacingExtra="5dp"/>
</RelativeLayout>
