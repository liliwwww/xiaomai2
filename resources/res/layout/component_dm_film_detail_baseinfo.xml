<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_card"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/film_detail_film_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/film_detail_film_poster_img"
            android:layout_width="78dp"
            android:layout_height="104dp"
            android:scaleType="fitXY"
            android:foregroundGravity="top"
            app:fadeDuration="@integer/default_enter_duration"
            app:failureImage="@drawable/poster_default_bg"
            app:failureImageScaleType="fitXY"
            app:placeholderImage="@drawable/poster_default_bg"
            app:placeholderImageScaleType="fitXY"
            app:roundedCornerRadius="6dp"/>
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="top|left"
            android:id="@+id/film_detail_poster_tv_pioneer"
            android:background="#000000"
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="电影"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="top|left"
            android:id="@+id/film_detail_poster_tv"
            android:background="#000000"
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="电影"/>
        <View
            android:layout_gravity="bottom|left"
            android:id="@+id/overlay_home_movie_trailer_item"
            android:layout_width="78dp"
            android:layout_height="27dp"
            app:roundedCornerRadius="6dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:id="@+id/poster_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/film_detail_name_first_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_detail_film_poster"
        app:layout_constraintTop_toTopOf="@+id/film_detail_film_poster">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:ellipsize="end"
            android:id="@+id/film_detail_name_first_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_bricks_primary_50_white"
        android:ellipsize="end"
        android:id="@+id/film_detail_name_second_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:maxLines="2"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_detail_film_poster"
        app:layout_constraintTop_toBottomOf="@+id/film_detail_name_first_ll"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/film_detail_tag_third_ll"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_detail_film_poster"
        app:layout_constraintTop_toBottomOf="@+id/film_detail_name_second_tv">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/film_detail_tag_left_container"
            android:background="@drawable/film_base_info_tag_bg"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="3dp">
            <ImageView
                android:id="@+id/film_detail_tag_left_img"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:src="@drawable/dm_film_detail_tag_img"
                android:layout_marginStart="6dp"/>
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="10dp"
                android:textColor="#ffdca7"
                android:gravity="center_vertical"
                android:id="@+id/film_detail_tag_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="6dp"/>
        </LinearLayout>
        <cn.damai.uikit.view.MarqueTextView
            android:textSize="10dp"
            android:textColor="#ffdca7"
            android:ellipsize="marquee"
            android:id="@+id/film_one_review"
            android:background="@drawable/film_base_info_tag_bg"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
    </LinearLayout>
    <cn.damai.filmdetail.component.baseinfo.DMFilmIconView
        android:orientation="horizontal"
        android:id="@+id/film_detail_tag_fourth_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_detail_film_poster"
        app:layout_constraintTop_toBottomOf="@+id/film_detail_tag_third_ll"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/film_detail_tag_fifth_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_detail_film_poster"
        app:layout_constraintTop_toBottomOf="@+id/film_detail_tag_fourth_ll">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="10dp"
            android:textColor="@color/color_bricks_primary_50_white"
            android:ellipsize="end"
            android:id="@+id/film_detail_show_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/film_detail_tag_sixth_ll"
        android:visibility="visible"
        android:clipChildren="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_detail_film_poster"
        app:layout_constraintTop_toBottomOf="@+id/film_detail_tag_fifth_ll"
        app:layout_constraintVertical_bias="0">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="3dp">
            <com.taobao.movie.android.commonui.widget.ComboLottieButton
                android:id="@+id/film_detail_comment_left_want_btn"
                android:background="@drawable/dm_film_want_btn_unchek_bg"
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="9dp"
                app:combobutton_text="@string/like_it"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/tpp_film_detail_based_gift_text_color"
                android:ellipsize="end"
                android:layout_gravity="top|right"
                android:id="@+id/want_gift_info_tv"
                android:background="@drawable/film_detail_wantbtn_bg"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:layout_gravity="top|right"
                android:id="@+id/pioneer_want_gift_info_tv"
                android:background="@drawable/dm_want_gift_bg_orange"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </FrameLayout>
        <com.taobao.movie.android.commonui.widget.ComboLottieButton
            android:id="@+id/film_detail_comment_right_watched_btn"
            android:background="@drawable/dm_film_want_btn_unchek_bg"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            app:combobutton_text="@string/watch_done"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/film_detail_tag_sixth_rl_watched"
        android:background="@drawable/dm_filmdetail_mycomment_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/film_detail_film_poster"
        app:layout_constraintTop_toBottomOf="@+id/film_detail_tag_fifth_ll"
        app:layout_constraintVertical_bias="0">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/user_profile"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_alignParentStart="true"
            app:failureImage="@drawable/header_place_holder"
            app:placeholderImage="@drawable/header_place_holder"
            app:roundedCornerRadius="9dp"/>
        <com.taobao.movie.android.commonui.widget.richtext.RichTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:id="@+id/film_detail_my_action_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/film_detail_comment_done"
            android:layout_toRightOf="@+id/user_profile"
            android:layout_centerVertical="true"/>
        <RatingBar
            android:id="@+id/film_detail_action_star_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_toRightOf="@+id/film_detail_my_action_des"
            android:layout_centerVertical="true"
            style="@style/ScoreRatinbar"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:id="@+id/film_detail_action_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
