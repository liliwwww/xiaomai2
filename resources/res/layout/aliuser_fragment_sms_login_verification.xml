<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/aliuser_default_bg"
        android:paddingLeft="@dimen/aliuser_space_30"
        android:paddingRight="@dimen/aliuser_space_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30dp"
            android:textColor="@color/aliuser_new_edit_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_48"
            android:text="@string/aliuser_sms_code_title"/>
        <TextView
            android:textSize="@dimen/aliuser_textsize_normal"
            android:textStyle="bold"
            android:textColor="@color/aliuser_color_light_gray"
            android:id="@+id/aliuser_login_sms_code_secondary_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_4"/>
        <com.ali.user.mobile.register.ui.AliUserSmsCodeView
            android:layout_gravity="center_horizontal"
            android:id="@+id/aliuser_login_sms_code_view"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/aliuser_space_48"
            app:scDividerWidth="8dp"
            app:scNextUnderLineColor="@color/aliuser_edittext_bg_color_activated"
            app:scTextColor="@color/aliuser_default_text_color"
            app:scTextCount="6"
            app:scTextSize="32sp"
            app:scUnderLineColor="@color/aliuser_color_light_gray"
            app:scUnderLineStrokeWidth="2dp"/>
        <com.ali.user.mobile.ui.widget.CountDownButton
            android:enabled="false"
            android:textSize="13sp"
            android:textColor="@color/aliuser_send_sms_text_color_new"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/aliuser_login_send_smscode_btn"
            android:background="@drawable/aliuser_bg_send_sms_btn_new"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/aliuser_space_48"
            android:text="@string/aliuser_signup_verification_reGetCode2"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/aliuser_edittext_bg_color_normal"
            android:gravity="center"
            android:id="@+id/aliuser_change_login"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/aliuser_change_login_method"/>
    </LinearLayout>
</ScrollView>
