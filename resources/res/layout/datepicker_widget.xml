<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_left"
            android:paddingLeft="22dp"
            android:paddingTop="19dp"
            android:paddingRight="22dp"
            android:paddingBottom="19dp"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/arrow_left"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"/>
        <ImageView
            android:id="@+id/iv_right"
            android:paddingLeft="22dp"
            android:paddingTop="19dp"
            android:paddingRight="22dp"
            android:paddingBottom="19dp"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#333333"
            android:id="@+id/tv_cur_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.taobao.android.dinamicx.widget.calander.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:calendar_height="46dp"
        app:calendar_padding="10dp"
        app:day_text_size="18sp"
        app:month_view_show_mode="mode_all"
        app:select_mode="single_mode"
        app:selected_text_color="#fff"
        app:week_background="@android:color/transparent"
        app:week_text_color="#999999"
        app:week_text_size="14sp"/>
</LinearLayout>
