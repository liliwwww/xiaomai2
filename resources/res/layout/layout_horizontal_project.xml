<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.shadowlayout.DMShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:sl_dx="0dp"
    app:sl_dy="3dp"
    app:sl_shadowColor="#0e000000"
    app:sl_shadowRadius="12dp">
    <RelativeLayout
        android:background="@drawable/gray_card_border"
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/uikit_hori_project_img"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:borderRadius="6dp"
            app:type="radial"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/uikit_hori_project_img">
            <TextView
                android:textSize="16dp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:id="@+id/uikit_hori_project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#9c9ca5"
                android:ellipsize="end"
                android:id="@+id/uikit_hori_project_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:layout_below="@+id/uikit_hori_project_title"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#ff2869"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="¥"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="#ff2869"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:id="@+id/uikit_hori_project_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="#9c9ca5"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:text="起"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</cn.damai.uikit.shadowlayout.DMShadowLayout>
