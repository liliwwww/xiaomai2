<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:actualImageScaleType="centerCrop"
        app:backgroundImage="@drawable/oscar_default_image"
        app:placeholderImage="@drawable/oscar_default_image"
        app:roundedCornerRadius="5dp"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/close_btn"
        android:background="@drawable/picture_checkbox_normal"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:text="@string/iconf_off_single_close"/>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/white"
        android:id="@+id/upload_info"
        android:background="#55000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>
