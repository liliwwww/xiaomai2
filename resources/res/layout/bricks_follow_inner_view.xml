<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/id_follow_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="@dimen/resource_size_10"
        android:textColor="@color/white"
        android:id="@+id/id_follow_layout_add_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:text="@string/iconfont_jiarujiahao24"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="@dimen/resource_size_12"
        android:textColor="@color/white"
        android:id="@+id/id_follow_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
