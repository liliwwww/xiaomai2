<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ordering_popupwindow_header"
    android:background="@drawable/common_corner_6_white_card_bg"
    android:paddingLeft="9dp"
    android:paddingTop="10.5dp"
    android:paddingRight="9dp"
    android:paddingBottom="10.5dp"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="9dp"
    android:layout_marginRight="12dp">
    <FrameLayout
        android:id="@+id/fl_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.alibaba.pictures.moimage.MoImageView
            android:gravity="center"
            android:id="@+id/activity_tag"
            android:layout_width="wrap_content"
            android:layout_height="16dp"/>
        <com.taobao.movie.android.commonui.widget.RoundedTextViewNewStyle
            android:textSize="10dp"
            android:id="@+id/tag_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            app:background_color="@color/normal_bogo_color"
            app:padding_horizontal="3"
            app:padding_vertical="2"
            app:round_radius="4"
            app:round_type="stroke"/>
    </FrameLayout>
    <com.taobao.movie.android.commonui.widget.RoundedTextView
        android:textSize="10dp"
        android:textColor="@color/tpp_primary_red"
        android:gravity="center"
        android:id="@+id/activity_tag_joined"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/activity_joined"
        android:includeFontPadding="false"
        android:layout_centerVertical="true"
        app:background_color="@color/tpp_primary_red"
        app:layout_constraintLeft_toRightOf="@+id/fl_tag"
        app:layout_constraintTop_toTopOf="@+id/fl_tag"
        app:padding_horizontal="3"
        app:padding_vertical="0"
        app:round_radius="2"
        app:round_radius_unit="dp"
        app:round_type="fill"/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="center"
        android:id="@+id/activity_arrow"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:text="@string/icon_font_right_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="right"
        android:id="@+id/activity_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/activity_des"
        app:layout_constraintRight_toLeftOf="@+id/activity_arrow"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_title"
        android:ellipsize="end"
        android:id="@+id/activity_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fl_tag"
        app:layout_constraintRight_toLeftOf="@+id/activity_count"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.taobao.movie.android.app.order.ui.widget.OneKeyReceive88VipView
        android:id="@+id/receive_88vip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
