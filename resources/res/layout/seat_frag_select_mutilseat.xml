<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_header_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_behavior="@string/appbar_background_behavior"/>
    <View
        android:id="@+id/img_header_bg_gradient"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_background_behavior"/>
    <com.taobao.movie.android.commonui.widget.Appbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu2_icon_font="@string/icon_font_share"
        app:menu2_show="true"/>
    <com.taobao.movie.statemanager.StateLayout
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_layout_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_seat_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_top"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <HorizontalScrollView
                    android:layout_gravity="center"
                    android:id="@+id/indicator_scrollview"
                    android:scrollbars="none"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/guide"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:clipToPadding="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </HorizontalScrollView>
                <com.taobao.movie.android.commonui.widget.MaterialTabLayout
                    android:layout_gravity="center"
                    android:id="@+id/floorChooser"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:tab_Mode="scrollable"
                    app:tab_PaddingEnd="6dp"
                    app:tab_PaddingStart="6dp"
                    app:tab_RippleColor="#ffcccccc"
                    app:tab_ScrollableMinWidth="44dp"
                    app:tab_SelectedTextBoldStyle="true"
                    app:tab_TextSize="13sp"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/layout_seat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_top">
                <com.taobao.movie.statemanager.StateLayout
                    android:id="@+id/seat_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <com.taobao.movie.android.app.seat.ui.effect.SelectSeatEffectLayer
                    android:id="@+id/seat_effect_layer"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_gravity="bottom"
                    android:id="@+id/seat_overlay_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="134dp"/>
            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/select_bottom"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <FrameLayout
                    android:id="@+id/fl_seat_spring_banner"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"/>
                <include layout="@layout/select_single_contain"/>
                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@+id/warning_tips"
                    android:background="@drawable/select_seat_info_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/tip_message_container_ll"
                    android:background="@drawable/select_seat_info_bg"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="-2dp">
                    <com.taobao.movie.android.commonui.widget.VerticalWheelContain
                        android:id="@+id/tip_message_container"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_tpp_primary_assist"
                        android:id="@+id/tip_message_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.taobao.movie.android.commonui.widget.MIconfontTextView
                        android:textSize="8dp"
                        android:textColor="@color/color_tpp_primary_assist"
                        android:id="@+id/tip_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/iconf_right_arrow"
                        android:layout_marginEnd="9dp"/>
                </LinearLayout>
                <com.taobao.movie.android.app.seat.ui.weight.SelectSeatInfoView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"/>
                <FrameLayout
                    android:id="@+id/seat_bottom_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/seat_frag_select_seat_button_panel"/>
                </FrameLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/thumbnails_iv"
                android:background="@color/color_tpp_primary_60_black"
                android:padding="6dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="缩略图"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.taobao.movie.statemanager.StateLayout>
    <FrameLayout
        android:id="@+id/layout_hall_tip"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/hall_tip_behavior">
        <TextView
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txt_hall_tip"
            android:padding="16dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
