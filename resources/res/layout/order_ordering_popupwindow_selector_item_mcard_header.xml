<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.taobao.movie.android.commonui.widget.SimpleDraweeView
            android:id="@+id/mcard_header_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            fresco:roundedCornerRadius="19dp"
            fresco:roundingBorderColor="@color/common_text_color35"
            fresco:roundingBorderWidth="1dp"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/common_text_color10"
            android:id="@+id/mcard_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:maxLines="2"
            android:layout_toRightOf="@+id/mcard_header_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View style="@style/ListItemBorderWithMarginDp"/>
</LinearLayout>
