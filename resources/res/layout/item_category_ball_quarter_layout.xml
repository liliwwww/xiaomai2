<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_category_ball_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/resource_size_65">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/bricks_ball_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/bricks_home_ball_icon"
        app:failureImage="@drawable/bricks_home_ball_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:placeholderImage="@drawable/bricks_home_ball_icon"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="13dp"
        android:textColor="@color/bricks_171717"
        android:id="@+id/bricks_ball_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:maxLines="1"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toTopOf="@+id/bricks_ball_label_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="@drawable/category_ball_gradient_text_bg"
        android:visibility="gone"
        android:layout_width="14dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bricks_ball_name"
        app:layout_constraintEnd_toEndOf="@+id/bricks_ball_name"
        app:layout_constraintTop_toTopOf="@+id/bricks_ball_name"/>
    <LinearLayout
        android:id="@+id/bricks_ball_label_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="14dp"
        android:layout_below="@+id/bricks_ball_name"
        android:layout_alignStart="@+id/bricks_ball_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bricks_ball_icon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/bricks_ball_name"
        app:layout_constraintTop_toBottomOf="@+id/bricks_ball_name">
        <FrameLayout
            android:id="@+id/bricks_ball_rl_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="28dp">
            <ViewFlipper
                android:id="@+id/bricks_ball_flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/alpha_in"
                android:outAnimation="@anim/alpha_out"
                android:flipInterval="5000"/>
            <View
                android:layout_gravity="end|center_vertical"
                android:id="@+id/pioneer_homepage_project_item_mask"
                android:background="@drawable/category_ball_gradient_text_bg"
                android:visibility="gone"
                android:layout_width="14dp"
                android:layout_height="16dp"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
