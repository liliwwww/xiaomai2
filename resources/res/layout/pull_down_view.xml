<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.pull.refresh.PullDownView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/pull_down_view"
    android:background="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.uikit.view.pull.refresh.HeaderView
        android:id="@+id/pull_down_headerview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-61dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <RelativeLayout
                    android:id="@+id/imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp">
                    <ProgressBar
                        android:id="@+id/refresh_progress"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateDrawable="@drawable/uikit_pull_to_refresh_loading"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/status_img"
                        android:background="@drawable/uikit_pull_to_refresh_logo_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageview"
                    android:layout_centerVertical="true">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:id="@+id/status_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pull_to_refresh_pull_label"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#7d7d7d"
                        android:id="@+id/last_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </cn.damai.uikit.view.pull.refresh.HeaderView>
    <ImageView
        android:id="@+id/iv_divider"
        android:background="@color/TextColorBlack"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <cn.damai.uikit.view.MyListView
        android:id="@+id/pull_down_listview"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="@color/white"
        android:dividerHeight="0px"
        android:overScrollMode="never"/>
</cn.damai.uikit.view.pull.refresh.PullDownView>
