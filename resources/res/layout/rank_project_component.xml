<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_container"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.DMPosterView
        android:id="@+id/poster"
        android:layout_width="98dp"
        android:layout_height="131dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:id="@+id/tv_desc_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:lineSpacingExtra="2dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#4caeaf"
            android:gravity="center"
            android:id="@+id/tv_tag_new"
            android:background="@drawable/rank_item_new_tag_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:gravity="bottom"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="12dp"
                android:textColor="#ff2869"
                android:gravity="bottom"
                android:id="@+id/tv_fuhao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-1dp"
                android:text="Â¥"/>
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="16dp"
                android:textColor="#ff2869"
                android:gravity="bottom"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="-2dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_666666"
                android:gravity="bottom"
                android:id="@+id/tv_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
