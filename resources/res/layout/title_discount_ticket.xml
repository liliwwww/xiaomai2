<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <RelativeLayout
        android:id="@+id/title_bg_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">
        <View
            android:background="#19000000"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_22dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/title_back_btn"
            android:paddingLeft="21dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fanhui18"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/title_tv"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/title_share_btn"
            android:background="@drawable/bg_share_white"
            android:layout_width="54dp"
            android:layout_height="25dp"
            android:layout_marginRight="21dp"
            android:text="分享"/>
    </LinearLayout>
</RelativeLayout>
