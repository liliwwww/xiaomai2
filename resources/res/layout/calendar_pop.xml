<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_calendar"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_date_select"
        android:visibility="gone"
        layout="@layout/category_date_select"/>
    <include layout="@layout/category_pop_calendar_week"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.irecycler.IRecyclerView
            android:id="@+id/pop_irc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/layout_guding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_guding_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/color_000000"
                    android:gravity="center"
                    android:id="@+id/tv_calendar_month"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/color_000000"
                    android:gravity="center"
                    android:id="@+id/tv_shenhua"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
