<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/f3f6fb"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/battle_item_bg"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:id="@+id/colum_name_txt"
            android:background="@drawable/battle_colume_bg"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:ellipsize="end"
            android:id="@+id/film_name_txt"
            android:background="@drawable/battle_film_name_bg"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/colum_name_txt"
            app:layout_constraintLeft_toRightOf="@+id/colum_name_txt"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_title"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:maxLines="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/colum_name_txt"/>
        <com.taobao.movie.android.commonui.battle.BattleVoteView
            android:id="@+id/battle_vote_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <com.taobao.movie.android.commonui.widget.banner.FlowLayout
            android:id="@+id/head_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/battle_vote_view"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/vote_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toRightOf="@+id/head_icon_layout"
            app:layout_constraintTop_toBottomOf="@+id/battle_vote_view"
            app:layout_goneMarginLeft="15dp"/>
        <Button
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/talk_reason_btn"
            android:background="@drawable/common_red_small_btn_7_3"
            android:visibility="gone"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:text="说说你的理由"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/battle_vote_view"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="8dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="@string/iconf_right_arrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/battle_vote_view"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/discuss_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/right_arrow"
            app:layout_constraintTop_toBottomOf="@+id/battle_vote_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
