<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bricks_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/pioneer_bg_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_pioneer_guide"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:id="@+id/pioneer_lottie_des"
        android:paddingTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title_main"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="60dp"
        android:textColor="@color/color_171717"
        android:id="@+id/tv_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/pioneer_guide_title"
        android:includeFontPadding="false"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_bar"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="14dp"
        android:textColor="#ff7600"
        android:gravity="center"
        android:id="@+id/tv_title_tag"
        android:background="@drawable/bg_corner5_171717"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/pioneer_guide_tag"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_title_main"
        app:layout_constraintTop_toTopOf="@+id/tv_title_main"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="27dp"
        android:textColor="@color/color_171717"
        android:id="@+id/tv_title_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pioneer_guide_sub"
        android:includeFontPadding="false"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_main"/>
    <View
        android:id="@+id/view7"
        android:background="@drawable/bg_color_ffffff_tanp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toTopOf="@+id/view6"/>
    <View
        android:id="@+id/view6"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_protocol_des"
        app:layout_constraintVertical_bias="0"/>
    <cn.damai.uikit.banner.sub.RoundRadiusImageView
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/home_default_image_bg_pioneer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:r_round_radius="9dp"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="24dp"
        android:textColor="@color/color_000000"
        android:gravity="center"
        android:id="@+id/tv_back"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:text="@string/pioneer_guide_back"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <cn.damai.uikit.banner.sub.RoundRadiusImageView
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/pioneer_buy_button_bg"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:r_round_radius="9dp"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="24dp"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:id="@+id/tv_btn"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text="开启大麦先锋版"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/tv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <cn.damai.pioneer.view.PioneerGuideProtocolView
        android:id="@+id/protocol_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textSize="9dp"
        android:id="@+id/tv_protocol_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/pioneer_guide_des"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/protocol_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
