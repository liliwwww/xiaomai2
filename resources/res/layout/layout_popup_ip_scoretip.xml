<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sub_content"
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:layout_alignParentBottom="true">
        <cn.damai.h5container.DamaiWebView
            android:id="@+id/mWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ip_tour_top"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ip_tour_top"
            android:background="@drawable/bg_border_corner_15_0_topradius"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/color_000000"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_tour_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="评分说明"
                android:layout_weight="1"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="@color/color_3c3f44"
                android:layout_gravity="center_vertical"
                android:id="@+id/ip_tour_top_close"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:text="@string/iconfont_guanbi24"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
