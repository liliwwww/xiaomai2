<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.HoleCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holecardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:holeCornerRadius="@dimen/margin_24dp"
    app:holeElevation="8dp"
    app:holeScallopRadius="0dp">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:id="@+id/layout"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/fission_content_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/fission_placeholer_circle"
            android:layout_width="75dp"
            android:layout_height="93dp"
            android:src="@drawable/fission_circle_icon"
            android:scaleType="fitXY"
            android:layout_above="@+id/cb_placeholer_bg"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/cb_placeholer_bg"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/fission_content_bg"
            android:layout_alignRight="@+id/fission_content_bg"
            android:layout_alignBottom="@+id/fission_content_bg"
            android:layout_centerHorizontal="true"/>
        <View
            android:background="@drawable/bg_border_bottom_corner_1halfa0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cb_placeholer_bg"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/cb_user_layout"
            android:paddingLeft="@dimen/margin_21dp"
            android:paddingTop="@dimen/margin_30dp"
            android:paddingRight="@dimen/margin_21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fission_content_bg">
            <cn.damai.uikit.view.DMAvatar
                android:id="@+id/cb_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/margin_14dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@+id/cb_user_name"
                android:paddingTop="@dimen/margin_6dp"
                android:paddingBottom="@dimen/margin_2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3dp"
                android:maxLines="1"/>
        </LinearLayout>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="35dp"
            android:textColor="#33ffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/quotation_icon"
            android:paddingLeft="@dimen/margin_21dp"
            android:paddingTop="@dimen/margin_21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_fenxiang_yinhao_35"
            android:layout_below="@+id/cb_user_layout"/>
        <TextView
            android:textSize="@dimen/margin_16dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/cb_my_invite_content"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_below="@+id/quotation_icon"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="10dp"/>
        <cn.damai.baseview.RCRelativeLayoutView
            android:gravity="center_horizontal"
            android:id="@+id/fission_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_6dp"
            android:layout_marginBottom="32dp"
            android:layout_alignBottom="@+id/cb_sub_message"
            app:round_corner="@dimen/margin_6dp">
            <ImageView
                android:id="@+id/fission_image_bg"
                android:layout_width="49dp"
                android:layout_height="65dp"
                android:src="@drawable/bricks_uikit_default_image_bg_gradient"
                android:scaleType="centerCrop"/>
        </cn.damai.baseview.RCRelativeLayoutView>
        <View
            android:background="@drawable/bg_border_corner_1a0_6"
            android:layout_width="49dp"
            android:layout_height="65dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_6dp"
            android:layout_marginBottom="32dp"
            android:layout_alignBottom="@+id/cb_sub_message"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/cb_main_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:maxLines="2"
            android:layout_toRightOf="@+id/fission_image_layout"
            android:layout_above="@+id/cb_sub_message"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:id="@+id/cb_sub_message"
            android:paddingBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15dp"
            android:maxLines="1"
            android:layout_toRightOf="@+id/fission_image_layout"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</cn.damai.uikit.view.HoleCardView>
