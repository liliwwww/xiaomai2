<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.app.oscar.ui.community.view.CommunityBusinessHeadView
        android:id="@+id/community_item_head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:textSize="15dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:ellipsize="end"
        android:id="@+id/community_film_media_business_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:maxLines="2"
        android:includeFontPadding="false"
        android:layout_below="@+id/community_item_head_view"
        android:lineSpacingExtra="5dp"/>
    <FrameLayout
        android:id="@+id/fl_smart_video_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/community_film_media_business_title"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/image_tag_view_radius_fg_big"
        android:scaleType="fitXY"
        android:layout_alignLeft="@+id/fl_smart_video_container"
        android:layout_alignTop="@+id/fl_smart_video_container"
        android:layout_alignRight="@+id/fl_smart_video_container"
        android:layout_alignBottom="@+id/fl_smart_video_container"/>
    <com.taobao.movie.android.app.oscar.ui.community.view.CommunityBusinessBottomView
        android:id="@+id/community_media_business_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_smart_video_container"/>
</RelativeLayout>
