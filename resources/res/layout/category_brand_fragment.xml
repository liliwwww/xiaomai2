<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_brand"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/layout_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.damai.uikit.irecycler.IRecyclerView
            android:id="@+id/brand_irc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/image_gotop"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/ic_top"/>
        <include
            android:id="@+id/ll_empty"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/category_star_empty"/>
        <View
            android:id="@+id/view_line"
            android:background="#19000000"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/nbl_fragment_header"
            android:paddingTop="@dimen/margin_9dp"
            android:paddingBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_12dp"
            android:paddingEnd="@dimen/margin_12dp">
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="18dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/nbl_fragment_header_back"
                android:background="@drawable/bricks_bg_artist_navbar_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:text="@string/iconfont_zuojiantou_"
                android:paddingStart="4dp"/>
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/nbl_fragment_header_title"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="厂牌"
                android:layout_weight="1"/>
            <View
                android:layout_width="27dp"
                android:layout_height="27dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nbl_fragment_hide_tab"
            android:background="@color/white"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_44dp"/>
    </FrameLayout>
</FrameLayout>
