<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="@drawable/icon_bg_title_button_alpha_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="18dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/titlebar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/titlebar_button_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"/>
    <com.alipay.mobile.mpass.badge.ui.BadgeView
        android:layout_gravity="top|right"
        android:id="@+id/badge_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"/>
</FrameLayout>
