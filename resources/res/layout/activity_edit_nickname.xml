<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f3f4f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/color_111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="18dp"
            android:textColor="@color/color_111111"
            android:id="@+id/edit_nickname_tv_back"
            android:paddingLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_zuojiantou_"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/cg_1"
            android:id="@+id/edit_nickname_tv_confirm"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/bg_border_corner_edit_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="12dp">
        <EditText
            android:textSize="14dp"
            android:textColor="#5f6672"
            android:textColorHint="#ced1d6"
            android:gravity="center_vertical"
            android:id="@+id/edit_nick_name"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/account_settings_nickname_hint"
            android:singleLine="true"
            android:maxLength="16"
            android:inputType="text"
            android:textCursorDrawable="@null"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
</LinearLayout>
