<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="106dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="97dp">
        <ImageView
            android:id="@+id/iv_header_image"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_18dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:src="@drawable/uikit_default_image_bg_gradient"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/main_color"
                android:id="@+id/tv_info_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已签收"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_888888"
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顺丰快递：79387412983479312"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_888888"
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="官方电话：暂无"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/color_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
</LinearLayout>
