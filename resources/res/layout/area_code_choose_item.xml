<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/area_code_text_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/area_code_select_ck"
        android:layout_centerVertical="true"/>
    <CheckBox
        android:enabled="false"
        android:id="@+id/area_code_select_ck"
        android:background="@drawable/common_business_check_circle_selector"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:button="@null"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <View
        android:id="@+id/area_code_item_line"
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
