<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticklet_list_ll_tranfer_accept"
    android:layout_width="match_parent"
    android:layout_height="27dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="@drawable/ticklet_list_transfer_title_bg"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_13dp"
            android:textColor="?attr/tickletListAcceptTextColor"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_6dp"
            android:text="@string/iconfont_shuoming12"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="?attr/tickletListAcceptTextColor"
            android:id="@+id/ticklet_transfer_message_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ticklet_perform_transfer_num"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="?attr/tickletListAcceptTextColor"
            android:id="@+id/ticklet_transfer_message_content_end_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去查看"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_11dp"
            android:textColor="?attr/tickletListAcceptTextColor"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="@string/iconfont_youjiantou12"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</LinearLayout>
