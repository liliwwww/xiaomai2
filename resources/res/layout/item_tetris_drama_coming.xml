<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/dc_root"
    android:background="@drawable/shape_project_item_background"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="139dp">
    <cn.damai.uikit.view.DMPosterView
        android:id="@+id/dc_project_poster"
        android:layout_width="86dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/dc_project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/dc_project_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:layout_below="@+id/dc_project_title"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/dc_project_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lines="1"
            android:layout_below="@+id/dc_project_date"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/dc_project_ipuv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:lines="1"
            android:layout_below="@+id/dc_project_addr"/>
        <RelativeLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/project_with_price_ui"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:id="@+id/dc_project_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="起"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/project_with_price_pending"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="价格待定"/>
            <cn.damai.uikit.flowlayout.FlowLayout
                android:id="@+id/project_with_price_promotion"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_toRightOf="@+id/project_with_price_ui"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/project_state_count_down"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距开售"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:id="@+id/project_state_count_down_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/project_state_count_down_day_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="天"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:id="@+id/project_state_count_down_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#33ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:id="@+id/project_state_count_down_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#33ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"/>
                <cn.damai.uikit.number.DMDigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:id="@+id/project_state_count_down_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/project_state_buy"
                android:background="@drawable/shape_go_2_buy_ticket"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="去购票"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/project_state_none_ticket"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="很遗憾没票了"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
