<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_transpant"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_gravity="bottom"
        android:background="@drawable/bg_border_corner_top_circle12"
        android:paddingTop="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/ll_member_auth_layout"
            android:paddingBottom="@dimen/margin_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_member_auth_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">
                <TextView
                    android:textSize="@dimen/margin_14dp"
                    android:textColor="@color/color_000000"
                    android:id="@+id/tv_member_auth_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_21dp"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:layout_weight="1"/>
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="#9c9ca5"
                    android:layout_gravity="right"
                    android:id="@+id/member_auth_right_close"
                    android:paddingLeft="@dimen/margin_3dp"
                    android:paddingTop="@dimen/margin_3dp"
                    android:paddingRight="@dimen/margin_21dp"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_fucengguanbi16"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_tiaopiaopiao_tip"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_21dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:layout_below="@+id/ll_member_auth_title">
                <ImageView
                    android:layout_width="@dimen/margin_16dp"
                    android:layout_height="@dimen/margin_16dp"
                    android:layout_marginRight="@dimen/margin_3dp"
                    android:src="@drawable/cm_member_tpp_logo"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="@dimen/margin_14dp"
                    android:textColor="@color/color_000000"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="淘票票"/>
                <TextView
                    android:textSize="@dimen/margin_14dp"
                    android:textColor="@color/color_000000"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_4dp"
                    android:text="申请"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/margin_18dp"
                android:textColor="@color/color_000000"
                android:id="@+id/member_auth_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_21dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:layout_below="@+id/ll_tiaopiaopiao_tip"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_member_auth_protocol_instruction"
                android:background="@drawable/bg_border_corner_a6a6a_circle9"
                android:paddingLeft="@dimen/margin_6dp"
                android:paddingTop="@dimen/margin_8dp"
                android:paddingRight="@dimen/margin_6dp"
                android:paddingBottom="@dimen/margin_12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_21dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:layout_marginBottom="@dimen/margin_18dp"
                android:layout_below="@+id/member_auth_tip"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_member_auth_protocol"
                android:paddingBottom="@dimen/margin_18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_21dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:layout_below="@+id/ll_member_auth_protocol_instruction">
                <CheckBox
                    android:id="@+id/cb_ll_member_auth"
                    android:background="@drawable/common_business_check_circle_selector_black"
                    android:focusable="false"
                    android:layout_width="@dimen/margin_16dp"
                    android:layout_height="@dimen/margin_16dp"
                    android:button="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="@color/color_9c9ca5"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_ll_member_pro_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_6dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_21dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:layout_below="@+id/ll_member_auth_protocol">
                <TextView
                    android:textSize="@dimen/margin_16dp"
                    android:textColor="#f38066"
                    android:gravity="center"
                    android:id="@+id/tv_ll_member_pro_cancel"
                    android:background="@drawable/bg_border_corner_white_f38066_circle20"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="@dimen/margin_9dp"
                    android:layout_height="@dimen/margin_2dp"/>
                <TextView
                    android:textSize="@dimen/margin_16dp"
                    android:textColor="#562231"
                    android:gravity="center"
                    android:id="@+id/tv_ll_member_pro_agree"
                    android:background="@drawable/bg_border_corner_ffd4a6_ffbeae_circle20"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_member_auth_checkbox_tip"
                android:background="@drawable/cn_member_tip_arrow_bg"
                android:paddingBottom="@dimen/margin_10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_21dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:text="请阅读并同意相关协议"
                android:layout_above="@+id/ll_member_auth_protocol"/>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
