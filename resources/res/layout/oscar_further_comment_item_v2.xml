<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_deep_article"
    android:background="?attr/bgFilmDetailAll"
    android:paddingBottom="3dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/article_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp">
            <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                android:id="@+id/media_image"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                app:fadeDuration="0"
                app:placeholderImage="@drawable/header_icon"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/common_divider_color"
                app:roundingBorderWidth="1px"/>
            <FrameLayout
                android:id="@+id/media_want_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp">
                <View
                    android:id="@+id/deep_further_focus_click_block"
                    android:layout_width="42dp"
                    android:layout_height="15dp"/>
                <com.taobao.movie.android.commonui.widget.RoundedTextView
                    android:ellipsize="end"
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/deep_further_focused"
                    android:visibility="gone"
                    android:text="已关注"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:includeFontPadding="false"
                    app:layout_flexShrink="0"
                    style="@style/red_label_style_common_friend_tag_focused"/>
                <com.taobao.movie.android.commonui.widget.IconFontTextView
                    android:textSize="9dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/deep_further_unfocused"
                    android:background="@drawable/oscar_film_detail_comment_unfocused_bg_v2"
                    android:paddingLeft="@dimen/dim_4"
                    android:paddingRight="@dimen/dim_4"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:text=""
                    android:includeFontPadding="false"
                    app:layout_flexShrink="0"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:textSize="@dimen/resource_size_15"
                    android:textColor="#222222"
                    android:ellipsize="end"
                    android:id="@+id/media_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/deep_further_role"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/cg_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/media_time"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="@dimen/resource_size_14"
                android:textColor="@color/cg_1"
                android:ellipsize="end"
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:maxLines="2"
                android:lineSpacingExtra="4dp"
                android:layout_marginEnd="12dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp">
                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.taobao.movie.android.commonui.widget.FavorLottieAnimationView
                    android:gravity="right"
                    android:id="@+id/article_add_favor"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:lottie_autoPlay="false"/>
                <TextView
                    android:textSize="@dimen/resource_size_12"
                    android:textColor="@color/cg_2"
                    android:gravity="right"
                    android:id="@+id/article_favor_count"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-2dp"/>
                <com.taobao.movie.android.commonui.widget.IconFontTextView
                    android:textSize="@dimen/resource_size_15"
                    android:textColor="@color/cg_2"
                    android:id="@+id/article_add_comment"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconf_do_reply"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:textSize="@dimen/resource_size_12"
                    android:textColor="@color/cg_2"
                    android:gravity="right"
                    android:id="@+id/article_comment_count"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
