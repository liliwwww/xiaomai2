<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_12dp">
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_9c9ca5"
        android:ellipsize="end"
        android:id="@+id/tv_comment_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/iv_comment_top"
        app:layout_constraintTop_toBottomOf="@+id/iv_comment_top"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/iv_comment_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_comment_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_333333"
            android:id="@+id/tv_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_comment_action"
            android:visibility="gone"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:src="@drawable/item_reward_icon"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
