<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/ll_deep_article">
    <com.google.android.flexbox.FlexboxLayout
        android:gravity="top"
        android:orientation="horizontal"
        android:id="@+id/surprise_red_coupon_container"
        android:background="@drawable/bg_surprise_red_packet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignItems="flex_start">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/surprise_red_coupon_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="-21dp"
            app:layout_flexShrink="0"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/surprise_red_coupon_bubble"
            android:background="@drawable/surprise_red_coupon_bubble"
            android:layout_width="21dp"
            android:layout_height="19dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            app:layout_flexShrink="0"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/surprise_red_coupon_bubble_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            app:layout_flexShrink="0"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/tpp_gray_0"
            android:ellipsize="end"
            android:id="@+id/surprise_red_coupon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_flexShrink="1"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_flexShrink="0">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/surprise_red_coupon_right_top_corner"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:scaleType="centerCrop"/>
            <FrameLayout
                android:layout_gravity="end"
                android:id="@+id/fl_surprise_red_closed_button"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.5dp"
                android:layout_marginRight="8.5dp"
                app:layout_flexShrink="0">
                <com.taobao.movie.android.commonui.widget.TimerPlayView
                    android:layout_gravity="center"
                    android:id="@+id/surprise_timer_play"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <com.taobao.movie.android.commonui.widget.IconFontTextView
                    android:textSize="7dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_font_close_line"/>
            </FrameLayout>
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/common_coupon_bg_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/surprise_red_coupon_price_container"
            android:layout_width="75dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/surprise_red_coupon_price_ll"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:id="@+id/cost_price_pre"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:ellipsize="end"
                    android:id="@+id/surprise_red_cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/tpp_primary_red"
                    android:id="@+id/surprise_red_cost_price_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/tpp_primary_red"
                android:gravity="bottom"
                android:id="@+id/surprise_red_cost_context"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/tpp_gray_3"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/surprise_red_coupon_limit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:maxLines="2"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="0.5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:minHeight="71dp"
            android:layout_weight="1">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/surprise_red_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"/>
            <com.taobao.movie.android.commonui.widget.TimerTextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:id="@+id/surprise_red_valid_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/surprise_red_receive_ll"
            android:background="@drawable/bg_surprise_red_packet_receive_btn"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:layout_marginRight="12dp">
            <TextView
                android:textSize="11dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/surprise_red_receive_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="领取"/>
            <com.taobao.movie.android.commonui.widget.SafeLottieAnimationView
                android:gravity="center"
                android:id="@+id/surprise_red_receive_lottie"
                android:visibility="gone"
                android:layout_width="22dp"
                android:layout_height="11dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"/>
        </LinearLayout>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="45dp"
            android:textColor="@color/tpp_gray_4"
            android:id="@+id/surprise_red_status"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="12dp"
            android:text=""/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/surprise_red_exchange_ll"
            android:layout_width="72dp"
            android:layout_height="match_parent">
            <com.taobao.movie.android.commonui.widget.TimerTextView
                android:textSize="11dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/surprise_red_exchange_btn"
                android:background="@drawable/bg_surprise_red_packet_receive_btn"
                android:layout_width="60dp"
                android:layout_height="24dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/surprise_red_exchange_iconf"
                    android:background="@drawable/ic_member_coin_mid"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="#dd7f60"
                    android:id="@+id/surprise_red_exchange_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="200"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</merge>
