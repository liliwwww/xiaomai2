<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/block_coupon_select_area"
    android:layout_width="match_parent"
    android:layout_height="24dp">
    <TextView
        android:textSize="@dimen/text_size_12_dp"
        android:gravity="left"
        android:id="@+id/ordering_vip_coupon_title"
        android:layout_width="wrap_content"
        android:includeFontPadding="false"
        android:layout_weight="0"
        style="@style/CommonListItemOrderTitle"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/img_vip"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/margin_4"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.taobao.movie.android.commonui.widget.TimerTextView
        android:textSize="@dimen/text_size_12_dp"
        android:textColor="@color/color_959aa5"
        android:gravity="center"
        android:id="@+id/ordering_vip_coupon_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/margin_6"
        android:layout_marginEnd="@dimen/margin_9"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_12_dp"
            android:id="@+id/tv_strong_guide"
            android:background="@drawable/bg_order_item_strong_guide"
            android:visibility="gone"
            android:paddingStart="@dimen/padding_4dp"
            android:paddingEnd="@dimen/padding_4dp"
            style="@style/ordering_item_strong_guide_tv_style"/>
        <TextView
            android:id="@+id/ordering_vip_subtitle"
            style="@style/ordering_item_subtitle_tv_style"/>
        <TextView
            android:id="@+id/ordering_vip_coupon_amount"
            android:visibility="gone"
            style="@style/ordering_item_subtitle_tv_style"/>
    </LinearLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:id="@+id/block_coupon_select_arrow"
        android:text="@string/icon_font_right_small"
        style="@style/ordering_item_arrow_style"/>
</LinearLayout>
