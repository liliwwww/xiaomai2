<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/star_index_headerbg"
        android:background="#d8d8d8"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/user_star_b_headerbg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/star_header_img"
            android:visibility="visible"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:id="@+id/user_header_back"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="30dp"
            android:text="@string/iconfont_zuojiantou_"
            android:maxLines="1"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:id="@+id/user_iv_header"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="98dp"
            android:layout_marginRight="21dp"
            android:src="@drawable/uikit_user_default_icon_trans_white"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/tv_header_v"
            android:paddingTop="2dp"
            android:paddingRight="3dp"
            android:visibility="visible"
            android:layout_width="19dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/user_v_tag"
            android:layout_toRightOf="@+id/user_tv_name"
            android:layout_alignBottom="@+id/user_tv_name"/>
        <TextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/user_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text=""
            android:maxLines="1"
            android:layout_above="@+id/user_tv_fanscout"/>
        <TextView
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:id="@+id/user_tv_fanscout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="7dp"
            android:text=""
            android:maxLines="1"
            android:layout_above="@+id/attent_view_star"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:id="@+id/user_tv_fansdesc"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text=""
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_tv_fanscout"
            android:layout_alignBottom="@+id/user_tv_fanscout"/>
        <TextView
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:id="@+id/user_tv_showcout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_tv_fansdesc"
            android:layout_above="@+id/attent_view_star"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:id="@+id/user_tv_showdesc"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="场在售演出"
            android:maxLines="1"
            android:layout_toRightOf="@+id/user_tv_showcout"
            android:layout_alignBottom="@+id/user_tv_showcout"/>
        <cn.damai.commonbusiness.view.AttentionView
            android:id="@+id/attent_view_star"
            android:layout_width="57dp"
            android:layout_height="25dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="33dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/star_header_ll_share"
            android:background="@drawable/attention_btn_followed_normal"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="57dp"
            android:layout_height="25dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="33dp"
            android:layout_toRightOf="@+id/attent_view_star"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_share_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/iconfont_fenxiang24"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:background="@drawable/mine_user_radius_bg"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
