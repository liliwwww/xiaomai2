<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="77dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp">
        <com.alibaba.pictures.bricks.view.RoundRadiusImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:r_round_radius="@dimen/radius_l"
            app:r_stroke_color="#1a000000"
            app:r_stroke_width="1px"/>
        <FrameLayout
            android:id="@+id/city_lay"
            android:background="@drawable/bg_card_dark_corner_3"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/resource_size_5"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/resource_size_9"
                android:textColor="@color/cg_7"
                android:gravity="center"
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/font_Subhead2_M"
        android:textColor="@color/cg_1"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_5"
        android:maxLines="1"
        android:singleLine="true"/>
    <LinearLayout
        android:gravity="bottom"
        android:id="@+id/price_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/resource_size_3">
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="@dimen/font_Footnote2_M"
            android:textColor="@color/color_price_font"
            android:gravity="bottom"
            android:id="@+id/price_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"/>
        <com.alibaba.pictures.bricks.view.DigitTextView
            android:textSize="@dimen/resource_size_14"
            android:textColor="@color/color_price_font"
            android:gravity="bottom"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/resource_size_1"
            android:layout_marginEnd="@dimen/resource_size_1"/>
        <TextView
            android:textSize="@dimen/resource_size_8"
            android:textColor="#666666"
            android:gravity="bottom"
            android:id="@+id/price_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起"/>
    </LinearLayout>
</LinearLayout>
