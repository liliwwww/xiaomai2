<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="98dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/id_project_poster_container"
        android:layout_width="wrap_content"
        android:layout_height="131dp">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/homepage_rank_item_image_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/uikit_default_image_bg_gradient"
            android:scaleType="centerCrop"
            app:borderRadius="6dp"
            app:type="radial"/>
        <View
            android:background="@drawable/bricks_homepage_project_image_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <cn.damai.uikit.tag.DMCategroyTagView
            android:layout_gravity="right"
            android:id="@+id/homepage_rank_item_image_tag"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>
        <cn.damai.uikit.view.LiveRoomView
            android:layout_gravity="right"
            android:id="@+id/homepage_rank_item_live_room"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/homepage_rank_item_rank"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <LinearLayout
            android:gravity="bottom|left"
            android:layout_gravity="bottom|left"
            android:orientation="horizontal"
            android:id="@+id/score_ll"
            android:background="@drawable/bg_score_star_radio"
            android:paddingLeft="@dimen/margin_3dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="#ff8f3f"
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.0"/>
            <cn.damai.uikit.view.ScoreStarViewV2
                android:id="@+id/score_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                app:colorType="yellow"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/want_see_ll"
            android:background="@drawable/bg_score_star_radio"
            android:paddingLeft="@dimen/margin_3dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <cn.damai.uikit.number.DMDigitTextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="#ff993a"
                android:id="@+id/want_see_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#ff993a"
                android:id="@+id/want_see_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="3dp"
                android:text="万人想看"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/homepage_rank_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:minHeight="40dp"
        android:maxLines="2"
        android:minLines="2"
        android:lineSpacingExtra="3dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/homepage_rank_item_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="12dp"
            android:textColor="#ff2d79"
            android:layout_gravity="bottom"
            android:id="@+id/homepage_rank_item_price_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:text="¥"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="16dp"
            android:textColor="#ff2d79"
            android:id="@+id/homepage_rank_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#9c9ca5"
            android:id="@+id/homepage_rank_item_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1.5dp"
            android:text="起"
            android:singleLine="true"/>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/homepage_rank_item_tag_view"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
    <cn.damai.uikit.number.DMDigitTextView
        android:textSize="12dp"
        android:textColor="#ff2d79"
        android:layout_gravity="bottom"
        android:id="@+id/homepage_rank_item_price_unknown"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:text="价格待定"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:id="@+id/homepage_rank_item_time"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_want_see_btn"
        android:background="@drawable/want_see_background_already"
        android:visibility="gone"
        android:layout_width="51dp"
        android:layout_height="24dp"
        android:layout_marginTop="6dp"/>
</LinearLayout>
