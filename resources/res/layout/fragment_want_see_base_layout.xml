<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="#f4f5f6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/can_buy_ticket_ll"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="#ff4886"
                android:id="@+id/can_buy_ticket_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_yuangouxuanxuanzhong"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#636363"
                android:id="@+id/can_buy_ticket_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.damai.uikit.irecycler.IRecyclerView
                android:id="@+id/irc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:loadMoreFooterLayout="@layout/mine_list_irc_footer_layout"
                app:refreshEnabled="true"
                app:refreshHeaderLayout="@layout/refresh_empty_view"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_container"
                android:background="#f4f5f6"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
    <cn.damai.rank.view.WantSeePosterTips
        android:layout_gravity="bottom"
        android:id="@+id/want_see_poster_tips"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"/>
</FrameLayout>
