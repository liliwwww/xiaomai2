<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_ip_wish_one_city"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/resource_size_12"
        android:paddingRight="@dimen/resource_size_12"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="@dimen/resource_size_13"
                android:textColor="@color/white"
                android:id="@+id/id_bricks_ip_wish_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/resource_size_9"
                android:textColor="@color/color_bricks_primary_90_white"
                android:gravity="center"
                android:id="@+id/id_bricks_ip_wish_city_status"
                android:background="@drawable/bg_ip_wish_one_city_tag"
                android:paddingLeft="@dimen/resource_size_3"
                android:paddingTop="1.5dp"
                android:paddingRight="@dimen/resource_size_3"
                android:paddingBottom="1.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:text="已上架"/>
        </LinearLayout>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/white"
            android:id="@+id/id_bricks_ip_wish_city_right_arrow"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/resource_size_12"
            android:text="@string/iconfont_youjiantou12"/>
        <com.alibaba.pictures.bricks.view.SeeAnimateViewDark
            android:id="@+id/id_bricks_ip_wish_city_want_status"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/resource_size_12"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/resource_size_9"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:id="@+id/id_bricks_ip_wish_city_wish_status"
        android:background="@drawable/bricks_ip_wish_top_right_wish_success"
        android:paddingLeft="@dimen/resource_size_3"
        android:paddingRight="@dimen/resource_size_3"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="许愿成功"/>
</FrameLayout>
