<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/bg_pioneer_venue_feed_tab_layout_bg"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.tabs.TabLayout
                android:layout_gravity="bottom"
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/resource_size_43"
                app:selectedIndicatorBackground="@null"
                app:tabGravity="start"
                app:tabMinWidth="@dimen/resource_size_25"
                app:tabPaddingEnd="3dp"
                app:tabPaddingStart="12dp"
                style="@style/HomeFeedTabStyle"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
