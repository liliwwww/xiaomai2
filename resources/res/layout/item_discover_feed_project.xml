<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.view.StrokeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/note_stroke_layout"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:sl_corners_radius="6dp"
    app:sl_stroke_color="#26000000"
    app:sl_stroke_width="1px">
    <cn.damai.tetris.component.girl.mvp.HWRatioLayout
        android:id="@+id/feed_project_hw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:h_w_layout_ratio="1.3375">
        <cn.damai.uikit.view.DMPosterView
            android:id="@+id/feed_project_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </cn.damai.tetris.component.girl.mvp.HWRatioLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:id="@+id/feed_project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:lineSpacingExtra="3dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#9c9ca5"
        android:ellipsize="end"
        android:id="@+id/feed_project_time"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="12dp"
        android:maxLines="1"
        android:minLines="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/feed_project_with_price_ui"
        android:paddingLeft="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12dp"
            android:textColor="#ff2869"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="16dp"
            android:textColor="#ff2869"
            android:id="@+id/feed_project_with_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#9c9ca5"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="1.2dp"
            android:text="起"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="@dimen/margin_10dp"
            android:textColor="#9c9ca5"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/feed_project_wantsee"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1.2dp"
            android:text=" | 我想看"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="#ff2869"
        android:id="@+id/feed_project_price_pending_ui"
        android:paddingLeft="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格待定"/>
    <cn.damai.uikit.tag.DMCommonTagView
        android:id="@+id/feed_project_tag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"/>
</cn.damai.uikit.view.StrokeLinearLayout>
