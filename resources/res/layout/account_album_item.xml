<?xml version="1.0" encoding="utf-8"?>
<cn.damai.uikit.shadowlayout.DMShadowLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:sl_dx="0dp"
    app:sl_dy="0dp"
    app:sl_shadowColor="#0e000000"
    app:sl_shadowRadius="6dp">
    <RelativeLayout
        android:background="@drawable/bg_corner_12_white_stroke"
        android:layout_width="98dp"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.RoundImageView
            android:id="@+id/account_album_item_bg"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:src="@drawable/bg_account_item_1"
            app:borderRadius="12dp"
            app:clipLeftBottomRadius="false"
            app:clipRightBottomRadius="false"
            app:type="radial"/>
        <FrameLayout
            android:id="@+id/account_album_item_area"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="9dp"
            android:layout_centerHorizontal="true">
            <cn.damai.uikit.view.RoundImageView
                android:id="@+id/account_album_item_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/uikit_user_default_icon"
                android:scaleType="fitXY"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_album_item_area"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="12dp"
                android:textColor="#999999"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/account_album_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="userdesc"
                android:maxLines="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/account_album_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:lines="2"/>
        </LinearLayout>
    </RelativeLayout>
</cn.damai.uikit.shadowlayout.DMShadowLayout>
