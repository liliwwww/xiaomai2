<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/guess_you_like_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp">
    <TextView
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/tpp_gray_0"
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:singleLine="true"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.taobao.movie.android.app.order.ui.widget.OrderRecommendView
                android:id="@+id/main_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.taobao.movie.android.app.order.ui.widget.OrderRecommendView
                android:id="@+id/right_top_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.taobao.movie.android.app.order.ui.widget.OrderRecommendView
                android:id="@+id/right_bottom_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_view"
                app:layout_constraintRight_toRightOf="parent"/>
            <com.taobao.movie.android.app.order.ui.widget.OrderRecommendView
                android:id="@+id/bottom_first_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bottom_second_view"
                app:layout_constraintTop_toBottomOf="@+id/main_view"/>
            <com.taobao.movie.android.app.order.ui.widget.OrderRecommendView
                android:id="@+id/bottom_second_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_first_view"
                app:layout_constraintRight_toLeftOf="@+id/bottom_third_view"
                app:layout_constraintTop_toTopOf="@+id/bottom_first_view"/>
            <com.taobao.movie.android.app.order.ui.widget.OrderRecommendView
                android:id="@+id/bottom_third_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_second_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bottom_first_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.legacy.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>
</LinearLayout>
