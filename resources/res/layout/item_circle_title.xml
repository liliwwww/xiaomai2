<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/title_layout"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_22dp"
                android:gravity="center_vertical"
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_zuojiantou_"/>
            <cn.damai.uikit.banner.sub.RoundRadiusImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/img_iv"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="@dimen/margin_9dp"
                app:r_round_radius="6dp"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="45dp"
                android:lines="1"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/join_layout"
                android:background="@drawable/circle_title_add_bg"
                android:layout_width="67dp"
                android:layout_height="26dp"
                android:layout_marginStart="@dimen/margin_3dp">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="@dimen/margin_12dp"
                    android:textColor="#ff8c50"
                    android:id="@+id/theme_circle_join_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_jiarujiahao24"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#ff8c50"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/join_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_4dp"/>
            </LinearLayout>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="22dp"
                android:textColor="#5f6672"
                android:gravity="center"
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="@string/iconfont_fenxiang44"
                android:layout_marginStart="@dimen/margin_15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:background="#19000000"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</FrameLayout>
