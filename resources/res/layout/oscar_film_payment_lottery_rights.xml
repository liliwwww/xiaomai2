<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/order_result_item_background"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_12"
    android:layout_marginRight="@dimen/margin_12">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="本次购票获得"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/lottery_result"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="180dp"
        android:layout_height="92dp">
        <TextView
            android:textSize="15dp"
            android:textColor="#ff4d64"
            android:gravity="bottom|center_horizontal"
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="1次抽奖机会"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/tv_notice">
            <RelativeLayout
                android:id="@+id/rl_lottery_result"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/common_color_1003"
                    android:gravity="bottom|center_horizontal"
                    android:id="@+id/tv_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去查看"
                    android:layout_alignParentBottom="true"/>
                <com.taobao.movie.android.commonui.widget.MIconfontTextView
                    android:textSize="6dp"
                    android:textStyle="italic"
                    android:textColor="@color/common_color_1003"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="1.5dp"
                    android:text="@string/iconf_right_arrow"
                    android:layout_toRightOf="@+id/tv_check"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/tv_lottery"
                android:background="@drawable/oscar_film_lottery_rights"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="刮奖"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
