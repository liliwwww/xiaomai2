<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/block_sale_select_area"
    android:background="@drawable/order_item_round_bg"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CommonListItemContainerWhiteGoodHeader">
    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/tv_title"
        android:text="@string/ordering_selector_block_sale_select"
        style="@style/CommonListItemOrderTitle"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:ellipsize="end"
        android:id="@+id/tv_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text=""
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:layout_weight="1"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/ordering_sale_title_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/ordering_sale_title_all_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="@string/icon_font_right_small"/>
</LinearLayout>
