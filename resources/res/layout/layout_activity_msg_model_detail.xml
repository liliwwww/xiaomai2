<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/message_title_bar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_20dp"
                android:textColor="@color/color_111111"
                android:gravity="center"
                android:id="@+id/title_left_icon"
                android:paddingLeft="18dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/iconfont_fanhui24"/>
            <TextView
                android:textSize="@dimen/margin_20dp"
                android:textColor="@color/base_head_text_color"
                android:gravity="center"
                android:id="@+id/message_list_title"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="消息"
                android:singleLine="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:background="@color/color_EDEDED"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
    <cn.damai.uikit.pulltorefresh.library.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/message_item_listview"
        android:background="@color/color_F5F5F5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="pull"/>
</LinearLayout>
