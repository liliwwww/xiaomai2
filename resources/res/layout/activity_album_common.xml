<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#222121"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/status_bar_gap"
            android:layout_width="match_parent"
            android:layout_height="22dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/resource_size_18"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@+id/left_back"
                android:padding="@dimen/resource_size_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_zuojiantou_"
                android:layout_marginStart="@dimen/margin_12dp"/>
            <TextView
                android:textSize="@dimen/resource_size_18"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/tab_official"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官方相册"
                android:layout_marginStart="@dimen/margin_19dp"/>
            <TextView
                android:textSize="@dimen/resource_size_15"
                android:textColor="@color/color_bricks_primary_70_white"
                android:layout_gravity="center_vertical"
                android:id="@+id/tab_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户晒图"
                android:layout_marginStart="@dimen/margin_16dp"/>
        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager2_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
