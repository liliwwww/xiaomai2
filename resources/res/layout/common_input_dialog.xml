<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/common_text_color9"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/title"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <View
            android:id="@+id/title_line"
            android:background="@color/common_divider_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_line_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <ScrollView
            android:id="@+id/scroll_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/common_text_color10"
                android:gravity="center"
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/common_blue_text_color"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:id="@+id/bottom_button_line"
            android:background="@color/common_divider_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_line_height"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/common_text_color11"
                android:gravity="center"
                android:id="@+id/cancel"
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tpp_cancel"
                android:layout_weight="1"/>
            <View
                android:id="@+id/button_divider"
                android:background="@color/common_divider_color"
                android:layout_width="@dimen/space_line_height"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/common_blue_text_color"
                android:gravity="center"
                android:id="@+id/confirm"
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/tpp_confirm"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
