<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/one_arch_refresh_layout"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/resource_size_80"
        app:srlFooterMaxDragRate="1"
        app:srlFooterTriggerRate="0.85"
        app:srlHeaderMaxDragRate="2"
        app:srlHeaderTriggerRate="1.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.alibaba.pictures.bricks.view.NestedRecyclerView
                android:id="@+id/one_arch_recyclerView"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>
        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/sticky_feed_tab"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/resource_size_80">
        <TextView
            android:textSize="@dimen/resource_size_16"
            android:textColor="#2e333e"
            android:gravity="center"
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="感受现场"
            android:layout_marginStart="@dimen/resource_size_12"/>
        <com.alibaba.pictures.bricks.live.DMLiveWaterFlowTabLayout
            android:id="@+id/feed_tab_layout"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            app:tabGravity="start"
            app:tabMinWidth="@dimen/resource_size_25"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp"
            style="@style/LiveFeedTabStyle"/>
    </RelativeLayout>
</RelativeLayout>
