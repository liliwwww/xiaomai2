<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/bg_corner_6_solid_ffe9f0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_16dp"
        android:textColor="#eb7609"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:text="@string/iconfont_tixingmian_"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="#eb7609"
        android:id="@+id/tv_mine_announcement_content"
        android:paddingTop="@dimen/margin_9dp"
        android:paddingBottom="@dimen/margin_9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_4dp"
        android:text="公告：积分即将下线，请尽快使用积分"
        android:singleLine="true"
        android:layout_weight="1"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="#eb7609"
        android:gravity="center_vertical"
        android:id="@+id/tv_mine_announcement_close"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingRight="@dimen/margin_12dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/iconfont_guanbi16"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</LinearLayout>
