<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:src="@drawable/exchange_dialog_header_bg"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/exchange_dialog_bg"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="购买奖励"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/tpp_gray_3"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/costMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="15dp"
            android:includeFontPadding="false"/>
        <Button
            android:textColor="@color/member_main_title"
            android:id="@+id/confirmBtn"
            android:background="@color/white"
            android:layout_width="120dp"
            android:layout_height="39dp"
            android:layout_marginBottom="21dp"
            android:text="去兑换"/>
    </LinearLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="32dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/icon_font_close"/>
</LinearLayout>
