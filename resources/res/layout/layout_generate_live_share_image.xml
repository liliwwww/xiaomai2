<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/share_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:background="@drawable/bg_generate_live_share_image"
        android:paddingBottom="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="182dp"
            android:layout_height="117dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/find_quotation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <cn.damai.uikit.shadowlayout.DMShadowLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/space_to_note_container"
            app:layout_constraintLeft_toLeftOf="@+id/note_container"
            app:layout_constraintRight_toRightOf="@+id/note_container"
            app:sl_cornerRadius="33dp"
            app:sl_shadowColor="#0d000000"
            app:sl_shadowRadius="8dp"/>
        <Space
            android:id="@+id/space_to_note_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_container"/>
        <cn.damai.uikit.view.round.RoundFrameLayout
            android:id="@+id/image_container"
            android:layout_width="0dp"
            android:layout_height="332dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rTopRadius="33dp">
            <ImageView
                android:id="@+id/single_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/multi_image_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/multi_image_one"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"/>
                <View
                    android:id="@+id/space_horizontal"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/multi_image_one"/>
                <ImageView
                    android:id="@+id/multi_image_two"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/space_vertical"
                    app:layout_constraintTop_toBottomOf="@+id/space_horizontal"/>
                <View
                    android:id="@+id/space_vertical"
                    android:background="@color/white"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/multi_image_two"
                    app:layout_constraintLeft_toRightOf="@+id/multi_image_two"
                    app:layout_constraintRight_toLeftOf="@+id/multi_image_three"
                    app:layout_constraintTop_toTopOf="@+id/multi_image_two"/>
                <ImageView
                    android:id="@+id/multi_image_three"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/multi_image_two"
                    app:layout_constraintLeft_toRightOf="@+id/space_vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/multi_image_two"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </cn.damai.uikit.view.round.RoundFrameLayout>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/white"
            android:id="@+id/image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="@+id/image_count_label_icon"
            app:layout_constraintLeft_toRightOf="@+id/image_count_label_icon"/>
        <ImageView
            android:id="@+id/image_count_label_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/fenxiang24"
            app:layout_constraintLeft_toLeftOf="@+id/image_container"
            app:layout_constraintTop_toTopOf="@+id/image_container"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/note_container"
            android:background="@drawable/bg_generate_live_share_image_note"
            android:paddingTop="15dp"
            android:paddingBottom="27dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_container"
            app:layout_goneMarginTop="90dp">
            <cn.damai.uikit.view.DMAvatar
                android:id="@+id/iv_account_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                app:avatarSize="size_50x50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:id="@+id/user_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="26dp"
                android:lines="1"
                app:layout_constraintLeft_toRightOf="@+id/iv_account_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_account_image"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#ff9c9ca5"
                android:ellipsize="end"
                android:id="@+id/user_title_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="@+id/iv_account_image"
                app:layout_constraintLeft_toLeftOf="@+id/user_title"
                app:layout_constraintRight_toRightOf="@+id/user_title"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:id="@+id/comment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="26dp"
                android:maxLines="2"
                android:lineSpacingExtra="6dp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_account_image"/>
            <TextView
                android:textSize="16dp"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:id="@+id/note_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="26dp"
                android:maxLines="25"
                android:lineSpacingExtra="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comment_title"/>
            <cn.damai.comment.view.DMTagView
                android:id="@+id/dm_info"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="21dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/note_text"/>
            <View
                android:id="@+id/dm_line_5"
                android:background="#ffd7d7d7"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginTop="21dp"
                app:layout_constraintLeft_toLeftOf="@+id/note_text"
                app:layout_constraintRight_toRightOf="@+id/note_text"
                app:layout_constraintTop_toBottomOf="@+id/dm_info"/>
            <cn.damai.commonbusiness.share.evaluate.EvaluateScriptMurderShopView
                android:id="@+id/script_murder_shop"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                app:layout_constraintLeft_toLeftOf="@+id/dm_line_5"
                app:layout_constraintTop_toBottomOf="@+id/dm_line_5"/>
            <FrameLayout
                android:id="@+id/project_image_container"
                android:visibility="gone"
                android:layout_width="44dp"
                android:layout_height="58dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintLeft_toLeftOf="@+id/dm_line_5"
                app:layout_constraintTop_toBottomOf="@+id/dm_line_5">
                <cn.damai.uikit.view.round.RoundImageView2
                    android:id="@+id/project_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:rRadius="6dp"/>
            </FrameLayout>
            <TextView
                android:textSize="14dp"
                android:textColor="#ff000000"
                android:ellipsize="end"
                android:id="@+id/project_title"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:maxLines="2"
                app:layout_constraintLeft_toRightOf="@+id/project_image_container"
                app:layout_constraintRight_toRightOf="@+id/note_text"
                app:layout_constraintTop_toTopOf="@+id/project_image_container"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#ff9c9ca5"
                android:ellipsize="end"
                android:id="@+id/project_info"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="@+id/project_title"
                app:layout_constraintRight_toRightOf="@+id/project_title"
                app:layout_constraintTop_toBottomOf="@+id/project_title"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:id="@+id/live_share_artist_container"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_26dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="@dimen/margin_26dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dm_line_5">
                <cn.damai.commonbusiness.share.live.LiveArtistView
                    android:id="@+id/live_share_artist_left"
                    android:paddingRight="@dimen/margin_5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/live_share_artist_right"
                    app:layout_constraintTop_toTopOf="parent"/>
                <cn.damai.commonbusiness.share.live.LiveArtistView
                    android:id="@+id/live_share_artist_right"
                    android:paddingLeft="@dimen/margin_5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/live_share_artist_left"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textSize="26dp"
            android:textColor="#fffefffe"
            android:id="@+id/live_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="我在大麦记录现场"
            app:layout_constraintLeft_toLeftOf="@+id/note_container"
            app:layout_constraintTop_toBottomOf="@+id/note_container"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#ffffffff"
            android:id="@+id/scan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="34dp"
            android:text="长按扫码跟我一起感受现场"
            app:layout_constraintLeft_toLeftOf="@+id/live_notice"
            app:layout_constraintTop_toBottomOf="@+id/live_notice"/>
        <ImageView
            android:id="@+id/share_qrcode"
            android:background="@drawable/bg_corner_12_white"
            android:padding="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_container"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
