<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/default_frame"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginBottom="2dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/tab_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginBottom="2dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"/>
            <FrameLayout
                android:id="@+id/tab_temp_cover_img_ui"
                android:background="@drawable/shape_tab_cover_circle"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_width="34dp"
                android:layout_height="34dp">
                <cn.damai.commonbusiness.tab.CoverImageView
                    android:id="@+id/tab_temp_cover_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
        </FrameLayout>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/color_000000"
            android:gravity="center"
            android:id="@+id/tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <View
        android:layout_gravity="right"
        android:id="@+id/v_badge"
        android:background="@drawable/icon_badge"
        android:visibility="invisible"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"/>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/tab_click_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</FrameLayout>
