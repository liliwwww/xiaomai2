<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ic_wantsee_tips_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:src="@drawable/ic_wantsee_tips_arrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:id="@+id/want_see_bottombar_tip_bg"
        android:background="@drawable/bg_project_detail_wantsee_tips"
        android:layout_width="333dp"
        android:layout_height="62dp"
        android:layout_above="@+id/ic_wantsee_tips_arrow"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:id="@+id/want_see__bottombar_tip_texttop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/damai_detail_wantsee_click_message"
                android:maxLines="1"
                android:layout_centerVertical="true"/>
            <com.real.android.nativehtml.android.HtmlView
                android:id="@+id/want_see_bottom_bar_tips_html_view_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_6"/>
        </LinearLayout>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="10dp"
            android:textColor="@color/alpha_20_black"
            android:id="@+id/want_see_bottombar_tip_close"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/iconfont_guanbi12"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="56dp"
        android:layout_height="91dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/want_see_bottom_bar_tiplove"
        android:layout_above="@+id/ic_wantsee_tips_arrow"
        android:layout_alignLeft="@+id/want_see_bottombar_tip_bg"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/live_icon"
        android:layout_width="56dp"
        android:layout_height="108dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/ic_wantsee_tips_arrow"
        android:layout_alignLeft="@+id/want_see_bottombar_tip_bg"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/want_see_bottom_tip_heart_pop"/>
</RelativeLayout>
