<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.uikit.view.MaxHeightLinearLayout
            android:orientation="vertical"
            android:id="@+id/damai_theme_dialog_layout"
            android:background="@drawable/damai_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:linear_max_ratio="0.55">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/damai_theme_dialog"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="105dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/damai_theme_dialog_title"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="18dp"
                    android:text="温馨提示"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <ScrollView
                    android:id="@+id/damai_theme_dialog_content_scroll"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <FrameLayout
                        android:id="@+id/damai_theme_dialog_content_container"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15dp"
                            android:textColor="@color/color_5F6672"
                            android:gravity="left"
                            android:id="@+id/damai_theme_dialog_tip_content"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp"
                            android:text="@string/mine_grabbing_list_tip"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="3dp"/>
                    </FrameLayout>
                </ScrollView>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/damai_theme_dialog_confirm_btn"
                    android:background="@drawable/bg_border_corner_nat_red"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="@dimen/margin_18dp"
                    android:text="我知道了"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </cn.damai.uikit.view.MaxHeightLinearLayout>
        <View
            android:id="@+id/damai_theme_dialog_bottom_space"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
</FrameLayout>
