<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_left"
            android:paddingLeft="15dp"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:text="@string/iconfont_fanhui18"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_fans"
            android:background="@drawable/attention_btn_followed_normal"
            android:layout_width="57dp"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/margin_9dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/white"
                android:id="@+id/icon_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_xiangkan24"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/tv_fans"
                android:paddingLeft="@dimen/margin_2dp"
                android:paddingBottom="@dimen/margin_1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="想看"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_share"
            android:background="@drawable/bg_title_share"
            android:layout_width="57dp"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/margin_15dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_13dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_fenxiang18"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_2dp"
                android:paddingBottom="@dimen/margin_1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
</merge>
