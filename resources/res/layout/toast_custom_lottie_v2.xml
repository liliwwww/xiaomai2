<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:lottie="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/center_toast_bg"
        android:paddingLeft="15dp"
        android:paddingTop="24dp"
        android:paddingRight="15dp"
        android:paddingBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:minWidth="120dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/toast_lottie_view_v2"
            android:visibility="gone"
            android:layout_width="66dp"
            android:layout_height="66dp"
            lottie:lottie_autoPlay="true"
            lottie:lottie_loop="false"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_ffffff"
                android:id="@+id/toast_title_v2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.2"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:id="@+id/toast_sub_title_v2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
