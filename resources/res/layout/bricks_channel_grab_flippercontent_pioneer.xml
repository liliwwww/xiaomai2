<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:alignItems="center"
    app:justifyContent="flex_end">
    <TextView
        android:textSize="11dp"
        android:textColor="@color/bricks_171717"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/channel_grab_highlight_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dim_3"
        android:maxWidth="100dp"
        android:maxLines="1"
        app:layout_flexShrink="0"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/bricks_171717"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/channel_grab_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_flexShrink="1"/>
    <com.alibaba.pictures.bricks.view.BricksIconFontTextView
        android:textSize="14dp"
        android:textColor="@color/color_bricks_primary_white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:background="@drawable/pioneer_right_arrow_bg_r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="@string/iconfont_changbingjiantou"
        android:layout_alignBaseline="@+id/home_grab_content_text"
        android:layout_alignEnd="@+id/home_grab_content_text"
        app:layout_flexShrink="0"/>
</com.google.android.flexbox.FlexboxLayout>
