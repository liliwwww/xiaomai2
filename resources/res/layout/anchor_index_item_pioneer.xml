<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/tab_container"
    android:layout_width="100dp"
    android:layout_height="match_parent">
    <View
        android:id="@+id/iv_line"
        android:background="@drawable/bg_pioneer_live_feed_tab_indicator"
        android:layout_width="@dimen/resource_size_32"
        android:layout_height="@dimen/resource_size_7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/resource_size_1"
        android:layout_alignParentBottom="true">
        <com.alibaba.pictures.bricks.view.PuHuiTiTextView
            android:textSize="@dimen/resource_size_16"
            android:textColor="#171717"
            android:layout_gravity="center"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/resource_size_1"/>
    </FrameLayout>
</RelativeLayout>
