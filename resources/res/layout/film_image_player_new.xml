<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/film_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/film_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:fadeDuration="0"
        app:failureImage="@drawable/poster_default_bg"
        app:placeholderImage="@drawable/poster_default_bg"
        app:roundedCornerRadius="6dp"/>
    <com.taobao.movie.android.commonui.widget.MoCardTextView
        android:textSize="9dp"
        android:textColor="@color/color_tpp_primary_white"
        android:gravity="center"
        android:id="@+id/film_show_mark"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        app:mocard_background_color="@color/color_tpp_primary_80_black"
        app:mocard_background_radius="2dp"/>
    <ImageView
        android:layout_gravity="bottom|right"
        android:id="@+id/icon_play"
        android:visibility="gone"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_margin="4dp"/>
    <View
        android:id="@+id/radius_fg"
        android:background="@drawable/image_tag_view_radius_fg_big"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</merge>
