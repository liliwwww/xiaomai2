<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/ticklet_live_view"
    android:visibility="gone"
    android:layout_width="@dimen/ticklet_margin_205dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/ticklet_live_bg"
        android:visibility="visible"
        android:layout_width="@dimen/ticklet_margin_205dp"
        android:layout_height="@dimen/ticklet_margin_205dp"
        android:scaleType="centerCrop"/>
    <cn.damai.uikit.view.DMPosterView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/ticklet_live_project_icon"
        android:layout_width="75dp"
        android:layout_height="99dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:src="@drawable/ticklet_live_icon"
        android:scaleType="centerCrop"/>
</FrameLayout>
