<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_component_top_corner_card"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:paddingStart="@dimen/dim_7"
    android:paddingEnd="@dimen/dim_7">
    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/title_image"
            android:layout_width="240dp"
            android:layout_height="15dp"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/font_Headline1_M"
                android:textColor="@color/cg_1"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/title_right_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_1"
                android:scaleType="centerInside"
                android:layout_marginStart="@dimen/resource_size_8"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/action_layout"
        android:paddingTop="@dimen/resource_size_5"
        android:paddingBottom="@dimen/resource_size_5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/resource_size_28"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/resource_size_10"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="@color/title_right_btn_text_color"
            android:gravity="center"
            android:id="@+id/action_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="@color/title_right_btn_text_color"
            android:gravity="center"
            android:id="@+id/action_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/resource_size_12"
            android:textColor="@color/title_right_btn_text_color"
            android:layout_gravity="center_vertical"
            android:id="@+id/right_arrow"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou12"/>
    </LinearLayout>
</RelativeLayout>
