<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/community_item_container"
    android:layout_width="@dimen/movie_poster_width"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_home_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/sv_homepage_show_image"
            android:layout_width="@dimen/movie_poster_width"
            android:layout_height="@dimen/movie_poster_height"
            app:actualImageScaleType="centerCrop"
            app:fadeDuration="0"
            app:failureImage="@drawable/poster_default_bg"
            app:placeholderImage="@drawable/poster_default_bg"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/dianying_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/cv_home_round">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_preschedule_mark"
            android:background="@drawable/common_yellow_round_radius_small_btn"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginRight="3dp"
            android:text="点映"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:ellipsize="end"
            android:id="@+id/tv_homepage_show_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:maxLines="1"/>
    </LinearLayout>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/tpp_gray_3"
        android:id="@+id/tv_homepage_show_tag"
        android:paddingRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:maxLines="1"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:layout_below="@+id/dianying_zone"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/tv_homepage_show_btn_buy"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="27dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:text="购票"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/tv_homepage_show_tag"
        style="@style/buy_button_style_small_auto_width"/>
</RelativeLayout>
