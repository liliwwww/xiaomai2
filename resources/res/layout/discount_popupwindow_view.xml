<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/discount_bg_view"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/discount_logo_gone_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/discount_bg_view"
        app:layout_constraintStart_toStartOf="@+id/discount_bg_view"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/discount_logo_iv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_marginStart="9dp"
        app:failureImage="@drawable/discount_info_error_view"
        app:layout_constraintBottom_toBottomOf="@+id/discount_bg_view"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/discount_spring_coupon_text_pink"
        android:ellipsize="end"
        android:id="@+id/discount_info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/discount_bg_view"
        app:layout_constraintEnd_toStartOf="@+id/discount_info_icon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/discount_barrier"
        app:layout_constraintTop_toTopOf="@+id/discount_bg_view"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/discount_info_icon"
        android:padding="5dp"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/discount_bg_view"
        app:layout_constraintEnd_toEndOf="@+id/discount_bg_view"
        app:layout_constraintTop_toTopOf="@+id/discount_bg_view"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/discount_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="discount_logo_gone_view , discount_logo_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
