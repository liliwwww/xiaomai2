<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="21dp"
    android:paddingTop="12dp"
    android:paddingRight="21dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <cn.damai.uikit.flowlayout.FlowLayout
                android:orientation="horizontal"
                android:id="@+id/project_service_flow_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutDirection="ltr"/>
        </LinearLayout>
        <com.alibaba.pictures.bricks.view.DMUpMarqueeView
            android:id="@+id/notification_ui"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/margin_10dp"/>
    </LinearLayout>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="@dimen/margin_13dp"
        android:textColor="#3c3f44"
        android:id="@+id/service_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="@string/iconfont_youjiantou24"
        android:includeFontPadding="false"/>
</LinearLayout>
