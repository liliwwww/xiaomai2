<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/pic_promotion_discount_excel_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_2E333E"
        android:gravity="center"
        android:id="@+id/pic_promotion_discount_excel_tag"
        android:background="@drawable/pic_promotion_discount_excel_header_bg1"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:visibility="visible"
        android:layout_width="72dp"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_2E333E"
        android:gravity="center_vertical"
        android:id="@+id/pic_promotion_discount_excel_desc"
        android:background="@drawable/pic_promotion_discount_excel_header_bg2"
        android:paddingLeft="@dimen/margin_12dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="优惠内容"
        android:layout_weight="1"/>
</LinearLayout>
