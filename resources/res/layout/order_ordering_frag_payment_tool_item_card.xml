<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ll_block_card_select_area"
    android:background="@drawable/list_selector"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    style="@style/OrderCommonMarketItem">
    <TextView
        android:textSize="@dimen/text_size_14_dp"
        android:gravity="left"
        android:id="@+id/tv_block_card_select_name"
        android:layout_width="wrap_content"
        style="@style/CommonListItemOrderTitle"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_block_card_select_icons"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_14_dp"
            android:textColor="@color/color_tpp_primary_title"
            android:ellipsize="end"
            android:gravity="right"
            android:id="@+id/tv_card_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/img_guide_bubble"
            android:visibility="gone"
            android:layout_width="7dp"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/margin_3"
            android:src="@drawable/order_strong_guide_bubble"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/margin_9"/>
        <TextView
            android:textSize="@dimen/text_size_11_dp"
            android:textColor="@color/order_item_strong_guide_color"
            android:id="@+id/tv_strong_guide"
            android:background="@drawable/bg_order_item_strong_guide"
            android:paddingTop="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_6dp"
            android:paddingEnd="@dimen/padding_6dp"/>
    </LinearLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:gravity="right"
        android:id="@+id/it_block_card_select_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_font_right_small"
        android:layout_marginStart="@dimen/margin_3"/>
</LinearLayout>
