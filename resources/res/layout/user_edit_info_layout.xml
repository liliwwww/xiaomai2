    android:visibility="gone"
    android:layout_width="81.5dp"
    android:layout_height="27dp"
    android:layout_alignParentRight="true">
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_959aa5"
        android:id="@+id/user_center_header_edit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconfont_bianji18"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_959aa5"
        android:id="@+id/user_center_header_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="0.5dp"
        android:text="编辑资料"/>
</LinearLayout>
