<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_333333"
            android:id="@+id/add_contacts_name_text_tv"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:text="@string/damai_addreceipt_name"
            android:layout_centerVertical="true"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/add_contacts_clear_name_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:text="@string/iconfont_qingchu24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:textColorHint="@color/color_cccccc"
            android:gravity="center_vertical"
            android:id="@+id/add_contacts_name"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/add_contacts_hint_input_user_name"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/add_contacts_clear_name_iv"
            android:layout_toRightOf="@+id/add_contacts_name_text_tv"/>
    </RelativeLayout>
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_333333"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:text="@string/add_contacts_id_card_type_tetxt"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:gravity="center_vertical"
            android:id="@+id/add_contacts_id_type_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/add_contacts_id_type_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_333333"
            android:id="@+id/add_contacts_idcard_number_text_tv"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:text="@string/add_contacts_id_card_num_tetxt"
            android:layout_centerVertical="true"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/add_contacts_clear_idcard_number_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:text="@string/iconfont_qingchu24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/color_111111"
            android:textColorHint="@color/color_cccccc"
            android:gravity="center_vertical"
            android:id="@+id/add_contacts_idcard_number"
            android:background="@null"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/add_contacts_hint_input_id_card_number_second"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/add_contacts_clear_idcard_number_iv"
            android:layout_toRightOf="@+id/add_contacts_idcard_number_text_tv"/>
    </RelativeLayout>
    <View
        android:id="@+id/add_contacts_idcard_line"
        android:background="@color/color_EEEEEE"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <View
        android:id="@+id/add_nationality_line"
        android:background="@color/color_EEEEEE"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/add_nationality_div"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_333333"
            android:id="@+id/add_contacts_id_nationality_title"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:text="@string/add_contacts_id_nationality"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#cccccc"
            android:gravity="center_vertical"
            android:id="@+id/add_contacts_id_nationality_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请选择证件签发地"
            android:layout_weight="1"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_999999"
            android:id="@+id/add_contacts_id_nationality_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou24"/>
    </LinearLayout>
</LinearLayout>
