<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="54dp"
        android:textColor="@color/color_tpp_primary_invalid"
        android:layout_gravity="bottom|right"
        android:id="@+id/tv_coupon_status"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-8dp"
        android:layout_marginBottom="-8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/rl_coupon"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="66dp">
            <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                android:id="@+id/iv_icon"
                android:visibility="gone"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginRight="9dp"
                app:failureImage="@drawable/icon_ext_coupon_default"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_tpp_primary_main_title"
                    android:ellipsize="end"
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text=""
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.1"/>
                <com.taobao.movie.android.commonui.widget.TimerTextView
                    android:textSize="12dp"
                    android:textColor="@color/tpp_primary_red"
                    android:gravity="center"
                    android:id="@+id/tv_valid_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:includeFontPadding="false"/>
                <com.taobao.movie.android.app.seat.ui.weight.ExFlowLayout
                    android:id="@+id/layout_tag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:itemSpacing="3dp"
                    app:lineSpacing="6dp"
                    app:max_lines="2"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:clipChildren="false"
                android:layout_width="95dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:id="@+id/ll_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_above="@+id/tv_price_limit"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/tpp_primary_red"
                        android:id="@+id/tv_price_pre"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/tpp_primary_red"
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/tpp_primary_red"
                        android:id="@+id/tv_price_suf"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="折"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/iv_price"
                    android:visibility="gone"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/tpp_gray_3"
                    android:ellipsize="end"
                    android:id="@+id/tv_price_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:lines="1"
                    android:includeFontPadding="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout_action"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:alignItems="center"
            app:flexDirection="row">
            <com.taobao.movie.android.commonui.widget.IconFontTextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:includeFontPadding="false"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_flexShrink="0"
                app:layout_maxWidth="175dp">
                <TextView
                    android:textSize="@dimen/text_size_10_dp"
                    android:textColor="@color/member_main_title"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_vip_desc"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_4"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_coin"
                    android:visibility="gone"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_member_coin"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="@dimen/text_size_11_dp"
                    android:textColor="@color/member_main_title"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_reward"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_3"/>
                <com.taobao.movie.android.commonui.widget.MoCardTextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_action"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:maxWidth="75dp"
                    android:minWidth="54dp"
                    android:text="@string/discount_button_coupon_use"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/padding_8dp"
                    android:paddingEnd="@dimen/padding_8dp"
                    android:layout_marginStart="@dimen/margin_6"
                    app:mocard_background_radius="15dp"
                    app:mocard_stroke_color="@color/tpp_primary_red"
                    app:mocard_stroke_width="0.5dp"/>
                <com.taobao.movie.android.commonui.widget.IconFontTextView
                    android:textSize="17.5dp"
                    android:textColor="@color/color_tpp_primary_gray_c8"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/selector_item_check"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_font_selected_no"/>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
    <TextView
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#fec9a3"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/tv_corner_desc"
        android:background="@drawable/product_coupon_max_card_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:includeFontPadding="false"/>
    <View
        android:id="@+id/mask_invalid"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.taobao.movie.android.app.ui.coupon.CouponHorizontalDividerLine
        android:layout_gravity="bottom"
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="37dp"
        app:circle_color="@color/tpp_gray_6"
        app:dash_color="@color/tpp_gray_5"
        app:dash_width="2dp"
        app:radius="5dp"/>
</merge>
