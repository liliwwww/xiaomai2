<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:background="#fafafa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#898989"
                android:gravity="center"
                android:id="@+id/amap_map3d_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="北京市"/>
            <LinearLayout
                android:background="@drawable/amap_map3d_divider_vertical_bright_opaque"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:textColor="#4c90f9"
                android:gravity="center"
                android:id="@+id/amap_map3d_dialog_status"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="暂停"
                android:layout_below="@+id/amap_map3d_dialog_title"/>
            <LinearLayout
                android:background="@drawable/amap_map3d_divider_vertical_bright_opaque"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:textColor="#ff0000"
                android:gravity="center"
                android:id="@+id/amap_map3d_dialog_delete"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="取消下载"
                android:layout_below="@+id/amap_map3d_dialog_status"/>
            <TextView
                android:textColor="#000000"
                android:gravity="center"
                android:id="@+id/amap_map3d_dialog_cancle"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="9dp"
                android:text="取消"
                android:layout_below="@+id/amap_map3d_dialog_status"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
