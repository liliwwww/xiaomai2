<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/brandip_top_item_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp">
        <cn.damai.uikit.view.DMPosterView
            android:id="@+id/brandip_top_item_image"
            android:background="@drawable/bg_border_corner_1a0_6"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/uikit_default_image_bg_gradient"
            app:borderRadius="6dp"
            app:type="radial"/>
        <View
            android:id="@+id/brandip_top_item_image1"
            android:background="@drawable/item_top_bg_first"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentEnd="true"/>
        <View
            android:id="@+id/brandip_top_item_image2"
            android:background="@drawable/item_top_bg_second"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_000000"
        android:ellipsize="end"
        android:id="@+id/brandip_top_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="9dp"
        android:text="剧目名称"
        android:maxLines="1"
        android:minLines="1"
        android:layout_below="@+id/brandip_top_item_parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/share_page_user_grade_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/brandip_top_item_title">
        <cn.damai.uikit.view.ScoreStarViewV2
            android:id="@+id/brandip_grade_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:gravity="center"
            android:id="@+id/brandip_grade_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.0"/>
    </LinearLayout>
</RelativeLayout>
