<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_pay_info"
    android:paddingTop="@dimen/margin_3dp"
    android:paddingBottom="@dimen/margin_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:id="@+id/ll_show_all"
        android:paddingLeft="@dimen/margin_21dp"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/margin_21dp"
        android:paddingBottom="@dimen/margin_6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#30aeff"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_pay_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其它支付方式"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_14dp"
            android:textColor="@color/color_000000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:layout_marginTop="1dp"
            android:text="@string/iconfont_shaixuanxia12"/>
    </LinearLayout>
</LinearLayout>
