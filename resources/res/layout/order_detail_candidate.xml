<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/margin_15dp"
    android:paddingEnd="@dimen/margin_15dp">
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_waiting_end_time"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/bricks_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/candidate_waiting_end_time"
            android:includeFontPadding="false"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#50b3f0"
            android:id="@+id/time_change_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_tishi_"
            android:paddingStart="@dimen/margin_6dp"
            android:paddingEnd="2dp"/>
        <TextView
            android:textSize="@dimen/margin_11dp"
            android:textColor="#50b3f0"
            android:id="@+id/time_change_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/candidate_time_change"
            android:layout_weight="1"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="@color/bricks_000000"
            android:id="@+id/tv_waiting_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/bricks_666666"
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/candidate_price"
            android:includeFontPadding="false"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="@color/bricks_000000"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <View
        android:background="@color/color_EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_quantity"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/bricks_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/candidate_quantity"
            android:includeFontPadding="false"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="12dp"
            android:textColor="@color/bricks_000000"
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2å¼ "
            android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>
