<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_schedule_lottery_dialog"
            android:layout_width="270dp"
            android:layout_height="365dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="30dp"
                    android:textColor="@color/fd715b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="¥"/>
                <TextView
                    android:textSize="66dp"
                    android:textStyle="bold"
                    android:textColor="@color/fd715b"
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/fd715b"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_below="@+id/ll_amount"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="1dp"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/ll_initial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/tv_hint"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_multiple_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/lottery_draw_dialog_prompt"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_draw_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:alpha="0.8"/>
                <FrameLayout
                    android:id="@+id/fl_draw_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_draw_btn"
                        android:background="@drawable/bg_lottery_draw_btn"
                        android:layout_width="200dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="6.5dp">
                        <TextView
                            android:textSize="12dp"
                            android:textColor="#895a00"
                            android:id="@+id/tv_draw_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拼手气翻倍"/>
                        <TextView
                            android:textSize="10dp"
                            android:textColor="#a0721e"
                            android:id="@+id/tv_happy_coin_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="9dp"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:id="@+id/tv_discount_hint_label"
                        android:background="@drawable/bg_lottery_draw_discount_label"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_marginRight="18dp"/>
                </FrameLayout>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#fee4bd"
                    android:gravity="center"
                    android:id="@+id/tv_exchange_btn"
                    android:background="@drawable/bg_lottery_exchange_btn"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:text="直接领取"/>
                <ProgressBar
                    android:id="@+id/progress_loading"
                    android:visibility="gone"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="30dp"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateTint="#fec16a"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_win"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_below="@+id/tv_hint"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="成功翻倍！"/>
                <TextView
                    android:textSize="40dp"
                    android:textColor="#fee4bd"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:id="@+id/tv_multiple_times"
                    android:background="@drawable/bg_lottery_win"
                    android:layout_width="234dp"
                    android:layout_height="130dp"/>
            </FrameLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/ll_lose"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_below="@+id/tv_hint"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="翻倍失败"/>
                <TextView
                    android:textSize="20dp"
                    android:textColor="#fee4bd"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="下次运气会更好！"/>
            </LinearLayout>
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/iv_ribbons"
                android:layout_width="265dp"
                android:layout_height="365dp"
                android:layout_marginTop="100dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/iv_lottery_close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_dialog_close"
            android:scaleType="centerInside"/>
    </LinearLayout>
</FrameLayout>
