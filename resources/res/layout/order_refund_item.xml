<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/iv_line"
            android:background="#dddddd"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_trace_flow_icon"
            android:background="@drawable/refund_greendot_pic_3x"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_trace_info"
            android:paddingTop="17dp"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/main_text_b"
                android:id="@+id/tv_trace_detail"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                style="@style/wrap"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/main_text_b"
                android:id="@+id/tv_time"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                style="@style/wrap"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_line"
            android:background="@color/line_color_e5"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
