<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/oscar_cinema_search_background"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_search_bar"/>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/search_history_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text_size_13_dp"
                android:textColor="@color/common_text_color11"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:text="搜索记录"
                android:layout_centerVertical="true"/>
            <View
                android:layout_marginLeft="15dp"
                style="@style/ListItemBorder"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/search_history"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="15dp"
                style="@style/ListItemBorder"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/clear_search_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp">
                <com.taobao.movie.android.commonui.widget.MIconfontTextView
                    android:textSize="@dimen/text_size_13_dp"
                    android:textColor="@color/common_text_color11"
                    android:id="@+id/left_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconf_delete_comment"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="@dimen/text_size_13_dp"
                    android:textColor="@color/common_text_color11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="清除搜索记录"
                    android:layout_toRightOf="@+id/left_icon"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View style="@style/ListItemBorder"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
