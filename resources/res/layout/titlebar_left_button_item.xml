<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="@drawable/icon_bg_title_button_alpha_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="@dimen/title_bar_icon_size"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/titlebar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.alipay.mobile.mpass.badge.ui.BadgeView
        android:layout_gravity="top|right"
        android:id="@+id/badge_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"/>
</FrameLayout>
