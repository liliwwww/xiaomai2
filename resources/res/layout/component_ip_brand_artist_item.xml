<?xml version="1.0" encoding="utf-8"?>
<cn.damai.baseview.RCRelativeLayoutView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:id="@+id/ip_brand_artist_layout"
    android:layout_width="98dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_9dp"
    app:round_corner="@dimen/margin_6dp">
    <cn.damai.uikit.view.DMPosterView
        android:id="@+id/drama_image"
        android:layout_width="98dp"
        android:layout_height="120dp"
        android:src="@drawable/bg_music_cardbg_0"/>
    <cn.damai.uikit.view.DMAvatar
        android:id="@+id/ip_brand_artist_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:avatarSize="size_50x50"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_333333"
        android:ellipsize="end"
        android:id="@+id/ip_brand_artist_name"
        android:paddingLeft="@dimen/margin_4dp"
        android:paddingRight="@dimen/margin_4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:lines="1"
        android:layout_below="@+id/ip_brand_artist_avatar"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_999999"
        android:ellipsize="end"
        android:id="@+id/ip_brand_artist_fancount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lines="1"
        android:layout_below="@+id/ip_brand_artist_name"
        android:layout_centerHorizontal="true"/>
</cn.damai.baseview.RCRelativeLayoutView>
