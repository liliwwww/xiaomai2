<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:id="@+id/day"
        android:paddingLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:includeFontPadding="false"/>
    <com.taobao.movie.android.commonui.widget.RoundedTextView
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tag_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginLeft="4dp"
        android:text="点映"
        android:singleLine="true"
        app:background_color="@color/common_color_1049"
        app:padding_horizontal="3"
        app:padding_vertical="0"
        app:round_radius="4"
        app:round_type="fill"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:gravity="center_vertical"
        android:id="@+id/special_tag_view"
        android:visibility="gone"
        android:layout_width="34dp"
        android:layout_height="11dp"
        android:layout_marginLeft="4dp"
        android:text="特殊场"
        app:roundedCornerRadius="3dp"/>
</merge>
