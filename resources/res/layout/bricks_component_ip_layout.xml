<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ip_brand_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="89dp">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/ip_brand_left_layout"
            android:paddingRight="@dimen/margin_9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/drama_image_layout"
                android:layout_width="72dp"
                android:layout_height="84dp"
                android:layout_marginTop="@dimen/margin_9dp"
                android:layout_marginBottom="@dimen/margin_9dp"
                android:layout_centerVertical="true">
                <View
                    android:layout_gravity="center"
                    android:background="@drawable/bricks_homepage_rank_top_bg_second"
                    android:layout_width="9dp"
                    android:layout_height="66dp"/>
                <View
                    android:layout_gravity="center"
                    android:background="@drawable/bricks_homepage_rank_top_bg_first"
                    android:layout_width="4dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="@dimen/margin_4dp"/>
                <com.alibaba.pictures.bricks.view.DMPosterView
                    android:layout_gravity="left"
                    android:id="@+id/drama_image"
                    android:layout_width="63dp"
                    android:layout_height="84dp"
                    android:src="@drawable/bricks_uikit_default_image_bg_gradient"/>
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/ip_music_brand_avatar_layout"
                android:background="@drawable/bricks_bg_artist_avatar"
                android:layout_width="@dimen/resource_size_63"
                android:layout_height="@dimen/resource_size_63"
                android:layout_centerVertical="true">
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/bricks_bg_circle_white"
                    android:layout_width="@dimen/resource_size_57"
                    android:layout_height="@dimen/resource_size_57">
                    <com.alibaba.pictures.bricks.view.RoundRadiusImageView
                        android:layout_gravity="center"
                        android:id="@+id/ip_music_avatar_avatar"
                        android:layout_width="@dimen/resource_size_53"
                        android:layout_height="@dimen/resource_size_53"
                        android:scaleType="centerCrop"
                        app:r_round_radius="@dimen/resource_size_53"/>
                </FrameLayout>
                <ImageView
                    android:layout_gravity="bottom|right"
                    android:id="@+id/vip_tag"
                    android:layout_width="@dimen/resource_size_16"
                    android:layout_height="@dimen/resource_size_16"
                    android:layout_marginBottom="@dimen/resource_size_5"
                    android:src="@drawable/bricks_user_v_tag"
                    android:layout_marginEnd="@dimen/resource_size_5"/>
            </FrameLayout>
        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:id="@+id/ip_brand_center_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_9dp"
            android:layout_weight="1">
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.alibaba.pictures.bricks.view.FakeBoldTextView
                    android:textSize="@dimen/project_headline1"
                    android:textColor="@color/bricks_2e333e"
                    android:ellipsize="end"
                    android:id="@+id/ip_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    app:layout_flexShrink="1"/>
                <ImageView
                    android:id="@+id/ip_brand_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:src="@drawable/bricks_brand_icon"
                    app:layout_flexShrink="0"/>
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:textSize="@dimen/secondry_auxiliary_text"
                android:textColor="@color/bricks_5f6672"
                android:ellipsize="end"
                android:id="@+id/ip_brand_fans_and_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:lines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_title"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/tpp_remark"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                app:layout_constraintLeft_toRightOf="@+id/ip_brand_fans_and_show"
                app:layout_constraintTop_toBottomOf="@+id/layout_title">
                <View
                    android:id="@+id/tpp_remark_divider"
                    android:background="#e9ebef"
                    android:layout_width="1px"
                    android:layout_height="12dp"
                    android:layout_marginRight="6dp"/>
                <TextView
                    android:textSize="@dimen/secondry_auxiliary_text"
                    android:textColor="@color/bricks_5f6672"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分"/>
                <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
                    android:textSize="14dp"
                    android:textColor="@color/cb_orange"
                    android:id="@+id/ip_brand_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.5dp"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="ip_brand_fans_and_show , tpp_remark , layout_title"/>
            <TextView
                android:textSize="@dimen/secondry_auxiliary_text"
                android:textColor="@color/bricks_5f6672"
                android:ellipsize="end"
                android:id="@+id/show_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6dp"
                android:lines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="#ff1268"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/ip_brand_right_layout_page"
            android:background="@drawable/bricks_btn_artist_goto_home"
            android:layout_width="54dp"
            android:layout_height="27dp"
            android:text="去主页"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/ip_brand_right_layout_score"
            android:background="@drawable/bricks_brand_score_ff993a_6_bg"
            android:layout_width="67dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="58dp"
                android:layout_height="@dimen/margin_13dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/bricks_damai_score_black_icon"/>
            <com.alibaba.pictures.bricks.view.BricksCommonDigitTextView
                android:textSize="27dp"
                android:textColor="@color/color_score_font"
                android:id="@+id/ip_brand_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.alibaba.pictures.bricks.view.ScoreStarViewV2
                android:id="@+id/ip_brand_score_star_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_6dp"
                app:star_height="@dimen/margin_7dp"
                app:star_width="@dimen/margin_7dp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ip_brand_artist"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_city_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        app:layoutManager="GridLayoutManager"
        app:spanCount="4"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/tour_more_info"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="39dp">
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="#959aa5"
            android:id="@+id/tour_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="@dimen/margin_8dp"
            android:textColor="#959aa5"
            android:gravity="center"
            android:id="@+id/tour_more_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:text="@string/iconfont_ticket_rightarrows"/>
    </LinearLayout>
    <include
        android:id="@+id/item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        layout="@layout/bricks_item_ededed_line"/>
</LinearLayout>
