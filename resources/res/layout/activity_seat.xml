<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/title_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar_space">
        <include
            android:id="@+id/header_layout"
            layout="@layout/header_seat_page"/>
        <FrameLayout
            android:id="@+id/seat_view_container"
            android:background="#f6f7f8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_below="@+id/header_layout"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_alignTop="@+id/seat_view_container"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/layout_vr_thumb"
                android:paddingTop="@dimen/margin_12dp"
                android:visibility="gone"
                android:layout_width="124dp"
                android:layout_height="104dp">
                <ImageView
                    android:id="@+id/iv_vr_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_border_corner_6_solid_f5f5f5"
                    android:scaleType="centerCrop"/>
                <View
                    android:id="@+id/iv_vr_thumb_mask"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="@string/seat_vr_entrance_tip"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/zw_back_2_venue_tv"
                android:background="@drawable/bg_gray_corner_back"
                android:visibility="gone"
                android:layout_width="124dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="@dimen/textsize_12"
                    android:textColor="@color/white"
                    android:id="@+id/zw_back_2_venue_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4dp"
                    android:text="@string/iconfont_huidaoquanju"/>
                <TextView
                    android:textSize="@dimen/textsize_12"
                    android:textColor="@color/white"
                    android:id="@+id/zw_back_2_venue_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回到全局"/>
            </LinearLayout>
        </LinearLayout>
        <include
            android:id="@+id/seat_jpg_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            layout="@layout/seat_select_bottom_bar"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true">
        <ViewStub
            android:id="@+id/diff_row_tip_stub"
            android:layout="@layout/seat_ui_diff_row_tip_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
        <ViewStub
            android:id="@+id/seat_promotion_tip_stub"
            android:layout="@layout/seat_promotion_tip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <cn.damai.seat.view.BgFrameLayout
            android:id="@+id/seat_select_container"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/seat_selected_info_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/seat_selected_info_bottomlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_gravity="top"
                        android:id="@+id/seat_selected_info_arrow"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/seat_selected_horizontal_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </cn.damai.seat.view.BgFrameLayout>
    </LinearLayout>
    <ViewStub
        android:id="@+id/seat_selected_list_layer_stub"
        android:layout="@layout/seat_ui_select_seat_layer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"/>
    <ViewStub
        android:id="@+id/seat_selected_list_new_layer_stub"
        android:layout="@layout/seat_ui_select_seat_layer_v2_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"/>
    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/title_bar_space"/>
    <FrameLayout
        android:id="@+id/promotion_container"
        android:background="#99000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/loading_layer_stub"
        android:visibility="gone"
        android:layout="@layout/seat_ui_loading_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/color_FF2D79"
        android:id="@+id/seat_test"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="150dp"
        android:text="New3"/>
</RelativeLayout>
