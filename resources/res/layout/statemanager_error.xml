<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?attr/statemanager_view_style">
    <View
        android:id="@+id/statemanager_top_holder"
        android:layout_width="match_parent"
        android:layout_height="105dp"/>
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="21dp">
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/statemanager_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            style="?attr/statemanager_image_style"/>
    </FrameLayout>
    <TextView
        android:id="@+id/statemanager_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/statemanager_hint_style"/>
    <TextView
        android:id="@+id/statemanager_subhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/statemanager_subhint_style"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/statemanager_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            style="?attr/statemanager_button_style"/>
        <Button
            android:id="@+id/statemanager_right_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            style="?attr/statemanager_button_style"/>
    </LinearLayout>
</LinearLayout>
