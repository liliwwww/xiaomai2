<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.player.DMVideoPlayer
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#666666"
        android:id="@+id/sourcelabel_txt"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="18dp"
        android:text="来自淘宝"
        android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:id="@+id/video_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_21dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/margin_21dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@+id/sourcelabel_txt"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
