<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/article_head"
        android:background="@color/tpp_gray_6"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/article_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="18dp"
            android:layout_weight="1">
            <TextView
                android:textSize="17dp"
                android:textColor="@color/common_text_color45"
                android:ellipsize="end"
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:maxLines="3"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/article_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/common_color_1006"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/read_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/common_color_1006"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/article_image_container"
            android:background="@color/common_text_color14"
            android:layout_width="130dp"
            android:layout_height="97.5dp">
            <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                android:id="@+id/article_image"
                android:background="@color/common_text_color14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="centerCrop"
                fresco:fadeDuration="0"
                fresco:placeholderImage="@drawable/oscar_default_image"
                fresco:placeholderImageScaleType="fitXY"/>
            <View
                android:id="@+id/article_video_indicate_bg"
                android:background="@drawable/article_video_indicate_bg"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_alignParentBottom="true"/>
            <com.taobao.movie.android.commonui.widget.MIconfontTextView
                android:textSize="18dp"
                android:textColor="@color/white"
                android:id="@+id/article_video_indicate"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/iconf_video"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_tag_view_radius_fg"
                android:scaleType="fitXY"/>
        </RelativeLayout>
    </LinearLayout>
    <include
        android:id="@+id/article_share_menu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        layout="@layout/oscar_article_favor_menu"/>
    <View
        android:id="@+id/item_bottom_line"
        android:background="#e2e2e2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"
        android:layout_marginLeft="15dp"/>
</LinearLayout>
