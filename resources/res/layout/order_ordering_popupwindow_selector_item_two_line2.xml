<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/list_selector"
        style="@style/CommonListItemContainerWhite">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="21dp"
            android:textColor="@color/color_tpp_primary_gray_c8"
            android:gravity="center"
            android:id="@+id/ordering_selector_item_check"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="@string/iconf_selected_no"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/ordering_selector_item_title"
            android:layout_width="match_parent"
            android:text=""
            android:layout_toLeftOf="@+id/ordering_selector_item_check"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/CommonListItemTitle"/>
        <TextView
            android:id="@+id/ordering_selector_item_sub_desc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text=""
            android:layout_toLeftOf="@+id/ordering_selector_item_check"
            android:layout_below="@+id/ordering_selector_item_title"
            android:layout_alignParentLeft="true"
            style="@style/CommonListItemText"/>
        <TextView
            android:id="@+id/ordering_selector_item_limitdesc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:singleLine="false"
            android:layout_toLeftOf="@+id/ordering_selector_item_check"
            android:layout_below="@+id/ordering_selector_item_sub_desc"
            android:layout_alignParentLeft="true"
            style="@style/CommonListItemText"/>
        <TextView
            android:id="@+id/ordering_selector_item_desc"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:text="@string/ordering_selector_block_presalecode_desc"
            android:layout_toLeftOf="@+id/ordering_selector_item_check"
            android:layout_below="@+id/ordering_selector_item_limitdesc"
            android:layout_alignParentLeft="true"
            style="@style/CommonListItemText"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="10dp"
            android:id="@+id/ordering_selector_item_sub_desc_disable"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:text=""
            android:layout_toLeftOf="@+id/ordering_selector_item_check"
            android:layout_below="@+id/ordering_selector_item_desc"
            android:layout_alignParentLeft="true"
            style="@style/CommonListItemText"/>
    </RelativeLayout>
    <View style="@style/ListItemBorderWithMarginDp"/>
</LinearLayout>
