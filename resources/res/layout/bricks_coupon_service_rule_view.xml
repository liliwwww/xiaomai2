<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bricks_shape_rect_corners_6_solid_ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="16dp"
            android:textColor="@color/bricks_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购券服务"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/id_bricks_csr_rule_flex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            app:flexDirection="row_reverse"
            app:flexWrap="wrap"/>
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/bricks_icon_right_black_arrow"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>
