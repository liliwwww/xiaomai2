<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content"
            android:background="@drawable/oscar_cinema_list_schedule_selector"
            android:paddingBottom="8dp"
            android:layout_width="104dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/fl_bogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="2.5dp">
                <TextView
                    android:textSize="@dimen/text_size_8_dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/schedule_tag"
                    android:background="@drawable/cinema_fast_schedule_tag_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="@dimen/text_size_8_dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/show_bogo"
                    android:background="@drawable/cinema_fast_schedule_tag_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:text="会员买一赠一"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
            </FrameLayout>
            <LinearLayout
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:id="@+id/time_contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp">
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_tpp_primary_title"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="3dp">
                <TextView
                    android:textSize="10dp"
                    android:textColor="#148aff"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/show_tomorrow"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="次日"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/color_tpp_primary_title"
                    android:id="@+id/hall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp">
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:id="@+id/price_icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:ellipsize="end"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:id="@+id/seat"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满座"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/deduction_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
        <com.alibaba.pictures.moimage.MoImageView
            android:layout_gravity="end"
            android:id="@+id/special_schedule_tag"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:roundBottomLeft="true"
            app:roundBottomRight="false"
            app:roundTopLeft="false"
            app:roundTopRight="true"
            app:roundedCornerRadius="6dp"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:layout_gravity="center"
            android:id="@+id/more_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"/>
    </FrameLayout>
    <View
        android:background="@color/transparent"
        android:layout_width="@dimen/padding_6"
        android:layout_height="match_parent"/>
</LinearLayout>
