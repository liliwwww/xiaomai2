<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_tpp_primary_white"
    android:paddingTop="21dp"
    android:paddingBottom="21dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/drawn_container"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.taobao.movie.android.commonui.widget.MoCardTextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:gravity="center"
            android:id="@+id/back_btn"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/margin_15"
            android:text="返回首页"
            app:mocard_background_radius="40dp"
            app:mocard_stroke_color="@color/color_tpp_primary_assist"
            app:mocard_stroke_width="1px"/>
        <com.taobao.movie.android.commonui.widget.MoCardTextView
            android:textSize="14dp"
            android:textColor="@color/color_tpp_primary_white"
            android:gravity="center"
            android:id="@+id/drawn_btn"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:text="@string/ordering_result_success_drawn_btn"
            app:mocard_background_radius="40dp"
            app:mocard_linear_gradient_end="@color/tpp_gradient_red_end"
            app:mocard_linear_gradient_start="@color/tpp_gradient_red_start"/>
    </LinearLayout>
</LinearLayout>
