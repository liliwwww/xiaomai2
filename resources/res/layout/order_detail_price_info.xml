<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:id="@+id/tv_project_price_layout"
    android:paddingTop="@dimen/margin_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_999999"
        android:id="@+id/tv_project_price_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/tv_project_price_icon"
        android:visibility="gone"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="@dimen/margin_6dp"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_999999"
        android:gravity="right"
        android:id="@+id/tv_project_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_weight="1"/>
</LinearLayout>
