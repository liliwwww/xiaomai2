<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:riv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/project_image_common_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <cn.damai.uikit.view.RoundImageView
        android:id="@+id/image_video"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:src="@drawable/uikit_default_image_bg_grey"
        android:scaleType="fitXY"
        riv:borderRadius="0dp"
        riv:type="radial"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/icon_video"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/category_star_video_icon"/>
</FrameLayout>
