<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <TextView
        android:textSize="13dp"
        android:textColor="@color/color_tpp_primary_main_title"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/subtitle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_coupon_first_subtitle"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="13dp"
            android:textColor="@color/common_color_1006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_right_arrow"/>
    </LinearLayout>
</FrameLayout>
