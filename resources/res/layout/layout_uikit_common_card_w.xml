<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/brand_banner"
    android:background="@drawable/common_coupon_bg"
    android:paddingTop="0dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/common_card_top_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:text="¥"
            android:layout_alignBottom="@+id/common_card_top_value"
            android:layout_alignParentLeft="true"/>
        <cn.damai.uikit.number.DMDigitTextView
            android:textSize="26dp"
            android:textColor="@color/black"
            android:id="@+id/common_card_top_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/common_card_top_flag"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black"
            android:id="@+id/common_card_desc_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:maxLength="12"
            android:layout_below="@+id/common_card_top_flag"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#9c9ca5"
            android:ellipsize="end"
            android:gravity="left"
            android:id="@+id/common_card_top_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:lines="1"
            android:maxLength="9"
            android:layout_toLeftOf="@+id/item_header_coupon_wantparent"
            android:layout_toRightOf="@+id/common_card_top_value"
            android:layout_alignBottom="@+id/common_card_top_value"/>
        <FrameLayout
            android:id="@+id/item_header_coupon_wantparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/item_header_coupon_want"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <cn.damai.uikit.iconfont.DMIconFontTextView
                    android:textSize="10dp"
                    android:textColor="@color/color_cccccc"
                    android:paddingRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iconfont_xiangmutixing32"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/color_cccccc"
                    android:id="@+id/common_card_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:text="已领取"/>
            </LinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/item_header_coupon_got"
                android:background="@drawable/common_coupon_btn_bg"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_4dp"/>
        </FrameLayout>
    </RelativeLayout>
    <View
        android:id="@+id/common_top_space"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>
