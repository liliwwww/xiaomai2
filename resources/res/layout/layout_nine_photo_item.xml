<?xml version="1.0" encoding="utf-8"?>
<cn.damai.baseview.RCRelativeLayoutView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:round_corner="6dp"
    app:stroke_color="@color/color_F5F5F5"
    app:stroke_width="0.5dp">
    <cn.damai.issue.view.DMImageView
        android:id="@+id/iv_item_nine_photo_photo"
        android:background="@drawable/add_photo_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:dm_iv_cornerRadius="6dp"
        app:dm_iv_isSquare="true"/>
    <ImageView
        android:id="@+id/iv_item_nine_video_flag"
        android:visibility="gone"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:src="@drawable/yk_player_bofang_btn"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/issue_update_cover"
        android:background="@color/color_000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_21dp"
        android:text="@string/issue_update_video_cover"
        android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/issue_progress"
        android:background="#26000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/iv_item_nine_photo_photo"
        android:layout_alignBottom="@+id/iv_item_nine_photo_photo">
        <View
            android:layout_gravity="bottom"
            android:id="@+id/issue_progress_bg"
            android:background="#cc000000"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:textSize="@dimen/margin_12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/issue_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%\10上传中"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_item_nine_photo_flag"
        android:padding="3dp"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/bga_pp_ic_delete"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/add_photo_layout"
        android:background="@drawable/issue_add_image_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/iv_item_nine_photo_photo"
        android:layout_alignBottom="@+id/iv_item_nine_photo_photo">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_24dp"
            android:textColor="#3c3f44"
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_17dp"
            android:text="@string/iconfont_fabu_tupian_34"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/add_image_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/add_image"
            android:layout_below="@+id/add_image"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/add_video_layout"
        android:background="@drawable/issue_add_image_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/iv_item_nine_photo_photo"
        android:layout_alignBottom="@+id/iv_item_nine_photo_photo">
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="@dimen/margin_24dp"
            android:textColor="#3c3f44"
            android:id="@+id/add_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_17dp"
            android:text="@string/iconfont_fabu_shipin_34"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:id="@+id/add_video_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/issue_add_video"
            android:layout_below="@+id/add_video"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</cn.damai.baseview.RCRelativeLayoutView>
