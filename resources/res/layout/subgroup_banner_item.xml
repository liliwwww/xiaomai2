<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layout_left"
        android:visibility="gone"
        android:layout_width="15dp"
        android:layout_height="match_parent"/>
    <cn.damai.uikit.shadowlayout.DMShadowLayout
        android:id="@+id/layout_galley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_dx="0dp"
        app:sl_dy="5dp"
        app:sl_shadowColor="#0e000000"
        app:sl_shadowRadius="6dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/subgroup_banner_bg"
            android:layout_width="152dp"
            android:layout_height="144dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="86dp">
                <cn.damai.baseview.RCRelativeLayoutView
                    android:layout_gravity="top"
                    android:layout_width="152dp"
                    android:layout_height="86dp"
                    app:clip_background="true"
                    app:round_corner_top_left="6dp"
                    app:round_corner_top_right="6dp">
                    <ImageView
                        android:id="@+id/image_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </cn.damai.baseview.RCRelativeLayoutView>
                <cn.damai.baseview.RCRelativeLayoutView
                    android:id="@+id/image_item_bg"
                    android:visibility="gone"
                    android:layout_width="152dp"
                    android:layout_height="86dp"
                    app:clip_background="true"
                    app:round_corner_top_left="6dp"
                    app:round_corner_top_right="6dp"/>
                <cn.damai.uikit.view.DMPosterView
                    android:layout_gravity="center"
                    android:id="@+id/poster_rank"
                    android:visibility="gone"
                    android:layout_width="56dp"
                    android:layout_height="74dp"/>
            </FrameLayout>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:id="@+id/tv_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#9c9ca5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/tv_desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="6dp"
                android:singleLine="true"/>
        </LinearLayout>
    </cn.damai.uikit.shadowlayout.DMShadowLayout>
    <View
        android:id="@+id/layout_right"
        android:visibility="gone"
        android:layout_width="15dp"
        android:layout_height="match_parent"/>
</LinearLayout>
