<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/my_benefit_youku_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:fadeDuration="@integer/default_enter_duration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCornerRadius="9dp"/>
    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#7a2638"
        android:ellipsize="end"
        android:id="@+id/my_benefit_youku_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/my_benefit_youku_des"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/my_benefit_youku_actionbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#7a2638"
        android:ellipsize="end"
        android:id="@+id/my_benefit_youku_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/my_benefit_youku_actionbtn"
        app:layout_constraintTop_toBottomOf="@+id/my_benefit_youku_title"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/my_benefit_youku_actionbtn"
        android:background="@drawable/common_red_small_btn_7_3"
        android:layout_width="78dp"
        android:layout_height="24dp"
        android:layout_marginRight="12dp"
        android:text="免费领取"
        app:layout_constraintBottom_toTopOf="@+id/my_benefit_youku_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.taobao.movie.android.commonui.widget.TimerTextView
        android:textSize="10dp"
        android:textColor="@color/tpp_gradient_red_end"
        android:id="@+id/my_benefit_youku_timer"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/my_benefit_youku_actionbtn"
        app:layout_constraintRight_toRightOf="@+id/my_benefit_youku_actionbtn"
        app:layout_constraintTop_toBottomOf="@+id/my_benefit_youku_actionbtn"
        app:layout_constraintVertical_chainStyle="packed"/>
</merge>
