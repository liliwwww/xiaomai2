<?xml version="1.0" encoding="utf-8"?>
<cn.damai.commonbusiness.share.view.ShareBoardItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/share_item_bg"
        android:layout_width="52dp"
        android:layout_height="52dp">
        <com.alibaba.pictures.bricks.view.BricksIconFontTextView
            android:textSize="24dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/share_item_iconfont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/share_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/color_666666"
        android:ellipsize="end"
        android:id="@+id/share_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="删除"
        android:maxLines="1"/>
</cn.damai.commonbusiness.share.view.ShareBoardItemLayout>
