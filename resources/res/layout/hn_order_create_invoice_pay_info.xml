<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_invoice_pay_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hn_order_create_invoice_pay_type"
            style="@style/style_hn_order_invoice_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hn_order_create_invoice_pay_alipay"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            style="@style/style_hn_order_invoice_title_content"/>
        <ImageView
            android:id="@+id/iv_pay_type_alipay"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/trade_order_alipay"
            android:layout_below="@+id/tv_invoice_pay_type_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="30dp"
            android:text="@string/hn_order_create_invoice_pay_alipay"
            android:layout_toRightOf="@+id/iv_pay_type_alipay"
            android:layout_below="@+id/tv_invoice_pay_type_title"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/iv_pay_type_alipay"
            style="@style/style_hn_order_invoice_subtitle"/>
        <cn.damai.uikit.iconfont.DMIconFontTextView
            android:textSize="20dp"
            android:textColor="@color/main_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/iconfont_danxuanxuanzhong24"
            android:layout_below="@+id/tv_invoice_pay_type_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
