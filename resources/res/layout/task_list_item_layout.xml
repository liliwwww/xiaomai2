<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <TextView
        android:id="@+id/task_list_bg"
        android:background="@drawable/bg_user_task_dialog_item_corner"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.RoundImageView
        android:id="@+id/task_list_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_task_list"
        android:scaleType="centerCrop"
        android:layout_marginStart="12dp"
        app:borderRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_list_bg"
        app:layout_constraintLeft_toLeftOf="@+id/task_list_bg"
        app:layout_constraintTop_toTopOf="@+id/task_list_bg"
        app:type="radial"/>
    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#2e333e"
        android:ellipsize="end"
        android:id="@+id/task_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintLeft_toRightOf="@+id/task_list_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#959aa5"
        android:ellipsize="end"
        android:id="@+id/task_list_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintLeft_toRightOf="@+id/task_list_icon"
        app:layout_constraintTop_toBottomOf="@+id/task_list_title"/>
    <TextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#ff4886"
        android:gravity="center"
        android:id="@+id/task_list_button"
        android:background="@drawable/bg_marketing_position_card_button_corner_light"
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
