<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="51dp">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="13dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="16dp"
        android:textColor="@color/bricks_171717"
        android:ellipsize="end"
        android:id="@+id/title_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/bricks_171717"
        android:ellipsize="end"
        android:id="@+id/subTitle_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_9dp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_v2"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/right_icon_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:src="@drawable/icon_live_group_buy"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/icon_live_group_buy"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/group_buy_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="@dimen/margin_6dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/pic1"
                android:layout_width="29dp"
                android:layout_height="39dp"
                app:placeholderImage="@drawable/home_default_image_bg_gradient_pioneer"
                app:roundBottomLeft="true"
                app:roundTopLeft="true"
                app:roundedCornerRadius="6dp"/>
            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_width="30.5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-9dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/pic2"
                    android:layout_width="29dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="1.5dp"
                    app:placeholderImage="@drawable/home_default_image_bg_gradient_pioneer"
                    app:roundBottomLeft="true"
                    app:roundTopLeft="true"
                    app:roundedCornerRadius="6dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_width="30.5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-9dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/pic3"
                    android:layout_width="29dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="1.5dp"
                    app:placeholderImage="@drawable/home_default_image_bg_gradient_pioneer"
                    app:roundBottomLeft="true"
                    app:roundBottomRight="true"
                    app:roundTopLeft="true"
                    app:roundTopRight="true"
                    app:roundedCornerRadius="6dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:id="@+id/price_container"
            android:background="@drawable/bg_second_yellow_round"
            android:layout_width="match_parent"
            android:layout_height="18dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="6dp"
                    android:textColor="@color/bricks_171717"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¿¥"/>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="11dp"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                    android:textSize="7dp"
                    android:textColor="@color/bricks_171717"
                    android:id="@+id/price_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.legacy.widget.Space
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <TextView
                android:textSize="9dp"
                android:textColor="@color/bricks_171717"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/salse_tag"
                android:background="@drawable/bg_light_yellow_round"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginLeft="1.5dp"
                android:layout_marginRight="1.5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
