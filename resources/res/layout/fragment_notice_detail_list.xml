<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_null"
        android:background="@drawable/ncov_sku_bg"
        android:paddingTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:paddingLeft="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="#ff3d3d3d"
                android:id="@+id/fg_promotion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="演出变更提醒"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/desc_close"
                android:paddingLeft="20dp"
                android:paddingRight="21dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_guanbi12"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fg_notice_recycler"
            android:paddingBottom="18dp"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp"
            android:overScrollMode="never"/>
    </LinearLayout>
</LinearLayout>
