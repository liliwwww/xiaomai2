<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/innear_bg_ll"
    android:background="@drawable/bricks_common_rank_bg1"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/image_item3"
            android:background="@drawable/bricks_common_rank_step3_bg"
            android:layout_width="82dp"
            android:layout_height="69dp"/>
        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/bricks_image_item2"
            android:background="@drawable/bricks_common_rank_step2_bg"
            android:layout_width="76dp"
            android:layout_height="81dp"/>
        <com.alibaba.pictures.bricks.view.DMPosterView
            android:id="@+id/bricks_poster"
            android:layout_width="70dp"
            android:layout_height="93dp"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_weight="1">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="15dp"
            android:textColor="@color/color_000000"
            android:ellipsize="end"
            android:id="@+id/bricks_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_9C9CA5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/bricks_tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:singleLine="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">
            <TextView
                android:textSize="12dp"
                android:textColor="#ff993a"
                android:ellipsize="end"
                android:id="@+id/bricks_tv_see_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9C9CA5"
                android:ellipsize="end"
                android:id="@+id/bricks_tv_project_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@+id/bricks_tv_see_people_num"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/bricks_btn_go"
                android:background="@drawable/bricks_common_rank_btn_bg"
                android:layout_width="54dp"
                android:layout_height="25dp"
                android:text="去看看"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
