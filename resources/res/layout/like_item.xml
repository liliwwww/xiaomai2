<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_grey_ec_corner_3"
        android:padding="1px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/main_hot_item_llyt"
            android:background="#f2f2f2"
            android:layout_width="110dp"
            android:layout_height="143dp">
            <ImageView
                android:layout_gravity="center"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/damai_imagebg"
                android:scaleType="centerInside"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/main_hot_recommand_item_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/text_color_33"
            android:ellipsize="end"
            android:layout_gravity="left"
            android:id="@+id/main_hot_recommand_item_name_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="6dp"
            android:lines="2"
            android:minLines="2"
            android:lineSpacingExtra="1dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="@color/local_recommand_title"
            android:ellipsize="end"
            android:layout_gravity="left"
            android:id="@+id/main_hot_recommand_item_time_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="6dp"
            android:maxLines="1"/>
    </LinearLayout>
    <View
        android:layout_width="4dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
