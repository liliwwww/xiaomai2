<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/bg_border_corner_white_9"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp">
    <com.alibaba.pictures.moimage.MoImageView
        android:id="@+id/project_brand_info_brand_icon"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/bricks_default_image_bg_gradient"
        app:placeholderImage="@drawable/bricks_default_image_bg_gradient"
        app:roundedCornerRadius="6dp"
        app:roundingBorderColor="@color/color_bricks_primary_10_black"
        app:roundingBorderWidth="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/project_brand_info_content_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="14dp"
                android:textColor="@color/color_bricks_primary_main_title"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/project_brand_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/project_brand_info_icon"
                android:layout_width="31dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/channel_brand_tag_icon"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:id="@+id/project_brand_info_fans_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.alibaba.pictures.bricks.view.DigitTextView
                android:textSize="14dp"
                android:textColor="#69717c"
                android:id="@+id/project_brand_info_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"/>
            <com.alibaba.pictures.bricks.view.FakeBoldTextView
                android:textSize="12dp"
                android:textColor="#69717c"
                android:id="@+id/project_brand_info_fans_num_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#69717c"
                android:gravity="center"
                android:id="@+id/project_brand_info_fans_num_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/project_brand_info_btn_block"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/project_brand_info_btn"
            android:background="@drawable/bg_btn_solid_primary"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true">
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="9dp"
                android:textStyle="bold"
                android:textColor="@color/color_bricks_primary_white"
                android:id="@+id/project_brand_info_btn_des_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="@string/iconfont_jiarujiahao24"/>
            <com.alibaba.pictures.bricks.view.PuHuiTiTextView
                android:textSize="12dp"
                android:textColor="@color/color_bricks_primary_white"
                android:id="@+id/project_brand_info_btn_des"
                android:paddingBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"/>
        </LinearLayout>
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="10dp"
            android:textColor="#ff4886"
            android:gravity="center"
            android:id="@+id/project_brand_info_btn_activity"
            android:background="@drawable/pay_attention_for_gift_pop_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:layout_alignTop="@+id/project_brand_info_btn"
            android:layout_alignRight="@+id/project_brand_info_btn"/>
    </RelativeLayout>
</LinearLayout>
