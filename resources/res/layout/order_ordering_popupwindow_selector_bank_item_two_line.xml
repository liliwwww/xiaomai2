<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/list_selector"
        style="@style/CommonListItemContainerWhite">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="21dp"
            android:textColor="@color/color_tpp_primary_gray_c8"
            android:gravity="center"
            android:id="@+id/bank_selector_item_check"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_selected_no"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/title_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/bank_selector_item_check">
            <com.taobao.movie.android.commonui.widget.SimpleDraweeView
                android:layout_gravity="center_vertical"
                android:id="@+id/bank_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="7dp"/>
            <TextView
                android:textSize="@dimen/padding_15dp"
                android:textColor="@color/color_tpp_primary_main_title"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/bank_selector_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:includeFontPadding="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
        </LinearLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/bank_selector_item_sub_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/bank_selector_item_check"
            android:layout_below="@+id/title_zone"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:id="@+id/bank_selector_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:includeFontPadding="false"
            android:layout_toLeftOf="@+id/bank_selector_item_check"
            android:layout_below="@+id/bank_selector_item_sub_desc"
            android:layout_alignParentLeft="true"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="10dp"
            android:textColor="@color/common_color_1006"
            android:id="@+id/bank_selector_item_reason_icon"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginTop="9dp"
            android:text="@string/iconf_warning"
            android:layout_below="@+id/bank_selector_item_time"/>
        <TextView
            android:textSize="9dp"
            android:textColor="@color/common_color_1006"
            android:id="@+id/bank_selector_item_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/bank_selector_item_reason_icon"
            android:layout_below="@+id/bank_selector_item_time"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_bottom"
        style="@style/ListItemBorderWithMarginDp"/>
</LinearLayout>
