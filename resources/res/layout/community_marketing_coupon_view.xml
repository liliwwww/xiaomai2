<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_marginTop="9dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/marketing_item_container"
        android:padding="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/community_marketing_coupon_bg"
            android:layout_width="48dp"
            android:layout_height="62dp">
            <ImageView
                android:id="@+id/coupon_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:src="@drawable/community_marketing_coupon_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/coupon_daijinquan"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:id="@+id/coupon_price_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:ellipsize="end"
                    android:id="@+id/coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <TextView
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/tpp_primary_red"
                android:id="@+id/coupon_duihuanquan"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/coupon_jianzhiquan"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/tpp_primary_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="减至"
                    android:includeFontPadding="false"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/tpp_primary_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="¥"
                        android:includeFontPadding="false"/>
                    <TextView
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/tpp_primary_red"
                        android:ellipsize="end"
                        android:id="@+id/coupon_jianzhi_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="8dp"
                android:textColor="@color/tpp_primary_red"
                android:gravity="center"
                android:id="@+id/coupon_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp">
            <TextView
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:maxLines="2"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/item_btn"
                android:background="@drawable/common_red_gradient_corner_21"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="领取"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="11dp"
        android:textColor="#9e3c46"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/marketing_empty_tv"
        android:background="@drawable/community_marketing_item_empty_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/community_marketing_coupon_empty"/>
</androidx.cardview.widget.CardView>
