<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll_add"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentTop="true">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12.5dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:gravity="center"
            android:id="@+id/btn_share_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:text="@string/icon_font_add"/>
        <TextView
            android:textSize="@dimen/text_size_13_dp"
            android:textColor="@color/color_tpp_primary_subtitle"
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="添加新券"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <View
        android:id="@+id/view_bottom"
        android:background="@color/color_tpp_primary_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
