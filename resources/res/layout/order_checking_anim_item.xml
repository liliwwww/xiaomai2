<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="#2e333e"
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/order_checking_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="6dp"
        android:text="恭喜您下单成功"
        android:maxLines="3"
        android:layout_weight="1"
        android:layout_below="@+id/order_checking_top_lottie"/>
    <com.alibaba.pictures.bricks.view.SafeLottieAnimationView
        android:layout_gravity="center"
        android:id="@+id/order_checking_top_lottie"
        android:visibility="visible"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="21dp"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/order_check_item_check"/>
</LinearLayout>
