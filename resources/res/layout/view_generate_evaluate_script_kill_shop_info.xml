<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginLeft="@dimen/margin_21dp"
    android:layout_marginRight="@dimen/margin_21dp">
    <cn.damai.uikit.view.DMPosterView
        android:id="@+id/script_share_page_poster"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginLeft="@dimen/margin_21dp"
        android:src="@drawable/uikit_default_image_bg_gradient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/script_share_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/margin_21dp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/script_share_page_poster"
        android:layout_alignTop="@+id/script_share_page_poster"
        android:layout_alignParentRight="true"
        android:lineSpacingExtra="6dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/script_share_page_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_21dp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/script_share_page_poster"
        android:layout_below="@+id/script_share_page_title"/>
</merge>
