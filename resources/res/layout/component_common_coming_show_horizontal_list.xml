<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/onearch_white_corner_6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alient.onearch.adapter.widget.RoundRadiusImageView
        android:id="@+id/list_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:r_round_radius="6dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/title"
            android:layout_width="240dp"
            android:layout_height="15dp"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingTop="@dimen/resource_size_5"
            android:paddingBottom="@dimen/resource_size_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/resource_size_28"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="@dimen/font_Subhead2_R"
                android:textColor="@color/title_right_btn_text_color"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/more_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:maxLines="1"/>
            <com.alibaba.pictures.bricks.view.BricksIconFontTextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/title_right_btn_text_color"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/more_arrow"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/resource_size_1"
                android:text="@string/iconfont_youjiantou12"/>
        </LinearLayout>
    </RelativeLayout>
    <com.alient.onearch.adapter.widget.pager.SnapHorizontalListView
        android:id="@+id/snap_horizontal_list"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:layout_below="@+id/title_lay"
        android:overScrollMode="never"
        app:snapGravity="start"/>
</RelativeLayout>
