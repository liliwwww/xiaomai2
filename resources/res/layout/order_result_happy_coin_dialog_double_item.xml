<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/happy_coin_icon"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/happy_coin_right"
            android:background="@drawable/happy_coin_right"
            android:visibility="invisible"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="26dp"/>
        <View
            android:id="@+id/happy_coin_double_icon"
            android:background="@drawable/happy_coin_double"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_marginLeft="34dp"/>
    </RelativeLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_tpp_primary_assist"
        android:layout_gravity="center_horizontal"
        android:id="@+id/happy_coin_double_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"/>
</FrameLayout>
