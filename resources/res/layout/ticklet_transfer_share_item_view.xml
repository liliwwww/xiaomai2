<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/ticklet_online_tip"
        android:layout_width="52dp"
        android:layout_height="21dp"
        android:src="@drawable/ticklet_transfer_share_online_tip_icon"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        style="@style/ticklet_666666_12dp"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="48dp"
        android:gravity="center"
        android:id="@+id/transfer_share_channer_icon"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18dp"
        android:text="@string/iconfont_weixin"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/ticklet_tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_below="@+id/transfer_share_channer_icon"
        android:layout_centerHorizontal="true"
        style="@style/ticklet_999999_12dp"/>
</merge>
