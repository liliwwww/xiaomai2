<?xml version="1.0" encoding="utf-8"?>
<com.alibaba.pictures.bricks.view.TopRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="bottom"
        android:id="@+id/filter_view_title"
        android:background="@color/white"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"/>
    <FrameLayout
        android:id="@+id/filter_horizontal_calendar_layout"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_horizontal_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="41dp"/>
        <FrameLayout
            android:layout_gravity="end"
            android:id="@+id/filter_horizontal_calendar_btn_layout"
            android:background="@drawable/bricks_calendar_show_btn_bg"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="9dp"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/filter_horizontal_main_block"
        android:background="@drawable/copy_filter_panel_gradient_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/filter_horizontal_base_filter_block"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <com.google.android.flexbox.FlexboxLayout
                android:orientation="horizontal"
                android:id="@+id/filter_btn_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:alignItems="center"
                app:flexWrap="nowrap"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_fast_filter_list"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
    </LinearLayout>
</com.alibaba.pictures.bricks.view.TopRoundLinearLayout>
