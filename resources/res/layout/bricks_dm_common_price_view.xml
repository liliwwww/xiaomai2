<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:id="@+id/bricks_dm_common_price_block"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="@color/color_price_font"
        android:id="@+id/bricks_dm_common_price_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="0dp"
        android:text="¥"
        android:singleLine="true"
        android:includeFontPadding="false"/>
    <com.alibaba.pictures.bricks.view.DigitTextView
        android:textSize="16dp"
        android:textColor="@color/color_price_font"
        android:id="@+id/bricks_dm_common_price_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:singleLine="true"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/color_bricks_primary_assist"
        android:id="@+id/bricks_dm_common_price_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="0.5dp"
        android:text="起"
        android:includeFontPadding="false"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/color_bricks_primary_red"
        android:gravity="center"
        android:id="@+id/bricks_dm_common_price_unknown"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp"
        android:text="价格待定"
        android:includeFontPadding="false"/>
</merge>
