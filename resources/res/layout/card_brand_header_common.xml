<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/brand_header_bg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@color/white"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/brand_header_bg_1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/brand_header_bg_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/brand_header_bg_cover"
        android:background="#99000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <View
        android:id="@+id/brand_header_bottombg"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_below="@+id/brand_header_bg"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:id="@+id/brand_header_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="54dp"
        android:text="@string/iconfont_zuojiantou_"
        android:maxLines="1"
        android:layout_alignParentLeft="true"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/brand_header_share"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginRight="21dp"
        android:text="@string/iconfont_fenxiang24"
        android:layout_alignParentRight="true"/>
    <cn.damai.commonbusiness.view.DmViewPager
        android:id="@+id/brand_header_viewpager"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_marginTop="114dp"
        android:layout_alignParentTop="true"/>
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/brand_header_indicator"
        android:background="@drawable/bg_indicator_white_25"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/brand_header_viewpager"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/brand_index_headerbg_shadow"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="316dp"
        android:layout_marginRight="6dp">
        <RelativeLayout
            android:id="@+id/brand_index_headerbg"
            android:background="@drawable/bg_corner_12_1a000000"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true">
            <FrameLayout
                android:id="@+id/brand_header_img_shadow"
                android:padding="6dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"/>
            <cn.damai.uikit.banner.sub.RoundRadiusImageView
                android:id="@+id/brand_header_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                app:r_round_radius="25dp"
                app:r_stroke_color="#1a000000"
                app:r_stroke_width="0.5dp"/>
            <TextView
                android:textSize="16dp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/brand_header_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="18dp"
                android:maxWidth="170dp"
                android:minHeight="22dp"
                android:text="一个姓名一个姓名一个姓名"
                android:maxLines="2"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/iv_brand_tagimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/brand_icon"
                android:layout_below="@+id/brand_header_tv_name"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#999999"
                android:id="@+id/brand_header_tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="0个粉丝"
                android:maxLines="1"
                android:layout_toRightOf="@+id/iv_brand_tagimg"
                android:layout_below="@+id/brand_header_tv_name"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="14dp"
                android:textColor="#739c9ca5"
                android:id="@+id/tv_fans_icon_tip"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="@string/iconfont_tixingxian_"
                android:layout_toRightOf="@+id/brand_header_tv_fans"
                android:layout_below="@+id/brand_header_tv_name"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_9c9ca5"
                android:id="@+id/brand_header_tv_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="12dp"
                android:text="爆款制造机"
                android:maxLines="1"
                android:layout_below="@+id/iv_brand_tagimg"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brand_header_couponview"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/brand_header_tv_desc2"/>
            <cn.damai.commonbusiness.view.AttentionView
                android:id="@+id/attent_view_brand"
                android:layout_width="57dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:attention_backgroud="@drawable/bg_common_follow_gray"
                app:attention_textColor="@color/color_999999"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
