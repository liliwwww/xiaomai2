<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tourism_spots_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp">
    <com.alibaba.pictures.bricks.view.RoundImageView
        android:id="@+id/tourism_spots_icon"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:scaleType="centerCrop"
        app:borderRadius="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type="radial"/>
    <com.alibaba.pictures.bricks.view.PuHuiTiTextView
        android:textSize="9dp"
        android:textColor="@color/white"
        android:id="@+id/tourism_spots_tag"
        android:background="@drawable/tourism_spots_tag_bg"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:layout_marginStart="3dp"
        app:layout_constraintLeft_toLeftOf="@+id/tourism_spots_icon"
        app:layout_constraintTop_toTopOf="@+id/tourism_spots_icon"/>
    <com.alibaba.pictures.bricks.view.FakeBoldTextView
        android:textSize="12dp"
        android:textColor="@color/bricks_2e333e"
        android:ellipsize="end"
        android:id="@+id/tourism_spots_name"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:lines="2"
        android:includeFontPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tourism_spots_icon"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/tourism_spots_price_root_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tourism_spots_name">
        <com.alibaba.pictures.bricks.view.DMCommonPriceView
            android:gravity="center_vertical"
            android:id="@+id/tourism_spots_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.alibaba.pictures.bricks.view.FlowLayout
            android:id="@+id/tourism_spots_price_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1.5dp"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
