<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/ticklet_solid_white_corner_4_storke_gray"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="@dimen/margin_9dp">
    <TextView
        android:textSize="@dimen/margin_14dp"
        android:textColor="@color/color_ff2d79"
        android:id="@+id/ticket_souvenir_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_12"
        android:layout_weight="1"/>
    <TextView
        android:textSize="@dimen/margin_12dp"
        android:textColor="@color/color_999999"
        android:id="@+id/ticket_souvenir_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_12"/>
    <cn.damai.uikit.iconfont.DMIconFontTextView
        android:textSize="12dp"
        android:textColor="@color/color_111111"
        android:id="@+id/ticket_souvenir_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_12"
        android:text="@string/iconfont_youjiantou24"/>
</LinearLayout>
