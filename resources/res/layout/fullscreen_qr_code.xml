<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.taobao.movie.android.commonui.widget.SimpleDraweeView
        android:id="@+id/qr_code"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:actualImageScaleType="center"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/bar_code_content"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="90">
        <ImageView
            android:id="@+id/bar_code"
            android:layout_width="match_parent"
            android:layout_height="125dp"/>
        <com.taobao.movie.android.commonui.widget.autofixtext.AutofitTextView
            android:textSize="40dp"
            android:textColor="@color/common_text_color10"
            android:gravity="center"
            android:id="@+id/bar_code_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:lines="1"/>
    </LinearLayout>
</LinearLayout>
