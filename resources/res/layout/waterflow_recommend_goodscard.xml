<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <cn.damai.baseview.RCRelativeLayoutView
        android:id="@+id/recommend_goods_layout"
        android:background="@drawable/recommend_goods_border"
        android:padding="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:round_corner="6dp">
        <cn.damai.uikit.view.DMPosterView
            android:id="@+id/recommend_goods_card"
            android:layout_width="match_parent"
            android:layout_height="214dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/water_flow_goods_content_bg"
            android:paddingBottom="@dimen/margin_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommend_goods_card">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/recommend_goods_content_shdow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:ellipsize="end"
                        android:id="@+id/recommend_goods_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="12dp"
                        android:maxLines="2"
                        android:lineSpacingExtra="3dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#9c9ca5"
                        android:ellipsize="end"
                        android:id="@+id/recommend_goods_time"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="12dp"
                        android:maxLines="1"
                        android:minLines="1"/>
                    <include
                        android:id="@+id/recommend_goods_price_layout"
                        android:visibility="gone"
                        layout="@layout/waterflow_recommend_goods_price"/>
                    <cn.damai.uikit.tag.DMCommonTagView
                        android:id="@+id/recommend_goodscard_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12dp"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </cn.damai.baseview.RCRelativeLayoutView>
</FrameLayout>
