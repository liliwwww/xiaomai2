<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp">
    <com.alibaba.pictures.bricks.home.DMHomeWaterFlowTabLayout
        android:id="@+id/component_tab_layout"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabGravity="start"
        app:tabMinWidth="@dimen/resource_size_25"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        style="@style/HomeFeedTabStyle"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/action_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="#323232"
            android:gravity="center"
            android:id="@+id/action_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textSize="@dimen/default_tab_btn_text"
            android:textColor="#323232"
            android:gravity="center"
            android:id="@+id/action_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"/>
        <com.alibaba.pictures.bricks.view.BricksHWRatioLayout
            android:textSize="@dimen/resource_size_12"
            android:textColor="#323232"
            android:layout_gravity="center_vertical"
            android:id="@+id/right_arrow"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconfont_youjiantou12"/>
    </LinearLayout>
</RelativeLayout>
