<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_pioneer_cinema_venue_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/one_arch_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.7"
        app:srlEnableNestedScrolling="false"
        app:srlHeaderMaxDragRate="2"
        app:srlHeaderTriggerRate="1">
        <androidx.cardview.widget.CardView
            android:id="@+id/refresh_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/resource_size_0">
            <RelativeLayout
                android:orientation="vertical"
                android:background="@color/color_pioneer_cinema_venue_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/page_top_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@drawable/pioneer_live_top_bg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>
                    <View
                        android:background="@drawable/pioneer_live_top_bg"
                        android:layout_width="match_parent"
                        android:layout_height="138dp"/>
                </LinearLayout>
                <cn.damai.pioneer.component.tab.ParentRecyclerView
                    android:id="@+id/one_arch_recyclerView"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-0.5dp"
                    android:overScrollMode="never"/>
                <FrameLayout
                    android:id="@+id/page_top_slide_up_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.alibaba.pictures.moimage.MoImageView
                        android:id="@+id/page_top_slide_up_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_pioneer_home_guide_bar_bg"
                        android:scaleType="fitXY"
                        app:roundTopLeft="true"
                        app:roundTopRight="true"
                        app:roundedCornerRadius="@dimen/resource_size_24"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/home_page_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/sticky_status_bar_space_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:elevation="1dp">
                    <com.alibaba.pictures.moimage.MoImageView
                        android:id="@+id/sticky_status_bar_space"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/bg_pioneer_home_guide_bar_bg"
                        android:scaleType="fitXY"/>
                </FrameLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <ViewStub
        android:id="@+id/live_location_tip"
        android:layout="@layout/item_pioneer_live_location_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-5dp"/>
</FrameLayout>
