<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alibaba.pictures.bricks.view.CornerFrameLayout
        android:id="@+id/id_bricks_banner_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:clip_corner_radius="12dp">
        <com.alibaba.pictures.bricks.view.NestedBanner
            android:layout_gravity="center_horizontal"
            android:id="@+id/id_bricks_nested_banner_view"
            android:layout_width="match_parent"
            android:layout_height="155dp"/>
        <com.alibaba.pictures.bricks.view.NestedBannerIndicatorView
            android:layout_gravity="bottom"
            android:id="@+id/id_bricks_banner_indicator_view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="5dp"/>
    </com.alibaba.pictures.bricks.view.CornerFrameLayout>
</FrameLayout>
