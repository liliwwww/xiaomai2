<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="115dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.damai.tetris.component.home.widget.banner.sub.RoundRadiusImageView
            android:id="@+id/artificial_img_1"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:scaleType="centerCrop"
            app:r_round_radius="6dp"
            app:r_stroke_color="#1a000000"
            app:r_stroke_width="2px"/>
        <ImageView
            android:id="@+id/artificial_video_tag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/feed_video_icon"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:id="@+id/artificial_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lines="2"
        android:lineSpacingExtra="5dp"/>
</LinearLayout>
