<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/homepage_title_bar"
    android:background="@color/color_white"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/homepage_title_subll"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/homepage_title_select_city_layout"
            android:paddingLeft="21dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/homepage_title_select_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:includeFontPadding="false"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="12dp"
                android:textColor="@color/color_3c3f44"
                android:layout_gravity="center_vertical"
                android:id="@+id/homepage_title_select_city_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iconfont_shaixuanxia12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/homepage_title_search_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="16dp"
                android:textColor="@color/color_000000"
                android:layout_gravity="center_vertical"
                android:id="@+id/homepage_title_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="@string/iconfont_sousuo_"/>
            <TextView
                android:textSize="13dp"
                android:textColor="#9c9ca5"
                android:gravity="center_vertical"
                android:id="@+id/homepage_title_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:maxLines="1"
                android:layout_weight="1"/>
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="18dp"
                android:textColor="#663c3f44"
                android:gravity="center_vertical"
                android:id="@+id/homepage_title_scan"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_saoma_"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/homepage_title_message_layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="22dp"
                android:textColor="@color/color_3c3f44"
                android:gravity="center_vertical"
                android:id="@+id/homepage_title_message"
                android:paddingLeft="12dp"
                android:paddingTop="3dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/iconfont_xiaoxi_"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/homepage_title_message_tip_point"
                android:background="@drawable/homepage_message_tip_bg"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="6dp"/>
        </FrameLayout>
        <cn.damai.uikit.tag.DMCertInfoTagView
            android:layout_gravity="center_vertical"
            android:id="@+id/homepage_title_cert_info"
            android:layout_width="31dp"
            android:layout_height="@dimen/margin_29dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/homepage_search_hot_keyword_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"/>
</LinearLayout>
