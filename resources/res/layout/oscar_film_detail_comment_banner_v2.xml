<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="@dimen/dim_7"
    android:paddingTop="12.5dp"
    android:paddingRight="@dimen/dim_7"
    android:layout_width="match_parent"
    android:layout_height="60.5dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_comment_banner"
        android:background="@drawable/film_detail_comment_banner_bg_v2"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="6dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/comment_banner_left_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/dim_5"
            android:layout_marginBottom="6.5dp"
            android:src="@drawable/film_detail_comment_banner_left"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.5dp"
            android:layout_marginRight="80dp">
            <TextView
                android:textSize="@dimen/font_Subhead1_R"
                android:textColor="@color/cg_1"
                android:ellipsize="end"
                android:id="@+id/comment_banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_3"
                android:maxLines="1"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="@dimen/font_Footnote1_R"
                android:textColor="@color/cg_3"
                android:ellipsize="end"
                android:id="@+id/comment_banner_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="@dimen/dim_3"
                android:maxLines="1"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_gravity="end"
        android:id="@+id/comment_banner_right_img"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:roundBottomLeft="false"
        app:roundBottomRight="true"
        app:roundTopLeft="false"
        app:roundTopRight="true"
        app:roundedCornerRadius="24dp"/>
    <com.alibaba.pictures.moimage.MoImageView
        android:layout_gravity="end"
        android:background="@drawable/film_detail_comment_banner_right_picture_bg_v2"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:roundBottomLeft="false"
        app:roundBottomRight="true"
        app:roundTopLeft="false"
        app:roundTopRight="true"
        app:roundedCornerRadius="24dp"/>
</FrameLayout>
