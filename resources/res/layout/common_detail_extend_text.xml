<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:riv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:paddingLeft="@dimen/default_component_margin_rl"
    android:paddingRight="@dimen/default_component_margin_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/common_exptext_title"
        android:paddingTop="@dimen/default_component_title_margintop"
        android:paddingBottom="@dimen/default_component_content_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剧情介绍"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/color_666666"
        android:ellipsize="end"
        android:id="@+id/common_exptext_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="4"
        android:lineSpacingExtra="10dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#30aeff"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/common_exptext_btn"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="展开"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
