<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/id_time_line_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp">
        <View
            android:id="@+id/time_line_top"
            android:background="@drawable/bg_time_line_top"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/time_line_middle"
            android:background="@drawable/bg_time_circle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"/>
        <View
            android:id="@+id/time_line_bottom"
            android:background="@drawable/bg_time_line_bottom"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_ffffff"
        android:gravity="center"
        android:id="@+id/time_line_top_tag"
        android:background="@drawable/bg_border_note_timeline_top"
        android:visibility="gone"
        android:layout_width="38dp"
        android:layout_height="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:text="@string/time_line_top"/>
    <cn.damai.uikit.number.DMDigitTextView
        android:textSize="14dp"
        android:textColor="@color/color_333333"
        android:ellipsize="end"
        android:id="@+id/time_line_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:lines="1"/>
</LinearLayout>
