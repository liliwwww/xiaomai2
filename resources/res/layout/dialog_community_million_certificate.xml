<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/layout_content"
        android:layout_width="315dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="@color/color_tpp_primary_main_title"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/layout_certificate"
            android:background="@drawable/bg_million_certificate"
            android:layout_width="273dp"
            android:layout_height="329dp">
            <com.alibaba.pictures.moimage.MoImageView
                android:id="@+id/iv_icon"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginTop="18dp"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/color_tpp_primary_main_title"
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_tpp_primary_assist"
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"/>
            <ImageView
                android:layout_width="219dp"
                android:layout_height="7dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/community_million_certificate_divider"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/iv_mark"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/community_million_certificate_text"
                    android:ellipsize="end"
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:maxWidth="160dp"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"/>
                <com.alibaba.pictures.moimage.MoImageView
                    android:id="@+id/iv_label"
                    android:layout_width="45dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:layout_toRightOf="@+id/tv_nickname"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/community_million_certificate_text"
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/tv_nickname"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/community_million_certificate_text"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:layout_below="@+id/tv_number"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="57dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/img_million_certification_logo"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/tv_time"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp">
            <TextView
                android:textColor="@color/tpp_primary_red"
                android:gravity="center"
                android:id="@+id/btn_save"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:text="@string/community_million_certificate_save"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_share"
                android:layout_width="154dp"
                android:layout_height="36dp"
                android:layout_marginLeft="9dp"
                android:text="@string/community_million_certificate_share"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_egg"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_egg_icon"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_million_certificate_egg"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/color_tpp_primary_main_title"
                    android:id="@+id/tv_egg_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.taobao.movie.android.commonui.widget.IconFontTextView
                    android:textSize="12dp"
                    android:textColor="@color/color_tpp_primary_assist"
                    android:id="@+id/tv_egg_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.taobao.movie.android.commonui.widget.IconFontTextView
        android:textSize="40dp"
        android:textColor="@color/tpp_gray_4"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/icon_font_close"/>
</LinearLayout>
