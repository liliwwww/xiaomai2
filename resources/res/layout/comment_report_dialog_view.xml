<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/common_text_color9"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:text="选择举报原因"
        android:includeFontPadding="false"/>
    <View
        android:background="@color/common_divider_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line_height"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/common_text_color10"
                android:gravity="center"
                android:id="@+id/item1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="广告、抄袭或垃圾信息"
                android:includeFontPadding="false"/>
            <View
                android:background="@color/common_divider_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_line_height"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/common_text_color10"
                android:gravity="center"
                android:id="@+id/item2"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="人身攻击、恶意言论"
                android:includeFontPadding="false"/>
            <View
                android:background="@color/common_divider_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_line_height"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/common_text_color10"
                android:gravity="center"
                android:id="@+id/item3"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="违反法律法规"
                android:includeFontPadding="false"/>
            <View
                android:background="@color/common_divider_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_line_height"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/common_text_color10"
                android:gravity="center"
                android:id="@+id/item4"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="色情、淫秽或低俗内容"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:background="@color/color_tpp_primary_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:textSize="15dp"
        android:textColor="@color/common_text_color10"
        android:gravity="center"
        android:id="@+id/cancel"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:includeFontPadding="false"/>
</LinearLayout>
