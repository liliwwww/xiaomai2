<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.taobao.movie.android.commonui.widget.MIconfontTextView
        android:textSize="12dp"
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="4dp"
        android:text="@string/iconf_add"
        app:layout_flexShrink="0"/>
    <com.taobao.movie.android.commonui.widget.HeadEllipsisLinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:ellipsize="end"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            app:layout_flexShrink="1"/>
        <View
            android:id="@+id/divider"
            android:background="@color/common_blue_color"
            android:visibility="gone"
            android:layout_width="1px"
            android:layout_height="15dp"
            app:layout_flexShrink="0"/>
        <com.taobao.movie.android.commonui.widget.MIconfontTextView
            android:textSize="9dp"
            android:id="@+id/close_btn"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_community_close"
            app:layout_flexShrink="0"/>
    </com.taobao.movie.android.commonui.widget.HeadEllipsisLinearLayout>
</merge>
