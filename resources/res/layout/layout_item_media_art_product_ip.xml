<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_top_container"
        android:background="@color/color_bricks_primary_40_black"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/iv_artist_avatar"
            android:layout_width="@dimen/resource_size_33"
            android:layout_height="@dimen/resource_size_33"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_3dp"
            android:layout_alignParentStart="true"
            app:failureImage="@drawable/bricks_uikit_default_image_bg_gradient_round"
            app:placeholderImage="@drawable/bricks_uikit_default_image_bg_gradient_round"
            app:roundAsCircle="true"/>
        <com.alibaba.pictures.moimage.MoImageView
            android:id="@+id/iv_ip_item_avatar"
            android:layout_width="@dimen/resource_size_33"
            android:layout_height="@dimen/resource_size_45"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_3dp"
            android:layout_alignParentStart="true"
            app:failureImage="@drawable/bricks_uikit_default_image_bg_gradient_radius3"
            app:placeholderImage="@drawable/bricks_uikit_default_image_bg_gradient_radius3"
            app:roundedCornerRadius="3dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_middle_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="80dp">
            <TextView
                android:textSize="@dimen/resource_size_14"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                app:alignItems="center"
                app:flexDirection="row">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/ll_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_flexShrink="0">
                    <com.alibaba.pictures.bricks.view.DigitTextView
                        android:textSize="@dimen/resource_size_14"
                        android:textColor="@color/bricks_FF2869"
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                    <TextView
                        android:textSize="@dimen/textsize_12"
                        android:textColor="@color/bricks_FF2869"
                        android:id="@+id/tv_price_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/resource_size_11"
                    android:textColor="@color/color_bricks_primary_80_white"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxEms="4"
                    android:layout_marginStart="@dimen/margin_10dp"
                    app:layout_flexShrink="0"/>
                <View
                    android:id="@+id/divider_item_vertical"
                    android:background="@color/color_bricks_primary_30_white"
                    android:layout_width="1dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    app:layout_flexShrink="0"/>
                <TextView
                    android:textSize="@dimen/resource_size_11"
                    android:textColor="@color/color_bricks_primary_80_white"
                    android:ellipsize="end"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:layout_flexGrow="1"/>
            </com.google.android.flexbox.FlexboxLayout>
            <TextView
                android:textSize="@dimen/resource_size_12"
                android:textColor="@color/mask_white_80"
                android:ellipsize="end"
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/resource_size_11"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@+id/tv_action"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxEms="5"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_6dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.alibaba.pictures.bricks.view.FlowLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/flow_city"
        android:background="@color/color_bricks_primary_50_black"
        android:layout_width="match_parent"
        android:layout_height="36dp"/>
</LinearLayout>
