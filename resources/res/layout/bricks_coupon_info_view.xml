<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bricks_shape_rect_corners_6_solid_ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.alibaba.pictures.bricks.view.FakeBoldTextView
            android:textSize="16dp"
            android:textColor="@color/bricks_333333"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="订单信息"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/bricks_4D4D56"
                    android:id="@+id/id_bricks_ci_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="12dp"/>
            </LinearLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/bricks_30AEFF"
                android:id="@+id/id_bricks_ci_copy"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
