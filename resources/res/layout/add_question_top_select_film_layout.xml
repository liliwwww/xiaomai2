<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/add_question_choose_film_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="18dp"
            android:textColor="#349cec"
            android:id="@+id/add_relative_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iconf_film_add_icon"/>
        <TextView
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#349cec"
            android:id="@+id/add_relative_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加相关影片"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12dp"
            android:textColor="#349cec"
            android:id="@+id/add_relative_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_font_right_small"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_question_film_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/has_select_film_layout"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="90dp"
        android:layout_centerVertical="true">
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12dp"
            android:textColor="#349cec"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/icon_font_film_icon"/>
        <TextView
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#349cec"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_tips_title"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/reselect_film_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true">
        <TextView
            android:textSize="13dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新选择"/>
        <com.taobao.movie.android.commonui.widget.IconFontTextView
            android:textSize="12dp"
            android:textColor="@color/color_tpp_primary_assist"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.5dp"
            android:text="@string/icon_font_right_small"/>
    </LinearLayout>
    <View
        android:background="@color/tpp_gray_6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
