<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.damai.issue.view.DMLinearLayoutIssue
        android:orientation="vertical"
        android:id="@+id/issue_window_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/issue_title_layout"
            android:background="@color/color_ffffff"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true">
            <cn.damai.uikit.iconfont.DMIconFontTextView
                android:textSize="@dimen/margin_20dp"
                android:textColor="@color/color_000000"
                android:gravity="center"
                android:id="@+id/issue_title_cancel"
                android:paddingLeft="@dimen/margin_21dp"
                android:paddingRight="@dimen/margin_3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/iconfont_Daohangguanbi18"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/margin_16dp"
                android:textColor="@color/color_000000"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/issue_title_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="75dp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/issue_title_cancel"/>
            <TextView
                android:textSize="@dimen/margin_12dp"
                android:textColor="@color/color_FF993A"
                android:gravity="center"
                android:id="@+id/issue_title_teach_good_evaluate"
                android:background="@drawable/comment_top_tip_btn"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/margin_21dp"
                android:text="想被精选么？点我"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <cn.damai.uikit.view.MyScrollView
            android:id="@+id/issue_scrollview"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/color_000000"
                    android:id="@+id/issue_associated_project_tip"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_21dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="@dimen/margin_21dp"
                    android:text="关联项目"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/issue_evaluate_associated_project"
                    android:background="@drawable/issue_rend_tags_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginLeft="@dimen/margin_21dp"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginRight="@dimen/margin_21dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/issue_associated_project_tip">
                    <cn.damai.uikit.banner.sub.RoundRadiusImageView
                        android:id="@+id/issue_associated_project_image"
                        android:visibility="gone"
                        android:layout_width="32dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="@dimen/margin_12dp"
                        android:layout_marginRight="@dimen/margin_12dp"
                        android:src="@drawable/uikit_default_image_bg_grey"
                        android:scaleType="fitXY"
                        android:layout_centerVertical="true"
                        app:r_round_radius="6dp"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/color_111111"
                        android:ellipsize="end"
                        android:id="@+id/issue_associated_project_name"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_26dp"
                        android:text="【北京站】中国平安《不止是我自己》反反复复"
                        android:maxLines="1"
                        android:layout_toRightOf="@+id/issue_associated_project_image"
                        android:layout_alignTop="@+id/issue_associated_project_image"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#9c9ca5"
                        android:ellipsize="end"
                        android:id="@+id/issue_associated_project_time_address"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_26dp"
                        android:text="北京 | 2018.11.29 | 北京工人体育馆"
                        android:maxLines="1"
                        android:layout_toRightOf="@+id/issue_associated_project_image"
                        android:layout_below="@+id/issue_associated_project_name"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#9c9ca5"
                        android:id="@+id/issue_associated_tip_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_12dp"
                        android:text="请选择要关联的项目"
                        android:layout_centerVertical="true"/>
                    <cn.damai.uikit.iconfont.DMIconFontTextView
                        android:textSize="@dimen/margin_9dp"
                        android:textColor="#3c3f44"
                        android:id="@+id/issue_associated_icon_arrow"
                        android:paddingTop="@dimen/margin_1dp"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_12dp"
                        android:text="@string/iconfont_youjiantou24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:id="@+id/issue_evaluate_associated_holder"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/issue_evaluate_associated_project"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/issue_full_star_lottie"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="88dp"
                    android:layout_marginTop="@dimen/margin_3dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/issue_evaluate_layout"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/lottie_issue_star"/>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/issue_evaluate_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_21dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_21dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/issue_evaluate_associated_holder">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/color_111111"
                        android:id="@+id/issue_evaluate_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_13dp"
                        android:layout_marginRight="@dimen/margin_9dp"
                        android:maxWidth="64dp"
                        android:text="@string/evaluate_main_tip"
                        android:lines="1"
                        android:layout_alignParentTop="true"/>
                    <cn.damai.uikit.view.DMRatingBar
                        android:id="@+id/issue_evaluate_grade_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_toRightOf="@+id/issue_evaluate_tip"
                        android:layout_alignParentTop="true"
                        app:isIndicator="false"
                        app:showText="false"
                        app:starCount="5"
                        app:starDistance="9dp"
                        app:starEmpty="@drawable/rating_empty"
                        app:starFill="@drawable/rating_fill"
                        app:starSize="24dp"
                        app:tipMark="true"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#ff8f3f"
                        android:id="@+id/issue_comment_grade_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_21dp"
                        android:layout_marginTop="@dimen/margin_13dp"
                        android:layout_toRightOf="@+id/issue_evaluate_grade_view"
                        android:layout_alignParentTop="true"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/issue_subitem_evaluate_layout"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/issue_evaluate_grade_view"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/color_000000"
                        android:id="@+id/issue_grade_tip"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20dp"
                        android:lines="1"
                        android:layout_below="@+id/issue_subitem_evaluate_layout"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/issue_edit_evaluate_layout"
                    android:background="@drawable/issue_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_21dp"
                    android:layout_marginTop="@dimen/margin_21dp"
                    android:layout_marginRight="@dimen/margin_21dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/issue_evaluate_layout">
                    <EditText
                        android:textSize="14dp"
                        android:textColor="@color/color_000000"
                        android:textColorHint="@color/color_9C9CA5"
                        android:gravity="top|left"
                        android:id="@+id/issue_editor"
                        android:background="@null"
                        android:paddingLeft="@dimen/margin_12dp"
                        android:paddingTop="@dimen/margin_12dp"
                        android:paddingRight="@dimen/margin_12dp"
                        android:paddingBottom="100dp"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="251dp"
                        android:layout_alignParentTop="true"
                        android:lineSpacingExtra="@dimen/margin_6dp"
                        android:textCursorDrawable="@drawable/cursor_color"/>
                    <View
                        android:id="@+id/issue_editor_holder"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignBottom="@+id/issue_editor"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/color_9C9CA5"
                        android:id="@+id/issue_editor_limit"
                        android:paddingLeft="@dimen/margin_12dp"
                        android:paddingRight="@dimen/margin_12dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_alignTop="@+id/issue_editor_holder"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#9c9ca5"
                        android:id="@+id/issue_evaluate_gift"
                        android:paddingLeft="@dimen/margin_12dp"
                        android:paddingRight="@dimen/margin_12dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_below="@+id/issue_editor_limit"/>
                    <cn.damai.issue.view.DMSortableNinePhotoLayout
                        android:id="@+id/issue_show_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="@dimen/margin_10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@+id/issue_evaluate_gift"/>
                </RelativeLayout>
                <cn.damai.issue.view.CorrelationView
                    android:id="@+id/correlation_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/issue_edit_evaluate_layout"/>
                <cn.damai.comment.view.PublishDMSelectView
                    android:id="@+id/issue_dm_select"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_21dp"
                    app:layout_constraintTop_toBottomOf="@+id/correlation_view"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_theme_tip_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="@dimen/margin_21dp"
                    android:layout_marginEnd="@dimen/margin_21dp"
                    app:layout_constraintTop_toBottomOf="@+id/issue_dm_select">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/color_000000"
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="关联话题"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/issue_theme_tip_icon"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_theme_tip_content"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/color_9C9CA5"
                        android:id="@+id/tv_theme_tip_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <View
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_circle_tip_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="@dimen/margin_21dp"
                    android:layout_marginEnd="@dimen/margin_21dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_theme_tip_layout">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/color_000000"
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="关联圈子"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:id="@+id/iv_circle_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/issue_circle_tip_icon"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_circle_tip_content"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/color_9C9CA5"
                        android:id="@+id/tv_circle_tip_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="5dp"
                        android:maxLines="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/iv_circle_screen"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <cn.damai.uikit.iconfont.DMIconFontTextView
                        android:textColor="#5f6672"
                        android:id="@+id/iv_circle_screen"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:text="@string/iconfont_shaixuanxia12"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_circle_tip_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_circle_tip_content"/>
                    <View
                        android:background="#eeeeee"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <cn.damai.issue.view.SpoilerSwitchView
                    android:id="@+id/spoiler_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_circle_tip_layout"/>
                <ImageView
                    android:id="@+id/comment_gift_introduce"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_21dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:layout_marginRight="@dimen/margin_21dp"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:scaleType="fitStart"
                    android:minHeight="50dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spoiler_view"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </cn.damai.uikit.view.MyScrollView>
        <include
            android:id="@+id/issue_submit_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            layout="@layout/issue_submit_bottom_bar"/>
        <cn.damai.comment.view.PublishInputTipsView
            android:id="@+id/publish_input_tips_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>
        <View
            android:id="@+id/holder_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </cn.damai.issue.view.DMLinearLayoutIssue>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/issue_first_entry_guide_anim"
        android:background="#99000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/issue_first_entry_guide_lottie"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="134dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="滑动打分，比点击更带感哦~"/>
    </LinearLayout>
</RelativeLayout>
