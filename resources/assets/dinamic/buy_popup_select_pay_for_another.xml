<?xml version="1.0" encoding="utf-8"?>
<DLinearLayout xmlns:dinamic="http://schemas.android.com/apk/res-auto"
    dinamic:dOrientation="vertical"
    dinamic:dWidth="375ap"
    dinamic:dHeight="match_content"
    dinamic:dBackgroundColor="#ffffff"
    dinamic:dAccessibilityTextHidden="false"
    dinamic:onTap="@handleDinamicXEvent{@const{itemClick}}">
    <DLinearLayout
        dinamic:dOrientation="horizontal"
        dinamic:dWidth="375ap"
        dinamic:dHeight="match_content"
        dinamic:dAccessibilityTextHidden="false">
        <DImageView
            dinamic:dScaleType="centerInside"
            dinamic:dImageUrl="@data{fields.picUrl}"
            dinamic:dMarginLeft="12np"
            dinamic:dMarginRight="8np"
            dinamic:dMarginTop="12np"
            dinamic:dMarginBottom="12np"
            dinamic:dWidth="44np"
            dinamic:dHeight="44np"
            dinamic:dVisibility="@triple{@data{fields.picUrl},&apos;visible&apos;,&apos;gone&apos;}"
            dinamic:dGravity="center"/>
        <DLinearLayout
            dinamic:dOrientation="vertical"
            dinamic:dMarginLeft="12np"
            dinamic:dMarginTop="12np"
            dinamic:dMarginBottom="12np"
            dinamic:dWidth="0np"
            dinamic:dHeight="match_content"
            dinamic:dGravity="leftCenter"
            dinamic:dWeight="1.0">
            <DLinearLayout
                dinamic:dOrientation="horizontal"
                dinamic:dWidth="match_parent"
                dinamic:dHeight="match_content"
                dinamic:dGravity="leftCenter">
                <DTextView
                    dinamic:dText="@data{fields.title}"
                    dinamic:dTextSize="16np"
                    dinamic:dTextColor="#333333"
                    dinamic:dMaxLines="1"
                    dinamic:dLineBreakMode="end"
                    dinamic:dMaxWidth="200ap"
                    dinamic:dWidth="match_content"
                    dinamic:dHeight="match_content"
                    dinamic:dAccessibilityTextHidden="false"
                    dinamic:dFocusable="false"
                    dinamic:dGravity="leftCenter"/>
                <DImageView
                    dinamic:dScaleType="fitCenter"
                    dinamic:dImageUrl="@data{fields.iconUrl}"
                    dinamic:dMarginLeft="8np"
                    dinamic:dWidth="match_content"
                    dinamic:dHeight="14np"
                    dinamic:dVisibility="@triple{@data{fields.iconUrl}, &apos;visible&apos;, &apos;gone&apos;}"
                    dinamic:dGravity="leftCenter"
                    dinamic:onComplete="@imageRefresh{}"/>
            </DLinearLayout>
            <DTextView
                dinamic:dText="@data{fields.subTitle}"
                dinamic:dTextSize="12np"
                dinamic:dTextColor="#999999"
                dinamic:dMaxLines="1"
                dinamic:dLineBreakMode="end"
                dinamic:dMarginTop="10np"
                dinamic:dWidth="match_content"
                dinamic:dHeight="match_content"
                dinamic:dAccessibilityTextHidden="false"
                dinamic:dFocusable="false"
                dinamic:dGravity="leftCenter"/>
        </DLinearLayout>
        <DFrameLayout
            dinamic:dMarginRight="12np"
            dinamic:dWidth="66np"
            dinamic:dHeight="32np"
            dinamic:dAccessibilityTextHidden="false"
            dinamic:dGravity="rightCenter"
            dinamic:dClipTopLeftRadius="16np"
            dinamic:dClipTopRightRadius="16np"
            dinamic:dClipBottomLeftRadius="16np"
            dinamic:dClipBottomRightRadius="16np">
            <DImageView
                dinamic:dScaleType="centerCrop"
                dinamic:dWidth="match_parent"
                dinamic:dHeight="match_parent"
                dinamic:dGravity="center"
                dinamic:dImage="@theme{&apos;gradient&apos;, &apos;gradientThemeColor&apos;, &apos;#FF8000|#FF5000&apos;}"/>
            <DTextView
                dinamic:dText="@data{fields.payTitle}"
                dinamic:dTextSize="12np"
                dinamic:dTextColor="@triple{@eq{@data{status}, &apos;disable&apos;},&apos;#7FFFFFFF&apos;,&apos;#FFFFFF&apos;}"
                dinamic:dTextAlignment="center"
                dinamic:dWidth="match_parent"
                dinamic:dHeight="match_parent"
                dinamic:dAccessibilityText="@data{fields.payTitle}"
                dinamic:dAccessibilityTextHidden="false"
                dinamic:dFocusable="false"
                dinamic:onTap="@handleDinamicXEvent{@const{itemClick}}"
                dinamic:dTextGravity="center"/>
        </DFrameLayout>
    </DLinearLayout>
    <DView
        dinamic:dMarginLeft="12np"
        dinamic:dMarginRight="12np"
        dinamic:dWidth="match_parent"
        dinamic:dHeight="0.5np"
        dinamic:dBackgroundColor="#E7E7E7"
        dinamic:dVisibility="@triple{@data{fields.seperateline}, &apos;visible&apos;, &apos;gone&apos;}"/>
</DLinearLayout>
